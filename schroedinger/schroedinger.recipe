class Schroedinger(AutoPackageRecipe):
    name = 'schroedinger'
    version = '1.0.7'

    buildRequires = ['liboil:devel', 'gtk-doc:runtime', 'libstdc++:devel', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://diracvideo.org/download/schroedinger/')

    def configure(r):
        # gstreamer element is moved to gst-plugins-bad
        r.Configure('--disable-gstreamer')
