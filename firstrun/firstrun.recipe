class Firstrun(PackageRecipe):

    buildRequires = ['chkconfig:runtime', 'newt:python' ]

    name = 'firstrun'
    version = '0.5'

    def setup(r):
        r.addSource('firstrun.init')
        r.addSource('firstrun-user')
        r.addSource('firstrun.sysconfig')
        r.Install('firstrun.init', '%(initdir)s/firstrun')
        r.Install('firstrun.sysconfig', '%(sysconfdir)s/sysconfig/firstrun')
        r.Install('firstrun-user', '%(sbindir)s/firstrun')
        r.Requires('info-wheel:group', '%(sbindir)s/firstrun')
