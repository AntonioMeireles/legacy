class aterm(AutoPackageRecipe) :
        name = 'aterm'
        version = '1.0.0'

        buildRequires = [ 'xorg-x11:devel', 'freetype:devel', 'libjpeg:devel',
                          'libpng:devel', 'libtiff:devel', 'zlib:devel',
                          'perl:runtime', 'afterstep:devel' ]
        def unpack(r):
                r.addArchive('ftp://ftp.afterstep.org/apps/aterm/')
