loadRecipe('python-twisted-package')
loadInstalled('python')
class PythonTwstedWeb(PythonTwistedPackage):

    name = 'python-twisted-web'
    version = '8.1.0'

    docs = [ 'examples', 'howto', 'img' ]

    def init(r):
        r.macros.shortName = 'Web'
        r.macros.Name = 'Twisted'
        r.macros.pyver = Python.majversion
        PythonTwistedPackage.init(r)

    def policy(r):
        r.Move('%(prefix)s/lib/*', '%(libdir)s/')
        r.Requires('python-zopeinterface:python', '%(libdir)s/python%(pyver)s/site-packages/twisted/web/__init__.py')
