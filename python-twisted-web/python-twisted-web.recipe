class pythonWeb(PackageRecipe):
    name = 'python-twisted-web'
    version = '0.5.0'

    def setup(r):
        r.macros.versionmaj = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://tmrc.mit.edu/mirror/twisted/Web/%(versionmaj)s/TwistedWeb-%(version)s.tar.bz2')
        r.Run('python setup.py build')
        r.Run('python setup.py install --root=%(destdir)s') 
