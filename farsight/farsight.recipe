class Farsight(AutoPackageRecipe):

    name = 'farsight'
    version = '0.1.25'

    buildRequires = ['glib:devel', 'gstreamer:devel', 'libxml2:devel', 'pkgconfig:devel', 'zlib:devel']

    def unpack(r):
        r.addArchive('http://farsight.freedesktop.org/releases/%(name)s/')
