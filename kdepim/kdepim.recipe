        'kalarm',
        'kjots',
        'kleopatra',
        'kmail',
        'kmailcvt',
        'knode',
        'knotes',
        'kontact',
        'korganizer',
        'kpilot',
        'kresources',
        'ktimetracker',
        'libkdepim',
        'libkleo',
        'libkpgp',
        'libksieve',
        ('kaddressbook', 'console/kabcclient', 'plugins/ktexteditor'),
        ('kmail', 'ksendemail'),
