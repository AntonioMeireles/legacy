loadSuperClass('rpmpackage')
class Cdecl(RPMPackageRecipe, CPackageRecipe):
    name = 'cdecl'
    version = '2.5'
    rpmRelease = '30'
    distroVersion = '3'

    buildRequires = [ 'bison:runtime', 'flex:runtime', 'libtermcap:devel',
                      'readline:devel', ]

    rpmPatches = [ 'cdecl-2.5.misc.patch', ]

    def setup(r):
        r.unpack()

        r.macros.cflags += ' -DUSE_READLINE'
        r.Make('CFLAGS="%(cflags)s"')

        r.MakeDirs('%(bindir)s', '%(mandir)s/man1')
        r.MakeInstall('BINDIR=%(destdir)s/%(bindir)s '
                      'MANDIR=%(destdir)s/%(mandir)s/man1 install')
