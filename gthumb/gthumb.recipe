loadRecipe('gnomepackage.recipe')
class Gthumb(GnomePackageRecipe):

    name = 'gthumb'
    version = '2.11.2.1'

    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'bison:runtime', 'desktop-file-utils:runtime', 'flex:runtime', 'gnome-keyring:devel', 'gnome-vfs:devel', 'libXtst:devellib', 'libXxf86vm:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libexif:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libjpeg:devel', 'libsoup:devel', 'libtiff:devel', 'libusb:devel', 'popt:devel', 'rarian:runtime', 'rarian:devel', 'unique:devel', 'libgphoto2:devel']

    def policy(r):
        GnomePackageRecipe.policy(r)
        r.SharedLibrary('%(libdir)s/libgthumb.so')

