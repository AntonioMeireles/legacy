loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class GThumb(GnomePackageRecipe):

    buildRequires = [
        'gtk:devel', 'glib:devel', 'nautilus:runtime', 'desktop-file-utils:runtime',
        'libgnomeprint:devel', 'libgnomeprintui:devel', 'libexif:devel',
        'libgnomeui:devel', 'libpng:devel', 'gettext:runtime', 'libgphoto2:devel',
        'libjpeg:devel', 'libtiff:devel', 'libxml2:devel', 'libglade:devel',
        'gnome-vfs:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libbonobo:devel',
        'libbonoboui:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'gnome-keyring:devel',
        'libart_lgpl:devel', 'pango:devel', 'popt:devel'
        ]

    name = 'gthumb'
    version = '2.6.9'

    def setup(r):
        GnomePackageRecipe.setup(r)
        # display the EXIF information side by side with the image instead of having
        # the image on top of the EXIF, which is wasting a lot of space
        r.addPatch("gthumb-imgview-panes.patch", backup = ".panes")
        r.addAction("sed -i 's/gconftool-2 --get-default-source/$GCONF_SCHEMA_INSTALL_SOURCE/g' configure")
