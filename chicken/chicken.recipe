class chicken(CPackageRecipe):

    name = 'chicken'
    version = '2.711'

    def setup(r):
        r.addArchive('http://chicken.wiki.br/dev-snapshots/current/')
        r.Make('PLATFORM=linux')
        r.MakeInstall('PLATFORM=linux')
