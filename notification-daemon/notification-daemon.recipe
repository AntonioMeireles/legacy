class NotificationDaemon(PackageRecipe):
	
   buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus:devel',
	'fontconfig:devel', 'freetype:devel', 'gcc:devel',
	'glib:devel', 'glibc:devel', 'gtk:devel',
	'libpng:devel', 'pango:devel', 'xorg-x11:devel',
	'zlib:devel', 'GConf:devel', 'ORBit2:devel',
	'dbus-glib:devellib', 'libsexy:devel', 'libwnck:devel',
	'libxml2:devel', 'popt:devel' ]

   name = 'notification-daemon'
   version = '0.3.4'
   def setup(r):
	r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
