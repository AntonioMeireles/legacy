class NotificationDaemon(AutoPackageRecipe):
    name = 'notification-daemon'
    version = '0.3.7'

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel',
        'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus-glib:runtime',
        'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel',
        'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime',
        'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libsexy:devel',
        'libwnck:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime',
        'pkgconfig:devel', 'popt:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/')
