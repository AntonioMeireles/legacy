class ClawsMail(AutoPackageRecipe):
    name = 'claws-mail'
    version = '3.7.8'
    buildRequires = [
        'aspell:devel', 'aspell:runtime', 'atk:devel',
        'bison:runtime',
        'cairo:devel', 'curl:devel', 'cyrus-sasl:devel',
        'db:devel', 'dbus:devel', 'dbus-glib:devel',
        'desktop-file-utils:runtime',
        'enchant:devel', 'expat:devel',
        'flex:runtime', 'fontconfig:devel', 'freetype:devel',
        'gettext:runtime', 'glib:devel', 'gnutls:devel', 'gpgme:devel',
        'gtk:devel', 'gtk:runtime',
        'intltool:runtime',
        'krb5:devel',
        'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel',
        'libart_lgpl:devel', 'libetpan:devel', 'libgcrypt:devel', 
        'libgpg-error:devel', 'libpng:devel', 'libxml2:devel',
        'openldap:devel',
        'pango:devel', 'pilot-link:devel', 'pkgconfig:devel',
        'startup-notification:devel',
        'zlib:devel',
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/sylpheed-claws/')
        r.Replace('Categories=GTK;Network;Email;','Categories=Email;Network;','claws-mail.desktop')

    def configure(r):
        r.macros.cppflags = '%(cppflags)s -I%(prefix)s/kerberos/include/'
        r.Configure('--disable-dillo-viewer-plugin')

    def policy(r):
        r.Requires('gnupg:runtime', '%(bindir)s/claws-mail')
