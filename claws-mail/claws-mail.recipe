class ClawsMail(AutoPackageRecipe):
    name = 'claws-mail'
    version = '3.6.1'
    buildRequires = [ 'aspell:devel', 'aspell:runtime', 'atk:devel',
            'bison:runtime', 'cairo:devel', 'cyrus-sasl:devel', 'db:devel',
            'desktop-file-utils:runtime', 'expat:devel', 'flex:runtime',
            'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gpgme:devel',
            'gtk:devel', 'gtk:runtime', 'krb5:devel', 'libICE:devel',
            'libSM:devel', 'libX11:devel', 'libXrender:devel',
            'libart_lgpl:devel', 'libetpan:devel', 'libgpg-error:devel',
            'libpng:devel', 'libxml2:devel', 'openldap:devel', 'openssl:devel',
            'pango:devel', 'pilot-link:devel', 'pkgconfig:devel',
            'startup-notification:devel', 'zlib:devel', 'dbus-glib:devel',
            'dbus:devel', 'gettext:runtime', 'intltool:runtime', 'curl:devel',
            'enchant:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/sylpheed-claws/')
        r.Replace('Categories=GTK;Network;Email;','Categories=Email;Network;','claws-mail.desktop')

    def configure(r):
        r.macros.cppflags = '%(cppflags)s -I%(prefix)s/kerberos/include/'
        r.Configure('--disable-dillo-viewer-plugin')

    def policy(r):
        r.Requires('gnupg:runtime', '%(bindir)s/claws-mail')
