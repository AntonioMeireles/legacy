loadSuperClass('binarypackage')
class Groovewalrus(BinaryPackageRecipe):
    name = 'groovewalrus'
    version = '0.355'
 
    buildRequires = ['binutils:runtime', 'desktop-file-utils:runtime', 'numpy:python', 'python:devel', 'python-simplejson:python', 'wxPython:python']
 
    def unpack(r):
        r.macros.site = 'http://turnip-town.googlecode.com/files'

        dist = [
            ('groovewalrus-0.355_all.deb'),
        ]
        for (deb) in dist:
            r.addArchive('%(site)s/'+deb, dir='/')

        r.Requires('pymedia:python', 'groovewalrus:runtime')
