class Holmes(PackageRecipe):

    buildRequires = [ 'desktop-file-utils:runtime', 'binutils:runtime',
		'gawk:runtime', 'mono:runtime', 'pkgconfig:devel',
		'atk:devel', 'cairo:devel', 'fontconfig:devel',
		'freetype:devel', 'glib:devel', 'glibc:devel',
		'gtk:devel', 'libpng:devel', 'librsvg:devel',
		'pango:devel', 'xorg-x11:devel', 'zlib:devel',
		'evolution-sharp:lib', 'galago-sharp:lib',
		'gecko-sharp:lib', 'gmime:lib', 'gtk-sharp:lib',
		'mono:lib']


    name = 'holmes'
    version = '20060111'
    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
	r.Replace('tango-system-search','system-search','src/search.desktop.in')
        r.Configure()
        r.Make()
        r.MakeInstall()
