class Holmes(PackageRecipe):

    buildRequires = [ 'desktop-file-utils:runtime' ]

    name = 'holmes'
    version = '20051116'
    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
	r.mainDir('holmes')
	r.addSource('holmes.desktop')
	r.addSource('holmes')
	r.Replace('Cairo.dll','Mono.Cairo.dll','src/Makefile*')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.Desktopfile('holmes.desktop')
	r.Install('holmes','%(bindir)s/')
	r.Install('src/Holmes.exe','%(libdir)s/Holmes/')
