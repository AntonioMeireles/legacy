class Pigment(AutoPackageRecipe):
    name = 'pigment'
    version = '0.3.15'
 
    buildRequires = [ 'Mesa:devel', 'PIL:python', 'cairo:devel', 'expat:devel', 'freetype:devel', 'glib:devel', 'gst-plugins-base:devel', 'gst-python:python', 'libX11:devel', 'libXdmcp:devel', 'libXext:devel', 'libXrandr:devel', 'libXrender:devel', 'pkgconfig:devel', 'pygobject:python', 'zlib:devel', 'python:devel', 'pygobject:devel', 'gtk:devel' ]
 
    def unpack(r):
        r.addArchive('http://elisa.fluendo.com/static/download/%(name)s/')
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
