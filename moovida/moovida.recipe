class Moovida(PackageRecipe):
    name = "moovida"
    version = "1.0.7"

    buildRequires = ['python-setuptools:python', 'ConfigObj:python', 'PIL:python', 'avahi:python', 'cElementTree:python', 'dbus-python:python', 'gnome-python-desktop:python', 'gnome-python:python', 'gst-python:python', 'pygobject:python', 'python-sqlite:python', 'python-twisted:python', 'desktop-file-utils:runtime', 'pycairo:python', 'python-ctypes:python', 'python:devel', 'pigment-python:python', 'python-zopeinterface:python', 'coherence:python', 'python:devel']

    def setup (r):
        r.addArchive ('http://www.moovida.com/media/public/')
        r.PythonSetup ()
        r.Symlink ('%(bindir)s/elisa', '%(bindir)s/moovida')
        r.Move('%(libdir)s/python2.6/site-packages/share/*', '%(datadir)s/')
        deps = ['pyOpenSSL','python-cssutils','pigment-python','python-twisted-web2','coherence','python-hashlib','moovida-plugins-good','moovida-plugins-ugly', 'moovida-plugins-bad']
        for dep in deps:
            r.Requires(dep+':python', '%(bindir)s/moovida')
