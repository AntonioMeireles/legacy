class PyOpenGL(PackageRecipe):

    name = 'PyOpenGL'
    version = '3.0.0a6'

    buildRequires = [ 'python-setuptools:python', 'PIL:python', 'python-numeric:python', 'python:tk', 'wxPython:python' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/pyopengl/')
        r.PythonSetup()
