class JPilot(PackageRecipe):
    buildRequires = ['gtk:devel', 'pilot-link:devel' ]
    name = "jpilot"
    version = "0.99.9"

    def setup(r):
        r.addArchive('http://jpilot.org/jpilot-%(version)s.tar.gz',
            keyid='1E5DF2D6')
        r.addPatch('autoconf-hack.patch')

        r.Run('autoconf')
        r.Configure('')
        r.Make()
        r.MakeInstall()
