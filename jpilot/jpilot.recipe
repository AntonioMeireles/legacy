class JPilot(AutoPackageRecipe):

    name = "jpilot"
    version = "0.99.9"

    buildRequires = ['binutils:runtime', 
        'desktop-file-utils:runtime', 
        'expat:devel', 
        'gettext:runtime', 
        'gtk:devel', 
        'make:runtime', 
        'openssl:devel', 
        'perl-XML-Parser:perl', 
        'pilot-link:devel', 
        'pkgconfig:devel', 
        'zlib:devel']

    def unpack(r):
        r.addArchive('http://jpilot.org/jpilot-%(version)s.tar.gz')
