class JPilot(PackageRecipe):
    buildRequires = ['gtk:devel']
    name = "jpilot"
    version = "0.99.8"

    def setup(r):
        r.addArchive('http://jpilot.org/jpilot-%(version)s.tar.gz',
            keyid='1E5DF2D6')

        r.addPatch('patch.jpilot-sync',level=0)
        r.addPatch('patch.0.99.8-memory',level=0)
        r.Configure('--enable-gtk2')
        r.Make()
        r.MakeInstall()
