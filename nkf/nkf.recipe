class Nkf(CPackageRecipe):
    name = 'nkf'
    version = '207'

    buildRequires = []

    def setup(r):
	r.addArchive('http://osdn.dl.sourceforge.jp/%(name)s/20770/'
		'%(name)s%(version)s.tar.gz')
	r.Make()
	r.Install('%(name)s.1','%(mandir)s/man1/%(name)s.1')
	r.Install('%(name)s','%(bindir)s/%(name)s')
