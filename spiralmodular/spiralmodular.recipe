class spiralmodular(PackageRecipe):
    buildRequires = [ 'alsa-lib:devel', 'fltk:devel', 'gcc:devel',
                      'glibc:devel', 'jack:devel', 'libsndfile:devellib',
                      'xorg-x11:devel', 'openoffice.org:runtime' ]

    name = "spiralmodular"
    version = "0.2.2a"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.Replace(('install: spiralsynthmodular',
                   'install: spiralsynthmodular\n\tmkdir -p $(bindir)'),
                  'Makefile.in')
        r.Configure('--libdir=%(destdir)s/%(libdir)s --bindir=%(destdir)s/%(bindir)s/')
        r.Make()
        r.MakeInstall()
