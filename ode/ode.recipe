class Ode(AutoPackageRecipe):
    name = 'ode'
    version = '0.10.1'
 
    buildRequires = ['Mesa:devel', 'gcc-c++:runtime', 'libICE:devel', 
        'libSM:devel', 'libX11:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/opende/')
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
