class ode(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "ode"
    version = "0.5"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/opende/%(name)s-%(version)s.tgz')
        r.Make()

#       Move the libs to the correct places

        r.Install('lib/libode.a', '/usr/lib/')
        r.Install('include/ode/', '/usr/include/ode/')

#       Here are the docs

        r.Doc('CHANGELOG', 'INSTALL', 'LICENSE.TXT',
              'LICENSE-BSD.TXT', 'README')
