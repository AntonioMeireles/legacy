class Metacity(GnomePackageRecipe):
    buildRequires = [ 
        'atk:devel', 
        'cairo:devel', 
        'desktop-file-utils:runtime', 
        'expat:devel', 
        'fontconfig:devel',
        'freetype:devel',
        'GConf:devel', 
        'GConf:runtime',
        'gettext:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'gtk:devel', 
        'intltool:runtime',
        'itstool:runtime',
        'libcanberra:devel',
        'libglade:devel', 
        'libgtop:devel', 
        'libpng:devel', 
        'libXcomposite:devel', 
        'libXcursor:devel', 
        'libXdamage:devel',
        'libXfixes:devel', 
        'libXinerama:devel', 
        'libXrandr:devel',
        'ORBit2:devel', 
        'pango:devel', 
        'perl:runtime',
        'startup-notification:devel', 
        'zenity:runtime', 
            ]

    name = 'metacity'
    version = '2.34.13'

    extraConfig = ' --disable-static'

    patches = ['application-switcher.patch', 'enable_compositing.patch', 'fix_compositing_startup.patch',
                'fix_force_quit.patch', 'fix_shadows.patch']

