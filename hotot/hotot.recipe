import datetime
class Hotot(PackageRecipe):

    name = 'hotot'
    version = '6ac817eb3da1d2e5d3f7407c49b4830e4912caa7' + '+' + datetime.date.today().strftime("%Y.%m.%d")

    buildRequires = [
        'python-setuptools:python',
        'gettext:runtime', 
        'intltool:runtime',
        'python:devel',
        'pywebkitgtk:python',
        'desktop-file-utils:runtime',
        'python-keybinder:python',
        'notify-python:python',
        'pycurl:python',
        'pygtk:python',
        'python-distutils-extra:python'
        ]

    def setup(r):
        r.addMercurialSnapshot("https://hotot.googlecode.com/hg/", tag='a7145884a9be3a16a9cf7d54dbe6b22f7885d34b')
        r.addPatch('notify.diff')
        r.PythonSetup(data='--install-data=%(prefix)s')
