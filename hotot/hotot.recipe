import datetime
class Hotot(PackageRecipe):

    name = 'hotot'
    version = '13a825ca59c24e4360e8b24e6d31c5e9f3b8526f' + '+' + datetime.date.today().strftime("%Y.%m.%d")

    buildRequires = [
        'python-setuptools:python',
        'gettext:runtime', 
        'intltool:runtime',
        'python:devel',
        'pywebkitgtk:python',
        'desktop-file-utils:runtime',
        'python-keybinder:python',
        'notify-python:python',
        'pycurl:python',
        'pygtk:python',
        'python-distutils-extra:python'
        ]

    def setup(r):
        r.addMercurialSnapshot("https://hotot.googlecode.com/hg/", tag='13a825ca59c24e4360e8b24e6d31c5e9f3b8526f')
        r.PythonSetup(data='--install-data=%(prefix)s')
