import datetime
class Hotot(PackageRecipe):

    name = 'hotot'
    version = '12e80d87' + '+' + datetime.date.today().strftime("%Y.%m.%d")

    buildRequires = [
        'python-setuptools:python',
        'gettext:runtime', 
        'intltool:runtime',
        'python:devel',
        'pywebkitgtk:python',
        'desktop-file-utils:runtime',
        'python-keybinder:python',
        'notify-python:python',
        'pycurl:python',
        'pygtk:python',
        'python-distutils-extra:python',
        # 'libappindicator:python',
        'dbus-python:python'
        ]

    def setup(r):
        r.addGitSnapshot("https://github.com/shellex/Hotot.git", tag='12e80d87')
        r.PythonSetup(data='--install-data=%(prefix)s')
