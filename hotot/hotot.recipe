import datetime
class Hotot(PackageRecipe):

    name = 'hotot'
    version = '411a79ff' + '+' + datetime.date.today().strftime("%Y.%m.%d")

    buildRequires = [
        'python-setuptools:python',
        'gettext:runtime', 
        'intltool:runtime',
        'python:devel',
        'pywebkitgtk:python',
        'desktop-file-utils:runtime',
        'python-keybinder:python',
        'notify-python:python',
        'pycurl:python',
        'pygtk:python',
        'python-distutils-extra:python'
        ]

    def setup(r):
        r.addMercurialSnapshot("https://hotot.googlecode.com/hg/", tag='411a79ff')
        # Might be in code now, lets keep patch just in case for now
        # r.addPatch('notify.diff')
        r.PythonSetup(data='--install-data=%(prefix)s')
