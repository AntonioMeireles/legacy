class ERuby (PackageRecipe):
	name = 'eruby'
	version = '1.0.5'
	buildRequires = [
		'ruby:runtime',
		'ruby:devellib',
		'glibc:devel'
	]

	def setup(r):
		r.addArchive('http://www.modruby.net/archive/eruby-1.0.5.tar.gz')
		r.Run('./configure.rb')
		r.Run('make')
		r.Run('make DESTDIR=%(destdir)s install')
