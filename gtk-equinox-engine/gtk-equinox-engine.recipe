class GtkEquinoxEngine(AutoPackageRecipe):
    name = 'gtk-equinox-engine'
    version = '1.30.2'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'expat:devel',
                      'fontconfig:devel', 'freetype:devel', 'glib:devel',
                      'glitz:devel', 'gtk:devel', 'libX11:devel',
                      'libXrender:devel', 'libpng:devel', 'libxcb:devel',
                      'pango:devel', 'pkgconfig:devel', 'xcb-util:devel',
                      'zlib:devel'
                      ]

    def setup(r):
        r.addArchive('http://gnome-look.org/CONTENT/content-files/121881-equinox-%(major_version)s.tar.bz2')
        r.addArchive('equinox-gtk-engine.tar.gz', sourceDir = '../')
        r.addArchive('equinox-themes.tar.gz', sourceDir = '../',
            dir='%(name)s-%(version)s')
        
        r.Configure('--enable-animation', dir='../equinox-%(major_version)s')
        r.Make(dir='../equinox-%(major_version)s')
        r.MakeInstall(dir='../equinox-%(major_version)s')
        r.Install('Equinox*', '%(datadir)s/themes/')
