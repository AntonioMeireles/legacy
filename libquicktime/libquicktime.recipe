loadSuperClass('gnomepackage.recipe')
class Libquicktime(GnomePackageRecipe):
    name = 'libquicktime'
    version = '1.0.1'
 
    buildRequires = [ 'ffmpeg:devel', 'freetype:devel', 'lame:devel', 
                      'libogg:devel','Mesa:devel', 'alsa-lib:devel', 
                      'libXaw:devel', 'libXv:devel', 'libdv:devel', 
                      'libjpeg:devel', 'nvidia:devellib']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/libquicktime/')
