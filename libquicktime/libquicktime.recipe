loadSuperClass('gnomepackage')
class Libquicktime(GnomePackageRecipe):
    name = 'libquicktime'
    version = '1.1.1'

    buildRequires = [ 'expat:devel', 'ffmpeg:devel', 'freetype:devel', 
                    'lame:devel', 'libogg:devel','Mesa:devel', 
                    'alsa-lib:devel', 'libXaw:devel', 'libXv:devel', 
                    'libdv:devel', 'libjpeg:devel', 'doxygen:runtime' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
