class OsdLyrics(CPackageRecipe):
    name = 'osd-lyrics'
    revision = 'r339'
    version = '0.3+' + revision
 
    buildRequires = ['atk:devel', 'autoconf:runtime', 'automake:runtime', 'cairo:devel', 'curl:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libnotify:devel', 'libstdc++:devel', 'libtool:runtime', 'openssl:devel', 'pango:devel', 'pkgconfig:devel', 'sqlite:devel', 'zlib:devel']
 
    def setup(r):
        r.addSvnSnapshot('http://osd-lyrics.googlecode.com/svn/trunk/', revision = r.revision)
	r.Automake(autoMakeArgs='--add-missing')
	r.Configure('--disable-xmms2 --disable-mpd')
	r.Make()
        r.MakeInstall()
