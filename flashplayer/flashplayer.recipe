class FlashPlayer(PackageRecipe):
    name = "flashplayer"
    version = "9.0.124.0"

    buildRequires = ['glibc:devel', 'zlib:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXext:devel', 'libXt:devel']

    def setup(r):
        r.addArchive('http://fpdownload.macromedia.com/get/flashplayer/current/install_flash_player_9_linux.tar.gz')

        r.Install('libflashplayer.so','%(libdir)s/mozilla/plugins/')

        r.ComponentSpec("runtime", "%(libdir)s/mozilla.*")
        r.Requires('xulrunner:lib', '%(libdir)s/')
        r.Requires('mozilla-filesystem:runtime', '%(libdir)s/')
        r.Requires('libflashsupport:lib', '%(libdir)s/')


