loadSuperClass('kernelmodulepackage')
class KVMKernel(KernelModulePackageRecipe):
    name = 'kvm-kernel'
    version = '2.6.31.5'

    def unpack(r):
        r.addArchive('mirror://sourceforge/kvm/kvm-kmod-%(version)s.tar.bz2')
        r.addPatch('noTrace.patch')

    def build(r):
        r.ManualConfigure('--kerneldir=/lib/modules/%(kver)s/build')
        r.Make()

    def install(r):
        r.Install( 'x86/*.ko', '/lib/modules/%(kver)s/updates/')

    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')
