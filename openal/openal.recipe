class openal(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "openal"
    version = "20050412"

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
        r.mainDir('%(name)s-%(version)s/linux')
        r.Configure('--enable-optimization')
        r.Make()
        r.MakeInstall('DESTDIR=%(destdir)s%(prefix)s')

#       Here are the docs

        r.Doc('CREDITS', 'INSTALL', 'NOTES',
              'PLATFORM', 'TODO')
