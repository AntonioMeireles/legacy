class DriverSwitcher(PackageRecipe):
    name = 'driver-switcher'
    version = '0.1'
 
    buildRequires = []
 
    def setup(r):
        r.addSource('go-ati.sh',dest='%(bindir)s/go-ati')
        r.addSource('go-nvidia.sh',dest='%(bindir)s/go-nvidia')
        r.addSource('go-oss.sh',dest='%(bindir)s/go-oss')
