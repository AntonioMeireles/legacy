class MdAdm(CPackageRecipe):
    name = 'mdadm'
    version = '2.6.1'
    buildRequires = [ 'groff:runtime' ]

    def setup(r):
        r.addArchive('http://www.kernel.org/pub/linux/utils/raid/mdadm/')

        # -Werror will cause the build to fail suggesting use of endian.h instead
        # of byteorder.h.  Unfortunately endian.h doesnt have all we need.
        r.Replace('\-Werror ', '', 'Makefile')
        r.Make()
        r.MakeInstall()
        r.Doc('mdadm.conf-example')
        r.Create('%(sysconfdir)s/mdadm.conf')
        r.Doc('ANNOUNCE-%(version)s')
