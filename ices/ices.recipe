class Ices(AutoPackageRecipe):
    name = 'ices'
    version = '2.0.1'

    buildRequires = [ 'alsa-lib:devel', 'libogg:devel', 'libshout:devel',
                      'libtheora:devel', 'libvorbis:devel', 'libxml2:devel',
                      'pkgconfig:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://downloads.us.xiph.org/releases/ices/')
