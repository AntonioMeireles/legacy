class Libgksu(CPackageRecipe):

    buildRequires = [ 'gtk:devel', 'libgksuui1.0:devel' ]

    name = 'libgksu1.2'
    version = '1.3.7'

    def setup(r):
	r.addArchive('http://people.debian.org/~kov/gksu/libgksu1.2/libgksu1.2-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
