class Bison(AutoPackageRecipe):
    name = 'bison'
    version = '2.3'

    buildRequires = [ 'm4:runtime', 'install-info:runtime', ]

    def unpack(r):
        r.addArchive('mirror://gnu/bison/', keyid='B5C4CE13')

    def policy(r):
        r.Remove('%(bindir)s/yacc') # comes from byacc instead
        r.TestSuite('tests', './testsuite')
        r.Requires('m4:runtime', '%(bindir)s/bison')
