class NotifyOsd(AutoPackageRecipe):
    name = 'notify-osd'
    version = '0.9.6+r262'
 
    buildRequires = ['GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel', 'dbus-glib:runtime', 'libnotify:devel', 'libwnck:devel', 'gnome-common:runtime', 'gnome-common:devel', 'libtool:runtime']
 
    def unpack(r):
        #r.addArchive('https://edge.launchpad.net/ubuntu/jaunty/+source/notify-osd/%(version)s-0ubuntu2/+files/notify-osd_%(version)s.orig.tar.gz')
        r.addBzrSnapshot('lp:notify-osd')

        #r.addPatch('add_util_h.patch')
        #r.addPatch('add_service_file.patch')
        r.Replace('-Bsymbolic-functions','','src/Makefile.*')
        #r.Replace('-Werror','','src/Makefile.*')
        r.Replace('-Werror','','tests/Makefile.*')
        r.Replace('-Werror','','configure.in')
        #r.Replace('-Werror','','aclocal.m4')
        r.Replace('@LIBEXECDIR@','%(libexecdir)s','data/org.freedesktop.Notifications.service.in')
        r.Run('./autogen.sh')

    def policy(r):
        r.Move('%(datadir)s/dbus-1/services/org.freedesktop.Notifications.service.in', '%(datadir)s/dbus-1/services/org.freedesktop.Notifications.service')
