class NotifyOsd(AutoPackageRecipe):
    name = 'notify-osd'
    version = '0.9.6'
 
    buildRequires = ['GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel', 'dbus-glib:runtime', 'libnotify:devel', 'libwnck:devel']
 
    def unpack(r):
        r.addArchive('https://edge.launchpad.net/ubuntu/jaunty/+source/notify-osd/%(version)s-0ubuntu2/+files/notify-osd_%(version)s.orig.tar.gz')

        r.addPatch('add_util_h.patch')
        r.addPatch('add_service_file.patch')
        r.Replace('-Bsymbolic-functions','','src/Makefile.*')
        r.Replace('-Werror','','src/Makefile.*')
        r.Replace('-Werror','','tests/Makefile.*')
        r.Replace('-Werror','','configure')
        r.Replace('-Werror','','aclocal.m4')

