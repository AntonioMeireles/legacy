class Heyu(CPackageRecipe):
    name = 'heyu'
    version = '2.0beta5'

    def setup(r):
        r.addArchive('http://www.heyu.org/download/heyu-%(version)s.tgz')
        r.Run('./Configure')
        r.Make()
        # Ugly workaround for poor install.sh
        r.Install('heyu.1','%(mandir)s/man1/')
        r.Install('x10cm17a.5','%(mandir)s/man5/')
        r.Install('x10config.5','%(mandir)s/man5/')
        r.Install('x10sched.5','%(mandir)s/man5/')
        r.Install('x10scripts.5','%(mandir)s/man5/')
        r.Install('heyu','%(bindir)s/')
        r.Install('x10config.sample','%(sysconfdir)s/heyu/x10.conf')
