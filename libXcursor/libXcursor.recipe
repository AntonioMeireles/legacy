loadSuperClass('xorgpackage.recipe')
class LibXCursor(XorgPackageRecipe):
    name = 'libXcursor'
    version = '1.1.8'
    component = 'lib'

    buildRequires = [ 'libXfixes:devel', 'libXrender:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        r.Requires('xproto:devel', '%(libdir)s/pkgconfig/xcursor.pc')
