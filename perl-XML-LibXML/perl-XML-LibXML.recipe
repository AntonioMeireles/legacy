loadSuperClass('cpanpackage.recipe', label='conary.rpath.com@rpl:devel')
class XMLLibXML(CPANPackageRecipe, CPackageRecipe):
    name='perl-XML-LibXML'
    version='1.61'

    buildRequires = [ 'libxml2:devel', 'perl-XML-LibXML-Common:perl', 
                      'perl-XML-NamespaceSupport:perl', 'perl-XML-SAX:perl', 
                      'zlib:devel' ]

    def unpack(r):
        CPANPackageRecipe.unpack(r)
        r.Replace('\$ENV{SKIP_SAX_INSTALL}','yes', 'Makefile.PL')
