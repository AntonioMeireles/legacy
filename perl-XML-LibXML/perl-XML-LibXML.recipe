loadSuperClass('cpanpackage.recipe', label='conary.rpath.com@rpl:devel')
class XMLLibXML(CPANPackageRecipe):
    name='perl-XML-LibXML'
    version='1.58'

    buildRequires = [ 'glibc:devel', 'libxml2:devel', 'perl-XML-LibXML-Common:perl',
        'perl-XML-NamespaceSupport:perl', 'perl-XML-SAX:perl', 'zlib:devel' ]

    def unpack(r):
        CPANPackageRecipe.unpack(r)
        r.Replace('\$ENV{SKIP_SAX_INSTALL}','yes', 'Makefile.PL')

    def post(r):
        for i in r.buildRequires:
            r.Requires(i, r"\.pm")
        CPANPackageRecipe.post(r)

