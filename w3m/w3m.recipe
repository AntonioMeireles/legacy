class w3m(AutoPackageRecipe):
    name = 'w3m'
    version = '0.5.2'

    buildRequires = []

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

    def configure(r):
        extraConfig = "--enable-image=no"
        if Use.ssl:
            extraConfig += ' --with-ssl'

        r.Configure(extraConfig)
