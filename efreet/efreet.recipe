class efreet(AutoPackageRecipe):
    name = 'efreet'
    version = "1.0.1"

    buildRequires = ['curl:devel', 'ecore:devel', 'eina:devel', 'gnutls:devel', 'libgcrypt:devel', 'libgpg-error:devel', 'openssl:devel', 'pkgconfig:devel', 'zlib:devel', 'automake:runtime', 'autoconf:runtime', 'libtool:runtime']

    def unpack(r):
        r.addArchive("http://download.enlightenment.org/releases/efreet-%(version)s.tar.gz")
