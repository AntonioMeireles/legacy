loadSuperClass('xorgcpackage.recipe')
class FontUtil(XorgCPackageRecipe):
    name = 'font-util'
    version = '1.0.1'
    component = 'font'

    # needed to satisfy "perl: File::Glob" for bdftruncate
    buildRequires = [ 'perl:lib', 'perl:runtime' ]

    extraConfig = ' --with-mapdir=%(datadir)s/X11/util'
