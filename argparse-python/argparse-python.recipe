class ArgparsePython(PackageRecipe):

    name = 'argparse-python'
    version = '0.8.0'

    buildRequires = ['python-setuptools:python','unzip:runtime','python:devel']

    def setup(r):
        r.addArchive('http://cheeseshop.python.org/packages/source/a/argparse/argparse-%(version)s.zip')
        r.PythonSetup()
