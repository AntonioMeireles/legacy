loadSuperClass('pypipackage')
class Plumbum(PyPiPackage):
    name = 'python-plumbum'
    pyname = 'plumbum'
    version = '0.9.0'
    buildRequires = [ 'python-six:python', ]

    def policy(r):
        PyPiPackage.policy(r)
        r.Remove('/usr/lib*/python*/site-packages/plumbum-*egg-info/', recursive = True)
