class SoundConverter(AutoPackageRecipe):
    name = 'soundconverter'
    version = '1.3.2'
    buildRequires = [ 'desktop-file-utils:runtime', 'gettext:runtime',
        'gnome-python:python', 'gst-python:python', 'intltool:runtime',
        'perl:runtime', 'pygobject:python', 'pygtk:python', 'python:devel' ]

    def unpack(r):
        r.addArchive('http://download.berlios.de/soundconverter/')
