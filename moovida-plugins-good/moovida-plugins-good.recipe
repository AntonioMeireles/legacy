class MoovidaPluginsGood(BuildPackageRecipe):
    name = 'moovida-plugins-good'
    version = '1.0.9'
 
    buildRequires = [ 'python-setuptools:python',  'pyxdg:python', 'PIL:python', 'dbus-python:python', 'gnome-python-desktop:python', 'gnome-python:python', 'gst-python:python', 'pigment-python:python', 'pygobject:python', 'pygtk:python', 'python-twisted:python', 'python:devel', 'moovida:python', 'python-zopeinterface:python' ]
 
    def setup(r):
        r.addArchive('http://www.moovida.com/media/public/')
        r.Run('python setup.py build')
        r.Run('python setup.py install --root=%(destdir)s')
