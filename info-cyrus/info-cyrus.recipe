class info_cyrus(UserInfoRecipe):
    name = 'info-cyrus'
    version = '1'

    def setup(r):
        r.User('cyrus', 76, groupid=12, group='mail',
               provideGroup=False,
               comment='Cyrus IMAP Server',
               homedir='%(localstatedir)s/lib/imap',
               shell='%(essentialbindir)s/bash')
