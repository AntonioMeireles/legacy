class Gwibber(PackageRecipe):

    name = 'gwibber'
    version = '20080728'

    buildRequires = ['python-setuptools:python', 'PIL:python', 'dbus-python:python', 'gnome-python:python', 'notify-python:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python:devel', 'sexy-python:python', 'simplejson:python', 'desktop-file-utils:runtime', 'pycairo:python', 'pywebkitgtk:python']

    def setup(r):
        r.addBzrSnapshot('http://bazaar.launchpad.net/~segphault/gwibber/webkitui')
        #r.addBzrSnapshot('http://bazaar.launchpad.net/~segphault/gwibber/main')
        r.addPatch('datetime.patch')
        r.PythonSetup()
        r.Move('%(libdir)s/python2.4/site-packages/share/*', '%(datadir)s/')
        #r.addSource('gwibber.png')
        #r.Install('gwibber.png', '%(datadir)s/gwibber/ui/')
