class Tor(AutoPackageRecipe):
    name = 'tor'
    version = '0.1.1.25'
    buildRequires = [ 'libevent:devel', 'openssl:devel', 'zlib:devel',
        'krb5:devel', 'chkconfig:runtime', ]

    def unpack(r):
        r.macros.cflags += ' -I/usr/kerberos/include'
        r.addArchive('http://tor.eff.org/dist/%(name)s-%(version)s.tar.gz')
        r.addSource('tor.init')

    def policy(r):
        r.Install('tor.init', '%(initdir)s/tor')
        r.UtilizeUser('tor', '%(initdir)s/tor')
        r.UtilizeGroup('tor', '%(initdir)s/tor')
