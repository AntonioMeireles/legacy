loadSuperClass('binarypackage')
class Spotify(BinaryPackageRecipe):
    name = 'spotify'
    version = '0.5.1.151'
 
    buildRequires = ['binutils:runtime', 'desktop-file-utils:runtime']
 
    def unpack(r):
        r.addArchive('http://repository.spotify.com/pool/non-free/s/spotify/spotify-client-gnome-support_0.5.1.151.g7c8c074-1_all.deb', dir='/')
        r.macros.site = 'http://repository.spotify.com/pool/non-free/s/spotify'

        dist = [
            ('spotify-client-qt_0.5.1.151.g7c8c074-1_i386.deb', Arch.x86),
            ('spotify-client-qt_0.5.1.151.g7c8c074-1_amd64.deb', Arch.x86_64),
        ]
        for (deb, arch) in dist:
            r.addArchive('%(site)s/'+deb, dir='/', use=(arch==True))

