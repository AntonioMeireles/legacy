loadSuperClass('binarypackage')
class Spotify(BinaryPackageRecipe):
    name = 'spotify'
    version = '0.8.4.103'
 
    buildRequires = ['binutils:runtime', 'desktop-file-utils:runtime']
 
    def unpack(r):
        r.macros.site = 'http://repository.spotify.com/pool/non-free/s/spotify/'

        dist = [
            ('spotify-client_0.8.4.103.g9cb177b.260-1_i386.deb', Arch.x86),
            ('spotify-client_0.8.4.103.g9cb177b.260-1_amd64.deb', Arch.x86_64),
        ]
        for (deb, arch) in dist:
            r.addArchive('%(site)s/'+deb, dir='/', use=(arch==True))

        # needed for KDE, need to be in /usr/share/kde4/services
        # Needs to be fixed though, to only get installed when using kde.
        # r.addSource('spotify.protocol')
        r.ImproperlyShared(exceptions='%(datadir)s/spotify/.*')
        if Arch.x86_64:
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libcrypto\.so\.0\.9\.8\(OPENSSL\_0\.9\.8\ SysV\ x86\_64\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libssl\.so\.0\.9\.8\(OPENSSL\_0\.9\.8\ SysV\ x86\_64\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libnspr4\.so\.0d\(SysV\ x86\_64\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libnss3\.so\.1d\(NSS\_3\.10\ NSS\_3\.11\ NSS\_3\.11\.1\ NSS\_3\.11\.2\ NSS\_3\.12\ NSS\_3\.12\.1\ NSS\_3\.12\.3\ NSS\_3\.2\ NSS\_3\.3\ NSS\_3\.4\ NSS\_3\.5\ NSS\_3\.6\ NSS\_3\.8\ NSS\_3\.9\ NSS\_3\.9\.2\ NSS\_3\.9\.3\ SysV\ x86\_64\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libnssutil3\.so\.1d\(NSSUTIL\_3\.12\ SysV\ x86\_64\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libplc4\.so\.0d\(SysV\ x86\_64\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libsmime3\.so\.1d\(NSS\_3\.10\ NSS\_3\.2\ SysV\ x86\_64\)')
        else:
            r.Requires(exceptDeps=r'soname\:\ ELF32\/libcrypto\.so\.0\.9\.8\(OPENSSL\_0\.9\.8\ SysV\ x86\)')
            r.Requires(exceptDeps=r'soname\:\ ELF32\/libssl\.so\.0\.9\.8\(OPENSSL\_0\.9\.8\ SysV\ x86\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libnspr4\.so\.0d\(SysV\ x86\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libnss3\.so\.1d\(NSS\_3\.10\ NSS\_3\.11\ NSS\_3\.11\.1\ NSS\_3\.11\.2\ NSS\_3\.12\ NSS\_3\.12\.1\ NSS\_3\.12\.3\ NSS\_3\.2\ NSS\_3\.3\ NSS\_3\.4\ NSS\_3\.5\ NSS\_3\.6\ NSS\_3\.8\ NSS\_3\.9\ NSS\_3\.9\.2\ NSS\_3\.9\.3\ SysV\ x86\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libnssutil3\.so\.1d\(NSSUTIL\_3\.12\ SysV\ x86\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libplc4\.so\.0d\(SysV\ x86\)')
            r.Requires(exceptDeps=r'soname\:\ ELF64\/libsmime3\.so\.1d\(NSS\_3\.10\ NSS\_3\.2\ SysV\ x86\)')
