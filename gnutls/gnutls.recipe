class gnutls(AutoPackageRecipe):
    name = 'gnutls'
    version = '2.2.1'

    buildRequires = [ 'install-info:runtime', 'libgcrypt:devel',
        'libgpg-error:devel', 'libstdc++:devel', 'lzo:devel',
        'ncurses:devel', 'readline:devel', 'zlib:devel', ]

    def unpack(r):
        r.addArchive('ftp://ftp.gnutls.org/pub/gnutls/', keyid='B565716F')
