class Weechat(AutoPackageRecipe):

    name = 'weechat'
    version = '0.2.6'

    buildRequires = ['aspell:devel', 'ncurses:devel', 'perl:devel', 'perl:runtime', 'pkgconfig:devel', 'ruby:devellib', 'ruby:runtime']

    def setup(r):
        r.addArchive('http://weechat.flashtux.org/download/%(name)s-%(version)s.tar.gz')
        r.Configure('--disable-gtktest')
        r.Make()
        r.MakeInstall()

