loadSuperClass('binarypackage=conary.rpath.com@rpl:2')
class Freepats(BinaryPackageRecipe):
    name = 'eawpats'
    version = '12'
    packageSummary = "Patches for TiMidity"
    packageDescription = "These instruments are used by TiMidity"

    buildRequires = []
 
    def unpack(r):
	r.macros.ver = r.version.replace('_', '-')
        r.addArchive('http://mirrors.kernel.org/gentoo/distfiles/%(name)s%(version)s_full.tar.gz',
			dir='%(datadir)s/midi')
	r.addSource('timidity.cfg', dir='%(datadir)s/timidity/')
	r.Copy('%(datadir)s/timidity/timidity.cfg', '%(sysconfdir)s/timidity/')
