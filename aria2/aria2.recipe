class Aria2(AutoPackageRecipe):
    name = 'aria2'
    version = '1.14.0'
 
    buildRequires = [
            'asciidoc:runtime', 
            'c-ares:devel', 
            'cppunit:devel', 
            'gettext:runtime', 
            'gnutls:devel', 
            'intltool:runtime', 
            'libgcrypt:devel', 
            'libgpg-error:devel', 
            'libstdc++:devel', 
            'libxml2:devel', 
            'pkgconfig:devel', 
            'sqlite:devel', 
            'zlib:devel'
                    ]
 
    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/project/aria2/stable/aria2-%(version)s/')
