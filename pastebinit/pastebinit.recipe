class Pastebinit(PackageRecipe):
    name = 'pastebinit'
    version = '0.7'
 
    buildRequires = ['python:devel']
 
    def setup(r):
        r.addSource('http://www.stgraber.org/download/projects/pastebin/%(name)s-%(version)s.py')
        r.addAction('sed -i  s/paste\.stgraber\.org/pastebin\.com/g %(name)s-%(version)s.py')
        r.SetModes('%(name)s-%(version)s.py',00755)
        r.Move('%(name)s-%(version)s.py','%(name)s')
        r.Install('%(name)s','%(bindir)s/')
    
        
