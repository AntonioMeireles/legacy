class Listen(CPackageRecipe):
    name = 'listen'
    version = '0.6.3'
 
    buildRequires = ['PIL:python', 'atk:devel', 'avahi:python', 'cairo:devel', 'dbus-python:python', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-python-extras:python', 'gnome-python:python', 'gst-python:python', 'gtk:devel', 'mutagen:python', 'pango:devel', 'pygobject:python', 'python-inotify:python', 'python:runtime', 'python:devel', 'pygtk', 'pyxdg:python', 'sexy-python:python', 'python-musicbrainz2:python', 'python-xlib:python', 'pywebkitgtk:python', 'which:runtime']
 
    def setup(r):
		r.addArchive('http://download.listen-project.org/lastest/')
		r.Make('clean')
		r.Make('PREFIX=%(prefix)s')
		r.Make('po-gen')
		r.Make('po-data')
		r.MakeInstall()
