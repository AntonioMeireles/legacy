loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class Nautilus(GnomePackageRecipe):
    
    buildRequires = [ 'gnome-vfs:devel',
                      'libgnome:devel', 'glib:devel', 'gtk:devel',
		      'libglade:devel', 'eel:devel', 'gettext:runtime',
		      'nautilus:runtime', 'libtool:runtime' ]
               
    name = 'nautilus-cd-burner'
    version = '2.10.2'

    extraConfig = ''

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.addPatch('pmount.patch', level=0)
	r.addPatch('hal05.patch', level=0)
