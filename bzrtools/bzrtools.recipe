class Bzrtools(PackageRecipe):

    name = 'bzrtools'
    version = '1.14.0'

    buildRequires = [
        'bzr:python',
        'python-cssutils:python',
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://launchpad.net/bzrtools/stable/1.14/+download/')
        r.PythonSetup()
