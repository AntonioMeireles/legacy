class Prozilla(AutoPackageRecipe): 
    name = 'prozilla'
    version = '2.0.4'

    buildRequires = [ 'libstdc++:devel', 'ncurses:devel','gettext:runtime' ]

    def unpack(r):
        r.addArchive('http://prozilla.genesys.ro/downloads/prozilla/tarballs/'
                     '%(name)s-%(version)s.tar.bz2')
