loadSuperClass('kdepackage.recipe')
class Digikam(kdePackageRecipe):

    name = 'digikam'
    version = '0.9.3+beta2'

    buildRequires = [
        'exiv2:devel', 'jasper:devel', 'lcms:devel', 'libgphoto2:devel',
        'libkdcraw:devel', 'libkexiv2:devel', 'libkipi:devel', 'libtiff:devel',
        'pcre:devel', 'sqlite:devel'
    ]

    def unpack(r):

        r.macros.archive_version = r.version.replace('+', '-')

        r.addArchive('mirror://sourceforge/digikam/')


