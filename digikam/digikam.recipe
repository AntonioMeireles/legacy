loadSuperClass('kdepackage.recipe')
class Digikam(kdePackageRecipe):

    name = 'digikam'
    version = '0.9.2'

    buildRequires = [
        'doxygen:runtime', 'exiv2:devel', 'gphoto-suite:devel', 'libkexiv2:devel',
        'graphviz:runtime', 'imlib2:devel', 'jasper:devel', 'kdelibs:runtime',
        'lcms:devel', 'libexif:devel', 'libkexiv2:devel', 'libkipi:devel',
        'libtiff:devel', 'pcre:devel', 'perl:lib', 'qt:apidox', 'sqlite:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/digikam/')
        r.addPatch('digikam-0.9.1-exiv2-0.14-fix.cpp')

        r.MakeDirs('%(kdehtmldir)s/en')
        r.Replace('if test -n "\$PREFIX" && test ! -d "\$PREFIX" ; then',
                  'if test -n "$PREFIX" && test ! -d "%(destdir)s/$PREFIX" ; then',
                  'admin/doxygen.sh')

    def postInstall(r):

        #r.Make('apidox')
        #r.MakeInstall(installtarget='install-apidox-recurse')
        pass

