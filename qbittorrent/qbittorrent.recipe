class Qbittorrent(AutoPackageRecipe):
    name = 'qbittorrent'
    version = '3.0.6'
 
    buildRequires = [
        'openssl:devel', 
        'qt4:devel', 
        'boost:devel', 
        'desktop-file-utils:runtime', 
        'libstdc++:devel', 
        'libtorrent-rasterbar:devel',
            ]
 
    def setup(r):
        r.addArchive('https://downloads.sourceforge.net/project/qbittorrent/qbittorrent/qbittorrent-3.0.6/qbittorrent-3.0.6.tar.gz')
        r.ManualConfigure('--prefix=%(prefix)s')
        r.Make()
        r.MakeInstall('INSTALL_ROOT=%(destdir)s')

