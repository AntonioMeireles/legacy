loadRecipe('gnomepackage.recipe')
class GnomeDocUtils(GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'gtk:devel', 'libgnome:devel',
        'libgnomeui:devel', 'libbonobo:devel', 'libxml2:python',
        'libbonoboui:devel', 'gnome-vfs:devel', 'gettext:runtime',
        'perl:runtime', 'scrollkeeper:runtime', 'libxml2:devel',
        'libxslt:devel', 'libxslt:runtime' ]

    name = 'gnome-doc-utils'
    version = '0.11.2'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'

