loadSuperClass('xorgcpackage.recipe')
class XCursorThemes(XorgCPackageRecipe):
    name = 'xcursor-themes'
    version = '1.0.1'
    component = 'data'

    buildRequires = [ 'libXcursor:devel', 'xcursorgen:runtime', 'xproto:devel',
        'libX11:devel', 'libXfixes:devel', 'libXrender:devel', 'util-macros:devel',
        'libXau:devel', 'libXdmcp:devel' ]

    def install(r):
        XorgCPackageRecipe.install(r)

        # XXX: should really pull icondir from libXcursor's pkgconfig
        r.TagSpec('gtk-update-icon-cache', '%(datadir)s/icons/.*')
