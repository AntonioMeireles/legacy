class Libmpg123(AutoPackageRecipe):
    name = 'libmpg123'
    version = '1.13.3'
 
    buildRequires = ['SDL:devel', 'alsa-lib:devel', 'esound:devel', 'jack:devel', 'libtool:devel', 'openal:devel', 'pkgconfig:devel', 'pulseaudio:devel']
 
    def unpack(r):
        r.addArchive('http://sourceforge.net/projects/mpg123/files/mpg123/%(version)s/mpg123-%(version)s.tar.bz2')
