loadSuperClass('kdepackage')
class K3b(kdePackageRecipe):

    name = 'k3b'
    version = '2.0.1'

    buildRequires = [
        'ffmpeg:devel', 'flac:devel', 'lame:devel', 'libdvdread:devel',
        'libkcddb:devel', 'libmad:devel', 'libmpcdec:devel', 'libogg:devel',
        'libsamplerate:devel', 'libsndfile:devel', 'libvorbis:devel',
        'taglib:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/k3b/')

    def policy(r):

        r.Requires('cdrdao:runtime', '%(bindir)s/')
        r.Requires('dvd+rw-tools:runtime', '%(bindir)s/')

