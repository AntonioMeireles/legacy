loadSuperClass('kdepackage')
class K3b(kdePackageRecipe):

    name = 'k3b'
    version = '1.0.4'

    buildRequires = [
        'alsa-lib:devel', 'dbus-qt3:devel', 'dbus:devel', 'flac:devel',
        'hal:devel', 'lame:devel', 'libdvdread:devel', 'libjpeg:devel',
        'libmad:devel', 'libmpcdec:devel', 'libmusicbrainz:devel',
        'libogg:devel', 'libsamplerate:devel', 'libsndfile:devel',
        'libvorbis:devel', 'taglib:devel'
    ]

    extraConf = ' --without-ffmpeg '

    def unpack(r):

        r.addArchive('mirror://sourceforge/k3b/')

    def policy(r):

        r.Requires('cdrdao:runtime', '%(bindir)s/')
        r.Requires('dvd+rw-tools:runtime', '%(bindir)s/')

