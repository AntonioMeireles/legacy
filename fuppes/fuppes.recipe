class Fuppes(AutoPackageRecipe):
    name = 'fuppes'
    version = '0.660'
 
    buildRequires = [
            'ImageMagick:devel', 
            'exiv2:devel',
            'faad2:devel', 
            'ffmpeg:devel',
            'flac:devel', 
            'lame:devel', 
            'libmad:devel', 
            'libogg:devel', 
            'libstdc++:devel', 
            'libvorbis:devel', 
            'libxml2:devel', 
            'mysql:devel', 
            'openssl:devel', 
            'pcre:devel', 
            'pkgconfig:devel', 
            'sqlite:devel', 
            'taglib:devel', 
            'util-linux:devel', 
            'zlib:devel',
                ]
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/fuppes/')

    def configure(r):
        r.Configure('--enable-mad --enable-faad --enable-lame')
