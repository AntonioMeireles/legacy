class Daemons(PackageRecipe):
    name = 'daemons'
    version = '1.0.10'
    fileNum = '34223'

    buildRequires = [
        'ruby:runtime',
      ]

    def setup(r):
        r.macros.filenum = r.fileNum
        r.addArchive('http://rubyforge.org/frs/download.php/%(filenum)s/%(name)s-%(version)s.tgz')
        r.Run('ruby setup.rb all --prefix=%(destdir)s%(prefix)s')
