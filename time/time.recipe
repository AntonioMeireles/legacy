class Time(AutoPackageRecipe):
    name = 'time'
    version = '1.7'

    # needs info-file tag description from the install-info package
    buildRequires = [ 'install-info:runtime' ]

    def unpack(r):
        r.addArchive('ftp://prep.ai.mit.edu/pub/gnu/time/time-%(version)s.tar.gz')

        # force configure to use wait3
        r.Run('echo "ac_cv_func_wait3=\\${ac_cv_func_wait3=\'yes\'}" >> config.cache')
    def makeinstall(r):
        r.MakePathsInstall()
