loadSuperClass('gnomepackage')
class Libgdata(GnomePackageRecipe):

    name = 'libgdata'
    version = '0.6.4'

    buildRequires = ['libsoup:devel', ' gobject-introspection:devel',
                     'autoconf:runtime', 'automake:runtime']

    extraConfig = ' --disable-static '
    patches = ['goi-build.patch']

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Run('autoreconf -fi')
