class LibWPD(AutoPackageRecipe):
    buildRequires = [ 'glib:devel', 'libgsf:devel', 'libstdc++:devel', 
                      'libxml2:devel', 'pkgconfig:devel', 'zlib:devel' ]

    name = 'libwpd'
    version = '0.8.3'

    def unpack(r):
        r.addArchive('http://unc.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
