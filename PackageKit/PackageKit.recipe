class Packagekit(AutoPackageRecipe):
    name = 'PackageKit'
    version = '0.0.1'

    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libglade:devel', 'libnotify:devel', 'libpng:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel']

    def unpack(r):
        r.addArchive('%(name)s-%(version)s.tar.gz')

    def configure(r):
        r.Configure('--with-backend=dummy')
