class Attr(CPackageRecipe):
    name = 'attr'
    version = '2.4.28'

    buildRequires = [ 'gettext:runtime', 'libtool:runtime' ]

    def setup(r):
        r.addArchive('ftp://oss.sgi.com/projects/xfs/cmd_tars/attr-%(version)s.src.tar.gz')
        r.addPatch('attr-2.0.8-docperms.patch')
        r.addPatch('attr-2.2.0-multilib.patch')

        r.Configure('--libdir=/%(lib)s --libexecdir=%(libdir)s')
        r.Make()
        r.MakeInstall(rootVar='DIST_ROOT',
                      installtarget='install install-dev install-lib')

