loadSuperClass('rpmpackage')
class Wget(RPMPackageRecipe,AutoPackageRecipe):
    name = 'wget'
    version = '1.10.2'
    rpmRelease = '12.fc7'

    buildRequires = [ 'gettext:runtime', 'install-info:runtime',
                      'perl:runtime', 'pkgconfig:devel', 'zlib:devel',
                      'texinfo:runtime', 'openssl:devel', 'krb5:devel', ]

    rpmPatches = ['wget-1.10.2-CVE-2006-6719.patch']

    def configure(r):
        r.macros.cppflags += ' $(pkg-config --cflags openssl)'
        r.macros.ldflags += ' $(pkg-config --libs openssl)'

        r.Configure('--with-ssl')
