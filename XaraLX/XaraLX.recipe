class XaraLX(AutoPackageRecipe):
    name = 'XaraLX'
    version = '0.7r1780'

    buildRequires = [ 'autoconf:runtime', 'automake:runtime',
        'freetype:devel', 'gettext:devel', 'gettext:runtime',
        'glib:devel', 'gtk:devel', 'libjpeg:devel', 'libpng:devel',
        'libstdc++:devel', 'pango:devel',
        'perl:runtime', 'pkgconfig:devel', 'wxWidgets:devel',
        'zip:runtime', 'libxml2:devel', 'zlib:devel',
    ]

    def unpack(r):
        r.addArchive('http://downloads2.xara.com/opensource/'
                     'XaraLX-%(version)s.tar.bz2')
        r.Replace("wx/defs.h", "wx/wx.h", "wxXtra/gridcombo.h")
