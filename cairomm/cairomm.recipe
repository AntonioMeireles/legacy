class CairoMM(AutoPackageRecipe):
    name = 'cairomm'
    version = '1.4.6'

    buildRequires = [ 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'libpng:devel', 'libstdc++:devel', 'pkgconfig:devel',
        'zlib:devel', 'expat:devel', 'libICE:devel', 'libSM:devel',
        'libX11:devel', 'libXext:devel', 'libXrender:devel', 'libXau:devel',
        'libXdmcp:devel', ]

    def unpack(r):
        r.addArchive('http://cairographics.org/releases/')
