class faad2(CPackageRecipe):
    name = 'faad2'
    version = '2.5'
 
    buildRequires =	[ 'autoconf:runtime', 'automake:runtime', 
                          'libstdc++:devel', 'libtool:devel', 'libtool:runtime' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/faac/')
        # Trick to disable BMP, XMMS plugins:
        r.Create('plugins/Makefile.am',contents='')
        r.Create('plugins/xmms/src/Makefile.am',contents='')
        r.Run('sed -i \'/E_B/d\' configure.in')
        r.Run('autoreconf -vif')
	r.Configure(' --with-mp4v2 --with-drm')
       	r.Make()
       	r.MakeInstall()
