class Vconfig(CPackageRecipe):
    name = 'vconfig'
    version = '1.9'

    def setup(r):
        r.addArchive('http://www.candelatech.com/~greear/vlan/'
                     'vlan.%(version)s.tar.gz')

        # 1.9 shipped with binaries in the tarball
        r.Make('clean')
        r.Make('CCFLAGS="%(cflags)s"')
        r.Install('vconfig', '%(essentialsbindir)s/')
        r.Install('vconfig.8', '%(mandir)s/man8/')
