loadSuperClass('gnomepackage')
class GnomeSubtitles(AutoPackageRecipe):
    name = 'gnome-subtitles'
    version = '1.0'
 
    buildRequires = ['GConf:runtime', 'desktop-file-utils:runtime', 'gettext:runtime', 'glib:devel', 'gnome-sharp:cil', 'gst-plugins-base:devel', 'gstreamer:devel', 'gtk-doc:runtime', 'gtk-sharp:cil', 'intltool:runtime', 'libxml2:devel', 'mono:cil', 'mono:devel', 'mono:runtime', 'pkgconfig:devel', 'gnome-doc-utils:runtime']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/gnome-subtitles/')
    def configure(r):
        r.Configure(' --disable-scrollkeeper --disable-schemas-install ')
