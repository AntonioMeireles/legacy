class Libbluray(AutoPackageRecipe):
    name = 'libbluray'
    version = '0.1+r86945f0b8a5b0a'
 
    buildRequires = ['doxygen:runtime', 'graphviz:runtime', 'libxml2:devel', 'pkgconfig:devel']
 
    def unpack(r):
        r.addGitSnapshot('git://git.videolan.org/libbluray.git')

    def configure(r):
        r.Run('./bootstrap')
        r.Configure()
