class MonoTools(AutoPackageRecipe):
    buildRequires = [ 'mono:devel','mono:runtime','pkgconfig:devel', 'gtk-sharp:devellib', 'desktop-file-utils:runtime', 'gnome-sharp:cil', 'gtk-sharp:cil', 'mono:cil', 'monodoc:cil' ]

    name = 'mono-tools'
    version = '1.2.6'
    
    def unpack(r):
        r.addArchive('http://go-mono.com/sources/%(name)s/')

    def policy(r):
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.Requires(exceptDeps=r'CIL\:\ gecko\-sharp\(2\.0\.0\.0\)')
        r.Requires(exceptDeps=r'CIL\:\ monodoc\(1\.0\.0\.0\)')
