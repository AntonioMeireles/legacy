class MonoTools(AutoPackageRecipe):
    buildRequires = [ 'mono:devel','mono:runtime','pkgconfig:devel', 'gtk-sharp:devellib', 'desktop-file-utils:runtime', 'gecko-sharp:lib', 'gnome-sharp:lib', 'gtk-sharp:lib', 'mono:lib', 'monodoc:lib' ]

    name = "mono-tools"
    version = "1.2.1"
    
    def unpack(r):
        r.addArchive("http://go-mono.com/sources/%(name)s/%(name)s-%(version)s.tar.gz")

    def policy(r):
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
