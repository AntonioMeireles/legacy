class MonoTools(AutoPackageRecipe):
    buildRequires = [ 'mono:devel','mono:runtime','pkgconfig:devel', 'gnome-sharp:devellib',
                      'gtk-sharp:devellib', 'desktop-file-utils:runtime', 'gnome-sharp:cil',
                      'gecko-sharp:devellib', 'gecko-sharp:cil',
                      'gtk-sharp:cil', 'mono:cil', 'monodoc:cil', 'monodoc:devellib', 'monodoc:runtime',
                       'automake:runtime', 'autoconf:runtime', 'libtool:runtime',
                      ]

    name = 'mono-tools'
    version = '1.9'

    def unpack(r):
        r.addArchive('http://go-mono.com/sources/%(name)s/')
        r.addSource('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/mono-tools/mono-tools.patch')
        r.Replace('@lib@', '%(lib)s', 'mono-tools.patch')
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.Run('autoreconf -f -i -s')
