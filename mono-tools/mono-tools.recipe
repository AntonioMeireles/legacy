class MonoTools(AutoPackageRecipe):
    buildRequires = [ 'mono:devel','mono:runtime','mono:cil',
                      'gnome-sharp:devellib', 'gnome-sharp:cil',
                      'gnome-desktop-sharp:devellib', 'gnome-desktop-sharp:cil',
                      'gtk-sharp:devellib', 'gtk-sharp:cil', 
                      'gecko-sharp:devellib', 'gecko-sharp:cil',
                      'desktop-file-utils:runtime', 'pkgconfig:devel',
                      'automake:runtime', 'autoconf:runtime', 'libtool:runtime',
                      'monodoc:cil', 'monodoc:devellib', 'monodoc:runtime',
                      ]

    name = 'mono-tools'
    version = '1.9'

    def unpack(r):
        r.addArchive('http://go-mono.com/sources/%(name)s/')
        r.addSource('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/mono-tools/mono-tools.patch')
        #        r.Replace('@lib@', '%(lib)s', 'mono-tools.patch')
        r.addAction("sed -i -e 's,@lib@,%(lib)s,' mono-tools.patch")
        r.addAction('patch -p1 < mono-tools.patch')
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.Run('autoreconf -f -i -s')
