class Sphinx(PackageRecipe):
    name = 'sphinx'
    version = '0.5.1'
 
    buildRequires = [
        'docutils:python',
        'Jinja:python',
        'Pygments:python',
        'python-setuptools:python',
        'python:devel',
        'simplejson:python'
    ]
 
    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/S/Sphinx/Sphinx-%(version)s.tar.gz')
        r.addPatch('setuptools.patch')
        r.PythonSetup()
