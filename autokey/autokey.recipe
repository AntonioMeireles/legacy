class Autokey(PackageRecipe):

    name = 'autokey'
    version = '0.71.0'

    buildRequires = ['PyQt4:python', 'PyQt:python', 'at-spi:python', 'desktop-file-utils:runtime', 'notify-python:python', 'pygobject:python', 'pygtk:python', 'pygtksourceview:python', 'pykde:python', 'python:devel', 'simplejson:python', 'python-setuptools:python']

    def setup(r):
        r.addArchive('http://autokey.googlecode.com/files/%(name)s_%(version)s.tar.gz')
        r.PythonSetup()
        r.Requires('python-xlib:python', '%(bindir)s/autokey-gtk')
        r.Requires('python-xlib:python', '%(bindir)s/autokey-qt')
        r.PackageSpec('autokey-gtk', '.*gtk.*')
        r.PackageSpec('autokey-qt', '.*qt.*')
