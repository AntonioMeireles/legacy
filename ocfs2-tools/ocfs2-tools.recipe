class OFCS2Tools(AutoPackageRecipe):
	name = 'ocfs2-tools'
	version = '1.2.4'

	buildRequires = [
		'e2fsprogs:devel', 'glib:devel', 'ncurses:devel', 'pkgconfig:devel',
		'readline:devel', 'vte:python', 'krb5:runtime', 'krb5:devel',
		]

	def unpack(r):
		r.addArchive('http://oss.oracle.com/projects/ocfs2-tools/dist/files/source/v1.2/ocfs2-tools-%(version)s.tar.gz')

	def configure(r):
		r.Configure('CC="%(cc)s -I/usr/kerberos/include"') # yuck. easier than patching every Makefile...
