loadSuperClass('cmakepackage')
class Libssh(CMakePackageRecipe):

    name = 'libssh'
    version = '0.4.1'

    buildRequires = [
        'openssl:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('http://www.libssh.org/files/')

        r.Replace('macro_ensure_out_of_source_build.*', '', 'CMakeLists.txt')

