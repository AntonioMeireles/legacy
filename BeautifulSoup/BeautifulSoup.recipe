class BeautifulSoup(PackageRecipe):

    name = 'BeautifulSoup'
    version = '3.1.0.1'

    buildRequires = ['python-setuptools:python', 'python:devel']

    def setup(r):
        r.addArchive('http://www.crummy.com/software/BeautifulSoup/download/')
        r.PythonSetup()

