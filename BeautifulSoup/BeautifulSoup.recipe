class BeautifulSoup(PackageRecipe):
    name = 'BeautifulSoup'
    version = '3.1.0.1'

    buildRequires = [ 'python:devel',
        'python-setuptools:python', 'python-setuptools:runtime'
    ]

    def setup(r):
        r.addArchive('http://www.crummy.com/software/BeautifulSoup/download/')
        r.PythonSetup()

