class Ncpfs(AutoPackageRecipe):
    name = 'ncpfs'
    version = '2.2.6'
 
    buildRequires = ['gettext:runtime','pam:devel']
 
    def unpack(r):
        r.addArchive('ftp://platan.vc.cvut.cz/pub/linux/%(name)s/')
        r.addPatch('buildbug262.patch')

