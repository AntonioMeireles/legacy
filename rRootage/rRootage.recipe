class rRootage(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel",
                      "libbulletml:devellib", "desktop-file-utils:runtime" ]
    name = "rRootage"
    version = "0.23a"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/rrootage/%(name)s-%(version)s.tar.gz')
        r.mainDir('%(name)s')
        r.Make('-f makefile.lin', subDir='src') 

#       rRootage doesn't auto install, so let's move all the game data manually!

#       rRootage binary

        r.Install('src/rr', '%(bindir)s/') 

#       rRootage data

        r.Install('rr_share/*', '%(datadir)s/games/rRootage/')

#       rRootage icon

        r.addSource('rRootage.png')
        r.Install('rRootage.png', '%(datadir)s/games/rRootage/')

#       Here are our menu links

        r.addSource('rRootage.desktop')
        r.Desktopfile('rRootage.desktop')
