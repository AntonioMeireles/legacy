class DistroConaryConfig(PackageRecipe):
    name='distro-conary-config'
    version='beta1'

    if Use.bootstrap:
        clearBuildReqs()
        buildRequires = [ 'setup:runtime' ]

    def setup(r):
        r.addArchive('use.tar.gz')
        if not Arch.x86:
            r.Create('%(sysconfdir)s/conary/distro/use/kernel.pae',
                     contents='sense prefernot')
        r.Install('*', '%(sysconfdir)s/conary/distro/use/')

        # Virtualization flags
        if Use.xen:
            r.Create('%(sysconfdir)s/conary/distro/use/xen', contents='sense preferred')
        if Use.dom0:
            r.Create('%(sysconfdir)s/conary/distro/use/dom0', contents="sense required")
        if Use.domU:
            r.Create('%(sysconfdir)s/conary/distro/use/domU', contents="sense required")
        if Use.vmware:
            r.Create('%(sysconfdir)s/conary/distro/use/vmware', contents="sense required")
