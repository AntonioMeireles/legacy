class IsoCodes(AutoPackageRecipe):
    name = 'iso-codes'
    version = '0.52'

    buildRequires = [ 'autoconf:runtime', 'automake:runtime', 
                      'gettext:runtime', 'PyXML:python' ]

    def unpack(r):
        r.addArchive('mirror://debian/pool/main/i/iso-codes/iso-codes_%(version)s.orig.tar.gz')
        for file in ('missing', 'NEWS', 'AUTHORS', 'COPYING'):
            r.Create(file)
        r.Automake()
        # This can come out when conary 1.0.28 or 1.1.1 are released
        r.ComponentSpec('devellib', '%(datadir)s/pkgconfig/')
