class isocodes(PackageRecipe):
    buildRequires=["glibc:devel"]

    name = "iso-codes"
    version = "0.46"

    def setup(r):
        r.addArchive("http://distro.ibiblio.org/pub/linux/distributions/debian/pool/main/i/%(name)s/iso-codes_%(version)s.orig.tar.gz")
        r.Configure()
	r.Make()
        r.MakeInstall()

