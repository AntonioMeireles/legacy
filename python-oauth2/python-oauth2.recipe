import datetime
class PythonOauth2(PackageRecipe):

    name = 'python-oauth2'
    version = '1.0.' + datetime.datetime.now().strftime("%Y%m%d")

    buildRequires = ['python-setuptools:python','python:devel']

    def setup(r):
        r.addGitSnapshot('git://github.com/simplegeo/python-oauth2.git')
        r.PythonSetup()
