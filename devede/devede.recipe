class Devede(PackageRecipe):
	name = 'devede'
	version = '3.13.0'

	buildRequires = ['desktop-file-utils:runtime', 'gettext:runtime', 'intltool:runtime', 'pycairo:python', 'python:devel']

	def setup(r):
    		r.addArchive('http://www.rastersoft.com/descargas/%(name)s-%(version)s.tar.bz2')
		r.Replace('/usr/local','%(prefix)s','install.sh')
		r.Run('DESTDIR=%(destdir)s ./install.sh')


