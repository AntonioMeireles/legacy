class Lua(CPackageRecipe):
    name='lua'
    version='5.1.3'

    buildRequires = ['ncurses:devel', 'readline:devel']

    def setup(r):
        r.addArchive('http://www.lua.org/ftp/lua-%(version)s.tar.gz')
        r.Run('sed -i -e s#/usr/local#%(destdir)s/%(prefix)s# Makefile')        
        r.Make('linux')
        r.MakeInstall()
