class Scrollkeeper(CPackageRecipe):
    name = 'scrollkeeper'
    version = '0.3.14'

    buildRequires = [ 'libxslt:devel', 'docbook-dtds:data', 'zlib:devel',
                      'libxml2:devel', 'libxml2:runtime', 'perl:runtime',
                      'perl-XML-Parser:perl', 'sgml-common:runtime' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/scrollkeeper/')
        r.addSource('scrollkeeper-record.tagdescription', macros=True,
                    dest = '%(tagdescriptiondir)s/scrollkeeper-record')
        r.addSource('scrollkeeper-record.taghandler', macros=True,
                    dest = '%(taghandlerdir)s/scrollkeeper-record', mode=0755)

        r.Configure()
        # disable scrollkeeper-rebuilddb
        r.Replace('\$\(DESTDIR\)\$\(bindir\)\/scrollkeeper\-rebuilddb', '\/bin\/true', 'Makefile')
        r.Make()
        r.MakeInstall()

        r.Create('%(localstatedir)s/log/scrollkeeper.log')
        r.Remove('%(localstatedir)s/lib/scrollkeeper', recursive=True)

        r.AutoDoc('scrollkeeper-spec.txt')

        # normally *-config scripts are used to get development information
        # from a package.  scrollkeeper keeps runtime information there.
        # therefore we place it in the :runtime component.
        # scrollkeeper-update won't run properly without it available
        r.ComponentSpec('runtime', '%(bindir)s/scrollkeeper-config')
        r.Requires('libxml2:runtime', '%(taghandlerdir)s/scrollkeeper-record')
        r.Requires('sgml-common:runtime', '%(taghandlerdir)s/scrollkeeper-record')

        for x in ('%(bindir)s/xmlcatalog', '%(bindir)s/scrollkeeper-update',
            '/dev/null', '%(essentialbindir)s/rm'):
            r.Requires(x, '%(taghandlerdir)s/scrollkeeper-record')

        # Setup and Create the catalog
        r.XMLCatalogEntry('scrollkeeper.xml',
                          'rewriteSystem',
                          'http://scrollkeeper.sourceforge.net/dtds/scrollkeeper-omf-1.0/scrollkeeper-omf.dtd',
                          'file://%(datadir)s/xml/scrollkeeper/dtds/scrollkeeper-omf.dtd' )
        r.XMLCatalogEntry('scrollkeeper.xml',
                          'rewriteURI',
                          'http://scrollkeeper.sourceforge.net/dtds/scrollkeeper-omf-1.0/scrollkeeper-omf.dtd',
                          'file://%(datadir)s/xml/scrollkeeper/dtds/scrollkeeper-omf.dtd' )

        # This is a special case for xml catalog tag handling, we
        # generate our own xml-catalog entries in order to avoid
        # having to use a nasty multitag setup, or having to order
        # taghandler runtime order.
        r.TagSpec('xml-catalog', exceptions='%(sysconfdir)s/xml/scrollkeeper.xml')
