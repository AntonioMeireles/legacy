class Tuxtype2(AutoPackageRecipe):
    name = 'tuxtype2'
    version = '1.5.15'
 
    buildRequires = ['SDL:devel', 'SDL_image:devel', 'SDL_mixer:devel',
            'SDL_Pango:devel', 'SDL_ttf:devel', 'gcc-c++:runtime']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/tuxtype/tuxtype-%(version)s.tar.gz')
        r.Replace('\{prefix\}/doc/tuxtype','\{prefix\}/share/doc/tuxtype','tuxtype.spec.in')
        r.Replace('\$\(prefix\)/doc','$(prefix)/share/doc','Makefile.in')
        r.Replace('\$\(prefix\)/doc','$(prefix)/share/doc','tuxtype/docs/en/Makefile.in')

