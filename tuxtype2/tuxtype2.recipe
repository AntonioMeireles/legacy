class Tuxtype2(AutoPackageRecipe):
    name = 'tuxtype2'
    version = '1.7.4'
 
    buildRequires = ['SDL:devel', 'SDL_Pango:devel', 'SDL_image:devel', 'SDL_mixer:devel', 'gettext:runtime', 'intltool:runtime']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/tuxtype/tuxtype_w_fonts-%(version)s.tar.gz')
	r.Configure('--without-sdlpango')
