class LibWmf(AutoPackageRecipe):

    buildRequires = [ 'expat:devel', 'freetype:devel', 'glib:devel',
                      'gtk:devel', 'libjpeg:devel', 'libpng:devel',
                      'pkgconfig:devel', 'xorg-x11:devel', 'zlib:devel' ]

    name = 'libwmf'
    version = '0.2.8.4'

    def unpack(r):

        r.macros.sf = 'http://switch.dl.sourceforge.net/sourceforge'
        r.addArchive('%(sf)s/wvware/%(name)s-%(version)s.tar.gz')

    def configure(r):

        r.Configure('--with-docdir=%(thisdocdir)s')

    def policy(r):

        r.TagSpec('gdk-pixbuf-loader', '%(libdir)s/gtk-2.0/.*/loaders/')

