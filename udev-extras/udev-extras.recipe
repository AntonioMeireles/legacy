class UDevExtras(AutoPackageRecipe):
    name = 'udev-extras'
    version = '20090226'
    buildRequires = [ 'glib:devel',
                      'hwdata:data',
                      'libusb:devel',
                      'libxslt:runtime',
                      'pkgconfig:devel',
                      'udev:devel']

    def unpack(r):
        r.addArchive('%(name)s-%(version)s-git20090302.tar.gz')
    def configure(r):
        r.Configure('--prefix=%(prefix)s --exec-prefix="" --sysconfdir=%(sysconfdir)s --with-libdir-name=%(lib)s  --sbindir="/sbin" ')

    def policy(r):
        for f in [ '/lib/udev/modem-probe',
                   '%(mandir)s/man8/modem-probe*.8*', 
                   '/lib/udev/rules.d/77-probe-modem-capabilities.rules',]:
            r.Remove(f)
