loadSuperClass('cmakepackage')
class QImageBlitz(CMakePackageRecipe):

    name = 'qimageblitz'
    version = '4.0.0+r910106'

    buildRequires = [
        'libstdc++:devel', 'libX11:devel', 'libXcomposite:devel',
        'libXcursor:devel', 'libXdamage:devel', 'libXext:devel',
        'libXfixes:devel', 'libXft:devel', 'libXpm:devel',
        'libXScrnSaver:devel', 'libXt:devel', 'libXtst:devel', 'libXv:devel',
        'libXxf86misc:devel', 'qt4:devel'
    ]

    def unpack(r):

        rev = r.version.split('+')[1][1:]
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/tags/kdesupport-for-4.2/kdesupport/qimageblitz',
            revision=rev
        )

