loadSuperClass('cmakepackage', 'foresight.rpath.org@rpl:devel')
class QImageBlitz(CMakePackageRecipe):

    name = 'qimageblitz'
    version = '0.0.2+r752814'

    buildRequires = [
        'libX11:devel', 'libXext:devel', 'libstdc++:devel', 'qt4:devel'
    ]

    def unpack(r):
        rev = r.version.split('+')[1][1:]
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/trunk/kdesupport/qimageblitz/',
            revision = rev
        )

