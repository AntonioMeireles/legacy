class tilda(AutoPackageRecipe):
    name = 'tilda'
    version = '0.9.5'

    buildRequires = [ 'glib:devel', 'vte:devel', 'pkgconfig:devel', 
                'libConfuse', 'libglade:devel', 'desktop-file-utils:runtime',
                'expat:devel', 'flex:runtime', 'libXrandr:devel' ]

#[ 'atk:devel', 'cairo:devel', 'fontconfig:devel', 
#                'freetype:devel', 'glib:devel', 'gtk:devel', 
#                'libpng:devel', 'ncurses:devel', 'pango:devel',
#                'vte:devel', 'zlib:devel', 'desktop-file-utils:runtime',
#                'pkgconfig:devel', 'libConfuse', 'expat:devel',
#                'flex:runtime', 'libglade:devel', 'libxml2:devel']

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
