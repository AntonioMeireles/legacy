class tilda(AutoPackageRecipe):
    name = 'tilda'
    version = '0.09.3'

    buildRequires = [ 'atk:devel',
                      'cairo:devel',
                      'fontconfig:devel',
                      'freetype:devel',
                      'glib:devel',
                      'gtk:devel',
                      'libpng:devel',
                      'ncurses:devel',
                      'pango:devel',
                      'vte:devel',
                      'xorg-x11:devel',
                      'zlib:devel',
                      'pkgconfig:devel',
                      'libConfuse'
                    ]
    def unpack(r):
        r.addArchive('http://umn.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
