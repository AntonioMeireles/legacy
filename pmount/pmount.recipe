class PMount(PackageRecipe):
   buildRequires = [ 'sysfsutils:devel','hal:devel' ]
	
   name = "pmount"
   version = "0.9.3"
   def setup(r):
	r.addArchive('http://www.piware.de/projects/%(name)s-%(version)s.tar.gz')
	r.Replace('/usr/local','%(prefix)s','Makefile')
	r.Make()
	r.MakeInstall()
	r.SetModes('%(bindir)s/pmount','%(bindir)s/pumount', 04755)
