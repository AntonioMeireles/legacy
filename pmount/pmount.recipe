class PMount(PackageRecipe):
   buildRequires = [ 'sysfsutils:devel' ]
	
   name = "pmount"
   version = "0.9.2"
   def setup(r):
	r.addArchive('http://www.snorp.net/files/packages/%(name)s_%(version)s.orig.tar.gz')
	r.Replace('/usr/local','%(prefix)s','Makefile')
	r.Make()
	r.MakeInstall()
	r.SetModes('%(bindir)s/pmount','%(bindir)s/pumount', 04755)
