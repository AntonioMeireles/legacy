class PMount(PackageRecipe):
   buildRequires = [ 'sysfsutils:devel','hal:devel', 'dbus:devel', 'glibc:devel' ]
	
   name = "pmount"
   version = "0.9.7"
   def setup(r):
	r.addArchive('http://www.piware.de/projects/pmount-%(version)s.tar.gz')
	r.Replace('/usr/local','%(prefix)s','Makefile')
	r.Replace('-o root -g root','','Makefile')
	r.Make()
	r.MakeInstall()
	r.SetModes('%(bindir)s/pmount','%(bindir)s/pumount', 04755)
	r.MakeDirs('%(destdir)s/media')
	r.ExcludeDirectories(exceptions=['/media'])
