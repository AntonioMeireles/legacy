class PMount(AutoPackageRecipe):
    buildRequires = [ 'sysfsutils:devel','hal:devel', 'dbus:devel', 'glibc:devel' ]

    name = "pmount"
    version = "0.9.9"

    def unpack(r):
        r.addArchive('http://ftp.debian.org/debian/pool/main/p/pmount/%(name)s_%(version)s.orig.tar.gz')
        r.Replace('-o root -g root','','src/Makefile.in')
