class PMount(CPackageRecipe):
   name = 'pmount'
   version = '0.9.13'

   buildRequires = [ 'sysfsutils:devel', 'hal:devel', 'dbus:devel',
	'pkgconfig:devel', 'gettext:runtime', 'perl:runtime',
	'perl-XML-Parser:perl']

   def setup(r):
        r.addArchive('http://www.piware.de/projects/pmount-%(version)s.tar.gz')

        r.Replace(' -o root -g root','', 'src/Makefile.*')

        r.Configure()
        r.Make()
        r.MakeInstall()
        r.SetModes('%(bindir)s/pmount','%(bindir)s/pumount', 04755)
