class Ifolder3(PackageRecipe):
    buildRequires = [ 'mono:devel', 'gtk-sharp:devellib',
			'simias:devellib' ]

    name = 'ifolder3'
    version = '3.1.5221.1'
    
    def setup(r):
        r.addArchive('http://ftp.novell.com/pub/forge/ifolder/client/current-head/20050809_0220/source/ifolder3-3.1.5221.1.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.config'])
