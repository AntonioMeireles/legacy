class Ifolder3(PackageRecipe):
    buildRequires = [ 'mono:runtime', 'gtk-sharp:runtime' ]

    name = 'ifolder3'
    version = '3.0.20050127'
    
    def setup(r):
	r.addArchive('http://ftp.novell.com/pub/forge/ifolder/client/stable/20050127_1223/source/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
