class rTorrent(AutoPackageRecipe):

    name = 'rtorrent'
    version = '0.7.1'

    buildRequires = [
        'curl:devel', 'libsigc++:devel', 'libstdc++:devel', 'libtorrent:devel',
        'ncurses:devel', 'openssl:devel', 'pkgconfig:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('http://libtorrent.rakshasa.no/downloads/')

