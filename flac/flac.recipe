class flac(CPackageRecipe):
    name = "flac"
    version = "1.1.2"
    buildRequires = ['gcc-c++:runtime', 'libstdc++:devel']

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('README', 'AUTHORS', 'COPYING.FDL', 'COPYING.GPL', 'COPYING.LGPL', 'COPYING.Xiph')
