class flac(CPackageRecipe):
    name = 'flac'
    version = '1.1.4'

    buildRequires = [ 'nasm:runtime', 'doxygen:runtime',
                      'docbook-utils:runtime', 'libogg:devel',
                      'libtool:runtime', 'libstdc++:devel', ]

    def setup(r):
        r.addArchive('mirror://sourceforge/flac/')

        r.Configure()

        # use the system version of libtool, the current version used
        # by flac does not handle multilib
        r.Make('LIBTOOL=%(bindir)s/libtool')
        r.MakeInstall('LIBTOOL=%(bindir)s/libtool')
