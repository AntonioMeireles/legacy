class flac(CPackageRecipe):
    name = "flac"
    version = "1.2.1"
    buildRequires = ['docbook-utils:runtime', 'doxygen:runtime',
'libogg:devel', 'gcc-c++:runtime', 'libstdc++:devel',
'nasm:runtime' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()

        #  Here are the docs
        r.Doc('README', 'AUTHORS', 'COPYING.FDL', 'COPYING.GPL', 'COPYING.LGPL', 'COPYING.Xiph')
