loadSuperClass('xorgcpackage.recipe')
class LibIce(XorgCPackageRecipe):
    name = 'libICE'
    version = '1.0.1'
    component = 'lib'

    buildRequires = [ 'xproto:devel', 'xtrans:devel' ]

    def setup(r):
        XorgCPackageRecipe.setup(r)

        r.Requires('xproto:devel', '%(libdir)s/pkgconfig/ice.pc')
