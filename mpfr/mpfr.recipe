class Mpfr(AutoPackageRecipe):
    name = 'mpfr'
    version = '2.2.1'

    buildRequires = [ 'gmp:devel', ]

    def unpack(r):
        r.addArchive('http://www.mpfr.org/mpfr-current/')

    def configure(r):
        r.Configure('--enable-shared --enable-thread-safe')

    def policy(r):
        r.TagSpec('info-file', '%(infodir)s/')
