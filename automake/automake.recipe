class Automake(AutoPackageRecipe):
    name = 'automake'
    version = '1.11'

    buildRequires = [ 'perl:runtime', 'perl:lib', 'autoconf:runtime', 'perl:devel', 'tetex:runtime']

    def unpack(r):
        r.addArchive('mirror://gnu/automake/')

    def policy(r):
        r.Requires('m4:runtime', '%(bindir)s/*')
        r.TestSuite('/tests/')
        r.TagSpec('info-file', '%(infodir)s/automake.info.gz')
