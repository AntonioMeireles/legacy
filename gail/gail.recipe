loadSuperClass('gnomepackage')
class Gail(GnomePackageRecipe):
    name = 'gail'
    version = '1.20.0'

    buildRequires = [ 'atk:devel', 'gtk:devel', # 'libgnomecanvas:devel',
        'glib:devel', 'libart_lgpl:devel', 'pango:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'libpng:devel', 'expat:devel' ]

    def setup(r):
        GnomePackageRecipe.setup(r)
        r.Requires('atk:devel', '%(libdir)s/pkgconfig/gail.pc')
        r.Requires('gtk:devel', '%(libdir)s/pkgconfig/gail.pc')
#        r.Requires('libgnomecanvas:devel', '%(libdir)s/pkgconfig/gail.pc')
