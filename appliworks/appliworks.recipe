class Appliworks(PackageRecipe):
    name = 'appliworks'
    version = '0.3.99'
    
    buildRequires = [ "glibc:devel" ]
    buildRequires.append('libgnome:devel')
    buildRequires.append('libgnomeui:devel')
    buildRequires.append('gtk:devel')  
    buildRequires.append('libxml2:devel')
    
    def setup(r):
	r.addArchive('http://appliworks.jondesign.net/downloads/nightlies/AppliWorks-%(version)s.tar.gz')
	r.mainDir('AppliWorks-%(version)s')
	r.Configure()
	r.Make()
	r.MakeInstall()
