loadRecipe('gnomepackage.recipe')
class Mergeant(GnomePackageRecipe):

    buildRequires = ['GConf:devel', 'ORBit2:devel', 'gnome-keyring:devel',
                     'gnome-vfs:devel', 'libart_lgpl:devel', 'libbonobo:devel',
                     'libbonoboui:devel', 'libgda:devel', 'libglade:devel',
                     'libgnome:devel', 'libgnomecanvas:devel', 'libgnomedb:devel',
                     'libgnomeui:devel', 'popt:devel','scrollkeeper:runtime',
                     'desktop-file-utils:runtime']

    name = 'mergeant'
    version = '0.66'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
        r.Replace('mergeant/mergeant.png','mergeant.png','mergeant.desktop.in')

    def install(r):
       GnomePackageRecipe.install(r)
       r.Install('mergeant.png','%(datadir)s/pixmaps/')
