class GoogleGadgets(AutoPackageRecipe):
    name = 'google-gadgets'
    version = '0.9.1'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'curl:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'librsvg:devel', 'libstdc++:devel', 'libtool:devel', 'libxcb:devel', 'libxml2:devel', 'openssl:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'spidermonkey:devel', 'xcb-util:devel', 'zip:runtime', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('http://google-gadgets-for-linux.googlecode.com/files/google-gadgets-for-linux-%(version)s.tar.gz')
        r.Replace('\-Werror','','configure')

    def configure(r):
        r.Configure('--with-smjs-libdir=%(libdir)s --with-smjs-incdir=%(includedir)s/js')
