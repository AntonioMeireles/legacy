loadSuperClass('cmakepackage')
class GoogleGadgets(CMakePackageRecipe):

    name = 'google-gadgets'
    version = '0.10.5'

    buildRequires = [
        'atk:devel', 'cairo:devel', 'curl:devel', 'dbus:devel',
        'desktop-file-utils:runtime', 'expat:devel', 'flex:runtime',
        'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'gst-plugins-base:devel', 'gstreamer:devel', 'gtk:devel', 'js:devel',
        'libICE:devel', 'libpng:devel', 'librsvg:devel', 'libSM:devel',
        'libstdc++:devel', 'libtool:devel', 'libtool:runtime', 'libX11:devel',
        'libxcb:devel', 'libXext:devel', 'libxml2:devel', 'libXrender:devel',
        'libXt:devel', 'nspr:devel', 'openssl:devel', 'pango:devel',
        'pixman:devel', 'pkgconfig:devel', 'qt4:devel',
        'shared-mime-info:runtime', 'startup-notification:devel',
        'xcb-util:devel', 'xdg-utils:runtime', 'xulrunner:devel', 'zip:runtime',
        'zlib:devel'
    ]

    def unpack(r):
        r.macros.archive_name = 'google-gadgets-for-linux'
        r.addArchive('http://google-gadgets-for-linux.googlecode.com/files/')

    def makeinstall(r):
        for d, pkg in (('gtk', 'gnome'), ('qt', 'kde')):
            pkg_name = '%(name)s-'+pkg
            r.MakeInstall(dir='hosts/'+d, package=pkg_name)
            r.MakeInstall(dir='ggadget/'+d, package=pkg_name)
            r.PackageSpec(pkg_name, '%(libdir)s/google-gadgets/modules/'+d+'.*')
        r.MakeInstall()

