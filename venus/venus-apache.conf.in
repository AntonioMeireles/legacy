# Planet rewrite rule.
#
# Planets configured in
#
#    %(servicedir)s/venus/planets.d/(planet_name)
#
# will be available via
#
#    /planet/(planet_name)
#
<Location /planet/>
    RewriteEngine on
    RewriteRule    ^/planet/(.*)/$            %(servicedir)s/venus/planets.d/$1/output/index.html [L]
    RewriteRule    ^/planet/(.*)/images/(.*)$ %(servicedir)s/venus/planets.d/$1/output/images/$2  [L]
    RewriteRule    ^/planet/(.*)/(.*)$        %(servicedir)s/venus/planets.d/$1/output/$2         [L]
<Location>

# Venus documentation. Feel free to comment out if you don't want it to
# show up on your site.
#
Alias /venus/docs/ %(thisdocdir)s/
