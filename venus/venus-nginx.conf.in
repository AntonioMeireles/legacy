# Planet rewrite rule.
#
# Planets configured in
#
#    /srv/venus/planets.d/(planet_name)
#
# will be available via
#
#    /planet/(planet_name)
#
location /planet/ {
    root       %(servicedir)s/venus/planets.d/;
    rewrite    ^/planet/(.*)/$            /$1/output/index.html break;
    rewrite    ^/planet/(.*)/images/(.*)$ /$1/output/images/$2  break;
    rewrite    ^/planet/(.*)/(.*)$        /$1/output/$2         break;
}

# Venus documentation. Feel free to comment out if you don't want it to
# show up on your site.
#
location /venus/docs/ {
    alias %(thisdocdir)s/;
    index index.html;
}
