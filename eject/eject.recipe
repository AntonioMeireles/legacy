class Eject(AutoPackageRecipe):
    name = 'eject'
    version = '2.1.0'

    buildRequires = [ 'gettext:runtime', 'texinfo:runtime', ]

    def unpack(r):
        r.addArchive('http://www.ibiblio.org/pub/linux/utils/disk-management/')
        r.addPatch('eject-2.0.12-autoclose.patch')

        # we don't patch foo.{in,am} and new autotools won't do the correct
        # thing due to this package being rather old, so lets just not bother
        # recreating the autofoo
        r.Replace('auto(make|conf).*', '', 'Makefile.in')
