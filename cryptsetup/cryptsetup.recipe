class CryptSetup(AutoPackageRecipe):
    name = 'cryptsetup'
    version = '1.0.5'

    buildRequires = ['gcc-c++:runtime', 'e2fsprogs:lib', 'device-mapper:devel', 'e2fsprogs:devel', 'gettext:runtime', 'intltool:runtime', 'libgcrypt:devel', 'libgpg-error:devel', 'popt:devel']

    def unpack(r):
        r.addArchive('http://luks.endorphin.org/source/%(name)s-%(version)s.tar.bz2')

