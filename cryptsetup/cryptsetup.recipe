class cryptsetup(AutoPackageRecipe):
    name='cryptsetup'
    version='1.0.6'

    buildRequires = [
        'device-mapper:devel',
        'e2fsprogs:devel',
        'gettext:runtime',
        'intltool:runtime',
        'libgcrypt:devel',
        'libgpg-error:devel',
        'popt:devel',
      ]

    def unpack(r):
        r.addArchive('http://cryptsetup.googlecode.com/files/')
