class GladeSharpCodeGenerator(PackageRecipe):
   buildRequires = [ 'gtk-sharp:devellib' ]
	
   name = "GladeSharpCodeGenerator"
   version = "20050720"
   def setup(r):
	r.addArchive('%(name)s.tar.bz2')
	r.Run('cd src && make && cd -')
	r.Install('bin/GtkGladeSharpCodeGenerator.exe','%(libdir)s/GladeSharpCodeGenerator/GladeSharpCodeGenerator.exe')
	r.addSource('GladeSharpCodeGenerator')
	r.Install('GladeSharpCodeGenerator','%(bindir)s/')
