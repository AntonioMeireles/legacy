class GupnpIGD(AutoPackageRecipe):
    name = 'gupnp-igd'
    version = '0.1.7'
 
    buildRequires = ['gupnp:devel', 'gtk-doc:runtime', 'pkgconfig:devel',
                     'python:devel', 'pygobject:devel', 'pygobject:runtime' ]
 
    def unpack(r):
        r.addArchive('http://www.gupnp.org/sites/all/files/sources/')
