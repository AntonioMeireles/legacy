class OverSiteServer(PackageRecipe):
    name = 'oversite_server'
    version = '0.1'
    
    def setup(r):
	r.addArchive('%(name)s-%(version)s.tar.bz2')
	r.MakeInstall()
	r.Requires('psycopg:python','/usr/lib/python2.4/site-packages/oversite_server/oversite_schema.py')
	r.Requires('python-sqlobject:python','/usr/lib/python2.4/site-packages/oversite_server/oversite_schema.py')
	r.Requires('mod_python:python','/usr/lib/python2.4/site-packages/oversite_server/oversite_schema.py')
	r.Requires('httpd:runtime','/usr/lib/python2.4/site-packages/oversite_server/oversite_schema.py')

