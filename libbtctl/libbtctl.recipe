class Libbtctl(PackageRecipe):
    buildRequires = [ "autoconf", "glib:devel", "gtk:doc", "openobex:devel", "bluez-libs:devel", "python", "pygtk:devel" ]

    name = "libbtctl"
    version = "0.4.1"

    def setup(r):
        r.addArchive("http://downloads.usefulinc.com/libbtctl/%(name)s-%(version)s.tar.gz")
	r.Configure()
	r.Make()
        r.MakeInstall()

