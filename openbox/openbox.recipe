class OpenBox(AutoPackageRecipe):
    name = 'openbox'
    version = '3.3.1'

    buildRequires = [
        'libICE:devel', 'libSM:devel', 'libX11:devel',
        'libXau:devel', 'libXdmcp:devel', 'libXext:devel',
        'libXt:devel', 'libXft:devel', 'libXinerama:devellib',
        'libXrandr:devel', 'libXrender:devel', 'imake:runtime',
        'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'libxml2:devel', 'pango:devel',
        'pkgconfig:devel', 'startup-notification:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://icculus.org/openbox/releases/')
