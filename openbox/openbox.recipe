class OpenBox(AutoPackageRecipe):
    name = 'openbox'
    version = '3.4.8rc1'

    buildRequires = [
        'autoconf:runtime', # ./bootstrap
        'automake:runtime', # ./bootstrap
        'cvs:runtime', # autopoint (gettext)
        'expat:devel',
        'fontconfig:devel',
        'freetype:devel',
        'gettext:runtime',
        'glib:devel',
        'intltool:runtime',
        'libICE:devel',
        'libSM:devel',
        'libtool:runtime',
        'libX11:devel',
        'libXau:devel',
        'libXcursor:devel',
        'libXdmcp:devel',
        'libXext:devel',
        'libXfixes:devel',
        'libXft:devel',
        'libXinerama:devellib',
        'libxml2:devel',
        'libXrandr:devel',
        'libXrender:devel',
        'pango:devel',
        'pkgconfig:devel',
        'python:devel',
        'pyxdg:python',
        'startup-notification:devel',
        'zlib:devel',
      ]

    def unpack(r):
        # From Git
        r.addGitSnapshot('git://git.icculus.org/mikachu/openbox')#, branch='3.4-working')
        # From tarball
        #r.addArchive('http://icculus.org/openbox/releases/')
        r.Run('./bootstrap')
