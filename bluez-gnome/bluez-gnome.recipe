class BluezGnome(AutoPackageRecipe):
    name = 'bluez-gnome'
    version = '0.14'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'hal:devel', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel', 'intltool:runtime', 'dbus-glib:runtime']
 
    def unpack(r):
        r.addArchive('http://bluez.sf.net/download/')

    def configure(r):
        r.Configure(' --disable-mime-update')

    def policy(r):
        r.Remove('%(datadir)s/applications/mimeinfo.cache')
