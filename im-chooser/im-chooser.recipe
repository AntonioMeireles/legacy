class ImChooser(AutoPackageRecipe):
    name = 'im-chooser'
    version = '1.3.0'
 
    packageSummary = 'Desktop Input Method configuration tool'

    buildRequires = [
        'GConf:devel',
        'ORBit2:devel',
        'atk:devel',
        'cairo:devel',
        'dbus-glib:devel',
        'dbus:devel',
        'desktop-file-utils:runtime',
        'fontconfig:devel',
        'freetype:devel',
        'gettext:runtime',
        'glib:devel',
        'gnome-vfs:devel',
        'gtk:devel',
        'imsettings:devel',
        'intltool:runtime',
        'libICE:devel',
        'libSM:devel',
        'libart_lgpl:devel',
        'libbonobo:devel',
        'libbonoboui:devel',
        'libgnome:devel',
        'libgnomecanvas:devel',
        'libgnomeui:devel',
        'pango:devel',
        'pkgconfig:devel',
        'popt:devel',
        ]
 
    patches = [
        'im-chooser-disable-status-icon.patch',
        ]

    def unpack(r):
        r.addArchive('https://fedorahosted.org/releases/i/m/im-chooser/')
        for patch in r.patches:
            r.addPatch(patch)
