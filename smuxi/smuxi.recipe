class Smuxi(AutoPackageRecipe):
    name = 'smuxi'
    version = '0.7.2.2+2cce3c0'
 
    buildRequires = [ 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-sharp:cil', 'gnome-sharp:devellib', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'intltool:runtime', 'log4net:cil', 'log4net:devellib', 'mono:cil', 'mono:devel', 'mono:runtime', 'nini:cil', 'nini:devellib', 'perl:runtime', 'pkgconfig:devel', 'smartirc4net:cil', 'smartirc4net:devellib', 'automake:runtime', 'autoconf:runtime', 'git:runtime', 'intltool:devel']
 
    def unpack(r):
        r.macros.tag=r.version.split('+')[-1]
        r.addGitSnapshot('git://gitorious.org/smuxi/smuxi.git', tag='%(tag)s')

    def configure(r):
        r.Configure(configureName='autogen.sh')
