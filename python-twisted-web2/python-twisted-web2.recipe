loadRecipe('python-twisted-package.recipe')
class PythonTwstedWeb2(PythonTwistedPackage):

    name = 'python-twisted-web2'
    version = '8.1.0'

    buildRequires = ['python-twisted-web:python', 'python:devel']

    docs = [ 'examples', 'howto' ]

    def init(r):
        r.macros.shortName = 'Web2'
        r.macros.Name = 'Twisted'
        PythonTwistedPackage.init(r)

    def policy(r):
        r.Move('%(prefix)s/lib/*', '%(libdir)s/')
        r.Requires('python-zopeinterface:python', '%(libdir)s/python2.4/site-packages/twisted/web2/__init__.py')
