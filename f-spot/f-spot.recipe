loadSuperClass('gnomepackage.recipe')
class FSpot(GnomePackageRecipe):
    name = 'f-spot'
    version = '0.4.1'
    buildRequires = [ 'GConf:runtime', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-sharp:lib', 'gphoto-suite:devellib', 'gtk-sharp:devellib', 'gtk-sharp:lib', 'gtk:devellib', 'lcms:devel', 'libexif:devel', 'libgnome:devellib', 'libgnomeui:devel', 'libjpeg:devel', 'libusb:devellib', 'mono:devel', 'mono:lib', 'mono:runtime', 'scrollkeeper:runtime', 'libxslt:runtime' ]

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addSource('f-spot_migrate.sh', dir='%(datadir)s/%(name)s/', mode=0755)
        r.Environment('MONO_SHARED_DIR', '/tmp')
