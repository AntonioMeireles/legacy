loadSuperClass('gnomepackage.recipe')
class FSpot(GnomePackageRecipe):

    buildRequires = [ 'gtk:devel', 'gtk-sharp:devellib',
        'gecko-sharp:devellib', 'mono:devel', 'libbonobo:devel',
        'GConf:devel', 'lcms:devel', 'desktop-file-utils:runtime',
        'glibc:devel', 'libjpeg:devel', 'dbus-sharp:lib', 'libgphoto2:devel',
        'gtk-sharp:lib', 'mono:lib', 'GConf:runtime', 'gettext:runtime',
        'mono:runtime', 'libgnome:devel', 'ORBit2:devel', 'gnome-sharp:lib',
        'perl:runtime', 'gtk:runtime', 'libexif:devel', ]

    name = 'f-spot'
    version = '0.3.0'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addSource('f-spot_migrate.sh')
        #Apply patch to make background black http://bugzilla.gnome.org/show_bug.cgi?id=348423
        r.addPatch('black.patch')

    def install(r):
        GnomePackageRecipe.install(r)
        r.Install('f-spot_migrate.sh', '%(datadir)s/%(name)s/')
