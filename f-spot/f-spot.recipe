loadSuperClass('gnomepackage')
class FSpot(GnomePackageRecipe):
    name = 'f-spot'
    version = '0.4.1'
    buildRequires = [ 'GConf:runtime', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'gtk-sharp:devellib', 'gtk-sharp:cil', 'gtk:devellib', 'lcms:devel', 'libexif:devel', 'libgnome:devellib', 'libgnomeui:devel', 'libjpeg:devel', 'libusb:devellib', 'mono:devel', 'mono:cil', 'mono:runtime', 'rarian:runtime', 'rarian:devel', 'libxslt:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime' ]

    extraConfig = ' --disable-scrollkeeper'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Environment('MONO_SHARED_DIR', '/tmp')
