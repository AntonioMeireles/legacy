loadSuperClass('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class FSpot(GnomePackageRecipe):

    buildRequires = [ 'gtk:devel', 'gtk-sharp:devellib',
	'gecko-sharp:devellib', 'mono:devel',
	'GConf:devel', 'lcms:devel', 'desktop-file-utils:runtime',
	'glibc:devel', 'libjpeg:devel', 'dbus-mono:lib',
	'gtk-sharp:lib', 'mono:lib' ]

    name = 'f-spot'
    version = '0.1.8'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.addSource('f-spot-import')

    def install(r):
	GnomePackageRecipe.install(r)
	r.Install('f-spot-import','%(bindir)s/')
