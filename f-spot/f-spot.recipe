loadRecipe('gnomepackage.recipe', label='conary.specifix.com@spx:devel')
class FSpot(GnomePackageRecipe):

    buildRequires = [ 'gtk:devel', 'gtk-sharp:devellib',
                        'gecko-sharp:devel', 'mono:devel',
			'GConf:devel', 'lcms:devel',
			'desktop-file-utils:runtime' ]

    name = 'f-spot'
    version = '0.0.12'

    def unpack(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('ftp://ftp.gnome.org/pub/GNOME/sources/%(name)s/%(majversion)s/%(name)s-%(version)s.tar.gz')
	
