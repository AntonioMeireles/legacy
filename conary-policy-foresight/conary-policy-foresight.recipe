class ConaryPolicyForesight(BuildPackageRecipe):
    name = 'conary-policy-foresight'
    version = '2.0.0'

    buildRequires = [ 'python:devel' ]

    def setup(r):
        r.addSource('PackageMetadata.py', dir='%(prefix)s/lib/conary/policy/')
        r.addSource('NoEggInfoDirectories.py', dir='%(prefix)s/lib/conary/policy/')
        r.CompilePython('%(prefix)s/lib/conary/policy')
