class PyPgSQL(CPackageRecipe):
    name = "pypgsql"
    version = "2.5.1"

    buildRequires = ['python-setuptools:python', 'postgresql:devel',
        'python:runtime', 'mx:python',
    ]

    def setup(r):
        r.macros.archive_name = 'pyPgSQL'
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.PythonSetup()
        r.Doc('examples')
