loadSuperClass('python')
class DjangoRestInterface(PackageRecipe):
    name = 'django-rest-interface'
    version = 'r81'

    def setup(r):
        r.addSvnSnapshot(
            'http://django-rest-interface.googlecode.com/svn/trunk/',
            revision='81')
        r.addSource('put-support.patch')
        r.addPatch('put-support.patch')

        r.macros.sitepkgs = Python.sitepkgs

        directory = '%(sitepkgs)s/django_restapi/'
        r.MakeDirs(directory)
        r.Install('django_restapi/*.py', directory)
        r.CompilePython(directory)
