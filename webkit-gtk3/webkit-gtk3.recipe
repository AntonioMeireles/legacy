# gtk3 build of WebKit
class WebkitGtk3(CPackageRecipe):
    name = 'webkit-gtk3'
    version = '1.4.2'
 
    buildRequires = [
        'atk:devel', 'bison:devel', 'bison:runtime', 'cairo:devel',
        'dbus-glib:devel', 'dbus:devel', 'enchant:devel',
        'flex:runtime', 'fontconfig:devel', 'freetype:devel',
        'gdk-pixbuf:devel', 'geoclue:devel', 'glib:devel', 'gperf:runtime',
        'gst-plugins-base:devel', 'gstreamer:devel', 'gtk-doc:runtime',
        'gtk3:devel',
        'icu:devel',
        'libX11:devel', 'libXrender:devel', 'libXt:devel', 'libjpeg:devel',
        'libpng:devel', 'libsoup:devel', 'libstdc++:devel', 'libxml2:devel',
        'libxslt:devel',
        'pango:devel', 'pkgconfig:devel', 'sqlite:devel', 'zlib:devel'
    ]
 
    def setup(r):
        r.addArchive('http://webkitgtk.org/webkit-%(version)s.tar.gz')
        r.addPatch('webkit-1.3.10-nspluginwrapper.patch')
        # Disabled because of https://bugs.webkit.org/show_bug.cgi?id=34846
        r.disableParallelMake()
        r.macros.cflags += ' -DLIBSOUP_I_HAVE_READ_BUG_594377_AND_KNOW_SOUP_PASSWORD_MANAGER_MIGHT_GO_AWAY '

        r.Configure(' --enable-svg --enable-video --enable-geolocation'
                    ' --enable-jit --with-gtk=3.0'
                    ' --enable-3D-transforms --enable-introspection')
        r.MakeDirs('DerivedSources/webkit')
        r.MakeDirs('DerivedSources/WebCore')
        r.Make()
        r.MakeInstall()
