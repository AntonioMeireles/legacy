# gtk3 build of WebKit
class WebkitGtk3(CPackageRecipe):
    name = 'webkit-gtk3'
    version = '1.6.3'
 
    buildRequires = [
        'atk:devel',
        'bison:devel', 'bison:runtime',
        'cairo:devel',
        'dbus-glib:devel', 'dbus:devel',
        'enchant:devel',
        'flex:runtime', 'fontconfig:devel',
        'freetype:devel',
        'gdk-pixbuf:devel', 'geoclue:devel',
        'gettext:runtime', 'glib:devel', 
        'gobject-introspection:devel', 'gperf:runtime',
        'gst-plugins-base:devel', 'gstreamer:devel',
        'gtk-doc:runtime', 'gtk3:devel',
        'icu:devel',
        'libX11:devel', 'libXrender:devel',
        'libXt:devel', 'libjpeg:devel',
        'libpng:devel', 'libsoup:devel',
        'libstdc++:devel', 'libxml2:devel',
        'libxslt:devel',
        'pango:devel', 'pkgconfig:devel',
        'sqlite:devel',
        'xz:runtime', 
        'zlib:devel'
    ]
 
    def setup(r):
        r.addArchive('http://webkitgtk.org/webkit-%(version)s.tar.xz')
        for p in ['webkit-1.3.10-nspluginwrapper.patch',
                  # BugÂ 50173: corrupted pointer in webkit_web_view_get_resource
                  'update_ref_counts_in_webkitwebview.patch',
        ]:
            r.addPatch(p)

        r.macros.cflags += ' -DLIBSOUP_I_HAVE_READ_BUG_594377_AND_KNOW_SOUP_PASSWORD_MANAGER_MIGHT_GO_AWAY '

        r.Configure(' --enable-svg --enable-video --enable-geolocation'
                    ' --enable-jit --with-gtk=3.0'
                    ' --enable-3D-transforms --enable-introspection')
        r.Make()
        r.MakeInstall()
