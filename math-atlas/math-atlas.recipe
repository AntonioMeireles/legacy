class MathAtlas(CPackageRecipe):
    name = 'math-atlas'
    version = '3.9.24'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('mirror://sourceforge/math-atlas/atlas3.9.24.tar.bz2')
        r.ManualConfigure('-Si cputhrchk 0', objDir = 'MyObj')
        r.Make(dir = 'MyObj')
        r.MakeInstall(dir = 'MyObj')
