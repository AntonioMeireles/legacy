class NotifyPython(PackageRecipe):
	
   buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus-glib:devellib',
        'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'glibc:devel', 'gtk:devel', 'libnotify:devel', 'libpng:devel',
        'pango:devel', 'xorg-x11:devel', 'zlib:devel' ]

   name = 'notify-python'
   version = '0.1.0'
   def setup(r):
	r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
