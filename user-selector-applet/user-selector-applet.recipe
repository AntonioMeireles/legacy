class UserSelectorApplet(PackageRecipe):

    buildRequires = [ 'gnome-panel:devel' ]


    name = 'user-selector-applet'
    version = '0.0.7'

    def setup(r):
	r.addArchive('http://esco.mine.nu/downloads/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.Doc('AUTHORS', 'NEWS', 'README', 'ChangeLog')
