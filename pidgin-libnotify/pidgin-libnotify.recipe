class PidginLibNotify(AutoPackageRecipe):
   buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel' ]

   name = "pidgin-libnotify"
   version = "0.12"

   def unpack(r):
        r.addArchive('mirror://sourceforge/gaim-libnotify/gaim-libnotify-0.12.tar.gz')
        r.addPatch('http://www.getdeb.net/archive/pi/pidgin-libnotify_0.12-1~getdeb1.diff.gz')
