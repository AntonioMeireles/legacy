class PidginLibnotify(AutoPackageRecipe):
    name = 'pidgin-libnotify'
    version = '0.14'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'python:bin', 'xcb-util:devel', 'zlib:devel', 'indicator-applet:devel', 'libpurple:devel', 'pidgin:devel']
 
    def unpack(r):
        r.addArchive('https://edge.launchpad.net/ubuntu/jaunty/+source/pidgin-libnotify/0.14-1ubuntu5/+files/pidgin-libnotify_0.14.orig.tar.gz')
        r.addPatch('https://edge.launchpad.net/ubuntu/jaunty/+source/pidgin-libnotify/0.14-1ubuntu5/+files/pidgin-libnotify_0.14-1ubuntu5.diff.gz')
	r.addPatch('show_button_fix.diff', sourceDir='debian/patches/')
	r.addPatch('indicate.patch', sourceDir='debian/patches/')
	r.addPatch('indicate-autotools.patch', sourceDir='debian/patches/')
	r.addPatch('force-load.patch', sourceDir='debian/patches/')
