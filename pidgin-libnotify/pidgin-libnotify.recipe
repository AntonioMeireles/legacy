class PidginLibnotify(AutoPackageRecipe):
    name = 'pidgin-libnotify'
    version = '0.14'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'python:bin', 'xcb-util:devel', 'zlib:devel', 'libindicate:devel', 'libdbusmenu-glib:devel', 'libpurple:devel', 'pidgin:devel', 'automake:runtime', 'autoconf:runtime', 'intltool:devel', 'libtool:runtime']
 
    def unpack(r):
        # r.addArchive('http://downloads.sourceforge.net/sourceforge/gaim-libnotify/')
        r.addArchive('https://launchpad.net/ubuntu/oneiric/+source/pidgin-libnotify/0.14-4ubuntu4/+files/pidgin-libnotify_0.14.orig.tar.gz')

        for p in [  'de_po.diff',
                    'indicate.patch',
                    'indicate-autotools.patch',
                    'force-load.patch',
                    'it_po.diff',
                    'best_name.patch', 
                    ]:
             r.addPatch(p)

	r.Run('autoreconf -fi')

    def configure(r):
        r.Configure(' --disable-deprecated '
                    ' --enable-static=no')
