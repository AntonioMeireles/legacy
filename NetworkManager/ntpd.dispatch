#!/bin/sh
case "$2" in
        "up")
        if `service ntpd status |grep running`;
        then
            /sbin/service ntpd restart
        else
            /sbin/service ntpd start
        fi
        RETVAL=$?
        ;;
        "down")
        /sbin/service ntpd stop
        RETVAL=$?
        ;;
        *)
        echo $"Usage $0 interface up|down"
        ;;
esac
exit $RETVAL
