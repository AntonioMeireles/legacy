class SimpleScan(CPackageRecipe):
    name = 'simple-scan'
    version = '2.31.1'
 
    buildRequires = [
            'GConf:devel', 
            'GConf:runtime', 
            'atk:devel', 
            'cairo:devel', 
            'dbus-glib:devel', 
            'dbus:devel', 
            'desktop-file-utils:runtime', 
            'fontconfig:devel', 
            'freetype:devel', 
            'gettext:runtime', 
            'glib:devel', 
            'gtk:devel', 
            'intltool:runtime', 
            'pango:devel', 
            'pkgconfig:devel', 
            'sane-backends:devel', 
            'udev:devel', 
            'zlib:devel',
            'gnome-doc-utils:devel'
                ]
 
    def setup(r):
        r.addArchive('http://launchpad.net/simple-scan/trunk/%(version)s/+download/')
        r.Configure('--disable-schemas-install')
        r.Make()
        r.MakeInstall()
