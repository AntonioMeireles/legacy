loadRecipe('gnomepackage.recipe')
class sabayon(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "sabayon"
    version = "0.17"

    def setup(r):
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/%(name)s//%(version)s/%(name)s-%(version)s.tar.gz')
        r.Configure('--with-distro=redhat')
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('README', 'ISSUES', 'COPYING', 'TODO', 'AUTHORS', 'NEWS')
