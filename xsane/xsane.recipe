class XSane(CPackageRecipe):
    name = 'xsane'
    version = '0.994'

    buildRequires = [ 'gtk:devel', 'libjpeg:devel', 'libtiff:devel',
        'libusb:devel', 'zlib:devel', 'sane-backends:devel', 'atk:devel',
        'glib:devel', 'libieee1284:devel', 'libpng:devel', 'pango:devel',
        'libX11:devel', 'libXext:devel', 'libXrender:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'pkgconfig:devel', ]

    def setup(r):
        r.addArchive('ftp://ftp.sane-project.org/pub/sane/xsane/')

        r.Configure('--enable-gtk2 --enable-gimp2 --enable-png'
            ' --enable-tiff --enable-jpeg')
        r.Make()
        r.MakePathsInstall()
