class Gmusicbrowser(CPackageRecipe):
    name = 'gmusicbrowser'
    version = '1.1.5'
 
    buildRequires = ['desktop-file-utils:runtime', 'gtk:runtime', 'perl-Compress-Zlib:perl', 'perl-Locale-gettext:perl', 'perl-Net-DBus:perl', 'perl:devel', 'perl-Glib:perl', 'perl-Gtk2:perl']
 
    def setup(r):
            r.addArchive('http://gmusicbrowser.org/download/')
            r.Make()
            r.MakeInstall()
            r.Requires('perl-Gtk2-TrayIcon:perl', '%(bindir)s/gmusicbrowser')

