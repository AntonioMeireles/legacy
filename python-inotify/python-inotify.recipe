class PythonInotify(CPackageRecipe):
    name = 'python-inotify'
    version = '0.7.1'
 
    buildRequires = ['glibc:devel', 'python:devel', 'python-setuptools']
 
    def setup(r):
		r.addArchive('http://downloads.sourceforge.net/pyinotify/pyinotify-%(version)s.tar.bz2')
		r.PythonSetup()
