		 'pixman:devel',
		 'pkgconfig:devel',
		 'pygobject:python',
		 'pygtk:python',
		 'python:devel',
		 'xcb-util:devel',
		 'zlib:devel',
         	 'notify-python:python',
           	 'pycairo:python', 
         	 'perl-XML-Parser',
