loadRecipe('gnomepackage.recipe')
class FileRoller(GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'pango:devel', 'gtk:devel',
       'libgnomeui:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel',
       'nautilus:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel',
       'cairo:devel', 'fontconfig:devel', 'freetype:devel',
       'gnome-keyring:devel' ,'gnome-vfs:devel', 'libart_lgpl:devel',
       'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel',
       'libgnome:devel', 'libgnomecanvas:devel', 'libpng:devel',
       'libxml2:devel', 'popt:devel', 'GConf:runtime', 'libxslt:runtime',
        'desktop-file-utils:runtime', 'gettext:runtime', 'glib:runtime',
        'gtk:runtime', 'perl:runtime', 'scrollkeeper:runtime' ]
                           
    name = 'file-roller'
    version = '2.18.4'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = '-g -Os'

    def setup(r):
        GnomePackageRecipe.setup(r)
        r.SetModes('%(libexecdir)s/%(name)s/*.sh', 0755)

