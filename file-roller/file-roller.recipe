loadRecipe('gnomepackage')
class FileRoller(GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'pango:devel', 'gtk:devel',
                      'libgnomeui:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel',
                      'nautilus:devel', 'GConf:devel', 'ORBit2:devel',
                      'atk:devel', 'cairo:devel', 'fontconfig:devel',
                      'freetype:devel', 'gnome-keyring:devel' ,'gnome-vfs:devel',
                      'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel',
                      'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel',
                      'libpng:devel', 'libxml2:devel', 'popt:devel',
                      'GConf:runtime', 'desktop-file-utils:runtime',
                      'gettext:runtime', 'glib:runtime', 'gnome-doc-utils:devel',
                      'gnome-doc-utils:runtime', 'gtk:runtime', 'perl:runtime',
                      'rarian:runtime', 'rarian:devel', 'gvfs:devel' ]

    name = 'file-roller'
    version = '2.28.2'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'

    def policy(r):
        r.SetModes('%(libexecdir)s/%(name)s/*.sh', 0755)

