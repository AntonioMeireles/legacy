class Znc(CPackageRecipe):
    name = 'znc'
    version = '0.080'
 
    buildRequires = ['c-ares:devel', 'libstdc++:devel', 'openssl:devel', 'perl:devel', 'pkgconfig:devel', 'perl:runtime', 'cyrus-sasl:devel', 'tcl:devel']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/znc/')
	r.Configure('--enable-extra --enable-sasl --enable-tcl')
	r.Make()
	r.MakeInstall()
