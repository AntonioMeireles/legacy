class MtPaint(AutoPackageRecipe):
 
    name = 'mtpaint'
    version = '3.30'
 
    buildRequires = ['gtk:devel', 'pkgconfig', 'expat:devel', 
                     'freetype:devel', 'libjpeg:devel', 'libtiff:devel', 'giflib:devel', 'desktop-file-utils:runtime']

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.addSource('mtpaint.desktop')
        r.Desktopfile('mtpaint.desktop')
        r.addSource('Mtpaint-logo.png', 'dest=/usr/share/applications/')
