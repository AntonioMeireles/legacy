class MtPaint(AutoPackageRecipe):
 
    name = 'mtpaint'
    version = '3.21'
 
    buildRequires = ['gtk:devel', 'pkgconfig', 'expat:devel', 
                     'freetype:devel', 'libjpeg:devel', 'libtiff:devel']

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

    def configure(r):
        r.Configure('--prefix=%(destdir)s/usr') 
