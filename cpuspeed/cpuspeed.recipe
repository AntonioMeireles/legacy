loadRecipe('rpmpackage')
class CPUSpeed(RPMPackageRecipe,AutoPackageRecipe):
    name = 'cpuspeed'
    version = '1.2.1'
    rpmRelease = '2.fc8'
    rpmURL = 'http://mirrors.kernel.org/fedora/development/source/SRPMS/'
    rpmPatches = ['warning.diff','idlenice.diff','cpuspeed-1.2.1-make.patch']
    buildRequires = ['chkconfig:config']
 
    
    def configure(r):
        pass
    def make(r):
        r.addSource('cpuspeed.init', rpm=r.srpm)
        r.addSource('cpuspeed.conf', rpm=r.srpm)
        r.addSource('cpuspeed.8', rpm=r.srpm)

        r.Make()
    def makeinstall(r):
        r.MakeDirs('%(sbindir)s','%(initdir)s','%(sysconfdir)s/sysconfig','%(mandir)s/man8/')
        r.MakeInstall()
        r.Install('cpuspeed.init', '%(initdir)s/cpuspeed')
        r.Install('cpuspeed.conf', '%(sysconfdir)s/sysconfig/cpuspeed.conf')
        r.Install('cpuspeed.8', '%(mandir)s/man8/cpuspeed.8')
