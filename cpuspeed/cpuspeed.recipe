loadRecipe('rpmpackage')
class CPUSpeed(RPMPackageRecipe,AutoPackageRecipe):
    name = 'cpuspeed'
    version = '1.2.1'
    rpmRelease = '3.fc8'

    rpmPatches = [ 'warning.diff',
                   'idlenice.diff',
                   'cpuspeed-1.2.1-make.patch'
                   ]
    rpmSources = [ 'cpuspeed.init',
                   'cpuspeed.conf',
                   'cpuspeed.8',
                   ]

    buildRequires = ['chkconfig:config']
 
    
    def configure(r):
        pass
    def make(r):
        r.Make()
    def makeinstall(r):
        r.MakeDirs('%(sbindir)s','%(initdir)s','%(sysconfdir)s/sysconfig','%(mandir)s/man8/')
        r.MakeInstall()
        r.Install('cpuspeed.init', '%(initdir)s/cpuspeed', mode = 0755)
        r.Install('cpuspeed.conf', '%(sysconfdir)s/sysconfig/cpuspeed.conf', mode = 0644)
        r.Install('cpuspeed.8', '%(mandir)s/man8/cpuspeed.8', mode = 0644)
