class codebrowser(PackageRecipe):

        buildRequires = ['gcc:devel',
                                        'glibc:devel', 
                                        'gtk:devel',
                                        'xorg-x11:devel',
                                        'zlib:devel',
                                        'cairo:devel',
                                        'glib:devel',
                                        'freetype:devel',
                                        'pango:devel',
                                        'libpng:devel',
                                        'atk:devel',
                                        'fontconfig:devel'
                                        ]


        
        name = "codebrowser"
        version = "2.2"
        
        
        def setup(r):
                r.addArchive('http://internap.dl.sourceforge.net/sourceforge/code-browser/code-browser-%(version)s-src.tar.gz')
		r.MakeDirs('%(bindir)s')
		r.Replace('/usr/local','%(prefix)s','Makefile')
		r.Replace('\$\(CONFIGDIR\)','$(DESTDIR)$(CONFIGDIR)','Makefile')
		r.Replace('code-browser \$\(bindir\)','code-browser $(DESTDIR)$(bindir)/code-browser','Makefile')
                r.Make()
                r.MakeInstall()
