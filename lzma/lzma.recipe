class Lzma(CPackageRecipe):
    name = 'lzma'
    version = '4.57'

    buildRequires = [ 'libstdc++:devel', ]

    def setup(r):
        r.macros.archive_version = r.version.replace('.', '')
        r.addArchive('http://downloads.sourceforge.net/sevenzip/'
                     'lzma%(archive_version)s.tar.bz2',
                     dir='%(name)s-%(version)s')
        r.Make('-f makefile.gcc'
               ' CXX_C="%(cc)s %(cflags)s"'
               ' CXX="%(cxx)s %(cxxflags)s %(cflags)s"',
               dir='CPP/7zip/Compress/LZMA_Alone')
        r.Install('CPP/7zip/Compress/LZMA_Alone/lzma', '%(bindir)s/')
        r.Doc('*.txt')
