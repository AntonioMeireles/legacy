loadSuperClass('kdepackage.recipe')
class aKode(kdePackageRecipe):

    name = 'akode'
    version = '2.0.2'

    buildRequires = [
        'alsa-lib:devel', 'flac:devel', #'libgcc:devel',
        'libmad:devel', 'libogg:devel', 'libsamplerate:devel',
        'libtool:devel', 'libvorbis:devel'
    ]

    def unpack(r):

        r.macros.archive_name = '30375-akode'
        r.addArchive('http://www.kde-apps.org/CONTENT/content-files/')

        # from gentoo
        r.addPatch('akode-2.0.2-amd64-flac-1.1.3.patch')

    def policy(r):

        r.Doc('AUTHORS', 'COPYING')

        r.CheckSonames(exceptions='%(libdir)s/libakode_.*')

