loadSuperClass('xfce-core-package.recipe')
class gtk_xfce_engine(xfceCorePackage):

    name = 'gtk-xfce-engine'
    version = '2.4.2'

    xfce = '4.4.2'

    def setup(r):
        xfceCorePackage.setup(r)
        r.addSource('gtk.xml', mode=0644, dir='/%(sysconfdir)s/xdg/xfce4/mcs_settings/')

    def policy(r):
        xfceCorePackage.policy(r)
        r.Requires('gtk-theme-foresight:data','%(sysconfdir)s/xdg/xfce4/mcs_settings/gtk.xml')
        r.Requires('tango-icon-theme:data','%(sysconfdir)s/xdg/xfce4/mcs_settings/gtk.xml')
