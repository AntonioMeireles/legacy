loadSuperClass('xfcepackage.recipe')
class gtkXfceEngine(XfcePackageRecipe):

    name = 'gtk-xfce-engine'
    version = '2.9.0+0a2d889'
    buildRequires = ['xfce4-dev-tools:runtime', 'autoconf:runtime',
        'automake:runtime', 'libtool:runtime', 'intltool:runtime', 'gtk3:devel']

    def unpack(r):
        r.macros.rev = r.version[-7:]
        r.addArchive('http://git.xfce.org/xfce/gtk-xfce-engine/snapshot/gtk-xfce-engine-%(rev)s.tar.bz2')
        r.Run('./autogen.sh')
