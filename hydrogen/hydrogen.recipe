class Hydrogen(AutoPackageRecipe):
    name = 'hydrogen'
    version = '0.9.5.1'

    buildRequires = [
        'alsa-lib:devel',
        'desktop-file-utils:runtime',
        'jack:devel',
        'libarchive:devel',
        'liblrdf:devel',
        'libsndfile:devel',
        'libsndfile:runtime',
        'libstdc++:devel',
        'libtar:devel',
        'pkgconfig:devel',
        'portmidi:devel',
        'qt4-core:devellib',
        'qt4-gui:devellib',
        'qt4:devel',
        'raptor:devel',
        'scons:runtime',
        'subversion:runtime',
        'zlib:devel',
    ]

    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/project/hydrogen/Hydrogen/0.9.5 Sources/hydrogen-%(version)s.tar.gz')
        r.addPatch('hydrogen-lrdf-pkg.patch')

    def make(r):
        r.Make('prefix=%(prefix)s libarchive=1 portaudio=0 portmidi=1 lash=0 oss=0', makeName='scons')

    def makeinstall(r):
        r.Run('scons DESTDIR=%(destdir)s install')

    def setup(r):
        r.unpack()
        r.make()
        r.makeinstall()
        r.policy()
