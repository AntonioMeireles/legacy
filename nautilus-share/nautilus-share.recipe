class nautilusShare(PackageRecipe):
    buildRequires = [ "nautilus:devel", "libdaemon:devel",
			"libglade:devel", "dbus:devel", 
			"gnome-icon-theme:runtime" ]

    name = "nautilus-share"
    version = "0.6.2"

    def setup(r):
        r.addArchive("http://gentoo.ovibes.net/nautilus-share/%(name)s-%(version)s.tar.gz")
        r.addSource("smbshared")
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.Install("smbshared","%(initdir)s/smbshared")
	r.Install("extra/emblem-shared.png","%(datadir)s/icons/gnome/48x48/emblems/")
