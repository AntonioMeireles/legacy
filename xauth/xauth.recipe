loadSuperClass('xorgpackage.recipe')
class Xauth(XorgPackageRecipe):
    name = 'xauth'
    version = '1.0.2'
    component = 'app'

    buildRequires = [ 'libICE:devel', 'libSM:devel', 'libXext:devel',
        'libXmu:devel', 'libXt:devel' ]

    def setup(r):
        # pulled from Fedora CVS (xorg-x11-xauth, rev. 1.1)
        r.addSource('mkxauth', dest='%(bindir)s/', mode=0755)

        # pulled from Fedora CVS (xorg-x11-xauth/mkxauth.man, rev. 1.1)
        r.addSource('mkxauth.1x', dest='%(mandir)s/man1/')

        XorgPackageRecipe.setup(r)
