class Powernowd(PackageRecipe):
    name = 'powernowd'
    version = '0.96'
    
    def setup(r):
	r.addArchive('http://www.deater.net/john/%(name)s-%(version)s.tar.gz')
	r.addSource('powernowd.init') # chkconfig-able initscript
        r.addPatch('ncpus.patch')

	r.Make()
	r.Install('powernowd', '%(sbindir)s/')
	r.Install('powernowd.init', '%(initdir)s/powernowd', mode=0755)
