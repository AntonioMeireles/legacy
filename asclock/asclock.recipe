class Asclock(AutoPackageRecipe):
    name = 'asclock'
    version = '2.0.12'

    buildRequires = [ 'ncurses:runtime', 'xorg-x11:devel', ]

    def unpack(r):
        r.addArchive('http://www.tigr.net/afterstep/download/%(name)s/')

    def configure(r):
        r.Run('echo classic | ./configure')

    def makeinstall(r):
        r.MakeInstall('install.man')
