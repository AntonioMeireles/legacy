class Asclock(AutoPackageRecipe):
    name = 'asclock'
    version = '2.0.12'

    buildRequires = [ 'ncurses:runtime', 'libX11:devel', 'libXext:devel',
                      'libXpm:devel', 'imake:runtime', ]

    def unpack(r):
        r.addArchive('http://www.tigr.net/afterstep/download/%(name)s/')
        r.addPatch('asclock.h.defs.patch')

    def configure(r):
        r.Run('echo classic | ./configure')

    def makeinstall(r):
        r.MakeInstall('install.man MANPATH=%(mandir)s')
