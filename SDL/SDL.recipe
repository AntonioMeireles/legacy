class SDL(AutoPackageRecipe):
    name = 'SDL'
    version = '1.2.11'

    buildRequires = [ 'nasm:runtime', 'alsa-lib:devel',
        'glibc:devel[!bootstrap]', 'glib:devel', 'pkgconfig:devel',
        'libXt:devel', 'libX11:devel', 'libXrandr:devel', 'libICE:devel',
        'libSM:devel', 'Mesa:devel', 'libusb:devel', 'libXext:devel',
        'libXrender:devel', 'automake:runtime', 'autoconf:runtime' ]

    def unpack(r):
        r.addArchive('http://www.libsdl.org/release/')
        r.addPatch('SDL-1.2.11-x11dyn64.patch')

    def configure(r):
        # XXX the libtool included in SDL does not use the correct
        # library search path on lib64 systems.  Trick libtool by setting
        # LD_LIBRARY_PATH.  The real fix should be in libtool, and then
        # we will use libtoolize or LIBTOOL=/usr/bin/libtool to get the fix.
        r.Environment('LD_LIBRARY_PATH', '%(libdir)s:%(essentiallibdir)s')
        r.Run('aclocal ; autoconf')
        r.Configure('--disable-video-svga --disable-video-ggi '
                    '--disable-video-aalib --disable-debug '
                    '--enable-sdl-dlopen --enable-dlopen '
                    '--enable-esd-shared --enable-alsa '
                    '--enable-arts ')

    def policy(r):
        r.Doc('WhatsNew', 'docs.html', 'docs/html/*', 'docs/index.html')
