loadSuperClass('gnomepackage')
class PyClutter(GnomePackageRecipe):

    name = 'pyclutter'
    version = '0.8.0'
    externalArchive = 'http://www.clutter-project.org/sources/%(name)s/0.8/%(name)s-%(version)s.tar.gz'

    buildRequires = [ 'clutter:devel', 'clutter-cairo:devel', 'clutter-gtk:devel', 'pygobject:python', 'pygtk:devel', 'pygtk:python', 'python:devel', 'clutter-gst:devel', 'gstreamer:devel', 'gst-python:devellib', 'gst-python:python', 'pycairo:devel', 'pycairo:python', 'Mesa:devel', 'pygobject:runtime' ]

