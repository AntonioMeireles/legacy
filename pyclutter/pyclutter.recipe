class Pyclutter(AutoPackageRecipe):
    name = 'pyclutter'
    version = '0.2.0'

    buildRequires = [ 'clutter:devel', 'glib:devel', 'gtk:devel',
        'python:devel', 'pango:devel', 'pkgconfig:devel', 'pygtk:devel',
        'pygtk:python', 'Mesa:devel' ]

    def unpack(r):
        r.addArchive('http://www.clutter-project.org/sources/%(name)s/0.2/'
                     '%(name)s-%(version)s.tar.bz2')
