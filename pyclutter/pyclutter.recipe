loadSuperClass('gnomepackage')
class PyClutter(GnomePackageRecipe):

    name = 'pyclutter'
    version = '0.8.0'
    externalArchive = 'http://www.clutter-project.org/sources/%(name)s/0.8/%(name)s-%(version)s.tar.gz'

    buildRequires = [ 'clutter:devel', 'clutter-cairo:devel', 'clutter-gtk:devel', 'pygobject:python', 'pygtk:devel', 'pygtk:python', 'python:devel', 'clutter-gst:devel', 'gstreamer:devel', 'gst-python:devellib', 'gst-python:python', 'pycairo:devel', 'pycairo:python' ]

    if Arch.x86_64:
        def build(r):
            r.Configure()
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'clutter-gst/Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'clutter-gtk/Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'clutter-cairo/Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'clutter/Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'examples/Makefile')
            r.Make()

