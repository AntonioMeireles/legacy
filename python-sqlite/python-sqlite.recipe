class PythonSqlite(PackageRecipe):
    name = 'python-sqlite'
    version = '2.3.4'

    buildRequires = ['python-setuptools:python', 'glibc:devel', 'sqlite:devel']

    def setup(r):
        r.addArchive('http://initd.org/pub/software/pysqlite/releases/2.3/2.3.4/pysqlite-2.3.4.tar.gz')
        r.PythonSetup()
