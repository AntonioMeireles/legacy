class PythonSqlite(PackageRecipe):
    name = 'python-sqlite'
    version = '2.3.5'

    buildRequires = ['elfutils:runtime','python-setuptools:python','gcc:devel',
'gcc:runtime', 'glibc:devel', 'python:devel','sqlite:devel']

    def setup(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://initd.org/pub/software/pysqlite/releases/'
                     '%(majversion)s/%(version)s/pysqlite-%(version)s.tar.gz')
        r.PythonSetup()
