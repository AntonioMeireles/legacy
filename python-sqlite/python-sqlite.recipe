class PythonSqlite(CPackageRecipe):
    name = 'python-sqlite'
    version = '2.4.0'
    buildRequires = [ 'python:devel', 'python-setuptools:python', 'sqlite:devel' ]

    def setup(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://initd.org/pub/software/pysqlite/releases/'
                     '%(majversion)s/%(version)s/pysqlite-%(version)s.tar.gz')
        r.PythonSetup()
