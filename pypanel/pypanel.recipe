class PyPanel(PackageRecipe):
    name = 'pypanel'
    version = '2.4'

    buildRequires = ['python-setuptools:python', 'freetype:devel', 'glibc:devel', 'imlib2:devel', 'libX11:devel', 'libXext:devel', 'libXft:devel', 'python-xlib:python', 'zlib:devel']

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/PyPanel-%(version)s.tar.gz')

        r.PythonSetup()
