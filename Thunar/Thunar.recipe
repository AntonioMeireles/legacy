loadSuperClass('xfcepackage')
class Thunar(XfcePackageRecipe):

    name = 'Thunar'
    version = '1.2.3'

    buildRequires = [
        'GConf:devel', 'desktop-file-utils:runtime', 'gamin:devel',
        'libexif:devel', 'libexo:devel', 'libjpeg:devel',
        'libxfce4util:devel', 'pcre:devel', 'startup-notification:devel',
        'xfce4-panel:devel', 'libexo:runtime', 'xfconf:devel', 'xfconf:runtime',
        'libnotify:devel', 'libxfce4ui:devel', 'udev:devel'
    ]

    patches = [
        'Thunar_fix_sorting_of_large_numbers.patch',
        'Thunar_fix_segfault_when_plugin_returns_null_suffix.patch',
        'Thunar_fix_crash_when_removing_ancestor.patch',
        'Thunar_fix_launchin_multiple_files.patch',
    ]
