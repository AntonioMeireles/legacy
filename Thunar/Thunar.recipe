loadSuperClass('xfcepackage')
class Thunar(XfcePackageRecipe):

    name = 'Thunar'
    version = '1.2.1'

    buildRequires = [
        'GConf:devel', 'desktop-file-utils:runtime', 'gamin:devel',
        'libexif:devel', 'libexo:devel', 'libjpeg:devel',
        'libxfce4util:devel', 'pcre:devel', 'startup-notification:devel',
        'xfce4-panel:devel', 'libexo:runtime', 'xfconf:devel', 'xfconf:runtime',
        'libnotify:devel', 'libxfce4ui:devel', 'udev:devel'
    ]

    patches = ['fix_format_string.patch',
        '1_fix_crash_thumbnailing_a_file_with_unknown_content_type.patch',
        '2_Fix_properties_dialog_crash_with_files_with_unknown_content_type.patch',
        '3_Fix_crash_when_opening_a_mountable_drive_with_no_media.patch',
        '4_Do_not_decrease_refcount_of_files_returned_by_GFileIcon.patch',
        '5_Make_the_clipboard_persistence.patch',
        '6_Treat_backup_files_as_hidden.patch',
        '7_Speed_up_initial_start_by_adding_the_Network_item_later.patch'
    ]
