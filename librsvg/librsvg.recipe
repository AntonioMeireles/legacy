loadSuperClass('gnomepackage.recipe')
class Librsvg(GnomePackageRecipe):

    buildRequires = [ 'libpng:devel', 'gtk:devel', 'libxml2:devel', 'popt:devel', 'freetype:devel', 'libart_lgpl:devel', 'libcroco:devel', 'libgsf:devel', 'libgnomeui:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'glib:devel', 'gnome-vfs:devel', 'libbonobo:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'pango:devel', 'docbook-utils:runtime', 'xulrunner:devel', 'gtk:runtime' ]
    
    name = 'librsvg'
    version = '2.16.1'

    docs = GnomePackageRecipe.docs
    docs.append('COPYING.LIB')

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.cflags = " -Os"
    
    def install(r):
        GnomePackageRecipe.install(r)
        r.Remove('%(libdir)s/gtk-2.0/*/{engines/libsvg.a,loaders/svg_loader.a}')
        r.Remove('%(sysconfdir)s/gtk-2.0/gdk-pixbuf.loaders')
        r.SetModes('%(bindir)s/*', 0755)

