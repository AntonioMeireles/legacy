loadSuperClass('gnomepackage')
class Librsvg(GnomePackageRecipe):
    name = 'librsvg'
    version = '2.16.1'

    buildRequires = [ 'atk:devel', 'fontconfig:devel', 'freetype:devel',
        'GConf:devel', 'glib:devel', 'gnome-vfs:devel', 'libart_lgpl:devel',
        'libbonobo:devel', 'libcroco:devel', 'libgnomecanvas:devel',
        'libgnomeprint:devel', 'libgnomeprintui:devel', 'libgnomeui:devel',
        'libgsf:devel', 'libpng:devel', 'libxml2:devel',
        'ORBit2:devel', 'pango:devel', 'popt:devel', 'cairo:devel',
        'gtk:runtime', 'docbook-utils:runtime' ]


    extraConfig = '--disable-mozilla-plugin'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.cflags = " -Os"

    def install(r):
        targetDir = '%%(libdir)s/firefox/plugins/'
        GnomePackageRecipe.install(r)
        r.Remove('%(libdir)s/gtk-2.0/*/{engines/libsvg.a,loaders/svg_loader.a}')
        r.Remove('%(sysconfdir)s/gtk-2.0/gdk-pixbuf.loaders')
        r.Move('%(libdir)s/mozilla/plugins/*', targetDir)
        r.Symlink('%s/*' % targetDir, '%(libdir)s/firefox/plugins/')
