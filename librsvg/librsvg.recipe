loadSuperClass('gnomepackage')
class Librsvg(GnomePackageRecipe):
    name = 'librsvg'
    version = '2.26.0'

    buildRequires = [
        'atk:devel', 'cairo:devel', 'docbook-utils:runtime', 'fontconfig:devel',
        'freetype:devel', 'GConf:devel', 'glib:devel', 'gnome-vfs:devel',
        'gtk:runtime', 'libart_lgpl:devel', 'libbonobo:devel', 'libcroco:devel',
        'libcroco:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel',
        'libgnomeprintui:devel', 'libgnomeprintui:devel', 'libgnomeui:devel',
        'libgsf:devel', 'libpng:devel', 'libxml2:devel', 'ORBit2:devel',
        'pango:devel', 'popt:devel', 'python:devel', 
    ]
    GnomePackageRecipe.extraConfig += ' --with-svgz --enable-gtk-theme --enable-gnome-vfs --disable-mozilla-plugin'

    def policy(r):
        r.Remove('%(libdir)s/gtk-2.0/*/{engines/libsvg.a,loaders/svg_loader.a}')
        r.TagSpec('gdk-pixbuf-loader', '%(libdir)s/gtk-2.0/%(version)s/loaders/')
