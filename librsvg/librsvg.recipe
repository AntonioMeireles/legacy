loadSuperClass('gnomepackage.recipe')
loadSuperClass('mozilla', label='conary.rpath.com@rpl:devel')
class Librsvg(GnomePackageRecipe):

    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend(['libpng:devel', 'gtk:devel', 'libxml2:devel', 'popt:devel',
			'freetype:devel', 'libart_lgpl:devel', 'libcroco:devel', 'libgsf:devel',
			'libgnomeui:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel',
			'cairo:devel', 'fontconfig:devel', 'glib:devel', 'gnome-vfs:devel',
			'libbonobo:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel',
			'libgnomeprintui:devel', 'pango:devel'])
    
    name = 'librsvg'
    version = '2.12.4'

    docs = GnomePackageRecipe.docs
    docs.append('COPYING.LIB')

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.cflags = " -Os"
    
    def install(r):
	targetDir = '%%(libdir)s/mozilla-%s/plugins/' % Mozilla.version
	GnomePackageRecipe.install(r)
	r.Remove('%(libdir)s/gtk-2.0/*/{engines/libsvg.a,loaders/svg_loader.a}')
	r.Remove('%(sysconfdir)s/gtk-2.0/gdk-pixbuf.loaders')
	r.Move('%(libdir)s/mozilla/plugins/*', targetDir)
	r.Symlink('%s/*' % targetDir, '%(libdir)s/firefox/plugins/')
