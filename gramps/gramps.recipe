class Gramps(PackageRecipe):
   buildRequires = [ 'gnome-python:devellib','gtk:devel',
			'pygtk:devel','python:devel' ]
	
   name = "gramps"
   version = "2.0.0"
   def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure('--disable-mime-install')
	r.Make()
	r.MakeInstall()
	r.Install('src/gramps.png','%(datadir)s/pixmaps/gramps.png')
