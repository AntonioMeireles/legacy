loadRecipe('gnomepackage=foresight.rpath.org@fl:2-devel')
class GrampsRecipe(GnomePackageRecipe):
    name = "gramps"
    version = "3.3.0"
    buildRequires = [
        'PyXML:python',
        'desktop-file-utils:runtime',
        'gettext:runtime',
        'gnome-python-extras:python',
        'gnome-python:python',
        'gtk:runtime',
        'intltool:runtime',
        'perl:runtime',
        'pycairo:python',
        'pygobject:python',
        'pygtk:python',
        'python:devel',
        'shared-mime-info:runtime',
        'pywebkitgtk:python',
    ]

    externalArchive = 'http://sourceforge.net/projects/gramps/files/Stable/%(version)s/gramps-%(version)s-1.tar.gz'
    extraConfig = GnomePackageRecipe.extraConfig + ' --disable-mime-install'
