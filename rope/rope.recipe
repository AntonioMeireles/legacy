class Rope(PackageRecipe):
    name = 'rope'
    version = '0.9.3'

    buildRequires = ['python-setuptools:python', 'mercurial:python', 'python:devel']

    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/r/%(name)s/%(name)s-%(version)s.tar.gz')
        r.PythonSetup()
