class Terminator(PackageRecipe):

    name = 'terminator'
    version = '0.13'

    buildRequires = [
        'python-setuptools:python',
        'python-ctypes:python',
        'gnome-python:python',
        'pygobject:python',
        'pygtk:python',
        'python:devel',
        'vte:python',
        'desktop-file-utils:runtime',
        'gettext:runtime'
                    ]

    def setup(r):
        #r.addBzrSnapshot('lp:terminator')
        r.addArchive('http://launchpad.net/%(name)s/trunk/%(version)s/+download/%(name)s_%(version)s.tar.gz')
        r.PythonSetup(data='--install-data=/usr')
        r.Remove('%(datadir)s/icons/hicolor/icon-theme.cache')
