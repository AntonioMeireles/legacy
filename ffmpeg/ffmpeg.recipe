class FFMpeg(AutoPackageRecipe):
    name = 'ffmpeg'
    version = '0.7_rc1'

    buildRequires = [
        'a52dec:devel', 'faac:devel', 'faad2:devel', 'freetype:devel', 'dirac:devel',
        'gsm:devel', 'imlib2:devel', 'lame:devel', 'libogg:devel', 'rtmpdump:devel',
        'libtheora:devel', 'libva:devel', 'libvdpau:devel', 'libvorbis:devel', 'SDL:devel', 'x264:devel',
        'xvidcore:devel', 'zlib:devel', 'pkgconfig:devel', 'alsa-lib:devel', 'bzip2:devel', 'jack:devel',
        'libX11:devel', 'libXext:devel', 'libXfixes:devel', 'libdc1394:devel', 'liboil:devel', 
        'libraw1394:devel', 'schroedinger:devel', 'speex:devel', 'openjpeg:devel', 'libvpx:devel',
        'git:runtime', 'yasm:runtime',
    ]

    def setup(r):
        r.macros.version = r.version.replace('_', '-')
        r.addArchive('http://www.ffmpeg.org/releases/')

        r.Replace('\-\-init-file', '--init_file', 'Makefile')

        config = ( ' --prefix=%(prefix)s'
                   ' --disable-stripping'
                   ' --disable-debug'
                   ' --disable-static'
                   ' --enable-gpl'
                   # ' --enable-version3'
                   ' --enable-avfilter'
                   ' --enable-bzlib'
                   ' --enable-swscale'
                   ' --enable-shared'
                   ' --enable-postproc'
                   ' --enable-pthreads'
                   ' --enable-libdc1394'
                   ' --enable-libvorbis'
                   ' --enable-libgsm'
                   #' --enable-libamr-nb'
                   #' --enable-libamr-wb'
                   ' --enable-libtheora'
                   ' --enable-libmp3lame'
                   ' --enable-libopenjpeg'
                   ' --enable-libspeex'
                   ' --enable-libschroedinger'
                   ' --enable-libx264'
                   ' --enable-libxvid'
                   # ' --enable-libfaac'
                   # ' --enable-nonfree'
                   ' --enable-x11grab'
                   ' --enable-libvpx'
                   ' --enable-vdpau'
                   ' --enable-vaapi'
                   ' --enable-libdirac'
                   ' --enable-librtmp'
                   ' --enable-libschroedinger'
                   ' --extra-cflags=\"%(cflags)s\"'
                   )
        if Arch.x86:
            config += ' --cpu=%(target)s'
        if Arch.x86 or Arch .x86_64:
            config += ' --enable-runtime-cpudetect'

        r.ManualConfigure(config, objDir = 'generic')

        r.Make(dir = 'generic')
        r.MakeInstall(dir = 'generic')
        
