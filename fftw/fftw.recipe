class fftw(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "fftw"
    version = "3.0.1"

    def setup(r):
        r.addArchive('http://www.fftw.org/%(name)s-%(version)s.tar.gz')
        r.Configure('--enable-float --enable-sse --enable-k7')
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'COPYRIGHT', 'INSTALL',
              'NEWS', 'README', 'TODO')
