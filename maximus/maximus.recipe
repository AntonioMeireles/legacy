class Maximus(AutoPackageRecipe):
    name = 'maximus'
    version = '0.4.0'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libXres:devel', 'libpng:devel', 'libwnck:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'startup-notification:devel', 'xcb-util:devel', 'zlib:devel', 'libXtst:devel', 'libfakekey:devel', 'inputproto:devel', 'autoconf:runtime','automake:runtime',  'libtool:runtime', 'libgnomeui:devel', 'gnome-common:devel', 'gnome-common:runtime']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/netbook-remix/trunk/1.0/+download/')
        r.addSource('maximus.desktop', dest='%(sysconfdir)s/xdg/autostart/')
        r.addPatch('ignore-windows.patch')
