class Maximus(AutoPackageRecipe):
    name = 'maximus'
    version = '0.3'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libXres:devel', 'libpng:devel', 'libwnck:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'startup-notification:devel', 'xcb-util:devel', 'zlib:devel', 'libXtst:devel', 'libfakekey:devel', 'inputproto:devel']
 
    def unpack(r):
        r.addArchive('http://launchpadlibrarian.net/17284771/maximus_0.3ubuntu12.tar.gz')
        r.addSource('maximus.desktop', dest='%(sysconfdir)s/xdg/autostart/')
        r.addPatch('ignore-windows.patch')
        r.Run('autoreconf -fi')
