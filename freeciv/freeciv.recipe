loadRecipe('gnomepackage.recipe')
class freeciv(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "freeciv"
    version = "2.0.0"

    def setup(r):
        r.addArchive('ftp://ftp.freeciv.org/freeciv/beta/%(name)s-%(version)s-rc1.tar.gz')
        r.mainDir('%(name)s-%(version)s-rc1')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'README')
