loadRecipe('gnomepackage.recipe')
class freeciv(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "freeciv"
    version = "2.0.1"

    def setup(r):
        r.addArchive('ftp://ftp.freeciv.org/pub/freeciv/stable/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Install the freeciv sound pack

        r.addSource('stdsounds.soundspec')
        r.Install('stdsounds.soundspec', '/$HOME/.freeciv/')
        r.addSource('amb18.wav')
        r.Install('amb18.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('bang10.wav')
        r.Install('bang10.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('cfx01.wav')
        r.Install('cfx01.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('cfx11.wav')
        r.Install('cfx11.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('chineseprc09.wav')
        r.Install('chineseprc09.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('foot3.wav')
        r.Install('foot3.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('gong10.wav')
        r.Install('gong10.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('guncock.wav')
        r.Install('guncock.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('inh2o.wav')
        r.Install('inh2o.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('metbrk.wav')
        r.Install('metbrk.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('plopp.wav')
        r.Install('plopp.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('r_exp3.wav')
        r.Install('r_exp3.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('rhino.wav')
        r.Install('rhino.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('wall01.wav')
        r.Install('wall01.wav', '/$HOME/.freeciv/stdsounds/')
        r.addSource('woodbrk.wav')
        r.Install('woodbrk.wav', '/$HOME/.freeciv/stdsounds/')

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'README')
