loadRecipe('gnomepackage.recipe')
class freeciv(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "freeciv"
    version = "2.0.1"

    def setup(r):
        r.addArchive('ftp://ftp.freeciv.org/pub/freeciv/stable/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'README')
