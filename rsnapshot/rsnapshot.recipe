class rsnapshot(AutoPackageRecipe):
    name = 'rsnapshot'
    version = '1.3.1'

    buildRequires = [
        'perl:runtime',
        'rsync:runtime',
        ]

    def unpack(r):
        r.addArchive('http://rsnapshot.org/downloads/')
        r.Requires('/usr/bin/rsync', '/usr/bin/rsnapshot')
