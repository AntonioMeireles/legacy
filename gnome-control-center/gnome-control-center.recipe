loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class GnomeControlCenter(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = [ 'esound:devel', 'pango:devel', 'gtk:devel', 'GConf:devel', 'atk:devel', 'gnome-desktop:devel', 'libgnomeui:devel', 'libgnome:devel', 'libbonobo:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'fontconfig:devel', 'desktop-file-utils:runtime', 'metacity:runtime', 'libxklavier:devel', 'alsa-lib:devel', 'nautilus:runtime', 'libgnomekbd:devel', 'eel:devel', 'ORBit2:devel', 'librsvg:devel', 'audiofile:devel', 'cairo:devel', 'gnome-panel:devel', 'evolution-data-server:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libart_lgpl:devel', 'libglade:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel', 'metacity:devel', 'nautilus:devel', 'popt:devel', 'startup-notification:devel', 'GConf:runtime', 'gettext:runtime', 'glib:runtime', 'gtk:runtime', 'perl:runtime', 'rarian:devel', 'rarian:runtime', 'intltool:runtime', 'gnome-doc-utils:devel', 'dbus-glib:devellib', 'dbus:devel', 'hal:devel', 'libXScrnSaver:devel', 'libXcursor:devel', 'libXfixes:devel', 'libXft:devel', 'libXrandr:devel', 'libXxf86misc:devel', 'shared-mime-info:runtime', 'libxslt:runtime', 'gnome-doc-utils:runtime', 'gnome-settings-daemon:devel', 'gnome-common:devel', 'gnome-common:runtime', 'libXcomposite:devel' ]

    name = 'gnome-control-center'
    version = '2.22.1'
    rpmRelease = '3.fc9'
    rpmName = 'control-center' 

    extraConfig = ' --disable-scrollkeeper --disable-update-mimedb --disable-static --enable-gstreamer --enable-alsa '

    rpmPatches = [
        'control-center-2.20.0-enable-sound-by-default.patch',
        'control-center-2.19.3-no-gnome-common.patch',
        # http://bugzilla.gnome.org/show_bug.cgi?id=497807
        'background-location.patch',
        # Fix some useless warnings in libslab
        # http://bugzilla.gnome.org/show_bug.cgi?id=439398
        # 'gnome-control-center-2.19.90-no-warnings.patch',
        # change default preferred apps to programs we ship
        'default-applications.patch',
        # we now get this below
        #'add-randr12-capplet.patch', 
        ]

#    rpmArchives = ['po.tar.gz']

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.addPatch('gnome-control-center-2.19.90-no-warnings.patch', dir='libslab')
        r.addPatch('http://archive.ubuntu.com/ubuntu/pool/main/g/gnome-control-center/gnome-control-center_2.22.1-0ubuntu4.diff.gz')

        r.Replace('-export-dynamic -L\/usr\/lib', '-export-dynamic', 'debian/patches/102_cc-randr12-makefile.patch')

        # hack for now, we need a way to detect if composite will work
        r.Replace('jockey-gtk --check-composite', 'true', 'debian/patches/95_desktop-effects-integration.patch')

        ubuntuPatches = [   '26_add_touchpad_to_mouse_settings.patch',
                            '28_fixup_touchpad_config.patch',
                            '95_desktop-effects-integration.patch',
                            '96_replace_ccsm_with_simple_ccsm.patch',
                            '99_autoreconf.patch',
                            '100_at_properties_readd_gksudo_disable_grab_toggle.patch',
                            '101_cc-add-randr12-capplet.patch',
                            '102_cc-randr12-makefile.patch',
                            '104_cc-randr12-enable-i18n.patch',
                            #'105_cc-randr12-ubuntu-colors.patch',
                            '106_cc-randr12-capplet-icon.patch',
                            '107_cc-randr12-check-version.patch',
                            '108_cc-randr12-capplet-font-layout.patch',
                            '109_cc-randr12-gui-shrinkage.patch',
                            '110_cc-randr12-revert-dialog.patch',
                            '112_cc-randr12-potfiles.patch',
                            '113_cc-randr12-fix-clone-checkbox.patch',
                            '113_cc-randr12-remove_g_prints.patch',
                            '114_cc-randr12-handle_rw_screen_new_failure.patch',
                            '115_cc-randr12-fix-rebuild-gui.patch',
                            '116_cc-randr12-handle-screen-NULL-in-on_screen_changed.patch',
                            '117_cc-randr12-disable-help-button.patch',
                            '118_cc-randr12-translate-extra-strings.patch',
                        ]
        for patch in ubuntuPatches:
            r.addPatch(patch, sourceDir='debian/patches/')

        # Work-around http://bugzilla.gnome.org/show_bug.cgi?id=427939
        r.Replace('@ENABLE_SK_TRUE@_s','_s','help/Makefile.in')
        r.Replace('-export-dynamic -L\/usr\/lib', '-export-dynamic', 'capplets/display/Makefile.in')

        for image in 'custom', 'extra', 'none', 'normal':
            r.Install('debian/visual-effects_'+image+'.svg', '%(datadir)s/%(name)s/pixmaps/')

    def policy(r):
        r.Transient('%(datadir)s/applications/mimeinfo.cache')

        # remove overlaps with  gnome-settings-daemon:data
        for f in [ 'apps_gnome_settings_daemon_default_editor.schemas',
                   'apps_gnome_settings_daemon_keybindings.schemas',
                   'apps_gnome_settings_daemon_screensaver.schemas',
                   'desktop_gnome_font_rendering.schemas',
                   ]:
            r.Remove('%(sysconfdir)s/gconf/schemas/' + f)

