loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class GnomeControlCenter(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = [ 'esound:devel', 'pango:devel', 'gtk:devel', 'GConf:devel', 'atk:devel', 'gnome-desktop:devel', 'libgnomeui:devel', 'libgnome:devel', 'libbonobo:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'fontconfig:devel', 'desktop-file-utils:runtime', 'metacity:runtime', 'libxklavier:devel', 'alsa-lib:devel', 'nautilus:runtime', 'libgnomekbd:devel', 'ORBit2:devel', 'librsvg:devel', 'audiofile:devel', 'cairo:devel', 'gnome-panel:devel', 'evolution-data-server:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libart_lgpl:devel', 'libglade:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel', 'metacity:devel', 'nautilus:devel', 'popt:devel', 'startup-notification:devel', 'GConf:runtime', 'gettext:runtime', 'glib:runtime', 'gtk:runtime', 'perl:runtime', 'rarian:devel', 'rarian:runtime', 'intltool:runtime', 'gnome-doc-utils:devel', 'dbus-glib:devellib', 'dbus:devel', 'hal:devel', 'libXScrnSaver:devel', 'libXcursor:devel', 'libXfixes:devel', 'libXft:devel', 'libXrandr:devel', 'libXxf86misc:devel', 'shared-mime-info:runtime', 'libxslt:runtime', 'gnome-doc-utils:runtime', 'gnome-settings-daemon:devel', 'gnome-common:devel', 'gnome-common:runtime', 'libXcomposite:devel', 'PolicyKit-gnome:devel', 'PolicyKit:devel', 'libcanberra:devel', 'gettext:devel' ]

    name = 'gnome-control-center'
    version = '2.27.91'
    rpmRelease = '6.fc12'
    rpmName = 'control-center' 

    extraConfig = ' --disable-scrollkeeper --disable-update-mimedb --disable-static --enable-aboutme'

    rpmPatches = [ 'control-center-2.19.3-no-gnome-common.patch',
                   'make-default.patch',
                   # https://bugzilla.redhat.com/show_bug.cgi?id=475804
                   'gcc-pam-fprintd-avail.patch',
                   # http://bugzilla.gnome.org/show_bug.cgi?id=545075
                   'slab-icon-names.patch',
                   # http://bugzilla.gnome.org/show_bug.cgi?id=555591
                   'default-layout-toggle.patch',
 
                   # http://bugzilla.gnome.org/show_bug.cgi?id=546036
                   'notification-theme.patch',
                   'mnemonic.patch',
                   'save-as.patch',
                   'slideshow-ui.patch',
                   
                   # call the Fedora/RHEL graphical passwd changing apps
                   'gnome-control-center-2.25.2-passwd.patch',
                   # 'gnome-control-center-2.25.2-gecos.patch',
                   # change default preferred apps to programs we ship
                   'default-applications.patch',
                   'shell-common-tasks.patch',
                   ]
    rpmSources = ['org.gnome.control-center.defaultbackground.policy']

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        #r.Run('cd capplets/about-me ; mv *png icons/')
        #r.Run('autoreconf -fi')

        # Work-around http://bugzilla.gnome.org/show_bug.cgi?id=427939
        r.Replace('@ENABLE_SK_TRUE@_s','_s','help/Makefile.in')

        # Add -Wno-error to silence gswitchit
        r.macros.cflags += ' -Wno-error '

    def policy(r):
        r.MakeDirs('%(datadir)s/gnome/wm-properties')
        r.ExcludeDirectories(exceptions = '%(datadir)s/gnome/wm-properties')

        r.Remove('%(datadir)s/gnome/autostart', recursive=True)
        r.Remove('%(datadir)s/gnome/cursor-fonts', recursive=True)

        r.Install('org.gnome.control-center.defaultbackground.policy', '%(datadir)s/PolicyKit/policy/', mode=0644)
        r.Transient('%(datadir)s/applications/mimeinfo.cache')
        
        for i in ['apps_gnome_settings_daemon_default_editor.schemas', 
                  'apps_gnome_settings_daemon_keybindings.schemas',
                  'apps_gnome_settings_daemon_screensaver.schemas',
                  'desktop_gnome_font_rendering.schemas' ]:
            r.Remove('%(sysconfdir)s/gconf/schemas/' + i)
