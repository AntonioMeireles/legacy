loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class GnomeControlCenter(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = [ 'esound:devel', 'pango:devel', 'gtk:devel', 'GConf:devel', 'atk:devel', 'gnome-desktop:devel', 'libgnomeui:devel', 'libgnome:devel', 'libbonobo:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'fontconfig:devel', 'desktop-file-utils:runtime', 'metacity:runtime', 'libxklavier:devel', 'alsa-lib:devel', 'nautilus:runtime', 'libgnomekbd:devel', 'eel:devel', 'ORBit2:devel', 'librsvg:devel', 'audiofile:devel', 'cairo:devel', 'gnome-panel:devel', 'evolution-data-server:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libart_lgpl:devel', 'libglade:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel', 'metacity:devel', 'nautilus:devel', 'popt:devel', 'startup-notification:devel', 'GConf:runtime', 'gettext:runtime', 'glib:runtime', 'gtk:runtime', 'perl:runtime', 'rarian:devel', 'rarian:runtime', 'intltool:runtime', 'gnome-doc-utils:devel', 'dbus-glib:devellib', 'dbus:devel', 'hal:devel', 'libXScrnSaver:devel', 'libXcursor:devel', 'libXfixes:devel', 'libXft:devel', 'libXrandr:devel', 'libXxf86misc:devel', 'shared-mime-info:runtime', 'libxslt:runtime', 'gnome-doc-utils:runtime', 'gnome-settings-daemon:devel', 'gnome-common:devel', 'gnome-common:runtime', 'libXcomposite:devel', 'PolicyKit-gnome:devel', 'PolicyKit:devel', 'libcanberra:devel', 'gettext:devel' ]

    name = 'gnome-control-center'
    version = '2.23.90'
    rpmRelease = '1.fc10'
    rpmName = 'control-center' 

    extraConfig = ' --disable-scrollkeeper --disable-update-mimedb --disable-static --enable-gstreamer --enable-alsa --enable-aboutme'

    rpmPatches = [ 'control-center-2.19.3-no-gnome-common.patch',
                   'make-default.patch',
                   # minor build breakage in gtk, will be fixed in the next gtk release
                   'gtkmarshal.patch',

                   # http://bugzilla.gnome.org/show_bug.cgi?id=545075 
                   'slab-icon-names.patch',

                   # call the Fedora/RHEL graphical passwd changing apps
                   'control-center-2.23.2-passwd.patch',
                   'control-center-2.23.2-gecos.patch',
                   # change default preferred apps to programs we ship
                   'default-applications.patch'
                   ]

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.Run('autoreconf')

        # Work-around http://bugzilla.gnome.org/show_bug.cgi?id=427939
        r.Replace('@ENABLE_SK_TRUE@_s','_s','help/Makefile.in')

        # Add -Wno-error to silence gswitchit
        r.macros.cflags += ' -Wno-error '

    def policy(r):
        r.Transient('%(datadir)s/applications/mimeinfo.cache')
