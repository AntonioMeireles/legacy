class Instantbird(CPackageRecipe):
    name = 'instantbird'
    version = '0.2'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('http://instantbird.com/downloads/0.2/instantbird-%(version)s.src.tgz')
        r.disableParallelMake()
        r.addPatch('fstat.patch')
        r.addPatch('xulrunner-1.9.2-gnomeflags.patch')
        r.Make('-f client.mk build')
        r.Make(dir='../obj-instantbird')
        r.MakeInstall(dir='../obj-instantbird/mozilla/dist')
