loadSuperClass('gnomepackage')
class Gtypist(GnomePackageRecipe):

    name = 'gtypist'
    version = '2.8.1'

    buildRequires = ['install-info:runtime', 'ncurses:devel',
        'perl:devel']
    
    def unpack(r):
        r.addArchive('http://ftp.gnu.org/gnu/%(name)s/')

