class SDLNet(AutoPackageRecipe):
    name = 'SDL_net'
    version = '1.2.6'
    buildRequires = [ 'SDL:devel', 'automake:runtime',
                      'autoconf:runtime', 'libtool:runtime' ]


    def unpack(r):
        r.addArchive('http://www.libsdl.org/projects/SDL_net/release/%(name)s-%(version)s.tar.gz')
        r.Run('libtoolize --force')
        r.Automake(autoMakeArgs='--add-missing --foreign')
