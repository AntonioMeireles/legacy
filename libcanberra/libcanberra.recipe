loadSuperClass('gnomepackage')
class LibCamberra(GnomePackageRecipe):

    buildRequires = [ 'alsa-lib:devel', 'gstreamer:devel', 'libogg:devel', 'libvorbis:devel', 'lynx:runtime', 'pulseaudio:devel',
                      'GConf:runtime']

    name = 'libcanberra'
    version = '0.14'
    rpmPatches = []

    extraConfig = '--disable-static --disable-rpath --enable-pulse --enable-alsa --enable-gstreamer  --enable-null --disable-oss --with-builtin=dso'

    def unpack(r):
        r.addArchive('http://0pointer.de/lennart/projects/%(name)s/')

