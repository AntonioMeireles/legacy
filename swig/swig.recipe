class Swig(AutoPackageRecipe):
    name = 'swig'
    version = '1.3.29'

    buildRequires = [
        'perl:runtime', 'python:devel', 'autoconf:runtime',
        'automake:runtime', 'gcc:devel', 'libstdc++:devel',
        'bison:runtime', 'perl:lib', 'tcl:devel', 'gcc-java:runtime', 
        'guile:devel', 'mono:runtime', 'ruby:runtime', 
        'sun-jdk:lib', 'sun-jre:lib']

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.addPatch('swig-1.3.23-pylib.patch')
        r.Run('./autogen.sh')

    def configure(r):
        # Break build loop.
        r.Configure('--without-php4')

    def policy(r):
        r.Doc('FUTURE', 'Doc/*')
