loadSuperClass('xorgpackage.recipe')
class LibXdamage(XorgPackageRecipe):
    name = 'libXdamage'
    version = '1.0.4'
    component = 'lib'

    buildRequires = [ 'damageproto:devel', 'fixesproto:devel',
        'libXfixes:devel', 'xextproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('damageproto:devel', 'libXfixes:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xdamage.pc')
