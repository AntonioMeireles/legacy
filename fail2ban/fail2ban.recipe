class Fail2Ban(PackageRecipe):
    name = 'fail2ban'
    version = '0.8.3'

    buildRequires = [
        'python:devel',
        'python-setuptools:runtime',
      ]

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.PythonSetup()

        r.addSource('logrotate.conf', dest='/etc/logrotate.d/%(name)s')
        r.Install('files/redhat-initd', '%(initdir)s/', mode=0755)
