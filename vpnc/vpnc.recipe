class Vpnc(PackageRecipe):
    buildRequires = ['libgcrypt:devel']
    name = "vpnc"
    version = "0.3.2"

    def setup(r):
        r.macros.site = 'http://www.unix-ag.uni-kl.de/~massar/vpnc/'
        r.addArchive('%(site)s/vpnc-%(version)s.tar.gz')

        r.Make()
        r.Install('vpnc', '%(sbindir)s/')
        r.Install('vpnc-{,dis}connect', '%(bindir)s/')
        r.Install('vpnc.8', '%(mandir)s/man8/')
        r.Create('%(sysconfdir)s/vpnc/default.conf', mode=0600)
        r.Create('%(sysconfdir)s/vpnc.conf', mode=0600)
