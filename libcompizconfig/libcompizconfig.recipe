class LibCompizCfg(CPackageRecipe):
    name = 'libcompizconfig'
    version = '20071707.git'

    buildRequires = ['pkgconfig:devel', 'autoconf:runtime',
                     'libtool:runtime', 'intltool:devel', 
                     'automake:runtime', 'libxslt:devel', 
                     'GConf:devel','glib:devel',
                     'compiz:devel', 'gettext:runtime', 'zlib:devel' ]

    def setup(r):
        r.addArchive('http://gitweb.opencompositing.org/?p=fusion/compizconfig/%(name)s;a=snapshot;h=HEAD')
        r.Configure(configureName='autogen.sh', dir = 'compizconfig/%(name)s')
        r.Make(dir = 'compizconfig/%(name)s')
        r.MakeInstall(dir = 'compizconfig/%(name)s')



