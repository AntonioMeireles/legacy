class Libcompizconfig(AutoPackageRecipe):
    name = 'libcompizconfig'
    version = '0.6.0'
    buildRequires = [ 'Mesa:devel', 'compiz:devel', 'glib:devel', 'intltool:runtime', 'libtool:devel', 'libtool:runtime', 'libxml2:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://releases.compiz-fusion.org/%(version)s/')
