class LibCompizCfg(CPackageRecipe):
    name = 'libcompizconfig'
    version = '20071707.git'

    buildRequires = [
        'compiz:devel', 'gettext:runtime', 'libxml2:devel',
        'perl:runtime', 'pkgconfig:devel', 'zlib:devel',
        'autoconf:runtime', 'automake:runtime', 'libtool:runtime',
        'libtool:devel', 'glib:devel', 'intltool:runtime',
        'intltool:devel', 'Mesa:devel', 'GConf:devel','glib:devel',
        'gettext:devel','libxslt:devel', 
        ] 


    def setup(r):
        r.addArchive('http://gitweb.opencompositing.org/?p=fusion/compizconfig/%(name)s;a=snapshot;h=HEAD')
        r.Configure(configureName='autogen.sh')
        r.Make()
        r.MakeInstall()



