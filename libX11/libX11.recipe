loadSuperClass('xorgcpackage')
class LibX11(XorgCPackageRecipe):
    name = 'libX11'
    version = '1.1.2'
    component = 'lib'

    buildRequires = [ 'bigreqsproto:devel', 'inputproto:devel', 'kbproto:devel',
        'libXau:devel', 'libXdmcp:devel', 'xcmiscproto:devel',
        'xextproto:devel', 'xf86bigfontproto:devel', 'xproto:devel',
        'xtrans:devel' ]

    extraConfig = ' --without-xcb'

    def unpack(r):
        XorgCPackageRecipe.unpack(r)
        r.addPatch('fdo-11222-XGetMotionEvents-proto.patch')
