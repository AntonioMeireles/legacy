class JiraRecipe(BuildPackageRecipe):
    name = 'jiranemo'
    version = '0.2.1'

    buildRequires = [
        'python:devel',
        'SOAPpy:python',
    ]

    def setup(r):
        r.addMercurialSnapshot('http://hg.rpath.com/jiranemo/')
        r.Make('libdir=%(libdir)s')
        r.MakeInstall('libdir=%(libdir)s')
        r.PackageSpec('pyjira', '.*/pyjira/')
