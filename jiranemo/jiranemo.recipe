class JiraRecipe(BuildPackageRecipe):
    name = 'jiranemo'
    version = '0.3'

    buildRequires = ['SOAPpy:python']

    def setup(r):
        r.addArchive('ftp://download.rpath.com/pub/jiranemo/')
        r.Make('libdir=%(libdir)s')
        r.MakeInstall('libdir=%(libdir)s')
        r.PackageSpec('pyjira', '.*/pyjira/')
