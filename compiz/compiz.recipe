loadSuperClass('rpmpackage', label='conary.rpath.com@rpl:devel')
class Compiz(RPMPackageRecipe, CPackageRecipe):
    name = 'compiz'
    version = '0.5.0'

    rpmUpVer = '0.3.6'
    rpmRelease = '7.fc7'

    buildRequires = [ 'GConf:runtime', 'Mesa:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXau:devel', 'libXcomposite:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXinerama:devellib', 'libXrandr:devel', 'libXrender:devel', 'libart_lgpl:devel', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'startup-notification:devel', 'libxml2:devel', 'pango:devel', 'glib:devel', 'gnome-desktop:devel', 'atk:devel', 'ORBit2:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'libgnomecanvas:devel', 'libwnck:devel', 'libgnomeui:devel', 'cairo:devel', 'gtk:devel', 'libbonobo:devel', 'metacity:devel', 'libgnome:devel', 'dbus:devel', 'control-center:devel', 'libpng:devel', 'gnome-keyring:devel', 'GConf:devel', 'librsvg:devel', 'dbus-glib:devel', 'fuse:devel' ]

    rpmPatches = [ 'aiglx-defaults.patch',
                   #'terminate-move.patch', 'restart.patch', 'tfp-server-extension.patch'
                   'composite-cube-logo.patch', ]





    def setup(r):
        r.addArchive('http://xorg.freedesktop.org/archive/individual/app/%(name)s-%(version)s.tar.bz2')
        r.addPatch('foresight-logo.patch')

        for p in r.rpmPatches:
            r.addPatch(p, rpm=r.srpm)

        r.Configure('--with-default-plugins --enable-gtk --enable-gconf --enable-librsvg')

        r.Make()
        r.MakeInstall()
        r.addSource('foresight-compiz-logo.png')
        r.Install('foresight-compiz-logo.png', '%(datadir)s/pixmaps/')
        r.Install('http://viewcvs.gentoo.org/viewcvs.py/*checkout*/gentoo-x86/x11-wm/compiz/files/compiz-start','%(bindir)s')

