class Compiz(CPackageRecipe):
    name = 'compiz'
    version = '20071708.git'

    buildRequires = ['GConf:runtime', 'Mesa:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'freetype:devel', 'glib:devel', 'gnome-desktop:devel', 'gnome-vfs:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXcomposite:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXinerama:devellib', 'libXrandr:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'librsvg:devel', 'libxml2:devel', 'Mesa:devellib', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'startup-notification:devel', 'zlib:devel', 'control-center:devel', 'expat:devel', 'fuse:devel', 'libwnck:devel', 'metacity:devel', 'gettext:runtime', 'autoconf:runtime', 'automake:runtime', 'intltool:devel', 'intltool:runtime', 'libtool:devel', 'libtool:runtime', 'Mesa:devellib', 'libXinerama:devel', 'libxslt:runtime', 'libxslt:devel']

    def setup(r):
        r.addArchive('http://gitweb.opencompositing.org/?p=compiz;a=snapshot;h=HEAD')
       
        # our fancy cube roof top
        r.addSource('foresight.rooftop.png')


        # we grab localization too ;) 
        r.addArchive('http://gitweb.opencompositing.org/?p=fusion/i18n;a=snapshot;h=HEAD')
        r.Run('./autogen.sh')
        r.Run('./autogen.sh', dir = '../fusion/i18n')
        r.Configure(
            ' DESTDIR=%(destdir)s'
            ' --enable-libsvg-cairo '
            ' --enable-librsvg --enable-gnome --enable-gnome-keybindings'
            ' --with-default-plugins="png,decoration,wobbly,fade,minimize,cube,rotate,zoom,scale,move,resize,place,dbus,switcher,screenshot"'
            ' --with-scale-corner=TopLeft ')
        r.Configure(dir = '../fusion/i18n')
        r.Make(dir = '../fusion/i18n')
        r.Make()
        r.MakeInstall()
        r.MakeInstall(dir = '../fusion/i18n')
        
        r.Copy('foresight.rooftop.png','%(datadir)s/%(name)s/freedesktop.png')




