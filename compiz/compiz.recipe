loadSuperClass('rpmpackage', label='conary.rpath.com@rpl:devel')
class Compiz(RPMPackageRecipe, CPackageRecipe):
    name = 'compiz'
    version = '0.3.6'
    rpmRelease = '2.fc7'

    buildRequires = [ 'GConf:runtime', 'Mesa:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXau:devel', 'libXcomposite:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXinerama:devellib', 'libXrandr:devel', 'libXrender:devel', 'libart_lgpl:devel', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'startup-notification:devel', 'libxml2:devel', 'pango:devel', 'glib:devel', 'gnome-desktop:devel', 'atk:devel', 'ORBit2:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'libgnomecanvas:devel', 'libwnck:devel', 'libgnomeui:devel', 'cairo:devel', 'gtk:devel', 'libbonobo:devel', 'metacity:devel', 'libgnome:devel', 'dbus:devel', 'control-center:devel', 'libpng:devel', 'gnome-keyring:devel', 'GConf:devel', 'librsvg:devel', 'dbus-glib:devel' ]

    rpmPatches = [ 'aiglx-defaults.patch', 'terminate-move.patch',
        'restart.patch', 'composite-cube-logo.patch', 
        'tfp-server-extension.patch' ]

    def setup(r):
        r.unpack()
        r.addPatch('foresight-logo.patch')
        r.Configure('--enable-librsvg --disable-annotate --with-default-plugins="cube,dbus,decoration,fade,gconf,gconf-dump,minimize,move,place,plane,resize,rotate,scale,switcher,water,wobbly,zoom"')

        r.Make()
        r.MakeInstall()
        r.addSource('foresight-compiz-logo.png')
        r.Install('foresight-compiz-logo.png', '%(datadir)s/pixmaps/')

        r.Remove('%(libdir)s/compiz/*screenshot*')
        r.Remove('%(libdir)s/compiz/*clone*')
