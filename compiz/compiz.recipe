class Compiz(CPackageRecipe):
    name = 'compiz'
    version = '0.6.2'
    buildRequires = ['GConf:runtime', 'Mesa:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'freetype:devel', 'glib:devel', 'gnome-desktop:devel', 'gnome-vfs:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXcomposite:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXinerama:devellib', 'libXrandr:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'librsvg:devel', 'libxml2:devel', 'Mesa:devellib', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'startup-notification:devel', 'zlib:devel', 'control-center:devel', 'expat:devel', 'libwnck:devel', 'metacity:devel', 'gettext:runtime', 'autoconf:runtime', 'automake:runtime', 'intltool:devel', 'intltool:runtime', 'libtool:devel', 'libtool:runtime', 'Mesa:devellib', 'libXinerama:devellib', 'libxslt:runtime', 'libxslt:devel']

    def setup(r):
        r.addArchive('http://xorg.freedesktop.org/archive/individual/app/')

        r.Configure(
            ' DESTDIR=%(destdir)s'
            ' --enable-libsvg-cairo '
            ' --enable-librsvg --enable-gnome --enable-gnome-keybindings'
            ' --with-default-plugins="png,decoration,wobbly,fade,minimize,cube,rotate,zoom,scale,move,resize,place,dbus,switcher,screenshot"'
            ' --with-scale-corner=TopLeft ')

        r.Make()
        r.MakeInstall()
        r.Move('%(bindir)s/compiz', '%(bindir)s/compiz.real')
        r.Symlink('%(libdir)s/window-manager-settings/libcompiz.so','%(libdir)s/libgnome-window-settings1/')
        r.Requires('compiz-manager:runtime', 'compiz:runtime')
