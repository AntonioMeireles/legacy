class Banshee1(AutoPackageRecipe):
    name = 'banshee-1'
    version = '0.98.1'
    buildRequires = [
        'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel',
        'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel',
        'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel',
        'gnome-sharp:cil', 'gnome-sharp:devellib', 'gnome-vfs:devel',
        'gst-plugins-base:devel', 'gstreamer:devel', 'gstreamer:runtime',
        'gtk-sharp:cil', 'gtk-sharp:devellib', 'gtk:runtime', 'libX11:devel',
        'libXrender:devel', 'libpng:devel', 'libtool:runtime', 'libxcb:devel',
        'libxml2:devel', 'mono-addins:cil', 'mono:cil', 'mono:devel',
        'mono:runtime', 'ndesk-dbus-glib:devellib', 'ndesk-dbus:cil',
        'ndesk-dbus:devellib', 'pango:devel', 'perl:runtime', 'pixman:devel',
        'pkgconfig:devel', 'taglib-sharp:cil', 'taglib-sharp:devellib',
        'xcb-util:devel', 'zlib:devel'
        ]

    def unpack(r):
        r.addArchive('http://banshee-project.org/files/banshee/')
        r.Replace('_Name=Banshee', '_Name=Banshee 1.x Preview', 'data/banshee-1.desktop.in.in')
#        r.Environment('TAGLIB_SHARP_LIBS', '%(libdir)s/mono/taglib-sharp/taglib-sharp.dll')

    def configure(r):
        r.Configure(' --with-trunk-readme --disable-docs --prefix=%(prefix)s/local')
