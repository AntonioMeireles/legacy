class Banshee1(AutoPackageRecipe):
    name = 'banshee-1'
    version = '0.99.1'
    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-sharp:cil', 'gnome-sharp:devellib', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gstreamer:runtime', 'gst-plugins-good:lib', 'gtk:devel', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'gtk:runtime', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libtool:runtime', 'libxcb:devel', 'libxml2:devel', 'mono-addins:cil', 'mono:cil', 'mono:devel', 'mono:runtime', 'mono-addins:devellib', 'mono-addins:cil', 'ndesk-dbus-glib:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus:cil', 'ndesk-dbus:devellib', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'sqlite:devel', 'taglib-sharp:cil', 'taglib-sharp:devellib', 'xcb-util:devel', 'zlib:devel', 'mono-zeroconf:devellib', 'podsleuth:devellib', 'podsleuth:lib', 'podsleuth:runtime', 'ipod-sharp:devellib', 'libmtp:devel', 'avahi-sharp:devellib', 'avahi-sharp:cil' ]

    def unpack(r):
        r.addArchive('http://banshee-project.org/files/banshee/')
        r.Replace('_Name=Banshee', '_Name=Banshee 1.x Preview', 'data/banshee-1.desktop.in.in')
#        r.addPatch('icon-name-fix.patch')
#        r.Environment('TAGLIB_SHARP_LIBS', '%(libdir)s/mono/taglib-sharp/taglib-sharp.dll')

    def configure(r):
        r.Configure(' --disable-docs --disable-avahi --enable-mtp --enable-ipod')

    def policy(r):
        r.Requires('mono-addins:cil', '%(bindir)s/%(name)s')
