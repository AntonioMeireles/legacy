class Dvdauthor(CPackageRecipe):
    name = 'dvdauthor'
    version = '0.6.14'
 
    buildRequires = ['ImageMagick:devel', 'bzip2:devel',
        'freetype:devel', 'fribidi:devel', 'gcc:runtime', 'glibc:devel',
        'libdvdread:devel', 'libjpeg:devel', 'libpng:devel', 'libtiff:devel',
        'libxml2:devel', 'gcc:devel', 'pkgconfig:devel', 'zlib:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel', 'libXt:devel']
 
    def setup(r):
        r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/dvdauthor/dvdauthor-0.6.14.tar.gz')
        r.Replace('define FT_FREETYPE_H <freetype/freetype.h>','define FT_FREETYPE_H <freetype2/freetype.h>','src/compat.h')
        r.Configure()
        r.Make()
        r.MakeInstall()
