class dvdauthor(AutoPackageRecipe):

    buildRequires = [ 'ImageMagick:devel', 'bzip2:devel',
        'freetype:devel', 'fribidi:devel', 'libdvdread:devel',
        'libjpeg:devel', 'libpng:devel', 'libtiff:devel',
        'libxml2:devel', 'xorg-x11:devel', 'zlib:devel' ]

    name = 'dvdauthor'

    version = '0.6.11'

    def unpack(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
