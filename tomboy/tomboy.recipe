loadRecipe('gnomepackage.recipe')
class Tomboy(GnomePackageRecipe):
    buildRequires = [ 'mono:runtime', 'gtk-sharp:devellib', 'atk:devel',
        'cairo:devel', 'fontconfig:devel', 'freetype:devel',
        'glib:devel', 'glibc:devel', 'gtk:devel', 'libart_lgpl:devel',
        'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel',
        'libpng:devel', 'libxml2:devel', 'pango:devel', 
        'zlib:devel', 'dbus-sharp:lib', 'gtk-sharp:lib', 'mono:lib',
        'GConf:runtime', 'binutils:runtime', 'gawk:runtime', 'gettext:runtime',
        'glibc:runtime', 'perl:runtime', 'pkgconfig:devel',
        'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrender:devel','libdmx:devel', 'libICE:devel', 'libSM:devel',
        'desktop-file-utils:runtime', 'galago-sharp:lib', 'gmime:lib',
        'gtk:runtime', 'scrollkeeper:runtime', 'gnome-doc-utils:devel',
        'gtkspell:devel', 'gnome-sharp:lib', 'expat:devel' ]


    name = 'tomboy'
    version = '0.4.1'
   
    extraConfig = '--disable-schemas-install --disable-scrollkeeper' 

    def unpack(r):
        r.addArchive('http://www.beatniksoftware.com/tomboy/releases/%(name)s-%(version)s.tar.gz')
