loadRecipe('gnomepackage')
class Tomboy(GnomePackageRecipe):
    name = 'tomboy'
    version = '0.10.1'
    buildRequires = [ 'GConf:runtime', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime',
                      'fontconfig:devel', 'freetype:devel', 'galago-sharp:devellib',
                      'galago-sharp:cil', 'glib:devel', 'gmime:devellib', 'gmime:lib', 'gmime:cil',
                      'gnome-sharp:devellib', 'gnome-sharp:cil', 'rarian:devel',
                      'gtk-sharp:devellib', 'gtk-sharp:cil', 'gtkspell:devellib', 'libart_lgpl:devel',
                      'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'libpng:devellib',
                      'libxml2:devel', 'mono:devel', 'mono:lib', 'mono:runtime', 'mono:cil',
                      'pango:devel', 'rarian:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime',
                      'ndesk-dbus:cil', 'ndesk-dbus:devellib',
                      'ndesk-dbus-glib:cil', 'ndesk-dbus-glib:devellib']

    extraConfig = '--disable-schemas-install --disable-scrollkeeper'

    def build(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        GnomePackageRecipe.build(r)
