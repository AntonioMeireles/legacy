loadRecipe('gnomepackage')
class Tomboy(GnomePackageRecipe):
    name = 'tomboy'
    version = '1.1.2'
    packageSummary = 'Tomboy is a desktop note-taking application for Linux and Unix'
    packageDescription = """
Tomboy is a desktop note-taking application for Linux and Unix.
Simple and easy to use, but with potential to help you organize the ideas and information you
deal with every day. The key to Tomboy's usefulness lies in the ability to
relate notes and ideas together. Using a WikiWiki-like linking system,
organizing ideas is as simple as typing a name.  Branching an idea off is easy
as pressing the Link button. And links between your ideas won't break, even when
renaming and reorganizing them.
"""

    buildRequires = [ 'GConf:runtime', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'galago-sharp:devellib', 'galago-sharp:cil', 'glib:devel', 'gmime:devellib', 'gmime:lib', 'gmime:cil', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'rarian:devel', 'gtk-sharp:devellib', 'gtk-sharp:cil', 'gtkspell:devellib', 'libart_lgpl:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'libpng:devellib', 'libxml2:devel', 'mono:devel', 'mono:lib', 'mono:runtime', 'mono:cil', 'pango:devel', 'rarian:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime', 'ndesk-dbus:cil', 'ndesk-dbus:devellib', 'mono-addins:cil', 'ndesk-dbus-glib:cil', 'ndesk-dbus-glib:devellib', 'gnome-desktop-sharp:cil', 'gnome-desktop-sharp:devellib', 'mono-addins:devellib' ]

    extraConfig = '--disable-schemas-install --disable-scrollkeeper --enable-dbus=yes --enable-sketching'

    def build(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        GnomePackageRecipe.build(r)
