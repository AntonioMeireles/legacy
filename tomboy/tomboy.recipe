loadRecipe('gnomepackage.recipe')
class Tomboy(GnomePackageRecipe):
    name = 'tomboy'
    version = '0.7.5'
    buildRequires = [ 'GConf:runtime', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'galago-sharp:devellib', 'galago-sharp:lib', 'glib:devel', 'gmime:devellib', 'gmime:lib', 'gnome-sharp:devellib', 'gnome-sharp:lib', 'gtk-sharp:devellib', 'gtk-sharp:lib', 'gtkspell:devellib', 'libart_lgpl:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'libpng:devellib', 'libxml2:devel', 'mono:devel', 'mono:lib', 'mono:runtime', 'pango:devel', 'scrollkeeper:runtime', 'libxslt:runtime' ]

    extraConfig = '--disable-schemas-install --disable-scrollkeeper'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        # Patched to send events that conduit can use
        r.addPatch('http://bugzilla.gnome.org/attachment.cgi?id=93496')

    def build(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        GnomePackageRecipe.build(r)
