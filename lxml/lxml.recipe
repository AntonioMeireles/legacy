loadInstalled('python')
class lxml(CPackageRecipe):
    name = 'lxml'
    version = '2.0.5'

    buildRequires = [ 'libxml2:devel', 'libxslt:devel', 'python:devel',
        'python-setuptools:python', 'zlib:devel'
    ]

    def setup(r):
        r.macros.pyver=Python.majversion
        r.addArchive('http://codespeak.net/lxml/')
        r.PythonSetup()
