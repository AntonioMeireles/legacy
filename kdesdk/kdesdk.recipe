loadSuperClass('kdecorepackage')
class kdeSDK(kdeCorePackageRecipe):

    name = 'kdesdk'
    version = '4.3.0+r1010424'

    buildRequires = [
        'apr-util:devel', 'apr:devel', 'binutils:devel', 'boost:devel',
        'libtool:devel', 'libxml2:devel', 'libxml2:runtime', 'libxslt:devel',
        'libxslt:runtime', 'perl-libwww-perl:perl', 'perl-libxml-enno:perl',
        'perl:devel', 'python:devel', 'ruby:runtime', 'strigi:devel',
        'subversion:devel'
    ]

    modules = [
        'cervisia',
        'kapptemplate',
        ('kate', 'kate', 'doc/kate-plugins'),
        'kbugbuster',
        'kcachegrind',
        'kmtrace',
        'kompare',
        'kpartloader',
        'kprofilemethod',
        'kstartperf',
        'kuiviewer',
        'lokalize',
        'umbrello',
        ('kdesdk-scripts', 'poxml', 'scripts'),
        ('kio-plugins-sdk', 'kioslave'),
        ('strigi-analyzer-sdk', 'strigi-analyzer'),
        ('kaddressbook-plugin-kdeaccounts', 'kdeaccounts-plugin'),
    ]

    def postUnpack(r):

        r.Replace('/usr/local/apr/bin', '%(prefix)s/', 'cmake/modules/FindSVN.cmake')

    def policy(r):

        r.PHPRequires(exceptions='.*')
        r.Replace('/usr/bin/env php', '%(bindir)s/php', '%(bindir)s/pprof2calltree')

