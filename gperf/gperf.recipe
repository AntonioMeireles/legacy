class Gperf(AutoPackageRecipe):
    name = 'gperf'
    version = '3.0.2'

    # needs info-file tag description from the install-info package
    buildRequires = [ 'gcc:devel', 'install-info:runtime', 'libstdc++:devel', ]

    def unpack(r):
        r.addArchive('http://ftp.gnu.org/pub/gnu/gperf/%(name)s-%(version)s.tar.gz')

    def policy(r):
        r.Remove('%(docdir)s/%(name)s/gperf.html')
        r.Doc('doc/gperf.html')
