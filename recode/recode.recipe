class Recode(AutoPackageRecipe):
    name = 'recode'
    version = '3.6'
    buildRequires = [ 'gettext:devel', 'gettext:runtime',
        'install-info:runtime', ]

    def unpack(r):
        r.addArchive('ftp://ftp.gnu.org/pub/gnu/recode/recode-3.6.tar.gz')
        r.macros.cflags = '-O2 -march=i686'
