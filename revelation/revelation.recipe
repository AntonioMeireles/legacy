class Revelation(AutoPackageRecipe):
    name = 'revelation'
    version = '0.4.11'
 
    buildRequires = ['GConf:config', 'GConf:runtime', 'cracklib:devel', 'cracklib:runtime', 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-python-desktop:python', 'gnome-python-extras:devellib', 'gnome-python:devellib', 'gnome-python:python', 'gtk:config', 'intltool:runtime', 'perl:runtime', 'pkgconfig:devel', 'pycrypto:python', 'pygobject:python', 'pygtk:devel', 'pygtk:python', 'python:devel', 'shared-mime-info:runtime']
 
    def unpack(r):
        r.addArchive('ftp://oss.codepoet.no/revelation/')

    def configure(r):
        r.Configure('--disable-mime-update --disable-desktop-update --disable-schemas-install')
