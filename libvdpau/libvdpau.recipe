class LibvdpauRecipe(AutoPackageRecipe):
    name = 'libvdpau'
    version = '0.3'

    buildRequires = [
        'autoconf:runtime',
        'automake:runtime',
        'gcc-c++:runtime',
        'libtool:runtime',
        'libX11:devellib',
        'pkgconfig:devel',
    ]


    def unpack(r):
        r.addArchive('http://cgit.freedesktop.org/~aplattner/%(name)s/snapshot/')
    def configure(r):
        r.Automake(preAutoconf='autoheader && libtoolize &&',
                   autoMakeArgs='--add-missing')
        AutoPackageRecipe.configure(r)
