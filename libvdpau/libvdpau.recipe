class LibvdpauRecipe(AutoPackageRecipe):
    name = 'libvdpau'
    version = '0.4.1'

    buildRequires = [
        'autoconf:runtime',
        'automake:runtime',
        'gcc-c++:runtime',
        'libtool:runtime',
        'libX11:devellib',
        'libXext:devel',
        'pkgconfig:devel',
    ]


    def unpack(r):
        r.addArchive('http://people.freedesktop.org/~aplattner/vdpau/')

    def configure(r):
        r.Configure('--disable-static --disable-documentation')
