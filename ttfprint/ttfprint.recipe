class Ttfprint(CPackageRecipe):
    name = 'ttfprint'
    version = '0.9'

    def setup(r):
        srpm = 'ftp://download.fedora.redhat.com/pub/fedora/linux/core/2/SRPMS/ttfprint-0.9-12.src.rpm'

        r.addArchive('ttfprint-0.9.tar.bz2', rpm=srpm)
        r.addPatch('ttfprint-0.9-gcc33.patch', rpm=srpm)
        r.addPatch('ttfprint-0.9-lvaluecastfix.patch', rpm=srpm)

        r.Make()
        r.Install('ttfprint', '%(bindir)s/')
        r.AutoDoc('USAGE.TXT')
