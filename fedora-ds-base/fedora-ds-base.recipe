class FedoraDsBase(CPackageRecipe):
    name = 'fedora-ds-base'
    version = '1.1.1'

    buildRequires = [ 'chkconfig:runtime', 'cyrus-sasl:devel', 'db:devel',
                      'icu:devel', 'libstdc++:devel', 'lm_sensors:devel', 
                      'mozldap:devel', 'mozilla-svrcore:devel',
                      'net-snmp:devel', 'nspr:devel', 'nss:devel',
                      'openldap:devel', 'openssl:devel', 'pam:devel',
                      'perl-mozldap:perl', 'perl:devel', 'perl:runtime',
                      'pkgconfig:devel']

    def setup(r):
        r.addArchive('http://directory.fedoraproject.org/sources/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()
