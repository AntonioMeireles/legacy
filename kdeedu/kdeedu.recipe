loadSuperClass('kdecorepackage')
class kdeEdu(kdeCorePackageRecipe):

    name = 'kdeedu'
    version = '3.5.10'

    verify = False

    buildRequires = [
        'boost:devel', 'pcre:devel'
    ]

    modules = [
        'blinken',
        'kalzium',
        'kanagram',
        'kbruch',
        'keduca',
        'kgeography',
        'khangman',
        'kig',
        'kiten',
        'klatin',
        'klettres',
        'kmplot',
        'kpercentage',
        'kstars',
        'ktouch',
        'kturtle',
        'kverbos',
        'kvoctrain',
        'kwordquiz',
        ('kdeedu', 'applnk'),
        ('kdeedu', 'libkdeedu')
    ]

    def postUnpack(r):

        r.Run("echo >> 'kwordquiz/src/kwordquizrc'")

