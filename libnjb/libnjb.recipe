class libnjb(PackageRecipe):
    buildRequires = [ 'glibc:devel', 'ncurses:lib', 'zlib:lib', 'binutils:runtime', 'doxygen:runtime', 'libusb:devel', 'ncurses:devel', 'zlib:devel' ]
    name = "libnjb"
    version = "2.2.5"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'FAQ', 'HACKING',
              'LICENSE', 'README')
