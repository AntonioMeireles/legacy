class libnjb(PackageRecipe):
    buildRequires = [ "glibc:devel", "ncurses:lib", "zlib:lib" ]
    name = "libnjb"
    version = "2.1.1"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'FAQ', 'HACKING',
              'LICENSE', 'README')
