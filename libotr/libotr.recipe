class LibOtr(AutoPackageRecipe):
    name = 'libotr'
    version = '3.0.0'

    buildRequires = ['libgcrypt:lib', 'libgpg-error:lib']

    def unpack(r):
        r.addArchive('http://www.cypherpunks.ca/otr/%(name)s-%(version)s.tar.gz')
