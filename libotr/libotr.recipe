class LibOtr(AutoPackageRecipe):
    name = 'libotr'
    version = '3.1.0'

    buildRequires = ['libgcrypt:lib', 'libgpg-error:lib', 'libgcrypt:devel', 'libgpg-error:devel', 'gcc-fortran:runtime']

    def unpack(r):
        r.addArchive('http://www.cypherpunks.ca/otr/')
