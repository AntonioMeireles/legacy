class Stetic(CPackageRecipe):
    name = 'stetic'
    version = 'svn.92437_01102008'
    buildRequires = [ 'pkgconfig:devel', 'mono:devel',
                      'gnome-sharp:cil', 'gtk-sharp:cil',
                      'gtk-sharp:devellib', 'mono:cil',
                      'mono:runtime']

    def setup(r):
        r.addSvnSnapshot('http://anonsvn.mono-project.com/source/trunk/%(name)s/')

        r.Environment('MONO_PATH', '%(destdir)s/%(libdir)s/%(name)s')
        r.Environment('MONO_SHARED_DIR', '/tmp')

        r.addAction('./autogen.sh')
        r.Configure()
        r.Make()
        r.MakeInstall()
