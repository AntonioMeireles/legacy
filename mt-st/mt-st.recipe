loadSuperClass('rpmpackage')
class MtSt(RPMPackageRecipe,CPackageRecipe):
    name = 'mt-st'
    version = '0.9b'
    rpmRelease = '2.2.2'

    buildRequires = [ 'userspace-kernel-headers:devel', ]

    rpmPatches = [ 'mt-st-0.7-config-files.patch', 'mt-st-0.7-SDLT.patch',
                   'mt-st-0.8-redhat.patch', ]

    def setup(r):
        r.unpack()
        r.addPatch('mtio.h.qic117')

        r.Make()
        r.MakeInstall('mandir=%(mandir)s', rootVar='RPM_BUILD_ROOT')
        r.AutoDoc('mt-st-0.*', 'stinit.def.examples')
