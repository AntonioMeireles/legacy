class gbuild(PackageRecipe):
    buildRequires=["glibc:devel"]

    name = "gbuild"
    version = "0.6"

    def setup(r):
        r.addArchive("http://cryon.com/gbuild/gbuild-0.6.tar.gz")
        r.Configure()
	r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'NEWS', 'README')
