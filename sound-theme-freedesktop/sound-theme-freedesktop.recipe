class SoundThemeFreedesktop(AutoPackageRecipe):
    name = 'sound-theme-freedesktop'
    version = '0.1'

    def setup(r):
        r.addArchive('http://0pointer.de/public/sound-theme-freedesktop.tar.gz')

        r.MakeDirs('%(datadir)s/sounds/freedesktop')
        r.Move('index.theme',  '%(datadir)s/sounds/freedesktop/')
        r.Move('stereo',  '%(datadir)s/sounds/freedesktop/')
