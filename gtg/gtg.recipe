class Gtg(PackageRecipe):

    name = 'gtg'
    version = '0.2.1'

    buildRequires = [
        'ConfigObj:python',
        'desktop-file-utils:runtime',
        'gnome-python:python',
        'pycairo:python',
        'pygtk:python',
        'python-setuptools:python',
        'python:devel',
        'pyxdg:python',
    ]

    def setup(r):
        r.addArchive('http://launchpad.net/gtg/0.2/%(version)s/+download/')
        r.PythonSetup(data='--install-data=%(prefix)s')
