class Gtg(PackageRecipe):

    name = 'gtg'
    version = '0.1.2'

    buildRequires = ['python-setuptools:python', 'ConfigObj:python', 'gnome-python:python', 'pycairo:python', 'python:devel', 'pyxdg:python', 'desktop-file-utils:runtime']

    def setup(r):
        r.addArchive('http://launchpad.net/gtg/trunk/%(version)s/+download/%(name)s-%(version)s.tar.gz')
        r.PythonSetup(data='--install-data=%(prefix)s')
