class AMIConfig(BuildPackageRecipe):
    name = 'amiconfig'
    version = '0.1.1'

    def setup(r):
        r.addArchive('ftp://download.rpath.com/%(name)s/')
        r.Make()
        r.MakeInstall()

        # Install rPath specific bits.
        r.Install('extra/ami.sysconfig', '%(sysconfdir)s/sysconfig/amiconfig')
        r.Install('commands/rpathamiconfig', '%(sbindir)s/', mode=0755)

        r.TagSpec('initscript', '%(initdir)s/.*')
