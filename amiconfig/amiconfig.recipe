loadInstalled('python')
class AMIConfig(BuildPackageRecipe, Python.VersionMixIn):
    name = 'amiconfig'
    version = '0.4.4'

    buildRequires = [ 'dnspython:python',
                      'python:devel' ]

    def setup(r):
        r.setDefaultPython()
        r.addMercurialSnapshot('http://hg.rpath.com/amiconfig',
            tag='%(name)s-%(version)s')
        r.Replace('python2.4', 'python', 'Make.rules')
        r.Make('libdir=%(libdir)s')
        r.MakeInstall('libdir=%(libdir)s')
        r.TagSpec('initscript', '%(initdir)s/.*')
