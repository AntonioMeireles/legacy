class AMIConfig(BuildPackageRecipe):
    name = 'amiconfig'
    version = '0.3.0'

    buildRequires = [ 'dnspython:python' ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/%(name)s/')
        r.Make()
        r.MakeInstall()
        r.TagSpec('initscript', '%(initdir)s/.*')
