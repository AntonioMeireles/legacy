loadRecipe('gnomepackage.recipe')
class Gnopernicus(GnomePackageRecipe):
    
    buildRequires = [ 'gnome-mag:devel', 'gnome-speech:devel',
       'intltool:runtime', 'GConf:devel', 'libgnome:devel',
       'libgnomeui:devel', 'at-spi:devel', 'scrollkeeper:runtime',
       'gettext:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
       'fontconfig:devel', 'freetype:devel', 'glib:devel',
       'gnome-keyring:devel', 'gnome-vfs:devel', 'libart_lgpl:devel',
       'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel',
       'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel',
       'pango:devel', 'popt:devel', 'GConf:runtime', 'desktop-file-utils:runtime', 'gtk:runtime' ]
    
    name = 'gnopernicus'
    version = '1.1.2'

    def install(r):
        GnomePackageRecipe.install(r)
        r.EtcConfig(exceptions='/etc/gnopernicus-.*/translation_tables/.*')
