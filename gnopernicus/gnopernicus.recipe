loadRecipe('gnomepackage.recipe')
class Gnopernicus(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires = GnomePackageRecipe.buildRequires + \
		    [ 'gnome-mag:devel',
		      'gnome-speech:devel', 'intltool:runtime', 
		      'GConf:devel', 'libgnome:devel', 'libgnomeui:devel', 
		      'at-spi:devel', 'scrollkeeper:runtime', 
		      'gettext:runtime' ]
    
    name = 'gnopernicus'
    version = '0.10.3'

    def install(r):
        GnomePackageRecipe.install(r)
        r.EtcConfig(exceptions='/etc/gnopernicus-.*/translation_tables/.*')
