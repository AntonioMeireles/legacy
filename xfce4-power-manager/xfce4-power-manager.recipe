loadSuperClass('xfcepackage.recipe')
class xfce4PowerManager(XfcePackageRecipe):

    name = 'xfce4-power-manager'
    version = '1.0.10'
    subtree = 'apps'

    buildRequires = [
        'libnotify:devel', 'libxfce4util:devel', 'libXrandr:devel',
        'libxfce4ui:devel', 'xfce4-panel:devel', 'xfconf:devel'
    ]

    patches = ['xfce4-power-manager-1.0.10-libnotify-0.7.patch',
               'brightness_is_uint.patch',
#               'only_dim_brightness_if_current_is_higher.patch',
               'xfce4-power-manager-1.0.10-modifiers.patch'
               ]
