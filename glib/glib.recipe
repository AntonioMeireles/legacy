class Glib(PackageRecipe):
    buildRequires = [ 'libtool:runtime', 'pkgconfig:devel', 'gettext:runtime', 'glibc:devel' ]

    name = 'glib'
    version = '2.9.5'
    
    def setup(r):
	r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/%(name)s/2.9/%(name)s-%(version)s.tar.bz2')
	r.profiles = ('glib2.sh', 'glib2.csh')
	for profile in r.profiles:
	    r.addSource(profile)

	for file in ('config.guess', 'config.sub'):
	    r.Run('[ -f /usr/share/libtool/%s ] && cp /usr/share/libtool/%s . ||:'
	             %(file, file))
	r.Configure('--disable-gtk-doc --enable-static')
	r.Make()
	r.MakeInstall()
        for f in r.profiles:
            r.Install(f, '%(sysconfdir)s/profile.d/', mode=0755)
