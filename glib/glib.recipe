class Glib(CPackageRecipe):
    name = 'glib'
    version = '2.14.5'

    buildRequires = [ 'libtool:runtime', 'pkgconfig:devel', 'gettext:runtime',
        'indent:runtime', 'perl:runtime', 'pcre:devel', ]
    if Use.builddocs:
        buildRequires.append('gtk-doc:runtime')

    def setup(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/%(name)s/%(majversion)s/')
        r.profiles = ('glib2.sh', 'glib2.csh')
        for profile in r.profiles:
            r.addSource(profile)

        for file in ('config.guess', 'config.sub'):
            r.Run('[ -f /usr/share/libtool/%s ] && cp /usr/share/libtool/%s . ||:'
                     %(file, file))

        extraConfigure = '--enable-static --enable-shared --with-pcre=system'
        if not Use.builddocs:
            extraConfigure += ' --disable-gtk-doc'

        r.Configure(extraConfigure)
        r.Make()
        r.MakeInstall()
        for f in r.profiles:
            r.Install(f, '%(sysconfdir)s/profile.d/', mode=0755)
        r.ComponentSpec('devel', '%(bindir)s/glib-.*')
