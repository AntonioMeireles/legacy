loadSuperClass('rpmpackage')
class Glib(RPMPackageRecipe,AutoPackageRecipe):
    name = 'glib'
    version = '2.18.4'
    rpmRelease = '1.fc10'
    rpmName = 'glib2'
    rpmPatches = [ #  https://bugzilla.redhat.com/show_bug.cgi?id=442835
                   # http://bugzilla.gnome.org/show_bug.cgi?id=528670
                   'gio-2.18-always-pass-fuse-file-uri.patch',
                   'glib-i386-atomic.patch'
                   ]

    buildRequires = [ 'gettext:runtime', 'indent:runtime', 'perl:runtime',
                      'pkgconfig:devel', 'pcre:devel', 'gamin:devel',
                      'autoconf:runtime','automake:runtime',
                      'libtool:runtime', 'intltool:runtime', 'python:devel',
                      'gtk-doc:runtime', 'gtk-doc:devel']

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.Run('autoreconf -fi')

        for profile in ('glib2.sh', 'glib2.csh'):
            r.addSource(profile, dest='%(sysconfdir)s/profile.d/', mode=0755)

    def configure(r):
        extraConfigure = ' --enable-static --enable-shared '
        extraConfigure += ' --disable-gtk-doc'

        r.Configure(extraConfigure)

    def policy(r):
        r.SetModes('%(bindir)s/gtester-report', 0755)
        r.ComponentSpec('devel', '%(bindir)s/glib-.*')

        r.NonBinariesInBindirs(exceptions = '%(bindir)s/gtester-report')
