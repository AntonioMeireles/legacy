loadSuperClass('xfcepackage')
class Xfce4XkbPlugin(XfcePackageRecipe):

    name = 'xfce4-xkb-plugin'
    version = '0.5.3.3'
    subtree = 'panel-plugins'
    patches = [
        'xfce4-xkb-plugin-0.5.2-xklavier-api.patch', 'xfce4-xkb-plugin-0.5.3.3-libxklavier5.patch',
    ]

    buildRequires = [
        'libXres:devel', 'librsvg:devel', 'libwnck:devel',
        'libxfce4util:devel', 'libxfcegui4:devel', 'libxklavier:devel',
        'libxml2:devel', 'startup-notification:devel', 'xfce4-panel:devel'
    ] 
