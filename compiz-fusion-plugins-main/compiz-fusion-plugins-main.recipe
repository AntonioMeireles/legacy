class CompizPluginsMain(CPackageRecipe):
    name = 'compiz-fusion-plugins-main'
    version = '20071707.git'

    buildRequires = ['pkgconfig:devel', 'libxslt:devel', 
                     'compiz:devel', 'gettext:runtime', 'zlib:devel', 
                     'autoconf:runtime', 'automake:runtime', 'libtool:runtime',
                     'intltool:devel', 
                     ]

    def setup(r):
        r.addArchive('http://gitweb.opencompositing.org/?p=fusion/plugins-main;a=snapshot;h=HEAD')
        r.Configure('--enable-schemas', configureName='autogen.sh', dir = 'plugins-main')
        r.Make(dir = 'plugins-main')
        r.MakeInstall(dir = 'plugins-main')



