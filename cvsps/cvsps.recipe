class Cvsps(CPackageRecipe):
    name = 'cvsps'
    version = '2.1'

    buildRequires = ['zlib:devel']

    def setup(r):
        r.addArchive('http://www.cobite.com/cvsps/')

        r.Replace('/man/man1', '/share/man/man1', 'Makefile')
        r.Make()
        r.MakeInstall('prefix=%(destdir)s/%(prefix)s')
