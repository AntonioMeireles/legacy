class Ssss(AutoPackageRecipe):
    name = 'ssss'
    version = '0.5'

    buildRequires = [ 'gmp:devel', 'xmltoman:runtime', ]

    def unpack(r):
        r.addArchive('http://point-at-infinity.org/%(name)s/')

    def configure(r):
        pass

    def makeinstall(r):
        r.Install('ssss-combine', 'ssss-split', '%(bindir)s/')
        r.Install('%(name)s.1', '%(mandir)s/man1/')
        r.Doc('%(name)s.1.html')
