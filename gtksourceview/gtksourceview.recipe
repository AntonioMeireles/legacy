loadSuperClass('gnomepackage.recipe')
class GTKSourceView(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'gtk:devel', 'gnome-vfs:devel', 'libxml2:devel',
       'gtk-doc:runtime', 'libgnomeprint:devel', 'libgnomeprintui:devel',
       'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel',
       'glib:devel', 'libart_lgpl:devel', 'libpng:devel', 'pango:devel', 'gettext:runtime', 'glib:runtime' ])
    
    name = 'gtksourceview'
    version = '1.7.1'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.cflags += " -Os"
