loadSuperClass('gnomepackage.recipe')
class GTKSourceView(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'gtk:devel', 'gnome-vfs:devel', 'libxml2:devel',
			   'gtk-doc:runtime', 'libgnomeprint:devel', 
			   'libgnomeprintui:devel' ])
    
    name = 'gtksourceview'
    version = '1.4.2'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.cflags += " -Os"
