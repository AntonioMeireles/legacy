class Nas(CPackageRecipe):
        name = 'nas'
        version = '1.7b'
        buildRequires = ['xorg-x11:devel', 'flex:runtime' ]

        def setup(r):
            r.addArchive('http://nas.codebrilliance.com/nas/%(name)s-%(version)s.src.tar.gz')
            r.Configure(subDir='config/')
            r.Make('World')
            r.MakeInstall()
            r.Move('%(prefix)s/X11R6/lib/X11/AuErrorDB',
                   '%(prefix)s/X11R6/%(lib)s/X11/AuErrorDB')
