class AllTray(AutoPackageRecipe):
    name = 'alltray'
    version = '0.7.3dev'
 
    buildRequires = ['GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel', 'libXres:devel', 'libgtop:devel', 'libwnck:devel', 'startup-notification:devel']

    def unpack(r):
        r.addArchive('https://code.launchpad.net/alltray/trunk/%(version)s/+download/%(name)s-%(version)s.tar.gz')
