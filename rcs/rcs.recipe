class Rcs(CPackageRecipe):
    name = 'rcs'
    version = '5.7'

    buildRequires = [ 'autoconf:runtime' ]

    def setup(r):
        srpm = 'ftp://download.fedora.redhat.com/pub/fedora/linux/core/2/SRPMS/rcs-5.7-24.src.rpm'
        r.addArchive('rcs-%(version)s.tar.gz', rpm=srpm)

        r.addPatch('rcs-5.7-stupidrcs.patch', rpm=srpm)
        r.addPatch('rcs-5.7-security.patch', rpm=srpm)
        r.addPatch('rcs-5.7-sameuserlocks.patch', rpm=srpm)

        r.Run('autoconf')
        r.Configure('--with-diffutils')
        r.Run('touch src/conf.h')

        r.Make()
        r.MakePathsInstall('man1dir=%(destdir)s/%(mandir)s/man1 '
                           'man5dir=%(destdir)s/%(mandir)s/man5')
        r.AutoDoc('REFS')
