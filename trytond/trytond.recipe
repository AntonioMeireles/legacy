loadRecipe("trytonpackage")
class Trytond(TrytonPackage):
    name = 'trytond'

    prebuild = ['MySQL-python:python', 'lxml:python', 'pyOpenSSL:python', 'python-dateutil:python', 'python-sqlite:python', 'python:devel', 'simplejson:python','Genshi:python', 'psycopg2:python', 'relatorio:python']

    deps = ["python-vatnumber:python","python-dateutil:python"]
    def setup(r):
        TrytonPackage.setup(r)
        r.Config("etc/trytond.conf")
