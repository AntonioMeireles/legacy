class Trytond(PackageRecipe):

    name = 'trytond'
    version = '1.4.5'

    buildRequires = ['python-setuptools:python','lxml:python', 'mx:python', 'pyOpenSSL:python', 'python-cssutils:python', 'python-sqlite:python', 'python:bin', 'python:devel']

    def setup(r):
        r.macros.subversion = r.version[:3]
        r.addArchive('http://downloads.tryton.org/%(subversion)s/')
        r.PythonSetup()
