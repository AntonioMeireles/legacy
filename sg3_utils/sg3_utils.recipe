loadSuperClass('rpmpackage')
class S3gUtils(RPMPackageRecipe,AutoPackageRecipe):

    buildRequires = [ 'glibc:devel' ]

    name = 'sg3_utils'
    version = '1.27'
    rpmRelease = '2.fc12'
    rpmSources = [ 'rescan-scsi-bus.sh-1.29' ]

    def configure(r):
        r.Configure('--disable-static')
        # Don't use rpath!
        r.Run(""" sed -i 's|^hardcode_libdir_flag_spec=.*|hardcode_libdir_flag_spec=""|g' libtool
sed -i 's|^runpath_var=LD_RUN_PATH|runpath_var=DIE_RPATH_DIE|g' libtool """)

    def policy(r):
        r.Install('rescan-scsi-bus.sh-1.29', '%(bindir)s/', mode = 0755)
