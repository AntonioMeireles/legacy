class S3gUtils(PackageRecipe):

    buildRequires = [ 'glibc:devel' ]

    name = 'sg3_utils'
    version = '1.21'

    def setup(r):
        r.addArchive('http://sg.torque.net/sg/p/%(name)s-%(version)s.tgz')
        r.Make('PREFIX=%(prefix)s')
        r.MakeInstall('PREFIX=%(prefix)s')
        r.Requires(exceptDeps=r'soname\:\ ELF32\/\/usr\/lib\/libsgutils\.so\.1\(SysV\ x86\)')

