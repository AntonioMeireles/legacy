loadSuperClass('kernelmodulepackage')
class NvidiaKernel(KernelModulePackageRecipe):
    name = 'nvidia-kernel'
    version = '319.17'

    buildRequires = [
        'patch:runtime',
        'which:runtime',
      ]

    def unpack(r):
        urlPrefix = 'http://us.download.nvidia.com/XFree86/'
        r.addSource(urlPrefix + 'Linux-x86/'
                '%(version)s/NVIDIA-Linux-x86-%(version)s.run',
                use=Arch.x86)
        r.addSource(urlPrefix + 'Linux-x86_64/'
                '%(version)s/NVIDIA-Linux-x86_64-%(version)s.run',
                use=Arch.x86_64)

        if Arch.x86:
            r.macros.arch = 'x86'
        elif Arch.x86_64:
            r.macros.arch = 'x86_64'

        r.addAction('sh NVIDIA-Linux-%(arch)s-%(version)s.run --extract-only')

        r.addPatch('conftest.patch', dir = 'NVIDIA-Linux-%(arch)s-%(version)s/kernel')

    def build(r):
        r.Make('SYSSRC=/lib/modules/%(kver)s/build module',
                dir='NVIDIA-Linux-%(arch)s-%(version)s/kernel')

    def install(r):
        r.Install('NVIDIA-Linux-*-%(version)s/kernel/nvidia.ko', 
                '/lib/modules/%(kver)s/kernel/drivers/video/')
        
    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')
