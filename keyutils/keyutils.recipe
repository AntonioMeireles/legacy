class KeyutilsRecipe(CPackageRecipe):
    name = 'keyutils'
    version = '1.2'

    def setup(r):
        r.addArchive('http://people.redhat.com/~dhowells/keyutils/')
        r.Make("NO_ARLIB=1 LIBDIR=%(essentiallibdir)s USRLIBDIR=%(libdir)s")
        r.MakeInstall("NO_ARLIB=1 LIBDIR=%(essentiallibdir)s USRLIBDIR=%(libdir)s")
