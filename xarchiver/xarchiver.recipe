loadSuperClass('xfcepackage')
class xarchiver(XfcePackageRecipe):

    name = 'xarchiver'
    version = '0.5.2'
    #svnUrl = 'http://svn.xfce.org/svn/xfce/%(name)s/trunk/'
    #version = '4.5.80'
    externalArchive = 'mirror://sourceforge/%(name)s/'
    buildRequires = [
        'desktop-file-utils:runtime'
    ]

    patches = ['xarchiver-0.5.2-fix_7z_support.patch', 'xarchiver-0.5.2-add_xz_support.patch']

    def setup(r):
        XfcePackageRecipe.setup(r)
        r.Replace('application/x-bzip2-compressed-tar;', 'application/x-bzip2-compressed-tar;application/x-xz;application/x-xz-compressed-tar;', 'xarchiver.desktop')
