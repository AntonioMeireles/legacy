class xArchiver(AutoPackageRecipe):

    name = 'xarchiver'
    version = '0.4.6'

    buildRequires = ['pkgconfig:devel', 'perl:runtime', 'gtk:devel', 'zlib:devellib']

    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/%(name)s/%(name)s-%(version)s.tar.bz2')
