class xArchiver(AutoPackageRecipe):

    name = 'xarchiver'
    version = '27427svn'

    buildRequires = [
        'pkgconfig:devel', 'perl:runtime', 'gtk:devel', 'zlib:devellib', 
        'desktop-file-utils:runtime', 'expat:devel', 'gettext:runtime',
        'intltool:runtime', 'intltool:devel', 'xfce4-dev-tools:runtime',
        'autoconf:runtime', 'libtool:runtime', 'automake:runtime',
        'subversion:runtime',
        ]

    def setup(r):
        r.macros.rev = r.version[0:-3]
        r.addSvnSnapshot('http://svn.xfce.org/svn/xfce/xarchiver/trunk', revision = '%(rev)s')
       # r.addArchive('http://downloads.sourceforge.net/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.Configure(configureName='./autogen.sh')
        r.Make()
        r.MakeInstall()
