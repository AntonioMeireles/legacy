loadSuperClass('xfcepackage')
class XfcePlacesPlugin(XfcePackageRecipe):

    name = 'xfce-places-plugin'
    version = '1.2.0'

    buildRequires = ['libxfcegui4:devel', 'libxfce4util:devel', 'libexo:devel', 'xfce4-panel:devel']


    def unpack(r):
        r.addArchive('http://archive.xfce.org/src/panel-plugins/xfce4-places-plugin/1.2/xfce4-places-plugin-1.2.0.tar.bz2')
        r.addPatch('01_port-to-exo-1.patch')
        r.addPatch('02_port-to-gio.patch')
        r.addPatch('00_fix-configure.patch')
