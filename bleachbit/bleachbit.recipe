class Bleachbit(PackageRecipe):

    name = 'bleachbit'
    version = '0.8.0'

    buildRequires = ['python-setuptools:python', 'gnome-python:python', 'notify-python:python', 'python:devel', 'desktop-file-utils:runtime', 'make:runtime', 'gettext:runtime', 'pygtk:python']

    def setup(r):
        r.addArchive('mirror://sourceforge/bleachbit/%(name)s-%(version)s.tar.bz2')
        #r.Run('make -C po local ')
        #r.PythonSetup()
        r.addPatch('prefix.patch')
        r.Make()
        r.MakeInstall()
