class Bleachbit(AutoPackageRecipe):

    name = 'bleachbit'
    version = '0.9.1'

    buildRequires = ['python-setuptools:python', 'gnome-python:python', 'notify-python:python', 'python:devel', 'desktop-file-utils:runtime', 'make:runtime', 'gettext:runtime', 'pygtk:python', 'simplejson:python', 'usermode:runtime']

    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/project/bleachbit/bleachbit/%(version)s/')
        r.addPatch('prefix.patch')
        
    def make(r):
        r.Make('-C po local') 
        r.PythonSetup('build')
        r.Run("""grep -l os=.windows. cleaners/*xml | xargs rm -f""")
        r.Remove('%(name)s/Windows.py')

    def makeinstall(r):
        r.MakeInstall('DESTDIR=%(destdir)s prefix=%(prefix)s')
#        r.Desktopfile('%(name)s.desktop', vendor='Foresight')

    def setup(r):
        r.unpack()
        r.make()
        r.makeinstall()
        r.policy()
