class Bleachbit(AutoPackageRecipe):

	name = 'bleachbit'
	version = '0.8.8'

	buildRequires = ['python-setuptools:python', 'gnome-python:python', 'notify-python:python', 'python:devel', 'desktop-file-utils:runtime', 'make:runtime', 'gettext:runtime', 'pygtk:python', 'simplejson:python']

	def unpack(r):
		r.addArchive('http://downloads.sourceforge.net/project/bleachbit/bleachbit/%(version)s/')
		r.addPatch('prefix.patch')

	def setup(r):
		r.unpack()
		r.make()
		r.makeinstall()
		r.policy()
