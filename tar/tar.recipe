class Tar(AutoPackageRecipe):
    name = 'tar'
    version = '1.20'

    # needs info-file tag description from the install-info package
    buildRequires = [ 'install-info:runtime', 'bison:runtime',
                      'gettext:runtime', 'intltool:runtime', ]

    def unpack(r):
        r.addArchive('mirror://gnu/tar/')
        r.addPatch('tar-1.13.18-manpage.patch')
        r.addPatch('tar-1.19-include-next.patch')
        r.addPatch('tar-1.20-sparse.patch') # RPL-2465

        #RPL-3219 https://bugzilla.redhat.com/attachment.cgi?id=395483
        r.addPatch('tar-1.20-CVE-2010-0624.patch')

    def make(r):
        r.Make('AR=%(target)s-ar')

    def policy(r):
        r.Install('tar.1', '%(mandir)s/man1/')
        r.Move('%(bindir)s/tar', '%(essentialbindir)s/')
        r.Symlink('tar', '%(essentialbindir)s/gtar')
        r.Remove('%(libexecdir)s/rmt') # in rmt package
