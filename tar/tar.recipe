class Tar(AutoPackageRecipe):
    name = 'tar'
    version = '1.19'

    # needs info-file tag description from the install-info package
    buildRequires = [ 'install-info:runtime' ]

    def unpack(r):
        r.addArchive('mirror://gnu/tar/')
        r.addPatch('tar-1.13.18-manpage.patch')
        r.addPatch('tar-1.19-include-next.patch')

        r.macros.bindir = r.macros.essentialbindir
        r.macros.libexecdir = r.macros.essentialsbindir

    def make(r):
        r.Make('AR=%(target)s-ar')

    def policy(r):
        r.Install('tar.1', '%(mandir)s/man1/')
        r.Symlink('tar', '%(essentialbindir)s/gtar')
        r.Remove('%(essentialsbindir)s/rmt') # in rmt package
