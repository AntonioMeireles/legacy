class Tar(AutoPackageRecipe):
    name = 'tar'
    version = '1.25'

    # needs info-file tag description from the install-info package
    buildRequires = [ 'acl:devel', 'attr:devel', 'autoconf:runtime',
                      'install-info:runtime', 'bison:runtime',
                      'gettext:runtime', 'intltool:runtime', 'rsh:runtime']

    def unpack(r):
        r.addArchive('mirror://gnu/tar/')
        r.addSource('tar.1')
        r.addPatch('tar-1.14-loneZeroWarning.patch')
        r.addPatch('tar-1.15.1-vfatTruncate.patch')
        r.addPatch('tar-1.24-xattrs.patch')
        r.addPatch('tar-1.17-wildcards.patch')
        r.addPatch('tar-1.22-atime-rofs.patch')
        r.addPatch('tar-1.23-oldarchive.patch')
        r.addPatch('tar-sigpipe.patch')
        r.addPatch('tar-1.25-listedincremental.patch')
        r.addPatch('tar-1.25-sparse-names.patch')
        r.Run('autoreconf -fi')


    def make(r):
        r.Make('AR=%(target)s-ar')

    def policy(r):
        r.Install('tar.1', '%(mandir)s/man1/')
        r.Move('%(bindir)s/tar', '%(essentialbindir)s/')
        r.Symlink('tar', '%(essentialbindir)s/gtar')
        r.Remove('%(libexecdir)s/rmt') # in rmt package
