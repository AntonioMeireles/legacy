loadSuperClass('gnomepackage')
class ClutterGtk(GnomePackageRecipe):

    name = 'clutter-gtk'
    version = '0.6.1'
    externalArchive = 'http://www.clutter-project.org/sources/%(name)s/0.6/%(name)s-%(version)s.tar.gz'

    buildRequires = [ 'gtk:devel', 'clutter:devel', 'expat:devel' ]

    if Arch.x86_64:
        def build(r):
            r.Configure()
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'clutter-gtk/Makefile')
            r.Replace('\-L\/usr\/lib ','-L%(libdir)s ', 'examples/Makefile')
            r.Make()
