loadSuperClass('gnomepackage')
class ClutterGtk(GnomePackageRecipe):

    name = 'clutter-gtk'
    version = '0.10.4'

    externalArchive = 'http://www.clutter-project.org/sources/%(name)s/0.10/%(name)s-%(version)s.tar.gz'

    buildRequires = [ 'Mesa:devel', 'gtk:devel', 'clutter:devel', 'expat:devel',
                      'gobject-introspection:devel', 'gobject-introspection:runtime',
                      'gir-repository:data' ]

    extraConfig = '--disable-gtk-doc --enable-introspection'
