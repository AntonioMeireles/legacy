class Jwhois(AutoPackageRecipe):
    name = 'jwhois'
    version = '4.0'
    # needs info-file tag description from the install-info package
    buildRequires = [ 'install-info:runtime' ]

    def unpack(r):
        r.addArchive('mirror://gnu/jwhois/')

    def configure(r):
        r.Configure('--without-cache')

    def policy(r):
        r.Symlink('jwhois', '%(bindir)s/whois')
        r.Symlink('jwhois.1', '%(mandir)s/man1/whois.1')
