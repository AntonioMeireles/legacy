class pygame(PackageRecipe):
    buildRequires = [ "glibc:devel", "Numeric:devel", "SDL:devel",
                      "SDL_mixer:devel", "SDL_ttf:devel", "SDL_image:devel" ]
    name = "pygame"
    version = "1.6"

    def setup(r):
        r.addArchive('http://www.pygame.org/ftp/%(name)s-%(version)s.tar.gz')
        r.Run('python setup.py install --root=%(destdir)s')

#       Here are the docs

        r.Doc('WHATSNEW')

