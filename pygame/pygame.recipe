class pygame(PackageRecipe):
    buildRequires = [ 'SDL:devel', 'SDL_image:devel', 'SDL_mixer:devel', 'SDL_ttf:devel', 'glibc:devel' ]
    name = "pygame"
    version = "1.7.1"

    def setup(r):
        r.addArchive('ftp://pygame.org/pub/%(name)s/%(name)s-%(version)srelease.tar.gz')
        r.Requires('python-numeric:python', '/usr/lib/python2.4/site-packages/pygame/locals.py')
        r.Run('python setup.py install --root=%(destdir)s')

#       Here are the docs

        r.Doc('WHATSNEW')
