class LibGalago(PackageRecipe):
    buildRequires = [ 'pkgconfig:devel','dbus:devel','glib:devel' ]

    name = "libgalago"
    version = "0.3.3"
    
    def setup(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
