class Djvulibre(AutoPackageRecipe):
    name = 'djvulibre'
    version = '3.5.17'

    buildRequires = ['libjpeg:devel', 'libstdc++:devel', 'libtiff:devel']

    def unpack(r):
        r.addArchive('mirror://sourceforge/djvu/')

    def configure(r):
        r.Configure('--disable-djview')
