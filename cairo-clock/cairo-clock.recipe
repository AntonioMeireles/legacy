class cairoclock(AutoPackageRecipe):
 
    name = 'cairo-clock'
    version = '0.3.2'
 
    buildRequires = ['librsvg:devel', 'libglade:devel',
		    'desktop-file-utils:runtime', 'atk:devel',
                    'cairo:devel', 'expat:devel', 'fontconfig:devel',
                    'freetype:devel', 'glib:devel', 'gtk:devel',
                    'libX11:devel', 'libXrender:devel', 'libxml2:devel',
                    'pango:devel', 'zlib:devel', 'libpng:devel',
                    'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://macslow.thepimp.net/projects/%(name)s/%(name)s-%(version)s.tar.bz2')
