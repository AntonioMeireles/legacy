class BCop(CPackageRecipe):
    name = 'bcop'
    version = '20071707.git'

    buildRequires = ['pkgconfig:devel', 'autoconf:runtime',
	'automake:runtime', 'libxslt:devel']

    def setup(r):
        r.addArchive('http://gitweb.opencompositing.org/?p=fusion/libraries/bcop;a=snapshot;h=HEAD')
        r.Configure(configureName='autogen.sh', dir = 'libraries/bcop')
        r.Make(dir = 'libraries/bcop')
        r.MakeInstall(dir = 'libraries/bcop')



