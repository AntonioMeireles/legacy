class Blueman(AutoPackageRecipe):
    name = 'blueman'
    version = '1.21'
 
    buildRequires = ['Pyrex:runtime', 'bluez:devel', 'cairo:devel', 'dbus-python:python', 'desktop-file-utils:runtime', 'gettext:runtime', 'glib:devel', 'gnome-python:python', 'gtk:devel', 'intltool:runtime', 'notify-python:python', 'notify-python:devellib', 'pango:devel', 'pkgconfig:devel', 'pycairo:python', 'pygtk:devel', 'python:devel', 'startup-notification:devel' ]
 
    def unpack(r):
        r.addArchive('http://download.tuxfamily.org/%(name)s/%(name)s-%(version)s.tar.gz')

	r.NonMultilibComponent(exceptions='%(libdir)s/')
