class EvolutionIndicator(AutoPackageRecipe):
    name = 'evolution-indicator'
    version = '0.2.4'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel',
        'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel',
        'enchant:devel', 'evolution-data-server:devel', 'evolution:devel',
        'expat:devel', 'fontconfig:devel', 'freetype:devel',
        'gettext:runtime', 'glib:devel', 'gnome-keyring:devel',
        'gnome-vfs:devel', 'gnutls:devel', 'gtk:devel', 'libindicate:devel',
        'intltool:runtime', 'libICE:devel', 'gtkhtml:devel', 'libSM:devel',
        'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel',
        'libbonobo:devel', 'libbonoboui:devel', 'libcanberra:devel',
        'libgcrypt:devel', 'libgnome:devel', 'libgnomecanvas:devel',
        'libgnomeui:devel', 'libgpg-error:devel', 'libnotify:devel',
        'libpng:devel', 'libsoup:devel', 'libxcb:devel', 'libxml2:devel',
        'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'popt:devel',
        'python:bin', 'sqlite:devel', 'xcb-util:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('https://launchpad.net/evolution-indicator/0.2.0/ubuntu-9.10-beta-freeze/+download/')
        r.addPatch('evolution-desktop-file-foresight.patch')
