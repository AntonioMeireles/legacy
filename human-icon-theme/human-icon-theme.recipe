class HumanIconTheme(AutoPackageRecipe):
    name = 'human-icon-theme'
    version = '0.31'
 
    buildRequires = ['ImageMagick:devel', 'ImageMagick:runtime', 'gettext:runtime', 'gtk:runtime', 'intltool:runtime', 'pkgconfig:devel', 'autoconf:runtime', 'automake:runtime', 'libtool:devel', 'libtool:runtime', 'intltool:devel', 'gettext:devel', 'gettext:runtime', 'glib:devel', 'icon-naming-utils:runtime', 'icon-naming-utils:devellib']
 
    def unpack(r):
        r.addArchive('http://archive.ubuntu.com/ubuntu/pool/main/h/human-icon-theme/human-icon-theme_%(version)s.tar.gz')
        r.Run('./autogen.sh')

    def policy(r):
        r.Remove('%(datadir)s/icons/Human/*/places/distributor*', allowNoMatch=True)
        r.Remove('%(datadir)s/icons/Human/*/places/gnome-main-menu*', allowNoMatch=True)
        r.Remove('%(datadir)s/icons/Human/*/places/novell*', allowNoMatch=True)
