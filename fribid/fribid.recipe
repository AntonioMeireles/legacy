class Fribid(CPackageRecipe):
    name = 'fribid'
    version = '1.0.0'
 
    buildRequires = ['glib:devel', 'gtk:devel', 'pkgconfig:devel', 'nss:devel', 'nspr:devel', 'gettext:runtime', 'openssl:devel']
 
    def setup(r):
        r.addArchive('http://fribid.se/releases/source/')
        r.ManualConfigure('--prefix=%(prefix)s')
        r.Make()
        r.MakeInstall()
        r.FixupMultilibPaths(exceptions='.*')
