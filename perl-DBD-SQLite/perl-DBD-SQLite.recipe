loadSuperClass('cpanpackage')
class DBDSQLite(CPANPackageRecipe, CPackageRecipe):
    name = 'perl-DBD-SQLite'
    version = '1.13'

    buildRequires = [ 'perl-DBI:perl', 'sqlite:devel', ]

    def post(r):
        CPANPackageRecipe.post(r)
        r.Requires(exceptDeps='perl: DBD::(Pg|mysql(|::GetInfo))')
