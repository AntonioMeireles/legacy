class AbiWord(AutoPackageRecipe):


    name = 'abiword'
    version = '2.6.8'

    buildRequires = ['automake:runtime', 'autoconf:runtime', 'GConf:devel',
        'ORBit2:devel', 'atk:devel', 'cairo:devel',
        'desktop-file-utils:runtime', 'enchant:devel', 'esound:devel',
        'expat:devel', 'fontconfig:devel', 'freetype:devel', 'fribidi:devel',
         'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel',
        'gtk:devel', 'gtk:runtime', 'gucharmap:devel', 'libICE:devel',
        'libSM:devel', 'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXft:devel', 'libXrender:devel', 'libart_lgpl:devel',
        'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel',
        'libtool:runtime', 'libtool:devel',
        'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel',
        'libgnomeprintui:devel', 'libgnomeui:devel', 'libgsf:devel',
        'libpng:devel', 'libstdc++:devel', 'libxcb:devel', 'libxml2:devel',
        'pango:devel', 'perl:devel', 'perl:runtime', 'pixman:devel',
        'pkgconfig:devel', 'popt:devel', 'wv:devel', 'xcb-util:devel',
        'zlib:devel']

    def setup(r):
        r.addArchive('http://abisource.org/downloads/abiword/%(version)s/source/')
        r.Configure(' --enable-extra-optimization --enable-printing --enable-gnome-vfs --enable-gnomeui')
        r.Make()
        r.MakeInstall()
    def policy(r):
        r.Requires('abiword:runtime','abiword-plugins:lib')
