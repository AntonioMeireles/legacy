loadRecipe('gnomepackage.recipe')
class gftp(GnomePackageRecipe):
    buildRequires = [ 'glibc:devel', 'atk:devel', 'cairo:devel',
	'fontconfig:devel', 'freetype:devel', 'glib:devel',
	'libpng:devel', 'ncurses:devel', 'pango:devel' ]

    name = "gftp"
    version = "2.0.18"

    def setup(r):
        r.addArchive('http://gftp.seul.org/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'INSTALL', 'NEWS',
              'README', 'TODO', 'THANKS')
