class BitstreamVeraFonts(PackageRecipe):
    name = 'bitstream-vera-fonts'
    version = '1.10'

    # cacheable-font tag description in fontconfig:runtime
    buildRequires = [ 'fontconfig:runtime' ]

    def setup(r):
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/ttf-bitstream-vera/%(major_version)s/ttf-bitstream-vera-%(version)s.tar.bz2')

        r.mainDir('ttf-bitstream-vera-1.10')
        r.Install('*.ttf', '%(datadir)s/fonts/bitstream-vera/')
        r.Doc('*.TXT')
