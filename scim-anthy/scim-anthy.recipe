class ScimAnthy(AutoPackageRecipe):
        name='scim-anthy'
        version='1.2.4'
        buildRequires=['scim:devel','anthy:devel',
                       'gtk:devel','libstdc++:devel',
                       'libXrender:devel','libX11:devel',
                       'cairo:devel','pango:devel',
                       'atk:devel','expat:devel',
                       'pango:devel','freetype:devel',
                       'glib:devel','pkgconfig:devel',
                       'libpng:devel','fontconfig:devel',
                       'zlib:devel','gettext:runtime', 'intltool:runtime',
                       ]
        def unpack(r):
                r.addSource('scim-anthy.sh',dir='/etc/X11/xinit/xinitrc.d/')
                r.addArchive('http://osdn.dl.sourceforge.jp/scim-imengine/25404/'
                             '%(name)s-%(version)s.tar.gz')

        def policy(r):
                r.Requires('scim:runtime', '/etc/X11/xinit/xinitrc.d/scim-anthy.sh')
