loadInstalled('python')
class Decorator(PackageRecipe):
    name = 'decorator'
    version = '2.2.0'

    buildRequires = [
        'python:devel', 'unzip:runtime'
    ]

    def setup(r):
        r.pyver = Python.majversion
        r.addArchive('http://www.phyast.pitt.edu/~micheles/python/'
                     'decorator-%(version)s.zip', dir='%(maindir)s')
        r.PythonSetup()
