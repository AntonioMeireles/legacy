class Openshot(PackageRecipe):

    name = 'openshot'
    version = '1.0.0'

    buildRequires = ['desktop-file-utils:runtime', 'mlt:python', 'pygobject:python', 'pygoocanvas:python', 'pygtk:python', 'python:devel', 'python-setuptools:python', 'pyxdg:python', 'shared-mime-info:runtime']

    def setup(r):
        r.addArchive('http://launchpad.net/openshot/1.0/%(version)s/+download/')
        r.Run('python setup.py build')
	r.Run('python setup.py install --root=%(destdir)s --prefix=%(prefix)s')
