class FirefoxRpathWikiSearch(PackageRecipe):
    name = 'firefox-rpathwiki-search'
    version = '1.0'

    def setup(r):
        r.addSource('firefox-rpathwiki-search.src', dest='%(libdir)s/firefox/searchplugins/')
        r.addSource('rpathwiki.png', dest='%(libdir)s/firefox/searchplugins/')
        r.Requires('firefox:runtime',
                   '%(libdir)s/firefox/searchplugins/firefox-rpathwiki-search.src')
