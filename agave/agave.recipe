class Agave(AutoPackageRecipe):
    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel',
        'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel',
        'freetype:devel', 'gconfmm:devel', 'gettext:runtime', 'glib:devel',
        'glibmm:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel',
        'gtk:runtime', 'gtkmm:devel', 'libart_lgpl:devel', 'libbonobo:devel',
        'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel',
        'libgnomeui:devel', 'libpng:devel', 'libsigc++:devel', 'libstdc++:devel',
        'libxml2:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel',
        'popt:devel', 'xorg-x11:devel', 'zlib:devel', 'boost:devel' ]

    name = 'agave'
    version = '0.4.0'

    def unpack(r):
        r.addArchive('http://download.gna.org/colorscheme/releases/%(name)s-%(version)s.tar.gz')
