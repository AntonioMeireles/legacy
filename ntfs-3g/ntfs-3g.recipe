class Ntfs3g(AutoPackageRecipe):
    name = 'ntfs-3g'
    version = '1.0'
    buildRequires = [ 'fuse:devel', 'pkgconfig:devel' ]

    def unpack(r):
        r.addArchive('http://www.ntfs-3g.org/')
        r.Replace('\$\(LDCONFIG\)', '#$(LDCONFIG)', 'src/Makefile.in', lines=585)

    def policy(r):
        r.Requires('fuse:runtime', '/usr/bin/ntfs-3g')
