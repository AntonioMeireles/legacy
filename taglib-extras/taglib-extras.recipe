loadSuperClass('cmakepackage.recipe')
class TaglibExtras(CMakePackageRecipe):

    name = 'taglib-extras'
    #version = '0.1.0+r957432'
    version = '1.0.1'

    buildRequires = [
        'automoc:runtime', 'kdelibs:devel', 'libstdc++:devel', 
        'qt4:devel', 'shared-mime-info:runtime', 'taglib:devel'
    ]

    def unpack(r):
        #r.macros.snapshot = r.version.split('+')[1][1:]
        #r.addSvnSnapshot('svn://anonsvn.kde.org/home/kde/trunk/kdesupport/taglib-extras', revision='%(snapshot)s')
	r.addArchive('http://www.kollide.net/~jefferai/')

        # fix multilib
        # r.Replace('.{LIB_INSTALL_DIR}', '%(libdir)s', '*.cmake', allowNoChange=True)

    def cmake(r):
        r.CMake('-DWITH_KDE=TRUE')

    def policy(r):
        if Arch.x86_64:
            r.Replace('libdir=/usr/lib', 'libdir=%(libdir)s', '/usr/lib/pkgconfig/taglib-extras.pc')
            r.Replace('Libs: -L/usr/lib ', 'Libs: -L%(libdir)s ', '/usr/lib/pkgconfig/taglib-extras.pc')
