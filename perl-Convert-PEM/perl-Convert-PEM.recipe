loadSuperClass('cpanpackage=conary.rpath.com@rpl:devel')
class ConvertPEM(CPANPackageRecipe):
    name='perl-Convert-PEM'
    version='0.07'

    #In your recipe if you get an IO error, you may need to discover one or
    #both of the following
    #author='GBARR'
    #upstreamname='perl-Bundle-foo'

    buildRequires = ['glibc:devel', 'perl-Class-ErrorHandler:perl',
                     'perl-Convert-ASN1:perl', 'perl-Crypt-DES_EDE3:perl']

    def post(r):
        r.Requires('perl-Class-ErrorHandler:perl', '%(libdir)s/.*')
        r.Requires('perl-Convert-ASN1:perl', '%(libdir)s/.*')
        r.Requires('perl-Crypt-DES_EDE3:perl', '%(libdir)s/.*')
