class Lshw(AutoPackageRecipe):
    name = 'lshw'
    version = 'B.02.15'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'gdk-pixbuf:devel', 'gtk:devel', 'libstdc++:devel', 'pkgconfig:devel', 'sqlite:devel']
 
    def unpack(r):
        r.addArchive('http://ezix.org/software/files/')

    def make(r):
        r.Make('PREFIX="%(prefix)s" SBINDIR="%(sbindir)s" MANDIR="%(mandir)s" DATADIR="%(datadir)s"')
        r.Make('PREFIX="%(prefix)s" SBINDIR="%(sbindir)s" MANDIR="%(mandir)s" DATADIR="%(datadir)s" gui')

    def makeinstall(r):
        r.MakeInstall('DESTDIR="%(destdir)s" PREFIX="%(prefix)s" SBINDIR="%(sbindir)s" MANDIR="%(mandir)s" DATADIR="%(datadir)s"')
        r.Make('DESTDIR="%(destdir)s" PREFIX="%(prefix)s" SBINDIR="%(sbindir)s" MANDIR="%(mandir)s" DATADIR="%(datadir)s" install-gui')

    def setup(r):
        r.unpack()
        r.make()
        r.makeinstall()
        r.policy()
