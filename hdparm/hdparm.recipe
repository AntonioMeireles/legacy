class Hdparm(CPackageRecipe):
    name = 'hdparm'
    version = '6.6'

    buildRequires = [ 'sed:runtime' ]

    def setup(r):
        r.addArchive('http://www.ibiblio.org/pub/Linux/system/hardware/hdparm-%(version)s.tar.gz')
        r.Replace(('-O2', '$(CFLAGS)'),
                  ('$(exec_prefix)sbin', '%(essentialsbindir)s/'),
                  'Makefile')
        r.Make()
        r.MakeInstall()
