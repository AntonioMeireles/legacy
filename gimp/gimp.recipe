class Gimp(AutoPackageRecipe):
    name = 'gimp'
    version = '2.6.6'

    buildRequires = [ 'glib:devel', 'gtk:runtime', 'gtk:devel', 'pango:devel', 'fontconfig:devel', 'libgtkhtml:devel', 'python:devel', 'pygtk:devel', 'librsvg:devel', 'libtiff:devel', 'libpng:devel', 'libmng:devel', 'libexif:devel', 'pygobject:python', 'automake:runtime', 'autoconf:runtime', 'libtool:runtime', 'intltool:runtime', 'perl:runtime', 'desktop-file-utils:runtime', 'alsa-lib:devel', 'atk:devel', 'freetype:devel', 'libart_lgpl:devel', 'libjpeg:devel', 'libxml2:devel', 'zlib:devel', 'pkgconfig:devel', 'gettext:runtime', 'libxml2:runtime', 'libxslt:runtime', 'GConf:devel', 'ORBit2:devel', 'cairo:devel', 'expat:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'lcms:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'libgnomeui:devel', 'libwmf:devel', 'poppler:devel', 'popt:devel', 'pygtk:python', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXmu:devel', 'libXpm:devel', 'libXrender:devel', 'libXt:devel', 'dbus-glib:devel', 'dbus-glib:runtime', 'dbus:devel', 'hal:devel', 'poppler-glib:devel', 'WebKit:devel', 'babl:devel', 'gegl:devel', 'libXfixes:devel' ]

    def unpack(r):
        r.macros.majversion = '.'.join(r.version.split('.')[:2])
        r.addArchive('ftp://ftp.gimp.org/pub/gimp/v%(majversion)s/')

    def configure(r):
#        r.Environment('PYTHON', '/usr/bin/python')
        r.Configure(' --enable-perl '
                    ' --enable-python '
                    ' --enable-mp'
                    ' --disable-static'
                    ' --with-print'
                    ' --with-lcms'
                    ' --enable-gimp-console'
                    ' --with-aa'
                    ' --with-linux-input'
                    ' --with-libtiff --with-libjpeg --with-libpng --with-libmng --with-libexif'
                    ' --with-gtkhtml2 --with-librsvg --with-poppler --with-gnomevfs --with-alsa'
                    ' --with-webkit --with-dbus --with-script-fu'
                    )

    def makeinstall(r):
        r.MakeInstall()
#        r.Remove('%(libdir)s/gimp/2.0/plug-ins/print')
#        r.Symlink('%(bindir)s/gimp-2.4','%(bindir)s/gimp')

    def policy(r):
        r.Requires('gutenprint:runtime', '%(bindir)s/gimp')
