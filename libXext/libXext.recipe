loadSuperClass('xorgpackage.recipe')
class LibXext(XorgPackageRecipe):
    name = 'libXext'
    version = '1.0.3'
    component = 'lib'

    buildRequires = [ 'xextproto:devel', 'xproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        r.Requires('xextproto:devel', '%(libdir)s/pkgconfig/xext.pc')
