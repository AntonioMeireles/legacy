#loadSuperClass('cmakepackage')
class LLVM(AutoPackageRecipe):

    name = 'llvm'
    version = '2.5'

    buildRequires = [
        'bison:runtime', 'byacc:runtime', 'flex:devel', 'flex:runtime',
        'groff:runtime', 'libelf:devel', 'libstdc++:devel', 'perl:runtime'
    ]

    def unpack(r):

        r.addArchive('http://www.llvm.org/releases/%(major_version)s/')

        # wrong rpath
        r.Replace('-rpath \$\(ToolDir\)', '', 'Makefile.rules')

        # multilib issues
        r.Replace(
            ('\$\(PROJ_prefix\)/lib', '%(libdir)s'),
            ('\$\(PROJ_prefix\)/docs/llvm', '%(thisdocdir)s'),
            'Makefile.config.in'
        )

    def configure(r):

        r.macros.cflags += ' -fPIC '
        r.Configure('--enable-optimized --enable-assertions')

    def make(r):

        r.Make('tools-only')

    def policy(r):

        r.AutoDoc(exceptions='/.*/')

        r.Replace('/lib', '/%(lib)s', '%(bindir)s/llvm-config')

