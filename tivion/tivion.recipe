class Tivion(PackageRecipe):

    name = 'tivion'
    version = '0.0.4'

    buildRequires = ['python-setuptools:python', 'gnome-python:python', 'gst-python:python', 'pygobject:python', 'pygtk:python', 'python:devel']

    def setup(r):
        r.addArchive('http://launchpad.net/tivion/trunk/tivion-0.0.4/+download/')
        r.PythonSetup(data='--install-data=%(prefix)s')
