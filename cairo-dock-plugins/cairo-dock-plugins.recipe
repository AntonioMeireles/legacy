class CairoDockPlugins(AutoPackageRecipe):
    name = 'cairo-dock-plugins'
    version = '2.1.0'
 
    buildRequires = ['GConf:devel', 'Mesa:devel', 'ORBit2:devel', 'Thunar:devel', 'WebKit:devel', 'alsa-lib:devel', 'atk:devel', 'autoconf:runtime', 'automake:runtime', 'cairo:devel', 'cairo-dock:devel', 'dbus-glib:devel', 'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-vfs:devel', 'gtk:devel', 'gtkglext:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXcomposite:devel', 'libXfixes:devel', 'libXinerama:devel', 'libXmu:devel', 'libXrender:devel', 'libXt:devel', 'libXtst:devel', 'libXxf86vm:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libexif:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libtool:devel', 'libtool:runtime', 'librsvg:devel', 'libsoup:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'gnome-menus:devel', 'libxklavier:devel', 'vte:devel']
 
    def setup(r):
        r.addArchive('http://download.berlios.de/cairo-dock/')
	r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
	r.Run('autoreconf -i -f')
	r.Configure('--enable-gio-in-gmenu --enable-network-monitor --enable-scooby-do')
	r.Make()
	r.MakeInstall()

	r.PackageSpec('cairo-dock-plug-ins-xfce', '%(libdir)s/%(name)s/libcd-xfce-integration.so')
        r.PackageSpec('cairo-dock-plug-ins-xfce', '%(libdir)s/%(name)s/xfce-integration/.*')
