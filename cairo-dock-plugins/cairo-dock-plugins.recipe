class CairoDockPlugins(AutoPackageRecipe):
    name = 'cairo-dock-plugins'
    version = '2.2.0'
 
    buildRequires = ['GConf:devel', 'Mesa:devel', 'ORBit2:devel', 'thunar-vfs:devel', 'WebKit:devel', 'alsa-lib:devel', 'atk:devel', 'autoconf:runtime', 'automake:runtime', 'cairo:devel', 'cairo-dock:devel', 'dbus-glib:devel', 'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-vfs:devel', 'gtk:devel', 'gtkglext:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXcomposite:devel', 'libXfixes:devel', 'libXinerama:devel', 'libXmu:devel', 'libXrender:devel', 'libXt:devel', 'libXtst:devel', 'libXxf86vm:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libexif:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libtool:devel', 'libtool:runtime', 'librsvg:devel', 'libsoup:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'gnome-menus:devel', 'libxklavier:devel', 'vte:devel', 'cmake:runtime', 'gcc-c++:runtime', 'libXrandr:devel']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/cairo-dock-plug-ins/2.2/2.2.0/+download/cairo-dock-plugins-2.2.0-4.tar.gz')
	r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
	r.PackageSpec('cairo-dock-plug-ins-xfce', '.*xfce.*')

    def configure(r):
	r.CMake('-DCMAKE_SKIP_BUILD_RPATH=TRUE -Denable-gio-in-gmenu=TRUE -Denable-network-monitor=TRUE -Dscooby-do=TRUE')



