class Baobab(AutoPackageRecipe):
    name = 'baobab'
    version = '2.4.2'

    buildRequires = [
        'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel',
        'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel',
        'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel', 'gtk:runtime',
        'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel',
        'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel',
        'libgnomeui:devel', 'libgtop:devel', 'libpng:devel', 'libxml2:devel',
        'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel',
        'xorg-x11:devel', 'zlib:devel',
    ]

    def unpack(r):
        r.addArchive('http://www.marzocca.net/linux/downloads/'
                     '%(name)s-%(version)s.tar.gz')
