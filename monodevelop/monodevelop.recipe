class MonoDevelop(CPackageRecipe):
    name = 'monodevelop'
    version = '1.0'
    buildRequires = [ 'desktop-file-utils:runtime', 'gecko-sharp:devellib', 'gecko-sharp:cil', 'gettext:runtime', 'gnome-sharp:devellib', 'gnome-sharp:lib', 'gtk-sharp:devellib', 'gtk-sharp:lib', 'gtksourceview-sharp:devellib', 'gtksourceview-sharp:cil', 'intltool:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'monodoc:devellib', 'monodoc:cil', 'monodoc:lib', 'perl:runtime', 'pkgconfig:devel', 'shared-mime-info:runtime', 'xulrunner:devellib', 'libgdiplus:lib', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtksourceview-sharp:cil', 'mono-addins:devellib', 'mono-addins:cil', 'mono:cil' ]

    def setup(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.addArchive('http://go-mono.com/sources/%(name)s/')
        r.disableParallelMake()
        r.Configure('--disable-update-mimedb --disable-update-desktopdb --enable-subversion')
        r.Make()
        r.MakeInstall()

        r.Requires('libgdiplus:lib','%(bindir)s/%(name)s')

        r.Requires(exceptDeps=r'CIL\:\ monodoc\(1\.0\.0\.0\)')
        r.Requires('monodoc:cil','%(bindir)s/%(name)s')

