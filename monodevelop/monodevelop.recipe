class MonoDevelop(AutoPackageRecipe):
    name = 'monodevelop'
    version = '1.0'
    buildRequires = [ 'desktop-file-utils:runtime', 'gecko-sharp:devellib', 'gecko-sharp:cil', 'gettext:runtime', 'gnome-sharp:devellib', 'gnome-sharp:lib', 'gtk-sharp:devellib', 'gtk-sharp:lib', 'gtksourceview-sharp:devellib', 'gtksourceview-sharp:cil', 'intltool:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'monodoc:devellib', 'monodoc:cil', 'monodoc:lib', 'perl:runtime', 'pkgconfig:devel', 'shared-mime-info:runtime', 'libgdiplus:lib', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtksourceview-sharp:cil', 'mono-addins:devellib', 'mono-addins:cil', 'mono:cil', 'automake:runtime', 'autoconf:runtime', 'libtool:runtime', ]

    def unpack(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.addArchive('http://go-mono.com/sources/%(name)s/')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/monodevelop/monodevelop-config.patch')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/monodevelop/monodevelop-libdir.patch')
	r.Replace('@prefix@/lib/monodevelop\/bin', '%(libdir)s/monodevelop/bin', 'mdtool.in')
        r.Run('autoreconf -f -i -s')


    def configure(r):
        r.disableParallelMake()
        r.Configure(' --disable-update-mimedb --disable-update-desktopdb '
                    ' --enable-subversion --enable-boo --enable-java '
                    ' --enable-nemerle --enable-versioncontrol ' 
                    ' --prefix=%(prefix)s --libdir=%(libdir)s '
                    '--enable-gnomeplatform --enable-c')

    def policy(r):
        r.Requires('libgdiplus:lib','%(bindir)s/%(name)s')
        #        r.Requires(exceptDeps=r'CIL\:\ monodoc\(1\.0\.0\.0\)')
        r.Requires('monodoc:cil','%(bindir)s/%(name)s')

