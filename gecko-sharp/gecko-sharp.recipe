class GeckoSharp(AutoPackageRecipe):
    name = 'gecko-sharp'
    version = '2.0_0.11'

    buildRequires = [ 'mono:runtime', 'gtksourceview:devel',
        'gtk-sharp:devellib', 'gtk-sharp:runtime', 'gtk-sharp:lib',
        'mono:lib', 'gawk:runtime', 'pkgconfig:devel', ]

    def unpack(r):
        r.macros.majver = r.version.split('_')[0]
        r.macros.upver = r.version.replace('_', '-')
        r.addArchive('http://go-mono.com/sources/gecko-sharp-%(majver)s/gecko-sharp-%(upver)s.tar.gz')

    def policy(r):
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.Remove('%(libdir)s/mono/*/gecko-sharp.dll.mdb')

