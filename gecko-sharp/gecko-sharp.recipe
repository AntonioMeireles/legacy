class GeckoSharp(AutoPackageRecipe):
    name = 'gecko-sharp'
    version = '2.0_0.11'

    buildRequires = [ 'mono:runtime', 'gtksourceview:devel', 'which:runtime',
        'gtk-sharp:devellib', 'gtk-sharp:runtime', 'gtk-sharp:lib',
        'mono:devellib', 'gawk:runtime', 'pkgconfig:devel', ]

    def unpack(r):
        r.macros.majver = r.version.split('_')[0]
        r.macros.archive_version = r.version.replace('_', '-')
        r.addArchive('http://go-mono.com/sources/gecko-sharp-%(majver)s/')

    def policy(r):
        r.Move('%(prefix)s/lib/pkgconfig/gecko-sharp-2.0.pc', '%(libdir)s/pkgconfig/')
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.Remove('%(libdir)s/mono/*/gecko-sharp.dll.mdb')
