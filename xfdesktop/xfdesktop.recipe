loadSuperClass('xfce-core-package.recipe')
class xfdesktop(xfceCorePackage):

    name = 'xfdesktop'
    version = '4.4.2'

    buildRequires = [
        'libexo:devel', 'perl:lib', 'Thunar:devel', 'xfce4-panel:devel'
    ]
    def setup(r):
        xfceCorePackage.setup(r)
        r.addSource('desktop.xml', mode=0644, dir='/%(sysconfdir)s/xdg/xfce4/mcs_settings/')
