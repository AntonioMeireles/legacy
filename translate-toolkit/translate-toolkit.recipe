class TranslateToolkit(PackageRecipe):
    name = 'translate-toolkit'
    version = '1.3.0'

    buildRequires = [
        'elementtree:python',
        'python-setuptools:python',
        'python:devel',
        'lxml:python',
        'python-sqlite:python',
        'python-simplejson:python'
    ]

    def setup(r):
        r.addArchive('mirror://sourceforge/translate/')
        r.PythonSetup()
