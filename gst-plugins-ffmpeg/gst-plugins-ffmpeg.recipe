class GstFfmpeg(AutoPackageRecipe):
    name = 'gst-plugins-ffmpeg'
    version = '0.10.9'
 
    buildRequires = ['gstreamer:devel', 'freetype:devel', 'gst-plugins-base:devel', 'gstreamer:runtime', 'liboil:devel', 'pkgconfig:devel', 'texi2html:runtime', 'bzip2:devel', 'gtk-doc:runtime']

    def unpack(r):
        r.addArchive('http://gstreamer.freedesktop.org/src/gst-ffmpeg/gst-ffmpeg-%(version)s.tar.bz2')


