class VirtManager(AutoPackageRecipe):
    buildRequires = [ 'GConf:runtime', 'atk:devel', 'cairo:devel', 'dbus-python:python', 'desktop-file-utils:runtime', 'expat:devel', 'freetype:devel', 'glib:devel', 'gnome-python-desktop:python', 'gnome-python:python', 'gtk:devel', 'libXrender:devel', 'libxml2:python', 'pango:devel', 'pkgconfig:devel', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'urlgrabber:python', 'virtinst:python', 'vte:python', 'zlib:devel', 'libvirt:python', 'python:devel' ]
    name = 'virt-manager'
    version = '0.3.1'

    def unpack(r):
        r.addArchive('http://virt-manager.et.redhat.com/download/sources/%(name)s/%(name)s-%(version)s.tar.gz')
