class Django(PackageRecipe):
    name = 'Django'
    version = '0.96.2'

    buildRequires = ['MySQL-python:python', 'PIL:python', 'PyYAML:python', 'docutils:python', 'ipython:python', 'mod_python:python', 'mx:python', 'python-sqlite:python', 'python:devel']

    def setup(r):
        r.addArchive('http://media.djangoproject.com/releases/0.96/')
        r.Run('python setup.py install --root=%(destdir)s', dir='%(builddir)s')
