class GutenPrint(AutoPackageRecipe):
    name = 'gutenprint'
    version = '5.2.0_beta4'

    buildRequires = [ 'cups:devel', 'dialog:runtime', 'docbook-utils-pdf:runtime', 'docbook-utils:runtime', 'ghostscript:runtime', 'flex:devel', 'flex:runtime', 'glib:devel', 'perl:runtime', 'pkgconfig:devel', 'tetex-dvips:runtime', 'texi2html:runtime', 'atk:devel', 'cairo:devel', 'cups:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libjpeg:devel', 'libpng:devel', 'libtiff:devel', 'ncurses:devel', 'pango:devel', 'perl:lib', 'readline:devel', 'zlib:devel', 'krb5:devel', 'openssl:devel', 'gimp:devel', 'ImageMagick:runtime', 'doxygen:runtime', 'expat:devel', 'foomatic-db-engine:runtime', 'foomatic-db-engine:perl', 'gettext:runtime', 'gimp:runtime', 'intltool:runtime', 'libtool:devel', 'perl:devel' ]

    def unpack(r):
        r.macros.version = r.version.replace('_', '-')
        r.addArchive('mirror://sourceforge/gimp-print/')

    def configure(r):
        r.Configure(' --with-gimp2-as-gutenprint ')

    def policy(r):
        r.macros.majVer = '.'.join(r.version.split('.')[:2])
        r.ExcludeDirectories(exceptions=['%(libdir)s/%(name)s/%(majVer)s/modules'])
