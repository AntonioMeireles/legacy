class GutenPrint(AutoPackageRecipe):
    name = 'gutenprint'
    version = '5.0.0'

    buildRequires = ['ImageMagick:runtime', 'cups:devel', 'dialog:runtime',
            'docbook-utils-pdf:runtime', 'docbook-utils:runtime',
            'doxygen:runtime', 'espgs:runtime', 'flex:runtime',
            'glib:devel', 'perl:runtime', 'pkgconfig:devel',
            'tetex-dvips:runtime', 'texi2html:runtime', 'atk:devel',
            'cairo:devel', 'cups:devel', 'fontconfig:devel', 'freetype:devel',
            'glib:devel', 'gtk:devel', 'libjpeg:devel',
            'libpng:devel', 'libtiff:devel', 'ncurses:devel', 'pango:devel',
            'gimp:lib', 'gimp:devel', 'gimp:runtime', 'perl:lib',
            'readline:devel', 'xorg-x11:devel', 'zlib:devel',
        ]

    def unpack(r):
        r.macros.version = r.macros.version.replace('_', '-')
        r.addArchive('mirror://sourceforge/gimp-print/%(name)s-%(version)s.tar.bz2')

    def policy(r):
        r.ExcludeDirectories(exceptions=['%(libdir)s/%(name)s/%(version)s/modules'])
