class LibtorrentRasterbar(AutoPackageRecipe):
    name = 'libtorrent-rasterbar'
    version = '0.14.1'
    buildRequires = [ 'boost:devel', 'libstdc++:devel', 'openssl:devel',
        'python:devel', 'which:runtime', 'zlib:devel',

        # 0.14.2 won't need the patch so these can be removed too
        'automake:runtime', 'automake:runtime', 'libtool:runtime', 'autoconf:runtime' ]

    def unpack(r):
        r.macros.project_name = 'libtorrent'
        r.addArchive('mirror://sourceforge/%(project_name)s/%(name)s-%(version)s.tar.gz')
        r.addPatch('fix-python2.6-detection.patch')
        r.Run('./autotool.sh')

    def configure(r):
        r.Configure('--with-boost-libdir=%(libdir)s --enable-python-binding')
