class LinkGrammar(CPackageRecipe):
    name = 'link-grammar'
    version = '4.1b'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('link-%(version)s.tar.gz')
        r.Make()
        r.MakeDirs('%(bindir)s')
        r.Install('parse','%(bindir)s')
