class Sed(AutoPackageRecipe):
    name = 'sed'
    version = '4.1.5'

    buildRequires = [ 'install-info:runtime', 'bison:runtime', 'perl:runtime' ]

    def unpack(r):
        r.addArchive('mirror://gnu/sed/', keyid='A750566F')

        # we want sed to install into /bin -- store /usr/bin in
        # stdbindir macro for later
        r.macros.stdbindir = r.macros.bindir
        r.macros.bindir= r.macros.essentialbindir
        # avoid buildreq on perl by fixing this manually instead of depending
        # on NormalizeInterpreterPaths to search the path
        r.Replace('#!.*perl', '#!%(stdbindir)s/perl', 'config/help2man')

    def make(r):
        r.Make('AR=%(target)s-ar')

    def policy(r):
        r.TestSuite('testsuite', 'make check-TESTS')
