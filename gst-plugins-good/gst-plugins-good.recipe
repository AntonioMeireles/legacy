
loadSuperClass('gnomepackage.recipe')
class GstPluginsGood(GnomePackageRecipe):

    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'audiofile:devel',
	'cairo:devel', 'esound:devel', 'flac:devel', 'fontconfig:devel',
	'freetype:devel', 'glib:devel', 'gst-plugins-base:devel',
	'gstreamer:devel', 'libdv:devel', 'libjpeg:devel', 'liboil:devel',
	'libpng:devel', 'libxml2:devel', 'speex:devel', 'atk:devel',
       'dbus:devel', 'hal:devel', 'pango:devel' ]    

    name = 'gst-plugins-good'
    version = '0.10.2'

    extraConfig = '--disable-spc'
    externalArchive='http://gstreamer.freedesktop.org/src/%(name)s/%(name)s-%(version)s.tar.bz2'

    def unpack(r):
        r.addArchive('%(name)s.tar.bz2')

    def install(r):
        GnomePackageRecipe.install(r)
        r.ComponentSpec('runtime', '/usr/lib/gstreamer-%(majversion)s/.*')
