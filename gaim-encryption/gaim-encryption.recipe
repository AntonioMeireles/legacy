class GaimEncryption(AutoPackageRecipe):
    name = 'gaim-encryption'
    version = '3.0beta7'

    buildRequires = [ 'gaim:devel', 'xulrunner:devel', 'pkgconfig:devel',
                      'nss:devel', 'gtk:devel', 'zlib:devel', 'nspr:devel',
                      'texinfo:runtime', 'file:runtime', 'gettext:runtime',
                      'bison:runtime', ]

    def unpack(r):
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge'
        r.addArchive('%(sf)s/gaim-encryption/gaim-encryption-%(version)s.tar.gz')
