class Gbrainy(CPackageRecipe):

    name = 'gbrainy'
    version = '0.70'

    buildRequires =  ['desktop-file-utils:runtime', 'gettext:runtime', 'gnome-sharp:cil', 'gnome-sharp:devellib', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'gtk:runtime', 'intltool:runtime', 'mono:cil', 'mono:devel', 'mono:runtime', 'perl:runtime', 'pkgconfig:devel']

    def setup(r):
        r.addArchive('http://www.softcatala.org/~jmas/%(name)s/')
        r.Configure()
        r.MakeInstall()
