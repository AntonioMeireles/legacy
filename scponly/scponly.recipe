class ScpOnly(AutoPackageRecipe):
    name = 'scponly'
    version = '4.6'

    buildRequires = [ 'shadow:runtime', 'openssh-server:runtime', ]

    def unpack(r):
        r.addArchive('http://sublimation.org/scponly/')

    def install(r):
        r.MakeDirs('%(mandir)s/man8', '%(bindir)s')
        r.Install('scponly', '%(bindir)s/scponly', mode=0755)
        r.Install('scponly.8', '%(mandir)s/man8/scponly.8')
        r.Create('%(sysconfdir)s/scponly/debuglevel', contents='0')
        r.TagSpec('shell', '%(bindir)s/scponly')
        r.Provides('file', '%(bindir)s/scponly')
