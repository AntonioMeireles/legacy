loadSuperClass('rpmpackage')
class Hwdata(RPMPackageRecipe, CPackageRecipe):
    name = 'readahead'
    version = '1.4.7'
    rpmRelease = '1.fc10'

    buildRequires = [ 'audit:devel', 'e2fsprogs:devel', 'gettext:runtime',
                    'intltool:runtime' ]

    def setup(r):
        r.unpack()
        r.Configure()
        r.Make()
        r.MakeInstall()
