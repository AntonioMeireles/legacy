class LibNotify(PackageRecipe):

   buildRequires = ['dbus:devel', 'glib:devel', 'glibc:devel', 'popt:devel']
	
   name = "libnotify"
   version = "0.2.2"
   def setup(r):
	r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
