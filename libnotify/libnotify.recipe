class LibNotify(AutoPackageRecipe):
    name = 'libnotify'
    version = '0.4.4'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus-glib:devel',
        'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel',
        'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel',
        'libpng:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/')

    def policy(r):
        r.Requires('notify-osd:runtime','%(bindir)s/notify-send')
        r.Requires('notify-osd:data','%(bindir)s/notify-send')
