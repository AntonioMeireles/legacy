class Libraw(CPackageRecipe):
    name = 'libraw'
    version = '0.9.1'
 
    buildRequires = ['libstdc++:devel']
 
    def setup(r):
        r.addArchive('http://www.libraw.org/data/LibRaw-0.10.0-Beta2-Linux.tar.gz')
        #r.addPatch('LibRaw-0.9.1-configure.patch')
        #r.addPatch('LibRaw-0.9.1-configure-optflags.patch')
        #r.addPatch('LibRaw-0.9.1-configure-default-cflags.patch')
        #r.ManualConfigure('-P %(prefix)s', preConfigure='CFLAGS=%(optflags)s')

        r.Replace('/usr/local', '%(destdir)s%(prefix)s', 'Makefile')
        r.Replace('/usr/lib', '%(destdir)s%(libdir)s', 'Makefile')
        r.MakeDirs('%(includedir)s')
        r.MakeDirs('%(libdir)s')
        r.Make()
        r.MakeInstall()
        r.Install('lib/libraw.a', '%(libdir)s/libraw/')
        r.Install('lib/libraw_r.a', '%(libdir)s/libraw/')
        r.Install('libraw/*', '%(libdir)s/libraw/')
        r.Install('bin/*', '%(bindir)s/')
