class Libraw(CPackageRecipe):
    name = 'libraw'
    version = '0.9.1'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('http://www.libraw.org/data/LibRaw-%(version)s.tar.gz')
        r.Replace('/usr/local', '%(destdir)s%(prefix)s', 'Makefile')
        r.Replace('/usr/lib', '%(destdir)s%(libdir)s', 'Makefile')
        r.MakeDirs('%(includedir)s')
        r.MakeDirs('%(libdir)s')
        r.Make()
        r.MakeInstall()
