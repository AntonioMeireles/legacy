class ChestnutDialer(AutoPackageRecipe):

    buildRequires = ['libxml2:python', 'pygtk:python']

    name = 'chestnut-dialer'
    version = '0.3.2'

    extraConfigure = '--with-docdir=%(datadir)s/doc/%(name)s-%(version)s'

    def unpack(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2')

    def configure(r):
        r.Configure('--disable-qt --with-docdir=%(datadir)s/doc/%(name)s-%(version)s')


