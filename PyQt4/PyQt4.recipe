class Pyqt4(AutoPackageRecipe):

    name = 'PyQt4'
    version = '4.4.4'

    buildRequires = [
        'cElementTree:python', 'dbus-python:devel', 'dbus:devel',
        'fontconfig:devel', 'freetype:devel', 'glib:devel', 'libICE:devel',
        'libpng:devel', 'libSM:devel', 'libstdc++:devel', 'libX11:devel',
        'libXcursor:devel', 'libXext:devel', 'libXfixes:devel', 'libXi:devel',
        'libXinerama:devel', 'libXrandr:devel', 'libXrender:devel',
        'Mesa:devel', 'python:devel', 'qt4:devel', 'sip:devel', 'sip:python',
        'sip:runtime', 'zlib:devel'
    ]

    def unpack(r):

        r.macros.archive_name = 'PyQt-x11-gpl'
        r.addArchive('http://www.riverbankcomputing.com/static/Downloads/PyQt4/')

    def configure(r):

        conf = (
            ' --confirm-license'
            ' -d %(libdir)s/python2.6/site-packages/' +
            ' --qmake=%(bindir)s/qmake-qt4'
            ' LFLAGS=""'
        )
        r.ManualConfigure(
            conf, preConfigure='python', configureName='configure.py'
        )

        r.Replace('INSTALL_ROOT', 'DESTDIR', 'designer/Makefile')

        r.Replace(
            '-Wl,-rpath,%(builddir)s/qpy/QtDesigner', '', 'QtDesigner/Makefile'
        )

