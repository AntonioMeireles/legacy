class UsersManager(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'intltool:runtime' ]
    name = "users-manager"
    version = "0.2"

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.gz')
        r.Make()
        r.MakeInstall(rootVar='INSTROOT')
	r.Doc('README', 'NEWS', 'AUTHORS')
	#r.Doc('README', 'NEWS', 'AUTHORS', 'doc/*')
