loadSuperClass('rpmpackage')
class Unifdef(RPMPackageRecipe, CPackageRecipe):
    name = 'unifdef'
    version = '1.171'

    rpmRelease = '5.fc6'

    def setup(r):
        r.unpack()
        r.Make()
        r.Install('unifdef', '%(bindir)s/', mode=0755)
        r.Install('unifdefall.sh', '%(bindir)s/', mode=0755)
        r.Install('unifdef.1', '%(mandir)s/man1/')
