class Gmerlin(AutoPackageRecipe):
    name = 'gmerlin'
    version = '0.4.1'
 
    buildRequires = ['alsa-lib:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'esound:devel', 'fontconfig:devel', 'freetype:devel', 'gavl:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'install-info:runtime', 'intltool:runtime', 'jack:devel', 'libICE:devel', 'libX11:devel', 'libXext:devel', 'libXinerama:devel', 'libXv:devel', 'libjpeg:devel', 'libpng:devel', 'libquicktime:devel', 'libtiff:devel', 'libv4l:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'pulseaudio:devel', 'texinfo:runtime', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/gmerlin/%(name)s-%(version)s.tar.gz')
#        r.addPatch("configure.ac.diff")
    def configure(r):
#        r.Run("autoreconf")
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
        r.Configure(' --without-doxygen --prefix=%(prefix)s')
