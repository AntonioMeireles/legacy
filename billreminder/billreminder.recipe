class Billreminder(AutoPackageRecipe):
    name = 'billreminder'
    version = '0.3.2'

    buildRequires = [
        'pycairo:python',
        'dbus-python:python',
        'desktop-file-utils:runtime',
        'gettext:runtime',
        'gtk:runtime',
        'perl:runtime',
        'pygobject:python',
        'pygtk:python',
        'python-sqlite:python',
        'python:devel',
        'intltool:runtime',
        'GConf:runtime'
    ]

    def unpack(r):
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/%(name)s/0.3/')
