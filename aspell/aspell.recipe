class Aspell(AutoPackageRecipe):
    name = 'aspell'
    version = '0.60.5'
    buildRequires = [ 'perl:runtime', 'install-info:runtime', 'ncurses:devel',
                      'gcc:devel', 'libstdc++:devel', 'perl:lib' ]

    def unpack(r):
        r.addArchive('mirror://gnu/aspell/', keyid='38B327D7')
    def makeinstall(r):
        r.MakeInstall('pkgdocdir=%(thisdocdir)s')
        r.Move('%(libdir)s/aspell-0.60/ispell', '%(bindir)s/')
        r.Move('%(libdir)s/aspell-0.60/spell', '%(bindir)s/')
        r.Remove('%(thisdocdir)s/manual.aux')
