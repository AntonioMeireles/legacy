loadSuperClass('cmakepackage')
class AutoMOC(CMakePackageRecipe):

    name = 'automoc'
    version = '0.9.88+r974500'

    buildRequires = [
        'libstdc++:devel', 'qt4:devel'
    ]

    def unpack(r):

        r.macros.archive_name = 'automoc4'
        #r.addArchive('mirror://kde/unstable/automoc4/%(version)s/')
        r.macros.revision = r.version.split('+')[1].strip('r')
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/trunk/kdesupport/automoc',
            revision='%(revision)s'
        )

