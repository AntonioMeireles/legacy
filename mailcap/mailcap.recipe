loadSuperClass('rpmpackage')
class Mailcap(RPMPackageRecipe, PackageRecipe):
    name = 'mailcap'
    version = '2.1.22'
    rpmRelease = '1.fc6'

    def setup(r):
        r.unpack()
        r.Replace('Red Hat ', '', 'mailcap')
        r.Install('mailcap', '%(sysconfdir)s/')
        r.Install('mime.types', '%(sysconfdir)s/')
        r.Install('mailcap.4', '%(mandir)s/man4/')
