class Soundtouch(CPackageRecipe):
    name = 'soundtouch'
    version = '1.3.1'
 
    buildRequires = ['libstdc++:devel']

    def setup(r):
        r.addArchive('http://www.surina.net/soundtouch/')
        r.macros.cflags += ' -fPIC'
        r.Run('./bootstrap')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Move('%(prefix)s/doc', '%(datadir)s/')
