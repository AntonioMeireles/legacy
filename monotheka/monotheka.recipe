class Monotheka(PackageRecipe):
   buildRequires = [ 'mono:devel','gtk-sharp' ]
	
   name = "monotheka"
   version = "0.0.5"
   def setup(r):
	r.addArchive('http://forge.novell.com/modules/xfcontent/private.php/%(name)s/0.1-ALPHA/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
        r.Requires('gtk-sharp:lib', '%(libdir)s/Monotheka/Monotheka.exe')
        r.Requires('mono:runtime', '%(libdir)s/Monotheka/Monotheka.exe')

