loadSuperClass('gnomepackage')
class GLabels(GnomePackageRecipe):
    buildRequires = [
        'atk:devel',
        'cairo:devel',
        'desktop-file-utils:runtime',
        'fontconfig:devel',
        'freetype:devel',
        'GConf:devel',
        'glib:devel',
        'gnome-keyring:devel',
        'gnome-vfs:devel',
        'libart_lgpl:devel',
        'libbonobo:devel',
        'libbonoboui:devel',
        'libglade:devel',
        'libgnomecanvas:devel',
        'libgnome:devel',
        'libgnomeprint:devel',
        'libgnomeprintui:devel',
        'libgnomeui:devel',
        'libpng:devel',
        'libxml2:devel',
        'ORBit2:devel',
        'pango:devel',
        'perl:runtime',
        'popt:devel',
        'scrollkeeper:runtime',
        'shared-mime-info:runtime',
    ]

    name = 'glabels'
    version = '2.0.3'

    def unpack(r):
        r.macros.sf =  'http://internap.dl.sourceforge.net/sourceforge'
        r.addArchive('%(sf)s/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Environment('XDG_DATA_HOME', '%(destdir)s/%(datadir)s')
        r.Environment('XDG_DATA_DIRS', '%(destdir)s/%(datadir)s')

    def install(r):
        GnomePackageRecipe.install(r)
        r.Remove('%(datadir)s/mime/{XMLnamespaces,globs,magic}')
        r.Remove('%(datadir)s/mime/application/', recursive=True)
