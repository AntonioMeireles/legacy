class Xfce4IndicatorPlugin(AutoPackageRecipe):

    name = 'xfce4-indicator-plugin'
    version = '0.0.1'

    buildRequires = [
        'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'intltool:runtime', 'libICE:devel', 'libX11:devel', 'libXrender:devel',
        'libpng:devel', 'libxfce4util:devel', 'libxfcegui4:devel',
        'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel',
        'xfce4-panel:devel', 'zlib:devel', 'xfce4-dev-tools:runtime',
        'automake:runtime', 'autoconf:runtime', 'libtool:runtime',
        'gettext:devel', 'intltool:devel', 'indicator-applet:devel'
    ]

    def setup(r):
        r.addMercurialSnapshot('http://www.foresightlinux.org/hg/xfce/xfce4-indicator-plugin')
        r.Configure(configureName='./autogen.sh')
        r.Make()
        r.MakeInstall()
