class Pypoppler(AutoPackageRecipe):
    name = 'pypoppler'
    version = '0.12.1'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'glib:devel', 'gtk:devel', 'pango:devel', 'pkgconfig:devel', 'poppler-glib:devel', 'python:bin', 'python:devel', 'poppler-glib:devel', 'pygtk:devel']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/poppler-python/trunk/development/+download/pypoppler-%(version)s.tar.gz')
