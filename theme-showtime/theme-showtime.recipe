class ThemeShowtime(AutoPackageRecipe):
    name = 'theme-showtime'
    version = '1.1.2'
 
    buildRequires = [ 'gtk:devel', ]

    def setup(r):
        r.addArchive('showtime.tar.gz', dir='%(datadir)s/themes/')
        r.addArchive('showtime-icons.tar.bz2', dir='%(datadir)s/icons/')
