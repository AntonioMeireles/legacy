class MtDaapd(AutoPackageRecipe):
    name = 'mt-daapd'
    version = '0.2.4'

    buildRequires = ['bison:runtime', 'flex:runtime', 'gdbm:devel', 'libid3tag:devel', 'zlib:devel', 'libogg:devel', 'libvorbis:devel']

    def unpack(r):
        r.addArchive('http://superb-east.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')

    def configure(r):
        r.Configure('--enable-oggvorbis')
