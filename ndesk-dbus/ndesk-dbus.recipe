class NdeskDbus(BuildPackageRecipe):
    name = 'ndesk-dbus'
    version = '0.6.0'
    buildRequires = [ 'mono:devel', 'mono:lib', 'mono:cil', 'pkgconfig:devel' ]

    def setup(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.addArchive('http://www.ndesk.org/archive/dbus-sharp/')
        r.addPatch('lib64.patch')
        r.Configure()
        r.Make()
        r.MakeInstall()
