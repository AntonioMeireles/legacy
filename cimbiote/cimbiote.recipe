class CimbioteRecipe(AutoPackageRecipe):
    name = 'cimbiote'
    version = '0.6'

    buildRequires = [
        'autoconf:runtime',
        'automake:runtime',
        'python:devel',
    ]

    def unpack(r):
        r.addMercurialSnapshot("http://hg.eng.rpath.com/%(name)s")
        r.Automake()
