loadRecipe('gnomepackage.recipe')
class GnomeTerminal(GnomePackageRecipe):
    
    buildRequires = [ 'glib:devel', 'gtk:devel',
                      'libgnomeui:devel', 'GConf:devel',
                      'libglade:devel', 'gnome-vfs:devel',
                      'vte:devel', 'libbonobo:devel',
                      'desktop-file-utils:runtime',
                      'startup-notification:devel',
                      'scrollkeeper:runtime',
                      'gettext:runtime' ]
                      
    name = 'gnome-terminal'
    version = '2.13.0'

    extraConfig = '--with-widget=vte'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = '-g -Os'
