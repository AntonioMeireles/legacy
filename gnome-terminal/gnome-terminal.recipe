loadRecipe('gnomepackage.recipe')
class GnomeTerminal(GnomePackageRecipe):
    
    buildRequires = [ 'glib:devel', 'gtk:devel', 'libgnomeui:devel', 'GConf:devel',
        'libglade:devel', 'gnome-vfs:devel', 'vte:devel', 'libbonobo:devel',
        'desktop-file-utils:runtime', 'startup-notification:devel',
        'scrollkeeper:runtime', 'gettext:runtime', 'ORBit2:devel',
        'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel',
        'gnome-keyring:devel', 'libart_lgpl:devel', 'libbonoboui:devel', 
        'libgnome:devel', 'libgnomecanvas:devel', 'libpng:devel',
        'libxml2:devel', 'ncurses:devel', 'pango:devel', 'popt:devel',
        'GConf:runtime', 'perl:runtime','libXft:devel' ]
                      
    name = 'gnome-terminal'
    version = '2.15.4'

    extraConfig = '--with-widget=vte'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = '-g -Os'
