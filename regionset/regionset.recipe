class regionset(CPackageRecipe):
    name = 'regionset'
    version = '0.1'

    def setup(r):
        # http://linvdr.org/projects/regionset/
        # http://freshmeat.net/projects/regionset/
        r.addArchive('http://linvdr.org/download/regionset/'
                     '%(name)s-%(version)s.tar.gz')
        r.Make()
        r.Install('regionset', '%(sbindir)s/')
