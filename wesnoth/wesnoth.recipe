class skeleton(PackageRecipe):
	name='wesnoth'
	version='1.0'

        buildRequires=['desktop-file-utils:runtime', 'SDL:devel', 'SDL_image:devel', 'SDL_mixer:devel', 'SDL_net:devel', 'freetype:devel', 'gcc:devel', 'glibc:devel', 'xorg-x11:devel', 'zlib:devel', 'gawk:runtime', 'libpng:devel', 'libtool:runtime']

	def setup(r):
		r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/wesnoth/wesnoth-%(version)s.tar.gz')
		r.Desktopfile('icons/wesnoth.desktop')
		r.Install('images/wesnoth-icon.png','%(datadir)s/pixmaps/')
		r.Configure()
		r.Make()
		r.MakeInstall()
