class skeleton(PackageRecipe):
	name='wesnoth'
	version='0.9.5'

        buildRequires=['desktop-file-utils:runtime']

	def setup(r):
		r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/wesnoth/wesnoth-%(version)s.tar.gz')
		r.Desktopfile('icons/wesnoth.desktop')
		r.Install('images/wesnoth-icon.png','%(datadir)s/pixmaps/')
		r.Configure()
		r.Make()
		r.MakeInstall()
