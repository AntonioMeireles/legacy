loadSuperClass('kdecorepackage')
class kdeAdmin(kdeCorePackageRecipe):

    name = 'kdeadmin'
    version = '3.5.10'

    verify = False
    buildAPIDox = False

    kdeCorePackageRecipe.extraConf += '--with-private-groups'

    modules = [
        'kcron',
        'kdat',
       ('kfile-plugins-admin', 'kfile-plugins'),
        'knetworkconf',
        'ksysv',
        'kuser',
        'secpolicy'
    ]

    def postUnpack(r):

        # Useless in rpl: kpackage, lilo-config
        r.Environment('DO_NOT_COMPILE', 'kpackage lilo-config')

