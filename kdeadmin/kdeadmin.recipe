loadSuperClass('kdecorepackage')
class kdeAdmin(kdeCorePackageRecipe):

    name = 'kdeadmin'
    version = '4.6.1'

    buildRequires = [
        'dbus-python:python', 'perl-Locale-gettext:perl', 'perl:devel',
        'pycups:python', 'pykde:python', 'PyQt4:python', 'python:devel',
        'system-config-printer:python'
    ]

    modules = [
        'kuser',
        'kcron',
        'ksystemlog',
        'system-config-printer-kde',
    ]

    def postUnpack(r):

        r.addPatches(
            '02_kuser_first_uid_gid_fix.diff',
            'kubuntu_02_system_config_printer_trunk.diff',
        )

