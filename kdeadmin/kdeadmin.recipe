loadSuperClass('kdecorepackage')
class kdeAdmin(kdeCorePackageRecipe):

    name = 'kdeadmin'
    version = '4.3.1+r1004145'

    buildRequires = [
        'dbus-python:python', 'perl:devel', 'pycups:python', 'pykde:python',
        'PyQt4:python', 'python:devel', 'system-config-printer:python'
    ]

    modules = [
        'kuser',
        'kcron',
        'kpackage',
        ('knetworkconf', 'knetworkconf', 'doc/kcontrol/knetworkconf'),
        'ksystemlog',
        'system-config-printer-kde',
    ]

    def postUnpack(r):

        r.addUbuntuPatches('k/kdeadmin',
            'kubuntu_01_use_sudo.diff',
        )

