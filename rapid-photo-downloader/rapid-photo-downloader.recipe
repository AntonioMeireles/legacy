class RapidPhotoDownloader(PackageRecipe):
    name = 'rapid-photo-downloader'
    version = '0.0.9_beta4'
 
    buildRequires = ['python-setuptools:python', 'dbus-python:python', 'gnome-python:python', 'notify-python:python', 'python:devel', 'gettext:runtime']
 
    def setup(r):
	r.macros.version = r.version.replace('_', '-')
        r.addArchive('http://launchpad.net/rapid/0.1.0/0.0.9beta4/+download/rapid-photo-downloader-0.0.9~b4.tar.gz')
	r.PythonSetup()
