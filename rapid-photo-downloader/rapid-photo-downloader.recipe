class RapidPhotoDownloader(PackageRecipe):
    name = 'rapid-photo-downloader'
    version = '0.1.3'
 
    buildRequires = ['python-setuptools:python', 'dbus-python:python', 'gnome-python:python', 'notify-python:python', 'python:devel', 'gettext:runtime', 'pygtk:python']
 
    def setup(r):
	r.macros.version = r.version.replace('_', '-')
        r.addArchive('http://launchpad.net/rapid/trunk/%(version)s/+download/%(name)s-%(version)s.tar.gz')
	r.PythonSetup()
