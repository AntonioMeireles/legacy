class Lxdm(AutoPackageRecipe):
    name = 'lxdm'
    version = '0.4.1'
 
    buildRequires = ['ConsoleKit:devel', 'atk:devel', 'cairo:devel', 'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'gdk-pixbuf:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libpng:devel', 'libxcb:devel', 'pam:devel', 'pango:devel', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/lxde/%(name)s-%(version)s.tar.gz')
        #r.addPatch('lxdm-pam.patch')
        r.addPatch('Xsession.patch')
        r.addPatch('lxdm-conf.patch')
        

