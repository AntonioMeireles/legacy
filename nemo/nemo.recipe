class Nemo(CPackageRecipe):
    name = 'nemo'
    version = '0.2.0'
    buildRequires = [ 'pkgconfig:devel', 'beagle:devel',
                      'beagle-xesam:lib', 'mono:devel',
                      'glib:devel', 'desktop-file-utils:config']

    def setup(r):
        r.addArchive('http://iola.dk/%(name)s/downloads/%(name)s-%(version)s.tar.bz2')

        r.Environment('MONO_PATH', '%(destdir)s/%(libdir)s/%(name)s')
        r.Environment('MONO_SHARED_DIR', '/tmp')

        # Use working GLib CS files
        r.addAction('rm -f dbus/GLib.cs')
        for file in ('GLib.cs', 'GLib.IO.cs'):
            r.addSource(file, dest = 'dbus/')

        r.Make()
        r.MakeInstall()
