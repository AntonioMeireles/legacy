loadSuperClass('kdecorepackage')
class kdePlasmaAddons(kdeCorePackageRecipe):

    name = 'kdeplasma-addons'
    version = '4.4.1+r1101468'

    buildRequires = [
        'attica:devel', 'kdebase-workspace:devel', 'libkexiv2:devel',
        'libXtst:devel', 'marble:devel', 'qimageblitz:devel', 'soprano:devel',
        'inputproto:devel'
    ]

    def postUnpack(r):

        r.addPatches(
            'kubuntu_04_kimpanel_disable_scim.diff',
        )

