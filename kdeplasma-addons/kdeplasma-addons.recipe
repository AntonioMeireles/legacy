loadSuperClass('kdecorepackage')
class kdePlasmaAddons(kdeCorePackageRecipe):

    name = 'kdeplasma-addons'
    version = '4.6.0'

    buildRequires = [
        'attica:devel', 'inputproto:devel', 'kdebase-workspace:devel',
        'libkexiv2:devel', 'libXi:devel', 'libXtst:devel', 'marble:devel',
        'qca2:devel', 'qimageblitz:devel'
    ]

    def postUnpack(r):

        r.addPatches(
            'kubuntu_04_kimpanel_disable_scim.diff',
        )

