class Gnuchess(PackageRecipe):

    buildRequires = [
        'gcc:devel',
        'glibc:devel',
        'xorg-x11:devel',
        'zlib:devel',
    ]


    name = "gnuchess"
    version = "5.07"


    def setup(r):
        r.addArchive('http://ftp.gnu.org/pub/gnu/chess/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()

