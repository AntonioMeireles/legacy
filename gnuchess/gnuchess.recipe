class Gnuchess(CPackageRecipe):

    buildRequires = [
        'zlib:devel',
        'ncurses:devel','flex:runtime', 'readline:devel'
    ]


    name = "gnuchess"
    version = "5.07"


    def setup(r):
        r.addArchive('http://ftp.gnu.org/pub/gnu/chess/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()

