class par2cmdline(PackageRecipe):
    buildRequires = [ 'gcc:devel', 'glibc:devel' ]
    name = "par2cmdline"
    version = "0.3"

    def setup(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/parchive/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
