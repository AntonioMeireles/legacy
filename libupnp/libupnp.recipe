class Libupnp(AutoPackageRecipe):
    name = 'libupnp'
    version = '1.6.5'

    buildRequires = [ 'glibc:devel' ]

    def unpack(r):
        r.addArchive('http://surfnet.dl.sourceforge.net/sourceforge/pupnp/libupnp-1.6.5.tar.bz2')

        r.Configure()
        r.Make()
        r.MakeInstall()
