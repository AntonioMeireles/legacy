class Bareftp(AutoPackageRecipe):
    name = 'bareftp'
    version = '0.2.3'
 
    buildRequires = ['desktop-file-utils:runtime', 'gettext:runtime', 'gnome-sharp:cil', 'gtk-sharp:cil', 'intltool:runtime', 'mono:cil', 'mono:devel', 'mono:runtime', 'perl:runtime', 'pkgconfig:devellib', 'gnome-sharp:devellib', 'gtk-sharp:devellib', 'gnome-vfs-sharp:devellib', 'gconf-sharp:devellib']
 
    def unpack(r):
        r.addArchive('http://www.bareftp.org/release/%(name)s-%(version)s.tar.gz')
