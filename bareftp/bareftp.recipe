class Bareftp(AutoPackageRecipe):
    name = 'bareftp'
    version = '0.3.1'
 
    buildRequires = [
        'desktop-file-utils:runtime',
        'gettext:runtime', 'gnome-keyring-sharp:cil', 'gnome-sharp:cil',
        'gnome-sharp:devellib', 'gtk-sharp:cil', 'gtk-sharp:devellib',
        'intltool:runtime',
        'mono:cil', 'mono:devel', 'mono:runtime',
        'perl:runtime', 'pkgconfig:devel'
    ]
 
    def unpack(r):
        r.addArchive('http://www.bareftp.org/release/%(name)s-%(version)s.tar.gz')
        r.Replace('gnome-keyring-sharp', 'gnome-keyring-sharp-1.0','configure')
