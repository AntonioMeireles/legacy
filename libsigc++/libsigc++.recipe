class Libsigcpp(AutoPackageRecipe):
    name = 'libsigc++'
    version = '2.1.1'

    buildRequires = ['m4:runtime', 'libstdc++:devel', 'perl:runtime']

    def unpack(r):
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/%(name)s/2.1/%(name)s-%(version)s.tar.gz')
