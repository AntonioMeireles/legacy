class numpy(CPackageRecipe):
    name = 'numpy'
    version = '1.3.0'

    buildRequires = [
        'python-ctypes:python',
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://voxel.dl.sourceforge.net/sourceforge/numpy/')
        r.PythonSetup()
