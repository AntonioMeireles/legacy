class Dist(GroupRecipe):
    name = 'group-lite'
    version = '0.9.8.3'

    autoResolve = True
    depCheck = True
    checkOnlyByDefaultDeps = True

    def setup(r):
      r.setLabelPath('foresight.rpath.org@fl:1-devel', 'conary.rpath.com@rpl:1', 'contrib.rpath.org@rpl:devel', 'kernelbits.rpath.org@rpl:1')
      compatLabel='conary.rpath.com@rpl:1-compat'
      conaryLabel='foresight.rpath.org@fl:1-devel'

      kernelVersion = 'kernelbits.rpath.org@rpl:1/2.6.18.1-0.2-1'

      r.removeComponents(['devel', 'devellib', 'doc', 'supdoc'])
      r.add('group-core')
      r.add('group-gnome')
      r.remove('gnome-user-docs')
      r.remove('gnome-games-extra-data')
      r.add('group-desktop')
      r.remove('inkscape')
      r.add('gc:lib') #Needed by inkscape
      r.add('perl-libxml-enno') #Needed by inkscape
      r.remove('gimp')
      r.remove('wxWidgets')
      r.remove('XaraLX')
      r.remove('gDesklets')
      r.add('group-media')
      r.remove('MPlayer-codecs')
      r.add('group-mono')
      r.add('group-internet')
      r.remove('epiphany')
      r.remove('evolution-exchange')
      r.remove('evolution-webcal')
      r.remove('google-earth')
      r.add('group-laptop-tools')
      r.add('group-drivers')
      r.add('group-turbogears')
      r.add('group-xorg')
      r.add('group-base')
      r.add('info-raa-web','raa.rpath.org@rpl:1')
      r.add('raa','raa.rpath.org@rpath:raa-1.1-devel')
      r.add('raa-lighttpd','raa.rpath.org@rpath:raa-1.1-devel')
      r.add('raa-branding','raa.rpath.org@rpath:raa-1.1-devel')
      r.add('raa-desktop')
      r.add('foresight-fonts')
