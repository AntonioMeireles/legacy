class WqyZenhei(PackageRecipe):
    name = 'wqy-zenhei'
    version = '0.8.38.1'

    buildRequires = ['mkfontdir:runtime']

    def setup(r):
        r.addArchive('mirror://sourceforge/wqy/%(name)s-0.8.38-1.tar.gz')
        r.Install('%(name)s.ttc', '%(datadir)s/fonts/wenquanyi/')
        r.Install('*.conf', '%(sysconfdir)s/fonts/conf.d/')
