class GlChess(PackageRecipe):
    name = 'glchess'
    version = '1.0.2'

    buildRequires = ['python-setuptools:python','PIL:python', 'desktop-file-utils:runtime', 'gnome-python:python', 'pygobject:python', 'pygtk:python', 'shared-mime-info:runtime']

    def setup(r):
        r.addArchive('http://belnet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Environment('PYTHONPATH', 'lib/ ./glchess')
        r.Run('python setup.py sdist')
        r.Run('python setup.py install --root=%(destdir)s')
