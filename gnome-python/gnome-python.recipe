loadRecipe('gnomepackage.recipe')
class GnomePython(GnomePackageRecipe):

    buildRequires = [ 'pygtk:devel', 'gtk:devel', 'libgnomecanvas:devel',
			'libgnome:devel', 'GConf:devel', 'gnome-vfs:devel',
			'libbonobo:devel', 'libbonoboui:devel', 'nautilus:devel',
			'eel:devel', 'gnome-panel:devel', 'libgtkhtml:devel',
			'pyorbit:python', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
			'fontconfig:devel', 'freetype:devel', 'glib:devel',
			'gnome-keyring:devel', 'libart_lgpl:devel', 'libgnomeui:devel',
			'libpng:devel', 'libxml2:devel', 'pango:devel', 'popt:devel' ]

    extraConfig = ''

    name = 'gnome-python'
    version = '2.12.2'

    def build(r):
        r.Replace(('-lpython.*', ''), 'gnomevfs/Makefile.am')
        r.Automake(autoMakeArgs = "--add-missing")
        GnomePackageRecipe.build(r)
