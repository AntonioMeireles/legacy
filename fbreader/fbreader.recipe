class FBReader(AutoPackageRecipe):
    name = 'fbreader'
    version = '0.10.7'

    buildRequires = [
        'atk:devel',
        'bzip2:devel',
        'cairo:devel',
        'curl:devel',
        'desktop-file-utils:runtime',
        'expat:devel',
        'fontconfig:devel',
        'freetype:devel',
        'fribidi:devel',
        'glib:devel',
        'gtk:devel',
        'libjpeg:devel',
        'liblinebreak:devel',
        'libpng:devel',
        'libstdc++:devel',
        'libX11:devel',
        'libxcb:devel',
        'libXrender:devel',
        'pango:devel',
        'pixman:devel',
        'pkgconfig:devel',
        'xcb-util:devel',
        'zlib:devel',
    ]

    def unpack(r):
        r.macros.archive_name = "fbreader-sources"
        r.addArchive("http://www.fbreader.org/")
        r.Replace(r"\$\(INSTALLDIR\)/lib", "$(INSTALLDIR)/%(lib)s",
            "makefiles/config.mk")
        r.Replace("mozilla", "htmlview",
            "fbreader/data/default/external.desktop.xml")
        r.makeArgs = "TARGET_ARCH=desktop UI_TYPE=gtk TARGET_STATUS=release"

    def configure(r):
        pass

    def make(r):
        r.Make(r.makeArgs)

    def makeinstall(r):
        r.MakeInstall(r.makeArgs)
