class WV(AutoPackageRecipe):

    name = 'wv2'
    version = '0.2.3'

    buildRequires = [
        'glib:devel', 'libgsf:devel', 'libstdc++:devel', 'libxml2:devel',
        'pkgconfig:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/wvware/')

        # Respect {CPP,LD}FLAGS
        r.Replace(
            ('CPPFLAGS=\$_cppflags', ''),
            ('LDFLAGS=\$_ldflags', ''),
            'configure')

