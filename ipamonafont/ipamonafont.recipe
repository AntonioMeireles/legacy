class Ipamonafont(PackageRecipe):
    name = 'ipamonafont'
    version = '1.0.5'

    buildRequires = ['fontconfig:runtime',
		'mkfontdir:runtime']

    def setup(r):
	r.addArchive('http://www.geocities.jp/ipa_mona/'
		'opfc-ModuleHP-1.1.1_withIPAMonaFonts-%(version)s.tar.gz')
	r.Install('fonts/ipag-mona.ttf',
		'/usr/share/fonts/%(name)s/ipag-mona.ttf')
	r.Install('fonts/ipagp-mona.ttf',
		'/usr/share/fonts/%(name)s/ipagp-mona.ttf')
	r.Install('fonts/ipagui-mona.ttf',
		'/usr/share/fonts/%(name)s/ipagui-mona.ttf')
	r.Install('fonts/ipam-mona.ttf',
		'/usr/share/fonts/%(name)s/ipam-mona.ttf')
	r.Install('fonts/ipamp-mona.ttf',
		'/usr/share/fonts/%(name)s/ipamp-mona.ttf')
	#for licence issue
	r.addSource('http://osdn.dl.sourceforge.jp/opfc/13897/'
		'opfc-ModuleHP-1.1.1.tar.gz',
		dir='/usr/share/fonts/%(name)s/opfc-ModuleHP-1.1.1.tar.gz')
