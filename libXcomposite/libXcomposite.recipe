loadSuperClass('xorgpackage.recipe')
class LibXcomposite(XorgPackageRecipe):
    name = 'libXcomposite'
    version = '0.3.2'
    component = 'lib'

    buildRequires = [ 'compositeproto:devel', 'libXext:devel',
        'libXfixes:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('compositeproto:devel', 'libXfixes:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xcomposite.pc')
