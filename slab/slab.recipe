
class Slab(AutoPackageRecipe):

    name = 'slab'
    version = '0.6.2'

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devellib', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'gtk:devel', 'hal:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libgtop:devel', 'libpng:devel', 'librsvg:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'startup-notification:devel', 'wireless-tools:devel', 'xorg-x11:devel', 'zlib:devel' ]

    def setup(r):
#http://develop.intermax.nl/slab/
        srpm = 'http://develop.intermax.nl/slab/slab-%(version)s-3.src.rpm'
        r.addSource(srpm)
        r.addArchive('gnome-main-menu-%(version)s.tar.gz', rpm=srpm, dir = '%(name)s-%(version)s')
        r.addPatch('gnome-main-menu-0.6.2-fedora.patch', rpm=srpm, dir = 'gnome-main-menu-%(version)s')
        r.addPatch('gnome-main-menu-0.6.2-disable-add-to-startup.patch', rpm=srpm, dir = 'gnome-main-menu-%(version)s')
        
        r.Configure(' --disable-static --disable-dependency-tracking ', dir='gnome-main-menu-%(version)s' )
        r.Make( dir='gnome-main-menu-%(version)s' )
        r.MakeInstall( dir='gnome-main-menu-%(version)s' )

        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/application-browser.schemas')
        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/control-center.schemas')
	r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/slab.schemas')
