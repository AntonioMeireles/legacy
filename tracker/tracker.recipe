class tracker(AutoPackageRecipe):
    name='tracker'
    version='0.6.93'

    buildRequires = [
        'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
        'dbus-glib:devel', 'dbus-glib:runtime', 'dbus:devel',
        'desktop-file-utils:runtime', 'docbook-utils:runtime', 'exempi:devel',
        'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:devel',
        'gettext:runtime', 'glib:devel', 'glib:runtime', 'gmime:devel',
        'gnome-common:runtime', 'gnome-desktop:devel', 'gst-plugins-base:devel',
        'gstreamer:devel', 'gtk-doc:runtime', 'gtk-doc:devel', 'gtk:devel',
        'gtk:runtime', 'hal:devel', 'intltool:runtime', 'libX11:devel',
        'libXrender:devel', 'libexif:devel', 'libglade:devel', 'libgsf:devel',
        'libjpeg:devel', 'libnotify:devel', 'libpng:devel', 'libtiff:devel',
        'libtool:devel', 'libtool:runtime', 'libxcb:devel', 'libxml2:devel',
        'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'poppler-glib:devel',
        'poppler:devel', 'sqlite:devel', 'sqlite:runtime', 'xcb-util:devel',
        'zlib:devel'
    ]

    def setup(r):
        r.macros.mver = r.version[0:3]
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/tracker/%(mver)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()
