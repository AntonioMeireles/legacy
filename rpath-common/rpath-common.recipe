loadInstalled('python')
class rPathCommon(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rpath-common'
    version = '1.0'

    buildRequires = [ 'util-linux:runtime', 'python:runtime' ]

    def setup(r):
        r.setDefaultPython()
        r.addArchive('ftp://download.rpath.com/rpath-common/')
        r.Replace('^PYTHON =', 'PYTHON ?=', 'Make.rules')
        r.Make('PYTHON=%(pybin)s')
        r.MakeInstall('lib=%(lib)s PYTHON=%(pybin)s')
