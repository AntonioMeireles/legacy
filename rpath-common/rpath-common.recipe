class rPathCommon(BuildPackageRecipe):
    name = 'rpath-common'
    version = '0.2'

    buildRequires = [ 'util-linux:runtime', ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/rpath-common/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
