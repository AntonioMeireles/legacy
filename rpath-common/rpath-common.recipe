loadSuperClass('python=cantwait.rpath.org@rpl:2')
class rPathCommon(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rpath-common'
    version = '0.2'

    buildRequires = [ 'util-linux:runtime', ]

    def setup(r):
        r.setDefaultPython()
        r.Replace('python2.4', 'python2.6', 'Make.rules')
        r.addArchive('ftp://download.rpath.com/rpath-common/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
