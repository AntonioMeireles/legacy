class SystemConfigRootPassword(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'intltool:runtime' ]
    name = "system-config-rootpassword"
    version = "1.1.6"

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2',
            rpm='ftp://ftp.linux.ncsu.edu/pub/fedora/linux/core/development/SRPMS/%(name)s-%(version)s-1.src.rpm')

        r.Replace('RPM_BUILD_ROOT', 'INSTROOT', 'po/Makefile')
        r.Replace('python2', 'python', 'src/system-config-rootpassword{,.py}')
        r.Replace('Exec=','Exec=gksudo ','system-config-rootpassword.desktop.in')
        r.Replace('Categories=Application;System;','Categories=Application;System;Settings','system-config-rootpassword.desktop.in')
        r.Make()
        r.MakeInstall(rootVar='INSTROOT')

        r.Requires('rhpl:python', '%(bindir)s/system-config-rootpassword')
        r.Requires('pygtk:python', '%(bindir)s/system-config-rootpassword')
        r.Requires('libuser:python', '%(bindir)s/system-config-rootpassword')
