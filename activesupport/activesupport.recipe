#
# activesupport.recipe
#
class ActiveSupport(PackageRecipe):

    name = 'activesupport'
    version = '2.2.2'

    buildRequires = [ 'ruby:runtime' ]

    def setup(r):
        # Get the source
        r.addArchive('http://rubyforge.org/frs/download.php/47167/%(name)s-%(version)s.tgz')

        # Install required libraries in site_ruby directory
        r.Install('lib/*', '%(libdir)s/ruby/site_ruby/', mode=0644)

        # XXX: remove this line when Conary has this added to AutoDoc policy
        r.Doc('CHANGELOG')

