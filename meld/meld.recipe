loadSuperClass('gnomepackage')
class Meld(GnomePackageRecipe):
    name = 'meld'
    version = '1.3.2'

    buildRequires = [ 'desktop-file-utils:runtime', 'gnome-python:python',
                      'intltool:runtime', 'pygtk:python', 'pygtk:runtime', 'python:runtime',
                      'rarian:devel', 'rarian:runtime', 'python:devel', 'pycairo:python',
                      'subversion:python' ]

    def build(r):
       r.Make('prefix=%(prefix)s libdir=%(libdir)s')

    def install(r):
        r.MakePathsInstall()
