loadSuperClass('gnomepackage')
class Meld(GnomePackageRecipe):
    name = 'meld'
    version = '1.6.0'

    buildRequires = [ 
        'desktop-file-utils:runtime', 
        'gnome-python:python',
        'intltool:runtime', 
        'pygtk:python', 
        'pygtk:runtime', 
        'python:runtime',
        'rarian:devel', 
        'rarian:runtime', 
        'python:devel', 
        'pycairo:python',
        'subversion:python', 
        'xz:runtime', 
            ]

    def build(r):
       r.Make('prefix=%(prefix)s libdir=%(libdir)s')

    def install(r):
        r.MakePathsInstall()
