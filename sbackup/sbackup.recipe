class SBackup(PackageRecipe):

    buildRequires = [ 'python:runtime' ]

    name = 'sbackup'
    version = '0.3'
    
    def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s_%(version)s-1.tar.gz')
	r.MakeDirs('%(datadir)s/applications/','%(sysconfdir)s')
	r.MakeInstall()
