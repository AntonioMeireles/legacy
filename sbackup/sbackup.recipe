class SBackup(CPackageRecipe):

    buildRequires = [ 'python:runtime', 'gnome-python:python', 'pygobject:python', 'pygtk:python' ]

    name = 'sbackup'
    version = '0.10'
    
    def setup(r):
        r.addArchive('http://osdn.dl.sourceforge.net/sourceforge/%(name)s/%(name)s_%(version)s-1.tar.gz')
        r.Replace('dpkg --get-selections','conary q','sbackupd')
        r.MakeDirs('%(datadir)s/applications/','%(sysconfdir)s')
        r.MakeInstall()
