loadSuperClass('rpmpackage')
class audacity(RPMPackageRecipe,AutoPackageRecipe):
    name = 'audacity'
    version = '1.3.13'
    rpmRelease = '0.4.beta.fc15'
    tarballName = '%(name)s-minsrc-%(version)s-beta.tar.bz2'
    rpmPatches = [ 'audacity-1.3.7-libmp3lame-default.patch',
                   'audacity-1.3.9-libdir.patch',
                   #'audacity-1.3.7-vamp-1.3.patch', 
		   'audacity-1.3.13-desktop.in.patch',
                   ]

    buildRequires = [
        'alsa-lib:devel', 
        'desktop-file-utils:runtime', 
        'expat:devel',
        'flac:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'gtk:devel',
        'jack:devel', 
        'libid3tag:devel', 
        'libmad:devel', 
        'libogg:devel',
        'libsndfile:devel', 
        'libstdc++:devel', 
        'libvorbis:devel',
        'pkgconfig:devel', 
        'shared-mime-info:runtime', 
        'wxGTK:devel',
        'zip:runtime', 
        'libsamplerate:devel', 
        'soundtouch:devel',
        'taglib:devel', 
        'twolame:devel', 
        'ffmpeg:devel'
    ]

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.Replace('match_ext', 'av_match_ext', 'src/FFmpeg.cpp')
        r.Replace('match_ext', 'av_match_ext', 'src/FFmpeg.h')
        # Substitute hardcoded library paths.
        r.Run("""
for i in src/effects/ladspa/LoadLadspa.cpp src/AudacityApp.cpp
do
    sed -i -e 's!__RPM_LIBDIR__!%(libdir)s!g' $i
    sed -i -e 's!__RPM_LIB__!%(lib)s!g' $i
done
""")
        # Substitute occurences of "libmp3lame.so" with "libmp3lame.so.0".
        r.Run("""
for i in locale/*.po src/export/ExportMP3.cpp
do
    sed -i -e 's!libmp3lame.so\([^.]\)!libmp3lame.so.0\1!g' $i
done
""")

    def configure(r):
        r.disableParallelMake()
        r.Configure(' --with-help '
                    ' --with-libsndfile=system '
                    ' --without-libresample '
                    ' --with-libsamplerate=system '
                    ' --with-libflac=system '
                    ' --with-ladspa '
                    ' --with-vorbis=system '
                    ' --with-id3tag=system '
                    ' --with-expat=system '
                    ' --with-soundtouch=system '
                    ' --with-libmad=system '
                    ' --with-ffmpeg=system '
                    ' --with-libid3tag=system '
                    ' --with-mp3  ')

    def policy(r):
        r.Requires('ffmpeg:runtime', '%(bindir)s/audacity')
