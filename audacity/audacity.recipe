class audacity(AutoPackageRecipe):
    name = 'audacity'
    version = '1.3.4'

    buildRequires = [
        'alsa-lib:devel', 'desktop-file-utils:runtime', 'expat:devel',
        'flac:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'jack:devel', 'libid3tag:devel', 'libmad:devel', 'libogg:devel',
        'libsndfile:devel', 'libstdc++:devel', 'libvorbis:devel',
        'pkgconfig:devel', 'shared-mime-info:runtime', 'wxWidgets:devel',
        'zip:runtime',
    ]

    def unpack(r):
        r.macros.archive_name = '%(name)s-src'
        r.addArchive('mirror://sourceforge/audacity/')
