loadSuperClass('rpmpackage')
class audacity(RPMPackageRecipe,AutoPackageRecipe):
    name = 'audacity'
    version = '1.3.5'
    rpmRelease = '0.4.beta.fc9'
    tarballName = '%(name)s-src-%(version)s.tar.bz2'
    rpmPatches = [ 'audacity-1.3.4-libmp3lame-default.patch',
                   'audacity-1.3.4-libdir.patch']
    rpmSources = [ 'audacity.png', 'audacity.desktop']
    buildRequires = [
        'alsa-lib:devel', 'desktop-file-utils:runtime', 'expat:devel',
        'flac:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'jack:devel', 'libid3tag:devel', 'libmad:devel', 'libogg:devel',
        'libsndfile:devel', 'libstdc++:devel', 'libvorbis:devel',
        'pkgconfig:devel', 'shared-mime-info:runtime', 'wxGTK:devel',
        'zip:runtime', 'libsamplerate:devel'
    ]

    def unpack(r):
        RPMPackageRecipe.unpack(r)

        # Substitute hardcoded library paths.
        r.Run("""
for i in src/effects/ladspa/LoadLadspa.cpp src/export/ExportMP3.cpp src/AudacityApp.cpp lib-src/libvamp/vamp-sdk/PluginHostAdapter.cpp
do
    sed -i -e 's!__RPM_LIBDIR__!%(libdir)s!g' $i
    sed -i -e 's!__RPM_LIB__!%(lib)s!g' $i
done
""")
        # Substitute occurences of "libmp3lame.so" with "libmp3lame.so.0".
        r.Run("""
for i in locale/*.po src/export/ExportMP3.cpp
do
    sed -i -e 's!libmp3lame.so\([^.]\)!libmp3lame.so.0\1!g' $i
done
""")

    def configure(r):
        r.Desktopfile('audacity.desktop')
        r.Install('audacity.png', '%(datadir)s/pixmaps/')
        r.Configure(' --with-help '
                    ' --with-libsndfile=system '
                    ' --without-libresample '
                    ' --with-libsamplerate=system '
                    ' --with-libflac=system '
                    ' --with-ladspa '
                    ' --with-vorbis=system '
                    ' --with-id3tag=system '
                    ' --with-expat=system '
                    ' --with-soundtouch '
                    ' --with-libmad '
                    ' --with-mp3  ')
