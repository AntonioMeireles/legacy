class Turpial(PackageRecipe):
    name = 'turpial'
    version = '1.0'
 
    buildRequires = [
        'python-setuptools:python',
        'desktop-file-utils:runtime',
        'notify-python:python', 
        'pycairo:python', 
        'pygame:python', 
        'pygobject:python', 
        'pygtk:python', 
        'python:devel', 
        'pywebkitgtk:python', 
        'simplejson:python'
    ]
 
    def setup(r):
        r.addArchive('http://forja.softwarelibre.gob.ve/frs/download.php/144/')
        r.PythonSetup(data='--install-data=%(prefix)s')

