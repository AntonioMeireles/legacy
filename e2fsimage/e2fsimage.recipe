class E2fsImage(CPackageRecipe):
    name = 'e2fsimage'
    version = '0.2.2'
    buildRequires = [ 'e2fsprogs:devel' ]
    def setup(r):
        r.addArchive('http://internap.dl.sourceforge.net/sourceforge/e2fsimage/e2fsimage-%(version)s.tar.gz')
        r.addPatch('e2fsimage-0.2.2-misc.patch')
        r.addPatch('e2fsimage-0.2.2-largefile.patch')
        r.addPatch('e2fsimage-0.2.2-shellescapedfiles.patch')
        r.addPatch('e2fsimage-0.2.2-dirmodes.patch')
        r.macros.cflags += ' -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64 '
        r.Run('prefix=%(prefix)s ./configure')
        r.Make()
        r.macros.mandir = r.macros.mandir.replace(r.macros.prefix, '')
        r.MakeInstall('basedir=%(destdir)s mandir=%(mandir)s')
