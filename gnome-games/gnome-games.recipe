    name = 'gnome-games'
    version = '2.24.2'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --with-ggz-server --disable-scrollkeeper'

    def setup(r):
        GnomePackageRecipe.setup(r)

    def install(r):
        r.Run('echo >> libgames-support/libgnomegames.schemas')
