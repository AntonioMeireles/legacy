class Pysvn(PackageRecipe):

    name = 'pysvn'
    version = '1.7.0'

    buildRequires = ['python:bin', 'python-setuptools:python', 'subversion:devel', 'apr:devel', 'python:devel']

    def setup(r):
        r.addArchive('http://pysvn.barrys-emacs.org/source_kits/')
	r.mainDir('%(name)s-%(version)s/Source/')
	r.Run('python setup.py configure')
        r.Make()
        r.MakeInstall()
