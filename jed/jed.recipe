class Jed(AutoPackageRecipe):
    name = 'jed'
    version = '0.99.19'
    packageSummary = "Jed is a programmable, emacs-like editor. It is written in S-Lang."
 
    buildRequires = [
        'gpm:devel',
        'libICE:devel',
        'libX11:devel',
        'libXft:devel',
        'ncurses:devel',
        'pkgconfig:devel',
        'slang:devel',
        ]
 
    def unpack(r):
        r.addArchive('ftp://space.mit.edu/pub/davis/%(name)s/v0.99/%(name)s-0.99-19.tar.bz2')
#        r.addPatch('ftp://space.mit.edu/pub/davis/%(name)s/5.0.0__%(version)s.diff.bz2')

    def make(r):
        r.Make()
        r.Make('xjed')
        r.Make('rgrep')

