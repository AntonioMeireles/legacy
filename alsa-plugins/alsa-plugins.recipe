class AlsaPlugins(CPackageRecipe):
    name = 'alsa-plugins'
    version = '1.0.14'

    buildRequires = ['alsa-lib:devel', 'dbus:devel', 'jack:devel', 'libsamplerate:devel', 'pkgconfig:devel', 'pulseaudio:devel' ] 

    if Use.builddocs:
        buildRequires.append('doxygen:runtime')

    def setup(r):
        r.addArchive('ftp://ftp.alsa-project.org/pub/plugins/')


        r.Configure()
        r.Make()
        if Use.builddocs:
            r.Make('doc')
        r.MakeInstall()
        if Use.builddocs:
            r.Doc('doc/doxygen/*')
