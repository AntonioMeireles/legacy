class Kurush(PackageRecipe):
    buildRequires = [ 'mono:devel', 'gtk-sharp:devellib',
			'desktop-file-utils:runtime' ]

    name = 'kurush'
    version = '0.11'
    
    def setup(r):
        r.addArchive('http://www.ercansoy.com/kurush/Kurush-%(version)s-CVS.tar.gz')
	r.addSource('kurush.desktop')
        r.Run('./make.sh')
        r.Install('Kurush.exe','%(libdir)s/Kurush/')
	r.Install('icon-48.png','%(datadir)s/pixmaps/kurush.png')
	r.Desktopfile('kurush.desktop')
