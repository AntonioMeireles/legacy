class dclib(PackageRecipe):
    buildRequires=["glibc:devel", "zlib:devel", "openssl:devel",
                   "libxml2:devel"]

    name = "dclib"
    version = "0.3.7"

    def setup(r):
        r.addArchive("http://download.berlios.de/dcgui/%(name)s-%(version)s.tar.gz")
        r.Configure()
	r.Make()
        r.MakeInstall()

#       Here are the docs

