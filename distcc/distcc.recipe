class Distcc(CPackageRecipe):
    name = 'distcc'
    version = '2.18.3'

    if Use.bootstrap:
        clearBuildReqs()
        buildRequires = [ 'cross-gcc', 'glibc' ]
        config = ' --without-gtk --with-included-popt'
    else:
        buildRequires = [ 'popt:devel', 'atk:devel', 'glib:devel',
                          'pango:devel', 'pkgconfig:devel',
                          'gtk:devel', 'fontconfig:devel',
                          'cairo:devel', 'freetype:devel',
                          'libpng:devel', 'zlib:devel', 'libX11:devel',
                          'libXau:devel', 'libXdmcp:devel',
                          'libXext:devel', 'libXrender:devel', ]
        config = ' --with-gtk'

    def setup(r):
        r.addArchive('http://distcc.samba.org/ftp/%(name)s/', keyid='A0B3E88B')
        r.Configure(r.config)
        r.Make()
        r.MakeInstall('install-man')
