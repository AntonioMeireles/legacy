class ufraw(AutoPackageRecipe):
    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'gimp:devel', 'glib:devel', 'gtk:devel',
        'lcms:devel', 'libjpeg:devel', 'libpng:devel', 'libtiff:devel',
        'pango:devel', 'xorg-x11:devel', 'zlib:devel' ]

    name = 'ufraw'
    version = '0.7'

    def unpack(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
