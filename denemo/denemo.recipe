class Denemo(AutoPackageRecipe):
    name = 'denemo'
    version = '0.8.12'
    packageSummary = "Denemo is a free software (GPL) music notation editor for GNU/Linux"
    packageDescription = "Denemo is a software music notation editor that lets you rapidly enter notation for typesetting via the LilyPond music engraver. You can compose, transcribe, arrange, listen to the music and much more."

    buildRequires = ['atk:devel',
		'aubio:devel',
		'bison:runtime',
		'cairo:devel',
		'desktop-file-utils:runtime',
		'expat:devel',
		'fftw:devel',
		'flex:runtime',
		'fontconfig:devel',
		'freetype:devel',
		'gettext:runtime',
		'glib:devel',
		'gmp:devel',
		'gtk:devel',
		'gtksourceview:devel',
		'guile:devel',
		'guile:runtime',
		'intltool:runtime',
		'libX11:devel',
		'libXrender:devel',
		'libpng:devel',
		'libsamplerate:devel',
		'libtool:devel',
		'libxml2:devel',
		'mkfontdir:runtime',
		'pango:devel',
		'pixman:devel',
		'pkgconfig:devel',
		'portaudio:devel',
		'zlib:devel']
 
    def unpack(r):
        r.addArchive('http://download.savannah.gnu.org/releases/denemo/denemo-%(version)s.tar.gz')
