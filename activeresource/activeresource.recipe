#
# activerecord.recipe
#
class ActiveResource(PackageRecipe):

    name = 'activeresource'
    version = '2.2.2'

    buildRequires = [ 'ruby:runtime' ]

    def setup(r):
        # Get the source
        r.addArchive('http://rubyforge.org/frs/download.php/47179/%(name)s-%(version)s.tgz')

        # Install required libraries in site_ruby directory
        r.Install('lib/*', '%(libdir)s/ruby/site_ruby/', mode=0644)

