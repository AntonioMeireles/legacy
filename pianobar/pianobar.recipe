class Pianobar(CPackageRecipe):
    name = 'pianobar'
    version = '2010.10.07'

    buildRequires = ['faad2:devel', 'libao:devel', 'libmad:devel']

    def setup(r):
        r.addGitSnapshot('http://github.com/PromyLOPh/pianobar.git',
                         tag=r.macros.version)
        r.Make()
        r.MakeInstall()
        r.Move('/usr/local/*', '/usr/')

