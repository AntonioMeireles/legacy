class GnomeArt(PackageRecipe):
   buildRequires = [ 'rexml:lib','ruby-gnome2:lib','ruby:devellib' ]
	
   name = "gnome-art"
   version = "0.2"
   def setup(r):
	r.addArchive('http://miketech.net/gnome-art/download/%(name)s-%(version)s.tar.gz')
	r.mainDir('%(name)s')
	r.Run('cd gnome-art; ruby setup.rb config --prefix=%(destdir)s/%(prefix)s')
	r.Run('cd gnome-art; ruby setup.rb install')
	r.Run('cd gnome-splashscreen-manager; ruby setup.rb config --prefix=%(destdir)s/%(prefix)s')
	r.Run('cd gnome-splashscreen-manager; ruby setup.rb install')
