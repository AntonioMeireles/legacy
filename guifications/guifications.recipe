class Guifications(PackageRecipe):
    buildRequires = [ 'gaim:devel', 'gtk:devel', 'pango:devel' ]
               
    name = 'guifications'
    version = '2.12'

    def setup(r):
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge'
	r.addArchive('%(sf)s/guifications/guifications-%(version)s.tar.bz2')
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.Doc('NEWS', 'AUTHORS', 'README', 'TODO')

