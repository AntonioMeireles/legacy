loadSuperClass('xfce-core-package.recipe')
class xfceTerminal(xfceCorePackage):

    name = 'xfce-terminal'
    version = '0.2.6'

    xfce = '4.4.0'

    buildRequires = [
        'libexo:devel', 'ncurses:devel', 'vte:devel'
    ]

    def unpack(r):
        r.macros.archive_name = 'Terminal'
        xfceCorePackage.unpack(r)

        # http://bugzilla.xfce.org/show_bug.cgi?id=3383
        r.addPatch('Terminal-CVE-2007-3770.patch')

