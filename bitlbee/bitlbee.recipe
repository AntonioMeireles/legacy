class bitlbee(AutoPackageRecipe):
    name = 'bitlbee'
    version = '1.0.3'

    buildRequires = ['glib:devel', 'gnutls:devel', 'libgcrypt:devel', 'libgpg-error:devel']

    def unpack(r):
