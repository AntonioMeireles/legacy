class ClawsMailExtraPlugins(CPackageRecipe):
    name = 'claws-mail-extra-plugins'
    version = '3.6.0'
    buildRequires = [ 'atk:devel', 'bison:runtime', 'cairo:devel',
            'claws-mail:devel', 'curl:devel', 'dbus-glib:devel', 'dbus:devel',
            'e2fsprogs:devel',  'ghostscript:runtime',
            'expat:devel', 'flex:runtime', 'fontconfig:devel', 'freetype:devel',
            'glib:devel', 'gpgme:devel', 'gettext:runtime', 'intltool:runtime',
            'gcc-c++:runtime', 'gtk:devel', 'krb5:devel', 'libX11:devel',
            'libXrender:devel', 'libgpg-error:devel', 'libgtkhtml:devel',
            'libnotify:devel', 'libpng:devel', 'libxml2:devel', 'openssl:devel',
            'pango:devel', 'perl:devel', 'perl:runtime', 'pkgconfig:devel',
            'zlib:devel' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/sylpheed-claws/')

        plugins = (
            'acpi_notifier-1.0.17',
            'attachwarner-0.2.13',
            'att_remover-1.0.9',
            'cachesaver-0.10.8',
            'fetchinfo-plugin-0.4.23',
            'gtkhtml2_viewer-0.20',
            #'archive-0.7', needs libarchive
            'mailmbox-1.14.2',
            'newmail-0.0.13',
            'notification_plugin-0.18',
            # Removed due to licensing problems, might come back one day
            #'pdf_viewer-0.9.1',
            'perl_plugin-0.9.14',
            'rssyl-0.21',
            'spam_report-0.3.5',
            #'synce_plugin-0.7.4',
            'vcalendar-2.0.1'
        )

        for plugin in plugins:
            r.Configure(dir=plugin)
            r.MakeInstall(dir=plugin)
