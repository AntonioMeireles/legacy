class ClawsMailExtraPlugins(CPackageRecipe):
    name = 'claws-mail-extra-plugins'
    version = '3.1.0'
    buildRequires = [ 'atk:devel', 'cairo:devel', 'claws-mail:devel', 'curl:devel', 'dbus-glib:devel', 'dbus:devel', 'e2fsprogs:devel', 'ghostscript:runtime', 'expat:devel', 'flex:runtime', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gpgme:devel', 'gtk:devel', 'krb5:devel', 'libX11:devel', 'libXrender:devel', 'libgpg-error:devel', 'libgtkhtml:devel', 'libnotify:devel', 'libpng:devel', 'libxml2:devel', 'openssl:devel', 'pango:devel', 'perl:devel', 'perl:runtime', 'pkgconfig:devel', 'poppler:devel', 'poppler-glib:devel', 'zlib:devel' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/sylpheed-claws/')

        plugins = (
            'acpi_notifier-1.0.13',
            'attachwarner-0.2.9',
            'att_remover-1.0.7',
            'cachesaver-0.10.6',
            'fetchinfo-plugin-0.4.21',
            'gtkhtml2_viewer-0.16',
            'mailmbox-1.14',
            'newmail-0.0.11',
            'notification_plugin-0.13',
            'pdf_viewer-0.7',
            'perl_plugin-0.9.11',
            'rssyl-0.16',
            'smime-0.7.3',
            'spam_report-0.3',
            #'synce_plugin-0.7.2',
            'vcalendar-1.99'
        )

        for plugin in plugins:
            r.Configure(dir=plugin)
            r.MakeInstall(dir=plugin)
