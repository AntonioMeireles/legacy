class ClawsMailExtraPlugins(CPackageRecipe):
    name = 'claws-mail-extra-plugins'
    version = '3.4.0'
    buildRequires = [ 'atk:devel', 'cairo:devel', 'claws-mail:devel',
            'curl:devel', 'dbus-glib:devel', 'dbus:devel', 'e2fsprogs:devel',
            'gail:devel', 'ghostscript:runtime', 'expat:devel', 'flex:runtime',
            'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gpgme:devel',
            'gtk:devel', 'krb5:devel', 'libX11:devel', 'libXrender:devel',
            'libgpg-error:devel', 'libgtkhtml:devel', 'libnotify:devel',
            'libpng:devel', 'libxml2:devel', 'openssl:devel', 'pango:devel',
            'perl:devel', 'perl:runtime', 'pkgconfig:devel', 'poppler:devel',
            'poppler-glib:devel', 'zlib:devel' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/sylpheed-claws/')

        plugins = (
            'acpi_notifier-1.0.16',
            'attachwarner-0.2.12',
            'att_remover-1.0.8',
            'cachesaver-0.10.7',
            'fetchinfo-plugin-0.4.23',
            'gtkhtml2_viewer-0.18',
            'mailmbox-1.14.1',
            'newmail-0.0.12',
            'notification_plugin-0.16',
            'pdf_viewer-0.9.1',
            'perl_plugin-0.9.13',
            'rssyl-0.19',
            'smime-0.7.5',
            'spam_report-0.3.3',
            #'synce_plugin-0.7.3',
            'vcalendar-1.102'
        )

        for plugin in plugins:
            r.Configure(dir=plugin)
            r.MakeInstall(dir=plugin)
