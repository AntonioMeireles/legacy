class pidgin(AutoPackageRecipe):
    name = 'pidgin'
    version = '2.0.0beta7'

    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'evolution-data-server:devel', 'glib:devel', 'gnome-vfs:devel', 'libbonobo:devel', 'libgnome:devel', 'libxml2:devel', 'pango:devel', 'popt:devel', 'zlib:devel', 'perl:runtime', 'libao:devel', 'startup-notification:devel','audiofile:devel', 'gtkspell:devel', 'aspell:devel', 'nss:devel', 'pygobject:python', 'GConf:runtime', 'nspr:devel', 'gtk:devel', 'pkgconfig:devel', 'cairo:devel', 'dbus-glib:devellib', 'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'libpng:devel', 'perl:devel', 'doxygen:runtime', 'dbus-glib:devel', 'dbus-python:python', 'pygtk:python', 'perl:lib', 'avahi:devel', 'gettext:runtime', 'perl-XML-Parser', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXScrnSaver:devel', 'libXext:devel', 'libXrender:devel', 'gcc-c++:runtime', 'NetworkManager:devel', 'expat:devel', 'gstreamer:devel', 'libXau:devel', 'libXdmcp:devel', 'ncurses:devel', 'desktop-file-utils:runtime' ]

    def unpack(r):
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge/pidgin'
        r.addArchive('%(sf)s/pidgin-%(version)s.tar.bz2', keyid='4C292FCC')
        r.macros.optflags = '-g -Os'
        r.addSource('foresight-default-prefs.xml')

    def install(r):
        r.Install('foresight-default-prefs.xml','%(sysconfdir)s/pidgin/prefs.xml')

    def configure(r):
        r.Configure(' --disable-tcl --disable-tk --enable-gnutls=no --enable-nss=yes'
            '  --with-nss-includes=/usr/include/nss/ --with-nspr-includes=/usr/include/'
            ' --with-nss-libs=/usr/lib --with-nspr-libs=/usr/lib' 
            )
        r.disableParallelMake()

    def policy(r):
        # libtool automatically makes .a files for all the .so plugins
        # that gaim builds.  They're useless, so we remove them.
        r.RemoveNonPackageFiles(r'.*\.a')
        r.Remove('%(libdir)s/pidgin/relnot.so')
        r.AutoDoc('doc/CREDITS', 'doc/PERL-HOWTO.dox')
