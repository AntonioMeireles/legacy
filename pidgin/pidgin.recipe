class pidgin(AutoPackageRecipe):
    name = 'pidgin'
    version = '2.5.2'
    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'evolution-data-server:devel', 'glib:devel', 'gnome-vfs:devel', 'libbonobo:devel', 'libgnome:devel', 'libxml2:devel', 'pango:devel', 'popt:devel', 'zlib:devel', 'perl:runtime', 'libao:devel', 'startup-notification:devel','audiofile:devel', 'gtkspell:devel', 'aspell:devel', 'nss:devel', 'pygobject:python', 'GConf:runtime', 'nspr:devel', 'gtk:devel', 'pkgconfig:devel', 'cairo:devel', 'dbus-glib:devellib', 'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'libpng:devel', 'perl:devel', 'doxygen:runtime', 'dbus-glib:devel', 'dbus-python:python', 'pygtk:python', 'perl:lib', 'avahi:devel', 'gettext:runtime', 'perl-XML-Parser', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel', 'libXrender:devel', 'gcc-c++:runtime', 'NetworkManager:devel', 'expat:devel', 'gstreamer:devel', 'libXau:devel', 'libXdmcp:devel', 'ncurses:devel', 'desktop-file-utils:runtime', 'libXScrnSaver:devel', 'libgcrypt:devel', 'sqlite:devel', 'mono:devel', 'mono:cil', 'cyrus-sasl:devel', 'graphviz:runtime', 'intltool:runtime', 'libxslt:runtime', 'python:devel', 'tcl:devel', 'tk:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.macros.optflags = '-g -Os'
        r.Environment('MONO_SHARED_DIR', '/tmp')

    def configure(r):
        r.Configure(
            ' --enable-tcl --enable-tk --enable-gnutls=no --enable-nss=yes'
            ' --enable-mono --enable-cyrus-sasl --enable-tcl --enable-tk '
            ' --enable-dbus --enable-gstreamer --enable-nm --enable-screensaver'
            ' --disable-meanwhile'
            )
        r.disableParallelMake()

    def policy(r):
        # libtool automatically makes .a files for all the .so plugins
        # that gaim builds.  They're useless, so we remove them.
        r.RemoveNonPackageFiles(r'.*\.a')
        r.Remove('%(libdir)s/pidgin/relnot.so')
        r.AutoDoc('doc/CREDITS', 'doc/PERL-HOWTO.dox')

        # This dep is needed for jabber authentication
        r.Requires('cyrus-sasl:md5', '%(bindir)s/pidgin')

        r.PackageSpec('libpurple', '(%(libdir)s|%(bindir)s|%(includedir)s|%(datadir)s)/.*purple.*',
            '%(libdir)s/pkgconfig/purple.pc', '%(datadir)s/.*/purple')
