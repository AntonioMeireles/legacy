class Mediatomb(CPackageRecipe):
    name = 'mediatomb'
    version = '0.12.1'
 
    buildRequires = ['autoconf:runtime', 'automake:runtime', 'curl:devel', 'expat:devel', 'faac:devel', 'ffmpeg:devel', 'file:devel', 'libexif:devel', 'libstdc++:devel', 'openssl:devel', 'sqlite:devel', 'taglib:devel', 'zlib:devel', 'libdvdnav:devel', 'libdvdread:devel', 'ffmpegthumbnailer:devel']
 
    def setup(r):
        #r.addSvnSnapshot('http://svn.mediatomb.cc/svnroot/mediatomb/trunk/mediatomb/')
	r.addArchive('mirror://sourceforge/mediatomb/MediaTomb/')
	r.Run('autoreconf -i')
	r.Configure()
	r.Make()
	r.MakeInstall()
