class Lmms(CPackageRecipe):
    name = 'lmms'
    version = '0.4.6'
 
    buildRequires = ['SDL:devel', 
		'alsa-lib:devel', 
		'cmake:runtime', 
		'dbus:devel', 
		'desktop-file-utils:runtime', 
		'fontconfig:devel', 
		'freetype:devel', 
		'gcc-c++:runtime', 
		'glib:devel', 
		'jack:devel', 
		'libICE:devel', 	
		'libSM:devel', 
		'libX11:devel', 
		'libXext:devel', 
		'libXinerama:devel', 
		'libXrandr:devel', 
		'libXrender:devel', 
		'libogg:devel', 
		'libpng:devel', 
		'libsndfile:devel', 
		'libstdc++:devel', 
		'libvorbis:devel', 
		'openssl:devel', 
		'pkgconfig:devel', 
		'pulseaudio:devel', 
		'qt4-core:devellib', 
		'qt4-gui:devellib', 
		'qt4:devel', 
		'shared-mime-info:runtime', 
		'zlib:devel']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/lmms/')
        r.CMake()
        r.Make()
        r.MakeInstall()
