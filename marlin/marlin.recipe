class Marlin(AutoPackageRecipe):
    name = 'marlin'
    version = '0.12'
 
    buildRequires = ['gtkunique:devel', 'soundtouch:devel', 'GConf:devel', 'ORBit2:devel', 'e2fsprogs:devel', 'esound:devel', 'expat:devel', 'gail:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gtkunique:devel', 'jack:devel', 'libICE:devel', 'libSM:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libsamplerate:devel', 'libstdc++:devel', 'libxml2:devel', 'popt:devel', 'GConf:runtime', 'desktop-file-utils:runtime', 'gettext:runtime', 'intltool:runtime', 'pkgconfig:devel', 'rarian:runtime']
 
    def unpack(r):
        r.addArchive('http://folks.o-hand.com/iain/marlin-releases/')
        r.Replace('marlin/marlin-icon.png', 'marlin-icon.png', 'marlin.desktop.in')
        r.Replace('\/float', '/type', 'src/marlin.schemas')

    def policy(r):
        r.Copy('%(datadir)s/pixmaps/marlin/marlin-icon.png', '%(datadir)s/pixmaps/') 
