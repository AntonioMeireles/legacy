class dictd(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "dictd"
    version = "1.9.15"

    def setup(r):
        r.addArchive('ftp://ftp.dict.org/pub/dict/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

        r.PackageSpec ('dictfmt',
                       '%(bindir)s/dictfmt', 
                       '%(bindir)s/dictfmt_index2suffix',
                       '%(bindir)s/dictfmt_index2word',
                       '%(bindir)s/dictfmt_plugin',
                       '%(bindir)s/dictfmt_virtual',
                       '%(bindir)s/dictunformat'
                       '%(mandir)s/man1/dictfmt.1',
                       '%(mandir)s/man1/dictfmt_index2suffix.1',
                       '%(mandir)s/man1/dictfmt_index2word.1',
                       '%(mandir)s/man1/dictunformat.1')
        r.PackageSpec ('dict',
                       '%(bindir)s/dict',
                       '%(bindir)s/dictl',
                       '%(mandir)s/man1/dict.1',
                       '%(mandir)s/man1/dictl.1')
        r.PackageSpec ('dictzip',
                       '%(bindir)s/dictzip',
                       '%(mandir)s/man1/dictzip.1')
