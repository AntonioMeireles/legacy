class Dictd(PackageRecipe):
    buildRequires = [ ]

    name = 'dictd'
    version = '1.9.15'

    def setup(r):
        r.addArchive('ftp://ftp.dict.org/pub/dict/%(name)s-%(version)s.tar.gz')

        r.Configure()

        r.Make()
        r.MakeInstall()
        r.Create('%(sysconfdir)s/dict.conf', contents='server dict.org')

        r.PackageSpec('dict', '%(bindir)s/dictl?',
                              '%(bindir)s/colorit',
                              '%(mandir)s/man1/dictl?\.1\.gz',
                              '%(mandir)s/man1/colorit\.1\.gz',
                              '%(sysconfdir)s/dict\.conf')
