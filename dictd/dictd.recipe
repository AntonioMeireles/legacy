class Dictd(AutoPackageRecipe):
    name = 'dictd'
    version = '1.9.15'

    def unpack(r):
        r.addArchive('ftp://ftp.dict.org/pub/dict/')

    def policy(r):
        r.Create('%(sysconfdir)s/dict.conf', contents='server dict.org')

        r.PackageSpec('dict', '%(bindir)s/dictl?',
                              '%(bindir)s/colorit',
                              '%(mandir)s/man1/dictl?\.1\.gz',
                              '%(mandir)s/man1/colorit\.1\.gz',
                              '%(sysconfdir)s/dict\.conf')
