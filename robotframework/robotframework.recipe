loadInstalled('python')
class RobotFramework(PackageRecipe):
    name = 'robotframework'
    version = '2.5.6'

    buildRequires = [
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://robotframework.googlecode.com/files/')
        r.Run('python setup.py install --prefix=/usr  --install-purelib=%(libdir)s/python2.6/site-packages/  --install-platlib=%(libdir)s/python2.6/site-packages/  --install-data=%(libdir)s/python2.6/site-packages/ --root=%(destdir)s')
