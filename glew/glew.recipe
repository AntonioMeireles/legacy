class Glew(CPackageRecipe):

    name = 'glew'
    version = '1.5.1'

    buildRequires = [
        'libX11:devel', 'libXext:devel', 'libXi:devel', 'libXmu:devel',
        'Mesa:devel', 'util-linux:runtime'
    ]

    def setup(r):

        r.addArchive('mirror://sourceforge/glew/glew-%(version)s-src.tgz')

        r.Run("sed -i -r 's/\r//' config/config.guess")

        r.Replace('/usr/X11R6/%(lib)s', '%(libdir)s/xorg.mesa.3d', 'config/Makefile.linux')

        r.Make('LD="%(cc)s %(ldflags)s" CC="%(cc)s" POPT="%(cflags)s"')
        r.MakeInstall('GLEW_DEST="%(destdir)s/%(prefix)s"')

        r.Doc('doc/*')

