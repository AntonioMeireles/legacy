class XulRunner(CPackageRecipe):
    name = 'xulrunner'
    version = '1.8.1'
    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel',
                      'cairo:devel', 'fontconfig:devel', 'freetype:devel',
                      'glib:devel', 'perl:runtime', 'gnome-keyring:devel',
                      'gnome-vfs:devel', 'gtk:devel', 'libIDL:devel',
                      'libart_lgpl:devel', 'libbonobo:devel',
                      'libbonoboui:devel', 'libgnome:devel',
                      'libgnomecanvas:devel', 'libgnomeui:devel',
                      'libjpeg:devel', 'libpng:devel', 'libstdc++:devel',
                      'libxml2:devel', 'pango:devel', 'popt:devel',
                      'zlib:devel', 'zip:runtime', 'pkgconfig:devel',
                      'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
                      'libXt:devel', 'libXext:devel', 'libXi:devel',
                      'libXinerama:devellib', 'libXft:devel',
                      'libXrender:devel','libdmx:devel', 'libICE:devel',
                      'libSM:devel', 'nspr:devel','nss:devel', 'expat:devel', 
                      'python:devel']

    def setup(r):
        r.addArchive('http://www.archlinux.org/~jgc/mozilla/%(name)s-%(version)s-source.tar.bz2')

        patches = (
            'firefox-1.1-uriloader.patch',
            'firefox-1.5-pango-cursor-position.patch',
            'firefox-2.0-buildversion.patch', 
            'moz310924.patch',
            'moz325644.patch',
            'nsIPermission.patch')

        for patch in patches:
            r.addPatch(patch)

        r.addSource('mozconfig', dest='.mozconfig')

        r.Configure()

        r.macros.mflags = ' '

        r.Make(' -f client.mk build ')

        r.Make(' DESTDIR=%(destdir)s DISTDIR=%(destdir)s prefix=%(prefix)s  install')

 	# we depend on system' s nspr and nss so remove these... which we don 't built anyway.
    #    r.Remove('/usr/lib/pkgconfig/xulrunner-nss.pc')
    #    r.Remove('/usr/lib/pkgconfig/xulrunner-nspr.pc')



        # multilib fixes
        r.Move('/usr/lib/*', '%(libdir)s/')
        r.Replace('/usr/lib/xulrunner', '%(libdir)s/xulrunner',
            '%(libdir)s/pkgconfig/*', allowNoChange=True)

        # versionless paths
        r.Move('%(libdir)s/%(name)s-%(version)s','%(libdir)s/%(name)s' )
        r.Move('%(includedir)s/%(name)s-%(version)s','%(includedir)s/%(name)s' )
        r.Move('%(datadir)s/idl/%(name)s-%(version)s','%(datadir)s/idl/%(name)s' )

        r.Replace(('/usr/local', '%(prefix)s'),
                  ('%(name)s-%(version)s', '%(name)s'),
                  '%(libdir)s/pkgconfig/*.pc')


        r.SharedLibrary(subtrees='%(libdir)s/%(name)s/')
        r.Ldconfig('%(libdir)s/%(name)s/')



