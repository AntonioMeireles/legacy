class toppler(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel" ]
    name = "toppler"
    version = "1.1.1"

    def setup(r):
        r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
