class XMLSec(AutoPackageRecipe):

    name = 'xmlsec'
    version = '1.2.10'

    buildRequires = [ 'libgcrypt:devel', 'libgpg-error:devel', 'libxml2:devel',
        'libxslt:devel', 'man:runtime', 'nspr:devel', 'nss:devel',
        'openssl:devel', 'pkgconfig:devel', 'zlib:devel', 'libxml2:devel',
        'e2fsprogs:devel' ]

    def unpack(r):

        r.macros.archive_name = 'xmlsec1'
        r.addArchive('ftp://ftp.xmlsoft.org/xml/xmlsec/releases/')

    def configure(r):

        r.Configure('--enable-gost')

