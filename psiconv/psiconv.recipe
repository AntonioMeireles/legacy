class Psiconv(PackageRecipe):

    buildRequires = [ 'binutils:runtime', 'gawk:runtime', 'glibc:devel' ]
    name = 'psiconv'
    version = '0.9.8'

    def setup(r):
        r.addArchive('http://software.frodo.looijaard.name/psiconv/files/psiconv-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
