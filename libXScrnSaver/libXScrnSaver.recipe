loadSuperClass('xorgpackage.recipe')
class LibXScrnSaver(XorgPackageRecipe):
    name = 'libXScrnSaver'
    version = '1.1.0'
    component = 'lib'

    buildRequires = [ 'libXext:devel', 'scrnsaverproto:devel',
        'xextproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        r.Requires('scrnsaverproto:devel', '%(libdir)s/pkgconfig/xscrnsaver.pc')
