class Xfce4SystemloadPlugin(AutoPackageRecipe):
    name = 'xfce4-systemload-plugin'
    version = '0.4.2'
 
    buildRequires =  ['atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel', 'libxfce4util:devel', 'libxfcegui4:devel', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'xfce4-panel:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('http://goodies.xfce.org/releases/%(name)s/%(name)s-%(version)s.tar.bz2')
