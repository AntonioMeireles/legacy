class Mistelix(CPackageRecipe):

    name = "mistelix"
    version = "20090701"

    buildRequires = ['gettext:runtime', 'intltool:runtime', 'mono:runtime', 'perl:runtime', 'pkgconfig:devel', 'binutils:runtime', 'desktop-file-utils:runtime', 'file:runtime', 'glib:devel', 'gnome-sharp:cil', 'gst-plugins-base:devel', 'gstreamer:devel', 'gtk-sharp:cil', 'libxml2:devel', 'make:runtime', 'mono-addins:cil', 'mono:cil', 'mono:devel', 'zlib:devel', 'diffutils:runtime', 'libtool:runtime', 'automake:runtime', 'autoconf:runtime', 'intltool:devel', 'gcc:runtime', 'gtk-sharp:devellib','gtk-sharp:cil', 'mono-addins:devellib', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'dvdauthor:runtime', 'libtheora:devel', 'gst-fluendo-mp3:lib']

    def setup(r):
	r.addGitSnapshot('git://git.gnome.org/mistelix')   	
	r.Run('chmod +x ./autogen.sh') 
	r.Configure(configureName='autogen.sh')
 	r.MakeInstall()
	r.Requires('dvdauthor:runtime','/usr/bin/mistelix')


