class Synaptics(CPackageRecipe):

    buildRequires = [ 'xorg-x11:devel' ]

    name = 'synaptics'
    version = '0.14.2'
    
    def setup(r):
	r.addArchive('http://web.telia.com/~u89404340/touchpad/files/%(name)s-%(version)s.tar.bz2')
	r.Replace('\/usr\/local','/usr','Makefile')
	r.Replace('\/usr\/man','/usr/share/man','Makefile')
	r.Make()
	r.MakeInstall()
