class Synaptics(CPackageRecipe):

    buildRequires = [ 'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrender:devel','libdmx:devel' ]

    name = 'synaptics'
    version = '0.14.5'

    def setup(r):
        r.addArchive('http://web.telia.com/~u89404340/touchpad/files/%(name)s-%(version)s.tar.bz2')
        r.Replace('\/usr\/local', '%(prefix)s', 'Makefile')
        r.Replace('\$\(PREFIX\)\/man', '%(mandir)s', 'Makefile')
        r.Make()
        r.MakeInstall()
