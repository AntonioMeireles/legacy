loadSuperClass('xorgcpackage.recipe')
class XorgDriverPackageRecipe(XorgCPackageRecipe):
    name = 'xorgdriverpackage'
    version = '1'

    # Regarding the proto buildRequires:
    # all of the drivers require randrproto
    # all of the input drivers require inputproto
    # all but two of the video drivers require fontsproto & renderproto
    # 30+ of the video drivers require videoproto & xextproto
    buildRequires = [ 'fontsproto:devel', 'inputproto:devel',
        'linuxdoc-tools:runtime', 'randrproto:devel', 'renderproto:devel',
        'videoproto:devel', 'xextproto:devel', 'xorg-server:devel',
        'xorg-sgml-doctools:data', 'xproto:devel', 'file:runtime' ]

    def setup(r):
        if r.__class__.__name__ == 'XorgDriverPackageRecipe':
            return

        XorgCPackageRecipe.setup(r)
