class Zim(PackageRecipe):
    name = 'Zim'
    version = '0.24.nightly'
    buildRequires = [
     'desktop-file-utils:runtime',
		 'perl-File-BaseDir:perl',
		 'perl-File-MimeInfo:perl',
		 'perl-Glib:perl',
		 'perl-Gtk2:perl',
		 'perl:devel',
		 'perl:perl',
		 'perl:runtime',
		 'shared-mime-info:config',
		 'perl-Gtk2-TrayIcon:perl',
     'perl-Module-Build:perl'
     ]


    def setup(r):
        r.addArchive('http://pardus-larus.student.utwente.nl/~pardus/downloads/Zim/Zim-nightly.tar.gz')
        r.addAction('perl Build.PL --destdir=%(destdir)s')
        r.addAction('perl Build')
        r.addAction('perl Build install')
