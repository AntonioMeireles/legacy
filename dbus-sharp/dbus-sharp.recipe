class DbusSharp(CPackageRecipe):

   name = "dbus-sharp"
   version = "0.63"

   buildRequires = ['pkgconfig:devel',  'mono:lib', 'mono:runtime' ]

   def setup(r):


      srpm = 'http://download.fedora.redhat.com/pub/fedora/linux/core/development/source/SRPMS/%(name)s-%(version)s-4.fc6.src.rpm'
      
      r.addArchive(srpm)
      r.addArchive('%(name)s-%(version)s.tar.gz', rpm=srpm, dir='%(name)s-%(version)s')

      r.Configure( dir='%(name)s-%(version)s')
      r.Make( dir='%(name)s-%(version)s')
      r.MakeInstall( dir='%(name)s-%(version)s')

