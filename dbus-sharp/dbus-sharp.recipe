class DbusSharp(CPackageRecipe):

   name = "dbus-sharp"
   version = "0.63"

   buildRequires = ['pkgconfig:devel',  'mono:lib', 'mono:runtime', 'gtk-sharp:devellib', 'mono:devel', 'mono:cil' ]

   def setup(r):


      srpm = 'http://download.fedora.redhat.com/pub/fedora/linux/core/development/source/SRPMS/%(name)s-%(version)s-4.fc6.src.rpm'
      
      r.addArchive(srpm)
      r.addArchive('%(name)s-%(version)s.tar.gz', rpm=srpm)
      r.Replace('gtk-sharp','gtk-sharp-2.0','mono/example/Makefile.in')
      r.Environment('MONO_SHARED_DIR', '/tmp')
      r.Configure()
      r.Make()
      r.MakeInstall()

