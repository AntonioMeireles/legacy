loadSuperClass('xfcepackage.recipe')
class xfce4Session(XfcePackageRecipe):

    name = 'xfce4-session'
    version = '4.5.91'

    XfcePackageRecipe.buildRequires.extend([
        'libxfce4util:devel', 'desktop-file-utils:runtime', 'iceauth:runtime',
        'libXres:devel', 'libwnck:devel', 'libxfcegui4:devel', 'libexo:runtime',
        'startup-notification:devel', 'xfconf:devel', 'libglade:devel',
    ])
    def setup(r):
        XfcePackageRecipe.setup(r)
        r.addSource('themerc', dir='%(datadir)s/themes/Foresight/balou/', mode = 0644)
        r.addSource('logo.png', dir='%(datadir)s/themes/Foresight/balou/', mode = 0644)
        r.addSource('xfce4-splash.rc', dir='%(sysconfdir)s/xdg/xfce4-session/', mode = 0644)
        r.addSource('xfce4-session.xml', dir='%(sysconfdir)s/xdg/xfce4/xfconf/xfce-perchannel-xml/', mode = 0644)
        # workaround uncomplete /etc/X11/xinit/Xclients
        r.addSource('Xclients', dest='%(sysconfdir)s/skel/.Xclients', mode = 0755)
        r.Remove('%(sysconfdir)s/xdg/autostart/xfce4-tips-autostart.desktop')
