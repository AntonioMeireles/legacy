loadSuperClass('xfce-core-package.recipe')
class xfce4_session(xfceCorePackage):

    name = 'xfce4-session'
    version = '4.4.2'

    extraConfig = '--enable-session-screenshots'

    def policy(r):
        xfceCorePackage.policy(r)
        r.Requires('sudo:runtime', '%(bindir)s/xfce4-session')

