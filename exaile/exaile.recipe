class Exaile(AutoPackageRecipe):
    name = 'exaile'
    version = '0.3.0.1'
    buildRequires = [
        'gettext:runtime', 'intltool:runtime', 'dbus-python:python',
        'pygobject:runtime', 'pygobject:python', 'desktop-file-utils:runtime',
        'gnome-python-extras:python', 'gst-python:python',
        'notify-python:python', 'pygtk:devel', 'pygtk:python', 'python:devel',
        'mutagen:python', 'pycairo:python', 'python-ctypes:python',
        'cddb-py:python', 'mx:python', 'PIL:python', 'cElementTree:python',
        'python-cssutils:python', 'pywebkitgtk:python', 'sexy-python:python'
    ]

    def unpack(r):
        r.macros.stablever = r.version[0:5]
        r.addArchive('http://www.launchpad.net/exaile/'
                     '%(stablever)s/%(version)s/+download/')
        r.Replace('PLUGINSDIR =', 'PLUGINSDIR ?=', 'plugins/Makefile')
        r.addPatch('plugindir.patch')

    def configure(r):
        r.Environment('PREFIX', '%(prefix)s/')
        r.Environment('LIBINSTALLDIR', '%(lib)s/python2.6/site-packages/')
        r.Environment('PLUGINSDIR', '%(lib)s/python2.6/site-packages/exaile/plugins/')
        r.Replace('self.flpluginsdir = None', 'self.flpluginsdir = "%(libdir)s/python2.6/site-packages/exaile/plugins/"', 'xl/plugins.py')
        #r.Environment('FIREFOX', '/%(libdir)s/firefox/')

    def policy(r):
        # runtime requirements
        req = [ 
            'pygtk:python',
            'gst-python:python',
            'mutagen:python', 
            'cddb-py:python', 
            'notify-python:python', 
            'gst-python:python', 
            'sexy-python:python',
            'PIL:python',
            'cElementTree:python', 
            'python-cssutils:python', 
            'pywebkitgtk:python',
            ]
        for p in req:
            r.Requires(p, '%(bindir)s/exaile')
