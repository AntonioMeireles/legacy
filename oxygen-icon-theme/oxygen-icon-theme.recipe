loadSuperClass('cmakepackage')
class OxygenIconTheme(CMakePackageRecipe):

    name = 'oxygen-icon-theme'
    version = '4.3.0+r942088'

    buildRequires = [
        'gcc-c++:runtime'
    ]

    def unpack(r):

        r.macros.revision = r.version.split('+')[1].strip('r')
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/trunk/kdesupport/oxygen-icons',
            revision='%(revision)s'
        )

