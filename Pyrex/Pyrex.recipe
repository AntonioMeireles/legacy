class Pyrex(PackageRecipe):
    name = 'Pyrex'
    version = '0.9.6.2'
    buildRequires = [ 'python-setuptools:python', 'python:devel' ]

    def setup(r):
        r.addArchive('http://www.cosc.canterbury.ac.nz/~greg/python/%(name)s/oldtar/')
        r.Replace('os.path.dirname\(__file__\) or', '', 'setup.py', lines=26)
        r.PythonSetup()
        r.Requires('Pyrex:python', '%(bindir)s/pyrexc')
