class Words(PackageRecipe):
    name = 'words'
    version = '2'

    def setup(r):
        r.mainDir('usr')
        r.addArchive('http://www.ibiblio.org/pub/linux/libs/linux.words.%(version)s.tar.gz')
        r.addPatch('linux.words.2-jbj.patch')
        r.addPatch('linux.words.2-mmm.patch')
        r.addPatch('linux.words.2-meat.patch')
        r.addPatch('linux.words.2-gullible.patch')

        r.Install('dict/linux.words', '%(datadir)s/dict/')
        r.Symlink('linux.words', '%(datadir)s/dict/words')

        r.Provides('file', '%(datadir)s/dict/words')
