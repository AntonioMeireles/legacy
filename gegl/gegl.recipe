class Gegl(AutoPackageRecipe):

    name = 'gegl'
    version = '0.1.6'

    buildRequires = ['OpenEXR:devel', 'SDL:devel', 'autoconf:runtime', 'automake:runtime', 'libtool:devel', 'libtool:runtime', 'm4:runtime', 'cairo:devel', 'ctags:runtime', 'enscript:runtime', 'expat:devel', 'fontconfig:devel', 'fontconfig:runtime', 'gnome-vfs:devel', 'gtk:devel', 'ilmbase:devel', 'libjpeg:devel', 'librsvg:devel', 'libstdc++:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'ruby:runtime', 'which:runtime', 'zlib:devel', 'babl:devel', 'asciidoc:runtime', 'graphviz:runtime', 'ffmpeg:devel']

    def unpack(r):
        #r.addGitSnapshot('git://git.gnome.org/gegl', tag='592833b9aa0a')
        r.addArchive('ftp://ftp.gimp.org/pub/gegl/0.1/')
        #r.addPatch('http://cvs.fedoraproject.org/viewvc/rpms/gegl/devel/gegl-missing_header.patch?view=co')

    def configure(r):
        r.Configure('--disable-static --enable-workshop --disable-docs')

