class Gegl(AutoPackageRecipe):

    name = 'gegl'
    version = '0.0.13svn'

    buildRequires = ['OpenEXR:devel', 'SDL:devel', 'babl:devel', 
'autoconf:runtime', 'automake:runtime', 'libtool:devel', 'libtool:runtime',
'm4:runtime', 'cairo:devel', 'ctags:runtime', 'enscript:runtime',
'expat:devel', 'fontconfig:devel', 'fontconfig:runtime', 
'foresight-fonts:data', 'gnome-vfs:devel', 'gtk:devel', 'ilmbase:devel', 
'libjpeg:devel', 'librsvg:devel', 'libstdc++:devel', 'pango:devel', 'perl:runtime',
'pkgconfig:devel', 'ruby:runtime', 'foresight-fonts:data', 'which:runtime',
 'zlib:devel']

    def unpack(r):
        r.addSvnSnapshot('http://svn.gnome.org/svn/gegl/trunk/')
        r.Run('./autogen.sh --disable-maintainer-mode')
