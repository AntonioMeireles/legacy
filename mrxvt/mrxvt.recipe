class mrxvt(AutoPackageRecipe):
    name = 'mrxvt'
    version = '0.4.2'

    buildRequires = ['libjpeg:devel', 'libpng:devel', 'xorg-x11:devel',
        'zlib:devel', 'fontconfig:devel', 'freetype:devel']
    
    def unpack(r):
        r.addArchive('http://puzzle.dl.sourceforge.net/sourceforge/materm/%(name)s-%(version)s.tgz')

    def configure(r):
        extraConfig = '--enable-24bits --enable-menubar --enable-xft --with-x'
	r.Configure(extraConfig)
