class mrxvt(PackageRecipe):
    buildRequires = [ 'xorg-x11:devel','zlib:devel',
			'libpng:devel','libjpeg:devel',
			'desktop-file-utils:runtime' ]
    name = "mrxvt"
    version = "0.4.1"

    def setup(r):
	r.addArchive("http://switch.dl.sourceforge.net/sourceforge/materm/mrxvt-%(version)s.tar.gz")
	r.addSource('mrxvt.desktop')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.Desktopfile('mrxvt.desktop')
