class Puppet(PackageRecipe):
    name = 'puppet'
    version = '0.24.1'

    buildRequires = ['ruby:runtime', 'facter:ruby', ]

    def setup(r):
        r.addArchive('http://reductivelabs.com/downloads/%(name)s/')
        r.Run('DESTDIR=%(destdir)s ruby ./install.rb')
        r.Requires('%(bindir)s/facter', '%(libdir)s/ruby/site_ruby/.*')
