class transcode(CPackageRecipe):
    buildRequires = ['ImageMagick:devel', 'SDL:devel', 'faac:devel', 'faad2:devel', 'ffmpeg:devel', 'gsm:devel', 'lame:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel', 'libXv:devel', 'libdv:devel', 'libdvdread:devel', 'libjpeg:devel', 'libogg:devel', 'libquicktime:devel', 'libstdc++:devel', 'libtheora:devel', 'libvorbis:devel', 'pkgconfig:devel', 'x264:devel', 'xvidcore:devel', 'zlib:devel', 'mpeg2dec:devel', 'libXaw:devel', 'libXpm:devel']
    name = "transcode"
    version = "1.1.0"

    def setup(r):
        r.addArchive('http://fromani.exit1.org/%(name)s-%(version)s.tar.bz2')

        r.Configure('--enable-lame --enable-ogg --enable-vorbis --enable-libdv --enable-libquicktime --enable-a52 --enable-sdl --enable-imagemagick')
        r.Make()
        r.MakeInstall()
