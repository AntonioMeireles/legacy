class Cairo(AutoPackageRecipe):
    name = 'libsvg-cairo'
    version = '0.1.6'

    buildRequires = [
        'cairo:devel', 'expat:devel', 
        'fontconfig:devel', 'freetype:devel', 
        'libX11:devel', 'libXrender:devel', 
        'libjpeg:devel', 'libpng:devel', 
        'libsvg:devel', 'libxml2:devel', 
        'pkgconfig:devel', 'zlib:devel'
        ]
    
    def unpack(r):
	r.addArchive('http://cairographics.org/snapshots/%(name)s-%(version)s.tar.gz')
