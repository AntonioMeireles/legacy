class BluezUtils(AutoPackageRecipe):
    name = 'bluez-utils'
    version = '3.14'
    buildRequires = ['bison:runtime', 'bluez-libs:devel', 'dbus:devel', 'expat:devel', 'flex:runtime', 'libusb:devel', 'pkgconfig:devel']

    def unpack(r):
        r.addArchive('http://bluez.sf.net/download/%(name)s-%(version)s.tar.gz')
