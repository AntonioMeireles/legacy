loadSuperClass('rpmpackage.recipe', label='conary.rpath.com@rpl:devel')
class SystemConfigprinter(RPMPackageRecipe):

    buildRequires = [ 'gawk:runtime', 'pygtk:python', 'rhpl:python',
        'desktop-file-utils:runtime' ]

    name = 'system-config-printer'
    version = '0.7.26'


    def setup(r):
        r.unpack()
        r.Replace('Exec=', 'Exec=gksudo ', 'system-config-printer.desktop')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Desktopfile('system-config-printer.desktop')

