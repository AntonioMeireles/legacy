class ElisaPluginsUgly(BuildPackageRecipe):
    name = 'elisa-plugins-ugly'
    version = '0.5.22'
 
    buildRequires = [ 'python-setuptools:python', 'cElementTree:python', 'gdata-python:python', 'gst-python:python', 'python-twisted-web:python', 'python-twisted:python', 'python:devel', 'elisa:python', 'python-zopeinterface:python' ]
 
    def setup(r):
        r.addArchive('http://elisa.fluendo.com/download/elisa/')
        r.Run('python setup.py build')
        r.Run('python setup.py install --root=%(destdir)s')
        r.Requires('twill:python', '/usr/lib/python2.4/site-packages/elisa/plugins/flickr/__init__.py')
