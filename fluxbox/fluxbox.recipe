class fluxbox(AutoPackageRecipe) :
    name = 'fluxbox'
    version = '1.0rc3'
    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'gcc:devel',
        'desktop-file-utils:runtime', 'pkgconfig:devel',
        'libstdc++:devel', 'zlib:devel', 'libICE:devel', 'libSM:devel',
        'libX11:devel', 'libXext:devel', 'libXpm:devel',
        'libXrandr:devel', 'libXrender:devel', 'libXt:devel', ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/fluxbox/')
        r.addSource('fluxbox.desktop')
        # styles from gentoo
        r.macros.fluxmodVersion = '20050128'
        r.addArchive('mirror://gentoo/distfiles/fluxbox-styles-fluxmod-%(fluxmodVersion)s.tar.bz2')
        r.addAction('chmod -R u+w *', dir='../fluxbox-styles-fluxmod-%(fluxmodVersion)s')

    def policy(r):
        r.Copy('fluxbox.desktop', '%(datadir)s/xsessions/')
        # install styles
        r.Copy('../fluxbox-styles-fluxmod-%(fluxmodVersion)s/*', '%(datadir)s/fluxbox/styles/')
        r.ComponentSpec('styles', '%(datadir)s/fluxbox/styles.*')
