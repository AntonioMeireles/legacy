loadSuperClass('gnomepackage')
class LibIDL(GnomePackageRecipe):
    name = 'libIDL'
    version = '0.8.9'

    buildRequires = [ 'pkgconfig:devel', 'glib:devel', 'flex:runtime',
                      'bison:runtime', 'install-info:runtime' ]

    def policy(r):
        r.ComponentSpec('devel', '/usr/bin/libIDL-config-2')
