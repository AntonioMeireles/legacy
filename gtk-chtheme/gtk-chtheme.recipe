class gtkChTheme(CPackageRecipe):

    name = 'gtk-chtheme'
    version = '0.3.1'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
                      'freetype:devel', 'glib:devel', 'gtk:devel',
                      'libpng:devel', 'pango:devel', 'xorg-x11:devel',
                      'zlib:devel' ]

    def setup(r):

        r.macros.site = 'http://plasmasturm.org/programs/'
        r.addArchive('%(site)s/%(name)s/%(name)s-%(version)s.tar.bz2')

        r.Make()
        r.MakeInstall()

