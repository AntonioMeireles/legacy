class Libogg(AutoPackageRecipe):
    name = 'libogg'
    version = '1.1.2'

    def unpack(r):
        r.addArchive('http://downloads.xiph.org/releases/ogg/libogg-%(version)s.tar.gz')

        r.Replace((r'-L\$prefix/lib', r'-L$libdir'),
                  (r'OGG_CFLAGS="-I\$prefix/include"', r'OGG_CFLAGS=""'),
                  'ogg.m4')
        r.Replace(('-O20', '%(cflags)s'),
                  ('-ffast-math', ''),
                  'configure')

    def policy(r):
        r.Doc('doc/*.{html,txt,png}', component='devel')
