class Libva(AutoPackageRecipe):
    name = 'libva'
    version = '1.0.10'
 
    buildRequires = [
            'Mesa:devel', 
            'libX11:devel', 
            'libXext:devel', 
            'libXfixes:devel', 
            'libdrm:devel', 
            'pkgconfig:devel',
            'autoconf:runtime',
            'automake:runtime',
            'intltool:devel',
            'intltool:runtime',
            'libtool:devel',
            'libtool:runtime',
                ]
 
    def unpack(r):
        r.addArchive('http://cgit.freedesktop.org/libva/snapshot/')
        r.addPatch('101_dont_install_test_programs.patch')


    def configure(r):
        r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
        r.Run('autoreconf -fi')
        r.Configure('--disable-static --enable-glx')

