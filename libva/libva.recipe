class Libva(CPackageRecipe):
    name = 'libva'
    version = '1.0.10'
 
    buildRequires = [
            'Mesa:devel', 
            'libX11:devel', 
            'libXext:devel', 
            'libXfixes:devel', 
            'libdrm:devel', 
            'pkgconfig:devel',
            'autoconf:runtime',
            'automake:runtime',
            'intltool:devel',
                ]
 
    def setup(r):
        r.addArchive('http://cgit.freedesktop.org/libva/snapshot/')
        r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
        r.Configure('--disable-static --enable-glx', configureName='autogen.sh')
        r.Make()
        r.MakeInstall()
