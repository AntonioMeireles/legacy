class NautilusSearchTool(PackageRecipe):
   buildRequires = [ 'glib:devel', 'nautilus:devel',
			'gnome-desktop:devel'  ]
	
   name = "nautilus-search-tool"
   version = "0.1"
   def setup(r):
	r.addArchive('http://saettaz.altervista.org/software/nautilus_search_tool/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
