class Cscope(AutoPackageRecipe):
    name = 'cscope'
    version = '15.7a'
 
    buildRequires = [
        'bison:runtime',
        'flex:devel',
        'flex:runtime',
        'ncurses:devel',
        'pkgconfig:devel',
        ]
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/cscope/')
        r.addSource('http://cscope.sourceforge.net/cscope_maps.vim', dest='%(datadir)s/vim/vim72/plugin/')
