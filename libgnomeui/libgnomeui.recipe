loadRecipe('gnomepackage.recipe')
class Libgnomeui(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'zlib:devel', 'ORBit2:devel', 'pango:devel',
                           'gtk:devel', 'GConf:devel', 'gnome-vfs:devel',
                           'libgnomecanvas:devel', 'libbonobo:devel',
                           'libbonoboui:devel', 'libxml2:devel',
                           'libgnome:devel', 'libart_lgpl:devel',
                           'libglade:devel', 'esound:devel',
                           'xorg-x11:devel', 'fontconfig:runtime',
                           'gnome-keyring:devel', 'libjpeg:devel' ])

    name = 'libgnomeui'
    version = '2.9.1'

    docs = GnomePackageRecipe.docs
    docs.remove('COPYING')
                    
    def install(r):
        GnomePackageRecipe.install(r)
        r.ComponentSpec('runtime',
                        '%(libdir)s/libglade/2.0/.*',
                        '%(libdir)s/gtk-2.0/2.4.0/filesystems/.*')
        r.Remove('%(libdir)s/libglade/2.0/*.a',
                 '%(libdir)s/gtk-2.0/2.4.0/filesystems/*.a')

