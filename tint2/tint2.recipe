class Tint2(AutoPackageRecipe):
    name = 'tint2'
    version = '0.7.1'

    buildRequires = [
        'autoconf:runtime', # ./bootstrap
        'automake:runtime', # ./bootstrap
        'cairo:devel',
        'cvs:runtime', # autopoint (gettext)
        'expat:devel',
        'fontconfig:devel',
        'freetype:devel',
        'gettext:runtime',
        'glib:devel',
        'imlib2:devel',
        'intltool:runtime',
        'libXinerama:devel',
        'pango:devel',
        'pkgconfig:devel',
      ]

    def unpack(r):
        # From tarball
        r.addArchive('http://tint2.googlecode.com/files/')
