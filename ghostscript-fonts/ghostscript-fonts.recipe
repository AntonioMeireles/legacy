class GhostscriptFonts(PackageRecipe):
    name = 'ghostscript-fonts'
    version = '8.11'
    buildRequires = [ 'fontconfig:runtime' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/gs-fonts/%(name)s-std-%(version)s.tar.gz')
        r.Install('*{pfm,afm,pfb}', '%(datadir)s/fonts/default/ghostscript/')
