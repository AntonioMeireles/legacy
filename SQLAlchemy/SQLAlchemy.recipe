class Sqlalchemy(PackageRecipe):
    name = 'SQLAlchemy'
    version = '0.5.0'

    buildRequires = ['python-setuptools:python', 'MySQL-python:python', 'mx:python', 'python-sqlite:python', 'python:devel']

    def setup(r):
        r.addArchive('http://cheeseshop.python.org/packages/source/S/%(name)s/%(name)s-%(version)s.tar.gz')
        r.PythonSetup()
