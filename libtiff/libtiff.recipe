class Libtiff(CPackageRecipe):
    name = 'libtiff'
    version = '3.8.2'

    buildRequires = [ 'libjpeg:devel', 'zlib:devel', 'libstdc++:devel' ]

    srpm = 'ftp://ftp.redhat.com/redhat/linux/enterprise/5Server/en/os/SRPMS/libtiff-3.8.2-7.el5_5.5.src.rpm'

    def setup(r):
        r.disableParallelMake()
        r.addArchive('http://dl.maptools.org/dl/libtiff/tiff-%(version)s.tar.gz')
        r.addSource('configureinput', macros=True)

        #RPL-3235
        r.addPatch('tiffsplit-overflow.patch',rpm=r.srpm)
        r.addPatch('libtiff-3.8.2-ormandy.patch',rpm=r.srpm)
        r.addPatch('libtiff-3.8.2-CVE-2006-2193.patch',rpm=r.srpm)
        r.addPatch('libtiff-3.8.2-mantypo.patch',rpm=r.srpm)
        r.addPatch('libtiff-3.8.2-lzw-bugs.patch',rpm=r.srpm)
        r.addPatch('libtiff-3.8.2-CVE-2009-2347.patch',rpm=r.srpm)
        r.addPatch('libtiff-jpeg-scanline.patch',rpm=r.srpm)
        r.addPatch('libtiff-ycbcr-clamp.patch',rpm=r.srpm)
        r.addPatch('libtiff-CVE-2010-1411.patch',rpm=r.srpm)       
        r.addPatch('libtiff-CVE-2010-2065.patch',rpm=r.srpm)
        r.addPatch('libtiff-tiffcp-no-subsample.patch',rpm=r.srpm)
        r.addPatch('libtiff-tiff2pdf-bugs.patch',rpm=r.srpm)
        r.addPatch('libtiff-unknown-tags.patch',rpm=r.srpm)
        r.addPatch('libtiff-3samples.patch',rpm=r.srpm)
        r.addPatch('libtiff-subsampling.patch',rpm=r.srpm)
        r.addPatch('libtiff-tiffdump.patch',rpm=r.srpm)

        # RPL-2724 CVE-2008-2327
        # Replace above by libtiff-3.8.2-lzw-bugs.patch
        #r.addPatch('tif_lzw.c.diff')

        r.Configure()
        r.Make('LIBJPEG="-L%(libdir)s -ljpeg" LIBGZ="-L%(libdir)s -lz"')
        r.MakeInstall()
