class Libtiff(CPackageRecipe):
    name = 'libtiff'
    version = '3.8.2'

    buildRequires = [ 'libjpeg:devel', 'zlib:devel', 'libstdc++:devel' ]

    def setup(r):
        r.disableParallelMake()
        r.addArchive('http://dl.maptools.org/dl/libtiff/tiff-%(version)s.tar.gz')
        r.addSource('configureinput', macros=True)
        r.addPatch('libtiff-3.8.2-multiple-vulnerability.patch')

        r.Configure()
        r.Make('LIBJPEG="-L%(libdir)s -ljpeg" LIBGZ="-L%(libdir)s -lz"')
        r.MakeInstall()
