class Emelfm2(AutoPackageRecipe):
    name = 'emelfm2'
    version = '0.1.7'
 
    buildRequires = [ 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 
                      'fontconfig:devel', 'freetype:devel', 
                      'glib:devel', 'gtk:devel', 'libpng:devel',
                      'pango:devel', 'xorg-x11:devel', 'zlib:devel',
                      'glib:runtime', 'pkgconfig:devel',       
                     ]
 
    def setup(r):
        r.addArchive('http://emelfm2.net/rel/'
                     '%(name)s-%(version)s.tar.gz')
	r.Make()
        r.MakeInstall('PREFIX=%(destdir)s/%(prefix)s')
        r.Replace('Icon=', 'Icon=%(datadir)s/pixmaps/', '%(datadir)s/applications/emelfm2.desktop')
