class Howl(PackageRecipe):
    
    buildRequires = []
               
    name = 'howl'
    version = '1.0.0'

    def setup(r):
        r.addArchive('http://www.porchdogsoft.com/download/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.Replace(('/usr/local','%(prefix)s'),'etc/mDNSResponder')
	r.Install('etc/mDNSResponder', '%(initdir)s/mDNSResponder')
	r.Install('etc/nifd', '%(initdir)s/nifd')

