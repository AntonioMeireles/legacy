class Sharutils(AutoPackageRecipe):
    name = 'sharutils'
    version = '4.7'
    buildRequires = [ 'install-info:runtime', 'mailx:runtime', 'perl:lib',
        'perl:runtime' ]

    def unpack(r):
        r.addArchive('http://ftp.gnu.org/gnu/sharutils/REL-%(version)s/')
