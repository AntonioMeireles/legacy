class Glipper(CPackageRecipe):
    name = 'glipper'
    version = '0.95'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libpng:devel', 'pango:devel', 'perl:runtime', 'perl-XML-Parser:perl', 'pkgconfig:devel', 'zlib:devel', 'expat:devel', 'libX11:devel', 'libXrender:devel' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/glipper/')
        r.Configure()
        r.Make()
        r.MakeInstall()

        r.Symlink('%(datadir)s/applications/glipper.desktop',
            '%(datadir)s/gnome/autostart/')
