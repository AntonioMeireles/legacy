class HotWire(PackageRecipe):
    name = 'hotwire'
    version = '0.599'
    buildRequires = [ 'dbus-python:python', 'desktop-file-utils:runtime', 'gnome-python-desktop:python', 'gnome-python:python', 'python-setuptools:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'unzip:runtime', 'vte:python' ]

    def setup(r):
        r.addArchive('http://hotwire-shell.googlecode.com/files/')
        r.PythonSetup(data='--install-data %(prefix)s')

        r.Requires('functools:python', '%(bindir)s/hotwire')
