class HotWire(PackageRecipe):

    name = 'hotwire'
    version = '0.567'

    buildRequires = ['dbus-python:python', 'gnome-python-desktop:python',
                     'gnome-python:python', 'python-setuptools:python', 
                     'pycairo:python', 'pygobject:python', 'pygtk:python',
                     'unzip:runtime', 'vte:python']

    def setup(r):
        r.addArchive('http://hotwire-shell.org/download/')
        r.PythonSetup()


