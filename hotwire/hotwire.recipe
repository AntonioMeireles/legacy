class HotWire(PackageRecipe):

    name = 'hotwire'
    version = '0.333'

    buildRequires = ['python-setuptools:python', 'pycairo:python', 
                     'pygobject:python', 'pygtk:python', 'vte:python']
    externalArchive = 'http://www.verbum.org-a.googlepages.com/%(name)s-%(version)s.zip'

    def setup(r):
        r.addArchive('http://www.verbum.org-a.googlepages.com/'
                      '%(name)s-%(version)s.zip')
        r.PythonSetup()


