class libmtp(CPackageRecipe):
    name = "libmtp"
    version = "1.1.0"
    buildRequires = ['libusb:devel', 'python:bin']
    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s/%(version)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Install('39-libmtp.rules', '%(sysconfdir)s/udev/rules/')
