class FastUserSwitchApplet(PackageRecipe):

    buildRequires = [ 'gnome-panel:devel' ]


    name = 'fast-user-switch-applet'
    version = '0.1.0'

    def setup(r):
	r.addArchive('http://ignore-your.tv/downloads/fusa/%(name)s-%(version)s.tar.gz')
	r.Configure('--with-users-admin="gksudo system-config-users"'
			' --with-gdm-config=/etc/X11/gdm/gdm.conf --with-gdm-setup="gksudo gdmsetup"')
	r.Make()
	r.MakeInstall()
	r.Doc('AUTHORS', 'NEWS', 'README', 'ChangeLog')
