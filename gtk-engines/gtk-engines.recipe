loadSuperClass('gnomepackage.recipe')
class GtkEngines(GnomePackageRecipe):
    
    buildRequires = [ 'gtk:devel', 'atk:devel', 'cairo:devel',
		'fontconfig:devel', 'freetype:devel', 'glib:devel',
		'libpng:devel', 'pango:devel' ]

    name = 'gtk-engines'
    version = '2.6.6'
    
    docs = ['COPYING', 'README', 'ChangeLog']
    extraConfig = ''
    
    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace('"#628cb2" # blueish','"#679167" # foresight green','themes/Clearlooks/gtk-2.0/gtkrc')

    def install(r):
	GnomePackageRecipe.install(r)
	r.ComponentSpec('runtime', '%(libdir)s/gtk.*')
	r.Provides(exceptions='%(libdir)s/gtk.*')
        r.Remove('%(libdir)s/gtk-2.0/2.4.0/engines/libpixmap.so')
