loadSuperClass('python=cantwait.rpath.org@rpl:2')
class rPathXMLLib(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rpath-xmllib'
    version = '0.2'

    buildRequires = [
        'lxml:python', 'python:devel', 'rpath-common:python',
        'util-linux:runtime',
    ]

    def setup(r):
        r.setDefaultPython()
        r.Replace('python2.4', 'python%(pyver)s', 'Make.rules')
        r.addArchive('ftp://download.rpath.com/rpath-xmllib/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
