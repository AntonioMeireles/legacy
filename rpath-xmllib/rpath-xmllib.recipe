loadInstalled('python')
class rPathXMLLib(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rpath-xmllib'
    version = '1.2'

    buildRequires = [
        'lxml:python', 'python:devel', 'rpath-common:python',
        'util-linux:runtime', 'python:bin',
    ]

    def setup(r):
        r.setDefaultPython()
        r.addArchive('ftp://download.rpath.com/rpath-xmllib/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
