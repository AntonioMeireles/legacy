class PyYAML(PackageRecipe):
    name = 'PyYAML'
    version = '3.05'

    buildRequires = [ 'python:devel', 'python-setuptools:python' ]

    def setup(r):
        r.addArchive('http://pyyaml.org/download/pyyaml/')
        r.PythonSetup()
