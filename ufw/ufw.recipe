class Ufw(PackageRecipe):

    name = 'ufw'
    version = '0.30.1'

    buildRequires = ['python-setuptools:python', 'python:devel', 'iptables:runtime']

    def setup(r):
        r.addArchive('http://launchpad.net/ufw/0.30/0.30.1/+download/')
        r.PythonSetup()
