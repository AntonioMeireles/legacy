class LsbRelease(CPackageRecipe):
    name = 'lsb-release'
    version = '1.4'
 
    buildRequires = ['perl:runtime']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/lsb/')

        r.MakePathsInstall()

        r.Create('%(sysconfdir)s/lsb-release', contents="""
DISTRIB_ID=Foresight
""")
