class Abgx360Gui(AutoPackageRecipe):
    name = 'abgx360-gui'
    version = '1.0.2'
 
    buildRequires = ['libstdc++:devel', 'wxWidgets:devel', 'desktop-file-utils:runtime']
 
    def unpack(r):
        r.addArchive('abgx360gui-%(version)s.tar.gz')
        r.addSource('abgx360-256.png', dir = '%(datadir)s/pixmaps/')
        r.addSource('abgx360.desktop')
        r.Desktopfile('abgx360.desktop')

    def policy(r):
	r.Requires('abgx360:runtime', '%(bindir)s/abgx360gui')
