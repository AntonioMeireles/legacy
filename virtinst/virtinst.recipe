loadSuperClass('rpmpackage')
class VirtInst(RPMPackageRecipe,PackageRecipe):

    name = 'virtinst'
    version = '0.300.3'
    rpmName = 'python-virtinst'
    rpmRelease = '7.fc9'
    rpmPatches = [ '%(name)s-%(version)s-keep-qemu-cdrom.patch',
                   '%(name)s-%(version)s-fix-default-arch.patch',
                   '%(name)s-%(version)s-fv-extraargs.patch',
                   '%(name)s-%(version)s-update-polish-trans.patch',
                   '%(name)s-%(version)s-i18n.patch',
                   '%(name)s-%(version)s-update-serbian-trans.patch',
                   '%(name)s-%(version)s-boot-dir.patch',
                   '%(name)s-%(version)s-hvm-kernel.patch',
                   ]
    tarballName = '%(name)s-%(version)s.tar.gz'

    buildRequires = ['libvirt:python', 
                     'libxml2:python', 
                     'python:devel', 
                     'urlgrabber:python',
                     'python-setuptools:python',
                     'perl:devel',
                     'gettext:runtime']

    def setup(r):
        RPMPackageRecipe.unpack(r)
        r.PythonSetup()
