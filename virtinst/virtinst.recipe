loadSuperClass('rpmpackage')
class VirtInst(RPMPackageRecipe,PackageRecipe):

    name = 'virtinst'
    version = '0.600.0'
    rpmName = 'python-virtinst'
    rpmRelease = '5.fc17'
    rpmPatches = [ '%(name)s-fix-po-install.patch',
                   # Handle libvirt getVersion failing (bz 726617)
                   '%(name)s-catch-version-errs.patch',
                   # Regenerate outdated man pages
                   '%(name)s-regenerate-man-pages.patch',
                   # virt-install: Fix --initrd-inject
                   '%(name)s-fix-initrd-inject.patch',
                   # Fix changing disk bus in virt-manager
                   '%(name)s-fix-vmm-disk-bus.patch',
                   # Fix remote URL installs as root
                   '%(name)s-fix-remote-url.patch',


        ]
    tarballName = '%(name)s-%(version)s.tar.gz'

    buildRequires = ['libvirt:python', 
                     'libxml2:python', 
                     'python:devel', 
                     'urlgrabber:python',
                     'python-setuptools:python',
                     'perl:devel',
                     'gzip:runtime',
                     'gettext:runtime']

    def setup(r):
        RPMPackageRecipe.unpack(r)
        r.PythonSetup(data = '--install-data=%(prefix)s')
        r.Replace('/tmp/rmake/builds/virtinst/%(name)s-%(version)s', '/usr/bin/python2.6', '%(destdir)s/%(bindir)s/*', allowNoChange=True)
        r.Symlink('%(bindir)s/virt-install', '%(sbindir)s/virt-install')

        r.Remove('/usr/lib*/python*/site-packages/*egg-info', recursive = True)
