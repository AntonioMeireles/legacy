loadSuperClass('rpmpackage')
class VirtInst(RPMPackageRecipe,PackageRecipe):

    name = 'virtinst'
    version = '0.400.0'
    rpmName = 'python-virtinst'
    rpmRelease = '7.fc11'
    rpmPatches = [ '%(name)s-%(version)s-qemu-conn-check.patch',
                   '%(name)s-%(version)s-virt-convert-dict.patch',
                   '%(name)s-%(version)s-virtio-f9.patch',
                   '%(name)s-%(version)s-log-fail-traceback.patch',
                   '%(name)s-%(version)s-bridge-network-collision.patch',
                   '%(name)s-%(version)s-refresh-storage-pool.patch',
                   '%(name)s-%(version)s-missing-variable.patch',
                   '%(name)s-%(version)s-disk-pool-fixes.patch',
                   '%(name)s-%(version)s-win64-entry.patch',
                   '%(name)s-%(version)s-update-translations.patch',
                   '%(name)s-%(version)s-undo-pxe-virtio.patch',
                   '%(name)s-%(version)s-fix-translated-help.patch'
                   ]
    tarballName = '%(name)s-%(version)s.tar.gz'

    buildRequires = ['libvirt:python', 
                     'libxml2:python', 
                     'python:devel', 
                     'urlgrabber:python',
                     'python-setuptools:python',
                     'perl:devel',
                     'gzip:runtime',
                     'gettext:runtime']

    def setup(r):
        RPMPackageRecipe.unpack(r)
        r.PythonSetup()
        r.Replace('/tmp/rmake/builds/virtinst/%(name)s-%(version)s', '/usr/bin/python2.6', '%(destdir)s/%(bindir)s/*', allowNoChange=True)
        r.Symlink('%(bindir)s/virt-install', '%(sbindir)s/virt-install')

