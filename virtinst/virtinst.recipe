loadSuperClass('rpmpackage:source=conary.rpath.com@rpl:devel')
class VirtInst(RPMPackageRecipe, PackageRecipe):

    buildRequires = [ 'libxml2:python', 'urlgrabber:python', 'python-setuptools:python','libvirt:python' ]
    name = 'virtinst'
    version = '0.102.0'


    rpmRelease = '1.fc7'
    rpmName = 'python-virtinst'


    def setup(r):
        r.AddArchiveFromSRPM('%(name)s-%(version)s', rpm=r.srpm)
        r.PythonSetup()
