class VirtInst(PackageRecipe):

    name = 'virtinst'
    version = '0.300.3'

    buildRequires = ['libvirt:python', 
			'libxml2:python', 
			'python:devel', 
			'urlgrabber:python',
			'python-setuptools:python',
			'perl:devel',
			'gettext:runtime']

    def setup(r):
        r.addArchive('http://virt-manager.et.redhat.com/download/sources/virtinst/')
        r.PythonSetup()
