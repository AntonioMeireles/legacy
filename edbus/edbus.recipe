class edbus(AutoPackageRecipe):
    name = 'edbus'
    version = "1.0.1"

    buildRequires = ['dbus:devel', 'ecore:devel', 'eet:devel', 'eina:devel', 'evas:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gnutls:devel', 'libgcrypt:devel', 'libgpg-error:devel', 'libjpeg:devel', 'openssl:devel', 'pkgconfig:devel', 'zlib:devel', 'automake:runtime', 'autoconf:runtime', 'libtool:runtime']

    def unpack(r):
        r.addArchive("http://download.enlightenment.org/releases/e_dbus-%(version)s.tar.gz")
