loadInstalled('python')
class PyXML(CPackageRecipe):
    name = 'PyXML'
    version = '0.8.4'

    buildRequires = [ 'python:devel', 'python:runtime', 'sgmlop:python',
        'python-setuptools:python', ]

    def setup(r):
        r.macros.pyver = Python.majversion
        r.addArchive('mirror://sourceforge/pyxml/')
        r.PythonSetup()
