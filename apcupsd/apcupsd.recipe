class ApcUpsd(CPackageRecipe):
    name = 'apcupsd'
    version = '3.14.7'

    buildRequires = [
        'chkconfig:runtime',
        'pkgconfig:devel',
        ]

    def setup(r):
        r.addArchive('mirror://sourceforge/apcupsd/apcupsd-%(version)s.tar.gz')
        r.addPatch('apcupsd-man-bullet.patch')
        r.Configure('--enable-usb --with-distname=redhat --sysconfdir=/etc/apcupsd')
        r.Make()
        r.MakeInstall()

        r.Remove('/etc/rc.d/init.d/halt*')
        r.Move('/etc/rc.d/init.d', '/etc/init.d')

        r.addSource('upsdrvctl.sh', dest='/sbin/upsdrvctl', mode=0700, package=':init')
        r.addSource('sysconfig-ups', dest='/etc/sysconfig/ups', package=':init')
