class Bridgeutils(CPackageRecipe):
    name = 'bridge-utils'
    version = '1.2'

    buildRequires = [ 'sysfsutils:devel', 'autoconf:runtime', ]

    def setup(r):
        r.addArchive('mirror://sourceforge/bridge/')
        r.addPatch('bridge-utils-1.0.4-inc.patch')
        r.addPatch('bridge-utils-1.0.4-kernheaders.patch')
        r.Run('autoconf')
        r.Configure('--with-linux-headers=`pwd`')
        r.Make()
        r.MakeInstall()
