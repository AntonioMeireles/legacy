class GalagoDaemon(PackageRecipe):
    buildRequires = [ 'libgalago:devel', 'dbus:devel',
        'glib:devel', 'glibc:devel', 'dbus-glib:devellib' ]

    name = "galago-daemon"
    version = "0.5.0"
    
    def setup(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
