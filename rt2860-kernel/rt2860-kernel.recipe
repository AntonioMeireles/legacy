loadSuperClass('kernelmodulepackage')
class RT2860Kernel(KernelModulePackageRecipe):
    name = 'rt2860-kernel'
    version =  '2.1.2.0'

    def unpack(r):
        # upstream has a changed URLs...
        srpm = 'ftp://fr2.rpmfind.net/linux/rpmfusion/free/fedora/development/source/SRPMS/rt2860-kmod-2.1.2.0-3.fc13.7.src.rpm'
        r.addArchive('2009_0521_RT2860_Linux_STA_V2.1.2.0.tgz',
                     rpm = srpm)
 

        # livna patchset
        for p in [ 'rt2860-dat-install-fixes.patch',
                   'rt2860-add-network-mgr-support.diff',
                   'rt2860-remove-tftpboot-copy.patch',
                   'rt2860-no2.4-in-kernelversion.patch',
                   'rt2860-2.6.31-compile.patch',
                   'rt2860-suppress-flood.patch',
                   ]:
            r.addPatch(p, rpm=srpm)

    def build(r):
        r.Make("LINUX_SRC='/lib/modules/%(kver)s/build'")

    def install(r):
        r.macros.moduledir = r.moduleDir
        r.Install('os/linux/*.ko', '/lib/modules/%(kver)s/%(moduledir)s/')

    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')
