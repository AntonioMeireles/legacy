class BansheeCommunityExtensions(AutoPackageRecipe):
    name = 'banshee-community-extensions'
    version = '1.9.3'
 
    buildRequires = [	'GConf:runtime', 
			'banshee:devellib', 
			'fftw:devel', 
			'gettext:runtime', 
			'glib:devel', 
			'gnome-sharp:cil', 
			'gstreamer:devel', 
			'gtk-sharp:cil', 
			'intltool:runtime', 
			'libsamplerate:devel', 
			'libxml2:devel', 
			'lirc:devel',
			'mono-addins:cil', 
			'mono:cil', 
			'mono:devel', 
			'mono:runtime', 
			'ndesk-dbus:cil', 
			'pkgconfig:devel', 
			'taglib-sharp:cil', 
			'webkit-sharp:cil',
			'gst-plugins-base:devel',
			'webkit-sharp:devellib',
			'gtk-sharp:devellib',
			'gnome-sharp:devellib',
			'sqlite:devel',
            'libindicate:cil',
            'libstdc++:devel',
			]
 
    def unpack(r):
        r.addArchive('http://download.banshee-project.org/%(name)s/%(version)s/')
        r.addPatch('banshee-community-extensions-1.9.1-fix-ampache-unicode.patch')


    def configure(r):
	r.Configure('--enable-liveradio')
