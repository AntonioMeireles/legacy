class BansheeCommunityExtensions(AutoPackageRecipe):
    name = 'banshee-community-extensions'
    version = '1.5.5'
 
    buildRequires = [	'GConf:runtime', 
			'banshee:devellib', 
			'fftw:devel', 
			'gettext:runtime', 
			'glib:devel', 
			'gnome-sharp:cil', 
			'gstreamer:devel', 
			'gtk-sharp:cil', 
			'intltool:runtime', 
			'libsamplerate:devel', 
			'libxml2:devel', 
			'lirc:devel',
			'mono-addins:cil', 
			'mono:cil', 
			'mono:devel', 
			'mono:runtime', 
			'ndesk-dbus:cil', 
			'pkgconfig:devel', 
			'taglib-sharp:cil', 
			'webkit-sharp:cil',
			'gst-plugins-base:devel',
			'webkit-sharp:devellib',
			'gtk-sharp:devellib',
			'gnome-sharp:devellib',
			'sqlite:devel'
			]
 
    def unpack(r):
        r.addArchive('http://download.banshee-project.org/banshee-community-extensions/%(version)s/')
        r.addPatch("http://banshee-project.org/~gburt/tmp/magnatune-unicode.patch")

    def configure(r):
	r.Configure('--enable-liveradio')
