import datetime
class BansheeCommunityExtensions(AutoPackageRecipe):
    name = 'banshee-community-extensions'
    svnVersion = 'c84b2bb4'
    version = '2.0.0+r' + svnVersion + '+' + datetime.date.today().strftime("%Y.%m.%d")
 
    buildRequires = [	'GConf:runtime', 
                        'GConf:devel', 
			'banshee:devellib', 
			'fftw:devel', 
			'gettext:runtime', 
			'glib:devel', 
			'gnome-sharp:cil', 
			'gstreamer:devel', 
			'gtk-sharp:cil', 
			'intltool:runtime', 
			'libsamplerate:devel', 
			'libxml2:devel', 
			'lirc:devel',
			'mono-addins:cil', 
			'mono:cil', 
			'mono:devel', 
			'mono:runtime', 
			'ndesk-dbus:cil', 
			'pkgconfig:devel', 
			'taglib-sharp:cil', 
			'webkit-sharp:cil',
			'gst-plugins-base:devel',
			'webkit-sharp:devellib',
			'gtk-sharp:devellib',
			'gnome-sharp:devellib',
			'sqlite:devel',
                        'libindicate:cil',
                        'libstdc++:devel',
                        'which:runtime',
                        'automake:runtime',
                        'autoconf:runtime',
                        'git:runtime',
                        'gnome-doc-utils:runtime',
                        'intltool:devel',
                        'libtool:runtime',
                        'gnome-doc-utils:devel',
			]
 
    def unpack(r):
        r.addGitSnapshot('git://gitorious.org/%(name)s/%(name)s.git')


    def configure(r):
	r.Configure('--prefix=%(prefix)s --libdir=%(libdir)s', configureName='autogen.sh')
