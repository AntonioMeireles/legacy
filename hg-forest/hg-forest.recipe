class hgForest(BuildPackageRecipe):
    name = 'hg-forest'
    version = 'hg.bf6d44054cec'

    buildRequires = [ 'mercurial:python', 'python:devel', ]

    def setup(r):
        rev = r.version.split('.')[-1]
        r.addMercurialSnapshot('http://bitbucket.org/gxti/hgforest', tag=rev)

        r.Install('forest.py', '%(libdir)s/python%(pyver)s/site-packages/hgext/')
