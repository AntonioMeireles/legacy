            'group-kdesdk',
            'group-kdetoys',
            'group-kdeutils',
            'group-kdewebdev',
            'group-koffice'
            ]

        r.moveComponents(r.supDocComponents, name, 'group-extra-docs')
        if name == 'group-xfce':
            r.moveComponents(r.develComponents,  name, 'group-xfce-devel')
        elif name in kdegroups:
            r.moveComponents(r.develComponents,  name, 'group-kde-devel')
        elif name == 'group-gnome':
            r.moveComponents(r.develComponents,  name, 'group-gnome-devel')
        elif name not in ('group-devel', 'group-gnome', 'group-xfce', kdegroups):
            r.moveComponents(r.develComponents,  name, 'group-devel')

    def rplAddGroup(r, name, version, flavor=None):
        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64rplGroupsFlavorString
            else:
                flavor = r.x86rplGroupsFlavorString

        r.addCopy(name, version, flavor)

        if name == 'group-devel' or name == 'group-anaconda-deps':
            r.addNewGroup(name, groupName='group-world')
        elif name == 'group-os-devel':
            r.addNewGroup(name, groupName='group-devel')
        else:
            r.addNewGroup(name, groupName='group-rpl-derived')


    def flAdd(r, name, components = None, source=None, versionStr=None, \
              groupName=None, flavor=None, byDefault=True, singleArch=False):

        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64rplGroupsFlavorString
            else:
                flavor = r.x86rplGroupsFlavorString

        #  first, we add the trove, normally
        
        r.add(name,
              components = components,
              versionStr = versionStr,
              source=source,
              groupName=groupName,
              flavor=flavor,
              byDefault=byDefault)

        # second, we check if that trove is already in any of the upstream, pre-built,
        # groups, we use, and - there - we replace it.
        if Arch.x86_64 and not name == 'anaconda' and not singleArch:
            # All :lib components land in compat32. this may need to be refined in the future

            r.add(name,
                  groupName='group-desktop-platform-compat32',
                  source = source,
                  versionStr = versionStr,
                  flavor=r.x86FlavorString,
                  components=['lib']
                  )

            r.replace(name,
                      groupName='group-compat32',
                      allowNoMatch=True,
                      newVersionStr = versionStr,
                      newFlavor = r.x86FlavorString
                      )

        if not singleArch:
            for g in r.rplGroups:
                r.replace(name,
                          newVersionStr = versionStr,
                          groupName = 'group-'+ g,
                          newFlavor=flavor,
                          allowNoMatch=True) 


    # for replacing stuff also in compat32
    def flReplace(r, name, groupName=None, flavor=None):
        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64FlavorString
            else:
                flavor = r.x86FlavorString

        r.replace(name, groupName=groupName, newFlavor=flavor)

        if Arch.x86_64:
            r.remove(name,
                     groupName='group-compat32',
                     allowNoMatch=True,
                     flavor=r.x86_64FlavorString)
            r.replace(name,
                      groupName='group-compat32',
                      allowNoMatch=True,
                      newFlavor=r.x86FlavorString)

    def rplAdd(r, name, versionStr=None, groupName=None, components=None, byDefault=True, flavor = None, source = None):

        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64FlavorString
            else:
                flavor = r.x86FlavorString

        # first we look at rPL master group, second we see if anything there, not in group, last we check -compat label
        # FIXME: understand why r.rplGroupUmbrella in searchPath breaks
        # searchPath = (r.rplGroupUmbrella, r.rplLabel, r.rplLabelCompat)
        # WARNING: due to the mess quoted above right now this looks at tip of rpl:devel, not their group-os... 
        searchPath = (r.rplLabel,r.rplLabelCompat)

        if Arch.x86_64:
            flavor32 = r.x86FlavorString

            # All :lib components land in compat32. this may need to be refined in the future

            r.replace(name,
                      newVersionStr = versionStr,
                      groupName='group-compat32',
                      newFlavor=flavor32,
                      allowNoMatch=True,
                      searchPath=searchPath
                      )

        r.add(name,
              source = source,
              versionStr = versionStr,
              components = components,
              groupName = groupName,
              flavor = flavor,
              byDefault = byDefault,
              searchPath = searchPath
              )

