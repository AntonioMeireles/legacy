    def startGroup(r, name, parentGroup=None, depCheck=False, byDefault=True, autoResolve = False):
        # creates group named 'name', adds it to the toplevel group,
        # and sets the current group to that name.  calls to r.add()
        # will use the current group by default.

        # note: byDefault applies to whether the group is included by
        # default in its parent group, not whether the troves in
        # the group are added by default. (use the setByDefault() command
        # to get that)

        # get all the the default for the new group from its parent group.
        if parentGroup:
            r.setDefaultGroup(parentGroup)
        r.createGroup(name, autoResolve=autoResolve, depCheck=depCheck, 
                      byDefault=True)
        if parentGroup:
            r.addNewGroup(name, groupName=parentGroup, byDefault=byDefault)
        r.setDefaultGroup(name)

        # (20:59:42) mkj_wk: instead of doing something like r.moveComponents to move :supdoc into group-extra-docs
        # (20:59:56) mkj_wk: and I'd say :devel and :devellib should be moveComonents to move into group-devel

        r.moveComponents(r.supDocComponents, name, 'group-extra-docs')
        if not name == 'group-devel':
            r.moveComponents(r.develComponents,  name, 'group-devel')

    def rplAddGroup(r, name, version, flavor=None):
        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64rplGroupsFlavorString
            else:
                flavor = r.x86rplGroupsFlavorString

        r.addCopy(name, version, flavor)

        if name == 'group-devel' or name == 'group-anaconda-deps':
            r.addNewGroup(name, groupName='group-world')
        elif name == 'group-os-devel':
            r.addNewGroup(name, groupName='group-devel')
        else:
            r.addNewGroup(name, groupName='group-rpl-derived')


    def flAdd(r, name, source=None, groupName=None, flavor=None, byDefault=True):
        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64rplGroupsFlavorString
            else:
                flavor = r.x86rplGroupsFlavorString

        #  first, we add the trove, normally
        r.add(name, source=source, groupName=groupName, flavor=flavor, byDefault=byDefault)

        # second, we check if that trove is already in any of the upstream, pre-built,
        # groups, we use, and - there - we replace it.
        if Arch.x86_64 and not name == 'anaconda':
            # All :lib components land in compat32. this may need to be refined in the future

            r.add(name, groupName='group-desktop-platform-compat32', flavor=r.x86FlavorString, components=['lib'])
            r.replace(name, groupName='group-compat32', allowNoMatch=True, 
                      newFlavor = r.x86FlavorString)

        for g in r.rplGroups:
            r.replace(name, groupName = 'group-'+ g, newFlavor=flavor, # WARNING: this needs to be refactored
                      allowNoMatch=True)                               # to cover x86 only apps we want in x86_64


    # for replacing stuff also in compat32
    def flReplace(r, name, groupName=None, flavor=None):
        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64FlavorString
            else:
                flavor = r.x86FlavorString

        r.replace(name, groupName=groupName, newFlavor=flavor)

        if Arch.x86_64:
            r.remove(name, groupName='group-compat32', allowNoMatch=True, 
                      flavor=r.x86_64FlavorString)
            r.replace(name, groupName='group-compat32', allowNoMatch=True, 
                      newFlavor=r.x86FlavorString)

    def rplAdd(r, name, versionStr=None, groupName=None, components=None, byDefault=True, flavor = None):

        if components is None:
            components = [ 'lib', ]

        if versionStr is None:
            versionStr = 'conary.rpath.com@rpl:devel'

        if not flavor:
            if Arch.x86_64:
                flavor = r.x86_64FlavorString
            else:
                flavor = r.x86FlavorString

        if Arch.x86_64:
            flavor32 = r.x86FlavorString

            # All :lib components land in compat32. this may need to be refined in the future
            r.add(name, versionStr=versionStr,
                  groupName='group-compat32', flavor=flavor32, components=components)

        r.add(name, versionStr=versionStr, groupName=groupName, flavor=flavor, byDefault=byDefault)

        for g in r.rplGroups:
            r.replace(name, groupName = 'group-' + g, newFlavor=flavor, # WARNING: this needs to be refactored
                      allowNoMatch=True)                                # to cover x86 only apps we want in x86_64


