class GstPluginsBad(AutoPackageRecipe):
    name = 'gst-plugins-bad'
    version = '0.10.5'
    buildRequires = [ 'Mesa:devel', 'alsa-lib:devel', 'faac:devel',
'faad2:devel', 'libsndfile:devel', 'nas:devel', 'jack:devel', 'krb5:devel', 
'neon:devel', 'openssl:devel','SDL:devel', 'bzip2:devel', 'gcc-c++:runtime',
'glib:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gstreamer:runtime',
'ladspa_sdk:devel', 'lame:devel', 'libid3tag:devel', 'libmad:devel', 
'libmpcdec:devel', 'libmusicbrainz:devel', 'liboil:devel', 'libstdc++:devel',
'libxml2:devel', 'pango:devel', 'libICE:devel', 'libSM:devel',
'pkgconfig:devel', 'x264:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://gstreamer.freedesktop.org/src/%(name)s/')
    def configure(r):
        r.Configure(' --enable-ladspa')

