class MonoZeroconf(AutoPackageRecipe):
    name = 'mono-zeroconf'
    version = '0.7.5'
    buildRequires = [ 'avahi-sharp:devellib', 'avahi-sharp:cil', 'gnome-sharp:devellib', 'mono:devel', 'mono:devellib', 'mono:lib', 'monodoc:runtime', 'pkgconfig:devel', 'mono:cil', 'mono:runtime', 'monodoc:cil', 'monodoc:devellib']

    def unpack(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/mono-zeroconf/mono-zeroconf-libdir.patch')
