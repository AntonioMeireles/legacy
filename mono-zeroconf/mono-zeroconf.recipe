class MonoZeroconf(CPackageRecipe):
    name = 'mono-zeroconf'
    version = '0.7.5'
    buildRequires = ['avahi-sharp:devellib', 'mono:devel', 'mono:runtime', 'pkgconfig:devel']

    def setup(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')
	r.Configure('--disable-docs')
	r.Make()
	r.MakeInstall()
