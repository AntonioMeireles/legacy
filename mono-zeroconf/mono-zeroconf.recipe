class MonoZeroconf(CPackageRecipe):
    name = 'mono-zeroconf'
    version = '0.7.3'
    buildRequires = [ 'avahi-sharp:devellib', 'avahi-sharp:lib', 'gnome-sharp:devellib', 
                      'mono:devel', 'mono:devellib',
                      'mono:lib', 'monodoc:runtime', 'pkgconfig:devel']

    def setup(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()
