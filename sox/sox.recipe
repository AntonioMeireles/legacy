class Sox(AutoPackageRecipe):
    name = 'sox'
    version = '14.3.0'
 
    buildRequires = ['alsa-lib:devel', 'flac:devel', 'libogg:devel', 
        'libsndfile:devel', 'libvorbis:devel', 'pkgconfig:devel', 
        'ffmpeg:devel', 'gsm:devel', 'lame:devel', 'libao:devel', 
        'libpng:devel', 'libsamplerate:devel', 'libtool:devel', 'zlib:devel', 'file:devel', 'libmad:devel', 'glibc:devellib', 'libid3tag:devel', 'wavpack:devel', 'pulseaudio:devel', 'ladspa_sdk:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
