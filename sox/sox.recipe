class Sox(AutoPackageRecipe):

    name = 'sox'
    version = '13.0.0'

    buildRequires = ['alsa-lib:devel', 'flac:devel', 'libogg:devel', 'libsndfile:devel', 'libvorbis:devel', 'pkgconfig:devel']

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
	r.addPatch('sox-13.0.0-oggautomagic.patch')
	r.addPatch('sox-13.0.0-flac113.patch')
