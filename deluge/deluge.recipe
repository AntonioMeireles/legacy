class Deluge(PackageRecipe):
    name = 'deluge'
    version = '1.2.0_rc1'
    buildRequires = [ 'dbus-python:python', 'desktop-file-utils:runtime',
        'gettext:runtime', 'gnome-python:python', 'intltool:runtime',
        'libtorrent-rasterbar:python', 'notify-python:python',
        'python-setuptools:python', 'python:devel', 'pyxdg:python',
        'unzip:runtime', 
	'pygame:python', 
	'pygtk:python', 
	'python-mako:python', 
	'python-twisted-web:python', 
	'python-twisted:python', 
	'simplejson:python']

    def setup(r):
        r.addArchive('http://download.deluge-torrent.org/source/')
        r.PythonSetup(action='build install',
                      data='--install-data=%(prefix)s')

        # These aren't needed, they are detected from the webui libraries
        r.EnforcePythonBuildRequirements(exceptions=['MySQL-python:python',
            'PIL:python', 'pyOpenSSL:python', 'python-sqlite:python'])
