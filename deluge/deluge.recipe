class Deluge(CPackageRecipe):
    name = 'deluge'
    version = '1.1.0'
    buildRequires = [ 'PIL:python', 'boost:devel', 'dbus-python:python',
        'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-python:python',
        'intltool:runtime', 'libstdc++:devel', 'notify-python:python', 'openssl:devel',
        'pygobject:python', 'pygtk:python', 'python-setuptools:python',
        'python:devel', 'pyxdg:python', 'unzip:runtime', 'zlib:devel' ]

    def setup(r):
        r.addArchive('http://download.deluge-torrent.org/source/%(version)s/')
        r.PythonSetup(data='--install-data=%(prefix)s')

        r.EnforcePythonBuildRequirements(exceptions=['Cheetah:python',
           'MySQL-python:python', 'pyOpenSSL:python', 'python-sqlite:python'])
