class Deluge(PackageRecipe):
    name = 'deluge'
    version = '1.2.0_rc1'
    buildRequires = [
        'chardet:python',
        'desktop-file-utils:runtime',
        'gettext:runtime',
        'gnome-python:python',
        'intltool:runtime',
        'libtorrent-rasterbar:python',
        'notify-python:python',
        'pyOpenSSL:python',
        'pygame:python',
        'pygtk:python',
        'python-mako:python',
        'python-setuptools:python',
        'python-twisted-web:python',
        'python-twisted:python',
        'python:devel',
        'pyxdg:python',
        'simplejson:python',
        'unzip:runtime',
    ]

    def setup(r):
        r.addArchive('http://download.deluge-torrent.org/source/')
        r.PythonSetup(action='build install',
                      data='--install-data=%(prefix)s')
