class Deluge(CPackageRecipe):
    name = 'deluge'
    version = '0.5.0'
    buildRequires = [ 'boost:devel', 'dbus-python:python', 'desktop-file-utils:runtime', 'libstdc++:devel', 'pygobject:python', 'pygtk:python', 'python-setuptools:python', 'python:devel', 'pyxdg:python', 'zlib:devel' ]

    def setup(r):
        r.addArchive('http://deluge-torrent.org/downloads/')
        r.Replace('boost_thread', 'boost_thread-mt', 'setup.py', lines=90)
        #FIXME: The latest version embeds the _ROOT_ while trying to set the
        #prefix. Upstream issue http://deluge-torrent.org/ticket/173Â·
        r.Replace('@datadir@', '%(prefix)s', 'src/dcommon.py', lines=32)
        r.Replace('__file__', 'os.curdir', 'setup.py', lines=184)
        r.PythonSetup(data='--install-data=%(prefix)s')
