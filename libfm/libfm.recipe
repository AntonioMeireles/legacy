class Libfm(AutoPackageRecipe):
    name = 'libfm'
    version = '0.1.17'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gdk-pixbuf:devel', 'gettext:runtime', 'glib:devel', 'gtk-doc:runtime', 'gtk:devel', 'intltool:runtime', 'libpng:devel', 'menu-cache:devel', 'pango:devel', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/pcmanfm/%(name)s-%(version)s.tar.gz')
