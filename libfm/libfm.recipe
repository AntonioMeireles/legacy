import datetime
class Libfm(AutoPackageRecipe):
    name = 'libfm'
    version = '944b9813' + '+' + datetime.date.today().strftime("%Y.%m.%d")
    tag = '944b9813'

    buildRequires = [
        'atk:devel', 
        'cairo:devel', 
        'desktop-file-utils:runtime', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gdk-pixbuf:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'gtk-doc:runtime', 
        'gtk:devel', 
        'intltool:devel',
        'intltool:runtime', 
        'libpng:devel', 
        'menu-cache:devel', 
        'pango:devel', 
        'pkgconfig:devel',
        'libexif:devel', 
        'vala:runtime',
        'automake:runtime',
        'autoconf:runtime',
        'libtool:runtime',
        'gtk-doc:devel',
        ]
 
    def unpack(r):
        r.addGitSnapshot('git://pcmanfm.git.sourceforge.net/gitroot/pcmanfm/libfm', 
                         tag = r.tag)

        r.Run('./autogen.sh')
