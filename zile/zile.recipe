class zile(AutoPackageRecipe):

    name = "zile"
    version = "2.2.61"

    buildRequires = ['install-info:runtime',
                     'ncurses:devel',
                     'texinfo:runtime']


    def unpack(r):
        # Originally used a mirror: style URL, but having moved to GNU so
        # recently not all mirrors have gotten their act together yet...
        r.addArchive('http://ftp.gnu.org/gnu/%(name)s/')
