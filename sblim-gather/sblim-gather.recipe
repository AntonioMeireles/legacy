class SblimDataGatherer(AutoPackageRecipe):
    name = 'sblim-gather'
    version = '2.1.6'

    buildRequires = [
        'binutils:devel',
        'curl:devel',
        'libstdc++:devel',
        'sblim-cmpi-base:devel',
        'sblim-sfcb:devel',
        'sysfsutils:devel',
    ]

    def unpack(r):
        r.macros.cppflags += '-DCMPI_PLATFORM_LINUX_GENERIC_GNU'
        r.Environment('CIMSERVER', 'sfcb')
        r.Environment('PROVIDERDIR', '%(libdir)s/cmpi')
        r.addArchive('mirror://sourceforge/sblim/')
