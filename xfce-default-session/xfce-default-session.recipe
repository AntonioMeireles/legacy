class xfceDefaultSession(PackageRecipe):
    name = 'xfce-default-session'
    version = '0.1'

    def setup(r):
        r.addSource('xfce.sh', dir='%(sysconfdir)s/profile.d/', mode = 0755)
        r.addSource('xfce.csh', dir='%(sysconfdir)s/profile.d/', mode = 0755)

