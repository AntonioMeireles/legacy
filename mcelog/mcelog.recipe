class Mcelog(CPackageRecipe):
    name = 'mcelog'
    version = '0.8pre'

    def setup(r):
        r.addArchive('ftp://ftp.x86-64.org/pub/linux/tools/%(name)s/')
        r.MakeDirs('%(sbindir)s')
        r.MakeDirs('%(mandir)s/man8')
        r.MakeInstall('prefix=%(destdir)s/%(prefix)s')
        r.Install('mcelog.cron', '%(sysconfdir)s/cron.hourly/mcelog')
        r.Install('mcelog.logrotate', '%(sysconfdir)s/logrotate.d/mcelog')
        r.Doc('mce.pdf')
