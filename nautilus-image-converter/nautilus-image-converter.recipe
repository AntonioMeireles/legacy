class Nautilusimageconverter(CPackageRecipe):
    name = 'nautilus-image-converter'
    version = '0.3.0'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libglade:devel', 'libpng:devel', 'libxcb:devel', 'libxml2:devel', 'nautilus:devel', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel', 'intltool:runtime']
 
    def setup(r):
		r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/%(name)s/0.3/')
		r.Configure()
		r.Make()	
		r.MakeInstall()

