class Qof(AutoPackageRecipe):
    name = 'qof'
    version = '0.7.2'

    buildRequires = ['bison:runtime', 'doxygen:runtime', 'gettext:runtime',
                     'glib:devel', 'libxml2:devel', 'perl-XML-Parser:perl',
