class OverSite(PackageRecipe):
    name = 'oversite'
    version = '0.4'
    
    def setup(r):
	r.addSource('oversite')
	r.addSource('oversite.init')
	r.addSource('sysconfig.oversite')
	r.addSource('oversite.cron')
	r.addSource('oversite.sh')
	r.addSource('tasks')
	r.Install('oversite','/usr/bin/oversite')
	r.Install('oversite.sh','/usr/sbin/oversite.sh')
	r.Install('oversite.init','/etc/init.d/oversite')
	r.Install('sysconfig.oversite','/etc/sysconfig/oversite')
	r.Install('oversite.cron','/etc/cron.hourly/oversite')
	r.Run('mkdir -p %(destdir)s/etc/oversite')
	r.ExcludeDirectories(exceptions='/etc/oversite')

