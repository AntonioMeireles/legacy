class OverSite(PackageRecipe):
    name = 'oversite'
    version = '0.5.2'
    
    def setup(r):
	r.addArchive('%(name)s-%(version)s.tar.bz2')
	r.MakeInstall()
	r.Requires('gnome-python-extras:python','%(libdir)s/python2.4/site-packages/oversite/oversite.py')
	r.Requires('libglade:lib','%(libdir)s/python2.4/site-packages/oversite/oversite.py')
	r.Requires('pygtk:python','%(libdir)s/python2.4/site-packages/oversite/oversite.py')
