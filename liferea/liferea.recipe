class Liferea(CPackageRecipe):

    name = 'liferea'
    version = '1.4.15'

    buildRequires = ['GConf:config', 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:runtime', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'libstdc++:devel', 'libxml2:devel', 'libxslt:devel', 'nspr:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'sqlite:devel', 'xulrunner:devel', 'zlib:devel', 'gnutls:devel', 'libgcrypt:devel', 'libglade:devel', 'NetworkManager:devel', 'expat:devel', 'perl-XML-Parser:perl', 'dbus-glib:runtime', 'libgpg-error:devel', 'intltool:runtime', 'libgtkhtml:devel']

    def setup(r):
        r.macros.version = r.version.replace('_', '-')

        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')

        r.addPatch('http://liferea.svn.sourceforge.net/viewvc/liferea/branches/liferea-1_4/liferea/AUTHORS?r1=3849&r2=3848&view=patch&pathrev=3849')
        r.addPatch('http://liferea.svn.sourceforge.net/viewvc/liferea/branches/liferea-1_4/liferea/configure.ac?r1=3849&r2=3848&view=patch&pathrev=3849')
        r.addPatch('http://liferea.svn.sourceforge.net/viewvc/liferea/branches/liferea-1_4/liferea/src/mozilla/mozembed.c?r1=3849&r2=3848&view=patch&pathrev=3849')
        r.addPatch('http://liferea.svn.sourceforge.net/viewvc/liferea/branches/liferea-1_4/liferea/src/mozilla/mozilla.c?r1=3849&r2=3848&view=patch&pathrev=3849')
        r.addPatch('http://liferea.svn.sourceforge.net/viewvc/liferea/branches/liferea-1_4/liferea/src/mozilla/mozsupport.cpp?r1=3849&r2=3848&view=patch&pathrev=3849')
        r.addPatch('http://liferea.svn.sourceforge.net/viewvc/liferea/branches/liferea-1_4/liferea/src/mozilla/mozsupport.h?r1=3849&r2=3848&view=patch&pathrev=3849')

        r.addPatch('liferea-gtkhtml2_x64.patch')

        r.Configure('--disable-mozilla --enable-gtkhtml2 --disable-gecko --disable-webkit ')
#        r.Configure('--disable-gecko --enable-webkit ')
        r.Make()
        r.MakeInstall()

        r.addSource('feedlist.opml', dest='%(datadir)s/liferea/opml/feedlist.opml')
