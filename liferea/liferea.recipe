
class Liferea(AutoPackageRecipe):

    name = 'liferea'
    version = '1.4.19'

    buildRequires = ['GConf:config', 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:runtime', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'libstdc++:devel', 'libxml2:devel', 'libxslt:devel', 'nspr:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'sqlite:devel', 'xulrunner:devel', 'zlib:devel', 'gnutls:devel', 'libgcrypt:devel', 'libglade:devel', 'NetworkManager:devel', 'expat:devel', 'perl-XML-Parser:perl', 'dbus-glib:runtime', 'libgpg-error:devel', 'intltool:runtime', 'libgtkhtml:devel', 'avahi-glib:devel', 'avahi:devel', 'curl:devel', 'openssl:devel']

