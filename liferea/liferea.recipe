class Liferea(CPackageRecipe):

    name = 'liferea'
    version = '1.4.7'

    buildRequires = ['GConf:config', 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:config', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:config', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libnotify:devel', 'libpng:devel', 'libstdc++:devel', 'libxml2:devel', 'libxslt:devel', 'nspr:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'sqlite:devel', 'xulrunner:devel', 'zlib:devel', 'gnutls:devel', 'libgcrypt:devel', 'libglade:devel', 'NetworkManager:devel', 'expat:devel', 'perl-XML-Parser:perl', 'dbus-glib:runtime', 'libgpg-error:devel']

    def setup(r):
        r.macros.version = r.version.replace('_', '-')        

        r.addArchive('mirror://sourceforge/%(name)s/')

        # XXX this is highly dependent on the version of xulrunner and is
        # probably not a good idea, but that's the easiest way for now
#        r.Environment('XULRUNNER_LIBS',
#            '-L%(libdir)s/xulrunner-1.8.1.4 -lgtkembedmoz -lxpcom -lplds4 -lplc4 '
#            '-lnspr4 -lpthread -ldl -Wl,--rpath,%(libdir)s/xulrunner')

        r.Configure('--disable-gecko --disable-gtkhtml2 --enable-xulrunner')
        r.Make()
        r.MakeInstall()
