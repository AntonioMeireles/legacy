class Liferea(CPackageRecipe):

    name = 'liferea'
    version = '1.4.9'

    buildRequires = ['GConf:devel', 'GConf:runtime', 'NetworkManager:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'desktop-file-utils:runtime', 'expat:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'gtk:runtime', 'libICE:devel', 'libSM:devel', 'libXrender:devel', 'libnotify:devel', 'libstdc++:devel', 'libxslt:devel', 'nspr:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'xulrunner:devel', 'zlib:devel', 'libglade:devel', 'sqlite:devel', 'intltool:runtime', 'dbus-glib:runtime']

    def setup(r):

        r.addArchive('mirror://sourceforge/%(name)s/')

        # XXX this is highly dependent on the version of xulrunner and is
        # probably not a good idea, but that's the easiest way for now
        r.Environment('XULRUNNER_LIBS',
            '-L%(libdir)s/xulrunner-1.8.1.2pre -lgtkembedmoz -lxpcom -lplds4 -lplc4 '
            '-lnspr4 -lpthread -ldl -Wl,--rpath,%(libdir)s/xulrunner-1.8.1.2pre')

        r.addSource('feedlist.opml', dir='opml')
        r.Configure('--disable-gecko --disable-gtkhtml2 --enable-xulrunner')
        r.Make()
        r.MakeInstall()
