class MonoAddins(CPackageRecipe):
    name = 'mono-addins'
    version = '0.3'
    buildRequires = [ 'gtk-sharp:lib', 'gtk-sharp:devellib', 'mono:devel', 'mono:devellib',
                      'mono:lib', 'monodoc:runtime', 'pkgconfig:devel' ]

    def setup(r):
        r.addArchive('http://www.go-mono.com/sources/%(name)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()

        r.Requires('mono:runtime', 'mono:lib', '%(libdir)s/mono/mono-addins/Mono.Addins.dll')
        r.Requires('gtk-sharp:lib', 'gtk-sharp:runtime', '%(libdir)s/mono/mono-addins/Mono.Addins.Gui.dll')
