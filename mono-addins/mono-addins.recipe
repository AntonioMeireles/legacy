class MonoAddins(AutoPackageRecipe):
    name = 'mono-addins'
    version = '0.3.1'
 
    buildRequires = ['gnome-sharp:cil', 'gnome-sharp:devellib', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'mono:cil', 'mono:devel', 'mono:runtime', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://www.go-mono.com/sources/mono-addins/')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/mono-addins/mono-addins-fix_addin_scan.patch')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/mono-addins/mono-addins.patch')
        r.Run('autoreconf -f -i -s')

    def configure(r):
        r.Configure('--prefix=%(prefix)s --libdir=%(libdir)s --enable-gui')
