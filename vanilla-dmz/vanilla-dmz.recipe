class VanillaDmz(PackageRecipe):
    name = 'vanilla-dmz'
    version = '0.2'
    buildRequires = [ 'gtk:config' ]

    def setup(r):
        r.addArchive('http://jimmac.musichall.cz/zip/', dir='%(datadir)s/icons/')
        r.Remove('%(datadir)s/icons/Vanilla-DMZ/cursors/base_arrow_*')
