class Jokosher(PackageRecipe):
    name = 'jokosher'
    version = '0.9_r1336'
    buildRequires = [ 'dbus-python:python', 'desktop-file-utils:runtime', 'gnome-python:python', 'gst-python:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python-setuptools:python', 'shared-mime-info:runtime' ]

    def setup(r):
        r.addArchive('jokosher-%(version)s.tar.bz2')
        r.PythonSetup(data='--install-data %(prefix)s')

        r.Requires('gnonlin:lib', '%(bindir)s/jokosher')
