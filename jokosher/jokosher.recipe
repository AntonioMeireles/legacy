class Jokosher(PackageRecipe):
    name = 'jokosher'
    version = '0.9'
    buildRequires = [ 'dbus-python:python', 'desktop-file-utils:runtime', 'gnome-python:python', 'gst-python:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python-setuptools:python', 'scrollkeeper:runtime', 'shared-mime-info:runtime' ]

    def setup(r):
        r.addArchive('http://www.jokosher.org/downloads/source/')
        r.PythonSetup(data='--install-data %(prefix)s')
        r.Requires('gnonlin:lib', '%(bindir)s/jokosher')
