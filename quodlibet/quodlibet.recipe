class Recipe(PackageRecipe):
    buildRequires = ['atk:devel', 'cairo:devel', 'fontconfig:devel',
       'freetype:devel', 'glib:devel', 'glibc:devel', 'gtk:devel',
       'libpng:devel', 'pango:devel', 'xorg-x11:devel', 'zlib:devel']

    name = 'quodlibet'
    version = '0.19'

    def setup(r):
        r.addArchive('http://www.sacredchao.net/~piman/software/%(name)s-%(version)s.tar.gz')
        r.Replace('/usr/local','%(prefix)s','Makefile')

        r.Make('extensions')
        r.MakeInstall('DESTDIR=%(destdir)s')
