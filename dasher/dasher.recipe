loadSuperClass('gnomepackage')
class Dasher(GnomePackageRecipe):
    
    buildRequires = ['libgnome:devel', 'libglade:devel', 'libgnomeui:devel', 
			'GConf:devel', 'ORBit2:devel', 'at-spi:devel', 'atk:devel', 
			'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 
			'gcc:devel', 'glib:devel', 'glibc:devel', 'gnome-vfs:devel', 
			'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 
			'libgnomecanvas:devel', 'libpng:devel', 'libwnck:devel', 
			'libxml2:devel', 'pango:devel', 'popt:devel']

    # Qt support appears to be broken with this release
    #if Use.qt:
    #    buildRequires.append('qt-x11-free:devel')

    name = 'dasher'
    version = '3.2.18'
    
    # speech also seems broken
    extraConfig = '--without-speech'

    if Arch.x86_64:
        extraConfig += ' --x-libraries=/usr/X11R6/lib64'

    if Use.gnome: extraConfig += ' --with-gnome'
    # if Use.qt:    extraConfig += ' --with-qte'
