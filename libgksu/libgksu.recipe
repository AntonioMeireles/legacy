class Libgksu(CPackageRecipe):

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel',
        'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'intltool:runtime',
        'fontconfig:devel', 'freetype:devel', 'gettext:runtime',
        'glib:devel', 'gnome-keyring:devel', 'gtk:devel', 'libX11:devel',
        'libXrender:devel', 'libglade:devel', 'libgtop:devel', 'GConf:config', 'expat:devel',
        'libpng:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime',
        'pkgconfig:devel', 'startup-notification:devel', 'zlib:devel' ]

    name = 'libgksu'
    version = '2.0.7'

    def setup(r):
        r.addArchive('http://archive.ubuntu.com/ubuntu/pool/main/libg/%(name)s/%(name)s_%(version)s.orig.tar.gz')
        for p in [ '09_multihead.patch',
                   '11_no_save_to_keyring.patch',
                   '12_no_password_dialog.patch',
                   '13_startup_notification.diff',
                   '14_polish_startup.diff',
                   '15_extra_paranoia_for_gconf.diff.patch',
                   '17_composited_fade.patch',
                   '18_g_markup_escape_text_for_command.patch',
                   '20_better_usleep.patch',
                   '21_composited_rgba_addition.patch',
                   '22_increase_gksu_helper_buf.patch']:
            r.addPatch('http://patches.ubuntu.com/libg/libgksu/extracted/' + p)

        r.Configure('--disable-gtk-doc')
        r.Make()
        r.MakeInstall()
