class Libgksu(CPackageRecipe):

    buildRequires = [ 'GConf:devel', 
                'GConf:runtime', 
                'ORBit2:devel',
                'atk:devel', 
                'cairo:devel', 
                'desktop-file-utils:runtime', 
                'intltool:runtime',
                'fontconfig:devel', 
                'freetype:devel', 
                'gettext:runtime',
                'glib:devel', 
                'gnome-keyring:devel', 
                'gtk:devel', 
                'libX11:devel',
                'libXrender:devel', 
                'libglade:devel', 
                'libgtop:devel', 
                'GConf:config', 
                'expat:devel',
                'libpng:devel', 
                'libxml2:devel', 
                'pango:devel', 
                'perl:runtime',
                'pkgconfig:devel', 
                'startup-notification:devel', 
                'zlib:devel', 
                'libgnome-keyring:devel' ]

    name = 'libgksu'
    version = '2.0.12'

    def setup(r):
        r.addArchive('http://people.debian.org/~kov/gksu/')

        r.Configure('--disable-gtk-doc')
        r.Make()
        r.MakeInstall()
