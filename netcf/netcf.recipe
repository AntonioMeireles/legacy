class NetCF(AutoPackageRecipe):
    buildRequires = [ 'augeas:devel', 'libgcrypt:devel', 'libgpg-error:devel', 'libnl:devel', 'libxml2:devel', 'libxslt:devel', 'pkgconfig:devel', 'readline:devel', 'zlib:devel' ]

    name = 'netcf'
    version = '0.1.7'
    

    def unpack(r):
        r.addArchive('http://fedorahosted.org/released/%(name)s/')

    def configure(r):
        r.Configure('--disable-static')


    def policy(r):
        r.Requires('augeas:runtime', '%(name)s:runtime')
