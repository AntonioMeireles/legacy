class bulldozer(PackageRecipe):

        buildRequires = [ 'gcc:devel', 'glibc:devel', 'gtk:devel', 'glib:devel',
		'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
		'fontconfig:devel', 'freetype:devel', 'gnome-vfs:devel',
		'libbonobo:devel', 'libpng:devel', 'libxml2:devel',
		'nautilus:devel', 'pango:devel', 'xorg-x11:devel', 'zlib:devel' ]

        name = "bulldozer"
        version = "0.2.3"
        
        def setup(r):
                r.addArchive('http://taschenorakel.de/svn/repos/bulldozer/releases/%(name)s-%(version)s.tar.bz2')
		r.Replace('\/usr\/local','%(prefix)s','Makefile')
                r.Make()
                r.MakeInstall()
