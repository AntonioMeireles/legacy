class NpapiVlc(AutoPackageRecipe):
    name = 'npapi-vlc'
    version = '2.0.6'
 
    buildRequires = [
        'atk:devel', 
        'cairo:devel', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gdk-pixbuf:devel', 
        'glib:devel', 
        'gtk:devel', 
        'libICE:devel', 
        'libX11:devel', 
        'libstdc++:devel', 
        'libxcb:devel', 
        'pango:devel', 
        'pkgconfig:devel', 
        'vlc:devel', 
        'xulrunner:devel',
            ]
 
    def unpack(r):
        r.addArchive('http://download.videolan.org/pub/videolan/vlc/%(version)s/')

        r.Requires('vlc:runtime', 'npapi-vlc:lib')
