class PythonTwisted(PackageRecipe):

    name = "python-twisted"
    version = "2.0.1"

    buildRequires = [ 'glibc:devel', 'python:runtime', 'python-zopeinterface:python' ]

    def setup(r):
        r.macros.namesim = r.name.split('-')[1]
        r.macros.namecap = r.macros.namesim[0].upper() + r.macros.namesim[1:]
        r.macros.majver = '.'.join(r.version.split('.')[0:2])
        r.macros.baseurl = 'http://tmrc.mit.edu/mirror/%(namesim)s/%(namecap)s/%(majver)s'
        r.addArchive('%(baseurl)s/%(namecap)s-%(version)s.tar.bz2')

        r.Run('python setup.py install --prefix=%(destdir)s/%(prefix)s')
