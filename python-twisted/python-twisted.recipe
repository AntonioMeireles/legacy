loadSuperClass('python-twisted-package.recipe')
class PythonTwsted(PythonTwistedPackage):

    name = 'python-twisted'
    version = '2.4.0'

    clearBuildReqs('python-twisted:python')
    buildRequires = [
        'elfutils:runtime', 'gcc:devel', 'gcc:runtime', 'python:devel'
    ]

    mans = [ '1' ]

    docs = [
        'benchmarks', 'examples', 'fun', 'howto', 'img',
        'specifications', 'upgrades', 'vision', 'index.html'
    ]

    skipDeps = [
        '(py)?gtk', '[Tt]k.*', 'gnome', 'gobject', 'MySQLdb', 'qt', 'wxPython'
    ]

    def init(r):

        r.macros.shortName = 'Twisted'
        r.macros.Name = 'TwistedCore'

        PythonTwistedPackage.init(r)

