loadRecipe('gnomepackage.recipe')
class LibgailGnome(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'atk:devel', 'libgnomeui:devel',
                           'at-spi:devel', 'gnome-panel:devel' ])

    name = 'libgail-gnome'
    version = '1.1.3'

    def install(r):
        GnomePackageRecipe.install(r)
        r.ComponentSpec('runtime',
                        '%(libdir)s/gtk/2.0/.*')
