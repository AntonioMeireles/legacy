loadRecipe('gnomepackage.recipe')
class LibgailGnome(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'atk:devel', 'libgnomeui:devel',
	'at-spi:devel', 'gnome-panel:devel', 'GConf:devel',	
	'ORBit2:devel', 'cairo:devel', 'fontconfig:devel',
	'freetype:devel', 'glib:devel', 'gnome-keyring:devel',
	'gnome-vfs:devel', 'libart_lgpl:devel', 'libbonobo:devel',
	'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel',
	'libpng:devel', 'libxml2:devel', 'pango:devel', 'popt:devel' ])

    name = 'libgail-gnome'
    version = '1.20.0'

    def install(r):
        GnomePackageRecipe.install(r)
        r.ComponentSpec('runtime',
                        '%(libdir)s/gtk/2.0/.*')
