class MyPaint(CPackageRecipe):
	name = 'mypaint'
	version = '1.0.0'

        buildRequires = [
            'desktop-file-utils:runtime', 
            'glib:devel', 
            'libpng:devel', 
            'libstdc++:devel', 
            'numpy:python', 
            'psyco:python', 
            'pycairo:python', 
            'pygobject:python', 
            'pygtk:python', 
            'python-simplejson:python', 
            'python:devel',
            ]


	def setup(r):
            r.addArchive('http://download.gna.org/mypaint/')
            r.Run(''' sed -i 's|PathOption|PathVariable|g' SConstruct ''')
            r.Run(''' sed -i 's|Options|Variables|g' SConstruct ''')
            r.Run(''' sed -i 's|lib/mypaint|%(libdir)s/mypaint|g' SConstruct mypaint.py ''')
            r.Run(''' sed -i 's|mypaint_48|mypaint|g' desktop/%(name)s.desktop ''')
            r.Make('prefix=%(prefix)s', makeName='scons')
            r.Make('prefix=%(destdir)s install', makeName='scons')
