class GtkSourceViewSharp(PackageRecipe):
    buildRequires = [ 'mono:runtime', 'gtksourceview:devel',
        'gtk-sharp:lib', 'mono:lib', 'gawk:runtime',
        'gtk-sharp:runtime', 'pkgconfig:devel' ]

    name = "gtksourceview-sharp"
    majversion = "2.0"
    version = "0.10"
    
    def setup(r):
        r.macros.majversion = r.majversion
        r.addArchive('http://go-mono.com/sources/%(name)s-%(majversion)s/%(name)s-%(majversion)s-%(version)s.tar.gz')
        r.mainDir('%(name)s-%(majversion)s-%(version)s')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.Remove('%(datadir)s/gtksourceview-1.0/language-specs/nemerle.lang')
        r.Remove('%(datadir)s/gtksourceview-1.0/language-specs/vbnet.lang')

