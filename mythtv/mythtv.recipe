
class MythTV(CPackageRecipe):
    name = 'mythtv'
    version = '0.22'

    packageSummary = 'MythTV is a Free Open Source software digital video recorder '
    packageDescription = "MythTV is a Free Open Source software digital video recorder (DVR) project distributed under the terms of the GNU GPL. It has been under heavy development since 2002, and now contains most features one would expect from a good DVR (and many new ones that you soon won't be able to live without)."

    buildRequires = [ 'DirectFB:devel', 'DirectFB:lib-core', 'Mesa:devel', 'MySQL-python:python', 'alsa-lib:devel', 'bzip2:devel', 'chkconfig:runtime', 'desktop-file-utils:runtime', 'faac:devel', 'faad2:devel', 'fftw:devel', 'freetype:devel', 'jack:devel', 'lame:devel', 'libX11:devel', 'libXext:devel', 'libXinerama:devel', 'libXrandr:devel', 'libXv:devel', 'libXvMC:devel', 'libXxf86vm:devel', 'libogg:devel', 'libstdc++:devel', 'libtheora:devel', 'libvorbis:devel', 'perl-DBD-MySQL:perl', 'perl-DBD-Pg:perl', 'perl-DBD-SQLite:perl', 'perl-DBI:perl', 'perl-HTTP-Cookies:perl', 'perl-URI:perl', 'perl:devel', 'pkgconfig:devel', 'pulseaudio:devel', 'python:devel', 'qt4-core:devellib', 'qt4-gui:devellib', 'qt4-qt3support:devellib', 'qt4-sql:devellib', 'qt4:devel', 'which:runtime', 'xvidcore:devel', 'zlib:devel' ]

    def setup(r):
	r.addSvnSnapshot('http://svn.mythtv.org/svn/branches/release-0-22-fixes/mythtv/')
	r.addSource('mythfrontend.desktop')
	r.addSource('mythfrontend.png', dest='%(datadir)s/pixmaps/')
	r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
        r.Environment('$QTDIR', '%(includedir)s/qt4')

        r.macros.kver = os.uname()[2]
        r.macros.extraconfig = '--prefix=%(prefix)s --libdir=%(libdir)s --enable-dvb --enable-xvmc --enable-iptv --enable-pthreads --disable-distcc --disable-vdpau --qmake=qmake-qt4 --enable-ffmpeg-pthreads --enable-joystick-menu --enable-audio-arts --enable-audio-alsa --enable-audio-oss --enable-audio-jack --enable-libfftw3 --enable-x11 --enable-xv --enable-xvmc-vld --enable-xvmc-pro --enable-opengl-video --enable-opengl-vsync --enable-xrandr --enable-lirc --enable-ivtv --enable-firewire --enable-libfaac --enable-nonfree --enable-libfaad --enable-libfaadbin --enable-libmp3lame --enable-libtheora --enable-libvorbis --enable-libxvid --enable-directfb --enable-libfftw3'

	##vdpau won't work
	#r.Replace('vdpau/vdpau.h', '%(includedir)s/nvidia/vdpau/vdpau.h', 'configure', lines=3023)
	#r.Replace('vdpau/vdpau_x11.h', '%(includedir)s/nvidia/vdpau/vdpau_x11.h', 'configure', lines=3024)
        #r.Replace('vdpau/vdpau.h', '%(includedir)s/nvidia/vdpau/vdpau.h', 'libs/libmythui/mythpainter_vdpau.cpp', lines=23)
        #r.Replace('vdpau/vdpau_x11.h', '%(includedir)s/nvidia/vdpau/vdpau_x11.h', 'libs/libmythui/mythpainter_vdpau.cpp', lines=24)


	r.ManualConfigure('%(extraconfig)s')
        r.Make()
        r.MakeInstall(rootVar='INSTALL_ROOT')

	r.addSource('mythbackend', dest='%(initdir)s/mythbackend', mode=0755)
	r.addSource('mythbackend.log', dest='%(sysconfdir)s/sysconfig/mythbackend')

        r.Doc('docs')
        r.Doc('database/mc.sql')
        
        r.Requires('wget:runtime', '%(bindir)s/.*')
        r.Requires('mysql-server:runtime', '%(bindir)s/mythbackend')
        r.Requires('qt4:runtime', '%(bindir)s/mythfrontend')
        
	r.Desktopfile('mythfrontend.desktop')

        for file in '%(initdir)s/mythbackend', '%(sysconfdir)s/sysconfig/mythbackend', '%(bindir)s/mythbackend':
            r.PackageSpec('mythtv-backend', file)

	for file in '%(datadir)s/i18n/mythfrontend_*', '%(bindir)s/mythfrontend', '%(datadir)s/pixmaps/mythfrontend.png', '%(datadir)s/applications/mythfrontend.desktop':
		r.PackageSpec('mythtv-frontend', file)

