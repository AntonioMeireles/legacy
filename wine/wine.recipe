class Wine(PackageRecipe):
    name = 'wine'
    version = '20050419'

    buildRequires = [ ]
    
    def setup(r):
	r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/wine/Wine-%(version)s.tar.gz')

# This is a patch to add directx 9 capabilities to wine

        r.addPatch('http://heanet.dl.sourceforge.net/sourceforge/directxwine/d3d9patch.2005-04-28-2.diff.bz2',level=2) 

        r.Configure('--sysconfdir=%(sysconfdir)s/wine')
        r.Make()
        r.MakePathsInstall('includedir=%(destdir)s%(includedir)s/wine '
                           'sysconfdir=%(destdir)s%(sysconfdir)s/wine '
                           'dlldir=%(destdir)s%(libdir)s/wine '
                           'LDCONFIG=/bin/true UPDATE_DESKTOP_DATABASE=/bin/true')
