class Wine(CPackageRecipe):
    name = 'wine'
    version = '0.9'

    buildRequires = [ 'arts:devel', 'esound:devel', 'flex:runtime', 
		'freetype:devel', 'glib:devel', 'pkgconfig:devel', 
		'libieee1284:devel', 'libjpeg:devel', 'libusb:devel', 
		'libxml2:devel', 'ncurses:devel', 'openldap:devel', 
		'sane-backends:devel', 'xorg-x11:devel', 'zlib:devel', 
		'alsa-lib:devel', 'audiofile:devel', 'lcms:devel',
		'libxslt:devel' ]
    
    def setup(r):
        r.addArchive('http://ibiblio.org/pub/linux/system/emulators/wine/%(name)s-%(version)s.tar.bz2')

        r.Configure('--sysconfdir=%(sysconfdir)s/wine')
        r.Make()
        r.MakePathsInstall('includedir=%(destdir)s%(includedir)s/wine '
                           'sysconfdir=%(destdir)s%(sysconfdir)s/wine '
                           'dlldir=%(destdir)s%(libdir)s/wine '
                           'LDCONFIG=/bin/true UPDATE_DESKTOP_DATABASE=/bin/true')
