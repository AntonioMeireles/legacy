class GroupMono(GroupRecipe):
    name = 'group-mono'
    version = '0.0.1'

    autoResolve = True

    def setup(r):
        r.setLabelPath('foresight.rpath.org@fl:desktop', 'conary.rpath.com@rpl:1', 'foresight.rpath.org@fl:1-contrib')
        if Arch.x86_64:
            r.add('group-core', 'conary.rpath.com@rpl:1', 'is:x86(i486,i586,i686) x86_64', groupName = 'group-mono')
        else:
            r.add('group-core', 'conary.rpath.com@rpl:1', '', groupName = 'group-mono')
        r.add('monodevelop', 'foresight.rpath.org@fl:1-contrib', '', groupName = 'group-mono')
