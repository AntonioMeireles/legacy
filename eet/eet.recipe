class eet(AutoPackageRecipe):
    name = 'eet'
    version = "1.6.0"

    buildRequires = [
        'libjpeg:devel', 
        'zlib:devel', 
        'eina:devel', 
        'gnutls:devel', 
        'libgcrypt:devel', 
        'libgpg-error:devel', 
        'openssl:devel', 
        'pkgconfig:devel', 
        'automake:runtime', 
        'autoconf:runtime', 
        'libtool:runtime',
        'doxygen:runtime',
            ]
    def unpack(r):
        r.addArchive("http://download.enlightenment.org/releases/eet-%(version)s.tar.gz")
