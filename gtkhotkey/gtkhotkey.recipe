class Gtkhotkey(AutoPackageRecipe):
    name = 'gtkhotkey'
    version = '0.2.1'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'gdk-pixbuf:devel', 'gettext:runtime', 'glib:devel', 'gtk-doc:runtime', 'gtk:devel', 'intltool:runtime', 'libpng:devel', 'pango:devel', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/gtkhotkey/%(major_version)s/%(version)s/+download/')
