class Handbrake(CPackageRecipe):
    name = 'handbrake'
    version = '0.9.3'
 
    buildRequires = ['SDL:devel', 'dmalloc:devel', 'gettext:runtime', 'intltool:runtime', 'libsndfile:devel', 'libtermcap:devel', 'nasm:runtime', 'yasm:runtime', 'ncurses:devel', 'pkgconfig:devel', 'subversion:runtime', 'sysfsutils:devel', 'tetex:runtime', 'zlib:devel', 'jam:runtime', 'wget:runtime', 'doxygen:runtime', 'desktop-file-utils:runtime', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'bzip2:devel', 'cairo:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'enchant:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel', 'gtkhtml:devel', 'hal:devel', 'intltool:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'libstdc++:devel', 'libxcb:devel', 'libxml2:devel', 'pango:devel', 'pixman:devel', 'popt:devel', 'xcb-util:devel', 'pkgconfig:devel', 'automake:runtime', 'autoconf:runtime', 'libtool:runtime', 'texinfo:runtime']
 
    def setup(r):
        r.addArchive('http://download.handbrake.fr/handbrake/releases/HandBrake-%(version)s.tar.gz')
	r.Make()
	r.Configure(configureName='autogen.sh', dir='gtk')
	r.Make(dir='gtk')
	r.MakeInstall(dir='gtk')
	r.Remove('/usr/share/icons/hicolor/icon-theme.cache')
