#!/bin/bash

if [ $# -lt 2 ]; then
    echo "not enough arguments: $0 $*" >&2
    exit 1
fi

type="$1"
shift
action="$1"
shift

case $type in
    files)
        case $action in
	    update)
		/usr/bin/mozilla-plugin-config -i -f
		;;
	    remove)
		/usr/bin/mozilla-plugin-config -r
		;;
    esac
esac

exit 0
