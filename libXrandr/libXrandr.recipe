loadSuperClass('xorgpackage.recipe')
class LibXrandr(XorgPackageRecipe):
    name = 'libXrandr'
    version = '1.2.0'
    component = 'lib'

    buildRequires = [ 'libXext:devel', 'libXrender:devel', 'randrproto:devel',
        'renderproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('randrproto:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xrandr.pc')
