class PythonVobject(PackageRecipe):

    name = 'python-vobject'
    version = '0.8.1c'

    buildRequires = [
        'python-cssutils:python',
        'python-dateutil:python',
        'python:devel',
        'python-setuptools:python',
        ]

    def setup(r):
        r.macros.archive_name = 'vobject'
        r.addArchive('http://vobject.skyhouseconsulting.com/')
        r.PythonSetup()

