class DoPlugins(AutoPackageRecipe):
    name = 'do-plugins'
    version = '0.4.0'
    buildRequires = [ 'gnome-common:runtime', 'gnome-common:devel', 'autoconf:runtime', 'automake:runtime', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'm4:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'ndesk-dbus-glib:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus:devellib', 'ndesk-dbus:cil', 'pkgconfig:devel', 'gettext:runtime', 'intltool:runtime', 'evolution-sharp:cil', 'evolution-sharp:devellib', 'gnome-do:devellib' ]

    def unpack(r):
        r.addArchive('http://launchpad.net/do/trunk/0.4/+download/')

    def configure(r):
        r.Configure('--libdir=/usr/lib')
