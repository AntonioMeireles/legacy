class DoPlugins(AutoPackageRecipe):
    name = 'do-plugins'
    version = '0.8.0'
    buildRequires = [ 'gnome-common:runtime', 'gnome-common:devel', 'autoconf:runtime', 'automake:runtime', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'm4:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'ndesk-dbus-glib:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus:devellib', 'ndesk-dbus:cil', 'pkgconfig:devel', 'gettext:runtime', 'gettext:devel', 'intltool:runtime', 'evolution-sharp:cil', 'evolution-sharp:devellib', 'gnome-do:devellib', 'banshee:devellib', 'monodevelop:runtime', 'gnome-desktop-sharp:cil', 'gnome-desktop-sharp:devellib', 'gnome-keyring-sharp:devellib', 'gnome-keyring-sharp:cil', 'notify-sharp:devellib', 'notify-sharp:cil' ]

    extraConfigure = ' --enable-release'

    def unpack(r):
        r.addArchive('http://edge.launchpad.net/do-plugins/trunk/0.8.0/+download/gnome-do-plugins-%(version)s.tar.gz')
        # remove the flickr plugin until we have a proper flickrnet package
        r.addPatch('disable-flickr.patch')
        r.Run('autoreconf')
