class DoPlugins(AutoPackageRecipe):
    name = 'do-plugins'
    version = '0.8.2'
    buildRequires = [ 'gnome-common:runtime', 'gnome-common:devel', 'autoconf:runtime', 'automake:runtime', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'm4:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'ndesk-dbus-glib:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus:devellib', 'ndesk-dbus:cil', 'pkgconfig:devel', 'gettext:runtime', 'gettext:devel', 'intltool:runtime', 'evolution-sharp:cil', 'evolution-sharp:devellib', 'gnome-do:lib', 'gnome-do:devellib', 'banshee:devellib', 'monodevelop:runtime', 'gnome-desktop-sharp:cil', 'gnome-desktop-sharp:devellib', 'gnome-keyring-sharp:devellib', 'gnome-keyring-sharp:cil', 'notify-sharp:devellib', 'notify-sharp:cil', 'mono-addins:cil', 'mono-addins:devellib' , 'mono-addins:runtime']

    def unpack(r):
        r.addArchive('http://edge.launchpad.net/do-plugins/0.8/%(version)s/+download/gnome-do-plugins-%(version)s.tar.gz')
        # FL: Our gnome-keyring-sharp is already -1.0 /ermo
	# r.Replace('gnome-keyring-sharp-1.0','gnome-keyring-sharp','configure')
        r.Replace('/usr/lib/banshee-1/', '%(libdir)s/banshee-1', 'Banshee/Resources/Banshee.addin.xml')

    def configure(r):
        r.disableParallelMake()
        r.Configure('--enable-debug=no --enable-release=yes  --enable-evolution --enable-youtube --enable-banshee')
