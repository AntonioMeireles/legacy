class AudaciousPlugins(AutoPackageRecipe):
    name = 'audacious-plugins'
    version = '2.3.0'

    packageSummary = 'Plugins for Audacious audio player'
    packageDescription = 'Audacious is an advanced audio player. It is free, lightweight, based on GTK2, runs on Linux and many other *nix platforms and is focused on audio quality and supporting a wide range of audio codecs. Its advanced audio playback engine is considerably more powerful than GStreamer. Audacious is a fork of Beep Media Player (BMP), which itself forked from XMMS.'
 
    buildRequires = ['SDL:devel', 'alsa-lib:devel', 'atk:devel', 'audacious:devel', 'cairo:devel', 'curl:devel', 'dbus-glib:devel', 'dbus:devel', 'esound:devel', 'flac:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'jack:devel', 'lame:devel', 'fluidsynth:devel', 'libmad:devel', 'libX11:devel', 'libXcomposite:devel', 'libXfixes:devel', 'libXrender:devel', 'libmms:devel', 'libmowgli:devel', 'libogg:devel', 'libsamplerate:devel', 'libshout:devel', 'libsndfile:devel', 'libstdc++:devel', 'libtheora:devel', 'libvorbis:devel', 'libxml2:devel', 'neon:devel', 'openssl:devel', 'pango:devel', 'pkgconfig:devel', 'pulseaudio:devel', 'python:bin', 'speex:devel', 'zlib:devel','faad2:devel', 'libcue:devel']
 
    def setup(r):
	r.macros.majversion = '.'.join(r.version.split('.')[:2])
        r.addArchive('http://distfiles.atheme.org/%(name)s-%(majversion)s.tgz')
	r.Configure('--disable-dependency-tracking --enable-dbus --enable-ipv6 --enable-chardet --enable-mp3 --disable-projectm --disable-projectm-1.0')
	r.Make()
	r.MakeInstall()
