class AlsaLib(CPackageRecipe):
    name = 'alsa-lib'
    version = '1.0.14rc4'

    buildRequires = [ ] #required for buildRequires.append
    if Use.builddocs:
        buildRequires.append('doxygen:runtime')

    def setup(r):
        r.addArchive('ftp://ftp.alsa-project.org/pub/lib/')


        r.Configure()
        r.Make()
        if Use.builddocs:
            r.Make('doc')
        r.MakeInstall()

        r.AutoDoc('doc/asoundrc.txt')
        if Use.builddocs:
            r.Doc('doc/doxygen/*')
