class Gc(CPackageRecipe):
    name = 'gc'
    version = '6.7'
    buildRequires = [ 'libtool:runtime' ]

    def setup(r):
        r.addArchive('http://www.hpl.hp.com/personal/Hans_Boehm/gc/gc_source/gc%(version)s.tar.gz')
        r.Configure()
        r.Make('LIBTOOL=%(bindir)s/libtool')
        r.MakeInstall('LIBTOOL=%(bindir)s/libtool')
