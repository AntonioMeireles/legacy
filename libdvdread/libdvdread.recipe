class libDVDRead(AutoPackageRecipe):

    name = 'libdvdread'
    version = '4.1.4+svn1188'

    buildRequires = [
        'autoconf:runtime', 'automake:runtime', 'doxygen:runtime',
        'libtool:runtime'
    ]

    def setup(r):
        r.addSvnSnapshot('svn://svn.mplayerhq.hu/dvdnav/trunk/libdvdread', revision= '1188' )
        r.Configure(' --disable-opts '
                    ' --disable-static '
                    ' --disable-strip '
                    ' --extra-cflags="%(optflags)s" '
                    ' --shlibdir=%(libdir)s', configureName='configure2')
        r.Make()
        r.MakeInstall()
