class libDVDRead(AutoPackageRecipe):

    name = 'libdvdread'
    version = '4.1.3'

    buildRequires = [
        'autoconf:runtime', 'automake:runtime', 'doxygen:runtime',
        'libtool:runtime'
    ]

    def setup(r):
        r.addArchive('http://www1.mplayerhq.hu/MPlayer/releases/dvdnav/')
        r.Configure(configureName='./autogen.sh')
        r.Make()
        r.MakeInstall()
