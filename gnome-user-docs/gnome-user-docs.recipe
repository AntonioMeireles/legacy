loadSuperClass('gnomepackage')

class GnomeUserDocs(GnomePackageRecipe):
    name = 'gnome-user-docs'
    version = '2.20.0'

    buildRequires = ['scrollkeeper:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime',
        'gettext:runtime', 'which:runtime' ]

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'
