class mousepad(AutoPackageRecipe):

    name = 'mousepad'
    version = '0.3_git+ad1cf1f'

    buildRequires = [
        'desktop-file-utils:runtime', 'libxfce4util:devel', 
        'dbus-glib:runtime', 'dbus-glib:devel', 'dbus:devel', 'libexo:runtime',
        'gettext:runtime', 'libtool:runtime', 'xfce4-dev-tools:runtime',
        'automake:runtime', 'autoconf:runtime', 'gtksourceview:devel',
        'intltool:runtime', 'intltool:devel', 'pkgconfig:devel'
    ]
    def unpack(r):
        r.macros.tag=r.version[-7:]
        r.addArchive('http://git.xfce.org/apps/%(name)s/snapshot/'
                     '%(name)s-%(tag)s.tar.bz2')

    def configure(r):
        r.Configure(' --enable-maintainer-mode', configureName='./autogen.sh')
