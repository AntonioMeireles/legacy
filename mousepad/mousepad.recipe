class mousepad(AutoPackageRecipe):

    name = 'mousepad'
    version = '0.3_git+c5ac3ce'

    buildRequires = [
        'desktop-file-utils:runtime', 'libxfce4util:devel', 'libxfcegui4:devel',
        'dbus-glib:devel', 'dbus:devel', 'gettext:runtime',
        'xfce4-dev-tools:runtime', 'automake:runtime', 'autoconf:runtime',
        'gtksourceview:devel', 'intltool:runtime', 'pkgconfig:devel'
    ]
    def unpack(r):
        r.macros.tag=r.version[-7:]
        r.addGitSnapshot('https://github.com/codebrainz/mousepad.git',
                          tag='%(tag)s', branch='gtksourceview')

    def configure(r):
        r.Configure(' --enable-maintainer-mode', configureName='./autogen.sh')
