class BansheeOfficialPlugins(AutoPackageRecipe):

    buildRequires = [ 'banshee:lib', 'gettext:runtime', 'gnome-sharp:lib',
        'gtk-sharp:lib', 'mono:lib', 'perl:runtime', 'pkgconfig:devel' ]

    name = 'banshee-official-plugins'
    version = '0.11.0'

    def unpack(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')

    def policy(r):
        r.Environment('MONO_PATH', '%(libdir)s/banshee')
