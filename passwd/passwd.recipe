loadSuperClass('rpmpackage')
class Passwd(RPMPackageRecipe, AutoPackageRecipe):
    name = 'passwd'
    version = '0.74'
    rpmRelease = '5.fc8'
    buildRequires = [ 'glib:devel', 'libuser:devel', 'pam:devel', 'popt:devel',
        'pkgconfig:devel', 'audit:devel', 'gettext:runtime', 'intltool:runtime']

    def policy(r):
        r.Install('passwd.pamd',
                     '%(sysconfdir)s/pam.d/passwd', mode=0644)

        r.SetModes('%(bindir)s/passwd', 04555)

        # gnome-keyring hooks. 
        r.Replace('password   include\tsystem-auth', 'password   include\tsystem-auth\npassword        optional        pam_gnome_keyring.so', '%(sysconfdir)s/pam.d/passwd')
