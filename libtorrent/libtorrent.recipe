class libTorrent(AutoPackageRecipe):

    name = 'libtorrent'
    version = '0.13.2'

    buildRequires = [
        'cppunit:devel',
        'libsigc++:devel', 
        'libstdc++:devel', 
        'openssl:devel', 
        'pkgconfig:devel', 
    ]

    def unpack(r):

        r.addArchive('http://libtorrent.rakshasa.no/downloads/')

