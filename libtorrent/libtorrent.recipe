class libTorrent(AutoPackageRecipe):

    name = 'libtorrent'
    version = '0.11.1'

    buildRequires = [
        'libsigc++:devel', 'libstdc++:devel', 'openssl:devel', 'pkgconfig:devel'
    ]

    def unpack(r):

        r.addArchive('http://libtorrent.rakshasa.no/downloads/')

