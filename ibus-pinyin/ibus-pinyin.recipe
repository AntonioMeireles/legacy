loadSuperClass('gnomepackage')
class IbusPinyin(GnomePackageRecipe):

    name = 'ibus-pinyin'
    version = '1.2.0.20090617'

    # wget is needed since it needs to download the pinyin datatbase
    buildRequires = [
        'ibus:python',
        'pygobject:python',
        'pygtk:python',
        'python:devel',
        'wget:runtime']

    externalArchive = 'http://ibus.googlecode.com/files/'
