loadSuperClass('rpmpackage')
class Kerneloops(RPMPackageRecipe,CPackageRecipe):
    name = 'kerneloops'
    version = '0.12'
    rpmRelease = '6.fc12'
    rpmPatches = [ 'kerneloops-0.12-dbus-service-activate.patch',
                   'kerneloops-0.12-log_result_url.patch']
    rpmSources = [ 'kerneloops.service']

    buildRequires = [ 'curl:devel', 'chkconfig:runtime', 'dbus-glib:devel', 'dbus:devel',
                      'desktop-file-utils:runtime', 'glib:devel', 'gtk:devel',
                      'libnotify:devel', 'pkgconfig:devel', 'expat:devel', 'openssl:devel' ]

    def setup(r):
        RPMPackageRecipe.unpack(r)
        r.addPatch('0.12-libnotify-0.7.patch')
        r.addPatch('0.12-FLAGS.patch')
        
        r.Make()
        r.MakeInstall()
        r.Install('kerneloops.service', '%(datadir)s/dbus-1/system-services/org.kerneloops.submit.service', mode = 0644)
        r.TagSpec('desktop-file', '%(sysconfdir)s/xdg/autostart/kerneloops-applet.desktop')
