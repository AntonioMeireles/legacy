class Libksba(AutoPackageRecipe):
    name = 'libksba'
    version = '1.0.2'
    buildRequires = [ 'libgpg-error:devel', 'install-info:runtime' ]

    def unpack(r):
        r.addArchive('ftp://ftp.gnupg.org/gcrypt/libksba/', keyid='1CE0C630')
