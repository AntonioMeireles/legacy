class GsfSharp(CPackageRecipe):

    buildRequires = [ 'glib:devel', 'glibc:devel', 'libgsf:devel',
        'libxml2:devel', 'GConf:devel', 'ORBit2:devel',
        'gnome-vfs:devel', 'gtk-sharp:lib', 'libbonobo:devel', 'mono:lib',
        'zlib:devel', 'binutils:runtime', 'gawk:runtime', 'gtk-sharp:runtime',
        'mono:runtime', 'pkgconfig:devel' ]

    name = 'gsf-sharp'
    version = '0.5'
    def setup(r):
        r.addArchive('http://primates.ximian.com/~joe/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.Remove('%(libdir)s/mono/*/*.mdb')
        r.Remove('%(libdir)s/mono/*/*.config')

