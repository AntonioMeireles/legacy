class GsfSharp(PackageRecipe):

    buildRequires = [ 'gtk-sharp:devellib', 'mono:devel', 
			'gtksourceview:devel' ]

    name = 'gsf-sharp'
    version = '0.3'
    def setup(r):
        srpm='http://www.mirrors.net.ar/pub/suse/i386/supplementary/GNOME/update_for_9.3/source/gsf-sharp-0.3-4.src.rpm'
	r.addArchive('%(name)s-%(version)s.tar.bz2', rpm=srpm)
        r.Configure()
        r.Make()
        r.MakeInstall()
