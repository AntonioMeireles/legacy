class GsfSharp(AutoPackageRecipe):
    name = 'gsf-sharp'
    version = '0.5'

    buildRequires = [ 'glib:devel', 'libgsf:devel', 'libxml2:devel',
        'GConf:devel', 'ORBit2:devel', 'gnome-vfs:devel', 'gtk-sharp:lib',
        'libbonobo:devel', 'mono:lib', 'zlib:devel', 'gawk:runtime',
        'gtk-sharp:runtime', 'mono:runtime', 'pkgconfig:devel', ]

    def unpack(r):
        r.addArchive('http://primates.ximian.com/~joe/%(name)s-%(version)s.tar.gz')

    def policy(r):
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.Remove('%(libdir)s/mono/*/*.mdb')
        r.Remove('%(libdir)s/mono/*/*.config')

