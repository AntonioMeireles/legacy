class Pidgintlen(CPackageRecipe):
    name = 'pidgin-tlen'
    version = '20080602'
 
    buildRequires = ['pidgin:devel', 'pkgconfig:devel']
 
    def setup(r):
        r.addArchive('http://nic.com.pl/~alek/pidgin-tlen/'
                     '%(name)s-%(version)s.tar.gz')
	r.Make()	
	r.Move('libtlen.so', '/usr/lib/pidgin/')
	r.Move('tlen_16.png', '/usr/share/pixmaps/pidgin/protocols/16/tlen.png')
	r.Move('tlen_22.png', '/usr/share/pixmaps/pidgin/protocols/22/tlen.png')
	r.Move('tlen_48.png', '/usr/share/pixmaps/pidgin/protocols/48/tlen.png')

