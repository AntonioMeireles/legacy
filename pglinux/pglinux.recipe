class pglinux(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "pglinux"
    version = "1.5beta"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/peerguardian/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'NEWS',
              'README')
