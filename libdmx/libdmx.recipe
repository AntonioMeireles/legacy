loadSuperClass('xorgpackage.recipe')
class Libdmx(XorgPackageRecipe):
    name = 'libdmx'
    version = '1.0.2'
    component = 'lib'

    buildRequires = [ 'dmxproto:devel', 'libXext:devel', 'xextproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        r.Requires('dmxproto:devel', '%(libdir)s/pkgconfig/dmx.pc')
