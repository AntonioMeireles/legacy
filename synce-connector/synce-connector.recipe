class SynCEConnector(CPackageRecipe):
    name = 'synce-connector'
    version = '0.15.2'
    buildRequires =  ['dbus-glib:devel', 'dbus-python:python', 'dbus:devel',
        'glib:devel', 'gnet:devel', 'hal:devel', 'libsynce:devel',
        'net-tools:runtime', 'pkgconfig:devel', 'ppp:runtime', 'python:devel',
        'dhclient:runtime' ]
    def setup(r):
        r.addArchive('mirror://sourceforge/synce/SynCE/%(version)s/')
        r.Environment('DHCLIENTPATH', '/sbin/dhclient')
        r.Configure('--disable-udev --with-hal-addon-dir=/usr/libexec/scripts/')
        r.Make()
        r.MakeInstall()
