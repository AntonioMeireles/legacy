class LibgdiPlus(AutoPackageRecipe):
    name = 'libgdiplus'
    version = '1.2.3'
    buildRequires = ['expat:devel', 'freetype:devel', 'glib:devel',
                     'libXrender:devel', 'libexif:devel', 'libjpeg:devel',
                      'pkgconfig:devel', 'zlib:devel']

    def unpack(r):
        r.addArchive('http://www.go-mono.com/sources/%(name)s/%(name)s-%(version)s.tar.gz')

