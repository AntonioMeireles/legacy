class ForesightDocumentation(PackageRecipe):
    name = 'foresight-documentation'
    version = '1.3'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
        r.Install('FAQ.txt','%(docdir)s/%(name)s-%(version)s/')
        r.Install('foresight.html','%(docdir)s/%(name)s-%(version)s/')

