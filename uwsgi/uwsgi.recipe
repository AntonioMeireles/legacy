class Uwsgi(CPackageRecipe):
    name = 'uwsgi'
    version = '0.9.5.1'
 
    buildRequires = ['libxml2:devel', 'python:devel', 'zlib:devel']
 
    def setup(r):
        r.addArchive('http://projects.unbit.it/downloads/')
        r.Make()
        r.Install("uwsgi","%(bindir)s/uwsgi")
