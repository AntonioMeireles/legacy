class Uwsgi(CPackageRecipe):
    name = 'uwsgi'
    version = '0.9.7.2'

    buildRequires = [
        'chkconfig:runtime',
        'libxml2:devel',
        'python:devel',
        'zlib:devel',
      ]

    def setup(r):
        r.macros.version = r.version.replace('_', '-')
        r.addSource('initscript', dest='%(initdir)s/uwsgi', mode=0755)
        r.addArchive('http://projects.unbit.it/downloads/')
        #r.addPatch('werror-is-evil.patch')
        r.Make()
        r.Install('uwsgi', '%(bindir)s/')
