loadSuperClass('gnomepackage')
class Atk(GnomePackageRecipe):
    name = 'atk'
    version = '1.20.0'

    # most gnome packages require gtk to build, which depends on atk.
    # Remove all gnomepackage buildreqs.
    GnomePackageRecipe.buildRequires = []
    buildRequires = [ 'glib:devel', 'glib:runtime', 'gettext:runtime',
                      'perl:runtime', 'pkgconfig:devel', ]

