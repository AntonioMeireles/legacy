class mpgtx(PackageRecipe):

    buildRequires = [ 'glibc:devel', 'libgcc:devellib', 'libstdc++:devel' ]

    name = 'mpgtx'
    version = '1.3.1'
    
    def setup(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.ManualConfigure('--prefix=/usr')
        r.Replace('\$\(PREFIX\)','$(DESTDIR)$(PREFIX)','Makefile')
        r.Make()
        r.MakeInstall()
        r.Move('/usr/man','%(mandir)s')
