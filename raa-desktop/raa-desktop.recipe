class rAABranding(PackageRecipe):

   buildRequires = [ 'desktop-file-utils:runtime' ]

   name = 'raa-desktop'
   version = '1.0'

   def setup(r):
      r.addSource('custom.cfg')
      r.addSource('raa.desktop')
      r.addSource('raa.service')
      r.Install('custom.cfg','%(sysconfdir)s/raa/')
      r.Install('raa.service','%(sysconfdir)s/avahi/services/')
      r.Desktopfile('raa.desktop')
      r.Requires('tango-icon-theme:data', '%(datadir)s/applications/net-raa.desktop')

