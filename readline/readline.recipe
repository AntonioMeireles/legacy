class Readline(AutoPackageRecipe):
    name = 'readline'
    version = '5.2'

    # needs info-file tag description from the install-info package
    buildRequires = [ 'install-info:runtime', 'libtermcap:devel', ]

    def unpack(r):
        r.addArchive('mirror://gnu/readline/')
        r.addArchive('mirror://gnu/readline/readline-doc-5.0.tar.gz')

        r.addPatch('readline-4.1-outdated.patch')
        r.addPatch('readline-4.3-no_rpath.patch')

        # without this, libreadline.so has unresolved symbols
        r.macros.ldflags += ' -ltermcap'

    def make(r):
        r.Make('all shared')

    def policy(r):
        r.Run('rm -f doc/Makefile.in doc/*.orig doc/texi2*')
        r.Doc('doc/*')
