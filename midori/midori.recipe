loadSuperClass('xfcepackage.recipe')
class midori(XfcePackageRecipe):
    name = 'midori'
    version = '0.4.7'
    subtree = 'apps'

    buildRequires = [
        'atk:devel', 
        'cairo:devel', 
        'desktop-file-utils:runtime', 
        'expat:devel', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gettext:runtime',
        'glib:devel',
        'gtk:devel', 
        'gtksourceview:devel', 
        'icu:devel', 
        'intltool:devel', 
        'intltool:runtime', 
        'libidn:devel',
        'libnotify:devel',
        'libpng:devel', 
        'librsvg:runtime',
        'libsoup:devel',
        'libtool:runtime', 
        'libX11:devel', 
        'libxcb:devel', 
        'libxml2:devel', 
        'libXrender:devel', 
        'libXScrnSaver:devel',
        'libxslt:devel', 
        'pango:devel',
        'pixman:devel', 
        'pkgconfig:devel', 
        'sqlite:devel', 
        'unique:devel', 
        'vala:devel', 
        'vala:runtime', 
        'WebKit:devel', 
        'xcb-util:devel',
        'libzeitgeist:devel',
        'zlib:devel', 
    ] 


    def build(r):
        r.Configure(configureName='waf configure')
        r.Make(makeName='./waf')

    def install(r):
        r.Run('./waf --destdir=%(destdir)s install')
