class midori(CPackageRecipe):
    name = 'midori'
    version = '20090312'

    buildRequires = [ 'WebKit:devel', 'atk:devel', 'cairo:devel', 'curl:devel', 'expat:devel', 'fontconfig:devel', 'desktop-file-utils:runtime', 'gettext:runtime', 'intltool:runtime', 'intltool:devel', 'autoconf:runtime', 'automake:runtime', 'freetype:devel', 'glib:devel', 'glitz:devel', 'gtk:devel', 'icu:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libsexy:devel', 'libtool:runtime', 'libxcb:devel', 'libxml2:devel', 'libxslt:devel', 'openssl:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'sqlite:devel', 'xcb-util:devel', 'zlib:devel' ] 
 
    def setup(r):
        r.addGitSnapshot('http://software.twotoasts.de/media/midori.git')

        r.Configure(configureName='./autogen.sh')
        r.Make()
        r.MakeInstall()
