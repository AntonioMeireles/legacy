loadSuperClass('xfcepackage.recipe')
class midori(XfcePackageRecipe):
    name = 'midori'
    version = '0.2.1'
    subtree = 'apps'

    buildRequires = [
        'WebKit:devel', 'atk:devel', 'cairo:devel', 'libsoup:devel',
        'expat:devel', 'unique:devel', 'libnotify:devel',
        'fontconfig:devel', 'desktop-file-utils:runtime', 'gettext:runtime',
        'intltool:runtime', 'intltool:devel', 'autoconf:runtime', 
        'automake:runtime', 'freetype:devel', 'glib:devel', 'glitz:devel', 
        'gtk:devel', 'icu:devel', 'libX11:devel', 'libXrender:devel',
        'libpng:devel', 'libtool:runtime', 'libxcb:devel', 'librsvg:runtime',
        'libxml2:devel', 'libxslt:devel', 'openssl:devel', 'pango:devel',
        'pixman:devel', 'pkgconfig:devel', 'sqlite:devel', 'xcb-util:devel',
        'zlib:devel', 'gtksourceview:devel', 'git:runtime'
    ] 
 
    def build(r):
        r.Run('./waf --prefix=%(prefix)s --libdir=%(libdir)s configure')
        r.Make(makeName='./waf')

    def install(r):
        r.Run('./waf --destdir=%(destdir)s install')
