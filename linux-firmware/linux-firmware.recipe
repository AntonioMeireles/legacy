class LinuxFirmware(PackageRecipe):
    name = 'linux-firmware'
    version = '20100808'

    buildRequires = []

    def setup(r):
        r.addArchive('ftp://ftp.kernel.org/pub/linux/kernel/people/dwmw2/firmware/', dir='/lib/')
        r.Move('/lib/%(name)s-%(version)s', '/lib/firmware')
        r.MakeDirs('/usr/share/doc/%(name)s-%(version)s')
        r.Run('mv %(destdir)s/lib/firmware/{WHENCE,LIC*} %(destdir)s/usr/share/doc/%(name)s-%(version)s')
