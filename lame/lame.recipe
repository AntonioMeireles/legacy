class Lame(AutoPackageRecipe):

    name = 'lame'
    version = '3.98.2'

    buildRequires = [
        'ncurses:devel', 'nasm:runtime', 'dmalloc:devel', 'libtermcap:devel', 'python:bin'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/lame/%(name)s-398-2.tar.gz')

        # Based on Gentoo
        r.addPatch('lame-3.98.2-get_audio.patch')
        r.addPatch('lame-3.98-shared-frontend.patch')
	r.addPatch('lame-3.98-gtk-path.patch')
