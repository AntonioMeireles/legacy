class Lame(AutoPackageRecipe):

    name = 'lame'
    version = '3.98.4'

    buildRequires = [
        'ncurses:devel', 'nasm:runtime', 'dmalloc:devel', 'libtermcap:devel', 'python:bin'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/lame/')
        r.addPatch('lame-pmake.patch')
        r.addPatch('lame-noexecstack.patch')

