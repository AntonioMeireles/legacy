class Lame(AutoPackageRecipe):

    name = 'lame'
    version = '3.99.4'

    buildRequires = [
        'ncurses:devel', 'nasm:runtime', 'dmalloc:devel', 'libtermcap:devel'
    ]

    def unpack(r):

        r.addArchive('http://downloads.sourceforge.net/project/lame/lame/3.99/')
        r.addPatch('lame-noexecstack.patch')

