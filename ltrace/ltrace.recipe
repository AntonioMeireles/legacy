class Ltrace(CPackageRecipe):
    name = 'ltrace'
    version = '0.4'
    buildRequires = [ 'libelf:devel', 'elfutils:devel' ]

    def setup(r):
        r.disableParallelMake()
        r.addArchive('http://ftp.debian.org/debian/pool/main/l/ltrace/%(name)s_%(version)s.orig.tar.gz')
        r.Configure()
        r.Replace('-o root -g root', '', 'Makefile')
        r.Make()
        r.MakeInstall()
        r.Move('/usr/doc/ltrace/*', '%(thisdocdir)s/')
        r.Remove('/usr/doc/', recursive=True)
