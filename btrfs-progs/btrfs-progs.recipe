loadSuperClass('rpmpackage')
class BtrfsProgs(RPMPackageRecipe,CPackageRecipe):
    name = 'btrfs-progs'
    version = '0.19'
    rpmRelease = '12.fc13'
    rpmPatches = [
        'btrfs-progs-fix-labels.patch',
        'btrfs-progs-valgrind.patch',
        'btrfs-progs-fix-return-value.patch',
        'btrfs-progs-upstream.patch',
        'btrfs-progs-build-fixes.patch',
        # 'btrfs-progs-build-everything.patch',

        ]

    buildRequires = [
        'acl:devel',
        'e2fsprogs:devel',
        'util-linux:devel',
        'zlib:devel'
      ]
 
    def setup(r):
        RPMPackageRecipe.unpack(r)
        # same as btrfs-progs-build-everything.patch
        # which for some reason refuses to apply
        r.Replace("""btrfs-map-logical$""", 'btrfs-map-logical btrfstune btrfs-image', 'Makefile')
        r.Replace('-Werror', '', 'Makefile')
        r.Make()
        r.Make('LDFLAGS="-lcom_err" convert')
        r.MakeInstall('prefix=%(prefix)s bindir=%(essentialsbindir)s')
