class BtrfsProgs(CPackageRecipe):
    name = 'btrfs-progs'
    version = '0.19'
 
    buildRequires = [
        'acl:devel',
        'e2fsprogs:devel',
        'util-linux:devel',
        'zlib:devel'
      ]
 
    def setup(r):
        r.addArchive('http://www.kernel.org/pub/linux/kernel/'
                     'people/mason/btrfs/')
        for p in ( 'btrfs-progs-build-everything.patch',
                   'btrfs-progs-fix-labels.patch',
                   'btrfs-progs-valgrind.patch'):
            r.addPatch(p)
        r.Replace('-Wall', '', 'Makefile')
        r.Make()
        r.Make('convert')
        r.MakeInstall('prefix=%(prefix)s bindir=%(essentialsbindir)s')
