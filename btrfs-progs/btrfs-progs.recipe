class BtrfsProgs(CPackageRecipe):
    name = 'btrfs-progs'
    version = '0.16'
 
    buildRequires = [
        'acl:devel',
        'e2fsprogs:devel',
      ]
 
    def setup(r):
        r.addArchive('http://www.kernel.org/pub/linux/kernel/'
            'people/mason/btrfs/', keyid='517D0F0E')
        r.Make()
        r.Make('convert')
        r.MakeInstall('prefix=%(prefix)s')
