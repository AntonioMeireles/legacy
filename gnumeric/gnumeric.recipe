loadRecipe('gnomepackage.recipe', label='conary.specifix.com')
class Gnumeric(GnomePackageRecipe):
    buildRequires = GnomePackageRecipe.buildRequires

    buildRequires.extend( ['glib:devel', 'gtk:devel', 'libgnome:devel', 'libgnomeui:devel',
                           'libbonobo:devel', 'libbonoboui:devel', 'libgnomeprint:devel',
                           'libgnomeprintui:devel', 'libgsf:devel', 'libglade:devel',
                           'intltool:runtime', 'libxml2:devel', 'libart_lgpl:devel'] )
    
    name = 'gnumeric'
    version = '1.4.2'

    def install(r):
	GnomePackageRecipe.install(r)
	r.ComponentSpec('runtime', '/usr/lib/gnumeric/')

        r.Remove('%(localstatedir)s/scrollkeeper/', recursive=True)
