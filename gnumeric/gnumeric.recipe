loadSuperClass('gnomepackage')
class Gnumeric(GnomePackageRecipe):

    name = 'gnumeric'
    version = '1.7.8'

    buildRequires = [
        'glib:devel', 'gtk:devel', 'libgnome:devel', 'libgnomeui:devel',
        'libbonobo:devel', 'libbonoboui:devel', 'libgnomeprint:devel',
        'libgnomeprintui:devel', 'libgsf:devel', 'libglade:devel',
        'intltool:runtime', 'libxml2:devel', 'libart_lgpl:devel',
        'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'gnome-keyring:devel',
        'gnome-vfs:devel', 'goffice:devel', 'libgnomecanvas:devel',
        'libxslt:devel', 'pango:devel', 'perl:runtime', 'popt:devel',
        'GConf:runtime', 'bison:runtime', 'flex:runtime', 'gettext:runtime',
        'glib:runtime', 'scrollkeeper:runtime', 'desktop-file-utils:runtime',
        'libpng:devel', 'perl:devel', 'psiconv:devel', 'libgda:devel',
        'libgnomedb:devel'
    ]
    
    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace('Categories=Application;',
                  'Categories=GNOME;Application;', 'gnumeric.desktop.in')

    def install(r):
	GnomePackageRecipe.install(r)
        # the plugins are dynamically loaded and should not be considered
        # to provide their sonames; they aren't tagged as shlibs anyway.
        r.Provides(exceptions='%(libdir)s/gnumeric/.*/plugins/')



