loadSuperClass('gnomepackage')
class Gnumeric(GnomePackageRecipe):
    name = 'gnumeric'
    version = '1.4.3'

    buildRequires = [
        'atk:devel', 'bison:runtime', 'cairo:devel', 'flex:runtime',
        'fontconfig:devel', 'freetype:devel', 'GConf:devel', 'GConf:runtime',
        'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel',
        'intltool:runtime', 'libart_lgpl:devel', 'libbonobo:devel',
        'libbonoboui:devel', 'libglade:devel', 'libgnomecanvas:devel',
        'libgnome:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel',
        'libgnomeui:devel', 'libgsf:devel', 'libpng:devel', 'libxml2:devel',
        'ORBit2:devel', 'pango:devel', 'popt:devel',
        'desktop-file-utils:runtime', 'scrollkeeper:runtime'
    ]
    
    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace('Categories=Application;',
                  'Categories=GNOME;Application;', 'gnumeric.desktop.in')

    def install(r):
	GnomePackageRecipe.install(r)
        # the plugins are dynamically loaded and should not be considered
        # to provide their sonames; they aren't tagged as shlibs anyway.
        r.Provides(exceptions='%(libdir)s/gnumeric/.*/plugins/')
