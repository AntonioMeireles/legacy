loadSuperClass('gnomepackage')
class AtSpi2Atk(GnomePackageRecipe):

    name = 'at-spi2-atk'
    version = '2.6.2'

    buildRequires = ['at-spi2-core:devel']


    def configure(r):
      r.Configure('--disable-relocate') 
      r.Replace('^hardcode_libdir_flag_spec=.*','hardcode_libdir_flag_spec="" ', 'libtool') 
      r.Replace('runpath_var=LD_RUN_PATH','runpath_var=DIE_RPATH_DIE|','libtool') 
