loadSuperClass('gnomepackage')
class Zenity(GnomePackageRecipe):
    buildRequires = [ 'libgnome:devel', 'libgnomecanvas:devel', 'libglade:devel',
        'scrollkeeper:devellib', 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'libart_lgpl:devel', 'libpng:devel',
        'libxml2:devel', 'pango:devel', 'gettext:runtime', 'perl:runtime',
        'scrollkeeper:runtime' ]

    name = 'zenity'
    version = '2.16.2'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'
