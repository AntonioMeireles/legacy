class ForesightGdmLoginSimpleGreen(PackageRecipe):
    name = 'gdm-simple-green'
    version = '1.1'

    def setup(r):
        # defining a macro for the GDM theme directory
        r.macros.gdmthemedir = '%(datadir)s/gdm/themes'
        # add the theme source to the theme directory
        r.addArchive('%(name)s-%(version)s.tar.bz2', dir='%(gdmthemedir)s/') 
