loadSuperClass('rpmpackage')
class Paramiko(RPMPackageRecipe,PackageRecipe):

    name = 'paramiko'
    version = '1.7.6'
    rpmRelease = '2.fc14'
    rpmName = 'python-paramiko'

    buildRequires = ['python-setuptools:python',
                     'python-ctypes:python',
                     'python:devel']

    def setup(r):
        # upstream download link down...
        # r.addArchive('http://www.lag.net/paramiko/download/%(name)s-%(version)s.zip')
        # so we get tarball from elsewhere...
        RPMPackageRecipe.unpack(r)
        r.PythonSetup()
