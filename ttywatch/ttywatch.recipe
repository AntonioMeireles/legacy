class TtyWatch(CPackageRecipe):
    buildRequires = [ 'chkconfig:runtime', 'glib:devel',
        'lockdev:devel', 'popt:devel' ]
    name = 'ttywatch'
    version = '0.14'

    def setup(r):
        r.addArchive('http://danlj.org/mkj/%(name)s/'
                     '%(name)s-%(version)s.tar.bz2')

        r.Make()
        r.MakeInstall('INITDIR=%(destdir)s%(initdir)s', rootVar='TOPDIR')
        r.ExcludeDirectories(exceptions='/var/log/ttywatch')
