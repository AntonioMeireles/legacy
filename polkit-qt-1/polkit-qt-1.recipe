loadSuperClass('cmakepackage')
class PolkitQt1(CMakePackageRecipe):

    name = 'polkit-qt-1'
    version = '0.99.0'

    buildRequires = [
        'automoc:runtime', 'dbus:devel', 'glib:devel', 'libstdc++:devel',
        'phonon:devel', 'polkit:devel', 'qt4:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://kde/stable/apps/KDE4.x/admin/')

