loadSuperClass('cmakepackage')
class PolkitQt1(CMakePackageRecipe):

    name = 'polkit-qt-1'
    version = '0.95.1+r1088234'

    buildRequires = [
        'automoc:runtime', 'dbus:devel', 'glib:devel', 'libstdc++:devel',
        'phonon:devel', 'polkit:devel', 'qt4:devel'
    ]

    def unpack(r):

        r.macros.revision = r.version.split('+')[-1][1:]
        r.addSvnSnapshot('svn://anonsvn.kde.org/home/kde/tags/kdesupport-for-4.4/polkit-qt-1', revision='%(revision)s')

