class libiconv(PackageRecipe):
    buildRequires=["glibc:devel"]

    name = "libiconv"
    version = "1.9.1"

    def setup(r):
        r.addArchive("http://ftp.gnu.org/pub/gnu/%(name)s/%(name)s-%(version)s.tar.gz")
        r.Configure()
	r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('ABOUT-NLS', 'AUTHORS', 'COPYING.LIB',
              'DESIGN', 'NEWS', 'NOTES', 'PORTS',
              'README', 'THANKS')
