        'evas:devel', 
        'expat:devel', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gettext:runtime', 
        'gnutls:devel', 
        'intltool:runtime', 
        'libICE:devel', 
        'libX11:devel', 
        'libXScrnSaver:devel', 
        'libXcursor:devel', 
