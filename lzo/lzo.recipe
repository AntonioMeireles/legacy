class LZO(AutoPackageRecipe):
    name = 'lzo'
    version = '2.02'

    buildRequires = [ 'file:runtime', ]
    
    def unpack(r):
        r.addArchive('http://www.oberhumer.com/opensource/lzo/download/')

    def configure(r):
        # shared libs not on by default
        r.Configure('--enable-shared')
