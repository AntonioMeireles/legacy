class LZO(AutoPackageRecipe):
    name = 'lzo'
    version = '2.02'

    buildRequires = [ 'nasm:runtime' ]

    def unpack(r):
        r.addArchive('http://www.oberhumer.com/opensource/lzo/download/lzo-%(version)s.tar.gz')
    def configure(r):
        r.Configure('--enable-shared')
