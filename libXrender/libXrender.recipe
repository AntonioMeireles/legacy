loadSuperClass('xorgpackage.recipe')
class LibXRender(XorgPackageRecipe):
    name = 'libXrender'
    version = '0.9.2'
    component = 'lib'

    buildRequires = [ 'renderproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('libX11:devel', 'renderproto:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xrender.pc')
