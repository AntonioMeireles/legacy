class Grep(CPackageRecipe):
    name = 'grep'
    version = '2.5.1a'

    if not Use.bootstrap:
        buildRequires = [ 'pcre:devel' ]

    def setup(r):
        r.addArchive('mirror://gnu/%(name)s/')

        if Use.bootstrap:
            r.macros.cflags += ' -I%(sysroot)s/usr/include/pcre'
            config = ' --without-included-regex'
        else:
            config = ' --disable-perl-regexp --with-included-regex'

        r.Configure(config)
        r.Make('AR=%(target)s-ar')
        r.MakePathsInstall()

        r.Move('%(prefix)s/bin/*', '%(essentialbindir)s/')
        r.TagSpec('info-file', '%(datadir)s/info/grep.info.gz')
        r.AutoDoc('ABOUT-NLS')
