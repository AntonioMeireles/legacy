class Mjpegtools(AutoPackageRecipe):
    name = 'mjpegtools'
    version = '1.9.0rc3'
 
    buildRequires = ['SDL:devel', 'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'install-info:runtime', 'libICE:devel', 'libX11:devel', 'libXrender:devel', 'libdv:devel', 'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/mjpeg/%(name)s-%(version)s.tar.gz')
