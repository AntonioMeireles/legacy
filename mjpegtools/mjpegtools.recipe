class mjpegtools(AutoPackageRecipe):

    buildRequires = [ 'SDL:devel', 'atk:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'gtk:devel', 'libdv:devel', 'libjpeg:devel',
        'libpng:devel', 'libstdc++:devel', 'pango:devel',
        'xorg-x11:devel', 'zlib:devel' ]

    name = 'mjpegtools'
    version = '1.8.0'

    def unpack(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/mjpeg/%(name)s-%(version)s.tar.gz')
