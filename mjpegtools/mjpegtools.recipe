class MjpegTools(AutoPackageRecipe):
    name = 'mjpegtools'
    version = '1.9.0rc2'
 
    buildRequires = [ 'SDL_gfx:devel','SDL:devel', 'expat:devel', 
        'install-info:runtime', 'pkgconfig:devel', 'SDL:devel', 
        'atk:devel', 'cairo:devel', 'fontconfig:devel', 
        'freetype:devel', 'gtk:devel', 'libdv:devel',
        'libjpeg:devel', 'libpng:devel',
        'libstdc++:devel', 'pango:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/mjpeg/')
