class Liblo(CPackageRecipe):
    buildRequires = [
        'gcc:devel',
        'glib:devel',
        'glibc:devel',
        'zlib:devel',
        'libsndfile:devel',
        'binutils:runtime',
        'doxygen:runtime',
        'gawk:runtime'
    ]

    name = "liblo"
    version = "0.22"

    def setup(r):
        r.addArchive('http://plugin.org.uk/liblo/releases/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
