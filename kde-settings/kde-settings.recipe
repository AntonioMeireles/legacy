class KdeSettings(PackageRecipe):
    name = 'kde-settings'
    version = '0.80'
 
    def setup(r):
        r.macros.kdesettings = '%(sysconfdir)s/kde3/' % r.macros
        r.addMercurialSnapshot('http://www.dragonstrider.com/hg/foresight-kde-settings/')

        r.Copy('*rc', r.macros.kdesettings)

