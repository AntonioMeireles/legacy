loadSuperClass('rpmpackage')
class BitmapFonts(RPMPackageRecipe, BuildPackageRecipe):
    name = 'bitmap-fonts'
    version = '0.3'
    fixfontVersion = '3.5'

    # needed for bdftopcf
    buildRequires = [ 'bdftopcf:runtime', 'fontconfig:runtime' ]
    rpmRelease = '5.1.1'

    def setup(r):
        r.unpack()
        r.addArchive('fixfont-%s.tar.bz2' % r.fixfontVersion, rpm=r.srpm, dir=r.theMainDir)

        r.MakeInstall()
        r.Install('fixfont/*', '%(datadir)s/fonts/bitmap-fonts')
        r.Doc('LU_LEGALNOTICE')
