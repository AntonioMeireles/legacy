class Pinfo(AutoPackageRecipe):
    name = 'pinfo'
    version = '0.6.8'

    buildRequires = [ 'install-info:runtime', 'ncurses:devel' ]

    def unpack(r):
        r.addArchive('http://dione.cc/~pborys/software/pinfo/pinfo-%(version)s.tar.gz')
        r.addPatch('pinfo-0.6.8.memcorruption.patch')
        r.addPatch('pinfo-0.6.8-mkstemp.patch')
        r.addPatch('pinfo-0.6.8.memleak.patch')

    def configure(r):
        r.Configure('--disable-nls')

    def policy(r):
        r.Symlink('pinfo', '%(bindir)s/pman')
        r.Symlink('pinfo.1', '%(mandir)s/man1/pman.1')
        r.AutoDoc('TECHSTUFF')
