class zisofstools(AutoPackageRecipe):
    name = 'zisofs-tools'
    version = '1.0.6'
    buildRequires = ['zlib:devel']

    def unpack(r):
        r.addArchive('http://www.kernel.org/pub/linux/utils/fs/zisofs/%(name)s-%(version)s.tar.bz2')

    def makeinstall(r):
        r.MakeInstall(rootVar='INSTALLROOT')
