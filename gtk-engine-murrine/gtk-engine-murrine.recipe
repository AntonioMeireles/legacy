import datetime
class GtkMurrine(AutoPackageRecipe):

    buildRequires = [ 
        'atk:devel', 
        'cairo:devel', 
        'expat:devel', 
        'fontconfig:devel', 
        'freetype:devel', 
        'glib:devel', 
        'gtk:devel', 
        'libX11:devel', 
        'libXrender:devel', 
        'libpng:devel', 
        'pango:devel', 
        'pkgconfig:devel', 
        'zlib:devel', 
        'libtool:runtime', 
        'gettext:runtime', 
        'gettext:devel',
        'intltool:runtime',
            ]

    name = 'gtk-engine-murrine'
    version = datetime.date.today().strftime("%Y.%m.%d")

    def unpack(r):
        r.addGitSnapshot('git://git.gnome.org/murrine/')

    def configure(r):
        r.Configure(' --enable-animation --enable-animationrtl', configureName='autogen.sh')

