class GtkMurrine(CPackageRecipe):

    buildRequires = [ 'atk:devel', 'cairo:devel', 'expat:devel',
                      'fontconfig:devel', 'freetype:devel', 'glib:devel',
                      'gtk:devel', 'libX11:devel', 'libXrender:devel',
                      'libpng:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel']

    name = 'gtk-engine-murrine'
    version = '0.53.1'

    def setup(r):
        r.addArchive('http://cimi.netsons.org/media/download_gallery/murrine/murrine-%(version)s.tar.bz2')
        r.Configure(' --enable-animation')
        r.MakeInstall()
