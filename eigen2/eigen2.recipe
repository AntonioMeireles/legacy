loadSuperClass('cmakepackage')
class Eigen2(CMakePackageRecipe):

    name = 'eigen2'
    version = '2.0.1'

    buildRequires = [
        'gcc-c++:runtime'
    ]

    def unpack(r):

        r.macros.archive_name = 'eigen'
        r.macros.archive_version = r.version.replace('+', '-')
        r.addArchive('http://download.tuxfamily.org/eigen/')

