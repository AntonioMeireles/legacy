class Hellanzb(CPackageRecipe):
    buildRequires = []

    name = 'hellanzb'
    version = '0.7'

    def setup(r):
        r.addArchive('http://freshmeat.net/redir/%(name)s/58351/url_tgz/%(name)s-%(version)s.tar.gz')
        r.Replace(('share/doc/hellanzb',
                   'share/doc/hellanzb-%(version)s'),
                  'setup.py')

        r.Requires('hellanzb:runtime', 'hellanzb.py')

        for req in [ 'unrar:runtime', 'par2cmdline:runtime',
                     'python-twisted:python', 'python-twisted-web:python' ]:
            r.Requires(req, '.*Core.py')

        r.Run('python setup.py install --prefix=%(destdir)s/%(prefix)s')
