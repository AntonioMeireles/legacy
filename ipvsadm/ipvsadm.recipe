class Ipvsadm(CPackageRecipe):
    name = 'ipvsadm'
    version = '1.24'
    buildRequires = [ 'popt:devel' ]

    def setup(r):
        r.disableParallelMake()
        r.addArchive('http://www.linuxvirtualserver.org/software/kernel-2.6/ipvsadm-%(version)s.tar.gz')
        r.addSource('ip_vs.h', dest='kernel-headers/net/')
        r.Make('INCLUDE="-I$(pwd)/kernel-headers"')
        r.MakeInstall(rootVar='BUILD_ROOT')
        r.Move('/usr/man', '%(mandir)s')
