class GtkThemeClearlooks(PackageRecipe):
    buildRequires = [ 'gtk:devel' ]

    name = 'gtk-theme-clearlooks'
    version = '0.6'
    
    def setup(r):
	r.addArchive('http://internap.dl.sourceforge.net/sourceforge/clearlooks/clearlooks-%(version)s.tar.bz2')

        r.Configure('--enable-animation')
	r.Replace('IconTheme=Clearlooks','IconTheme=dlg-etiquette','themes/Clearlooks/index.theme')
        r.Make()
        r.MakeInstall()
	#r.Requires('metacity-theme-clearlooks:data','%(datadir)s/themes/Clearlooks/index.theme')
	#r.Requires('icon-theme-dlg-etiquette:data','%(datadir)s/themes/Clearlooks/index.theme')
