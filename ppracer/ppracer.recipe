class ppracer(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", 
			"SDL_mixer:devel", "tcl:devel", 
			"libpng:devel", "freetype:devel",
                      "desktop-file-utils:runtime", 'gcc:devel', 'xorg-x11:devel', 'zlib:devel', 'binutils:runtime', 'gawk:runtime']
    name = "ppracer"
    version = "0.5alpha"

    def setup(r):
        r.addArchive('http://download.berlios.de/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()
