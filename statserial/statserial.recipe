class Statserial(CPackageRecipe):

    buildRequires = [ 'ncurses:devel' ]

    name = 'statserial'
    version = '1.1'

    def setup(r):

        srpm = 'ftp://download.fedora.redhat.com/pub/fedora/linux/core/2/SRPMS/statserial-1.1-34.src.rpm'
        r.addArchive('%(name)s-%(version)s.tar.gz', rpm=srpm)
        r.addPatch('statserial-1.1-config.patch', rpm=srpm)
        r.addPatch('statserial-1.1-dev.patch', rpm=srpm)
        r.addPatch('statserial-1.1--n.patch', rpm=srpm)

        r.Make()

        r.Install('statserial', '%(bindir)s/')
        r.Install('statserial.1', '%(mandir)s/man1/')

