loadSuperClass('cpanpackage=conary.rpath.com@rpl:devel')
class MathPari(CPANPackageRecipe, CPackageRecipe):
    name='perl-Math-Pari'
    version='2.010709'

    #In your recipe if you get an IO error, you may need to discover one or
    #both of the following
    #author='GBARR'
    #upstreamname='perl-Bundle-foo'

    def build(r):
        r.addArchive('ftp://megrez.math.u-bordeaux.fr/pub/pari/unix/OLD/pari-2.1.7.tgz')
        r.Replace(', ftp->message\(\)', ', $ftp->message()', 'utils/Math/PariBuild.pm')
        CPANPackageRecipe.build(r)
