class Bakefile(AutoPackageRecipe):
    name = 'bakefile'
    version = '0.2.2'
 
    buildRequires = ['libxml2:python', 'python:devel', 'python-ctypes:python']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/bakefile/')
        r.Replace('/usr/local/bin/python','%(bindir)s/python','src/empy/em.py')
