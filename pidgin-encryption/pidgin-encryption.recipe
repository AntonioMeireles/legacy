class PidginEncryption(AutoPackageRecipe):
    name = 'pidgin-encryption'
    version = '3.0'

    buildRequires = [ 'expat:devellib', 'pidgin:devel', 'gtk:devel', 'pkgconfig:devel',
                      'nspr:devel', 'nss:devel', 'zlib:devellib' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/gaim-encryption/%(name)s-%(version)s.tar.gz')
