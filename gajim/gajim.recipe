class Gajim(AutoPackageRecipe):
    name = 'gajim'
    version = '0.12.1'
    buildRequires = ['aspell:devel', 'atk:devel', 'avahi:python', 'cairo:devel', 'dbus-python:python', 'desktop-file-utils:runtime', 'docutils:python', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-python-desktop:python', 'gnome-python-extras:python', 'gnome-python:python', 'gtk:devel', 'gtkspell:devel', 'libX11:devel', 'libXScrnSaver:devel', 'libXext:devel', 'libXrender:devel', 'libpng:devel', 'notify-python:python', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'pygobject:python', 'pygtk:python', 'python-sqlite:python', 'zlib:devel', 'intltool:runtime', 'pygtk:devel', 'python:devel', 'gettext:runtime', 'pygobject:runtime']

    def unpack(r):
        r.addArchive('http://www.gajim.org/downloads/')
	r.addPatch('add-indicator-support.patch')
