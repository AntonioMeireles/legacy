class Elixir(PackageRecipe):
    name = 'Elixir'
    version = '0.6.0'

    buildRequires = ['python-setuptools:python', 'python:devel']

    def setup(r):
        r.addArchive('http://cheeseshop.python.org/packages/source/E/%(name)s/%(name)s-%(version)s.tar.gz')
        #http://pypi.python.org/packages/source/E/Elixir/Elixir-0.5.2.tar.gz#md5=ea37e917896dce419f777d17afc43fce
        r.PythonSetup()
