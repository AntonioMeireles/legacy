class Usbmuxd(CPackageRecipe):
    name = 'usbmuxd'
    version = '1.0.4'
 
    buildRequires = ['cmake:runtime', 'libusb:devel', 'pkgconfig:devel']
 
    def setup(r):
        r.addArchive('http://marcansoft.com/uploads/usbmuxd/')
        r.CMake()
        r.Make()
        r.MakeInstall()
