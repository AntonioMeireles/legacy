loadRecipe("python=@fl:2-devel")
class Emesene(PackageRecipe):

    name = 'emesene'
    tag = "git"
    version = 'v2.11.9.%s' % tag

    buildRequires = [
'dbus-python:python', 'desktop-file-utils:runtime', 'farsight2:python', 'gnome-python-extras:python', 'gnome-python:python', 'gst-python:python', 'libindicate:python', 'notify-python:python', 'papyon:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python:devel', 'pywebkitgtk:python', 'python-simplejson:python', 'libappindicator:python'
    ]

    def setup(r):
	r.addGitSnapshot("http://github.com/emesene/emesene.git")
	r.PythonSetup(data='--install-data=/usr')
        r.macros.sitepkgs = Python.sitepkgs

        r.Symlink("%(sitepkgs)s/emesene/emesene","%(bindir)s/emesene")
        r.Requires("xmpppy:python","emesene:python")
