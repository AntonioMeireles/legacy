class Rrdtool(AutoPackageRecipe):
    name = 'rrdtool'
    version = '1.4.3'
 
    buildRequires = ['cairo:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'groff:runtime', 
        'intltool:runtime', 
        'libpng:devel', 
        'libxml2:devel', 
        'lua:devel', 
        'lua:runtime', 
        'pango:devel', 
        'perl:devel', 
        'pkgconfig:devel', 
        'python:devel', 
        'ruby:devellib', 
        'ruby:runtime'
            ]
 
    def unpack(r):
        r.addArchive('http://oss.oetiker.ch/rrdtool/pub/rrdtool-%(version)s.tar.gz')

    def policy(r):
        # these aren't in the perl @INC path... see CONTRIB-26
        r.Move('/usr/lib/perl', '%%(libdir)s/perl5')
        r.ComponentSpec('tcl', '.*tcl.*')

