loadInstalled('perl')
class Rrdtool(AutoPackageRecipe):
    name = 'rrdtool'
    version = '1.2.15'

    buildRequires = [ 'libart_lgpl:devel', 'zlib:devel',
        'libpng:devel', 'freetype:devel', 'perl:runtime', 'perl:devel',
        'python:devel', 'groff:runtime', 'perl:lib', ]

    def unpack(r):
        r.addArchive('http://people.ee.ethz.ch/~oetiker/webtools/rrdtool/pub/')

    def policy(r):
        # these aren't in the perl @INC path... see CONTRIB-26
        r.Move('/usr/lib/perl', '%%(libdir)s/perl5')
        r.ComponentSpec('tcl', '.*tcl.*')
