class Rrdtool(AutoPackageRecipe):
    name = 'rrdtool'
    version = '1.4.4'
 
    buildRequires = ['cairo:devel', 
                     'gettext:runtime', 
                     'glib:devel', 
                     'groff:runtime', 
                     'intltool:runtime', 
                     'libpng:devel', 
                     'libxml2:devel', 
                     'lua:devel', 
                     'lua:runtime', 
                     'pango:devel', 
                     'perl:devel', 
                     'pkgconfig:devel', 
                     'python:devel', 
                     'ruby:devellib', 
                     'ruby:runtime',
                     'lua:devel',
                     'pkgconfig:devel'
            ]
 
    def unpack(r):
        r.addArchive('http://oss.oetiker.ch/rrdtool/pub/rrdtool-%(version)s.tar.gz')

    def configure(r):
        r.Configure(' -with-perl-options=\'INSTALLDIRS=\"vendor\"\' '
                    ' --enable-tcl-site  --with-tcllib=%(libdir)s '
                    ' --enable-python --enable-ruby --disable-static '
                    ' --with-pic')

