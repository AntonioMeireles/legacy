class Fbgrab(PackageRecipe):
    name='fbgrab'
    version='1.0'

    buildRequires = [ 'splint:runtime', 'zlib:devellib', 'libpng:devellib' ]

    def setup(r):
        r.addArchive('http://hem.bredband.net/gmogmo/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Replace('.*splint.*', '', 'Makefile')
        r.Replace('-lpng', '-lpng -lm', 'Makefile')
        r.Make()
        r.Copy('fbgrab', '%(bindir)s/')
        r.Copy('fbgrab.1.man', '%(mandir)s/man1/')

