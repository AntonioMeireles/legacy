class xfce4Mixer(XfcePackageRecipe):

    name = 'xfce4-mixer'
    version = '4.6.1'

    XfcePackageRecipe.buildRequires.extend([
        'desktop-file-utils:runtime', 'gst-plugins-base:devel',
        'gstreamer:devel', 'libxfce4util:devel', 'libxfcegui4:devel',
        'libxml2:devel', 'xfce4-panel:devel', 'xfconf:devel'
    ])
