class Idavoll(PackageRecipe):

    name = 'python-idavoll'
    version = '0.9.1'

    buildRequires = [
        'python:devel',
        'python-setuptools:python',
        'python-twisted:python',
        'simplejson:python',
    ]

    def setup(r):
        r.macros.name = 'idavoll'
        r.addArchive('http://idavoll.ik.nu/releases/%(version)s/')
        r.PythonSetup()
