class GtkNimbus(CPackageRecipe):

    buildRequires = ['expat:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'gtk:runtime', 'libXrender:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'icon-naming-utils','gnome-common:devel', 'gnome-common:runtime', 'autoconf:runtime', 'a\
utomake:runtime', 'libtool:devel', 'libtool:runtime',]

    name = 'theme-engine-sun-nimbus'
    version = '0.0.10'

    def setup(r):
        r.addArchive('http://dlc.sun.com/osol/jds/downloads/extras/nimbus-%(version)s.tar.bz2')
        r.Configure(configureName='autogen.sh')
        r.Make()
        r.MakeInstall()


        # apply our branding...
        for res in ['16x16', '22x22', '24x24', '32x32']:
            r.addSource('distributor-logo.' + res + '.png')
            r.Install('distributor-logo.' + res + '.png', '%(datadir)s/icons/nimbus/' + res + '/places/distributor-logo.png')

        r.addSource('distributor-logo.scalable.svg')
        r.Install('distributor-logo.scalable.svg', '%(datadir)s/icons/nimbus/scalable/places/distributor-logo.svg')
