class GtkNimbus(CPackageRecipe):

    buildRequires = ['expat:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'gtk:runtime', 'libXrender:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'icon-naming-utils']

    name = 'theme-engine-sun-nimbus'
    version = '0.0.8'

    def setup(r):
        r.addArchive('http://dlc.sun.com/osol/jds/downloads/extras/nimbus-%(version)s.tar.bz2')
        r.addPatch('configure.patch')
        r.Configure()
        r.Make()
        r.MakeInstall()
