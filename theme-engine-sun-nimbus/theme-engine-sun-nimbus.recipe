class GtkNimbus(AutoPackageRecipe):

    buildRequires = ['expat:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'gtk:runtime', 'libXrender:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'icon-naming-utils','gnome-common:devel', 'gnome-common:runtime', 'autoconf:runtime', 'automake:runtime', 'libtool:devel', 'libtool:runtime', 'gettext:devel' ]

    name = 'theme-engine-sun-nimbus'
    version = '0.0.17'

    def unpack(r):
        r.addArchive('http://dlc.sun.com/osol/jds/downloads/extras/nimbus-%(version)s.tar.bz2')
        #r.addSvnSnapshot('svn+ssh://anon@svn.opensolaris.org/svn/jds/nimbus/trunk/')
    def configure(r):
        r.Configure(configureName='autogen.sh')


