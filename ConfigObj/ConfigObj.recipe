loadInstalled('python')
class ConfigObj(PackageRecipe, Python.VersionMixIn):
    name = 'ConfigObj'
    version = '4.4.0'

    buildRequires = [ 'python-setuptools:python', 'unzip:runtime' ]

    def setup(r):
        r.setDefaultPython()
        r.addArchive('mirror://sourceforge/configobj/configobj-%(version)s.zip')
        r.PythonSetup()

