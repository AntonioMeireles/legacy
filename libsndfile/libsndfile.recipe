class libsndfile(PackageRecipe):
    buildRequires = [ "glibc:devel", "alsa-lib:lib" ]
    name = "libsndfile"
    version = "1.0.11"

    def setup(r):
        r.addArchive('http://www.mega-nerd.com/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

