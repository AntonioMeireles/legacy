class Hula(PackageRecipe):
    buildRequires = [  ]
    name = "hula"
    version = "194"

    def setup(r):
        r.addArchive('http://www.kelley.ca/hulaTar/tars/%(name)s-r%(version)s.tgz')
	r.mainDir('%(name)s-r%(version)s')
	r.addSource('hula.init')
        r.Configure()
        r.Make('C_INCLUDE_PATH="/usr/kerberos/include" LOCALDEFS="-DOPENSSL_NO_KRB5"')
        r.MakeInstall()
	r.Install('hula.init','%(sysconfdir)s/init.d/hula')
