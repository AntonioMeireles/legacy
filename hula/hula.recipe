class Hula(PackageRecipe):
    buildRequires = [ 'glibc:devel', 'openldap:devel', 'openssl:devel', 'zlib:devel' ]
    name = "hula"
    version = "443"

    def setup(r):
        r.addArchive('ftp://ftp.forcev.net/Hula/Source/%(name)s-r%(version)s.tgz')
	r.mainDir('%(name)s-r%(version)s')
	r.addSource('hula.init')
	r.Run('./autogen.sh')
        r.Configure()
        r.Make('C_INCLUDE_PATH="/usr/kerberos/include" LOCALDEFS="-DOPENSSL_NO_KRB5"')
        r.MakeInstall()
	r.Install('hula.init','%(sysconfdir)s/init.d/hula')
