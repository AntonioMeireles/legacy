class ElisaPluginsBad(BuildPackageRecipe):
    name = 'elisa-plugins-bad'
    version = '0.3.5'
 
    buildRequires = [ 'python-setuptools:python',  'pyxdg:python', 'avahi:python', 'dbus-python:python', 'gst-python:python', 'pigment-python:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python-twisted-web:python', 'python-twisted:python', 'python:devel', 'elisa:python', 'python-zopeinterface:python' ]
 
    def setup(r):
        r.addArchive('http://elisa.fluendo.com/download/elisa/')
        r.Run('python setup.py build')
        r.Run('python setup.py install --root=%(destdir)s')
        r.Remove('/usr/lib/python2.4/site-packages/elisa/plugins/__init__.*')
