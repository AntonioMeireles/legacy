class Directfb(AutoPackageRecipe):
    name = 'DirectFB'
    version = '1.1.0'

    buildRequires = [ 'SDL:devel', 'freetype:devel', 'gcc-fortran:runtime',
        'libjpeg:devel', 'libpng:devel', 'man:runtime', 'perl:runtime',
        'pkgconfig:devel', 'sysfsutils:devel', 'zlib:devel', 'libX11:devel',
        'libXext:devel', 'automake:runtime', 'autoconf:runtime',
        'libtool:runtime', ]

    def unpack(r):
        if Arch.x86_64:
            r.macros.cflags += ' -fPIC'
        if Arch.x86_64:
            r.macros.cflags += ' -fPIC'
        r.addArchive('http://www.directfb.org/downloads/Core/')
        # RPL-1776 - use tty8 to avoid conflict with gettys and X
        r.addPatch('splashy-tty.patch')
        #r.addPatch('sleep.patch')

    def configure(r):
        r.Configure('--enable-static --enable-fbdev', configureName='./autogen.sh')

    def policy(r):
        r.ComponentSpec('lib-core', '%(libdir)s/libdirect-1.1.so.*')
        r.ComponentSpec('lib-core', '%(libdir)s/libdirectfb-1.1.so.*')
        r.ComponentSpec('lib-core', '%(libdir)s/libfusion-1.1.so.*')
