loadSuperClass('cpanpackage=conary.rpath.com@rpl:devel')
class NetSSHPerl(CPANPackageRecipe, CPackageRecipe):
    name='perl-Net-SSH-Perl'
    version='1.30'

    #In your recipe if you get an IO error, you may need to discover one or
    #both of the following
    #author='GBARR'
    #upstreamname='perl-Bundle-foo'

    buildRequires = [ 'perl-Compress-Zlib:perl', 'perl-Digest-HMAC:perl', 'perl-Digest-SHA1:perl', 'perl-Math-Pari:perl', 'perl-Convert-PEM:perl'
		     ,'perl-Crypt-DH:perl', 'perl-Crypt-DSA:perl', 'perl-Crypt-IDEA:perl', 'perl-Crypt-RSA:perl'
		     ,'perl-Digest-BubbleBabble:perl', 'perl-Math-GMP:perl', 'perl-String-CRC32:perl'
		    ]

    def post(r):
      r.Requires('perl-Crypt-DH:perl', '%(libdir)s/.*')
      r.Requires('perl-Crypt-Random:perl', '%(libdir)s/.*')
      r.Requires('perl-Class-Loader:perl', '%(libdir)s/.*')
