class Ctags(AutoPackageRecipe):
    name = 'ctags'
    version = '5.6'

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

    def makeinstall(r):
        r.MakePathsInstall()
        r.AutoDoc('EXTENDING.html')
        r.Remove('%(mandir)s/man1/etags*') # in emacs package
