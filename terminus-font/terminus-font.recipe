class TerminusFont(PackageRecipe):

    name = 'terminus-font'
    version = '4.20'

    buildRequires = [
        'fontconfig:runtime', 'mkfontdir:runtime', 'perl:runtime'
    ]

    def setup(r):

        r.addArchive('http://www.is-vn.bg/hamster/')

        r.Configure('--x11dir=%(datadir)s/fonts/terminus')
        r.MakeInstall(installtarget='install-pcf')

