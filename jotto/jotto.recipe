class jotto(PackageRecipe):
    buildRequires = [ ]
    name = "jotto"
    version = "0.0"

    def setup(r):
        r.addArchive('http://ovh.dl.sourceforge.net/sourceforge/gtkjotto/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
        
        r.Replace('gtkjotto','jotto','%(bindir)s/jotto') #i hope this replaces all lines

