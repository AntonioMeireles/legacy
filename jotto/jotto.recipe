class jotto(PackageRecipe):
    buildRequires = [ "desktop-file-utils:runtime", "pygtk:python" ]
    name = "jotto"
    version = "0.0"

    def setup(r):
        r.addArchive('http://ovh.dl.sourceforge.net/sourceforge/gtkjotto/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
        
        r.Replace('gtkjotto','jotto','%(bindir)s/jotto')

#       Add a jotto icon

        r.addSource('jotto.png')
        r.Install('jotto.png', '%(datadir)s/pixmaps/')

#       Here are our menu links

        r.addSource('jotto.desktop')
        r.Desktopfile('jotto.desktop')
