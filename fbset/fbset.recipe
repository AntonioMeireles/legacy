loadSuperClass('rpmpackage')
class Fbset(RPMPackageRecipe, CPackageRecipe):
    name = 'fbset'
    version = '2.1'

    buildRequires = [ 'bison:runtime', 'flex:runtime', 'perl:lib' ]

    rpmRelease = '22'
    rpmPatches = [ 'fbset-2.1-makefile.patch', 'fbset-2.1-fixmode.patch', ]

    def setup(r):
        r.disableParallelMake()
        r.unpack()
        r.Make()
        r.MakePathsInstall()
