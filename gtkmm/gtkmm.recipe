loadRecipe('gnomepackage')
class Gtkmm(GnomePackageRecipe):
    name = 'gtkmm'
    version = '2.13.7'
    
    buildRequires = [ 'glibmm:devel', 'atk:devel', 'perl:runtime',
        'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'libpng:devel', 'libsigc++:devel', 'libstdc++:devel', 'pango:devel',
        'cairomm:devel', 'm4:runtime', 'expat:devel', 'pangomm:devel' ]

    patches = ['http://cvs.fedoraproject.org/viewvc/devel/gtkmm24/gtkmm-2.13.7-compile-with-gtk0214.patch?view=co'] 
    extraConfig = ' --enable-static --enable-shared  --disable-demos'
    def unpack(r):
        GnomePackageRecipe.unpack(r)
        # Temporary fixes until 2.14 is released
        # All already applied in svn
        r.Run("""  rm -f gtk/gtkmm/widget.* gtk/gtkmm/selectiondata.*
( cd gtk/src
  for f in widget selectiondata ; do
    `pkg-config --variable=gmmprocdir glibmm-2.4`/gmmproc \
      -I ../../tools/m4 --defs . $f . ../gtkmm || exit 1
  done
)
""")
