class Dockbarx(PackageRecipe):

    name = 'dockbarx'
    version = '0.46.1'

    buildRequires = ['python-setuptools:python', 'PIL:python', 'dbus-python:python', 'desktop-file-utils:runtime', 'gnome-python-desktop:python', 'gnome-python:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python-keybinder:python', 'python:devel', 'pyxdg:python']

    def setup(r):
        r.addArchive('http://gnome-look.org/CONTENT/content-files/101604-dockbarx_%(version)s.tar.gz')
        r.PythonSetup(data='--install-data=%(prefix)s')
        r.Requires('python-xlib:python', 'dockbarx:runtime')
