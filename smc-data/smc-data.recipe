class smcdata(PackageRecipe):
    buildRequires = [ ]
    name = "smc-data"
    version = "0.96"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/smclone/SMC_%(version)s_game.zip')
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/smclone/music_2.0_RC_1.zip')

        r.mainDir('/')

        r.Install('data', '%(datadir)s/smc/')
        r.Install('%(version)s/data', '%(datadir)s/smc/')
        r.Install('%(version)s/levels', '%(datadir)s/smc/')
        r.Install('%(version)s/savegames', '%(datadir)s/smc/')
        r.Install('%(version)s/screenshots', '%(datadir)s/smc/')
        r.Install('%(version)s/world', '%(datadir)s/smc/')

#       Here are the docs

        r.Doc('license.txt')
