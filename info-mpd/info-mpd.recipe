class info_mpd(UserInfoRecipe):
    name = 'info-mpd'
    version = '1'

    buildRequires = [ 'info-pulse-rt:group', ]

    def setup(r):
         r.Group('mpd', 251)
         r.User('mpd', 251, group = 'mpd', supplemental=['pulse-rt'],
            homedir='%(localstatedir)s/tmp/')
