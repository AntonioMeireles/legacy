class GgzServer(AutoPackageRecipe):
    name = 'ggz-server'
    version = '0.0.14'
    buildRequires = ['avahi:devel', 'db:devel', 'expat:devel', 'gettext:runtime', 'libggz:devel', 'libstdc++:devel']


    def unpack(r):
        r.addArchive('http://ftp.ggzgamingzone.org/pub/ggz/%(version)s/',
                     '%(name)s-%(version)s.tar.gz')
