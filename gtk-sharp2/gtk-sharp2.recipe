class GtkSharp2(PackageRecipe):
    buildRequires = [ 'gtk:devel', 'mono:runtime', 'libxml2:devel' ]

    name = "gtk-sharp2"
    version = "1.9.5"
    
    def setup(r):
	r.addArchive('http://go-mono.com/sources/gtk-sharp-2.0/gtk-sharp-%(version)s.tar.gz')
	r.mainDir('gtk-sharp-%(version)s')
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
