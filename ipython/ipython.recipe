loadInstalled('python')
class IPython(PackageRecipe):
    name = 'ipython'
    version = '0.8.1'

    buildRequires = ['python-setuptools:python']

    def setup(r):
        r.macros.pyver = Python.majversion
        
        r.addArchive('http://ipython.scipy.org/dist/ipython-%(version)s.tar.gz')
        r.PythonSetup()

        r.Move('/usr/lib/python%(pyver)s/site-packages/share', '%(datadir)s')
