class IPython(PackageRecipe):
    name = 'ipython'
    version = '0.8.1'

    buildRequires = ['python-setuptools:python']

    def setup(r):
        r.addArchive('http://ipython.scipy.org/dist/ipython-%(version)s.tar.gz')
        r.PythonSetup()

        r.Move('/usr/lib/python*/site-packages/share', '%(datadir)s')
        if Arch.x86_64:
            r.Move('/usr/lib', '%(libdir)s')
