class IPython(PackageRecipe):
    name = 'ipython'
    version = '0.9.1'
    buildRequires = [ 'python-setuptools:python', 'python-numeric:python', 'bzr:python',
                      'pygobject:python', 'pygtk:python', 'python-ctypes:python',
                      'python:devel', 'python:tk', 'wxPython:python', 'idle:lib', 
                      'pyOpenSSL:python', 'python-twisted:python', 'desktop-file-utils:runtime']

    def setup(r):
        r.addArchive('http://ipython.scipy.org/dist/')
        r.addPatch("http://launchpadlibrarian.net/18963160/py26_set.diff")
        r.PythonSetup()
        r.addSource('ipythonx.desktop')
        r.Desktopfile('ipythonx.desktop')
        # workaround for rMake excessive creativity
        #r.Requires(exceptions = 'file: /tmp/.*')
