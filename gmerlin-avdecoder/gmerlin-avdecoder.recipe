class GmerlinAvdecoder(CPackageRecipe):
    name = 'gmerlin-avdecoder'
    version = '1.0.1'
 
    buildRequires = ['faac:devel', 'faad2:devel', 'ffmpeg:devel', 'flac:devel', 'gavl:devel', 'gettext:runtime', 'intltool:runtime', 'lame:devel', 'libdca:devel', 'libmad:devel', 'libmpcdec:devel', 'libogg:devel', 'libpng:devel', 'libtheora:devel', 'libtiff:devel', 'libvorbis:devel', 'mjpegtools:devel', 'pkgconfig:devel', 'samba-client:lib', 'speex:devel', 'x264:devel', 'xvidcore:devel', 'zlib:devel',
	'libcdio:devel', 
	'liboil:devel', 
	'schroedinger:devel']
 
    def setup(r):
        r.addArchive('http://surfnet.dl.sourceforge.net/sourceforge/gmerlin/')
	r.addPatch('fix_int_64.patch', dir='lib')
        r.Configure('--without-doxygen')
        r.Make()
        r.MakeInstall()

