class DeskbarApplet(PackageRecipe):
    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
                      'freetype:devel', 'glib:devel', 'glibc:devel',
                      'gtk:devel', 'libpng:devel', 'pango:devel',
                      'xorg-x11:devel', 'zlib:devel' ]

    name = "deskbar-applet"
    version = "0.5.0"

    def setup(r):
        r.addArchive("http://raphael.slinckx.net/files/%(name)s-%(version)s.tar.gz")
	r.Configure()
	r.Make()
	r.MakeInstall()
