class DeskbarApplet(PackageRecipe):
    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel',
		'glib:devel', 'glibc:devel', 'gtk:devel', 'libpng:devel', 'pango:devel',
		'xorg-x11:devel', 'zlib:devel', 'GConf:runtime', 'binutils:runtime',
		'gawk:runtime', 'gettext:runtime', 'glibc:runtime', 'perl:runtime',
		'pkgconfig:devel', 'pygtk:devel' ]

    name = "deskbar-applet"
    version = "0.8.2"

    def setup(r):
        r.addArchive("http://raphael.slinckx.net/files/%(name)s-%(version)s.tar.gz")
	r.Configure()
	r.Make()
	r.MakeInstall()
