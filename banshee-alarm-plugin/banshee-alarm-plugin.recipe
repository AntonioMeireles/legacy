class BansheeAlarmPlugin(AutoPackageRecipe):
    name = 'banshee-alarm-plugin'
    version = '0.4.3'
 
    buildRequires = ['GConf:runtime', 'banshee:devellib', 'gettext:runtime', 'gtk-sharp:cil', 'intltool:runtime', 'mono:cil', 'mono:devel', 'mono:runtime', 'pkgconfig:devel', 'mono-addins:cil', 'ndesk-dbus:cil']
 
    def setup(r):
	#r.addSvnSnapshot('http://banshee-unofficial-plugins.googlecode.com/svn/trunk/')
	r.addArchive('http://banshee-unofficial-plugins.googlecode.com/files/banshee-alarm-extension-%(version)s.tar.gz')
	#r.Run('./autogen.sh', dir='%(name)s')
	r.Configure()
	r.Make()
	r.MakeInstall()
