class Kupfer(CPackageRecipe):
    name = 'kupfer'
    version = 'v201'
 
    buildRequires = ['python-setuptools:python', 'dbus-python:python', 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-python-desktop:python', 'intltool:runtime', 'python:devel', 'pyxdg:python', 'pygtk:runtime', 'python-keybinder:python', 'gnome-python:python', 'pygtk:python', 'glibc:devel', 'gdata-python:python', 'shared-mime-info:runtime', 'gnome-doc-utils:runtime', 'pygtk:devel', 'pygtk:devellib', 'python-keyring:python']
 
    def setup(r):
	r.macros.altver = r.macros.version.replace('_', '-')
        r.addArchive('http://kaizer.se/publicfiles/kupfer/kupfer-%(altver)s.tar.gz')
        r.Configure(' --prefix=%(prefix)s --destdir=%(destdir)s', configureName='waf configure')
        r.Make(makeName='./waf build')
        r.Run('./waf --destdir=%(destdir)s install')


