class Kupfer(CPackageRecipe):
    name = 'kupfer'
    version = 'c16'
 
    buildRequires = ['python-setuptools:python', 'dbus-python:python', 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-python-desktop:python', 'intltool:runtime', 'python:devel', 'pyxdg:python', 'pygtk:runtime', 'python-keybinder:python', 'gnome-python:python', 'pygtk:python', 'gtk:runtime']
 
    def setup(r):
        r.addArchive('http://kaizer.se/publicfiles/kupfer/%(name)s-%(version)s.tar.gz')
        r.Configure(' --prefix=%(prefix)s --destdir=%(destdir)s', configureName='waf configure')
        r.Make(makeName='./waf build')
        r.Run('./waf --destdir=%(destdir)s install')


