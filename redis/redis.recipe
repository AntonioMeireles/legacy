class Redis(CPackageRecipe):
    name = 'redis'
    version = '2.2.2'

    buildRequires = [ ]

    def setup(r):
        r.addArchive('http://redis.googlecode.com/files/')
        r.Replace('/usr/local', '%(destdir)s/%(prefix)s/', 'src/Makefile')
        r.MakeDirs('%(bindir)s')
        r.Make()
        r.MakeInstall()
        r.Install('redis.conf', '%(sysconfdir)s/redis/')
