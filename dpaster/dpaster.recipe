loadInstalled('python=foresight.rpath.org@fl:2-qa')
class Dpaster(PackageRecipe):
    name = 'dpaster'
    version = '0.1'
 
    buildRequires = ['twill:python','python:devel']
 
    def setup(r):
        r.macros.sitepkgs = Python.sitepkgs
        r.addArchive('http://pfein.s3.amazonaws.com/dpaster.tar.gz')
        r.Install('dpaster.py','%(sitepkgs)s/')
        r.Install('dpaster','%(bindir)s/')
        r.Requires("argparse-python:python",'%(bindir)s/dpaster')

