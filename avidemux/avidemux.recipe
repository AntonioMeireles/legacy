class Avidemux(CPackageRecipe):
    name = 'avidemux'
    version = '2.5.2'

    packageSummary = 'Avidemux is a free video editor'
    packageDescription = 'Avidemux is a free video editor designed for simple cutting, filtering and encoding tasks. It supports many file types, including AVI, DVD compatible MPEG files, MP4 and ASF, using a variety of codecs. Tasks can be automated using projects, job queue and powerful scripting capabilities'
 
    buildRequires = ['SDL:devel', 'a52dec:devel', 'alsa-lib:devel', 'atk:devel', 'autoconf:runtime', 'cairo:devel', 'expat:devel', 'faac:devel', 'faad2:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'lame:devel', 'libX11:devel', 'libXext:devel', 'libXrender:devel', 'libXv:devel', 'libpng:devel', 'libstdc++:devel', 'libvorbis:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'x264:devel', 'xvidcore:devel', 'zlib:devel', 'automake:runtime', 'esound:devel', 'intltool:runtime', 'libICE:devel', 'libdca:devel', 'dbus:devel', 'libSM:devel', 'libXinerama:devel', 'libXrandr:devel', 'libxml2:runtime', 'libxslt:runtime', 'openssl:devel', 'qt4-core:devellib', 'qt4-gui:devellib', 'qt4:devel', 'qt:devel', 'desktop-file-utils:runtime']
 
    def setup(r):
	r.addArchive('mirror://sourceforge/avidemux/%(name)s_%(version)s.tar.gz')
	r.addSource('avidemux.desktop')

        r.disableParallelMake()
	r.MakeDirs('build')
	r.Run('cmake -DCMAKE_INSTALL_PREFIX=%(prefix)s ..', dir='build')
	r.Make(dir='build')
	r.MakeInstall(dir='build')

	r.Install('avidemux_icon.png', '%(datadir)s/pixmaps/')
	r.Desktopfile('avidemux.desktop')
	r.NonBinariesInBindirs(exceptions='%(bindir)s/i18n/')
