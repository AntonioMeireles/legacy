class Avidemux(AutoPackageRecipe):
    name = 'avidemux'
    version = '2.4.4'
 
    buildRequires = ['SDL:devel', 'a52dec:devel', 'alsa-lib:devel', 'atk:devel', 'autoconf:runtime', 'cairo:devel', 'expat:devel', 'faac:devel', 'faad2:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'lame:devel', 'libX11:devel', 'libXext:devel', 'libXrender:devel', 'libXv:devel', 'libpng:devel', 'libstdc++:devel', 'libvorbis:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'x264:devel', 'xvidcore:devel', 'zlib:devel', 'automake:runtime', 'esound:devel', 'intltool:runtime', 'libICE:devel', 'libdca:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/avidemux/%(name)s_%(version)s.tar.gz')
        r.Run('make -f Makefile.dist')
