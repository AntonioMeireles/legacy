class PyInotify(CPackageRecipe):
    name = 'pyinotify'
    version = '0.7.1'

    buildRequires = [
        'python:devel',
        'python-setuptools:python',
      ]

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.PythonSetup()
