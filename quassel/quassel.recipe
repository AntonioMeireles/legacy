loadSuperClass('cmakepackage')
class Quassel(CMakePackageRecipe):

    name = 'quassel'
    version = '0.5.1'

    buildRequires = [
        'libstdc++:devel', 'openssl:devel', 'qt4:devel'
    ]

    useKDE = True

    def unpack(r):

        if r.useKDE:
            r.cmakeArgs += ' -DWITH_KDE=TRUE '
            r.buildRequires += [
                'automoc:runtime', 'kdelibs:devel',
            ]

        r.cmakeArgs += (
            ' -DWANT_MONO=FALSE '
            ' -DEMBED_DATA=FALSE '
            ' -DCMAKE_SKIP_RPATH=TRUE '
        )

        r.addArchive('http://quassel-irc.org/pub/')
        #r.addGitSnapshot('git://git.quassel-irc.org/quassel.git', tag=r.version.split('+')[-1])

    def policy(r):

        r.Doc('dev-notes/*')
        r.AutoDoc(exceptions='/.+/')

        r.TagSpec('desktop-file', '%(datadir)s/applications/')
        r.TagSpec('gtk-update-icon-cache', '%(datadir)s/icons/')

