class Quassel(AutoPackageRecipe):

    name = 'quassel'
    version = '0.2.0+r584'

    buildRequires = [
        'libstdc++:devel', 'qt4:devel'
    ]

    def unpack(r):

        rev = r.version.split('+')[1][1:]
        r.addSvnSnapshot('http://svn.quassel-irc.org/trunk', revision=rev)

        r.addSource('quassel.desktop', dir='%(datadir)s/applications/')
        r.addSource('quassel-client.desktop', dir='%(datadir)s/applications/')

    def configure(r):

        r.Make(makeName='qmake-qt4')

    def makeinstall(r):

        for app in ('quassel', 'quasselclient',  'quasselcore'):
            r.Install('build/targets/%s' % app, '%(bindir)s/')

    def policy(r):

        r.Doc('dev-notes/*')
        r.AutoDoc(exceptions='/.+/')

        r.TagSpec('desktop-file', '%(datadir)s/applications/')

        for p in ('client', 'core'):
            r.PackageSpec('quassel-'+p, '%(bindir)s/quassel'+p)

        r.PackageSpec(
            'quassel-client',
            '%(datadir)s/applications/quassel-client.desktop'
        )

