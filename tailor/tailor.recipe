class Tailor(PackageRecipe):
    name = 'tailor'
    version = '0.9.27'

    buildRequires = [ 'python:runtime', 'mercurial:python',
        'python-setuptools:python', ]

    def setup(r):
        r.addArchive('http://darcs.arstecnica.it/')
        r.PythonSetup()
        r.Requires('cvs:runtime', '.*/site-packages/.*/cvs.py')
        r.Requires('cvsps:runtime', '.*/site-packages/.*/cvs.py')
