class MoovidaPluginsBad(BuildPackageRecipe):
    name = 'moovida-plugins-bad'
    version = '1.0.9'
 
    buildRequires = [ 'python-setuptools:python',  'pyxdg:python', 'avahi:python', 'dbus-python:python', 'gst-python:python', 'pigment-python:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python-twisted:python', 'python:devel', 'moovida:python', 'python-zopeinterface:python', 'pyOpenSSL:python', 'python-cssutils:python']
 
    def setup(r):
        r.addArchive('http://www.moovida.com/media/public/moovida-plugins-bad-%(version)s.tar.gz')
        r.Run('python setup.py build')
        r.Run('python setup.py install --root=%(destdir)s')
        r.Requires('python-cssutils:python','%(libdir)s/python2.6/site-packages/elisa/plugins/pigment/__init__.py')
