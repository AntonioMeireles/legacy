class FreeDesktop(GroupRecipe):
    name = 'group-freedesktop'
    version = '0.9.0.2'
    def setup(r):
        r.setLabelPath('foresight.rpath.org@fl:desktop', 'conary.rpath.com@rpl:rpl1', 'contrib.rpath.org@rpl:devel')
        r.addTrove("dbus")
        r.addTrove("dbus-mono", source='dbus')
        r.addTrove("desktop-file-utils")
        r.addTrove("enchant")
        r.addTrove("fontconfig")
        r.addTrove("group-galago")
        r.addTrove("hal")
        r.addTrove("hal-gnome", source='hal')
	r.addTrove("hal-sharp")
        r.addTrove("hicolor-icon-theme")
        r.addTrove("icon-slicer")
        r.addTrove("libxklavier")
        r.addTrove("pkgconfig")
        r.addTrove("poppler")
        r.addTrove("shared-mime-info")
        r.addTrove("startup-notification")
        
