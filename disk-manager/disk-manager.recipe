class DiskManager(AutoPackageRecipe):

    buildRequires = [ 'pygobject:python', 'pygtk:python', 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-python-extras:python', 'notify-python:python', 'perl:runtime', 'intltool:runtime' ]

    name = 'disk-manager'
    version = '0.5'

    def unpack(r):
        r.addArchive('http://flomertens.free.fr/disk-manager/download/source/')
	r.Replace('gksu','gksudo','data/disk-manager.desktop.in')
