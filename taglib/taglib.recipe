loadSuperClass('cmakepackage')
class TagLib(CMakePackageRecipe):

   name = "taglib"
   version = "1.6.1"

   buildRequires = [
        'libstdc++:devel', 'zlib:devel'
   ]

   def setup(r):
        r.addArchive('http://developer.kde.org/~wheeler/files/src/')
#        r.addPatch('taglib-1.5rc1-multilib.patch')
        r.addPatch('taglib-1.6.1-20091103.patch')
	#r.Configure('--enable-mp4  --enable-sf')
	r.CMake('-DWITH_ASF=1 -DWITH_MP4=1 ..', objDir = '%(target)s')
	r.Make(dir = '%(target)s')
	r.MakeInstall(dir = '%(target)s')

        # FIXME - understand why things on x86_64 get placed in /usr/lib 
        if Arch.x86_64:
           for f in ['taglib_c.pc', 'taglib.pc']:
              r.Replace('libdir=/usr/lib', 'libdir=%(libdir)s', '/usr/lib/pkgconfig/'+f)
              r.Replace('Libs: -L/usr/lib ', 'Libs: -L%(lib)s ', '/usr/lib/pkgconfig/'+f)
