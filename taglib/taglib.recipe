loadSuperClass('cmakepackage')
class TagLib(CMakePackageRecipe):

   name = "taglib"
   version = "1.6.1"

   buildRequires = [
        'libstdc++:devel', 'zlib:devel'
   ]

   def setup(r):
        r.addArchive('http://developer.kde.org/~wheeler/files/src/')
        if Arch.x86:
           r.macros.libsuffix = ''
        else:
           r.macros.libsuffix = '64'
	r.CMake('-DCMAKE_INSTALL_PREFIX=%(prefix)s -DWITH_ASF=1 -DWITH_MP4=1 -DLIB_SUFFIX=%(libsuffix)s ..', objDir = '%(target)s')
	r.Make(dir = '%(target)s')
	r.MakeInstall(dir = '%(target)s')

