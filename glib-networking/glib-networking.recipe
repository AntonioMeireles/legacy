class GlibNetworking(AutoPackageRecipe):
    name = 'glib-networking'
    version = '2.28.6.1'
 
    buildRequires = ['glib:devel', 'gnutls:devel', 'gettext:runtime',
                     'intltool:runtime', 
                     'libgcrypt:devel', 'libgpg-error:devel', 'libproxy:devel', 
                     'pkgconfig:devel', 'openssl:devel']
 
    def unpack(r):
        r.addArchive('http://ftp.gnome.org/pub/gnome/sources/%(name)s/%(major_version)s/')
        r.addPatch('fix_a_crash_with_a_null_gerror.patch')
        r.addPatch('dont_reuse_tls_session_with_a_different_sni.patch')

    def configure(r):
        r.Configure(' --with-libproxy --with-ca-certificates=%(sysconfdir)s/ssl/certs/ca-bundle.crt')
