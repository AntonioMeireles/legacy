class CompizManager(PackageRecipe):
    name = 'compiz-manager'
    version = '0.6.0'
    buildRequires = []

    def setup(r):
        r.addArchive('http://releases.compiz-fusion.org/%(version)s/')
        r.Replace('PATH="/usr/local', 'PATH="/usr', 'compiz-manager', lines=(30,31))
        r.Replace('COMPIZ_NAME="compiz"', 'COMPIZ_NAME="compiz.real"', 'compiz-manager', lines=35)
        r.Install('compiz-manager', '%(bindir)s/compiz')
        r.Requires('compiz:runtime', 'compiz-manager:runtime')
