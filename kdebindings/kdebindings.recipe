loadSuperClass('kdecorepackage')
class kdeBindings(kdeCorePackageRecipe):

    name = 'kdebindings'
    version = '4.4.1+r1100563'

    buildRequires = [
        'akonadi:devel', 'boost:devel', 'dbus-python:python', 'mono:cil',
        'mono:devel', 'mono:runtime', 'okular:devel',
        'polkit-qt-1:devel',
        'PyQt4:python', 'python:devel', 'qimageblitz:devel',
        'QScintilla2:devel', 'QScintilla2:python', 'ruby:devellib',
        'ruby:runtime', 'sip:devel', 'sip:runtime', 'soprano:devel',
        'attica:devel'
    ]

    modules = [
        ('smokegen', 'generator'),
        ('smoke-qt',
            'smoke/qt',
            'smoke/qsci',
            'smoke/qtscript',
            'smoke/qttest',
            'smoke/qtuitools',
            'smoke/qtwebkit'),
        ('smoke-kde',
            'smoke'),
        ('pykde',
            'python/pykde4'),
        ('kross-python',
            'python/krosspython'),
        ('qyoto',
            'csharp/qyoto',
            'csharp/qtscript',
            'csharp/qttest',
            'csharp/qtuitools',
            'csharp/qtwebkit'),
        ('kimono',
            'csharp'),
        ('qtruby',
            'ruby/qtruby',
            'ruby/qtscript',
            'ruby/qttest',
            'ruby/qtuitools',
            'ruby/qtwebkit'),
        ('kross-ruby',
            'ruby/krossruby'),
        ('korundum',
            'ruby'),
    ]

    def postUnpack(r):

        r.addPatches(
            '01_python_modules_dont_link_against_libpython.diff',
            '02_include_default_settings_in_python_cmakelist.diff',
            '03_csharp_dont_use_qyotoshared_directly.diff',
            '04_fix_ruby_requires.diff',
            '05_rbqtapi_ruby1.8.diff',
            '07_fix_kpythonpluginfactory_build.diff',
            '10_fix_kimono_dllimports.diff',
            '11_make_pykde4_respect_sip_flags.diff',
            '12_pythonpluginfactory_use_versioned_python_lib.diff',
        )

        r.Replace('ruby1.8', 'ruby', 'ruby/qtruby/bin/rbqtapi')

        r.addPatch('kdebindings-generators-undefined.patch')

