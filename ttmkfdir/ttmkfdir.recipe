class Ttmkfdir(CPackageRecipe):
    buildRequires = [ 'freetype:devel', 'libtool:runtime', 'zlib:devel',
                      'flex:runtime', 'gcc-c++:runtime',
                      'pkgconfig:devel' ]

    name = 'ttmkfdir'
    version = '3.0.9'

    def setup(r):
        srpm = "ftp://download.fedora.redhat.com/pub/fedora/linux/core/2/SRPMS/ttmkfdir-3.0.9-11.src.rpm"

        r.addArchive("ttmkfdir-%(version)s.tar.bz2", rpm=srpm)
        r.addPatch("ttmkfdir-3.0.9-cpp.patch", rpm=srpm)
        r.addPatch("ttmkfdir-3.0.9-zlib.patch", rpm=srpm)
        r.addPatch("ttmkfdir-3.0.9-fix-freetype217.patch", rpm=srpm)
        r.addPatch("ttmkfdir-3.0.9-namespace.patch", rpm=srpm)
        r.addPatch("ttmkfdir-3.0.9-defautl_enc_size.patch", rpm=srpm)

        r.Make()
        r.MakeInstall()
