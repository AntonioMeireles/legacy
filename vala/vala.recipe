class VaLa(AutoPackageRecipe):
    name = 'vala'
    version = '0.0.9'
 
    buildRequires = ['flex:runtime', 'glib:devel', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://www.paldo.org/%(name)s/'
                     '%(name)s-%(version)s.tar.bz2')
