class GtkUbuntuLooks(AutoPackageRecipe):

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gtk:devel', 'libpng:devel',
        'pango:devel', 'pkgconfig:devel', 'zlib:devel','libICE:devel',
        'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libXau:devel' ]

    name = 'gtk-ubuntulooks-engine'
    version = '0.9.11'

    def unpack(r):
        r.addArchive('http://archive.ubuntu.com/ubuntu/pool/main/u/ubuntulooks/ubuntulooks_%(version)s.orig.tar.gz')
	r.addPatch('http://archive.ubuntu.com/ubuntu/pool/main/u/ubuntulooks/ubuntulooks_0.9.11-2.diff.gz')
