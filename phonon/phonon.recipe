loadSuperClass('cmakepackage')
class Phonon(CMakePackageRecipe):

    name = 'phonon'
    version = '4.3.0+r914540'

    buildRequires = [
        'alsa-lib:devel', 'automoc:runtime', 'glib:devel',
        'gst-plugins-base:devel', 'gstreamer:devel', 'libstdc++:devel',
        'libX11:devel', 'libxcb:devel', 'libXext:devel', 'libxml2:devel',
        'Mesa:devel', 'qt4:devel', 'xine-lib:devel'
    ]

    def unpack(r):

        r.macros.revision = r.version.split('+')[1][1:]
        r.addAction('svn co -r %(revision)s svn://anonsvn.kde.org/home/kde/tags/kdesupport-for-4.2/kdesupport/phonon')

