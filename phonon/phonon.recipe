loadSuperClass('cmakepackage')
class Phonon(CMakePackageRecipe):

    name = 'phonon'
    version = '4.6.0'

    buildRequires = [
        'alsa-lib:devel', 'automoc:runtime', 'glib:devel',
        'gst-plugins-base:devel', 'gstreamer:devel', 'libstdc++:devel',
        'libxcb:devel', 'Mesa:devel', 'pulseaudio:devel', 'qt4:devel',
        'xine-lib:devel', 'dbus:devel', 'libXScrnSaver:devel', 'libXcomposite:devel', 'libXcursor:devel', 'libXft:devel', 'libXi:devel', 'libXpm:devel', 'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel', 'xz:runtime', 'libqzeitgeist:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://kde/stable/phonon/%(version)s/src/')

