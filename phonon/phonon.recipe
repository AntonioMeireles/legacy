loadSuperClass('cmakepackage')
class Phonon(CMakePackageRecipe):

    name = 'phonon'
    version = '4.3.80+r1090344'

    buildRequires = [
        'alsa-lib:devel', 'glib:devel', 'gst-plugins-base:devel',
        'gstreamer:devel', 'libstdc++:devel', 'libxcb:devel', 'Mesa:devel',
        'pulseaudio:devel', 'qt4:devel', 'xine-lib:devel'
    ]

    def unpack(r):

        r.macros.revision = r.version.split('+')[1].strip('r')
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/tags/kdesupport-for-4.4/phonon', revision='%(revision)s'
        )

