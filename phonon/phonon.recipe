loadSuperClass('cmakepackage')
class Phonon(CMakePackageRecipe):

    name = 'phonon'
    version = '4.4.2'

    buildRequires = [
        'alsa-lib:devel', 'automoc:runtime', 'glib:devel',
        'gst-plugins-base:devel', 'gstreamer:devel', 'libstdc++:devel',
        'libxcb:devel', 'Mesa:devel', 'pulseaudio:devel', 'qt4:devel',
        'xine-lib:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://kde/stable/phonon/%(version)s/')

