class fltk(AutoPackageRecipe):
    name = 'fltk'
    version = '1.1.6'

    buildRequires = [ 'libjpeg:devel', 'libpng:devel', 'xorg-x11:devel',
        'zlib:devel', 'groff:runtime', ]

    def unpack(r):
        r.macros.url = 'http://ftp.easysw.com/pub/fltk/%(version)s/'
        r.addArchive('%(url)s/%(name)s-%(version)s-source.tar.bz2')
