class fltk(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "fltk"
    version = "1.1.6"

    def setup(r):
        r.addArchive('http://ftp.funet.fi/pub/mirrors/ftp.easysw.com/ftp.easysw.com/pub/%(name)s/%(version)s/%(name)s-%(version)s-source.tar.bz2')
        r.Configure('--prefix=/usr')
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('ANNOUNCEMENT', 'CHANGES', 'COPYING', 'CREDITS',
              'README')
