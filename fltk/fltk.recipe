class fltk(CPackageRecipe):
    name = 'fltk'
    version = '1.1.7'

    buildRequires = [ 'Mesa:devel','freetype:devel', 'libXft:devel', 'groff:runtime', 'libjpeg:devel',
                      'libpng:devel', 'libX11:devel', 'libXext:devel', 'libXft:devel',
                      'libXt:devel', 'libstdc++:devel', 'zlib:devel', 'xproto:devel' ]

    def setup(r):
        r.macros.url = 'http://ftp.easysw.com/pub/fltk/%(version)s/'
        r.addArchive('%(url)s/%(name)s-%(version)s-source.tar.bz2')
        r.Configure(' prefix=%(destdir)s%(prefix)s'
                    ' --enable-threads --enable-shared --enable-xft'
                    ' --enable-gl --with-x')
        r.Make('DESTDIR=%(destdir)s/')
        r.MakeInstall()
        r.ComponentSpec('devel', '%(bindir)s/fluid')

