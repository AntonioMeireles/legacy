class fltk(CPackageRecipe):
    name = 'fltk'
    version = '1.1.7'

    buildRequires = [ 'freetype:devel', 'libXft:devel', 'groff:runtime', 'libjpeg:devel',
                      'libpng:devel', 'libX11:devel', 'libXext:devel', 'libXft:devel',
                      'libXt:devel', 'libstdc++:devel', 'zlib:devel', 'xproto:devel' ]

    def setup(r):
        r.macros.url = 'http://ftp.easysw.com/pub/fltk/%(version)s/'
        r.addArchive('%(url)s/%(name)s-%(version)s-source.tar.bz2')
        r.Configure(' --enable-threads --enable-shared --enable-xft --enable-gl')
        r.Make()
        r.MakeInstall()
        # symlinking the shared libraries does not work, really. so we do it ourselves.
        r.Symlink('%(libdir)s/%(libdir)s/libfltk.so','%(libdir)s/libfltk.so.1.1')
        r.Symlink('%(libdir)s/%(libdir)s/libfltk_forms.so','%(libdir)s/libfltk_forms.so.1.1')
        r.Symlink('%(libdir)s/%(libdir)s/libfltk_images.so','%(libdir)s/libfltk_images.so.1.1')
        r.Symlink('%(libdir)s/%(libdir)s/libfltk_gl.so','%(libdir)s/libfltk_gl.so.1.1')
        r.DanglingSymlinks(exceptions='%(libdir)s/libfltk.*')
        r.EnforceSonameBuildRequirements(exceptions='.*')

