class fltk(AutoPackageRecipe):
    name = 'fltk'
    version = '1.1.7'

    buildRequires = [ 'groff:runtime', 'libjpeg:devel', 'libpng:devel', 
                      'libX11:devel', 'libXext:devel', 'libXt:devel', 'libstdc++:devel',
                      'zlib:devel', 'xproto:devel' ]

    def unpack(r):
        r.macros.url = 'http://ftp.easysw.com/pub/fltk/%(version)s/'
        r.addArchive('%(url)s/%(name)s-%(version)s-source.tar.bz2')
        r.Configure('--enable-threads')
