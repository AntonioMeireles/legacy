class Libffi(AutoPackageRecipe):
    name = 'libffi'
    version = '3.0.8'
 
    buildRequires = ['install-info:runtime']
 
    def unpack(r):
        r.addArchive('ftp://sourceware.org/pub/libffi/libffi-3.0.8.tar.gz')
	r.addPatch('libdir.patch')

    def policy(r):
        r.Move('%(libdir)s/*.so*','%(libdir)s/%(name)s-%(version)s/')
        r.Move('%(libdir)s/*.a*','%(libdir)s/%(name)s-%(version)s/')
