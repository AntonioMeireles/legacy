class GimpLqrPlugin(AutoPackageRecipe):
    name = 'gimp-lqr-plugin'
    version = '0.3.0'

    buildRequires = ['atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'gimp:devel', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel']

    def unpack(r):
        r.macros.archive_version = '%(version)s-3'
        r.addArchive('http://liquidrescale.wikidot.com/local--files/en:download-page/')
