class libsexymm(PackageRecipe):
    buildRequires = [ 'glibc:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'gcc:devel', 'glib:devel', 'glibmm:devel', 'gtk:devel', 'gtkmm:devel', 'libpng:devel', 'libsexy:devel', 'libsigc++:devel', 'pango:devel', 'xorg-x11:devel', 'zlib:devel', 'binutils:runtime', 'pkgconfig:devel' ]
    name = "libsexymm"
    version = "0.1.0"

    def setup(r):
        r.macros.optflags = "-g -Os"
        r.addArchive('http://osiris.chipx86.com/projects/libsexy/releases/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
