class WxPython(CPackageRecipe):
    name = 'wxPython'
    version = '2.8.1.1'

    buildRequires = [ 'libstdc++:devel', 'wxWidgets:devel', 'pkgconfig:devel',
        'gtk:devel', ]

    def setup(r):
        r.addArchive('mirror://sourceforge/wxpython/wxPython-src-%(version)s.tar.bz2')
        r.Replace('BUILD_GLCANVAS = 1', 'BUILD_GLCANVAS = 0', 'wxPython/config.py')
        r.PythonSetup(dir='wxPython')
