class WxPython(CPackageRecipe):
    buildRequires = [ 'libstdc++:devel', 'wxWidgets:devel','libxml2:python', 'mx:python', 'python-numeric:python' ]

    name = 'wxPython'
    version = '2.6.3.3'

    def setup(r):
	r.addArchive('http://umn.dl.sourceforge.net/sourceforge/wxpython/%(name)s-src-%(version)s.tar.bz2')

        r.Replace('BUILD_GLCANVAS = 1', 'BUILD_GLCANVAS = 0', 'wxPython/config.py')
        r.Replace('BUILD_ANIMATE = 1', 'BUILD_ANIMATE = 0', 'wxPython/config.py')
        r.Replace('UNICODE = 0', 'UNICODE = 1', 'wxPython/config.py')

        r.Run('python setup.py build', dir = 'wxPython')
        r.Run('python setup.py install --root=%(destdir)s', dir = 'wxPython')
