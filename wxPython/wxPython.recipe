class WxPython(CPackageRecipe):

    name = 'wxPython'
    version = '2.8.7.1'

    buildRequires = [ 'python-setuptools:python', 'gcc-c++:runtime', 
'glibc:devel', 'gtk:devel', 'libgcc:devellib', 'libstdc++:devel', 'libxml2:python',
'mx:python', 'pkgconfig:devel', 'python-ctypes:python', 'python:devel',
'python-numeric:python', 'wxWidgets:devel' ]

    def setup(r):
	r.addArchive('mirror://sourceforge/wxpython/%(name)s-src-%(version)s.tar.bz2')
        # We need to disable GLCANVAS because breaks build:
        r.Replace('BUILD_GLCANVAS = 1','BUILD_GLCANVAS = 0',
                  'wxPython/config.py')
        # Remove eggs because they break install:
        r.Remove('wxPython/wx/tools/Editra/plugins/*.egg')
        # Setup with some fixes:
        r.PythonSetup(rootDir='%(destdir)s', dir='wxPython',purePython=False)
