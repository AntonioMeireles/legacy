class WxPython(AutoPackageRecipe):
    name = 'wxPython'
    version = '2.8.1.1'

    buildRequires = [ 'libstdc++:devel', 'wxWidgets:devel', 'pkgconfig:devel',
        'gtk:devel', 'expat:devel', 'libSM:devel', 'libXinerama:devellib',
        'libXxf86vm:devel', 'libjpeg:devel', 'libtiff:devel', 'zlib:devel', ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/wxpython/wxPython-src-%(version)s.tar.bz2')
