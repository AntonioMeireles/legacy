class PdfMod(PackageRecipe):
    name = 'pdf-mod'
    version = '20090729'
 
    buildRequires = ['desktop-file-utils:runtime', 'file:runtime', 'gettext:runtime', 'gtk-sharp:cil', 'intltool:runtime', 'make:runtime', 'mono:cil', 'mono:devel', 'mono:runtime', 'perl:runtime', 'pkgconfig:devel']
 
    def setup(r):
        r.addGitSnapshot('git://git.gnome.org/pdfmod')
	r.Configure(configureName='autogen.sh')
	r.Make()
	r.MakeInstall()
