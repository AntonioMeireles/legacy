class dejavuTTF(PackageRecipe):

    name = 'dejavu-ttf'
    version = '2.13'

    buildRequires = [
        'fontconfig:runtime', 'mkfontdir:runtime'
    ]

    def setup(r):

        r.Doc('*.txt')
        r.Doc('AUTHORS', 'BUGS')

        r.addArchive('mirror://sourceforge/dejavu/')

        r.Install('*.ttf', '%(datadir)s/fonts/%(name)s/')

