class Libnfs(AutoPackageRecipe):
    name = 'libnfs'
    version = '1.3.0'
 
    buildRequires = [
        'autoconf:runtime',
        'pkgconfig:devel',
        ]
 
    def unpack(r):
        r.addGitSnapshot('git://github.com/sahlberg/libnfs.git')

    def configure(r):
        r.Run('autoreconf -vif')
        r.Configure('--prefix=%(prefix)s')
