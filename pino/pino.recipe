class Pino(CPackageRecipe):
    name = 'pino'
    version = '0.2.6'
 
    buildRequires = [
        'WebKit:devel',
        'aspell:devel', 'atk:devel',
        'cairo:devel',
        'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime',
        'fontconfig:devel', 'freetype:devel',
        'gettext:runtime', 'glib:devel', 'gtk:devel', 'gtk:runtime',
        'gtkspell:devel',
        'intltool:runtime', 
        'libgee:devel', 'libnotify:devel', 'libsoup:devel', 'libxml2:devel',
        'pango:devel', 'pkgconfig:devel',
        'unique:devel',
        'vala:runtime'
    ]
 
    def setup(r):
        r.addArchive('http://pino-twitter.googlecode.com/files/')
        r.ManualConfigure(' --prefix=%(prefix)s --destdir=%(destdir)s',
configureName='waf configure')
        r.Make(makeName='./waf build')
        r.Run('./waf --destdir=%(destdir)s install')
