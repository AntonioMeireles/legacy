class Pino(CPackageRecipe):
    name = 'pino'
    version = '0.2.1'
 
    buildRequires = ['WebKit:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'gtk:runtime', 'libgee:devel', 'libnotify:devel', 'libsoup:devel', 'libxml2:devel', 'pango:devel', 'unique:devel', 'vala:runtime', 'gettext:runtime', 'intltool:runtime', 'pkgconfig:devel']
 
    def setup(r):
        r.addArchive('http://pino-twitter.googlecode.com/files/')
        r.ManualConfigure(' --prefix=%(prefix)s --destdir=%(destdir)s',
configureName='waf configure')
        r.Make(makeName='./waf build')
        r.Run('./waf --destdir=%(destdir)s install')
