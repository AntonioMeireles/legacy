loadSuperClass('rpmpackage')
class YPTools(RPMPackageRecipe, AutoPackageRecipe):
    name = 'yp-tools'
    version = '2.10'
    rpmUpVer = '2.9'
    rpmRelease = '0.1'

    def unpack(r):
        r.addArchive('ftp://ftp.kernel.org/pub/linux/utils/net/NIS/yp-tools-%(version)s.tar.bz2', keyid='517D0F0E')
        r.addPatch('yp-tools-2.7-md5.patch', rpm=r.srpm)

    def configure(r):
        r.Configure('--disable-domainname')

    def policy(r):
        r.Doc('etc/nsswitch.conf')
        r.SetModes('%(bindir)s/*', '%(sbindir)s/*', 0755)
        r.Requires('ypbind:runtime', '%(bindir)s/.*', '%(sbindir)s/.*')
