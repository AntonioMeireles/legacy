class GnomeRdp(AutoPackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'mono:runtime', 'gettext:runtime', 'gnome-sharp:lib', 'gtk-sharp:lib', 'mono:lib', 'perl:runtime', 'pkgconfig:devel', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'mono:cil', 'mono:devel', 'intltool:runtime', 'gnome-sharp:devellib' ]
    name = "gnome-rdp"
    version = "0.2.2.3"

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

    def policy(r):
        for dep in ['gnome-terminal:runtime', 'openssh-client:runtime', 'rdesktop:runtime', 'tightvnc:runtime']:
            r.Requires(dep,'%(bindir)s/%(name)s')

        r.Replace('\/usr\/lib','%(libdir)s','%(bindir)s/gnome-rdp')
