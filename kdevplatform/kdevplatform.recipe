loadSuperClass('kdepackage')
class KDevPlatform(kdePackageRecipe):

    name = 'kdevplatform'
    version = '1.0.90'

    buildRequires = [
        'apr-util:devel', 'apr:devel', 'boost:devel', 'qjson:devel',
        'subversion:devel'
    ]

    def unpack(r):

        r.macros.git_tag = 'v'+r.version.replace('+', '-')
        r.addGitSnapshot('git://gitorious.org/kdevelop/kdevplatform.git', branch='1.1', tag='%(git_tag)s')

