loadSuperClass('rpmpackage')
class Byacc(RPMPackageRecipe, CPackageRecipe):
    name = 'byacc'
    version = '1.9'
    rpmRelease = '29.2.2'

    def setup(r):
        r.addArchive("yacc-%(version)s-fbsd.tar.gz", rpm=r.srpm)
        r.addPatch('bsdyacc-linux.patch')
        r.addPatch('byacc-1.9-security.patch', rpm=r.srpm)

        r.Run('find . | xargs chmod u+w')
        r.Make('CFLAGS="%(cflags)s -DNDEBUG" LINKER=gcc')
        r.Install('yacc', '%(bindir)s/yacc', mode=0755)
        r.Install('yacc.1', '%(mandir)s/man1/yacc.1', mode=0644)
        r.Symlink('yacc', '%(bindir)s/byacc')
        r.Symlink('yacc.1.gz', '%(mandir)s/man1/byacc.1.gz')
