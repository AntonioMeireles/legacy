loadSuperClass('kdecorepackage.recipe')
class kdeAccessibility(kdeCorePackageRecipe):

    name = 'kdeaccessibility'
    version = '3.5.10'

    verify = False

    buildRequires = [
        'akode:devel', 'libtool:devel', 'kdelibs:lib'
    ]

    kdeCorePackageRecipe.extraConf += '--with-alsa --with-akode'

    modules = [
       ('kdeaccessibility-icons-mono', 'IconThemes'),
       ('kbstate', 'kbstateapplet'),
        'kmag',
        'kmousetool',
        'kmouth',
        'ksayit',
        'kttsd'
    ]

