loadInstalled('python')
loadSuperClass('rpmpackage')
class DBusPython(RPMPackageRecipe,AutoPackageRecipe):

    name = 'dbus-python'
    version = '0.83.0'
    rpmRelease = '3.fc10'
    rpmPatches = ['dbus-python-0.83.0-memleak.patch']
    buildRequires = [ 'dbus-glib:devel', 'dbus:devel', 'glib:devel',
                      'pkgconfig:devel', 'Pyrex:runtime', 'python:devel',
                      'libxml2:python', 'python-setuptools:python', 'pygobject:python' ]

    def policy(r):
        r.macros.pyver = Python.majversion
        r.Move('/usr/lib/python%(pyver)s/site-packages/*', '%(libdir)s/python%(pyver)s/site-packages/')
