class DBusPython(AutoPackageRecipe):

    name = 'dbus-python'
    version = '0.82.4'

    buildRequires = [ 'dbus-glib:devel', 'dbus:devel', 'glib:devel', 'pkgconfig:devel', 'pygobject:python', 'Pyrex:runtime', 'python:devel', 'libxml2:python', 'python-setuptools:python' ]

    def unpack(r):
        r.addArchive('http://dbus.freedesktop.org/releases/%(name)s/')
