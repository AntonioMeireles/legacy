class Fabric(PackageRecipe):
    name = 'Fabric'
    version = '0.9.2'

    buildRequires = [
        'paramiko:python',
        'pycrypto:python',
        'python-setuptools:python',
        'python:devel',
    ]

    def setup(r):
        r.addArchive("http://pypi.python.org/packages/source/F/%(name)s/")
        # http://bugs.debian.org/cgi-bin/bugreport.cgi?bug=600073
        r.Replace('pycrypto <2.1', 'pycrypto >=1.9', 'Fabric.egg-info/requires.txt')
        r.Replace('pycrypto <2.1', 'pycrypto >=1.9', 'setup.py')
        
        r.PythonSetup()
