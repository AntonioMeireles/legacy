class Fabric(PackageRecipe):
    name = 'Fabric'
    version = '0.9.0'

    buildRequires = [
        'paramiko:python',
        'pycrypto:python',
        'python-setuptools:python',
        'python:devel',
    ]

    def setup(r):
        r.addArchive("http://code.fabfile.org/projects/fabric/files/")
        r.PythonSetup()
