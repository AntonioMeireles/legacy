class Recipe(PackageRecipe):
    name = 'scribes'
    version = '0.2.4.3'

    buildRequires = ['desktop-file-utils:runtime', 'GConf:runtime',
                     'gnome-python-desktop:python',
                     'gnome-python-extras:python',
                     'gnome-python:python', 'pygtk:python',
                     'python-setuptools:python', 'scrollkeeper:runtime']

    def setup(r):
        r.addArchive('http://openusability.org/download.php/93/'
                     '%(name)s-%(version)s.tar.gz')
        r.addPatch('setup.py.diff')

        r.PythonSetup()
        r.Install('data/scribes.schemas', '/etc/gconf/schemas/scribes.schemas')
