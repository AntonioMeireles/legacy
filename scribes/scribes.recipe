class Scribes(AutoPackageRecipe):

    buildRequires = [ 'GConf:runtime', 'dbus-python:python',
        'desktop-file-utils:runtime', 'gnome-python-desktop:python',
        'gnome-python-extras:python', 'gnome-python:python',
        'pkgconfig:devel', 'pygobject:python', 'pygtk:python',
        'scrollkeeper:runtime', 'yelp:runtime' ]

    name = 'scribes'
    version = '0.2.9.80'

    def unpack(r):
        r.addArchive('http://scribes.sf.net/')
        r.Replace('777', '755', 'Makefile.in')
