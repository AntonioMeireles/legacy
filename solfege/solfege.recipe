class Solfege(AutoPackageRecipe):
    name = 'solfege'
    version = '3.14.9'
    packageSummary = "Solfege is free music education software. "
    packageDescription = "Use it to train your rhythm, interval, scale and chord skills. Solfege - Smarten your ears!"
 
    buildRequires = ['bzr:runtime',
		'desktop-file-utils:runtime',
		'gettext:runtime',
		'ghostscript:runtime', 
		'gnome-doc-utils:runtime', 
		'gnome-python-extras:python', 
		'librsvg:runtime', 
		'libxslt:runtime', 
		'pkgconfig:devel', 
		'pygobject:python', 
		'pygtk',
		'python:devel', 
		'swig:runtime', 
		'texinfo:runtime',  
		]

    def unpack(r):
        r.addArchive('mirror://sourceforge/solfege/%(name)s-%(version)s.tar.gz')
	r.Requires('TiMidity:runtime', '%(bindir)s/solfege')
