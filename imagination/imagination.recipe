class Imagination(CPackageRecipe):
    name = 'imagination'
    version = '2.0b1'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel', 'ffmpeg:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel', 'sox:devel', 'libxslt:runtime']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/imagination/imagination-2.0b1.tar.gz')
	r.Configure('--disable-scrollkeeper')
	r.Make()
	r.MakeInstall()
	r.Requires('ffmpeg:runtime','/usr/bin/imagination')
