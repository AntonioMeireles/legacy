class irrlicht(AutoPackageRecipe):
    name = 'irrlicht'
    version = '1.6+svn2915'

    buildRequires = [
        'Mesa:devel', 'libXxf86vm:devel', 'libstdc++:devel', 'python:bin', 'unzip:runtime'
    ]

    def setup(r):
        r.macros.version=r.version.split('+')[0]
        r.macros.rev=r.version.split('+')[-1][3:]
        r.addArchive('http://irrlicht.svn.sourceforge.net/viewvc/%(name)s/branches/releases/%(version)s.tar.gz?view=tar&pathrev=%(rev)s')
        r.addPatch('Makefile.patch')
        if Arch.x86_64:
            r.Replace('\$\(HOSTTYPE\)', 'x86_64', 'source/Irrlicht/Makefile')
        r.Make('sharedlib', dir='source/Irrlicht')
        r.MakeInstall(dir='source/Irrlicht')
