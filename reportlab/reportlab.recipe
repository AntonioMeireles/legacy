class ReportLab(PackageRecipe):
    buildRequires = ['PIL:python', 'PyYAML:python', 'python:devel',
        'freetype:devel', 'python-cssutils:python']
    name = 'reportlab'
    upversion = '2_3'
    version = upversion.replace('_', '.')

    def setup(r):
        r.macros.upversion = r.upversion
        r.addArchive('http://www.reportlab.org/ftp/ReportLab_%(upversion)s.tar.gz')
        # Fix python interpreter
        r.Replace(r"^#!/usr/pkg/bin/python$", "#!/usr/bin/python",
            "src/reportlab/graphics/barcode/test.py")

        r.PythonSetup()

        # build docs
        r.Replace(r"os\.system\(cmd\)$",
            "import subprocess; os.waitpid(subprocess.Popen(cmd, shell=True, env=dict(PYTHONPATH='%(destdir)s%(libdir)s/python2.6/site-packages')).pid, 0)",
            "docs/genAll.py")
        r.Run("PYTHONPATH=%(destdir)s%(libdir)s/python2.6/site-packages python docs/genAll.py")

        r.Install("docs/*.pdf", "%(thisdocdir)s/")
        r.Move('demos/*', '%(thisdocdir)s/demos/')
