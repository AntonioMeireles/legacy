class Patchutils(AutoPackageRecipe):
    name = 'patchutils'
    version = '0.2.30'

    # We only need xmlto if we are patching the documentation.
    #buildRequires = [ 'xmlto:runtime' ]
    buildRequires = [ 'perl:runtime' ]

    def unpack(r):
        r.addArchive('http://cyberelk.net/tim/data/patchutils/stable/%(name)s-%(version)s.tar.bz2')
