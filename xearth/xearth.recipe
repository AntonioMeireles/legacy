class Xearth(CPackageRecipe):
    name = 'xearth'
    version = '1.1'

    buildRequires = [ 'xorg-x11:devel', ]

    def setup(r):
        r.addArchive('http://burgh.linux.tucows.com/files/')
        r.addSource('radio-observatories.markerfile',
                    dest='%(datadir)s/%(name)s/')
        r.Run('xmkmf')
        r.MakeInstall('install.man')
        r.AutoDoc('BUILT-IN', 'GAMMA-TEST', 'HISTORY', 'gamma-test.gif')
