class Openscenegraph(CPackageRecipe):
    name = 'openscenegraph'
    version = '2.8.1'
 
    buildRequires = ['unzip:runtime', 'Mesa:devel', 'OpenEXR:devel', 'cairo:devel', 'cmake:runtime', 'curl:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gcc-c++:runtime', 'giflib:devel', 'glib:devel', 'gtk:devel', 'ilmbase:devel', 'jasper:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXScrnSaver:devel', 'libXau:devel', 'libXcomposite:devel', 'libXcursor:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXft:devel', 'libXi:devel', 'libXinerama:devel', 'libXpm:devel', 'libXrandr:devel', 'libXrender:devel', 'libXt:devel', 'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel', 'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'poppler-glib:devel', 'poppler:devel', 'zlib:devel']
 
    def setup(r):
        r.addArchive('http://www.openscenegraph.org/downloads/developer_releases/OpenSceneGraph-2.8.1-rc3.zip')
        r.CMake()
        r.Make()
        r.MakeInstall()


