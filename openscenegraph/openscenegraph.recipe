class Openscenegraph(CPackageRecipe):
    name = 'openscenegraph'
    version = '3.0.1'
 
    buildRequires = [
                    'cairo:devel',
                    'cmake:runtime',
                    'curl:devel',
                    'expat:devel',
                    'fontconfig:devel',
                    'freetype:devel',
                    'gcc-c++:runtime',
                    'giflib:devel',
                    'glib:devel',
                    'gtk:devel',
                    'ilmbase:devel',
                    'jasper:devel',
                    'libICE:devel',
                    'libjpeg:devel',
                    'libpng:devel',
                    'libSM:devel',
                    'libstdc++:devel',
                    'libtiff:devel',
                    'libX11:devel',
                    'libXau:devel',
                    'libXcomposite:devel',
                    'libXcursor:devel',
                    'libXdamage:devel',
                    'libXdmcp:devel',
                    'libXext:devel',
                    'libXfixes:devel',
                    'libXft:devel',
                    'libXi:devel',
                    'libXinerama:devel',
                    'libXpm:devel',
                    'libXrandr:devel',
                    'libXrender:devel',
                    'libXScrnSaver:devel',
                    'libXt:devel',
                    'libXtst:devel',
                    'libXv:devel',
                    'libXxf86misc:devel',
                    'Mesa:devel',
                    'OpenEXR:devel',
                    'pango:devel',
                    'pixman:devel',
                    'pkgconfig:devel',
                    'poppler:devel',
                    'poppler-glib:devel',
                    'unzip:runtime',
                    'zlib:devel',
                    ]
 
    def setup(r):
        r.addArchive('http://www.openscenegraph.org/downloads/developer_releases/OpenSceneGraph-%(version)s.zip')
        r.CMake()
        r.Make()
        r.MakeInstall()


