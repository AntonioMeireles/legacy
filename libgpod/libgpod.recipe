class LibGPod(AutoPackageRecipe):

    name = 'libgpod'
    version = '0.7.2'

    buildRequires = [
        'gcc-c++:runtime', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'hal:devel', 'intltool:runtime', 'libxml2:devel', 'mutagen:python',
        'perl:runtime', 'pkgconfig:devel', 'pygobject:devel', 'pygtk:devel',
        'python:devel', 'sg3_utils:devel', 'swig:runtime', 'taglib:devel',
        'zlib:devel'
        ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/gtkpod/libgpod-%(version)s.tar.gz')

        r.addPatch('0001-Use-var-run-hald-as-mount-dir-for-hal-callout.patch')

