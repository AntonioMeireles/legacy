class LibGPod(AutoPackageRecipe):
    name = 'libgpod'
    version = '0.6.0'

    buildRequires = [
        'dbus-glib:devellib', 'dbus:devel', 'eyeD3:python', 'glib:devel', 
        'gtk:devel', 'hal:devel', 'gettext:runtime', 'perl-XML-Parser:perl',
        'pkgconfig:devel', 'python:devel', 'swig:runtime', 'sg3_utils:devel',
        'mutagen:python', 'pygtk:python'
        ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/gtkpod/')
