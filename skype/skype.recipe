loadSuperClass('binarypackage=conary.rpath.com@rpl:devel')
class Skype(BinaryPackageRecipe):

    buildRequires = [ 'desktop-file-utils:runtime', 'gtk:runtime' ]

    name = 'skype'
    version = '2.0.0.13'

    def unpack(r):
        # From http://www.skype.com
        rpm = 'http://download.skype.com/linux/skype-%(version)s-fc5.i586.rpm'
        r.addArchive(rpm, dir='/')
