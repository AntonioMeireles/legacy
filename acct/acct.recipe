class Acct(AutoPackageRecipe):
    name = 'acct'
    version = '6.4_pre1'
    buildRequires = ['install-info:runtime', 'sysvinit:runtime',
                     'chkconfig:runtime']

    def unpack(r):
        r.macros.version = r.macros.version.replace('_', '-')
        r.addArchive('http://www.physik3.uni-rostock.de/tim/kernel/utils/acct/')
        r.addSource('acct.init')

    def policy(r):
        r.Install('acct.init', '%(initdir)s/acct')

        # 'last' conflicts with the version from "sysvinit"
        r.Remove('%(mandir)s/man1/last.1')
        r.Remove('%(bindir)s/last')

        # 'accton' complains if the accounting file doesn't already exist.
        r.Create('%(localstatedir)s/account/pacct')
        r.InitialContents('%(localstatedir)s/account/pacct')
