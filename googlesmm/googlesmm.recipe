class Googlesmm(CPackageRecipe):
    name = 'googlesmm'
    version = '0.10.22'
 
    buildRequires = ['Mesa:devel', 
                    'curl:devel', 
                    'dbus:devel', 
                    'desktop-file-utils:runtime', 
                    'expat:devel', 
                    'fox:devel', 
                    'libX11:devel', 
                    'libgcrypt:devel', 
                    'libgpg-error:devel', 
                    'libstdc++:devel', 
                    'openssl:devel', 
                    'sqlite:devel', 
                    'taglib:devel', 
                    'xine-lib:devel', 
                    'zlib:devel', 
                    'libXcursor:devel', 
                    'libXi:devel', 
                    'libXrandr:devel', 
                    'libXrender:devel', 
                    'xz:runtime']
 
    def setup(r):
        r.addArchive('http://gogglesmm.googlecode.com/files/musicmanager-%(version)s.tar.xz')
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
        r.Configure('--prefix=%(prefix)s')
        r.Make()
        r.MakeInstall()
