class ddd(PackageRecipe):
   buildRequires = ['gcc:devel', 'glibc:devel', 'libelf:devel', 
			'ncurses:devel', 'openmotif:devel', 'xorg-x11:devel' ]
	
   name = "ddd"
   version = "3.3.11"
   def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
