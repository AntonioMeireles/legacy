class IconThemeTango(AutoPackageRecipe):
    name = "tango-icon-theme"
    version = "0.7.2"

    buildRequires = [ 'gtk:runtime', 'ImageMagick:runtime', 'gettext:runtime',
        'icon-naming-utils:runtime', 'perl:runtime', 'pkgconfig:devel',
        'icon-naming-utils:devellib', 'ImageMagick:devel' ]

    def unpack(r):
        r.addArchive('http://tango-project.org/releases/tango-icon-theme-%(version)s.tar.gz')

    def policy(r):
        for dir in '24x24', '22x22', '16x16', 'scalable':
            r.Remove('%(datadir)s/icons/Tango/'+dir+'/places/start-here.*')
            r.Symlink('%(datadir)s/icons/gnome/'+dir+'/places/start-here.*', '%(datadir)s/icons/Tango/'+dir+'/places/')
        r.DanglingSymlinks(exceptions=['%(datadir)s/icons/Tango/.*/places/.*'])
