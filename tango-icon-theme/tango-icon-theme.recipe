class IconThemeTango(AutoPackageRecipe):
    name = "tango-icon-theme"
    version = "0.8.1"

    buildRequires = [ 'gtk:runtime', 'ImageMagick:runtime', 'gettext:runtime',
        'icon-naming-utils:runtime', 'perl:runtime', 'pkgconfig:devel',
        'icon-naming-utils:devellib', 'ImageMagick:devel', 'librsvg:runtime' ]

    def unpack(r):
        r.addArchive('http://tango-project.org/releases/tango-icon-theme-%(version)s.tar.gz')

    def configure(r):
        r.Configure('--enable-png-creation')

    def policy(r):
        # apply our branding...
        for res in ['16x16', '22x22', '24x24', '32x32']:
            r.addSource('distributor-logo.' + res + '.png')
            r.Install('distributor-logo.' + res + '.png', '%(datadir)s/icons/Tango/' + res + '/places/distributor-logo.png')

        r.addSource('distributor-logo.scalable.svg')
        r.Install('distributor-logo.scalable.svg', '%(datadir)s/icons/Tango/scalable/places/distributor-logo.svg')
