class LXPanel(AutoPackageRecipe):
    name = 'lxpanel'
    version = '0.2.4'
 
    buildRequires = ['libXmu:devel', 'libXpm:devel', 'autoconf:runtime', 'pkgconfig:devel', 'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/lxde/'
                     '%(name)s-%(version)s.tar.gz')
	r.Configure('--with-plugins=all')
