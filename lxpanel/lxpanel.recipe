class LXPanel(AutoPackageRecipe):
    name = 'lxpanel'
    version = '0.5.8'
 
    buildRequires = ['libXmu:devel', 'libXpm:devel', 'autoconf:runtime', 'pkgconfig:devel', 'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel', 'alsa-lib:devel', 'intltool:runtime', 'menu-cache:devel']
 
    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/lxde/%(name)s-%(version)s.tar.gz')

    def configure(r):
	    r.Configure('--with-plugins=all')
	    r.addPatch('lxpanel-0.3.8.1-nm-connection-editor.patch')
	    #r.addPatch('default-panel.patch')
