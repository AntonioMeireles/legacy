class Roxterm(CPackageRecipe):
    name = 'roxterm'
    version = '2.7.2'
 
    buildRequires = [
            'atk:devel', 
            'cairo:devel', 
            'dbus:devel', 
            'dbus-glib:devel', 
            'desktop-file-utils:runtime', 
            'fontconfig:devel', 
            'freetype:devel', 
            'gdk-pixbuf:devel', 
            'gettext:runtime', 
            'glib:devel', 
            'gtk:devel', 
            'intltool:runtime', 
            'libglade:devel', 
            'libICE:devel', 
            'libpng:devel', 
            'libSM:devel', 
            'libX11:devel', 
            'libxml2:devel', 
            'libxslt:runtime', 
            'pango:devel', 
            'pkgconfig:devel', 
            'python:runtime',
            'vte:devel', 
            'xmlto:runtime',
                ]
 
    def setup(r):
        r.addArchive('http://downloads.sourceforge.net/roxterm/')
        r.Run('python mscript.py configure --prefix=%(prefix)s')
        r.Run('python mscript.py build')
        r.Run('python mscript.py install --destdir=%(destdir)s')
