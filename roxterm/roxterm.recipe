class Roxterm(AutoPackageRecipe):
    name = 'roxterm'
    version = '1.21.4'
 
    buildRequires = [
            'atk:devel', 
            'cairo:devel', 
            'dbus-glib:devel', 
            'dbus:devel', 
            'desktop-file-utils:runtime', 
            'fontconfig:devel', 
            'freetype:devel', 
            'gdk-pixbuf:devel', 
            'gettext:runtime', 
            'glib:devel', 
            'gtk:devel', 
            'intltool:runtime', 
            'libICE:devel', 
            'libSM:devel', 
            'libX11:devel', 
            'libglade:devel', 
            'libpng:devel', 
            'libxml2:devel', 
            'libxslt:runtime', 
            'pango:devel', 
            'pkgconfig:devel', 
            'vte:devel', 
            'xmlto:runtime'
                ]
 
    def unpack(r):
        r.addArchive('http://sourceforge.net/projects/roxterm/files/roxterm/%(version)s/roxterm-%(version)s.tar.gz')
