class OpenClipArt(PackageRecipe):

   name='openclipart'
   version='0.18'

   def setup(r):
	r.addArchive('http://www.openclipart.org/downloads/%(version)s/openclipart-%(version)s-svgonly.tar.bz2')
	r.Install('clipart','%(datadir)s/openclipart')

