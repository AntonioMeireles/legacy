loadSuperClass('gnomepackage.recipe')
class BugBuddy(GnomePackageRecipe):
    buildRequires = [ 'libgnome:devel', 'libbonobo:devel',
        'glib:devel', 'libgnome:devel', 'libgnomecanvas:devel',
        'libgnomeui:devel', 'libglade:devel', 'gtk:devel', 
        'gnome-desktop:devel', 'gnome-vfs:devel', 'libxml2:devel',
        'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 
        'fontconfig:devel', 'freetype:devel', 'glibc:devel', 
        'gnome-menus:devel', 'libart_lgpl:devel', 'libbonoboui:devel', 
        'libpng:devel', 'pango:devel', 'popt:devel', 'gnome-keyring:devel', 
        'startup-notification:devel', 'GConf:runtime', 'gettext:runtime',
        'glib:runtime', 'perl:runtime', 'scrollkeeper:runtime', 
        'desktop-file-utils:runtime', 'evolution-data-server:devel', 
        'gtk:runtime', 'libgtop:devel', 'libsoup:devel']

    name = 'bug-buddy'
    version = '2.18.1'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'

    def setup(r):
        GnomePackageRecipe.setup(r)
        r.Requires('gdb:runtime','%(bindir)s/bug-buddy')
