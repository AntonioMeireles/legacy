class graphviz(PackageRecipe):
    buildRequires=["glibc:devel", "xorg-x11:devel", "libjpeg:devel",
                   "gd:devel", "expat:devel", "fontconfig:devel",
                   "freetype:devel", "libpng:devel", "zlib:devel"]

    name = "graphviz"
    version = "2.2.1"

    def setup(r):
        r.addArchive("http://www.graphviz.org/pub/graphviz/ARCHIVE/%(name)s-%(version)s.tar.gz")
        r.Configure()
	r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'NEWS',
              'README')
