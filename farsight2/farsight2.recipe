class Farsight2(AutoPackageRecipe):
    name = 'farsight2'
    version = '0.0.7'
 
    buildRequires = [ 'glib:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gst-python:devellib', 'gst-python:python', 'gtk-doc:runtime', 'libxml2:devel',
                      'pkgconfig:devel', 'python:bin', 'python:devel',  'zlib:devel', 'pygobject:runtime', 'pygtk:devel']
 
    def unpack(r):
        r.addArchive('http://farsight.freedesktop.org/releases/farsight2/')
