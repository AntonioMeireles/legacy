        'perl:runtime', 'pkgconfig:devel', 'dbus:python', 'gnome-python:python',
	'pygtk:python', 'pyorbit:python', 'dbus:devel', 'gnome-python:devel', 
        'pyorbit:devel', 'pygtk:devel' ]

    name = 'gnome-osd'
    version = '0.11.0'

    def unpack(r):
