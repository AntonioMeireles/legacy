class CLucene(CPackageRecipe):

    buildRequires = [ 'doxygen:runtime', 'libstdc++:devel' ]

    name = 'clucene'
    version = '0.9.16a'

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-core-%(version)s.tar.bz2')
        r.addPatch('buffer.patch')

        r.Configure()
        r.Make()
        r.MakeInstall()

        r.Install('src/CLucene/debug', '%(includedir)s/CLucene/')
        r.Remove('%(includedir)s/CLucene/debug/Makefile.am')
