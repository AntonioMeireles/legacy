    version = '1.5'
    rpmRelease = '1.8'
    isOPENsuse = True
    isXOrgFactory = True

    rpmPatches = [ 'xkeyboard-config.mainline-cvs.mac-es.patch',
                   'tp-menu.diff',
                   'xkeyboard-config.macintosh.patch',
