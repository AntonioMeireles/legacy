class PythonZopeInterface(AutoPackageRecipe):

    name = "python-zopeinterface"
    version = "3.0.1"

    namereal = "ZopeInterface"

    buildRequires = [ 'python:runtime' ]

    def setup(r):
        r.macros.namereal = r.namereal
        r.macros.majver = '.'.join(r.version.split('.')[0:2])
        r.macros.baseurl = 'http://www.zope.org/Products/%(namereal)s/%(version)sfinal'
        r.addArchive('%(baseurl)s/%(namereal)s-%(version)s.tgz')

        r.Run('python setup.py build')
        r.Run('python setup.py install --prefix=%(destdir)s/%(prefix)s')
