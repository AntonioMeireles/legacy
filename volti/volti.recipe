class Volti(PackageRecipe):

    name = 'volti'
    version = '0.1.7'

    buildRequires = ['python-setuptools:python', 'dbus-python:python', 'pygobject:python', 'pygtk:python', 'python-xlib:python', 'python:devel', 'desktop-file-utils:runtime', 'pyalsaaudio:python']

    def setup(r):
        r.addArchive('http://volti.googlecode.com/files/')
        r.PythonSetup(data='--install-data=%(prefix)s')
	r.Requires('pyalsaaudio:python', '%(bindir)s/volti')
