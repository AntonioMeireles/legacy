loadSuperClass('kdepackage')
class KMPlayer(kdePackageRecipe):

    name = 'kmplayer'
    version = '0.10.0a'

    buildRequires = [
        'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus-qt3:devel',
        'dbus:devel', 'expat:devel', 'gettext:runtime', 'glitz:devel',
        'gst-plugins-base:devel', 'gstreamer:devel', 'gtk:devel',
        'libxml2:devel', 'libXv:devel', 'pango:devel', 'xcb-util:devel',
        'xine-lib:devel'
    ]

    def unpack(r):

        r.addArchive('http://kmplayer.kde.org/pkgs/')

    def configure(r):

        r.Configure(
            ' --enable-cairo'
            ' --enable-npplayer'
        )

    def policy(r):

        # Provided by kdelibs
        r.Remove('%(datadir)s/mimelnk/application/x-mplayer2.desktop')

        r.Requires('mplayer:runtime', '%(libdir)s/kde3/kmplayer.so')

