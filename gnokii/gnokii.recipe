class Gnokii(AutoPackageRecipe):

    name = 'gnokii'
    version = '0.6.22'

    buildRequires = [
        'atk:devel', 'bluez-libs:devel', 'cairo:devel',
        'desktop-file-utils:runtime', 'expat:devel', 'flex:runtime',
        'fontconfig:devel', 'freetype:devel', 'glib:devel', 'glitz:devel',
        'gtk:devel', 'libical:devel', 'libpng:devel', 'libusb:devel',
        'libX11:devel', 'libxcb:devel', 'libXpm:devel', 'libXrender:devel',
        'pango:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('http://www.gnokii.org/download/gnokii/')

        r.Replace(
            'xmandir += @XGNOKIIDIR@/man/man1/', 'xmandir = ${mandir}/man1/',
            'Makefile.global.in'
        )

    def makeinstall(r):

        AutoPackageRecipe.makeinstall(r)

        r.MakeInstall('install-devel')

