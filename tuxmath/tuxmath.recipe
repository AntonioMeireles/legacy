class Tuxmath(AutoPackageRecipe):
    name = 'tuxmath'
    version = '1.6.1'
 
    buildRequires = ['desktop-file-utils:runtime', 'gettext:runtime', 'intltool:runtime', 
        'SDL:devel', 'SDL_image:devel', 'SDL_mixer:devel', 'SDL_ttf:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/tuxmath/tuxmath_w_fonts-%(version)s.tar.gz')
        r.addSource('tuxmath.desktop')
        r.Desktopfile('tuxmath.desktop')
