class Libpcap(AutoPackageRecipe):
    name = 'libpcap'
    version = '0.9.8'

    buildRequires = [ 'flex:runtime', 'byacc:runtime' ]

    def unpack(r):
        r.addArchive('http://www.tcpdump.org/release/'
            'libpcap-%(version)s.tar.gz', keyid='89E917F3')
