class LibPcap(CPackageRecipe):
    name = 'libpcap'
    version = '0.9.6'

    buildRequires = [ 'flex:runtime', 'bison:runtime' ]

    def setup(r):
        r.disableParallelMake()
        # needed for libpcap-shared.patch
        r.macros.major, r.macros.minor, r.macros.subminor = r.version.split('.')

        r.addArchive('http://www.tcpdump.org/release/')
        r.addPatch('libpcap-0.7.2-mansect.patch')
        # macros interpolate the version number in the patch
        r.addPatch('libpcap-shared.patch', macros=True)

        r.Configure('--enable-ipv6')

        r.Make()

        r.MakeDirs('%(includedir)s/net')
        r.MakeInstall('includedir=%(includedir)s')
