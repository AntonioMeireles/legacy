class DjangoPagination(PackageRecipe):

    name = 'django-pagination'
    version = '1.0.5'

    buildRequires = [
        'django:python',
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://django-pagination.googlecode.com/files/')
        r.PythonSetup()
