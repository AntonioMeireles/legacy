class Sonance(PackageRecipe):

    buildRequires = [ 'gtk-sharp:devellib', 'mono:devel', 
			'gtksourceview:devel' ]

    name = 'sonance'
    version = '0.7.1'
    def setup(r):
        srpm='http://www.mirrors.net.ar/pub/suse/i386/supplementary/GNOME/update_for_9.3/source/sonance-0.7.1-3.src.rpm'
	r.addArchive('%(name)s-%(version)s.tar.bz2', rpm=srpm)
        r.Configure()
        r.Make()
        r.MakeInstall()
