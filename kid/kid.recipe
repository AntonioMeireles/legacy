loadInstalled('python')
class Kid(PackageRecipe):
    name = 'kid'
    version = '0.9.6'
    buildRequires = [ 'elementtree:python',
                      'python-setuptools:python',
                      'python-setuptools:runtime']

    def setup(r):
        r.macros.pyver = Python.majversion
        r.addArchive('http://www.kid-templating.org/dist/%(version)s/')

        r.PythonSetup()

        r.Doc('doc/', 'misc/', 'examples/')

        r.ComponentSpec('test', '%(exec_prefix)s/lib/python%(pyver)s/site-packages/%(name)s/test/')

        # kid:runtime needs kid:python to run
        r.Requires('kid:python', '/usr/bin/')
