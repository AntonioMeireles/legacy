class libmpeg2(AutoPackageRecipe):
    name = 'libmpeg2'
    version = '0.4.1'
 
    buildRequires =	[
			'SDL:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel'
			]

    def setup(r):
       	r.addArchive('http://libmpeg2.sourceforge.net/files/mpeg2dec-snapshot.tar.gz')
       	r.Configure()
       	r.Make()
       	r.MakeInstall()
