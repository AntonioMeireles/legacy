class libmpeg2(PackageRecipe):
    name = 'libmpeg2'
    version = '0.4.1'
 
    buildRequires =	[
			'SDL:devel', 'binutils:runtime', 'gawk:runtime', 'glibc:devel', 'xorg-x11:devel'
			]

    def setup(r):
       	r.addArchive('http://libmpeg2.sourceforge.net/files/mpeg2dec-snapshot.tar.gz')
       	r.Configure()
       	r.Make()
       	r.MakeInstall()
