class Mirage(PackageRecipe):
    name = 'mirage'
    version = '0.7'

    buildRequires = ['coreutils:runtime', 'desktop-file-utils:runtime',
        'glibc:devel', 'pygtk:python', 'python-setuptools:python']

    def setup(r):
        r.addArchive('http://download.berlios.de/mirageiv/'
                     '%(name)s-%(version)s.tar.bz2')

        r.PythonSetup()
