class Mirage(CPackageRecipe):
    name = 'mirage'
    version = '0.7.1'

    buildRequires = ['desktop-file-utils:runtime', 'gnome-python:python',
        'pygtk:python', 'python:devel', 'python-setuptools:python']

    def setup(r):
        r.addArchive('http://download.berlios.de/mirageiv/'
                     '%(name)s-%(version)s.tar.bz2')

        r.PythonSetup()
