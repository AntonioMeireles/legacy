class Gphoto2(AutoPackageRecipe):
    name = 'gphoto2'
    version = '2.2.0'

    buildRequires = [ 'gtk:devel', 'findutils:runtime', 'libexif:devel',
                      'libusb:devel', 'lockdev:devel', 'libgphoto2:devel',
                      'libjpeg:devel', 'ncurses:devel', 'popt:devel',
                      'readline:devel', 'pkgconfig:devel' ]

    def unpack(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/gphoto/%(name)s-%(version)s.tar.gz')
