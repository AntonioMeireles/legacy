import datetime
class Spacefm(AutoPackageRecipe):
    name = 'spacefm'
    version = '00a6e376' + '+' + datetime.date.today().strftime("%Y.%m.%d")
 
    buildRequires = [
            'cairo:devel', 
            'desktop-file-utils:runtime', 
            'gdk-pixbuf:devel', 
            'gettext:runtime', 
            'glib:devel', 
            'gtk:devel', 
            'intltool:runtime', 
            'libX11:devel', 
            'pango:devel', 
            'pkgconfig:devel', 
            'startup-notification:devel', 
            'udev:devel', 
            'xz:runtime', 
                ]
 
    def unpack(r):
        r.addGitSnapshot('https://github.com/IgnorantGuru/spacefm.git', branch='next')
        r.addSource('session', dir='/etc/xdg/spacefm', mode = 0755)

