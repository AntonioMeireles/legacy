class Spacefm(AutoPackageRecipe):
    name = 'spacefm'
    version = '0.7.6'
 
    buildRequires = [
            'cairo:devel', 
            'desktop-file-utils:runtime', 
            'gdk-pixbuf:devel', 
            'gettext:runtime', 
            'glib:devel', 
            'gtk:devel', 
            'intltool:runtime', 
            'libX11:devel', 
            'pango:devel', 
            'pkgconfig:devel', 
            'startup-notification:devel', 
            'udev:devel', 
            'xz:runtime', 
                ]
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/spacefm/')
        r.addSource('session', dir='/etc/xdg/spacefm', mode = 0755)
