loadSuperClass('xfce-goodies-package')
class xfburn(xfceGoodiesPackage):

    name = 'xfburn'
    version = '0.3.0'

    buildRequires = [
        'Thunar:devel', 'dbus:devel', 'desktop-file-utils:runtime',
        'hal:devel', 'intltool:runtime', 'libburn:devel', 'libexo:devel',
        'libisofs:devel', 'libxfce4util:devel', 'libxfcegui4:devel'
        ]

    def unpack(r):
        r.addArchive('http://www.xfce.org/~pollux/xfburn/')
