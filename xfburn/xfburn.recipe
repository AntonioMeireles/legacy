class xfburn(AutoPackageRecipe):

    name = 'xfburn'
    version = '4857svn'

    buildRequires = [
        'desktop-file-utils:runtime', 'expat:devel', 'gettext:runtime',
        'pkgconfig:devel', 'xfce4-dev-tools:runtime', 'atk:devel',
        'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'gtk:devel',
        'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel',
        'libxfce4util:devel', 'libxfcegui4:devel', 'pango:devel',
        'pixman:devel', 'xcb-util:devel', 'autoconf:runtime',
        'automake:runtime', 'intltool:runtime', 'intltool:devel',
        'libtool:runtime', 'dbus:devel', 'hal:devel', 'libburn:devel',
        'libexo:devel', 'libisofs:devel'
    ]

    def setup(r):
        r.macros.rev = r.version[0:-3]
        r.addSvnSnapshot('http://svn.xfce.org/svn/goodies/xfburn/trunk', revision = '%(rev)s')
        r.Configure(configureName='./autogen.sh')
        r.Configure()
        r.Make()
        r.MakeInstall()
