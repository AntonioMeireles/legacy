loadSuperClass('rpmpackage')
class PilotLink(RPMPackageRecipe, CPackageRecipe):
    name = 'pilot-link'
    version = '0.12.1'
    rpmRelease = '4.fc7'

    buildRequires = [ 'readline:devel', 'ncurses:devel', 'libpng:devel',
        'bison:runtime', 'libstdc++:devel', 'perl:lib',
        'python-setuptools:python', 'libtermcap:devel', 'libusb:devel',
        'popt:devel', 'libtool:runtime', 'python:devel', ]

    rpmPatches = [ 'pilot-link-0.12.1-var.patch' ]

    def setup(r):
        r.unpack()
        r.addPatch('pilot-link-0.12.1-python-fix.patch')
        r.Replace('/lib/python', '/%(lib)s/python', 'configure')

        extraConfig = '--with-python=yes --with-itcl=no --with-tk=no '\
                      '--with-tcl=no --with-java=yes --with-cpp=yes ' \
                      '--enable-libusb --enable-threads --enable-conduits ' \
                      '--with-perl=yes'

        r.Configure(extraConfig)
        r.Make('LIBTOOL=%(bindir)s/libtool')
        r.MakeInstall('LIBTOOL=%(bindir)s/libtool')
        r.PythonSetup(dir='bindings/Python')
