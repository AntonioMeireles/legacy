class PilotLink(CPackageRecipe):
    buildRequires = [ 'readline:devel', 'ncurses:devel', 'libpng:devel', 'libtool:runtime', 'gcc:devel', 'bison:runtime', 'libstdc++:devel', 'bluez-libs:devel', 'gcc-f77:runtime', 'pkgconfig:devel' ]

    name = 'pilot-link'
    version = '0.12.2'

    def setup(r):
        srpm = 'ftp://download.fedora.redhat.com/pub/fedora/linux/development/source/SRPMS/pilot-link-0.12.2-4.fc8.src.rpm'
        r.addArchive('pilot-link-%(version)s.tar.bz2', rpm=srpm)

        extraConfig = '--with-python=no --with-itcl=no --with-tk=no '\
                      '--with-tcl=no --with-java=no --with-cpp=yes ' \
                      '--with-perl=no' # always disable perl and build by hand.

        r.Configure(extraConfig)
        r.Make('LIBTOOL=%(bindir)s/libtool')
        r.MakeInstall('LIBTOOL=%(bindir)s/libtool')
        r.MakeInstall(dir='doc/man')
