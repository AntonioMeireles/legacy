loadSuperClass('kernelmodulepackage')
class NdiswrapperKernel(KernelModulePackageRecipe):
    name = 'ndiswrapper-kernel'
    version =  '1.56'

    def unpack(r):
        r.addArchive('mirror://sourceforge/ndiswrapper/ndiswrapper-%(version)s.tar.gz')
        for p in [ 'ndiswrapper-1.56-IW_AUTH_MFP.patch',
                   'ndiswrapper-1.56-loader-fix-ioctl.patch',
                   'ndiswrapper-1.56-pe_linker.patch',
                   'ndiswrapper-1.56-driver-Makefile.patch',
                   'ndiswrapper-1.56-win2lin_stubs.patch',
                   'ndiswrapper-1.56-utils-Makefile.patch',
                   'ndiswrapper-1.56-kernel-2.6.35-api-update-1.patch',
                   'ndiswrapper-1.56-kernel-2.6.35-api-update-2.patch',
                   'ndiswrapper-1.56-kernel-2.6.35-api-update-3.patch',
                   'ndiswrapper-1.56-2.6.38.patch' ]:
            r.addPatch(p)

        r.Replace('.*depmod.*', '', 'driver/Makefile')
        r.macros.ksrcdir = '/lib/modules/%(kver)s/build'
        r.Environment('KVERS', '%(kver)s')

        r.Replace('KVERS\ \?\=.*', 'KVERS = %(kver)s', 'driver/Makefile')

    def build(r):
        r.Make('-C driver')

    def install(r):
        r.Make('DESTDIR=%(destdir)s -C driver install')

    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')

        r.Requires('%(name)s:runtime(%(version)s)',
                   '/lib/modules/%(kver)s/kernel/misc/ndiswrapper.ko')
