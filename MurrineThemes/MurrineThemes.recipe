class MurrineThemes(PackageRecipe):
    name = 'MurrineThemes'
    version = '1'

    def setup(r):
        for theme in ('MurrinaFancyCandy', 'MurrinaVerdeOlivo', 'MurrinaAquaIsh', 'MurrinaGilouche', 'MurrinaLoveGray', 'MurrineThemePack'):
            r.addArchive('http://cimi.netsons.org/media/download_gallery/%s.tar.bz2' % theme, dir='%(datadir)s/themes/')
