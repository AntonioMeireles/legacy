loadRecipe('gnomepackage.recipe')
class gTweakUI(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "gTweakUI"
    version = "0.4.0"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/gtweakui/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('README', 'AUTHORS', 'COPYING', 'NEWS', 'FAQ', 'GCONF-KEYS', 'README', 'TODO')
