loadRecipe('gnomepackage.recipe')
class GEdit(GnomePackageRecipe):
    
    name = 'gedit'
    version = '2.19.90'
    
    buildRequires = [ 'glib:devel', 'pango:devel', 'gtk:devel', 
        'libgnomeui:devel', 'libgnomeprintui:devel', 'attr:devel',
        'libgnomeprint:devel', 'desktop-file-utils:runtime',
        'aspell:devel', 'eel:devel', 'gail:devel', 'libxslt:runtime',
        'gtksourceview:devel', 'automake:runtime', 'pygtksourceview:devellib',
        'intltool:runtime', 'scrollkeeper:runtime', 'pygtksourceview:python',
        'gettext:runtime', 'GConf:devel', 'ORBit2:devel',
        'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel',
        'gnome-keyring:devel', 'gnome-vfs:devel', 'libart_lgpl:devel',
        'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel',
        'libgnome:devel', 'libgnomecanvas:devel', 'libpng:devel',
        'libxml2:devel', 'popt:devel', 'python:devel', 'GConf:runtime',
        'glib:runtime', 'gnome-python-desktop:python', 'gnome-python:python',
        'perl:runtime', 'pygtk:python', 'pygobject:python','enchant:devel', 
        'iso-codes:devellib', 'pygtk:devel', 'gnome-python-desktop:devellib' ]

    extraConfig = ' --enable-python --disable-scrollkeeper'

    def install(r):
        GnomePackageRecipe.install(r)
        r.Remove('%(localstatedir)s/scrollkeeper/*', recursive=True)
