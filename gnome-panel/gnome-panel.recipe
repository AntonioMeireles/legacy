loadRecipe('rpmpackage', label='foresight.rpath.org@fl:2-devel')
loadRecipe('gnomepackage', label='foresight.rpath.org@fl:2-devel')
class GnomePanel(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = [ 'libpng:devel', 'rarian:devel', 'rarian:runtime', 'glib:devel', 'gtk:devel', 'libglade:devel', 'libgnomeui:devel', 'gnome-desktop:devel', 'libwnck:devel', 'gnome-doc-utils:runtime', 'libbonobo:devel', 'libbonoboui:devel', 'gnome-doc-utils:devel', 'gnome-vfs:devel', 'libxslt:devel', 'gcc-c++:runtime', 'fontconfig:devel', 'startup-notification:devel', 'gnome-keyring:devel', 'evolution-data-server:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'NetworkManager:devel', 'freetype:devel', 'gnome-menus:devel', 'libart_lgpl:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libxml2:devel', 'pango:devel', 'popt:devel', 'GConf:runtime', 'gettext:runtime', 'glib:runtime', 'perl:runtime', 'gtk:runtime', 'dbus-glib:devellib', 'dbus:devel', 'which:runtime', 'libxslt:runtime', 'librsvg:devel', 'libgweather:devel', 'gtk-doc:runtime', 'gvfs:devel', 'PolicyKit-gnome:devel', 'PolicyKit:devel', 'desktop-file-utils:runtime', 'PolicyKit:runtime', 'ConsoleKit:devel', 'ConsoleKit:runtime', 'gettext:devel' ]

    name = 'gnome-panel'
    version = '2.26.0'
    rpmRelease = '1.fc11'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper --enable-eds=yes --enable-network-manager --enable-polkit'

    rpmPatches = [ 'gnome-panel-2.10.1-speak-to-us-ye-old-wise-fish.patch',
                   'gnome-panel-2.25.3-search.patch',
                   # the next three patches belong together
                   # http://bugzilla.gnome.org/show_bug.cgi?id=470966
                   'launcher-desktop-files.patch',
                   'desktop-file-monitoring.patch',
                   'preferred-apps.patch',
                   # don't pop up an error dialog if an applet from the
                   # default configuration is missing; we don't want to
                   # add a hard dependency on e.g. tomboy
                   'applet-error.patch',
                   # http://bugzilla.gnome.org/show_bug.cgi?id=520111
                   'gnome-panel-2.21.92-allow-spurious-view-done-signals.patch',
                   'clock-wakeups.patch',
        ]


    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.macros.optflags += ' -DGWEATHER_I_KNOW_THIS_IS_UNSTABLE '
        r.addPatch('firefox.patch')
        r.Run('aclocal -I m4; automake --add-missing; autoheader; autoconf;')

    def setup(r):
        r.addSource('gnome-panel-settings.tagdescription', macros=True)
        r.addSource('gnome-panel-settings.taghandler')
        r.Install('gnome-panel-settings.tagdescription',
            '%(tagdescriptiondir)s/gnome-panel-settings')
        r.Install('gnome-panel-settings.taghandler',
            '%(taghandlerdir)s/gnome-panel-settings', mode=0755)
        r.TagSpec('gconf2schema',
                  exceptions='%(sysconfdir)s/gconf/schemas/.*\.schemas')
        r.TagSpec('gnome-panel-settings',
                  '%(sysconfdir)s/gconf/schemas/.*')
        GnomePackageRecipe.setup(r)

    def policy(r):
        r.PackageSpec('gnome-panel-layout', '%(sysconfdir)s/gconf/schemas/panel-default-setup.entries')
