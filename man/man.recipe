class Man(CPackageRecipe):

    buildRequires = [ 'findutils:runtime', 'groff:runtime', 'less:runtime' ]

    name = 'man'
    version = '1.6e'

    def setup(r):
        r.addArchive('http://primates.ximian.com/~flucifredi/%(name)s/%(name)s-%(version)s.tar.gz')
        r.addSource('makewhatis.cron')
        r.ManualConfigure(' -default -confdir %(sysconfdir)s +lang all -compatibility_mode_for_colored_groff')
        r.Make()
        r.MakeInstall()
        r.Install('makewhatis.cron',
                  '%(sysconfdir)s/cron.daily/', mode=0755)
