class Mpd(CPackageRecipe):
    name = 'mpd'
    version = '0.15.5'
 
    buildRequires = [
		'alsa-lib:devel', 
		'audiofile:devel', 
		'avahi-glib:devel', 
		'avahi:devel', 
		'curl:devel', 
		'faad2:devel', 
		'flac:devel', 
		'gcc-c++:runtime', 
		'glib:devel', 
		'jack:devel', 
		'lame:devel', 
		'libao:devel', 
		'libid3tag:devel', 
		'libmad:devel', 
		'libmms:devel', 
		'libmodplug:devel', 
		'libogg:devel', 
		'libsamplerate:devel', 
		'libshout:devel', 
		'libstdc++:devel', 
		'libtheora:devel', 
		'libvorbis:devel', 
		'openssl:devel', 
		'pkgconfig:devel', 
		'pulseaudio:devel', 
		'speex:devel', 
		'sqlite:devel', 
		'zlib:devel', 
		'ffmpeg:devel', 
		'libmpcdec:devel', 
		'wavpack:devel',
		'libcue:devel', 
		'fluidsynth:devel', 
		'libcdio:devel', 
		'libmikmod:devel', 
		'wildmidi:devel', 
		'zziplib:devel'
		]
 
    def setup(r):
        r.addArchive('mirror://sourceforge/musicpd/')
	r.Configure('--enable-mikmod --enable-bzip2 --enable-zip --enable-shout --enable-wildmidi --enable-fluidsynth --enable-iso9660 --enable-lastfm')
	r.Make()
	r.MakeInstall()
