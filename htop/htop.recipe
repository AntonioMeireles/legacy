class Htop(AutoPackageRecipe):
    name = 'htop'
    version = '0.8'
 
    buildRequires = ['desktop-file-utils:runtime', 'ncurses:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/htop/%(name)s-%(version)s.tar.gz')
