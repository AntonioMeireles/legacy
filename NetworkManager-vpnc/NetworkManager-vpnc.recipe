loadSuperClass('gnomepackage')
class NetworkManagerVpnc(GnomePackageRecipe):

    name = 'NetworkManager-vpnc'
    version = '0.7.997+'

    buildRequires = [ 'desktop-file-utils:runtime', 'gtk:runtime','GConf:devel',
                      'ORBit2:devel', 'atk:devel', 'cairo:devel',
                      'dbus-glib:devel', 'dbus:devel', 'expat:devel',
                      'fontconfig:devel', 'freetype:devel', 'gettext:runtime',
                      'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel',
                      'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel',
                      'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel',
                      'libbonoboui:devel', 'libglade:devel', 'libgnome:devel',
                      'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel',
                      'libxml2:devel', 'pango:devel', 'perl:runtime',
                      'pkgconfig:devel', 'popt:devel', 'zlib:devel', 
                      'NetworkManager:devel',
                      'intltool:runtime', 'gettext:devel', 'which:runtime', 
                      'gnome-common:runtime', 'gnome-common:devel','libtool:runtime', 
                      'libtool:devel'
                      ]

    configureName='autogen.sh'

    def unpack(r):
        r.addGitSnapshot('git://git.gnome.org/network-manager-vpnc')

    def policy(r):
        r.Requires('vpnc:runtime', '%(bindir)s/nm-vpnc-service')
        r.ComponentSpec('lib','%(libdir)s/libnm-vpnc-properties.so')
