class NetworkmanagerVpnc(AutoPackageRecipe):
    name = 'NetworkManager-vpnc'
    version = '0.6.4'
 
    buildRequires = ['desktop-file-utils:runtime', 'gtk:runtime','GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'NetworkManager:devel', 'intltool:runtime']
 
    def unpack(r):
        srpm = 'http://ftp.linux.ncsu.edu/pub/fedora/linux/extras/6/SRPMS/NetworkManager-vpnc-0.6.4-3.fc6.src.rpm'
        r.addArchive('%(name)s-%(version)s.tar.gz', rpm=srpm)
        r.addPatch('NetworkManager-vpnc-0.6.4-keepalive.patch')
        r.addPatch('NetworkManager-vpnc-0.6.4-options.patch')
        r.addPatch('NetworkManager-vpnc-0.7.0-gppasswd.patch')

    def policy(r):
        r.Requires('vpnc:runtime', '%(bindir)s/nm-vpnc-service')
        r.ComponentSpec('lib','%(libdir)s/libnm-vpnc-properties.so')
