class VOBCopy(CPackageRecipe):
    name = 'vobcopy'
    version = '1.1.2'

    buildRequires = ['libdvdread:devel']

    def setup(r):
        r.addArchive('http://vobcopy.org/download/')
        r.addPatch('destdir.patch')
        r.Run('./configure.sh --prefix=%(prefix)s')
        r.Make()
        r.MakeInstall()
