class Kqemu(AutoPackageRecipe):
    buildRequires = [ 'glibc:devel', 'zlib:devel',  'kernel:build-tree', 'mkinitrd:runtime'  ]
    name = "kqemu"
    version = "1.3.0pre11"

    def setup(r):
        r.macros.kver = os.uname()[2]
        r.addArchive('http://fabrice.bellard.free.fr/qemu/%(name)s-%(version)s.tar.gz')
        r.addSource('10-kqemu.rules', dir="%(sysconfdir)s/udev/rules.d/")
        r.addSource('kqemu.modules', dir="/lib/modules/%(kver)s/modules.d/")

        r.Configure()
        r.Make('KERNEL_PATH=/lib/modules/%(kver)s/build/')
        r.Install('kqemu.ko', r'/lib/modules/%(kver)s/misc/', mode=0644)
        #r.MakeDevices('/dev/kqemu', 'c', 250, 0, 'root', 'root', 0666)

        r.TagSpec('kernel', r'/lib/modules/%(kver)s/misc/.*\.ko')
        r.ComponentSpec('config', '10-kqemu.rules')
        r.ComponentRequires({'config': set()})
        r.AutoDoc(exceptions = '.*')
        r.Requires('kernel:runtime(%(kver)s)', '/lib/modules/.*')
