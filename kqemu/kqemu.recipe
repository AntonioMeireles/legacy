loadSuperClass('kernelmodulepackage')
class Kqemu(KernelModulePackageRecipe):
    name = "kqemu"
    version = "1.3.0pre11"

    buildRequires = [
        'zlib:devel',
      ]

    def unpack(r):
        r.addArchive('http://fabrice.bellard.free.fr/qemu/')
        r.addSource('10-kqemu.rules', dir="%(sysconfdir)s/udev/rules.d/")
        r.addSource('kqemu.modules', dir="/lib/modules/%(kver)s/modules.d/")

    def build(r):
        r.Configure()
        r.Make('KERNEL_PATH=/lib/modules/%(kver)s/build/')

    def policy(r):
        r.ComponentRequires({'config': ['lib']})
