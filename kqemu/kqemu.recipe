loadSuperClass('kernelmodulepackage')
class Kqemu(KernelModulePackageRecipe):
    name = "kqemu"
    version = "1.4.0pre1"

    buildRequires = [
        'zlib:devel',
      ]

    def unpack(r):
        r.addArchive('http://www.nongnu.org/qemu/')
        r.addPatch('thc.patch')
        r.addSource('10-kqemu.rules', dir="%(sysconfdir)s/udev/rules.d/")

    def build(r):
        r.Configure(' --extra-cflags="%(cflags)s"'
                    ' --kernel-path=/lib/modules/%(kver)s/build/')
        r.Make('KERNEL_PATH=/lib/modules/%(kver)s/build/')

    def policy(r):
        r.ComponentRequires({'config': ['lib']})
