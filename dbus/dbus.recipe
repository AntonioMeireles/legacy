class Dbus(AutoPackageRecipe):
    name = 'dbus'
    version = '1.1.0'

    buildRequires = [ 'expat:devel', 'pkgconfig:devel',
        'file:runtime', 'libX11:devel', 'imake:runtime', 'libICE:devel',
        'libSM:devel', ]

    def unpack(r):
        r.macros.dbus_user = 'dbus'
        r.addArchive('http://dbus.freedesktop.org/releases/dbus/')
        r.addSource('dbus.sh')

        r.Replace('<user>.*</user>', '<user>%(dbus_user)s</user>',
                  'bus/system.conf*')
        r.Replace('# chkconfig: 345 97 03', '# chkconfig: 345 08 03',
                  'bus/messagebus.in')

    def configure(r):
        r.Configure('--disable-tests --disable-asserts --disable-verbose-mode '
            '--with-init-scripts=redhat '
            '--with-system-pid-file=%(localstatedir)s/run/messagebus.pid '
            '--disable-xml-docs --disable-doxygen-docs')

    def policy(r):

        r.MakeDirs('%(localstatedir)s/run/dbus')
        r.MakeDirs('%(localstatedir)s/lib/dbus')
        r.MakeDirs('%(datadir)s/dbus-1/services')
        r.Install('dbus.sh', '%(sysconfdir)s/X11/xinit/xinitrc.d/dbus.sh')

        r.ExcludeDirectories(exceptions=['%(datadir)s/dbus-1/services'])
        r.ExcludeDirectories(exceptions=['%(sysconfdir)s/dbus-1/system.d'])
        r.ExcludeDirectories(exceptions=['%(sysconfdir)s/dbus-1/session.d'])
        r.ExcludeDirectories(exceptions=['%(localstatedir)s/run/dbus'])
        r.ExcludeDirectories(exceptions=['%(localstatedir)s/lib/dbus'])
        # /var/lib/dbus gets put into :lib causing path conflicts on multiarch
        r.ComponentSpec('runtime', '%(localstatedir)s/lib/dbus')

        r.TagSpec('initscript', '%(initdir)s/')
        r.UtilizeUser('dbus', '%(sysconfdir)s/.*/system.conf')

        r.PackageSpec('dbus-x11', '%(bindir)s/dbus-launch')
