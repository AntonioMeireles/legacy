class linuxdcpp(CPackageRecipe):
    name = 'linuxdcpp'
    version = '1.0.1'
    buildRequires = [ 'bzip2:devel', 'expat:devellib', 'glib:devel', 
    'gtk:devel', 'libX11:devel', 'libglade:devel', 'libstdc++:devel', 'scons:runtime', 
    'openssl:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel' ]

    def setup(r):
        r.addArchive('http://download.berlios.de/%(name)s/')
        r.Make('PREFIX=%(prefix)s', makeName='scons')
        r.Make('FAKE_ROOT=%(destdir)s PREFIX=%(prefix)s install', makeName='scons')

