class Obexftp(AutoPackageRecipe):
    name = 'obexftp'
    version = '0.20'
 
    buildRequires = ['openobex:devel', 'python:devel', 'perl:devel', 'perl:runtime', 'pkgconfig:devel', 'bluez-libs:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/openobex/')

    def policy(r):
        r.Move('%(prefix)s/lib/python2.6/site-packages/obexftp/*', '%(libdir)s/python2.6/site-packages/obexftp/')
