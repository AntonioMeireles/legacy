loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class GnomeSystemTools(GnomePackageRecipe):

    name = 'gnome-system-tools'
    version = '1.3.0'

    buildRequires = (GnomePackageRecipe.buildRequires
                     + [ 'libgnomeui:devel', 'system-tools-backends:devel',
                         'nautilus:devel' ])

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --enable-services'
    extraConfig += ' --enable-boot --disable-shares'
    extraConfig += ' --disable-schemas-install'
