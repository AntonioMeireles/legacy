loadSuperClass('gnomepackage.recipe')
class GnomeSystemTools(GnomePackageRecipe):
    name = 'gnome-system-tools'
    version = '2.14.0'

    buildRequires = [ 'atk:devel', 'desktop-file-utils:runtime', 'GConf:devel',
        'GConf:runtime', 'glibc:devel', 'glib:devel', 'gnome-vfs:devel',
        'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel',
        'libglade:devel', 'libgnomecanvas:devel', 'libgnome:devel',
        'libgnomeui:devel', 'libxml2:devel', 'nautilus:devel', 'ORBit2:devel',
        'pango:devel', 'popt:devel', 'scrollkeeper:runtime',
        'system-tools-backends:devel', 'gnome-keyring:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'libpng:devel' ]

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --enable-services --enable-disks'
    extraConfig += ' --enable-boot --disable-shares'
    extraConfig += ' --disable-schemas-install'

    def unpack(r):
        GnomePackageRecipe.unpack(r);
        r.Replace(('specifix', 'foresight'),
                  ('Specifix', 'foresight'),
                  '{src/common/gst-{tool,platform}.c,pixmaps/Makefile*}')
	r.addSource('foresight.png', dir='pixmaps')
	r.Replace('Exec=','Exec=gksudo ', 'src/*/*.desktop.in.in')
	r.addPatch('disks-fix.patch')

    def install(r):
        GnomePackageRecipe.install(r);
        for program in ('boot-admin', 'network-admin', 'services-admin',
                'time-admin', 'users-admin'):
            r.Move('%(bindir)s/'+program, '%(sbindir)s/')
            r.ConsoleHelper('%(bindir)s/'+program, '%(sbindir)s/'+program,
                    session=True, timestamp=True)
	#r.Install('foresight.png','%(datadir)s/%(name)s/pixmaps/')

