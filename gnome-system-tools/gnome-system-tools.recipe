loadSuperClass('gnomepackage')
class GnomeSystemTools(GnomePackageRecipe):
    name = 'gnome-system-tools'
    version = '2.28.0'

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glibc:devel', 'glib:devel', 'gnome-vfs:devel', 'gnome-keyring:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnomecanvas:devel', 'libgnome:devel', 'libgnomeui:devel', 'liboobs:devel', 'libpng:devel', 'libxml2:devel', 'nautilus:devel', 'pango:devel', 'perl:runtime', 'popt:devel', 'rarian:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime', 'wireless-tools:devel', 'libxslt:runtime', 'which:runtime', 'gvfs:devel', 'PolicyKit:devel',] 

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --enable-services --disable-disks --enable-users'
    extraConfig += ' --enable-boot --enable-shares --enable-time'
    extraConfig += ' --disable-schemas-install'
    extraConfig += ' --disable-scrollkeeper'


    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addPatch('smb.patch')
