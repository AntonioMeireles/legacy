loadSuperClass('gnomepackage.recipe')
class GnomeSystemTools(GnomePackageRecipe):
    name = 'gnome-system-tools'
    version = '2.17.92'

    buildRequires = [ 'atk:devel', 'desktop-file-utils:runtime', 'GConf:devel',
        'GConf:runtime', 'glibc:devel', 'glib:devel', 'gnome-vfs:devel',
        'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel',
        'libglade:devel', 'libgnomecanvas:devel', 'libgnome:devel',
        'libgnomeui:devel', 'libxml2:devel', 'nautilus:devel', 'ORBit2:devel',
        'pango:devel', 'popt:devel', 'scrollkeeper:runtime', 'GConf:config',
        'gnome-keyring:devel', 'cairo:devel', 'expat:devel',
        'fontconfig:devel', 'freetype:devel', 'libpng:devel',
        'gettext:runtime', 'glib:runtime', 'liboobs:devel', 'perl:runtime' ]

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-services --disable-disks --enable-users'
    extraConfig += ' --disable-boot --enable-shares --enable-time'
    extraConfig += ' --disable-schemas-install'

    def unpack(r):
        GnomePackageRecipe.unpack(r);
        r.addPatch('04_activate_avahi_option.dpatch')
        #r.Replace('Exec=','Exec=gksudo ', 'src/*/*.desktop.in.in')

