class Folks(AutoPackageRecipe):
    name = 'folks'
    # not sure which version to use. but 0.3.x currently requires unstable
    # telpathy-glib release
    version = '0.2.1'

    buildRequires = [
        'dbus-glib:devel',
        'dbus:devel',
        'glib:devel',
        'gobject-introspection:devel',
        'libgee:devel',
        'libxml2:devel',
        'pkgconfig:devel',
        'telepathy-glib:devel',
        'vala:runtime',
        ]

    def unpack(r):
        r.addArchive('mirror://gnome/%(name)s/%(major_version)s/')
        # disable test which has syntax errors
        r.Replace('tests', '', 'Makefile.in')
