class MonoDoc(AutoPackageRecipe):
    name = 'monodoc'
    version = '1.2.5'

    buildRequires = [ 'mono:runtime', 'mono:lib', 'mono:cil', 'unzip:runtime' ]

    def unpack(r):
        r.disableParallelMake()
        r.addArchive('http://go-mono.com/sources/monodoc/')
        r.Environment('MONO_SHARED_DIR', '/tmp')

    def policy(r):
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
