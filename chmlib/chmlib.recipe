class chmlib(PackageRecipe):
    buildRequires=[]
 
    name = "chmlib"
    version = "0.35"
 
    def setup(r):
        r.addArchive("http://66.93.236.84/~jedwin/projects/%(name)s/%(name)s-%(version)s.tgz")
        r.Configure()
	r.Make()
	r.Install('src/libchm.la','%(libdir)s/')
	r.Run('libtool --mode=install cp src/libchm.la %(destdir)s/%(libdir)s')
	r.Install('src/chm_lib.h', '%(includedir)s/')
