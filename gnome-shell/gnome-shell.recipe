loadSuperClass('gnomepackage')
class GnomeShell(GnomePackageRecipe):
    name = 'gnome-shell'
    version = '2010.01.30'

    buildRequires = [
        'GConf:devellib',
        'GConf:runtime',
        'clutter:devellib',
        'desktop-file-utils:runtime',
        'gir-repository:data',
        'gjs:devellib',
        'gnome-desktop:devellib',
        'gnome-menus:devellib',
        'gnome-python:python',
        'gobject-introspection:runtime',
        'gstreamer:devel',
        'libXScrnSaver:devellib',
        'libcroco:devellib',
        'libgsf:devellib',
        'librsvg:devellib',
        'libwnck:devellib',
        'mutter:devellib',
        'mutter:runtime',
        'python:devel',
    ]

    extraConfig = GnomePackageRecipe.extraConfig
    # we are not interested in compile-warnings
    extraConfig += ' --enable-compile-warnings=no'

    gitUrl = 'git://git.gnome.org/gnome-shell'

    def policy(r):
        r.Requires('pkgconfig:runtime', '%(bindir)s/gnome-shell') # line 111
