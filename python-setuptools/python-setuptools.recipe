class PythonSetupTools(PackageRecipe):
    name = 'python-setuptools'
    version = '0.6c5'

    if Use.bootstrap:
        clearBuildReqs()
        buildRequires = [ 'python:runtime', 'setup:runtime',
                          'gzip:runtime', 'tar:runtime' ]

    def setup(r):
        r.macros.archive_name = 'setuptools'
        r.addArchive('http://cheeseshop.python.org/packages/source/s/setuptools/')
        r.PythonSetup(bootstrap=True)
        # Pyrex deps are in try/except; python-setuptools works without it
        r.Requires(exceptDeps='python: Pyrex.*')
        r.RemoveNonPackageFiles(r'.*\.exe')
        # Thish should be fixed when CNP-98 is fixed.
        r.Replace('#!python', '#!%(bindir)s/python2.4',
                  '%(prefix)s/lib/python2.4/site-packages/setuptools/command/easy_install.py')
