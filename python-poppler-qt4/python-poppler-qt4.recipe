class PythonPopplerQt4(PackageRecipe):

    name = 'python-poppler-qt4'
    version = '0.16.2'

    buildRequires = [
                    'libgcc:devellib',
                    'libstdc++:devel',
                    'poppler-qt4:devel',
                    'python:devel',
                    'python-setuptools:python',
                    'sip:devel',
                    'sip:python',
                    ]

    def setup(r):
        r.addArchive('http://python-poppler-qt4.googlecode.com/files/python-poppler-qt4-%(version)s.tar.gz')
        r.PythonSetup()
