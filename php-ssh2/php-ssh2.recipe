class SSH2(AutoPackageRecipe):
    name = 'php-ssh2'
    version = '0.11.3'

    buildRequires = [
        'autoconf:runtime',
        'automake:runtime',
        'php:devel',
        'libssh2:devel',
    ]

    def unpack(r):
        r.addArchive('http://pecl.php.net/get/ssh2')
        r.Run('phpize')

    def makeinstall(r):
        r.MakeInstall('INSTALL_ROOT=%(destdir)s')
