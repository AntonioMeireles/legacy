class Zeitgeist(AutoPackageRecipe):
    name = 'zeitgeist'
    version = '0.7'
 
    buildRequires = ['dbus-python:python', 'gettext:runtime', 'intltool:runtime', 'pygobject:python', 'python-rdflib:runtime', 'python:devel', 'pyxdg:python', 'raptor:runtime']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/zeitgeist/0.7/%(version)s/+download/')
