class PidginPluginPack(AutoPackageRecipe):

        name = 'pidgin-plugin_pack'
        version = '2.1.1'

        buildRequires = ['atk:devel', 'cairo:devel', 'expat:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libXrender:devel', 'pango:devel', 'perl:runtime', 'pidgin:devel', 'pkgconfig:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'aspell:devel', 'gtkspell:devel']

        def unpack(r):
                r.addArchive("http://downloads.guifications.org/plugins//Plugin%%20Pack/purple-plugin_pack-%(version)s.tar.bz2")

