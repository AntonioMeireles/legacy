class LibMAL(AutoPackageRecipe):
    name = 'libmal'
    version = '0.44'

    buildRequires = [ 'pilot-link:devel', 'autoconf:runtime' ]

    def unpack(r):
        r.addArchive('http://jasonday.home.att.net/code/%(name)s/', keyid='2BEB2113')
        # fixes the configure script not finding pilot-link
        r.Replace('/usr/lib', '%(libdir)s', 'configure.in')
        r.Run('autoconf')

