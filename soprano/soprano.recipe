loadSuperClass('cmakepackage', 'foresight.rpath.org@rpl:devel')
class Soprano(CMakePackageRecipe):

    name = 'soprano'
    version = '2.0.0+r762223'

    buildRequires = [
        'clucene:devel', 'libstdc++:devel', 'libX11:devel', 'libXext:devel',
        'qt4:devel', 'raptor:devel', 'rasqal:devel', 'redland:devel'
    ]

    def unpack(r):
        rev = r.version.split('+')[1][1:]
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/trunk/kdesupport/soprano/',
            revision = rev
        )

