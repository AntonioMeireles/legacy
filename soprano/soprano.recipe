loadSuperClass('cmakepackage')
class Soprano(CMakePackageRecipe):

    name = 'soprano'
    version = '2.2.3'

    buildRequires = [
        'clucene:devel', 'doxygen:runtime', 'icedtea-jre:runtime',
        'libstdc++:devel', 'libX11:devel', 'libXcomposite:devel',
        'libXcursor:devel', 'libXdamage:devel', 'libXext:devel',
        'libXfixes:devel', 'libXft:devel', 'libXi:devel', 'libXinerama:devel',
        'libXpm:devel', 'libXScrnSaver:devel', 'libXt:devel', 'libXtst:devel',
        'libXv:devel', 'libXxf86misc:devel', 'qt4:devel', 'raptor:devel',
        'rasqal:devel', 'redland:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/soprano/')
        r.addPatch('soprano-rpath-remove.patch')

    def policy(r):

        r.Requires(exceptDeps=r'java: info.aduna.*')
        r.Requires(exceptDeps=r'java: org.openrdf.*')
        r.Requires(exceptDeps=r'java: javax.servlet.*')
        r.Requires(exceptDeps=r'java: org.apache.commons.cli.*')

        r.Requires(exceptDeps=r'soname: .*libjvm.so.*')

