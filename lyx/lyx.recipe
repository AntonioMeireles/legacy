loadSuperClass('rpmpackage')
class Lyx(RPMPackageRecipe,AutoPackageRecipe):
    name = 'lyx'
    version = '1.5.4'
    rpmRelease = '1.fc9'

    rpmPatches = [ 'lyx-1.5.4-xdg_open.patch' ]
    rpmSources = ['lyxrc.dist', 'lyx.desktop']

    buildRequires = [ 'aspell:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXcursor:devel', 'libXext:devel', 'libXfixes:devel', 'libXi:devel', 'libXinerama:devel', 'libXrandr:devel', 'libXrender:devel', 'libpng:devel', 'libstdc++:devel', 'm4:runtime', 'pkgconfig:devel', 'python:devel', 'qt4-core:lib', 'qt4-gui:lib', 'qt4:devel', 'tetex:runtime', 'zlib:devel', 'desktop-file-utils:runtime', 'gtk:runtime' ]

    def configure(r):
        r.Configure(' --disable-rpath '
                    ' --enable-optimization=\"%(optflags)s\" '
                    ' --with-aiksaurus '
                    ' --with-aspell '
                    ' --without-warnings --disable-dependency-tracking '
                    ' --disable-debug --disable-stdlib-debug --disable-assertions --disable-concept-checks')

    def policy(r):
        # misc/extras
        r.Install('lyxrc.dist', '%(datadir)s/lyx/lyxrc.dist', mode = 0644)

        # Set up the lyx-specific class files where TeX can see them
        r.MakeDirs('%(datadir)s/texmf/tex/latex')
        r.Move('%(datadir)s/lyx/tex',  '%(datadir)s/texmf/tex/latex/lyx')

        # .desktop
        r.Desktopfile('lyx.desktop')

        # icon
        r.Install('lib/images/lyx.xpm', '%(datadir)s/icons/hicolor/48x48/apps/lyx.xpm', mode = 0644)

        # ghost'd files
        for g in ['lyxrc.defaults', 'packages.lst', 'textclass.lst', 'doc/LaTeXConfig.lyx']:
            r.Create('%(datadir)s/lyx' + g)
            r.InitialContents('%(datadir)s/lyx' + g)

        # unpackaged files
        r.Remove('%(datadir)s/lyx/fonts', recursive = True)
