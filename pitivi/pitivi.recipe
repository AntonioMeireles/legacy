loadRecipe('gnomepackage')
class Pitivi(GnomePackageRecipe):
    name = 'pitivi'
    version = '0.13.5'
    buildRequires = [
        'desktop-file-utils:runtime', 'gnonlin:lib', 'gst-python:python',
        'gstreamer:devellib', 'pycairo:python', 'pygobject:python',
        'pygtk:python', 'python-zopeinterface:python', 'python:devel',
        'dbus-python:python', 'pygoocanvas:python', 'gnome-python:python',
	'python-twisted:python', 'shared-mime-info:runtime'
    ]
    def policy(r):
       r.Requires('python-zopeinterface:python', '%(bindir)s/pitivi')
       r.Requires('gst-python:python', '%(bindir)s/pitivi')
       r.Requires('gnonlin:lib', '%(bindir)s/pitivi')
