class GtkThemeForesight(PackageRecipe):
    name = 'gtk-theme-foresight'
    version = '0.14'

    buildRequires = [ 'gtk:devel', ]

    def setup(r):
        r.addMercurialSnapshot('http://foresightlinux.org/hg/gtk-theme-foresight', tag=r.version)

        uplocation = '%(datadir)s/themes'
        #r.Copy('*', uplocation + '/')
        r.Copy('Foresight', uplocation + '/')

        r.Requires('gtk-engines:runtime', '%(datadir)s/themes/Foresight/gtk-2.0/gtkrc')
        r.Requires('gtk-engine-murrine:lib', '%(datadir)s/themes/Foresight/gtk-2.0/gtkrc')

