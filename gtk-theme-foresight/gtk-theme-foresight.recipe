class GtkThemeForesight(PackageRecipe):
    name = 'gtk-theme-foresight'
    version = '0.8'

    buildRequires = [ 'gtk:devel', ]

    def setup(r):
        r.addMercurialSnapshot('http://foresightlinux.org/hg/gtk-theme',
            tag=r.version)

        uplocation = '%(datadir)s/themes/Foresight'
        r.Copy('*', uplocation + '/')

        for colour in [('green', '#73d216'), ('blue', '#3399cc'),]:
            location = uplocation + '-' + colour[0] + '/'
            r.Copy('*', location)
            # green is the default
            r.Replace('#73d216', colour[1], location + 'gtk-2.0/gtkrc')
            r.Replace('Foresight', 'Foresight-' + colour[0], location + 'index.theme')


        r.Requires('gtk-engines:runtime', '%(datadir)s/themes/Foresight/gtk-2.0/gtkrc')
