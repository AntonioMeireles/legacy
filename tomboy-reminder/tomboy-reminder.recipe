class TomboyReminder(PackageRecipe):
    name = "tomboy-reminder"
    version = "0.7"

    buildRequires = [ 'tomboy:runtime', 'gawk:runtime', 'mono:runtime',
                      'pkgconfig:devel']

    def setup(r):
        r.addArchive('http://raphael.slinckx.net/files/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
