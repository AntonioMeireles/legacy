class CairoDock(AutoPackageRecipe):
    name = 'cairo-dock'
    version = '1.5.6'

    buildRequires = [ 'Mesa:devel', 'esound:devel', 'fontconfig:devel', 'gettext:runtime', 'glitz:devel', 'gnutls:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libXau:devel', 'libXdmcp:devel', 'libXext:devel', 'libXft:devel', 'libXrender:devel', 'libXtst:devel', 'libgcrypt:devel', 'libxcb:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'vte:devel', 'zlib:devel', 'GConf:devel', 'ORBit2:devel', 'Thunar:devel', 'alsa-lib:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'gail:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'libXxf86vm:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libexo:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'librsvg:devel', 'libxfce4util:devel', 'libxml2:devel', 'nspr:devel', 'xulrunner:devel', 'autoconf:runtime','automake:runtime', 'libtool:devel', 'libtool:runtime', 'util-macros:devel', 'intltool:runtime', 'intltool:devel', 'inputproto:devel' ]

    def setup(r):
        r.addArchive('http://download.berlios.de/cairo-dock/%(name)s-sources-20080525.tar.bz2')

        pluginList = [ 'alsaMixer', 'clock', 'dustbin', 'gnome-integration', 'mail', 'rame', 'shortcuts', 'slider', 'systray', 'weather', 'xfce-integration', 'compiz-icon', 'cpusage', 'gauge-test', 'gnome-integration-old', 'netspeed', 'rendering', 'showDesklets', 'stacks', 'terminal', 'weblets', 'Xgamma', 'Cairo-Penguin', 'Dbus', 'logout', 'powermanager', 'rhythmbox', 'showDesktop', 'switcher', 'tomboy', 'wifi', 'xmms' ]

        r.Run(""" sed -i.debuglevel -e '/-O3/d' src/Makefile.am""", dir = 'cairo-dock/trunk/cairo-dock')
        r.Run('autoreconf -i -f',  dir = 'cairo-dock/trunk/cairo-dock')
        r.Configure(dir = 'cairo-dock/trunk/cairo-dock')
        r.Run('autoreconf -i -f',  dir = 'cairo-dock/trunk/themes')

        r.Run('rm -rf template',  dir = 'cairo-dock/trunk/plug-ins')
        r.Run(""" sed  -e 's|mozilla-gtkmozembed|firefox-gtkmozembed|' configure.ac""",  dir = 'cairo-dock/trunk/plug-ins/weblets')
        # order is relevant here
        r.Make(dir = 'cairo-dock/trunk/cairo-dock')

        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
        r.macros.cflags += ' -I%(builddir)s/cairo-dock/trunk/cairo-dock/src '
        r.Environment('PKG_CONFIG_PATH', '%(builddir)s/cairo-dock/trunk/cairo-dock/:`echo $PKG_CONFIG_PATH`')

        r.Configure(dir = 'cairo-dock/trunk/themes')

        for p in pluginList:
            r.Run(""" sed  -e 's|-O3|-O2|' -e 's|-Werror||' src/Makefile.am  """ ,  dir = 'cairo-dock/trunk/plug-ins/' + p )
            r.Run("autoreconf -i -f",  dir = 'cairo-dock/trunk/plug-ins/' + p )
            r.Configure(dir = 'cairo-dock/trunk/plug-ins/' + p )


        r.Make(dir = 'cairo-dock/trunk/themes')

        for p in pluginList:
            r.Make(dir = 'cairo-dock/trunk/plug-ins/' + p )

        r.MakeInstall(dir = 'cairo-dock/trunk/cairo-dock')
        r.MakeInstall(dir = 'cairo-dock/trunk/themes')
        for p in pluginList:
            r.MakeInstall(dir = 'cairo-dock/trunk/plug-ins/' + p )

        r.Remove('%(datadir)s/%(name)s/themes/_Ubuntu_', recursive = True)
        r.SetModes('%(bindir)s/*.sh', 0755)

        r.PackageSpec('%(name)s-plug-ins-xfce', '%(libdir)s/%(name)s/*fce*')
