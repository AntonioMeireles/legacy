loadRecipe('gnomepackage.recipe', label='foresight.rpath.org@fl:1-devel')
class Banter(GnomePackageRecipe):

    name = 'banter'
    version = '0.1.8'

    buildRequires = ['ndesk-dbus:lib', 'GConf:runtime', 'desktop-file-utils:runtime', 'evolution-sharp:lib', 'gnome-sharp:lib', 'gtk-sharp:lib', 'mono:devel', 'telepathy-sharp:lib', 'gnome-keyring-sharp:lib', 'notify-sharp:lib']

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addPatch('moz.patch')

