loadRecipe('gnomepackage.recipe')
class Banter(GnomePackageRecipe):

    name = 'banter'
    version = '0.1.11'

    buildRequires = ['ndesk-dbus:cil', 'ndesk-dbus:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus-glib:devellib', 'GConf:runtime', 'desktop-file-utils:config', 'evolution-sharp:cil', 'gnome-sharp:cil', 'gtk-sharp:cil', 'mono:devel', 'telepathy-sharp:cil', 'gnome-keyring-sharp:cil', 'notify-sharp:cil']


    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Replace('gnome-keyring-sharp','gnome-keyring-sharp-1.0','configure')
