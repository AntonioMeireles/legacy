class SblimCmpiService(AutoPackageRecipe):
    name = 'sblim-cmpi-service'
    version = '0.8.1'

    buildRequires = [
        'perl:devel',
        'sblim-sfcb:runtime', # For the tag spec
        'sblim-cmpi-base:devel',
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/sblim/')

    def configure(r):
        r.Configure("PROVIDERDIR=%(libdir)s/cmpi --disable-static")

