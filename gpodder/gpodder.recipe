class Gpodder(PackageRecipe):
    name = 'gpodder'
    version = '0.16.1'
    buildRequires = [ 'PIL:python', 'dbus-python:python', 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-python-extras:python', 'make:runtime', 'notify-python:python', 'pycairo:python', 'python-feedparser:python', 'python-sqlite:python', 'python:devel' ]
 
    def setup(r):
        r.addArchive('http://download.berlios.de/%(name)s/')
        r.MakeInstall()
