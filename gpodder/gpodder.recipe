class Gpodder(AutoPackageRecipe):
    name = 'gpodder'
    version = '2.6'
    buildRequires = [ 	'PIL:python',
			'PyQt4:python',
			'dbus-python:python',
			'desktop-file-utils:runtime',
			'gettext:runtime',
			'gnome-python-extras:python',
			'gst-python:python',
			'intltool:runtime',
			'libgpod:python',
			'make:runtime',
			'mygpoclient:python',
			'notify-python:python',
			'pycairo:python',
			'pygtk:python',
			'python-feedparser:python',
			'python-sqlite:python',
			'python:devel',
			'pywebkitgtk:python',
			'simplejson:python' ]

    def setup(r):
        r.addArchive('http://download.berlios.de/%(name)s/%(name)s-%(version)s.tar.gz')
        r.MakeInstall()
