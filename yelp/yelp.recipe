loadSuperClass('gnomepackage.recipe')
class Yelp(GnomePackageRecipe):

    buildRequires = [ 'libgnomeui:devel', 'pango:devel', 'gtk:devel',
        'gnome-vfs:devel', 'libbonobo:devel', 'libglade:devel',
        'libxml2:devel', 'libxslt:devel', 'gail:devel',
        'fontconfig:runtime', 'GConf:devel', 'libgpg-error:devel',
        'desktop-file-utils', 'libgnome:devel',
        'libgtkhtml:devel', 'libgcrypt:devel',
        'gnome-doc-utils:devel', 'ORBit2:devel', 'atk:devel',
        'bzip2:devel', 'gcc:devel', 'glib:devel',
        'libart_lgpl:devel', 'libbonoboui:devel',
        'libgnomecanvas:devel', 'nspr:devel',
        'popt:devel', 'GConf:runtime', 'gettext:runtime',
        'perl:runtime', 'gnome-keyring:devel', 'cairo:devel',
        'fontconfig:devel', 'freetype:devel', 'libpng:devel',
        'gtk:runtime', 'desktop-file-utils:runtime',
        'libstdc++:devel', 'intltool:runtime', 'beagle:devel',
        'gnome-icon-theme:devellib', 'libgnomeprint:devel',
        'libgnomeprintui:devel', 'startup-notification:devel',
        'xulrunner:devel','xulrunner:lib'   ]

    name = 'yelp'
    version = '2.16.2'

    extraConfig = ' --x-includes="/usr/include/X11" --x-libraries=/usr/lib/X11 --with-search=beagle'
    extraConfig += ' --with-gecko=xulrunner '

    def unpack(r):
        GnomePackageRecipe.unpack(r)

	r.Replace('widget','widget nspr','src/Makefile.am')

        r.macros.optflags = '-g -Os'


