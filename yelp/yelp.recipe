loadRecipe('gnomepackage.recipe')
class yelp(GnomePackageRecipe):
    buildRequires = [ 'libgnomeui:devel', 'pango:devel', 'gtk:devel',
        'gnome-vfs:devel', 'libbonobo:devel', 'libglade:devel',
        'libxml2:devel', 'libxslt:devel', 'gail:devel',
        'fontconfig:runtime', 'GConf:devel', 'desktop-file-utils',
        'libgnome:devel', 'libgtkhtml:devel', 'ORBit2:devel', 'atk:devel',
        'bzip2:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel',
        'glib:devel', 'gnome-keyring:devel', 'libart_lgpl:devel',
        'libbonoboui:devel', 'libgnomecanvas:devel', 'libpng:devel',
        'libstdc++:devel', 'seamonkey-nspr:devel', 'seamonkey:devel',
        'popt:devel', 'GConf:runtime', 'ORBit2:devel', 'gettext:runtime',
        'perl:runtime', 'beagle:devel', 'libgnomeprint:devel',
        'libgnomeprintui:devel', 'startup-notification:devel',
        'desktop-file-utils:runtime', 'gtk:runtime' ]

    name = 'yelp'
    version = '2.15.5'
    extraConfig ='--with-gecko=firefox'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = '-g -Os' 
