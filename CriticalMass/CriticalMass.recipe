class CriticalMass(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel",
                      "SDL_image:devel", "libpng:devel",
                      "desktop-file-utils:runtime" ]
    name = "CriticalMass"
    version = "0.9.11"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/criticalmass/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('COPYING', 'TODO')

#       Add a custom CriticalMass icon, as CriticalMass doesn't have one!

        r.addSource('critmass.png')
        r.Install('critmass.png', '%(datadir)s/pixmaps/')

#       Here are our menu links

        r.addSource('critmass.desktop')
        r.Desktopfile('critmass.desktop')
