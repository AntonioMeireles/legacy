class SDL_gfx(PackageRecipe):
    buildRequires = [ 'glibc:devel','SDL:devel' ]
    name = "SDL_gfx"
    version = "2.0.13"

    def setup(r):
        r.addArchive('http://www.ferzkopp.net/~aschiffler/Software/%(name)s-2.0/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'LICENSE',
              'NEWS', 'README')
