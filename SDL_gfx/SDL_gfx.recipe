class SDLgfxRecipe(AutoPackageRecipe):
    name = 'SDL_gfx'
    version = '2.0.16'

    buildRequires = [ 'SDL:devel' ]

    def unpack(r):
        r.addArchive('http://www.ferzkopp.net/Software/SDL_gfx-2.0/')

    def configure(r):
        extraConfig = ''
        if Arch.x86_64:
            extraConfig += '--disable-mmx'
        r.Configure(extraConfig)    
