class Libxcb(AutoPackageRecipe):
    name = 'libxcb'
    version = '1.0'

    buildRequires = [ 'doxygen:runtime', 'libXau:devel', 'libXdmcp:devel',
        'libpthread-stubs:devellib', 'libxslt:runtime', 'pkgconfig:devel',
        'xcb-proto:devellib', 'file:runtime', ]

    def unpack(r):
        r.addArchive('http://xcb.freedesktop.org/dist/')

        # https://bugs.freedesktop.org/show_bug.cgi?id=9336
        # https://bugzilla.novell.com/show_bug.cgi?id=251087
        r.addPatch('http://librarian.launchpad.net/6713143/libxcb_1.0-1.1ubuntu2.diff.gz')

        r.Run(""" patch -p1 < debian/patches/100_allow_sloppy_lock.diff  """) 
