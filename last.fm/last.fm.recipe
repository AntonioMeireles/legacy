class LastFM(AutoPackageRecipe):
    name = "last.fm"
    version = "1.3.1.0"
    buildRequires = ['alsa-lib:devel', 'libX11:devel', 'libstdc++:devel',
                     'qt4-core:lib', 'qt4-gui:lib', 'qt4-sql:lib',
                     'zlib:devel']

    def unpack(r):
        r.addArchive("http://cdn.last.fm/client/Linux/last.fm-%(version)s.src.tar.bz2")
        r.addPatch('last.fm-qt4.patch')

    def makeinstall(r):
        r.Copy('*','/opt/last.fm/')
