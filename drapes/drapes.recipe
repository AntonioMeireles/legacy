class Drapes(AutoPackageRecipe):

    buildRequires = [ 'GConf:runtime', 'desktop-file-utils:runtime',
        'gettext:runtime', 'gtk-sharp:lib', 'mono:lib', 'mono:runtime',
        'perl:runtime', 'pkgconfig:devel', 'gnome-sharp:lib' ]

    name = 'drapes'
    version = '0.4.96'

    def unpack(r):
        r.addArchive('http://drapes.mindtouchsoftware.com/release/0.4/%(name)s-%(version)s-bzr3.tar.gz')
        r.addPatch('icon.patch')
