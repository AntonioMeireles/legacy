class R(PackageRecipe):

    name = 'R'
    version = '2.2.1'

    def setup(r):
       r.addArchive('http://cran.cnr.berkeley.edu/src/base/R-2/%(name)s-%(version)s.tar.gz')
       r.Configure()
       r.Make('rhome=%(datadir)s/R')
       r.MakeInstall('rdocdir=%(destdir)s%(docdir)s rsharedir=%(destdir)s%(datadir)s rincludedir=%(destdir)s%(includedir)s rdocdir=%(destdir)s%(docdir)s mandir=%(destdir)s%(mandir)s bindir=%(destdir)s%(bindir)s', rootVar='rhome')
