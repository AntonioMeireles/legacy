loadRecipe('gnomepackage')
class GnomeVfs(GnomePackageRecipe):
    clearBuildReqs()
    buildRequires = ['GConf:config', 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'acl:devel', 'attr:devel', 'avahi-glib:devel', 'avahi:devel', 'bzip2:devel', 'e2fsprogs:devel', 'gamin:devel', 'hal:devel', 'krb5:devel', 'openssh-client:runtime', 'openssl:devel', 'samba:devel', 'libxml2:devel', 'gnome-mime-data:config', 'gnome-mime-data:devellib', 'zlib:devel', 'popt:devel', 'bzip2:devel',  'gettext:runtime', 'perl:runtime', 'dbus-glib:devel']

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --enable-hal --disable-howl --enable-avahi --enable-openssl'

    name = 'gnome-vfs'
    version = '2.19.91'

    docs = ['AUTHORS', 'COPYING', 'ChangeLog', 'NEWS', 'README']

    def unpack(r):
       GnomePackageRecipe.unpack(r)
       r.addPatch('02_get_volume_for_path.patch')
       r.addPatch('03_app_cdda.patch')
       r.addPatch('11_network-volumes-in-network.patch', level=0)
       r.addPatch('12_user_visible_drives.patch')
       r.addPatch('13_resolve_fstab_symlinks.patch')
       r.addPatch('19_hurd_path_max.patch', level=0)
       r.macros.optflags = '-g -Os'
