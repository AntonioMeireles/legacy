--- gnome-vfs-2.7.2/libgnomevfs/gnome-vfs-volume-monitor.c	2003-12-04 21:16:55.000000000 +0100
+++ gnome-vfs-2.7.2.new/libgnomevfs/gnome-vfs-volume-monitor.c	2004-06-19 21:37:17.000000000 +0200
@@ -26,6 +26,7 @@
 #include <string.h>
 
 #include "gnome-vfs-private.h"
+#include "gnome-vfs-utils.h"
 #include "gnome-vfs-volume-monitor.h"
