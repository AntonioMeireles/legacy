 	if (stat (path, &statbuf) != 0)
 		return NULL;
 
 	device = statbuf.st_dev;
 
+	uri = gnome_vfs_get_uri_from_local_path(path);
+
 	res = NULL;
 	g_mutex_lock (volume_monitor->priv->mutex);
 	for (l = volume_monitor->priv->mtab_volumes; l != NULL; l = l->next) {
