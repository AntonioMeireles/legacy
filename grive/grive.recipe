import datetime
class Grive(CPackageRecipe):
    name = 'grive'
    version = '0.02' + '+' + datetime.date.today().strftime("%Y.%m.%d")
 
    buildRequires = [
        'cmake:runtime', 
        'curl:devel', 
        'gcc-c++:runtime', 
        'json-c:devel', 
        'libstdc++:devel', 
        'openssl:devel', 
        'pkgconfig:devel',
                ]
 
    def setup(r):
        r.addGitSnapshot('https://github.com/match065/grive.git')
        r.CMake()
        r.Make()
        r.Install('grive', '%(bindir)s/', mode = 0755)

        r.Requires('json-c:lib', 'grive:runtime')
