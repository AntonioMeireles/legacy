loadRecipe("python")
class Markdown(PackageRecipe):

    name = 'markdown'
    version = '1.7'
    packageSummary="Python Markdown"
    packageDescription="Python implementation of Markdown"

    buildRequires = ['python-setuptools:python','python:devel']

    def setup(r):
        r.macros.sitepkgs = Python.sitepkgs
        r.addSource("mdx_codehilite.py",dir="%(sitepkgs)s/")
        r.addArchive('http://pypi.python.org/packages/source/M/Markdown/')
        r.PythonSetup()
