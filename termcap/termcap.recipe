class Termcap(PackageRecipe):
    name = "termcap"
    version = "11.0.1"

    def setup(r):
        r.addSource("http://www.catb.org/~esr/terminfo/termtypes.tc.gz",
                    apply="gunzip termtypes.tc.gz")
        r.addPatch('termcap-kon2.patch')

        r.Move('termtypes.tc', 'termcap')
        r.Install('termcap', '%(sysconfdir)s/')
