class PPTPClient(CPackageRecipe):
 
    name = "pptpclient"
    version = "1.7.1"
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('mirror://sourceforge/pptpclient/pptp-%(version)s.tar.gz')
        r.Replace('install -o root -m 555 pptp', 'install -m 755 pptp', 'Makefile')
        r.Make()
        r.MakeInstall('INSTALL=install install')
        r.Requires('/usr/sbin/pppd', '%(bindir)s/pptp')
