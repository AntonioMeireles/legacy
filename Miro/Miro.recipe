loadInstalled('python')
class Miro(PackageRecipe):
    name = 'Miro'
    version = '2.5.4'
 
    buildRequires = ['Pyrex:python', 'atk:devel', 'boost:devel',
        'bsddb3:python', 'cairo:devel', 'dbus-python:python',
        'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gnome-python-extras:python',
        'gnome-python:python', 'gst-python:python', 'gtk:devel',
        'libX11:devel', 'libXrender:devel', 'libXv:devel', 'libpng:devel',
        'libstdc++:devel', 'libtorrent-rasterbar:devel',
        'libtorrent-rasterbar:python', 'libxcb:devel', 'mx:python',
        'notify-python:python', 'pango:devel', 'pkgconfig:devel',
        'pixman:devel', 'pycairo:python', 'pygtk:devel',
        'python-setuptools:python', 'python-sqlite:python', 'python:devel',
        'shared-mime-info:runtime', 'xcb-util:devel', 'xextproto:devel',
        'xine-lib:devel', 'xulrunner:devel', 'zlib:devel', 'openssl:devel', 'libgcc:devellib', 'gcc']
 
    def setup(r):
        r.addArchive('http://ftp.osuosl.org/pub/pculture.org/miro/src/miro-%(version)s.tar.gz')
        r.addPatch('Miro-2.0-videodir.patch')
        r.addPatch('Miro-2.5.2-fhs.patch')

	r.Replace('__file__', 'os.curdir', 'platform/gtk-x11/setup.py')
        r.PythonSetup(dir='platform/gtk-x11')

        r.macros.pydir = Python.sitepkgs
	r.ComponentSpec('test', '%(pydir)s/miro/test/')
