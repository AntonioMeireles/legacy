class Cpio(AutoPackageRecipe):
    name = 'cpio'
    version = '2.9'

    keepBuildReqs = ['gettext:devel']
    buildRequires = [ 'texinfo:runtime', 'gettext:runtime',
        'install-info:runtime', 'autoconf:runtime' ]

    def unpack(r):
        r.addArchive('http://ftp.gnu.org/pub/gnu/cpio/')
        r.addPatch('cpio-2.9-CVE-2007-4476.patch', level=0)
        r.macros.cflags += ' -D_GNU_SOURCE -D_FILE_OFFSET_BITS=64 -D_LARGEFILE64_SOURCE -DSVR4_COMPAT'
        r.macros.bindir = '/bin'

    def make(r):
        r.Make('AR=%(target)s-ar')

    def policy(r):
        # some files are provided by other packages
        r.Remove('%(bindir)s/mt', '%(mandir)s/man1/mt.1*')
        r.Remove('%(libexecdir)s/', recursive=True)
