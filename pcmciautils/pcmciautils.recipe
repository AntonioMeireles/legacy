class Pcmciautils(CPackageRecipe):
    name = 'pcmciautils'
    version = '014'

    buildRequires = [ 'flex:runtime', 'byacc:runtime', 'sysfsutils:devel', ]

    def setup(r):
        r.addArchive('http://kernel.org/pub/linux/utils/kernel/pcmcia/')
        r.disableParallelMake()
        r.Make()
        r.MakeInstall()
