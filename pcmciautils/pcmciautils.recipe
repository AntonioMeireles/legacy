loadSuperClass('rpmpackage')
class Pcmciautils(RPMPackageRecipe,CPackageRecipe):
    name = 'pcmciautils'
    version = '014'
    rpmRelease = '5'
    
    buildRequires = [ 'flex:runtime', 'byacc:runtime', 'sysfsutils:devel', ]

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2', rpm=r.srpm)
        r.addPatch('pcmciautils-014-newrules.patch', rpm=r.srpm)
        r.disableParallelMake()
        r.Make()
        r.MakeInstall()
