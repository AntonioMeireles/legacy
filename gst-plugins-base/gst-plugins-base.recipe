
loadSuperClass('gnomepackage.recipe')
class GstPlugins(GnomePackageRecipe):

    buildRequires =  [ 'GConf:devel', 'ORBit2:devel', 'alsa-lib:devel',
        'cdparanoia:devel', 'glib:devel',  'gnome-vfs:devel',
        'gstreamer:devel', 'libbonobo:devel', 'libogg:devel',
        'liboil:devel', 'libtheora:devel', 'libvorbis:devel',
        'libxml2:devel', 'pango:devel', 'gstreamer:runtime', 'perl:lib' ]
    
    name = 'gst-plugins-base'
    version = '0.10.7'

    extraConfig = '--disable-spc'
    externalArchive='http://gstreamer.freedesktop.org/src/%(name)s/%(name)s-%(version)s.tar.bz2'
