class GstPlugins(AutoPackageRecipe):

    buildRequires =  [ 'GConf:devel', 'ORBit2:devel', 'alsa-lib:devel',
        'cdparanoia:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'gnome-vfs:devel', 'gstreamer:devel', 'libbonobo:devel', 'libXv:devel',
'libvisual:devel', 'libogg:devel', 'liboil:devel', 'libtheora:devel', 
'libvorbis:devel', 'libxml2:devel', 'pango:devel', 'gstreamer:runtime',
'perl:lib', 'gcc-c++:runtime', 'perl:runtime', 'python:runtime', 
'libICE:devel', 'libSM:devel', 'pkgconfig:devel', 'zlib:devel']

    name = 'gst-plugins-base'
    version = '0.10.15'

    def unpack(r):
        r.addArchive('http://gstreamer.freedesktop.org/src/%(name)s/')
    def configure(r):
        r.Configure(' --enable-alsa --enable-cdparanoia --enable-ogg'
                    ' --enable-gnome_vfs --enable-gst_v4l --enable-libvisual '
                    ' --enable-pango --enable-vorbis')
