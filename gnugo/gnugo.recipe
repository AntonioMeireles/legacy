class GnuGo(CPackageRecipe):

    name = "gnugo"
    version = "3.6"

    buildRequires = [ 'ncurses:devel' ]

    def setup(r):
        r.addArchive('http://ftp.gnu.org/gnu/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.TagSpec('info-file', '/usr/share/info/gnugo.info.gz')
