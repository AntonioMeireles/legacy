class MonoDevelopDatabase(CPackageRecipe):
    name = 'monodevelop-database'
    version = '0.18'
    buildRequires = [ 'gtk-sharp:cil', 'gtksourceview-sharp:cil', 'mono-addins:cil', 'mono:cil', 'mono:devel', 'mono:runtime', 'monodevelop:devellib', 'pkgconfig:devel' ]

    def setup(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.addArchive('http://go-mono.com/sources/%(name)s/')
        r.disableParallelMake()
        r.Configure()
        r.Make()
        r.MakeInstall()
