loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class PAprefs(RPMPackageRecipe,GnomePackageRecipe):
    name = 'paprefs'
    version  = '0.9.6'
    rpmRelease = '28'
    isOPENsuse = True
    rpmPatches = [ 'paprefs-desktop-fix.diff',
                   'paprefs-0.9.6-libintl-fix.diff']

    buildRequires = [ 'gst-plugins-base:devel', 'gstreamer:config', 'gstreamer:devel',
                      'lynx:runtime', 'pulseaudio:devel', 'cairomm:devel',
                      'desktop-file-utils:config', 'glibmm:devel', 'gtkmm:devel',
                      'libglade:devel', 'libglademm:devel', 'libsigc++:devel',
                      'gconfmm:devel', 'libtool:devel', ]

#    externalArchive='http://0pointer.de/lennart/projects/%(name)s/'


    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.addSource('paprefs.png', dest = '%(datadir)s/pixmaps/', rpm = r.srpm)
