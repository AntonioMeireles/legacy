loadSuperClass('gnomepackage.recipe')
class GnomePilotConduits(GnomePackageRecipe):

    buildRequires = [ 'atk:devel', 'GConf:devel', 'glib:devel',
        'gnome-pilot:devel', 'gnome-vfs:devel', 'libart_lgpl:devel',
        'libbonobo:devel', 'libbonoboui:devel', 'libgnomecanvas:devel',
        'libgnome:devel', 'libgnomeui:devel', 'libxml2:devel', 'ORBit2:devel',
        'pango:devel', 'pilot-link:devel', 'popt:devel', 'bison:runtime',
        'cairo:devel', 'fontconfig:devel', 'freetype:devel',
        'gnome-keyring:devel', 'libpng:devel' ]

    name = 'gnome-pilot-conduits'
    version = '2.0.15'

    def install(r):
        GnomePackageRecipe.install(r)
        r.ComponentSpec('runtime', '%(libdir)s/gnome-pilot/conduits/.*')
        r.Remove('%(libdir)s/gnome-pilot/conduits/*.a')
