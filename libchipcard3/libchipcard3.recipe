class LibChipcard3(AutoPackageRecipe):
    name = 'libchipcard3'
    version = '3.0.4'
    buildRequires = [ 
        'chkconfig:runtime',
        'gettext:runtime',
        'gwenhywfar:devel',
        'libstdc++:devel',
        'libusb:devel',
        'pkgconfig:devel',
        'sysfsutils:devel',
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/libchipcard/')
        r.addSource('chipcardd3',dir='etc')
    def policy(r):
        r.SetModes('%(sysconfdir)s/init.d/chipcardd3',00755)
