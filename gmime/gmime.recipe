class Gmime(AutoPackageRecipe):
    name = 'gmime'
    version = '2.2.19'

    buildRequires = [  'gtk:devel', 'glib:devel', 'gtk-sharp:devellib',
                       'gtk-sharp:cil', 'gtk-sharp:lib', 'mono:lib',
                       'coreutils:runtime', 'gawk:runtime', 'mono:devellib',
                       'mono:data', 'mono:cil', 'gtk-sharp:runtime',
                       'mono:config', 'mono:runtime', 'mono:devel',
                       'pkgconfig:devel', 'zlib:devel', 'gettext:runtime', 'gettext:devel',
                       'which:runtime', 'docbook-utils:runtime', 'gettext:data', 'gtk-doc:devel',
                       'automake:runtime', 'autoconf:runtime', 'libtool:runtime',

                       ]

    def unpack(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://spruce.sourceforge.net/gmime/sources/v%(majversion)s/')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/gmime/gmime-2.2.3-libdir.patch')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/gmime/gmime-2.2.3-use-pkg-config.patch')
        r.Run('cp /usr/share/gettext/config.rpath . ; autoreconf -fi ')

    def configure(r):
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.Configure('--enable-mono --enable-largefile --enable-rfc2047-workarounds --disable-static')

    def policy(r):
        r.Remove('%(bindir)s/uu{de,en}code')

