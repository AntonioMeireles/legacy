
class Gmime(AutoPackageRecipe):
    name = 'gmime'
    version = '2.2.8'

    buildRequires = [ 'gtk:devel', 'glib:devel', 'gtk-sharp:devellib',
        'gtk-sharp:lib', 'mono:lib', 'coreutils:runtime', 'gawk:runtime',
        'gtk-sharp:runtime', 'mono:config', 'mono:runtime', 'mono:devel', 'pkgconfig:devel', 'zlib:devel',
        'which:runtime', ]

    def unpack(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://spruce.sourceforge.net/gmime/sources/v%(majversion)s/')

    def policy(r):
        r.Remove('%(bindir)s/uu{de,en}code')

    def configure(r):
        r.Configure('--enable-mono')
