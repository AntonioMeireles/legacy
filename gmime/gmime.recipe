class Gmime(PackageRecipe):

    buildRequires = [ 'gtk:devel', 'glib:devel',
	'gtk-sharp:devellib', 'gtk-sharp:lib', 'mono:lib' ]


    name = 'gmime'
    version = '2.1.19'

    def setup(r):
	r.addArchive('http://spruce.sourceforge.net/gmime/sources/v2.1/gmime-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.Remove('%(bindir)s/uuencode', '%(bindir)s/uudecode')
	r.Doc('AUTHORS', 'NEWS', 'README', 'ChangeLog')
