class Simias(PackageRecipe):
    buildRequires = [ 'mono:runtime', 'gtk-sharp:runtime' ]

    name = 'simias'
    version = '1.1.5221.1'
    
    def setup(r):
	r.addArchive('http://ftp.novell.com/pub/forge/ifolder/client/current-head/20050809_0220/source/simias-1.1.5221.1.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
	r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.config'])
