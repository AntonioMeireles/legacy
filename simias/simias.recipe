class Simias(PackageRecipe):
    buildRequires = [ 'mono:runtime', 'gtk-sharp:runtime' ]

    name = 'simias'
    version = '1.0.20050413'
    
    def setup(r):
	r.addArchive('http://forge.novell.com/modules/xfcontent/private.php/ifolder/client/stable/20050413_0615/source/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
	r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.config'])
