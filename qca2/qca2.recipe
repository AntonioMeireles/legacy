class Qca2(AutoPackageRecipe):

    name = 'qca2'
    version = '2.0.0'

    buildRequires = [
        'gcc-c++:runtime', 'libstdc++:devel', 'libX11:devel', 'libXext:devel',
        'qt4:devel', 'which:runtime'
    ]

    def unpack(r):

        r.macros.archive_name = 'qca'
        r.addArchive('http://delta.affinix.com/download/qca/%(major_version)s/')

    def configure(r):

        r.ManualConfigure('--prefix=%(prefix)s --libdir=%(libdir)s')

    def makeinstall(r):

        r.MakeInstall(rootVar='INSTALL_ROOT')
        r.Remove('/usr/bin/qcatool2.debug')

