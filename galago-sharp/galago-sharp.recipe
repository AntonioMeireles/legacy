class GalagoSharp(PackageRecipe):
    buildRequires = [ 'binutils:runtime', 'mono:runtime', 'pkgconfig:devel',
        'gtk-sharp:lib', 'mono:lib', 'perl-XML-LibXML:perl' ]

    name = "galago-sharp"
    version = "0.5.0"
    
    def setup(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
        r.Replace('pkg:nunit','pkg:mono-nunit','tests/Makefile')
	r.Make()
	r.MakeInstall()
