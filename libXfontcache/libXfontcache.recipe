loadSuperClass('xorgpackage.recipe')
class LibXfontcache(XorgPackageRecipe):
    name = 'libXfontcache'
    version = '1.0.2'
    component = 'lib'

    buildRequires = [ 'fontcacheproto:devel', 'libXext:devel', 'xextproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        r.Requires('fontcacheproto:devel', '%(libdir)s/pkgconfig/xfontcache.pc')
