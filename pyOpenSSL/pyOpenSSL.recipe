class pyOpenSSL(CPackageRecipe):
    name = 'pyOpenSSL'
    version = '0.10'

    buildRequires = [
        'openssl:devel',
        'pkgconfig:devel',
        'python:devel',
        'python-setuptools:python',
      ]

    def setup(r):
        r.macros.cflags += ' $(pkg-config openssl --cflags)'
        r.addArchive('http://pypi.python.org/packages/source/p/%(name)s/')
        r.PythonSetup()
