class ConsoleKit(AutoPackageRecipe):
    name = 'ConsoleKit'
    version = '0.2.1'
    buildRequires = ['chkconfig:runtime', 'dbus-glib:devel', 'dbus:devel', 'glib:devel', 'libX11:devel', 'libXau:devel', 'libXdmcp:devel', 'libxcb:devel', 'pkgconfig:devel', 'xmlto:runtime', 'pam:devel']


    def unpack(r):
         r.addArchive('http://people.freedesktop.org/~mccann/dist/')
         r.Replace('345 90 10', '345 10 10', 'data/ConsoleKit.in')

    def configure(r):
         r.Configure('--enable-pam-module ')
