class NautilusIfolder(PackageRecipe):
    buildRequires = [ 'mono:devel', 'gtk-sharp:devellib',
			'simias:devellib', 'ifolder3:devellib' ]

    name = 'nautilus-ifolder3'
    version = '3.1.5221.1'
    
    def setup(r):
        r.addArchive('http://ftp.novell.com/pub/forge/ifolder/client/current-head/20050809_0220/source/nautilus-ifolder3-3.1.5221.1.tar.gz')
        r.Configure('--prefix=/opt/novell/ifolder3')
        r.Make()
        r.MakeInstall()
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
        r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.config'])

