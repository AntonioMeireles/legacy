 	win_height = gdk_window_get_height (GTK_WIDGET (xtext)->window);
 #else
 	gdk_drawable_get_size (GTK_WIDGET (xtext)->window, 0, &win_height);
@@ -3924,7 +3924,7 @@
 	if (line <= RECORD_WRAPS)
 		return ent->wrap_offset[line - 1];
 
