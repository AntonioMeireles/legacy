loadSuperClass('gnomepackage')

class GnomeKeyring(GnomePackageRecipe):
    name = 'gnome-keyring'
    version = '2.20.2'

    buildRequires = [ 'atk:devel', 'glib:devel', 'pango:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'libpng:devel', 'gettext:runtime', 'perl:runtime', 'libgcrypt:devel', 'libgpg-error:devel', 'pam:devel', 'hal:devel' ]
    
    GnomePackageRecipe.extraConfig += ' --enable-pam --with-pam-dir=/%(lib)s/security'

