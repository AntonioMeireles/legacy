class xcdroast(AutoPackageRecipe):
    name = 'xcdroast'
    version = '0.98alpha15'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gtk:devel', 'libpng:devel',
        'pango:devel', 'pcre:devel', 'pkgconfig:devel',
        'zlib:devel', 'gettext:runtime', 'bison:runtime',
    ]

    def unpack(r):
        r.addArchive('http://superb-east.dl.sourceforge.net/sourceforge/xcdroast/')

    def configure(r):
        r.Configure('--enable-gtk2')
