#!/bin/bash

if [ $# -lt 2 ]; then
    echo "not enough arguments: $0 $*" >&2
    exit 1
fi

type="$1"
shift
action="$1"
shift

case $type in 
    files)
	case $action in
	    update|remove)
		cd %(datadir)s/a2ps/afm
		./make_fonts_map.sh &>/dev/null || :
		[ -f fonts.map.new ] && mv fonts.map.new fonts.map
		;;
	esac
    ;;
esac

exit 0
