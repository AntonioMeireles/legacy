class GalagoPython(AutoPackageRecipe):
    name = 'galago-python'
    version = '0.5.0'

    buildRequires = [ 'dbus-glib:devel', 'dbus:devel', 'glib:devel',
        'libgalago:devel', 'pkgconfig:devel', 'python:devel', 'pygtk:devel' ]

    def unpack(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/')
