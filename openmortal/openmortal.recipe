class openmortal(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel",
                      "SDL_ttf:devel", "desktop-file-utils:runtime" ]
    name = "openmortal"
    version = "0.7"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'PACKAGERS', 'README', 'TODO')

#       Here are our menu links

        r.addSource('openmortal.desktop')
        r.Desktopfile('openmortal.desktop')
