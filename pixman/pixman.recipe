loadSuperClass('rpmpackage')
class PIXman(RPMPackageRecipe,AutoPackageRecipe):
    name = 'pixman'
    version = '0.17.2'
    isOPENsuse = True
    isXOrgFactory = True
    rpmRelease = '7.1'
    rpmPatches = [ ]
    buildRequires = ['cairo:devel', 'fontconfig:devel', 'freetype:devel', 'libXrender:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel']

    def configure(r):
        r.macros.optflags += ' -fno-strict-aliasing '
        r.Configure('--disable-static --enable-shared')
