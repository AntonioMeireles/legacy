class Madeleine(PackageRecipe):
    name = 'madeleine'
    version = '0.7.3'

    buildRequires = [ 'ruby:runtime' ]

    def setup(r):
        r.addArchive('http://rubyforge.org/frs/download.php/11024/%(name)s-%(version)s.tar.gz')
        r.Run('find . -name .svn | xargs rm -rf')
        r.Run('ruby install.rb config')
        r.Run('ruby install.rb install --prefix=%(destdir)s')
