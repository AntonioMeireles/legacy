class Bittorrent(BuildPackageRecipe):
   name = 'bittorrent'
   version = '5.0.7'

   buildRequires = [ 'libxml2:python', 'pycrypto:python', 'pygtk:python',
    'python-twisted:python', 'python-twisted-web:python',
    'python-zopeinterface:python', 'python-setuptools:python', ]

   def setup(r):
        r.addArchive('http://download.bittorrent.com/dl/BitTorrent-%(version)s.tar.gz')
        r.PythonSetup()
        r.ComponentRequires({'python': set(('runtime',))})
