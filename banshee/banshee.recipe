class Banshee(AutoPackageRecipe):
    name = 'banshee'
    version = '1.7.3+90dc627c'
    summary = 'Banshee is a multimedia management and playback application for GNOME'
    packageDescription = """
Import, organize, and discover new music with Banshee through its simple and powerful interface and wide array of innovative features. Create your own radio stations or listen to a friends' through Last.fm integration; experience automatic cover art fetching as you listen; and easily browse, search, and control your media collection.
"""

    buildRequires = [
	'Mesa:devel', 
	'libXcomposite:devel', 
	'libXdamage:devel', 
	'libXfixes:devel',
        'GConf:devel',
        'GConf:runtime',
        'ORBit2:devel',
        'atk:devel',
        'avahi-sharp:cil',
        'avahi-sharp:devellib',
        'cairo:devel',
        'desktop-file-utils:runtime',
        'expat:devel',
        'fontconfig:devel',
        'freetype:devel',
        'gettext:runtime',
        'gdata-sharp:cil',
        'gdata-sharp:devellib',
        'glib:devel',
        'gnome-sharp:cil',
        'gnome-sharp:devellib',
        'gnome-vfs:devel',
        'gst-plugins-base:devel',
        'gst-plugins-good:lib',
        'gstreamer:devel',
        'gstreamer:runtime',
        'gtk-sharp:cil',
        'gtk-sharp:devellib',
        'gtk:devel',
        'gtk:runtime',
        'intltool:runtime',
        'ipod-sharp:devellib',
        'libX11:devel',
        'libXrandr:devel',
        'libXrender:devel',
        'libmtp:devellib',
        'libpng:devel',
        'libtool:runtime',
        'libxcb:devel',
        'libxml2:devel',
        'mono-addins:cil',
        'mono-addins:cil',
        'mono-addins:devellib',
        'mono-zeroconf:devellib',
        'mono:cil',
        'mono:devel',
        'mono:runtime',
        'ndesk-dbus-glib:cil',
        'ndesk-dbus-glib:devellib',
        'ndesk-dbus:cil',
        'ndesk-dbus:devellib',
        'notify-sharp:cil',
        'notify-sharp:devellib',
        'pango:devel',
        'perl:runtime',
        'pixman:devel',
        'pkgconfig:devel',
        'podsleuth:devellib',
        'podsleuth:lib',
        'podsleuth:runtime',
        'sqlite:devel',
        'taglib-sharp:cil',
        'taglib-sharp:devellib',
        'xcb-util:devel',
        'webkit-sharp:cil',
        'webkit-sharp:devellib',
        'zlib:devel',
        'boo:devellib',
        'boo:cil',
        # FIXME: clutter is busting it in x86_64 ...
        # 'clutter:devel', 
        # XXX seems to induce subtle runtime breackage when available...
        # 'libXxf86vm:devel',
        'WebKit:devel', 
        'libsoup:devel', 
        # Seems it will conflict files, when activated
        #'shared-mime-info:runtime'
        ]

    def unpack(r):
        r.macros.tag=r.version.split('+')[-1]
        r.addGitSnapshot('git://git.gnome.org/banshee', tag='%(tag)s')
        r.addGitSnapshot('git://git.gnome.org/hyena', dir='banshee-%(tag)s/src/Hyena')
        r.addAction(""" mv src/Hyena/banshee-master/* src/Hyena/; """)

    def configure(r):
        # enabling clutter support bellow is a good way to induce crashes at startup...
        r.Configure(' --disable-clutter --disable-docs --enable-karma --enable-mtp --enable-ipod --enable-podcast --with-vendor-build-id="Foresight"', configureName='autogen.sh')

    def policy(r):
        # r.Make('check')
        r.Requires('mono-addins:cil', '%(bindir)s/%(name)s-1')
        r.Requires('libmtp:lib', '%(bindir)s/%(name)s-1')
        r.Remove('/usr/share/applications/mimeinfo.cache')
