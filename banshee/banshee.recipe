class Banshee(PackageRecipe):

    buildRequires = [
        'atk:devel', 'avahi-sharp:devellib', 'avahi:lib', 'binutils:runtime',
        'cairo:devel', 'dbus-glib:devel', 'dbus:devel',
        'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'GConf:devel', 'GConf:runtime', 'gettext:runtime',
        'glib:devel', 'glibc:devel', 'gnome-desktop:devel',
        'gnome-keyring:devel', 'gnome-sharp:lib', 'gnome-vfs:devel',
        'gstreamer:devel', 'gtk-sharp:lib', 'gtk:devel', 'gtk:runtime',
        'hal:devel', 'libart_lgpl:devel', 'libbonobo:devel',
        'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel',
        'libgnomeui:devel', 'libICE:devel', 'libpng:devel', 'libSM:devel',
        'libX11:devel', 'libxml2:devel', 'libXrender:devel', 'mono:lib',
        'nautilus-cd-burner:devel', 'ORBit2:devel', 'pango:devel',
        'perl:runtime', 'pkgconfig:devel', 'popt:devel',
        'startup-notification:devel', 'zlib:devel'
    ]

    name = 'banshee'
    version = '0.11.1'
    def setup(r):
       r.addArchive('http://banshee-project.org/files/%(name)s/')
       r.Configure('--disable-static --disable-helix --disable-vlc \
              --disable-xing --disable-docs --with-gstreamer-0-10 --enable-avahi')
       r.Make()
       r.MakeInstall()
       r.Install('data/images/music-player-banshee.svg','%(datadir)s/pixmaps/')
       r.Run('echo >> %(destdir)s/%(sysconfdir)s/gconf/schemas/audioscrobbler.schemas')
       r.Replace('/usr/lib/pkgconfig/../../bin/mono','/usr/bin/mono','%(destdir)s/usr/bin/banshee')

       r.Requires('ipod-sharp:lib','libipoddevice:lib','hal-sharp:lib','%(bindir)s/banshee')
       r.Requires('libipoddevice:lib','%(bindir)s/banshee')
       r.Requires('hal-sharp:lib','%(bindir)s/banshee')

