loadSuperClass('gnomepackage')
class Banshee(GnomePackageRecipe):
    name = 'banshee'
    version = '0.13.2'
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gtk-sharp:devellib', 'hal:devel', 'libmusicbrainz:devel', 'libnjb:devel', 'libusb:devel', 'mono-zeroconf:cil', 'mono:devel', 'mono:runtime', 'nautilus-cd-burner:devel']
    
    GnomePackageRecipe.extraConfig += '--disable-static --disable-helix --disable-vlc '
    GnomePackageRecipe.extraConfig += '--disable-xing --disable-docs --with-gstreamer-0-10 --enable-avahi --disable-mtp --enable-ipod'
    GnomePackageRecipe.configureName = 'autogen.sh'
 
    def unpack(r):
        r.addArchive('http://banshee-project.org/files/banshee/')
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.disableParallelMake()
