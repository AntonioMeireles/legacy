class Banshee(CPackageRecipe):

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'avahi:lib', 'binutils:runtime', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'glibc:devel', 'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-sharp:devellib', 'gnome-vfs:devel', 'gstreamer:devel', 'gtk-sharp:devellib', 'gtk:devel', 'gtk:runtime', 'hal:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'libxml2:devel', 'mono:devel', 'nautilus-cd-burner:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'startup-notification:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'gcc-c++:runtime', 'sqlite:devel', 'libmusicbrainz:devel', 'avahi-sharp:devellib', 'gst-plugins-base:devel', 'gst-plugins-base:runtime', 'gstreamer:runtime', 'gst-plugins-good:devellib', 'libXau:devel', 'libXdmcp:devel', 'avahi-sharp:lib', 'gnome-sharp:lib', 'gtk-sharp:lib', 'mono:lib' ]

    name = 'banshee'
    version = '0.11.3'
    def setup(r):
       r.addArchive('http://banshee-project.org/files/%(name)s/')
       r.addPatch('modifiers.patch')
       r.Configure('--disable-static --disable-helix --disable-vlc \
              --disable-xing --disable-docs --with-gstreamer-0-10 --enable-avahi')
       r.Make()
       r.MakeInstall()
       r.Install('data/images/music-player-banshee.svg','%(datadir)s/pixmaps/')
       r.Run('echo >> %(destdir)s/%(sysconfdir)s/gconf/schemas/audioscrobbler.schemas')
       r.Replace('/usr/lib/pkgconfig/../../bin/mono','/usr/bin/mono','%(destdir)s/usr/bin/banshee')

       r.Requires('ipod-sharp:lib','libipoddevice:lib','hal-sharp:lib','%(bindir)s/banshee')
       r.Requires('libipoddevice:lib','%(bindir)s/banshee')
       r.Requires('hal-sharp:lib','%(bindir)s/banshee')

