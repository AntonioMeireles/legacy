class Banshee(CPackageRecipe):
    name = 'banshee'
    version = '0.12.1'
    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'avahi-sharp:devellib', 'avahi-sharp:lib', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-sharp:devellib', 'gnome-sharp:lib', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gst-plugins-base:lib', 'gstreamer:devel', 'gstreamer:runtime', 'gtk-sharp:devellib', 'gtk-sharp:lib', 'gtk:devel', 'hal:devel', 'intltool:runtime', 'ipod-sharp:devellib', 'libX11:devel', 'libXrender:devel', 'libgphoto2-sharp:devellib', 'libmusicbrainz:devel', 'libnjb:devel', 'libpng:devel', 'libusb:devel', 'libusb:lib', 'libxml2:devel', 'mono:devel', 'mono:lib', 'mono:runtime', 'nautilus-cd-burner:devel', 'njb-sharp:devellib', 'njb-sharp:lib', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'sqlite:devellib', 'zlib:devel' ]

    def setup(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')
        r.addSource('http://l10n.gnome.org/POT/banshee.HEAD/banshee.HEAD.pt_BR.po',dir='po')
        r.Move('po/banshee.HEAD.pt_BR.po','po/pt_BR.po')
        r.addPatch('remove-gst-inspect-checks.patch')
        r.Configure('--disable-static --disable-helix --disable-vlc \
              --disable-xing --disable-docs --with-gstreamer-0-10 --enable-avahi --enable-mtp')
        r.disableParallelMake()
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.Make()
        r.MakeInstall()
        r.Install('data/images/music-player-banshee.svg','%(datadir)s/pixmaps/')

        r.addSource('banshee.pl')
        r.Install('banshee.pl', '%(libdir)s/xchat-gnome/plugins/')
        r.Install('banshee.pl', '%(libdir)s/xchat/plugins/')

        r.Requires('ipod-sharp:lib','libipoddevice:lib','hal-sharp:lib','%(bindir)s/banshee')
        r.Requires('libipoddevice:lib','%(bindir)s/banshee')
        r.Requires('hal-sharp:lib','%(bindir)s/banshee')
