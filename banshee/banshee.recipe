class Banshee(PackageRecipe):

    buildRequires = [ 'gtk-sharp:devellib', 'mono:devel', 'gtksourceview:devel', 
			'ORBit2:devel', 'atk:devel', 'dbus:devel', 'gcc:devel',
			'glibc:devel', 'gst-plugins:devel', 'gstreamer:devel', 
			'hal:devel', 'libxml2:devel', 'nautilus-cd-burner:devel', 
			'zlib:devel', 'GConf:devel', 'glib:devel', 'gtk:devel',
			'pango:devel' ]

    name = 'banshee'
    version = '0.9.6'
    def setup(r):
	r.addArchive('http://banshee-project.org/files/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure('--disable-helix')
        r.Make('BANSHEE_BURN_ENABLE=yes')
        r.MakeInstall()

	r.Requires('ipod-sharp:lib','libipoddevice:lib','hal-sharp:lib','%(bindir)s/banshee')
	r.Requires('libipoddevice:lib','%(bindir)s/banshee')
	r.Requires('hal-sharp:lib','%(bindir)s/banshee')
