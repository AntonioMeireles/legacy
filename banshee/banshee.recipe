class Banshee(PackageRecipe):

    buildRequires = [ 'gtk-sharp:devellib', 'mono:devel',
        'gtksourceview:devel', 'ORBit2:devel', 'atk:devel',
        'dbus:devel', 'gcc:devel', 'glibc:devel',
        'libxml2:devel', 'nautilus-cd-burner:devel', 
        'zlib:devel', 'GConf:devel', 'glib:devel', 'gtk:devel',
        'pango:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'gnome-desktop:devel', 'gnome-keyring:devel',
        'gnome-vfs:devel', 'libart_lgpl:devel', 'libbonobo:devel',
        'libgnome:devel', 'libgnomecanvas:devel', 'libbonoboui:devel',
        'libgnomeui:devel', 'libpng:devel',  'popt:devel',
        'startup-notification:devel', 'GConf:runtime',
        'binutils:runtime', 'gawk:runtime', 'gettext:runtime',
        'glibc:runtime', 'perl:runtime', 'pkgconfig:devel', 
        'gstreamer:runtime', 'monodoc:runtime',
        'dbus-sharp:lib', 'gtk-sharp:lib', 'mono:lib', 'gstreamer:devel',
        'hal:devel', 'avahi:lib', 'gst-plugins-base:devel',
        'desktop-file-utils:runtime', 'gtk:runtime', 'dbus-glib:devellib',
        'dbus-glib:devel', 'gnome-sharp:lib', 'libICE:devel', 'libSM:devel',
        'libX11:devel', 'libXrender:devel' ]

    name = 'banshee'
    version = '0.11.0'
    def setup(r):
       r.addArchive('http://banshee-project.org/files/%(name)s/%(name)s-%(version)s.tar.gz')
       r.Configure('--disable-static --disable-helix --disable-vlc \
              --disable-xing --disable-docs --with-gstreamer-0-10 --enable-avahi')
       r.Make()
       r.MakeInstall()
       r.Install('data/images/music-player-banshee.svg','%(datadir)s/pixmaps/')
       r.Run('echo >> %(destdir)s/%(sysconfdir)s/gconf/schemas/audioscrobbler.schemas')
       r.Replace('/usr/lib/pkgconfig/../../bin/mono','/usr/bin/mono','%(destdir)s/usr/bin/banshee')

       r.Requires('ipod-sharp:lib','libipoddevice:lib','hal-sharp:lib','%(bindir)s/banshee')
       r.Requires('libipoddevice:lib','%(bindir)s/banshee')
       r.Requires('hal-sharp:lib','%(bindir)s/banshee')

