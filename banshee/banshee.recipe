class Banshee(AutoPackageRecipe):
    name = 'banshee'
    version = '1.4.3'
    summary = 'Banshee is a multimedia management and playback application for GNOME'
    packageDescription = """
Import, organize, and discover new music with Banshee through its simple and powerful interface and wide array of innovative features. Create your own radio stations or listen to a friends' through Last.fm integration; experience automatic cover art fetching as you listen; and easily browse, search, and control your media collection.
"""

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-sharp:cil', 'gnome-sharp:devellib', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gstreamer:runtime', 'gst-plugins-good:lib', 'gtk:devel', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'gtk:runtime', 'intltool:runtime', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libtool:runtime', 'libxcb:devel', 'libxml2:devel', 'mono-addins:cil', 'mono:cil', 'mono:devel', 'mono:runtime', 'mono-addins:devellib', 'mono-addins:cil', 'ndesk-dbus-glib:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus:cil', 'ndesk-dbus:devellib', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'sqlite:devel', 'taglib-sharp:cil', 'taglib-sharp:devellib', 'xcb-util:devel', 'zlib:devel', 'mono-zeroconf:devellib', 'podsleuth:devellib', 'podsleuth:lib', 'podsleuth:runtime', 'ipod-sharp:devellib', 'libmtp:devel', 'avahi-sharp:devellib', 'avahi-sharp:cil', 'notify-sharp:cil', 'notify-sharp:devellib', 'libXrandr:devel', 'libXxf86vm:devel' ]

    def unpack(r):
        r.addArchive('http://banshee-project.org/files/banshee/banshee-1-%(version)s.tar.bz2')
        r.addPatch('no-video-mimetype.patch')
        # Patch to check notification daemon capabilities bz# 571177
        r.addPatch('http://launchpadlibrarian.net/23077417/dont-be-evil.diff')

    def configure(r):
        r.Configure(' --disable-docs --enable-avahi --enable-mtp --enable-ipod --disable-boo ')

    def policy(r):
        r.Requires('mono-addins:cil', '%(bindir)s/%(name)s-1')
        r.Requires('libmtp:lib', '%(bindir)s/%(name)s-1')
