    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'apr-util:devel', 'apr:devel', 'atk:devel', 'binutils:devel', 'desktop-file-utils:runtime', 'devhelp:devel', 'cairo:devel', 'db:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gdl:devel', 'gettext:runtime', 'glade:devel', 'glib:devel', 'gnome-build:devel', 'gnome-doc-utils:devel', 'gnome-doc-utils:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel', 'gtksourceview:devel=:2-compat', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXau:devel', 'libXdmcp:devel', 'libXft:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'libgnomeui:devel', 'libpng:devellib', 'libstdc++:devel', 'libwnck:devel', 'libxml2:devel', 'libxslt:devel', 'libxslt:runtime', 'ncurses:devel', 'openldap:devel', 'pango:devel', 'pcre:devel', 'perl:lib', 'pkgconfig:devel', 'popt:devel', 'rarian:devel', 'rarian:runtime', 'shared-mime-info:runtime', 'subversion:devel', 'vte:devel', 'zlib:devel','glade:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/sourceforge/anjuta/')

    def configure(r):
        r.Configure('--disable-scrollkeeper')

    def policy(r):
        #FIXME: This is required to build but there must be a better solution
        r.ImproperlyShared(exceptions='%(datadir)s/%(name)s/scripts/anjuta-tags')
        r.Requires('autogen:runtime', '%(bindir)s/anjuta')
        r.Requires('gnome-build:runtime', '%(bindir)s/anjuta')
