class Anjuta(PackageRecipe):
	buildRequires = [ "glibc:devel" ]
	buildRequires.append('libgnome:devel')
	buildRequires.append('libgnomeui:devel')
	buildRequires.append('gtk:devel')
	
	name = "anjuta"
	version = "1.2.3"
	def setup(r):
		r.addArchive('http://nchc.dl.sourceforge.net/sourceforge/anjuta/anjuta-%(version)s.tar.gz')
		r.Configure()
		r.Make()
		r.MakeInstall()
