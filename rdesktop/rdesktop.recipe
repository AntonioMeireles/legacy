class rDesktop(AutoPackageRecipe):

    name = 'rdesktop'
    version = '1.5.0'

    buildRequires = [
        'libao:devel', 'libX11:devel', 'openssl:devel'
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/rdesktop/')

    def configure(r):
        r.Configure('--with-ipv6 --with-sound=libao')

    def policy(r):
        r.AutoDoc(exceptions='doc/')
        r.Doc('doc/*')

