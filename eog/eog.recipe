loadRecipe('gnomepackage.recipe')
class Eog(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'glib:devel', 'pango:devel', 'gtk:devel',
                           'libgnomeui:devel', 'gail:devel',
                           'gnome-vfs:devel',
                           'libgnomeprintui:devel', 'libexif:devel',
                           'intltool:runtime', 'libjpeg:devel',
                           'scrollkeeper:runtime', 'gettext:runtime',
                           'ORBit2:runtime' ])
    name = 'eog'
    version = '2.9.0'
    preMakeInstall = 'GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 '

    docs = ['AUTHORS', 'COPYING', 'ChangeLog', 'NEWS', 'README']
