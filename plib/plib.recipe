class plib(AutoPackageRecipe):
    name = "plib"
    version = "1.8.5"
   
    buildRequires = ['Mesa:devel', 'libICE:devel', 'libSM:devel', 'libXext:devel', 
        'gcc-c++:runtime', 'libXi:devel', 'libXmu:devel']
 
    def unpack(r):
        r.addArchive('http://plib.sourceforge.net/dist/%(name)s-%(version)s.tar.gz')
        if Arch.x86_64: 
            r.macros.cflags += ' -fPIC'
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '

        r.Doc('README', 'NOTICE', 'COPYING')
