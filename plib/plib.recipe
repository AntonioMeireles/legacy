class plib(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "plib"
    version = "1.8.4"

    def setup(r):
        r.addArchive('http://plib.sourceforge.net/dist/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('README', 'NOTICE', 'COPYING')
