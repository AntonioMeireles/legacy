loadSuperClass('kdecorepackage')
class kdeWebDev(kdeCorePackageRecipe):

    name = 'kdewebdev'
    version = '4.2.2+r947239'

    buildRequires = [
        'boost:devel', 'kdelibs:runtime', 'libxml2:devel', 'libxml2:runtime',
        'libxslt:devel', 'libxslt:runtime', 'ruby:devellib', 'ruby:runtime'
    ]

    modules = [
        'kfilereplace',
        'kimagemapeditor',
        'klinkstatus',
        'kommander',
        ('kxsldbg', 'kxsldbg', 'doc/xsldbg'),
    ]

    def postUnpack(r):

        r.addUbuntuPatches('k/kdewebdev-kde4/4:4.2.1-0ubuntu1',
            'kubuntu_01_pthread_link.diff',
        )

        r.Replace('#macro', 'macro', 'doc/CMakeLists.txt')

        r.Replace(
            '/usr/bin/env kross', '%(bindir)s/kross',
            'klinkstatus/src/plugins/scripting/scripts/examples/statistics/statistics.rb'
        )

