class Mono(AutoPackageRecipe):
    name = 'mod_mono'
    version = '1.2.1'

    buildRequires = [ 'mono:devel','httpd:devel', 'binutils:runtime',
        'gawk:runtime', 'pkgconfig:devel', 'subversion:devel' ]

    def unpack(r):
        r.addArchive('http://www.go-mono.com/sources/%(name)s/')
        r.addSource('mod_mono.conf.lamp',
            dest='%(sysconfdir)s/httpd/conf.d/mod_mono.conf', mode=0644)

    def policy(r):
        r.Remove('%(sysconfdir)s/httpd/conf/mod_mono.conf')
        r.ComponentSpec('lib', '.*so')
