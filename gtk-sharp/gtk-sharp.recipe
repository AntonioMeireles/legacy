class GtkSharp(PackageRecipe):
    buildRequires = [ 'gtk:devel', 'mono:runtime', 'libxml2:devel' ]

    name = "gtk-sharp"
    version = "1.0.7"
    
    def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Replace('libgtkhtml-3.0','libgtkhtml-3.6', 'configure')
	r.Configure()
	r.Make()
	r.MakeInstall('GACUTIL_FLAGS="/package gtk-sharp /root %(destdir)s/usr/lib"')
	r.NonBinariesInBindirs(exceptions=['%(bindir)s/.*\.exe'])
