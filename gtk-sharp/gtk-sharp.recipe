loadSuperClass('gnomepackage')
class GtkSharp(GnomePackageRecipe):
    name = 'gtk-sharp'
    version = '2.12.1'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'libglade:devel',
        'libpng:devel', 'libxml2:devel', 'mono:cil', 'mono:devel', 'mono:runtime',
        'perl-XML-LibXML:perl', 'perl:lib', 'pango:devel', 'monodoc:runtime', 'perl:devel']

    patches = [ 'http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/gtk-sharp2/gtk-sharp2-2.10.3-libdir.patch',
                'http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/gtk-sharp2/gtk-sharp-2.8.2-docfix.patch',
                'http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/gtk-sharp2/gtk-sharp2-2.10.3-assemblydir.patch']

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.Replace('/gacdir \$\(DESTDIR\)\$\(prefix\)/lib','/gacdir $(DESTDIR)%(libdir)s', 'configure')


    def policy(r):
        r.Remove('/usr/lib/monodoc/sources/', recursive = True)
