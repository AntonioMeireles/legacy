class PyLint(PackageRecipe):
    name = 'pylint'
    version = '0.14.0'

    buildRequires = [ 'python-setuptools:python', 'logilab-astng:python',
        'logilab-common:python' ]

    def setup(r):
        r.addArchive('ftp://ftp.logilab.fr/pub/pylint/')
        r.PythonSetup()

        if Arch.x86_64:
            r.Move('%(prefix)s/lib', '%(libdir)s')
        
        r.ComponentSpec('test', '%(libdir)s/python.*/test/.*')
