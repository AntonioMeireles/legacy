class supertux(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel",
                      "SDL_image:devel", "desktop-file-utils:runtime" ]
    name = "supertux"
    version = "0.1.2"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/super-tux/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakePathsInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'LEVELDESIGN',
              'NEWS', 'README', 'TODO')

#       Here are our menu links

        r.addSource('supertux.desktop')
        r.Desktopfile('supertux.desktop')
