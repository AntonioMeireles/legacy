loadSuperClass('xorgdatapackage')
class XorgDocs(XorgDataPackageRecipe):
    name = 'xorg-docs'
    version = '1.4'
    component = 'doc'

    buildRequires = [ 'docbook-utils-pdf:runtime', 'docbook-utils:runtime', ]

    # FIXME: Add buildreq to work around RMK-580
    buildRequires.append('tmpwatch:runtime')

    extraConfig = ' --with-x11docdir=%(docdir)s/X11'
