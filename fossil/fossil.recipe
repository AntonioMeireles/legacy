class fossil(CPackageRecipe):
    name = 'fossil'
    version = '20090921191920'

    buildRequires = [ 'zlib:devel', ]

    def setup(r):
        r.addArchive('http://www.fossil-scm.org/download/'
                     'fossil-src-%(version)s.tar.gz')
        r.Make()
        r.Install('fossil', '%(bindir)s/')
        r.AutoDoc(r'.*\.txt')
