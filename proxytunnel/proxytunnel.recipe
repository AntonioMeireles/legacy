class Proxytunnel(CPackageRecipe):
    name = 'proxytunnel'
    version = '1.7.0'

    buildRequires = [ 'openssl:devel', 'zlib:devel', 'pkgconfig:devel',
        'krb5:devel', ]

    def setup(r):
        r.addArchive('mirror://sourceforge/proxytunnel/')
        r.Make()
        r.MakeInstall()
        r.Move('/usr/local/*', '%(prefix)s/')
