class Proxytunnel(CPackageRecipe):
    name = 'proxytunnel'
    version = '1.6.0'

    buildRequires = [ 'openssl:devel', 'zlib:devel', ]

    def setup(r):
        # FIXME: update to 1.7.0 and switch back to sf whenever the site comes back...
        #r.addArchive('mirror://sourceforge/proxytunnel/')
        r.addArchive('mirror://gentoo/distfiles/')
        r.addPatch('http://viewcvs.gentoo.org/viewcvs.py/*checkout*/gentoo-x86/net-misc/proxytunnel/files/proxytunnel-1.6.0-build.patch')
        r.Make()
        r.MakeInstall()
