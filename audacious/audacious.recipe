class Audacious(CPackageRecipe):
    name = 'audacious'
    version = '2.4.0'
    buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus-glib:runtime', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libmcs:devel', 'libmowgli:devel', 'libsamplerate:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel'  ]

    packageSummary = 'Audacious is an advanced audio player'
    packageDescription = 'Audacious is an advanced audio player. It is free, lightweight, based on GTK2, runs on Linux and many other *nix platforms and is focused on audio quality and supporting a wide range of audio codecs. Its advanced audio playback engine is considerably more powerful than GStreamer. Audacious is a fork of Beep Media Player (BMP), which itself forked from XMMS.'

    def setup(r):
        r.addArchive('http://distfiles.atheme.org/')
        r.Remove('audacious2.desktop')
        r.Replace('audacious2.desktop', ' ', 'Makefile')
        r.Configure('--enable-chardet --enable-samplerate --disable-dependency-tracking')
        r.Make()
        r.MakeInstall()
        r.DanglingSymlinks(exceptions='%(bindir)s/')
        r.CheckDestDir(exceptions='%(bindir)s/')
        
        r.Requires('audacious-plugins:lib', '/usr/bin/audacious2')
