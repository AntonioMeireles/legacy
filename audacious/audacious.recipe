class Audacious(AutoPackageRecipe):
    name = 'audacious'
    version = '1.4.5'
    buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus-glib:runtime', 'dbus:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libglade:devel', 'libpng:devel', 'libsamplerate:devel', 'libxml2:devel', 'mcs:devel', 'mowgli:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://distfiles.atheme.org/')

    def configure(r):
        r.Configure('--enable-samplerate')

    def policy(r):
        r.Requires('audacious-plugins:lib', '/usr/bin/audacious')
