class irssi(AutoPackageRecipe):
    name = 'irssi'
    version = '0.8.13'

    buildRequires = [
        'glib:devel',
        'krb5:devel',
        'ncurses:devel',
        'openssl:devel',
        'perl:devel',
        'perl:lib',
        'perl-libwww-perl:perl',
        'perl:runtime',
        'perl-URI:perl',
        'pkgconfig:devel',
        'zlib:devel',
        ]

    def unpack(r):
        r.addArchive('http://www.irssi.org/files/')

    def configure(r):
        r.Configure('--with-plugins --enable-ipv6 --with-textui --with-imlib '
                '--with-bot --with-socks --with-proxy --with-perl="yes" '
                '--with-ncurses')

    def policy(r):
        r.ExcludeDirectories(exceptions=['/usr/lib/irssi/modules'])

