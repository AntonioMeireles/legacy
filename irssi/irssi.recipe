class irssi(AutoPackageRecipe):
    name = 'irssi'
    version = '0.8.15'

    buildRequires = [
        'glib:devel',
        'krb5:devel',
        'ncurses:devel',
        'openssl:devel',
        'perl:devel',
        'perl:lib',
        'perl-libwww-perl:perl',
        'perl:runtime',
        'perl-URI:perl',
        'pkgconfig:devel',
        'zlib:devel',
        ]

    def unpack(r):
        r.addArchive('http://www.irssi.org/files/')

    def configure(r):
        r.Configure(
                '--enable-ipv6 '
                '--with-bot '
                '--with-imlib '
                '--with-ncurses '
                '--with-perl="yes" '
                '--with-plugins '
                '--with-proxy '
                '--with-socks '
                '--with-textui '
                )

    def policy(r):
        r.ExcludeDirectories(exceptions=['/usr/lib/irssi/modules'])

