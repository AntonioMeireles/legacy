class NetworkManagerPPTP(AutoPackageRecipe):
   buildRequires = [ 'ORBit2:devel', 'atk:devel', 'binutils:runtime', 'cairo:devel', 'dbus-glib:devel', 'desktop-file-utils:runtime', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'glibc:devel', 'gnome-vfs:devel', 'gtk:devel', 'gtk:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'NetworkManager:devel', 'ppp:devel', 'intltool:runtime', 'libglade:devel', 'expat:devel' ]
        
   name = "NetworkManager-pptp"
   version = "20060819"

   def unpack(r):
      r.addArchive('http://www.students.ncl.ac.uk/a.j.mee/files/NetworkManager/NetworkManager-pptp_cvs20060819.tar.gz')
      r.Replace('1416','1500','properties/nm-ppp-properties.c')
      r.addPatch('hide.patch')

   def policy(r):
      r.Requires('pptpclient:runtime','%(bindir)s/nm-ppp-starter')
      r.ComponentSpec('lib','%(libdir)s/libnm-ppp-properties.so')

