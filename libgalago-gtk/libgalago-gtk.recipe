class LibgalagoGtk(PackageRecipe):
    buildRequires = [ 'libgalago:devel','gtk:devel', 'atk:devel', 'cairo:devel',
        'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'glibc:devel', 'libpng:devel', 'pango:devel', 'xorg-x11:devel',
        'zlib:devel']

    name = "libgalago-gtk"
    version = "0.5.0"
    
    def setup(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
