class BuildBot(PackageRecipe):
    name = 'buildbot'
    version = '0.7.5'
    buildRequires = [ 'python-setuptools:python',
                      'python-twisted:python',
                      'python-twisted-web:python',
                      'python-twisted-words:python',
                      'python-twisted-mail:python',
                      'gnome-python:python', 'pygtk:python',
                      'python-zopeinterface:python']

    def setup(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/buildbot/buildbot-%(version)s.tar.gz', keyid='1514A7BD')
        r.addPatch('buildbot-0.7.5-mail-on-change.patch')
        r.PythonSetup()
        for path in ('maildirgtk.py', 'debug.py', 'gtkPanes.py', 'runner.py'):
            r.PackageSpec('buildbot-gtk', '.*/' + path)
        r.AutoDoc('docs/', exceptions="epyrun")
