class Steadyflow(CPackageRecipe):
    name = 'steadyflow'
    version = '0.1'
 
    buildRequires = ['atk:devel', 'binutils:runtime', 'cairo:devel', 'cmake:runtime', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gcc:runtime', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libgee:devel', 'libnotify:devel', 'make:runtime', 'pango:devel', 'pkgconfig:devel', 'unique:devel', 'vala:runtime']
 
    def setup(r):
        r.addArchive('http://launchpad.net/steadyflow/trunk/0.1/+download/')
        r.CMake()
        r.Make()
        r.MakeInstall()
