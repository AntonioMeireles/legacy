loadSuperClass('kdecorepackage')
class kdeMultimedia(kdeCorePackageRecipe):

    name = 'kdemultimedia'
    version = '4.3.2+r1032981'

    buildRequires = [
        'alsa-lib:devel', 'cdparanoia:devel', 'cdparanoia:runtime',
        'flac:devel', 'lame:runtime', 'libmusicbrainz:devel', 'libogg:devel',
        'libtunepimp:devel', 'libvorbis:devel', 'pulseaudio:devel',
        'taglib-extras:devel', 'taglib:devel', 'xine-lib:devel'
    ]

    modules = [
        'dragonplayer',
        'juk',
        'kscd',
        'kmix',
        'libkcddb',
        'libkcompactdisc',
        'mplayerthumbs',
        ('kio-plugins-multimedia', 'kioslave'),
        ('strigi-analyzer-multimedia', 'strigi-analyzer'),
    ]

    def postUnpack(r):

        r.addUbuntuPatches('k/kdemultimedia',
            '97_fix_target_link_libraries.diff',
            'kubuntu_06_juk_read_mp4.diff',
        )

