loadSuperClass('kdecorepackage')
class kdeMultiMedia(kdeCorePackageRecipe):

    name = 'kdemultimedia'
    version = '3.5.10'

    verify = False

    buildRequires = [
        'akode:devel', 'cdparanoia:devel', 'cdparanoia:runtime', 'flac:devel',
        'gstreamer:devel', 'libtheora:devel', 'libtool:devel', 'libxml2:devel',
        'pcre:devel', 'popt:devel', 'taglib:devel', 'xine-lib:devel'
    ]

    modules = [
        ('artsbuilder', 'arts'),
        ('artsbuilder', 'doc/artsbuilder'),
        ('arts-plugin-akode', 'akode_artsplugin'),
        ('arts-plugin-audiofile', 'audiofile_artsplugin'),
        ('arts-plugin-xine', 'xine_artsplugin'),
        ('arts-plugin-mpeglib', 'mpeglib_artsplug'),
        ('arts-plugin-mpeglib', 'mpeglib'),
        'juk',
        'kaboodle',
        ('kappfinder-multimedia', 'kappfinder-data'),
        'kaudiocreator',
        ('kfile-plugins-multimedia', 'kfile-plugins'),
        ('kio-plugins-multimedia', 'kioslave'),
        'kmid',
        'kmix',
        'krec',
        'kscd',
        'libkcddb',
        'noatun'
    ]

    def postInstall(r):

        # ImproperlyShared
        r.Remove('%(datadir)s/apps/kconf_update/{noatun.upd,noatun20update}')

