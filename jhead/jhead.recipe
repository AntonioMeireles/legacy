class JHead(CPackageRecipe):
    name = 'jhead'
    version = '2.6'

    def setup(r):
        r.addArchive('http://www.sentex.net/~mwandel/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Make(forceFlags=True)
        r.Install('jhead', '%(bindir)s/jhead')
        r.Install('jhead.1.gz', '%(mandir)s/man1/jhead.1.gz')
