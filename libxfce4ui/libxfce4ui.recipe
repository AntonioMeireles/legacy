class libxfce4ui(XfcePackageRecipe):

    name = 'libxfce4ui'
    version = '4.8.0'

    XfcePackageRecipe.buildRequires.extend([
        'libxfce4util:devel', 'libxml2:devel',
        'startup-notification:devel', 'xfconf:devel'
    ])

    extraConfig = ' --enable-gladeui'
