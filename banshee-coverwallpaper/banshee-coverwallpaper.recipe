class BansheeCoverwallpaper(AutoPackageRecipe):
    name = 'banshee-coverwallpaper'
    version = '0.1.1'
 
    buildRequires = ['GConf:runtime', 'banshee:devellib', 'gettext:runtime', 'gnome-sharp:devellib', 'gtk-sharp:cil', 'intltool:runtime', 'mono:cil', 'mono:devel', 'mono:runtime', 'mono-addins:cil', 'ndesk-dbus:cil', 'pkgconfig:devel']
 
    def unpack(r):
	r.addArchive('http://banshee-unofficial-plugins.googlecode.com/files/banshee-coverwallpaper-%(version)s.tar.gz')
        r.disableParallelMake()
