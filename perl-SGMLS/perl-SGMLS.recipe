loadSuperClass('cpanpackage.recipe')
class PerlSGMLSpm(CPANPackageRecipe):

    #coReqs: openjade, perl
    module = 'SGMLS'
    name = 'perl-SGMLS'

    version = '1.03ii'
    docs = [ 'elisp' ]

    upstreamname = 'SGMLSpm'
    maindirname  = 'SGMLSpm'
    installtarget  = 'install_system'


    #no building necessary
    def build(r):
        # XXX should be r.ArchNeutralLibPath or whatever when we add that to conary
        r.macros.lib='lib'
        return

    def installDocs(r):
        CPANPackageRecipe.installDocs(r)
        r.SetModes('%(thisdocdir)s/DOC/Extras/*', 0644)
