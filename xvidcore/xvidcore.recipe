class Xvidcore(AutoPackageRecipe):
    name = 'xvidcore'
    version = '1.1.3'
 
    buildRequires = ['nasm:runtime']
 
    def unpack(r):
        r.addArchive('http://downloads.xvid.org/downloads/')
        r.mainDir('%(name)s-%(version)s/build/generic')
