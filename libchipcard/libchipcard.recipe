class Libchipcard(AutoPackageRecipe):
    name = 'libchipcard'
    version = '4.2.8'
    buildRequires = [ 
        'gettext:runtime',
        'gwenhywfar:devel',
        'libstdc++:devel',
        'libusb:devel',
        'pkgconfig:devel',
        'sysfsutils:devel',
        'dbus:devel',
        'hal:devel', 
        'zlib:devel',
        'chkconfig:runtime',
    ]

    def unpack(r):
        r.addArchive('http://www2.aquamaniac.de/sites/download/download.php?package=02&release=14&file=01&dummy=%(name)s-%(version)s.tar.gz')

    def policy(r):
        r.SetModes('%(initdir)s/chipcardd', 0755)
        for d in ( '%(localstatedir)s/log/chipcard/services',
                   '%(localstatedir)s/log/chipcard/drivers',
                   '%(localstatedir)s/lib/chipcardd/newcerts',
                   '%(sysconfdir)s/chipcard/server/certs',
                   '%(sysconfdir)s/chipcard/client/certs',
                   ):
            r.ExcludeDirectories(exceptions=d)
