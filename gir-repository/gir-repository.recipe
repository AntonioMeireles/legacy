loadRecipe('gnomepackage')
class GirRepository(GnomePackageRecipe):
    name = 'gir-repository'
    version = '0.6.5'
 
    buildRequires = [ 'automake:runtime', 'autoconf:runtime',
                      'gobject-introspection:devel', 'gobject-introspection:runtime', 'clutter:devel', 'Mesa:devel',
                      'Mesa:devel', 'clutter:devel', 'gobject-introspection:devel',]

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Run('autoreconf')
