loadRecipe('gnomepackage')
class GirRepository(GnomePackageRecipe):
    name = 'gir-repository'
    version = '0.6.5'
 
    buildRequires = [ 'automake:runtime', 'autoconf:runtime',
                      'clutter:devel', 'Mesa:devel',
                      'avahi:devel', 
                      'babl:devel', 
                      'GConf:devel', 
                      'gnome-keyring:devel', 
                      'gnome-menus:devel', 
                      'goocanvas:devel', 
                      'gssdp:devel', 
                      'gstreamer:devel', 
                      'gtk:devel', 
                      'gtksourceview:devel', 
                      'gupnp:devel', 
                      'libnotify:devel', 
                      'libsoup:devel', 
                      'libwnck:devel', 
                      'nautilus:devel', 
                      'poppler-glib:devel', 
                      'unique:devel', 
                      'vte:devel', 
                      'WebKit:devel',
                      ]

    extraConfig = '--disable-static'
    patches = ['gir-repo-install-dbus-glib.patch']

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        # hotfix to behave with latest babl
        r.Replace('babl-0.0', 'babl-0.1', 'gir/Makefile.{in,am}')
        r.Run('autoreconf -fi')

