class Tryton(PackageRecipe):

    name = 'tryton'
    version = '1.4.3'

    buildRequires = ['python-setuptools:python','gnome-python-extras:python', 'mx:python', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python:bin', 'python:devel']

    def setup(r):
        r.macros.subversion = r.version[:3]
        r.addArchive('http://downloads.tryton.org/%(subversion)s/')
        r.PythonSetup()
