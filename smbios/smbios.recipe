class SMBios(CPackageRecipe):
        name = 'smbios'
        version = '0.13.12'
        buildRequires = [ 'doxygen:runtime',
                          'libstdc++:devel',
                          'libxml2:devel',
                          'zlib:devel',
                          'graphviz:runtime'
                          ]

        def setup(r):
                r.macros.version = r.version.replace('_','-')
                r.addArchive('http://linux.dell.com/libsmbios/download/libsmbios/libsmbios-%(version)s/libsmbios-%(version)s.tar.gz')
                r.Configure()
                r.Make()
                r.MakeInstall()
                r.Move('include/smbios/','%(includedir)s/smbios')

