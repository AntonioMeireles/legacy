class SMBios(AutoPackageRecipe):
        name = 'smbios'
        version = '0.13.6.2_BETA'
        buildRequires = ['doxygen:runtime', 'libstdc++:devel', 'libxml2:devel', 'zlib:devel']

        def unpack(r):
                r.macros.version = r.version.replace('_','-')
                r.addArchive('http://linux.dell.com/libsmbios/download/libsmbios/beta/libsmbios-%(version)s.tar.gz')


