loadRecipe('gnomepackage.recipe')
class GnomeThemes(GnomePackageRecipe):
    
    buildRequires = [ 'gtk:devel', 'gtk-engines:devellib', 'gettext:runtime',
        'gtk:runtime', 'cairo:devel' ]
               
    name = 'gnome-themes'
    version = '2.15.92'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addPatch('icons.patch')
        r.addPatch('clearlooks2.patch')

    def install(r):
        r.MakePathsInstall()
        r.ComponentSpec('runtime',
                        '%(libdir)s/gtk-2.0/2.4.0/engines/.*')
        r.Remove('%(libdir)s/gtk-2.0/2.4.0/engines/*.a')
