class NssPamLdapd(AutoPackageRecipe):
    name = 'nss-pam-ldapd'
    version = '0.8.12'
 
    buildRequires = [
        'chkconfig:runtime',
        'cyrus-sasl:devel',
        'krb5:devel',
        'openldap:devel',
        'pam:devel',
    ]
 
    def unpack(r):
        r.addArchive('http://arthurdejong.org/nss-pam-ldapd/')
        r.addSource('http://pkgs.fedoraproject.org/cgit/nss-pam-ldapd.git/plain/nslcd.init',
                    dest='%(initdir)s/nslcd',
                    mode=0755)
        r.addPatch('http://pkgs.fedoraproject.org/cgit/nss-pam-ldapd.git/plain/nss-pam-ldapd-0.8.12-uid-overflow.patch')
        r.MakeDirs('%(localstatedir)s/run/nslcd')
        r.Ownership('nslcd', 'root', '%(localstatedir)s/run/nslcd')
        r.ExcludeDirectories(exceptions='%(localstatedir)s/run/nslcd')
