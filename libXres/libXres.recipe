loadSuperClass('xorgpackage.recipe')
class LibXres(XorgPackageRecipe):
    name = 'libXres'
    version = '1.0.1'
    component = 'lib'

    buildRequires = [ 'libXext:devel', 'resourceproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        r.Requires('xproto:devel', '%(libdir)s/pkgconfig/xres.pc')
