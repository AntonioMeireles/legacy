class RT71FW(PackageRecipe):

    name = 'rt71pci-firmware'
    version = '1.8'

    buildRequires = [ 'unzip:runtime' ]

    def setup(r):
        r.addArchive('http://www.ralinktech.com.tw/data/RT71W_Firmware_V%(version)s.zip')
        r.Move('*', '/lib/firmware/')
        r.Flavor(exceptions='/lib/firmware/.*')
