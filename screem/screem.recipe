class Screem(PackageRecipe):
	buildRequires = [ 'gtk:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel',
		'cairo:devel', 'dbus:devel', 'fontconfig:devel', 'freetype:devel',
		'glib:devel', 'glibc:devel', 'gnome-keyring:devel', 'gnome-menus:devel',
		'gnome-vfs:devel', 'gtksourceview:devel', 'libart_lgpl:devel',
		'libbonobo:devel', 'libbonoboui:devel', 'libcroco:devel', 'libglade:devel',
		'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel',
		'libgnomeprintui:devel', 'libgnomeui:devel', 'libgtkhtml:devel',
		'libpng:devel', 'libxml2:devel', 'pango:devel', 'popt:devel',
		'startup-notification:devel', 'xorg-x11:devel', 'zlib:devel' ]	

	name = "screem"
	version="0.15.4"
	def setup(r):
		r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/screem/screem-%(version)s.tar.gz')
		r.Configure('--disable-update-mime --disable-update-desktop')
		r.Make()
		r.Environment('GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL', '1')
		r.MakeInstall()
