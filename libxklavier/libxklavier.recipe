loadSuperClass('gnomepackage.recipe')
class Libxklavier(GnomePackageRecipe):
    
    buildRequires = [ 'libxml2:devel', 'glib:devel', 'libxkbfile:devel' ]
    
    name = 'libxklavier'
    version = '3.1'

    def unpack(r):
	r.addArchive('mirror://sourceforge/gswitchit/')

    def setup(r):
        extraConfig = ''
        if Use.builddocs:
            extraConfig += ' --enable-doxygen'
        r.Configure(' --with-xkb-base=%(datadir)s/X11/xkb')
        GnomePackageRecipe.setup(r)
	r.addSource('COPYING')
