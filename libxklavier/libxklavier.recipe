loadSuperClass('gnomepackage.recipe')
class Libxklavier(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'libxml2:devel' ])
    
    name = 'libxklavier'
    version = '2.1'

    def unpack(r):
	r.addArchive('http://internap.dl.sourceforge.net/sourceforge/gswitchit/libxklavier-%(version)s.tar.gz')

    def setup(r):
        extraConfig = ''
        if Use.builddocs:
            extraConfig += ' --enable-doxygen'
        r.Configure(' --with-xkb-base=%(x11prefix)s/lib/X11/xkb')
        GnomePackageRecipe.setup(r)
	r.addSource('COPYING')
