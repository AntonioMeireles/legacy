loadRecipe('gnomepackage.recipe', label='conary.specifix.com')
class SoundJuicer(GnomePackageRecipe):
    name = 'sound-juicer'
    version = '0.6.0'

    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend(['libmusicbrainz:devel',
                          'libgnomeui:devel',
                          'glib:devel',
                          'gstreamer:devel',
                          'GConf:devel',
                          'scrollkeeper:runtime',
                          'gcc:runtime',
                          'autoconf:runtime'])

    def setup(r):
        r.addArchive('http://www.burtonini.com/computing/sound-juicer-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
