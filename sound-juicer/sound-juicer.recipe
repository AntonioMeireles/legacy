    version = '2.14.3'

    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend(['libmusicbrainz:devel', 
       'glib:devel', 'gstreamer:devel', 'GConf:devel',
       'gcc:runtime', 'autoconf:runtime', 'ORBit2:devel',
       'atk:devel', 'cairo:devel', 'fontconfig:devel',
       'freetype:devel', 'gnome-keyring:devel', 
       'gnome-vfs:devel', 'gst-plugins-base:devel',
       'libart_lgpl:devel', 'libbonobo:devel',
       'libbonoboui:devel', 'libglade:devel', 'gnome-media:devel',
       'libgnome:devel', 'libgnomecanvas:devel',
       'libpng:devel', 'libxml2:devel', 'libgnomeui:devel',
       'nautilus-cd-burner:devel', 'pango:devel',
       'popt:devel', 'libstdc++:devel', 'taglib:devel' ])


    extraConfig = '--disable-scrollkeeper'
