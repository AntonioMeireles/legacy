class DMRAID(AutoPackageRecipe):
    name = 'dmraid'
    version = '1.0.0.rc14'
    buildRequires = [ 'device-mapper:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://people.redhat.com/~heinzm/sw/dmraid/src/')
        r.mainDir('dmraid/%(version)s')

    def makeinstall(r):
        r.MakePathsInstall()
