class IWLwifi1k(PackageRecipe):

    name = 'iwlwifi-1000-ucode'
    version = '128.50.3.1'

    def setup(r):
        dURL = 'http://www.intellinuxwireless.org/iwlwifi/downloads/'

         
        r.addArchive( dURL )
        r.Install('../*/*.ucode', '/lib/firmware/', mode = 0644)

        r.Flavor(exceptions='/lib/firmware/.*')

