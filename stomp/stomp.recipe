loadInstalled('python=conary.rpath.com@rpl:2')
class Stomp(PackageRecipe):
    name = 'stomp'
    version = '1.7'

    buildRequires = ['python:devel']

    def setup(r):
        r.addMercurialSnapshot('http://www.briggs.net.nz/hg/stomp.py')
        r.addPatch('max_connection_attempts.patch')
        r.Copy('stomp.py', '%s/stomp.py' % Python.sitepkgs)
