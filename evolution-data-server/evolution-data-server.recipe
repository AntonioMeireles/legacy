loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class EvolutionDataServer(GnomePackageRecipe):

    name = 'evolution-data-server'
    version = '1.4.0'

    buildRequires = [ 'glib:devel', 'gnome-vfs:devel', 'GConf:devel',
		      'openldap:devel', 'intltool:runtime', 
		      'libsoup:devel', 'ORBit2:devel', 'libgnome:devel',
		      'libgnomeui:devel'  ]

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace('/var/spool/mail','%(servicedir)s/spool/mail','configure*')
    def setup(r):
	r.disableParallelMake()
	GnomePackageRecipe.setup(r)
