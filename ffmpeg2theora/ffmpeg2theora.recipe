class Thoggen(AutoPackageRecipe):
    name = 'ffmpeg2theora'
    version = '0.21'

    buildRequires = ['ffmpeg:devel', 'libogg:devel', 'libtheora:devel', 'libvorbis:devel', 'pkgconfig:devel', 'zlib:devel']

    def unpack(r):
        r.addArchive('http://www.v2v.cc/~j/%(name)s/')
