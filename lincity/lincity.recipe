class lincity(PackageRecipe):
    buildRequires = [ "glibc:devel", "desktop-file-utils:runtime" ]
    name = "lincity"
    version = "1.12.1"

    def setup(r):
        r.addArchive('http://software.linspire.com/pool-src/l/%(name)s/%(name)s_%(version)s.orig.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('ABOUT-NLS', 'CHANGES', 'COPYING',
              'COPYRIGHT', 'README', 'TODO')

#       Add Jon's great custom Lincity icon, as Lincity doesn't have one!

        r.addSource('lincity.png')
        r.Install('lincity.png', '%(datadir)s/pixmaps/')

#       Here are our menu links

        r.addSource('lincity.desktop')
        r.Desktopfile('lincity.desktop')
