class BansheeXchat(AutoPackageRecipe):
    name = 'banshee-xchat'
    version = '1.2'
 
    buildRequires = []
 
    def setup(r):
        r.addSvnSnapshot('http://banshee-plugin.googlecode.com/svn/trunk/')
        # Install the banshee plugin
        r.Install('banshee_xchat.py', '%(libdir)s/xchat-gnome/plugins/banshee.py')
        r.Install('banshee_xchat.py', '%(libdir)s/xchat/plugins/banshee.py')

