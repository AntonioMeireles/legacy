loadRecipe('gnomepackage.recipe')
class gDesklets(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "gDesklets"
    version = "0.34.3"

    def setup(r):
        r.addArchive('http://www.pycage.de/download/gdesklets/%(name)s-%(version)s.tar.bz2')
        r.Requires('gnome-python-extras:python', '%(bindir)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'INSTALL', 'NEWS', 'README', 'TODO')
