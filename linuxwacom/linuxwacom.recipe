class linuxwacom(AutoPackageRecipe):

    name = 'linuxwacom'
    version = '0.7.5_4'

    buildRequires = [ 'make:runtime', 'gcc:devel', 'gcc:runtime', 'libX11:devel',
        'ncurses:devel', 'libXi:devel', 'tcl:runtime' ]

    def setup(r):
        r.macros.dlversion = r.version.replace('_', '-')
        r.addArchive('mirror://sourceforge/linuxwacom/linuxwacom-%(dlversion)s.tar.bz2')
        r.addPatch('linuxwacom-xorg71.diff')
        r.addSource('10-wacom.rules')

        r.Configure('--enable-libwacomxi=no')
        r.Make()
        r.MakeInstall()

        r.Install('10-wacom.rules', '%(sysconfdir)s/udev/rules.d/10-wacom.rules')
