class Zisofs(AutoPackageRecipe):
    name = 'zisofs'
    version = '1.0.8'
    buildRequires = [ 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://www.kernel.org/pub/linux/utils/fs/zisofs/'
                'zisofs-tools-%(version)s.tar.bz2')

    def configure(r):
        r.Configure()
        r.Replace('INSTALLROOT', 'DESTDIR', 'Makefile')
