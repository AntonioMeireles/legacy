class Keylaunch(CPackageRecipe):
    buildRequires = ['libX11:devel']

    name = 'keylaunch'
    version = '1.3.1'

    def setup(r):
        r.addArchive('http://ftp.debian.org/debian/pool/main/k/keylaunch/%(name)s_%(version)s.tar.gz')

        r.Replace('lib', '%(lib)s', 'Makefile')
        r.Make()
        r.MakeDirs('%(bindir)s')
        r.MakeInstall()
        r.Doc('example_rc')
