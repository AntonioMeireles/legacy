loadSuperClass('rpmpackage.recipe')
class Passivetex(RPMPackageRecipe):
    name = 'passivetex'
    version = '1.25'
    buildRequires = [ 'tetex:runtime', 'xmltex:runtime', 'unzip:runtime' ]

    rpmRelease = '5.1.1'
    rpmPatches = [ 'passivetex-1.21-leader.patch' ]

    def setup(r):
        r.unpack()
        r.Install('*.{sty,xmt}', '%(datadir)s/texmf/tex/xmltex/passivetex/')
        r.TagSpec('texdata', '%(datadir)s/texmf/')
