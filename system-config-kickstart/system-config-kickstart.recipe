class SystemConfigKickstart(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'intltool:runtime' ]
    name = "system-config-kickstart"
    version = "2.5.15"

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2',
            rpm='ftp://ftp.linux.ncsu.edu/pub/fedora/linux/core/3/SRPMS/%(name)s-%(version)s-1.src.rpm')

        #r.Replace('RPM_BUILD_ROOT', 'INSTROOT', 'po/Makefile')
        r.Replace('RPM_BUILD_ROOT', 'INSTROOT', 'po/Makefile')
        r.Replace('python2', 'python', 'system-config-kickstart','src/system-config-kickstart.py','po/*.po',
			'src/RHELPackageGroupList.py','src/testParser.py','src/testProfile.py',
			'src/fedoraPackageGroupList.py')
        r.addSource('system-config-kickstart.desktop')
        r.Make()
        r.MakeInstall(rootVar='INSTROOT')

        r.Requires('rhpl:python', '%(bindir)s/system-config-rootpassword')
        r.Requires('pygtk:python', '%(bindir)s/system-config-rootpassword')
