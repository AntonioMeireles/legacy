class Nodejs(PackageRecipe):
    name = 'nodejs'
    version = 'v04.12'
 
    buildRequires = ['libgcc:devellib', 'libstdc++:devel', 'make:runtime', 'openssl:devel', 'python:devel', 'zlib:devel']
 
    def setup(r):
        r.addGitSnapshot('git://github.com/joyent/node.git')
        r.Run("./configure --prefix=%(prefix)s --destdir=%(destdir)s")
        r.MakeInstall()
