class Symlinks(CPackageRecipe):
    name = 'symlinks'
    version = '1.2'

    def setup(r):

        r.addArchive('ftp://metalab.unc.edu/pub/Linux/utils/file/%(name)s-%(version)s.tar.gz')

        srpm = 'ftp://ftp.redhat.com/pub/redhat/linux/enterprise/3/en/os/i386/SRPMS/symlinks-%(version)s-18.src.rpm'
        for patch in ('symlinks-1.2-nostatic.patch',
                      'symlinks-1.2-fixman.patch'):
             r.addPatch(patch, rpm=srpm)

        r.Make()

        r.Install('symlinks', '%(bindir)s/', mode=0755)
        r.Install('symlinks.8', '%(mandir)s/man8/')
