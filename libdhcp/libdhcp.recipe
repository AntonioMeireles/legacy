loadSuperClass('rpmpackage')
class Libdhcp(AutoPackageRecipe):
    name = 'libdhcp'
    version = '1.99.7'
    rpmRelease = '1.fc9'

    buildRequires = ['libdhcp4client:devel', 'libdhcp6client:devel',
        'libnl:devel', 'openssl:devel', 'dhcp:devel',
        'pkgconfig:devel', 'openldap:devel', 'gcc-c++:runtime', 'gcc-fortran' ]

    def unpack(r):
        r.addArchive('http://fedorahosted.org/releases/l/i/libdhcp/')
        r.addPatch('libdhcp-reqs.patch')

