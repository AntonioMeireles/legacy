loadSuperClass('binarypackage')
class Winff(BinaryPackageRecipe):
    name = 'winff'
    version = '1.2.0_2'
 
    buildRequires = ['desktop-file-utils:runtime']
 
    def unpack(r):
        r.macros.version = r.version.replace('_', '-')
        r.macros.site = 'http://winff.googlecode.com/files/'

        dist = [
            ('winff-%(version)s.i386.rpm', Arch.x86),
            ('winff-%(version)s.x86_64.rpm', Arch.x86_64),
        ]
        for (rpm, arch) in dist:
            r.addArchive('%(site)s/'+rpm, dir='/', use=(arch==True))

        r.Requires('ffmpeg:runtime', 'winff:runtime')
