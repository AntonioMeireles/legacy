class QcaOsslPlugin2(AutoPackageRecipe):

    name = 'qca2-ossl'
    version = '2.0.0+beta3'

    buildRequires = [
        'libstdc++:devel', 'openssl:devel', 'qca2:devel', 'qt4:devel'
    ]

    def unpack(r):

        r.macros.archive_name = 'qca-ossl'
        r.macros.archive_version = r.version.replace('+', '-')
        r.addArchive('http://delta.affinix.com/download/qca/%(major_version)s/plugins/')


    def configure(r):

        r.Run('echo "INCLUDEPATH += %(includedir)s/QtCrypto" > conf.pri')
        r.Make('qca-ossl.pro', makeName='qmake-qt4')

    def makeinstall(r):

        r.Install('lib/libqca-ossl.so', '%(libdir)s/qt4/plugins/crypto/')

