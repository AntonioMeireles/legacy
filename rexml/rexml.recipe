class ReXml(PackageRecipe):
    name = 'rexml'
    version = '3.1.7'
    
    buildRequires = [ 'ruby:runtime', 'ruby:lib', 'ruby:devellib' ]   

    def setup(r):
        r.addArchive('http://www.germane-software.com/archives/%(name)s_%(version)s.tgz')
        r.mainDir('%(name)s_%(version)s')
        r.Run('ruby  bin/install.rb -d %(destdir)s')
