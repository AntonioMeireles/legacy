class jack(PackageRecipe):
    buildRequires = [ "glibc:devel", "alsa-lib:lib", "libsndfile:lib",
                      "readline:lib", "libtermcap:lib" ]
    name = "jack"
    version = "0.99.0"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/jackit/%(name)s-audio-connection-kit-%(version)s.tar.gz')
        r.mainDir('jack-audio-connection-kit-%(version)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

