class Jack(AutoPackageRecipe):
    name = 'jack'
    version = '0.102.20'

    buildRequires = [ 'alsa-lib:devel', 'doxygen:runtime',
        'libtermcap:devel', 'pkgconfig:devel', 'portaudio:devel',
        'readline:devel', 'libsndfile:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/jackit/'
                     'jack-audio-connection-kit-%(version)s.tar.gz')
