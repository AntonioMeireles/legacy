class jack(AutoPackageRecipe):
    name = 'jack'
    version = '0.103.0'

    buildRequires = [ 'alsa-lib:devel', 'libsndfile:devel', 'libtermcap:devel',
	'glibc:devel', 'portaudio:devel', 'readline:devel', 'doxygen:runtime', 'pkgconfig:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/jackit/jack-audio-connection-kit-%(version)s.tar.gz')
    def configure(r):
        r.Configure(' --enable-alsa --enable-optimize'
                    ' --enable-optimization-by-compiler' 
                    ' --disable-optimization-by-cpu'
                    ' --disable-freebob --disable-oldtrans'
                    ' --disable-portaudio')
