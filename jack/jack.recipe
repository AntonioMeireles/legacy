class jack(CPackageRecipe):
    buildRequires = [ 'alsa-lib:devel', 'libsndfile:devel', 'libtermcap:devel',
	'glibc:devel', 'portaudio:devel', 'readline:devel' ]
    name = "jack"
    version = "0.99.0"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/jackit/%(name)s-audio-connection-kit-%(version)s.tar.gz')
        r.mainDir('jack-audio-connection-kit-%(version)s/')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

