loadSuperClass('cpanpackage')
class libwwwperl(CPANPackageRecipe):
    name = 'perl-libwww-perl'
    version = '5.826'
    author = 'GAAS'

    buildRequires = [
        'perl-IO-Compress:perl',
        'perl-HTML-Parser:perl',
        'perl-IO-Socket-SSL:perl',
        'perl-URI:perl',
        'perl:devel',
    ]

    def post(r):
        r.Requires(exceptDeps='perl: Net::SSL')
