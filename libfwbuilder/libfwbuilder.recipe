class Libfwbuilder(CPackageRecipe):
    name = 'libfwbuilder'
    version = '4.1.3'
 
    buildRequires = ['cppunit:devel', 'distcc:runtime', 'libstdc++:devel', 'libxml2:devel', 'libxslt:devel', 'lm_sensors:devel', 'net-snmp:devel', 'openssl:devel', 'qt4:devel', 'zlib:devel']
 
    def setup(r):
        r.addArchive('http://sourceforge.net/projects/fwbuilder/files/Current_Packages/4.1.3/libfwbuilder-4.1.3.tar.gz')
        r.Configure('--prefix=%(prefix)s --with-qmake=qmake-qt4', configureName='autogen.sh')
        r.Make()
        r.MakeInstall(rootVar='INSTALL_ROOT')
