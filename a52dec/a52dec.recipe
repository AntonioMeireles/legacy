class a52dec(AutoPackageRecipe):

    name='a52dec'
    version='0.7.4'

    buildRequires = ['djbfft:devel']

    def setup(r):
        r.addArchive('http://liba52.sourceforge.net'
                     '/files/%(name)s-%(version)s.tar.gz')
        r.macros.cflags = '-fPIC'
	r.Configure('--enable-djbfft')
	r.Make()
	r.MakeInstall()
