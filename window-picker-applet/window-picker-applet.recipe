class WindowPickerApplet(AutoPackageRecipe):
    name = 'window-picker-applet'
    version = '0.3'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'esound:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel',  'gettext:runtime', 'glib:devel', 'gnome-keyring:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'gtk:devel', 'intltool:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libXres:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'libwnck:devel', 'libxcb:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'popt:devel', 'startup-notification:devel', 'xcb-util:devel', 'zlib:devel', 'autoconf:runtime','automake:runtime', 'libtool:runtime',]
 
    def unpack(r):
        r.addArchive('http://launchpadlibrarian.net/17144976/window-picker-applet_0.3ubuntu10.tar.gz')
        r.addPatch('fix_bonobo.patch')
        r.Replace('gnome-session-save --kill --gui','gnome-shutdown','src/task-title.c')
        r.Run('autoreconf -fi')
