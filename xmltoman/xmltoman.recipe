class Xmltoman(PackageRecipe):
    name = 'xmltoman'
    version = '0.4'

    buildRequires = [
        'make:runtime', 'perl-XML-Parser:perl', 'perl:devel', 'perl:runtime',
    ]

    def setup(r):
        r.addArchive("mirror://sourceforge/%(name)s/")
        r.Make()
        r.MakeInstall("PREFIX=%(prefix)s")
