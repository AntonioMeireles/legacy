loadSuperClass('kdepackage')
class Kile(kdePackageRecipe):

    name = 'kile'
    version = '2.0'

    buildRequires = [
        'pcre:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/kile/')

    def policy(r):

        # Conflicts with kdelibs
        r.Remove('%(datadir)s/apps/katepart/syntax/{bibtex,latex}.xml')

