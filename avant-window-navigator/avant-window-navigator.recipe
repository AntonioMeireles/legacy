    def setup(r):
        # r.addArchive('http://launchpad.net/awn/0.4/%(version)s/+download/%(name)s-%(version)s.tar.gz')
        r.addBzrSnapshot('lp:awn', tag = '830')
        r.Run(' intltoolize --copy --force --automake && gtkdocize --copy && autoreconf -fi')
        r.Configure('--disable-static '
                    '--with-gnu-ld '
                    '--with-vala '
                    '--disable-shave')
        r.Replace(('^hardcode_libdir_flag_spec=.*',
                   'hardcode_libdir_flag_spec=""'),
                  ('^runpath_var=LD_RUN_PATH',
                   'runpath_var=DIE_RPATH_DIE'),
                  'libtool')
        r.Make()
        r.MakeInstall()
        r.Replace('libdir=\$\{exec_prefix\}\/lib', 'libdir=%(libdir)s', '%(libdir)s/pkgconfig/awn.pc')
