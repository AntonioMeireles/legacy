class Cairo(AutoPackageRecipe):
    name = 'cairo'
    version = '1.2.0'

    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'libpng:devel', 
                      'zlib:devel', 'gcc-c++:runtime',
                      'libstdc++:devel', 'pkgconfig:devel', 
	'libICE:devel','libSM:devel','libX11:devel','libXau:devel',
	'libXdmcp:devel','libXrender:devel' ]

    def unpack(r):
        r.addArchive('http://cairographics.org/releases/%(name)s-%(version)s.tar.gz')
