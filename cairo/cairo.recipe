class Cairo(AutoPackageRecipe):
    name = 'cairo'
    version = '1.4.12'

    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'libpng:devel',
                      'pkgconfig:devel', 'zlib:devel', 'expat:devel',
                      'libICE:devel', 'libSM:devel', 'libX11:devel',
                      'libXext:devel', 'libXrender:devel', 'libXau:devel',
                      'libXdmcp:devel', ]

    def unpack(r):
        r.addArchive('http://cairographics.org/releases/')

    def configure(r):
        r.Configure('--enable-warnings --enable-xlib --enable-freetype '
                    '--enable-ps --enable-pdf --enable-svg --disable-gtk-doc')
