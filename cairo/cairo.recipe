loadSuperClass('rpmpackage')
class Cairo(RPMPackageRecipe,AutoPackageRecipe):
    name = 'cairo'
    version = '1.4.10'
    isOPENsuse = True
    rpmRelease = '11'
    rpmPatches = ['cairo-1.0.2-depth-fix-1.patch',
                  'bugzilla-104365.patch',
                  'cairo-1.4.10-lcd-filter-1.patch' ]

    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'libpng:devel',
                      'zlib:devel', 'gcc-c++:runtime', 'libXau:devel', 'libxml2:devel',
                      'libstdc++:devel', 'pkgconfig:devel', 'libX11:devel',
                      'libICE:devel','libSM:devel', 'libXdmcp:devel',
                      'libXrender:devel', 'pkgconfig:devel', 'expat:devel', 
                      'glitz:devel', 'xcb-util:devel']

    def unpack(r):
        r.addArchive('http://cairographics.org/releases/')


    def configure(r):
        r.Configure('--enable-glitz --enable-xcb --enable-ps --enable-freetype  --enable-pdf --enable-svg ')
