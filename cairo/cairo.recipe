class Cairo(AutoPackageRecipe):
    name = 'cairo'
    version = '1.10.2'

    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'libpng:devel',
                      'zlib:devel', 'gcc-c++:runtime', 'libXau:devel', 'libxml2:devel',
                      'libstdc++:devel', 'pkgconfig:devel', 'libX11:devel',
                      'libICE:devel','libSM:devel', 'libXdmcp:devel',
                      'libXrender:devel', 'pkgconfig:devel', 'expat:devel', 
                      'xcb-util:devel', 'librsvg:devel', 'poppler:devel', 'poppler-glib:devel',
                      'ghostscript:runtime', 'pixman:devel', 'libspectre:devel',
                      'gobject-introspection:devel', 'gtk-doc:runtime']


    def unpack(r):
        r.addArchive('http://cairographics.org/releases/%(name)s-%(version)s.tar.gz')
        # gets it at _normal_ speed with nv driver
        r.addPatch('http://aur.archlinux.org/packages/cairo-snapshot/cairo-snapshot/cairo-1.10.0-buggy_gradients.patch')
        # from fedora
        r.addPatch('0001-image-Don-t-crash-on-weird-pixman-formats.patch')

    def configure(r):
        r.Configure(' --disable-static'
                    ' --enable-warnings'
                    ' --enable-xlib'
                    ' --enable-freetype'
                    ' --enable-ps'
                    ' --enable-pdf'
                    ' --enable-svg'
                    ' --enable-tee'
                    ' --enable-gobject'
                    ' --disable-gtk-doc'
                    )

