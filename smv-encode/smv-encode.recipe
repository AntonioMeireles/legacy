class SMVEncode(AutoPackageRecipe):
    name = "smv-encode"
    version = "0.57"
   
    buildRequires = ['atk:devel', 'cairo:devel', 'cairomm:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'glibmm:devel', 'gtk:devel', 'gtkmm:devel', 'gtkmm:devellib', 'libX11:devel', 'libXrender:devel', 'libglade:devel', 'libglademm:devel', 'libpng:devel', 'libsigc++:devel', 'libstdc++:devel', 'libxcb:devel', 'libxml2:devel', 'pango:devel', 'pangomm:devel', 'pixman:devel', 'xcb-util:devel', 'zlib:devel', 'pkgconfig:devel', 'desktop-file-utils:runtime']
 
    def unpack(r):
        r.addArchive('http://www.cs.bgu.ac.il/~yurac/interests/smv-encode/package/smv-encode_%(version)s.tar.gz')
        r.addSource('smv-encode.desktop')
        r.Desktopfile('smv-encode.desktop')

