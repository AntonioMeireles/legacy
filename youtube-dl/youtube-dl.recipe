class Youtubedl(AutoPackageRecipe):

    name = 'youtube-dl'
    version = '2010.02.13'

    packageSummary = 'youtube-dl is a small command-line program to download videos from YouTube.com'
    packageDescription = 'youtube-dl is a small command-line program to download videos from YouTube.com'

    buildRequires = ['python:devel']

    def setup(r):
        r.addSource('http://www.arrakis.es/~rggi3/youtube-dl/youtube-dl', dest='%(bindir)s/%(name)s', mode=0755)

