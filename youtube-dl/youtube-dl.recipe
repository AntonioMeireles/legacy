class Youtubedl(AutoPackageRecipe):

    name = 'youtube-dl'
    version = '2013.07.19'

    packageSummary = 'youtube-dl is a small command-line program to download videos from YouTube and other services'
    packageDescription = 'youtube-dl supports downloading from YouTube, Metacafe, Google Video, Photobucket videos, Yahoo! video, Dailymotion, blip.tv, vimeo, myvideo.de, The Daily Show/Colbert Nation, The Escapist and on some other sites with a generic downloader.'

    buildRequires = ['python:devel']

    def setup(r):
        r.addSource('https://raw.github.com/rg3/%(name)s/%(version)s/%(name)s', dest='%(bindir)s/%(name)s', mode=0755)

