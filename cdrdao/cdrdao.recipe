class cdrdao(PackageRecipe):
    buildRequires = [ 'glibc:devel', 'libao:devel', 'libgcc:devellib',
	'libogg:devel', 'libstdc++:devel', 'libvorbis:devel' ]
    name = "cdrdao"
    version = "1.2.0"

    def setup(r):
        r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure('--without-lame --with-linux-qnx-sched')
        r.Make()
        r.MakePathsInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'CREDITS', 'README',
              'README.PlexDAE', 'README.Win32')
