class cdrdao(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "cdrdao"
    version = "1.2.0"

    def setup(r):
        r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakePathsInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'CREDITS', 'README',
              'README.PlexDAE', 'README.Win32')
