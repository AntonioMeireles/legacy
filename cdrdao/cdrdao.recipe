class cdrdao(AutoPackageRecipe):
    buildRequires = [ 'glibc:devel', 'libao:devel', 'libgcc:devellib',
'lame:devel', 'libmad:devel', 'libogg:devel', 'libstdc++:devel', 'libvorbis:devel', 'pkgconfig:devel' ]
    name = "cdrdao"
    version = "1.2.2"

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
    def configure(r):
        r.Configure(' --with-lame --with-ogg-support'
                    ' --with-mp3-support')
