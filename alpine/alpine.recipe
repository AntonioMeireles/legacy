class Alpine(AutoPackageRecipe):
    name = 'alpine'
    version = '2.00'
 
    buildRequires = ['aspell:runtime', 'e2fsprogs:devel', 'gettext:runtime', 
        'intltool:runtime', 'krb5:devel', 'ncurses:devel', 'openldap:devel', 
        'openssl:devel', 'pam:devel', 'passwd:runtime', 'tcl:devel']
 
    def unpack(r):
        r.addArchive('ftp://ftp.cac.washington.edu/alpine/')

