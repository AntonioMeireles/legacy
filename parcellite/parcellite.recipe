class PaRcellite(AutoPackageRecipe):
    name = 'parcellite'
    version = '0.8'

    buildRequires = ['autoconf:runtime', 'gettext:runtime', 'intltool:runtime', 'desktop-file-utils:runtime', 'pkgconfig:devel', 'atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'xcb-util:devel', 'zlib:devel']

    def unpack(r):
        r.addArchive('http://xyhthyx.googlecode.com/files/%(name)s-%(version)s.tar.gz')







