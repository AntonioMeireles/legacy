# not an AutoPackageRecipe because no C code required to build
class Texi2html(BuildPackageRecipe):

    buildRequires = [ 'perl:runtime' ]

    name = 'texi2html'
    version = '1.64'

    def setup(r):
        r.addArchive('http://www.mathematik.uni-kl.de/~obachman/Texi2html/Distrib/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Move('/usr/html/*', '%(thisdocdir)s/')
