class Powertop(CPackageRecipe):
    name = 'powertop'
    version = '1.8'

    buildRequires = ['ncurses:devel']

    def setup(r):
        r.addArchive('http://www.linuxpowertop.org/download/')
        r.Make()
        r.MakeInstall()
