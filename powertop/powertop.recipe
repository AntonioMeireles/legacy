class Powertop(AutoPackageRecipe):
    name = 'powertop'
    version = '2.1'

    buildRequires = [
        'ncurses:devel', 
        'gettext:runtime', 
        'libnl:devel',
        'libstdc++:devel', 
        'pciutils:devel', 
        'pkgconfig:devel', 
        'zlib:devel', 
        'intltool:runtime', 
            ]

    def unpack(r):
        r.addArchive('https://01.org/%(name)s/sites/default/files/downloads/')

