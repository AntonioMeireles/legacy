class Powertop(CPackageRecipe):
    name = 'powertop'
    version = '1.2'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('http://www.linuxpowertop.org/download/')
        r.Make()
        r.MakeDirs('%(sbindir)s')
        r.Install('powertop','%(sbindir)s')
