class Elementary(AutoPackageRecipe):
    name = 'elementary'
    version = '1.7.5'
 
    buildRequires = [
        'dbus:devel', 
        'desktop-file-utils:runtime', 
        'doxygen:runtime', 
        'ecore:devel', 
        'edbus:devel', 
        'edje:devel', 
        'edje:runtime', 
        'eet:devel', 
        'eet:runtime', 
        'efreet:devel', 
        'eina:devel', 
        'eio:devel', 
        'emotion:devel', 
        'ethumb:devel', 
        'evas:devel', 
        'gettext:runtime', 
        'intltool:runtime', 
        'libexif:devel', 
        'pkgconfig:devel',
            ]
 
    def unpack(r):
        r.addArchive("http://download.enlightenment.org/releases/elementary-%(version)s.tar.gz")
