                    ' --disable-scrollkeeper ' 
                    ' --enable-daap ' 
                    ' --enable-libnotify ' 
                    ' --enable-python ' 
                    ' --with-libbrasero-media ' 
                    ' --enable-browser-plugin' 
                    ' --with-help-formats ' 
                    ' --with-mtp ' 
                    ' --with-gnome-keyring ')

    def unpack(r):
