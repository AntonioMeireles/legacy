class Units(AutoPackageRecipe):
    name = 'units'
    version = '1.85'
    buildRequires = [ 'ncurses:devel', 'readline:devel']

    def unpack(r):
        r.addArchive('http://ftp.gnu.org/gnu/%(name)s/%(name)s-%(version)s.tar.gz')

    def makeinstall(r):
        r.MakePathsInstall()
