class pylibmc(CPackageRecipe):
    name = 'pylibmc'
    version = '1.1.1'

    buildRequires = [
        'libmemcached:devel',
        'python:devel',
        'zlib:devel',
    ]

    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/p/pylibmc/')
        r.PythonSetup()
