class Pylibmc(CPackageRecipe):
    name = 'pylibmc'
    version = '0.6.1'
 
    buildRequires = [
        'libmemcached:devel',
        'python:devel',
        'python-setuptools:python',
      ]
 
    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/p/pylibmc/')
        r.addPatch('pylibmc-0.6.1-python2.4.patch')
        r.PythonSetup()
