loadRecipe('gnomepackage.recipe')
class GnomeApplets(GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'gtk:devel', 'libgnomeui:devel',
       'gnome-panel:devel', 'libgtop:devel', 'pango:devel',
       'gail:devel', 'libxklavier:devel', 'libglade:devel',
       'gstreamer:devel', 'libbonoboui:devel', 'intltool:runtime',
       'gst-plugins-base:devel', 'GConf:devel', 'ORBit2:devel',
       'atk:devel', 'cairo:devel', 'dbus:devel', 'fontconfig:devel',
       'freetype:devel', 'gnome-desktop:devel', 'gnome-keyring:devel',
       'gnome-vfs:devel', 'gucharmap:devel', 'hal:devel',
       'libart_lgpl:devel', 'libbonobo:devel', 'libgnome:devel',
       'libgnomecanvas:devel', 'libnotify:devel', 'libpng:devel',
       'libwnck:devel', 'libxml2:devel', 'popt:devel',
       'startup-notification:devel', 'dbus-glib:devellib',
       'perl:lib', 'GConf:runtime', 'docbook-utils:runtime',
       'gettext:runtime', 'glib:runtime', 'gtk:runtime',
       'libxslt:runtime', 'perl:runtime', 'scrollkeeper:runtime',
       'gcc-c++:runtime', 'gnome-doc-utils:devel', 'pygobject:python',
       'gnome-doc-utils:runtime', 'cpufrequtils:devel', 'desktop-file-utils:runtime',
       'gnome-python-desktop:python', 'gnome-python-extras:python',
       'gnome-python:python', 'pygtk:python', 'gnome-icon-theme:devellib' ]

    name = 'gnome-applets'
    version = '2.17.1'


    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'

    def setup(r):
        r.disableParallelMake()
        GnomePackageRecipe.setup(r)
        # add newline
        r.Run('echo >> %(destdir)s/etc/gconf/schemas/geyes.schemas')

    def unpack(r):
        GnomePackageRecipe.unpack(r)

    def install(r):
        GnomePackageRecipe.install(r)
        r.SetModes('%(bindir)s/cpufreq-selector', 04755)
