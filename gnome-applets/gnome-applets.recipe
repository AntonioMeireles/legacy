loadRecipe('gnomepackage')
class GnomeApplets(GnomePackageRecipe):

    buildRequires = [
        'GConf:devel',
        'GConf:runtime',
        'NetworkManager:devellib',
        'ORBit2:devel',
        'cpufrequtils:devel',
        'dbus-glib:devellib',
        'dbus:devel',
        'desktop-file-utils:runtime',
        'docbook-utils:runtime',
        'gcc-c++:runtime',
        'gettext:runtime',
        'glib:runtime',
        'gnome-desktop:devel',
        'gnome-doc-utils:runtime',
        'gnome-icon-theme:devellib',
        'gnome-panel:devel',
        'gnome-python-desktop:python',
        'gnome-python-extras:python',
        'gnome-python:python',
        'gst-plugins-base:devel',
        'gstreamer:devel',
        'gtk:runtime',
        'gucharmap:devel',
        'hal:devel',
        'intltool:runtime',
        'libart_lgpl:devel',
        'libbonobo:devel',
        'libbonoboui:devel',
        'libgnome:devel',
        'libgnomecanvas:devel',
        'libgtop:devel',
        'libgweather:devel',
        'libnotify:devel',
        'libwnck:devel',
        'libxklavier:devel',
        'libxslt:runtime',
        'perl:lib',
        'perl:runtime',
        'polkit-gnome:devel',
        'polkit:devel',
        'popt:devel',
        'pygobject:python',
        'pygtk:python',
        'rarian:devel',
        'rarian:runtime',
        'startup-notification:devel',
        ]

    name = 'gnome-applets'
    version = '2.29.5'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper --enable-suid=no --enable-mixer-applet '

    def policy(r):
        r.Run('echo >> %(destdir)s/etc/gconf/schemas/geyes.schemas')
        r.SetModes('%(bindir)s/cpufreq-selector', 04755)
