loadSuperClass('gnomepackage')
class GnomeApplets(GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'gtk:devel', 'libgnomeui:devel', 'gnome-panel:devel',
		'libgtop:devel', 'pango:devel', 'gail:devel', 'libxklavier:devel',
		'libglade:devel', 'gstreamer:devel', 'libbonoboui:devel', 'intltool:runtime',
		'gst-plugins:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel',
		'cairo:devel', 'dbus:devel', 'fontconfig:devel', 'freetype:devel',
		'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-vfs:devel',
		'gucharmap:devel', 'hal:devel', 'libart_lgpl:devel', 'libbonobo:devel',
		'libgnome:devel', 'libgnomecanvas:devel', 'libnotify:devel',
		'libpng:devel', 'libwnck:devel', 'libxml2:devel', 'popt:devel',
		'startup-notification:devel' ]

    name = 'gnome-applets'
    version = '2.12.2'


    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'

    def setup(r):
        r.disableParallelMake()
        GnomePackageRecipe.setup(r)
	# add newline
	r.Run('echo >> %(destdir)s/etc/gconf/schemas/geyes.schemas')
