class Googsystray(PackageRecipe):
    name = 'googsystray'
    version = '1.3.0'
 
    buildRequires = [
        'python-setuptools:python',
        'desktop-file-utils:runtime', 
        'gettext:runtime', 
        'intltool:runtime']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/googsystray/')
        r.PythonSetup(data='--install-data=%(prefix)s')
