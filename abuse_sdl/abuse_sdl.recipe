class abuse_sdl(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel",
                      "SDL_image:devel", "desktop-file-utils:runtime" ]
    name = "abuse_sdl"
    version = "0.7.0"

    def setup(r):
        r.addArchive('http://www.labyrinth.net.au/~trandor/abuse/files/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'NEWS',
              'README', 'TODO')
