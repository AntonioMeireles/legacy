class Freeglut(AutoPackageRecipe):
    buildRequires = [ 'xorg-x11:devel' ]

    name = 'freeglut'
    version = '2.4.0'

    def unpack(r):
        r.addArchive("http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz")

    def policy(r):
	r.Move('%(includedir)s/GL', '%(x11prefix)s/include/GL')
