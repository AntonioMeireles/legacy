class Libvpx(CPackageRecipe):
    name = 'libvpx'
    version = '0.9.5'
 
    buildRequires = ['nasm:runtime']
 
    def setup(r):
        r.addArchive('http://webm.googlecode.com/files/libvpx-v%(version)s.tar.bz2')
        r.ManualConfigure('--enable-vp8 --enable-runtime-cpu-detect --enable-postproc --enable-pic --prefix=%(prefix)s')
        r.Make()
        r.MakeInstall('DESTDIR=%(destdir)s')
