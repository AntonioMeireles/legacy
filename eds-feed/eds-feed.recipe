class EdsFeed(PackageRecipe):
    buildRequires = [ 'libgalago:devel','evolution-data-server:devel', 'GConf:devel',
        'ORBit2:devel', 'dbus:devel', 'glib:devel', 'glibc:devel',
        'gnome-vfs:devel', 'libbonobo:devel', 'libgnome:devel',
        'libxml2:devel', 'popt:devel', 'zlib:devel', 'dbus-glib:devellib' ]

    name = "eds-feed"
    version = "0.5.0"
    
    def setup(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
