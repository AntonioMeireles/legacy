class Gaim(AutoPackageRecipe):
    name = 'gaim'
    version = '2.0.0beta3'

    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel',
        'evolution-data-server:devel', 'glib:devel',
        'gnome-vfs:devel', 'libbonobo:devel',
        'libgnome:devel', 'libxml2:devel', 'pango:devel',
        'popt:devel', 'zlib:devel', 'perl:runtime',
        'libao:devel', 'startup-notification:devel',
        'audiofile:devel', 'gtkspell:devel', 'aspell:devel',
        'nss:devel', 'pygobject:python', 
        'nspr:devel', 'gtk:devel', 'pkgconfig:devel',
        'cairo:devel', 'dbus-glib:devellib', 'dbus:devel',
        'fontconfig:devel', 'freetype:devel', 
        'libpng:devel', 'perl:devel', 'doxygen:runtime',
        'dbus-glib:devel', 'dbus-python:python', 'pygtk:python', 'perl:lib',
        'avahi:devel', 'gettext:runtime', 'mono:devel', 'mono:lib',
	'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXScrnSaver:devel',
	'libXext:devel', 'libXrender:devel', 'gcc-c++:runtime' ]

    def unpack(r):
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge/gaim'
        r.addArchive('%(sf)s/gaim-%(version)s.tar.bz2', keyid='4C292FCC')
        r.macros.optflags = '-g -Os'
        r.addPatch('logging.patch')
        r.addPatch('gaim-2.0.0_beta3-avahi-compat.patch')
        r.addSource('foresight-default-prefs.xml')

    def install(r):
	r.Install('foresight-default-prefs.xml','%(sysconfdir)s/gaim/prefs.xml')

    def configure(r):
        r.Configure( 	' --disable-tcl --disable-tk --enable-gnutls=no --enable-nss=yes'
		' --enable-mono' 
		'  --with-nss-includes=/usr/include/nss/ --with-nspr-includes=/usr/include/'
		' --with-nss-libs=/usr/lib --with-nspr-libs=/usr/lib' 
		)
        r.disableParallelMake()

    def policy(r):
        # libtool automatically makes .a files for all the .so plugins
        # that gaim builds.  They're useless, so we remove them.
        r.RemoveNonPackageFiles(r'.*\.a')
        r.Remove('%(libdir)s/gaim/relnot.so')
        r.AutoDoc('doc/CREDITS', 'doc/PERL-HOWTO.dox')
        r.TagSpec('desktop-file', '%(datadir)s/applications/gaim.desktop')
