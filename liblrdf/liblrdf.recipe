class liblrdf(PackageRecipe):
    buildRequires = [ 'curl:devel', 'glibc:devel', 'libxml2:devel', 'libxslt:devel', 'openssl:devel', 'raptor:devel', 'zlib:devel' ]
    name = "liblrdf"
    version = "0.4.0"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/lrdf/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
