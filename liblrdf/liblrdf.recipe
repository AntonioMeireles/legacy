class LiblRdf(AutoPackageRecipe):

    name = 'liblrdf'
    version = '0.4.0'


    buildRequires = [ 'curl:devel', 'ladspa_sdk:devel', 'libxml2:devel',
                      'libxslt:devel', 'openssl:devel', 'pkgconfig:devel',
                      'raptor:devel', 'raptor:devellib', 'raptor:lib', 'raptor:runtime', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/lrdf/'
                     '%(name)s-%(version)s.tar.gz')

