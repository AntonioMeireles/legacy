loadSuperClass('rpmpackage')
class Pam_krb5(RPMPackageRecipe, CPackageRecipe):
    name = 'pam_krb5'
    version = '2.2.11'
    tarballName = '%(name)s-%(version)s-%(rpmRelease)s.tar.gz'

    buildRequires = [ 'autoconf:runtime', 'automake:runtime',
                      'byacc:runtime', 'flex:runtime', 'krb5:devel',
                      'libtool:runtime',
                      'pam:devel', ]

    def setup(r):
        r.disableParallelMake()
        r.unpack()
        r.addPatch('pam_krb5-2.3.1-ccacheperms.patch')

        r.macros.libdir = r.macros.essentiallibdir
        r.macros.cflags += ' -fPIC'
        r.Automake()
        r.Configure()
        r.Make()

        r.MakeInstall('mandir=%(mandir)s')
        r.Symlink('%(essentiallibdir)s/security/pam_krb5.so',
                  '%(essentiallibdir)s/security/pam_krb5afs.so')
