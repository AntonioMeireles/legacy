class Mednafen(AutoPackageRecipe):
    name = 'mednafen'
    version = '0.9.28'
 
    buildRequires = [
        'Mesa:devel', 
        'SDL:devel', 
        'alsa-lib:devel', 
        'gettext:runtime', 
        'intltool:runtime', 
        'jack:devel', 
        'libcdio:devel', 
        'libsndfile:devel', 
        'libstdc++:devel', 
        'pkgconfig:devel', 
        'zlib:devel',
            ]
 
    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/project/mednafen/Mednafen/%(version)s-WIP/mednafen-%(version)s-wip.tar.bz2')
