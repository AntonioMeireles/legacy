class Mednafen(PackageRecipe):

    buildRequires = [
        'libsamplerate:devel', 
        'gcc:devel',
        'glibc:devel', 
        'gtk:devel',
        'xorg-x11:devel',
        'zlib:devel',
        'SDL:devel', 
        'SDL_net:devel', 
        'alsa-lib:devel', 
        'audiofile:devel', 
        'esound:devel', 
        'jack:devel'
    ]

    name = "mednafen"
    version = "0.3.6"
 
    def setup(r):
        r.addArchive('http://mednafen.fobby.net/releases/%(name)s-%(version)s.tar.bz2')
 
        r.Configure()
        r.Make()
        r.MakeInstall()
