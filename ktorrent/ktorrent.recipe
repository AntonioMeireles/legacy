loadSuperClass('kdepackage.recipe')
class kTorrent(kdePackageRecipe):

    name = 'ktorrent'
    version = '1.2rc1'

    buildRequires = [ 'acl:devel', 'attr:devel', 'gamin:devel', 'pcre:devel' ]

    def unpack(r):

        r.macros.site = 'http://ktorrent.pwsp.net/downloads'
        r.addArchive('%(site)s/%(version)s/%(name)s-%(version)s.tar.gz')

