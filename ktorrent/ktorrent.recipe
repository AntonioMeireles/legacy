loadSuperClass('kdepackage')
class kTorrent(kdePackageRecipe):

    name = 'ktorrent'
    version = '3.3.4'

    buildRequires = [
        'boost:devel', 'gmp:devel', 'kdebase-workspace:devel', 'qca2:devel',
        'taglib:devel', 'libXScrnSaver:devel', 'libXcomposite:devel', 
	'libXcursor:devel', 'libXft:devel', 'libXi:devel', 'libXpm:devel', 
	'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel', 'libxkbfile:devel', 
	'python:devel', 'qt:devel'
    ]

    def unpack(r):

        r.addArchive('http://ktorrent.org/downloads/%(version)s/')

