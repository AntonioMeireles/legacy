loadSuperClass('kdepackage')
class kTorrent(kdePackageRecipe):

    name = 'ktorrent'
    version = '2.2.2'

    buildRequires = [
        'avahi-qt3:devel', 'avahi:devel', 'gmp:devel', 'kdnssd-avahi:devel',
        'pcre:devel'
    ]

    def unpack(r):

        r.addArchive('http://ktorrent.org/downloads/%(version)s/')

