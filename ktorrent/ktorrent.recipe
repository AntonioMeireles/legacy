loadSuperClass('kdepackage')
class kTorrent(kdePackageRecipe):

    name = 'ktorrent'
    version = '3.0rc1+r769181'

    buildRequires = [
        'gmp:devel', 'qca2:devel'
    ]

    def unpack(r):

        rev = r.version.split('+')[1].lstrip('r')
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/trunk/extragear/network/ktorrent/', revision=rev
        )

