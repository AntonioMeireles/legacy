loadSuperClass('kernelmodulepackage')
class MadWIFIkernel(KernelModulePackageRecipe):
    name = 'madwifi-kernel'
    version = '0.10.5.6_r4068_20090705'

    def unpack(r):
        r.macros.version = r.version.replace('_','-')
        r.addArchive('http://snapshots.madwifi-project.org/'
                'madwifi-hal-0.10.5.6/madwifi-hal-%(version)s.tar.gz')

    def build(r):
        r.Make('KERNELPATH=/lib/modules/%(kver)s/build modules')

    def install(r):
        r.Make('KMODPATH=/lib/modules/%(kver)s/updates '
            'KERNELPATH=/lib/modules/%(kver)s/build '
            'BINDIR=%(bindir)s MANDIR=%(mandir)s DESTDIR=%(destdir)s '
            'install-modules')

    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')

        #
        r.Requires('madwifi:runtime',
                   '/lib/modules/.*')
