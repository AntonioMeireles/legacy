class MadWIFIkernel(AutoPackageRecipe):

    name = 'madwifi-kernel'
    version = '0.9.4'

    buildRequires = [  ]


    def unpack(r):
        r.macros.kver = os.uname()[2]
        r.addArchive('mirror://sourceforge/madwifi/madwifi-%(version)s.tar.bz2')

    def configure(r):
        pass

    def make(r):
        r.Make('KERNELPATH=/lib/modules/%(kver)s/build modules')

    def makeinstall(r):

        r.Make('KMODPATH=/lib/modules/%(kver)s/updates KERNELPATH=/lib/modules/%(kver)s/build BINDIR=%(bindir)s MANDIR=%(mandir)s DESTDIR=%(destdir)s install-modules')

        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')

        r.Requires('madwifi:runtime',
                   '/lib/modules/%(kver)s/updates/ath_pci.ko')

        r.AutoDoc(exceptions = '.*')
        r.Requires('kernel:runtime(%(kver)s)', '/lib/modules/.*')
