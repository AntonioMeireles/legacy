class TelepathyPython(PackageRecipe):

    name = 'telepathy-python'
    version = '0.15.11'

    buildRequires = ['python-setuptools:python','dbus-python:python','libxslt:runtime', 'python:devel']

    def setup(r):
        r.addArchive('http://telepathy.freedesktop.org/releases/%(name)s/')
        r.PythonSetup()
