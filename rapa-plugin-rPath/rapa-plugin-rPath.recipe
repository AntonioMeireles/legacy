loadInstalled('python')
class rAPAPluginrPath(PackageRecipe):
    buildRequires = []
    name = "rapa-plugin-rPath"
    version = '3.2.2'

    def setup(r):
        r.macros.pyver = Python.majversion
        r.addSource('__init__.py')
        r.Install('__init__.py', '%(libdir)s/raa/rPath/', 
                  package='%(name)s:python')
        r.CompilePython('%(libdir)s/raa/rPath/', package='%(name)s:python')

