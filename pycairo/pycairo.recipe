class Recipe(AutoPackageRecipe):
    name = 'pycairo'
    version = '1.2.2'

    buildRequires = ['cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'libpng:devel', 'zlib:devel',
        'pkgconfig:devel', 'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrender:devel','libdmx:devel' ]

    def unpack(r):
        r.addArchive('http://cairographics.org/releases/%(name)s-%(version)s.tar.gz')
