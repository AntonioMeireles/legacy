class Recipe(AutoPackageRecipe):
    name = 'pycairo'
    version = '1.0.2'

    buildRequires = ['cairo:devel', 'fontconfig:devel',
                     'freetype:devel', 'libpng:devel',
                     'xorg-x11:devel', 'zlib:devel',
                     'pkgconfig:devel']

    def unpack(r):
        r.addArchive('http://cairographics.org/releases/%(name)s-%(version)s.tar.gz')
