class Dee(AutoPackageRecipe):
    name = 'dee'
    version = '0.5.18'
 
    buildRequires = [ 'dbus-glib:devel', 
                      'dbus-glib:runtime', 
                      'glib:devel', 
                      'gtk-doc:runtime', 
                      'pkgconfig:devel', 
                      'pygobject:python', 
                      'vala:runtime',
                      'gobject-introspection:devel',
                      'libtool:runtime',
                    ]
 
    def unpack(r):
        r.addArchive('http://launchpad.net/dee/trunk/%(version)s/+download/')

    def configure(r):
        r.Configure(' --disable-static '
                    ' --enable-introspection=yes')
        r.disableParallelMake()
