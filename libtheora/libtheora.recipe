class libtheora(AutoPackageRecipe):
    name = 'libtheora'
    version = '1.0'

    buildRequires = [ 'SDL:devel', 'doxygen:runtime', 'libogg:devel',
        'libvorbis:devel', 'pkgconfig:devel', 'tetex:runtime',
    ]

    def unpack(r):
        r.addArchive('http://downloads.xiph.org/releases/theora/')
