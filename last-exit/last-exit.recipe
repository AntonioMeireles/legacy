class LastExit(AutoPackageRecipe):

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel',
        'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime',
        'fontconfig:devel', 'freetype:devel', 'gettext:runtime',
        'glib:devel', 'gstreamer:devel', 'gtk-sharp:lib', 'gtk:devel',
        'gtk:runtime', 'libpng:devel', 'libxml2:devel', 'mono:lib',
        'mono:runtime', 'pango:devel', 'perl:runtime', 'pkgconfig:devel',
        'xorg-x11:devel', 'zlib:devel', 'dbus-glib:devellib', 'dbus:devel' ]

    name = 'last-exit'
    version = '2.0'

    def unpack(r):
        r.addArchive('http://www.o-hand.com/~iain/%(name)s/%(name)s-%(version)s.tar.bz2')

    def setup(r):
        AutoPackageRecipe.setup(r)
        r.Symlink('%(datadir)s/icons/hicolor/24x24/apps/last-exit-24.png','%(datadir)s/pixmaps/')
