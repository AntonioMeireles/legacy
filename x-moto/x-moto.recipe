class xmoto(AutoPackageRecipe):
    name = 'x-moto'
    version = '0.3.3'
 
    buildRequires = ['Mesa:devel','SDL:devel','SDL_mixer:devel','SDL_ttf:devel','bzip2:devel','curl:devel','libjpeg:devel','libstdc++:devel','zlib:devel','libpng:devel','libpng:devellib','lua','ode:devel','sqlite:devel']
 
    def unpack(r):
        r.addArchive('http://download.tuxfamily.org/xmoto/xmoto/0.3.3/xmoto-0.3.3-src.tar.gz')
        r.Configure('--with-enable-zoom=1')
