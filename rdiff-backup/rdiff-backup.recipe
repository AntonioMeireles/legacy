class RdiffBackup(CPackageRecipe):
    name = 'rdiff-backup'
    version = '1.2.8'
    buildRequires = [ 'librsync:devel', 'python-setuptools:python',
        'python:devel',
    ]

    def setup(r):
        r.addArchive('http://savannah.nongnu.org/download/%(name)s/')

        r.PythonSetup(purePython=False)
        r.Doc('FAQ.html', 'examples.html')
        r.Move('%(prefix)s/*/python*/site-packages/share/man/man1/*',
               '%(mandir)s/man1/')
        r.Remove('%(prefix)s/*/python*/site-packages/share', recursive=True)
