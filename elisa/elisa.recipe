class Elisa(BuildPackageRecipe):
    name = 'elisa'
    version = '0.5.23'
 
    buildRequires = [ 'python-setuptools:python', 'ConfigObj:python', 'PIL:python', 'avahi:python', 'cElementTree:python', 'dbus-python:python', 'gnome-python-desktop:python', 'gnome-python:python', 'gst-python:python', 'pygobject:python', 'python-sqlite:python', 'python-twisted-web:python', 'python-twisted:python', 'desktop-file-utils:runtime', 'pycairo:python', 'python-ctypes:python', 'python:devel', 'pigment-python:python', 'python-zopeinterface:python', 'coherence:python', 'python:devel' ]
 
    def setup(r):
        r.addArchive('http://elisa.fluendo.com/download/%(name)s/')
        r.PythonSetup()
        r.Move('%(libdir)s/python2.6/site-packages/share/*', '%(datadir)s/')
        deps = ['pyOpenSSL','python-cssutils','pigment-python','python-twisted-web2','coherence','python-hashlib','elisa-plugins-good','elisa-plugins-ugly']
        for dep in deps:
            r.Requires(dep+':python', '%(bindir)s/elisa')
