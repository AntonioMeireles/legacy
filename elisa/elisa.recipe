class Elisa(PackageRecipe):
    name = 'elisa'
    version = '0.0.1'

    buildRequires = ['PIL:python', 'SDL:devel', 'cElementTree:python',
        'cairo:devel', 'coreutils:runtime', 'dbus:python',
        'elementtree:python', 'fontconfig:devel', 'freetype:devel',
        'glibc:devel', 'gnome-python-desktop:python', 'gnome-python:python',
        'gst-python:python', 'libpng:devel', 'pygtk:python',
        'python-setuptools:python', 'python-twisted:python', 'xorg-x11:devel',
        'zlib:devel']

    def setup(r):
        r.addArchive('http://www.fluendo.com/elisa/downloads/'
                     'elisa-0.0.1.tar.gz')
        r.addPatch('patch-setup.py')

        r.PythonSetup()
