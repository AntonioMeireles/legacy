class MonoPod(CPackageRecipe):
    buildRequires = [ 'mono:devel', 'gtk-sharp:devellib', 'sqlite:devel',
        'desktop-file-utils:runtime', 'gawk:runtime', 'gettext:runtime',
        'gnome-sharp:lib', 'gtk-sharp:lib', 'mono:lib', 'mono:runtime',
        'perl:runtime', 'pkgconfig:devel' ]

    name = "monopod"
    version = "0.6"

    def setup(r):
        r.addArchive("http://download.berlios.de/monopod/%(name)s-%(version)s.tar.gz")
        r.Configure()
        r.Make()
        r.MakeInstall()
