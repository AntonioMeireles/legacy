loadSuperClass('gnomepackage')
class Opal(GnomePackageRecipe):
    name = 'opal'
    version = '3.10.9'
    buildRequires = [ 
            'expat:devel', 
            'libstdc++:devel', 
            'openssl:devel', 
            'ptlib:devel', 
            'SDL:devel', 
            'cyrus-sasl:devel', 
            'openldap:devel', 
            'libogg:devel', 
            'libtheora:devel', 
            'speex:devel', 
            'celt:devel', 
            'ffmpeg:devel', 
            'gsm:devel', 
            'ruby:runtime', 
            'swig:runtime', 
            'x264:devel'
                ]




    extraConfig = (
        ' --disable-static '
        ' --prefix=%(prefix)s '
        ' --disable-silk '
        ' --disable-ffmpeg ' 
            )

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.cflags += ' -D__STDC_CONSTANT_MACROS'
        r.addPatch('opal-3.10.2-ffmpeg-1.patch')
