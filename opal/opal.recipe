class Opal(AutoPackageRecipe): 
    name = 'opal'
    version = '2.2.1'

    buildRequires = ['expat:devel', 'libstdc++:devel', 'openssl:devel', 'pwlib:devel', 'SDL:devel', 'cyrus-sasl:devel', 'openldap:devel' ]

    def unpack(r):
        r.addArchive('http://www.ekiga.org/admin/downloads/latest/sources/sources/%(name)s-%(version)s.tar.gz')
