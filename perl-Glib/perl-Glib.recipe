loadSuperClass('cpanpackage.recipe', label='conary.rpath.com@rpl:devel')
class Glib(CPANPackageRecipe):
    name='perl-Glib'
    version='1.120'

    buildRequires = [ 'glib:devel', 'glibc:devel' ]

    def post(r):
        for i in r.buildRequires:
            r.Requires(i, r"\.pm")
        CPANPackageRecipe.post(r)

