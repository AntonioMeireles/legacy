loadSuperClass('gnomepackage')
class Xchat(GnomePackageRecipe):
    name = 'xchat'
    version = '2.8.6'
    buildRequires = [ 'dbus-glib:runtime', 'desktop-file-utils:runtime', 'openssl:devel', 'perl:devel', 'python:devel' ]

    def unpack(r):
        r.addArchive('http://xchat.org/files/source/2.8/')
        r.addPatch('http://www.xchat.org/files/source/2.8/patches/xc286-smallfixes.diff')
        r.Replace('#define GTK_DISABLE_DEPRECATED', '', 'src/fe-gtk/*.c', allowNoChange=True)
