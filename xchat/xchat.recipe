class Xchat(AutoPackageRecipe):
    name = 'xchat'
    version = '2.8.4'

    buildRequires = [ 'GConf:runtime', 'atk:devel', 'cairo:devel',
        'dbus-glib:devel', 'dbus-glib:runtime', 'dbus:devel',
        'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'krb5:devel', 'libX11:devel', 'libXau:devellib', 'libXdmcp:devellib',
        'libXrender:devel', 'libpng:devel', 'libsexy:devel', 'libxml2:devel',
        'pango:devel', 'perl:devel', 'perl:runtime', 'pkgconfig:devel',
        'python:devel', 'zlib:devel' ]

    extraConfig = '--disable-tcl --enable-python'
    if Use.ssl:
        buildRequires.append( 'openssl:devel' )
        extraConfig += ' --enable-openssl'
    if Use.ipv6: extraConfig += ' --enable-ipv6'

    def unpack(r):
        r.addArchive('http://xchat.org/files/source/2.8/')
        for patch in ('xc284-fix-scrollbfdleak.diff',
                      'xc284-improvescrollback.diff',
                      'xc284-scrollbmkdir.diff'):
            r.addPatch('http://xchat.org/files/source/2.8/patches/%s' % patch)


    def configure(r):
        r.Configure(r.extraConfig)
