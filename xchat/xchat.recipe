class Xchat(AutoPackageRecipe):
    name = 'xchat'
    version = '2.8.4'

    buildRequires = ['atk:devel',
                     'bison:runtime',
                     'expat:devel',
                     'glib:devel',
                     'gtk:devel',
                     'gtk:runtime',
                     'gettext:runtime',
                     'intltool:runtime',
                     'pango:devel',
                     'perl:runtime',
                     'pkgconfig:devel',
                     'python:devel',
                     'zlib:devel',
                     'openssl:devel',
                     'desktop-file-utils:runtime',
                     'cairo:devel',
                     'fontconfig:devel',
                     'freetype:devel',
                     'libpng:devel',
                     'file:runtime',
                     'dbus-glib:devel',
                     'dbus-glib:runtime',
                     'dbus:devel',
                     'GConf:runtime',
                     'perl:devel',
                     'libX11:devel',
                     'libXrender:devel',
    ]

    def unpack(r):
        r.macros.major_version = '.'.join(r.version.split('.')[0:2])
        r.addArchive('http://www.xchat.org/files/source/%(major_version)s/')

    def configure(r):
        r.Configure('--disable-textfe --enable-python '
                    '--disable-tcl --enable-ipv6 --enable-openssl ')
