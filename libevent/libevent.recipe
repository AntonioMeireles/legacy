class LibEvent(AutoPackageRecipe):
    name = 'libevent'
    version = '1.4.14_stable'

    buildRequires = ['openssl:devel', 'python:devel']

    def unpack(r):
        r.macros.version = r.version.replace('_', '-')
        r.addArchive('http://monkey.org/~provos/')
