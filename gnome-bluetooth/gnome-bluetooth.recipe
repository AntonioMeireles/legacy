loadSuperClass('gnomepackage', label='conary.rpath.com@rpl:devel')
class GnomeBluetooth(GnomePackageRecipe):
    buildRequires = ['GConf:runtime', 'gettext:runtime', 'glib:runtime', 'gob2:runtime', 'openobex:devel', 'gnome-python:python', 'pygtk:python', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'bluez-libs:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libbtctl:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'libxml2:devel', 'openobex:devel', 'pango:devel', 'popt:devel' ]
    name = "gnome-bluetooth"
    version = "0.7.0"
    def unpack(r):
	GnomePackageRecipe.unpack(r)
    	srpm = 'http://download.fedora.redhat.com/pub/fedora/linux/core/development/SRPMS/%(name)s-%(version)s-2.src.rpm'
    	r.addPatch('gnome-bluetooth-0.7.0-path.patch', rpm=srpm)
    	r.addPatch('gnome-bluetooth-0.7.0-pydir.patch', rpm=srpm)
