loadSuperClass('gnomepackage')
class Intltool(GnomePackageRecipe):

    buildRequires = [ 'perl:lib', 'perl-XML-Parser:perl',
                      'automake:runtime', 'autoconf:runtime', 'perl:devel' ]
    clearBuildReqs('gtk:devel', 'glib:runtime', 'dbus:devel', 'dbus-glib:devellib', 'dbus-glib:devel', 'intltool:runtime',)

    name = 'intltool'
    version = '0.40.6'

    def setup(r):
        GnomePackageRecipe.setup(r)
        r.Requires('perl-XML-Parser:perl', '%(bindir)s/intltool-merge')
        # to please autoconf ...
        r.Requires('perl-XML-Parser:devel', '%(bindir)s/intltool-merge')
        # Fix FL-2113
        r.Requires('gettext:devel', '%(datadir)s/aclocal/intltool.m4')
