class Intltool(AutoPackageRecipe):
    name = 'intltool'
    version = '0.36.2'

    buildRequires = [ 'perl-XML-Parser:perl', 'automake:runtime',
                      'autoconf:runtime', 'gettext:runtime', 'perl:lib',
                      'perl:runtime' ]

    def unpack(r):
        r.addArchive('mirror://gnome/%(name)s/%(major_version)s/')

    def policy(r):
        r.Requires('perl-XML-Parser:perl', '%(bindir)s/intltool-merge')
        r.Requires('gettext:runtime', '%(bindir)s/intltool-update')
