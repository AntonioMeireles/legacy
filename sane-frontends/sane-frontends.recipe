class SaneFrontends(AutoPackageRecipe):
    name = 'sane-frontends'
    version = '1.0.14'

    buildRequires = [ 'atk:devel', 'gtk:devel', 'libieee1284:devel',
                      'libjpeg:devel', 'sane-backends:devel', 'libusb:devel',
                      'glib:devel', 'pango:devel', 'libtiff:devel',
                      'libX11:devel', 'libXext:devel', 'libXrender:devel',
                      'libXau:devel', 'libXdmcp:devel', 'libSM:devel',
                      'libICE:devel', 'cairo:devel', 'fontconfig:devel',
                      'freetype:devel', 'libpng:devel', 'zlib:devel', ]

    def unpack(r):
        r.addArchive('ftp://ftp.sane-project.org/pub/sane/sane-frontends-%(version)s/')
