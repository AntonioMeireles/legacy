class Ntfsprogs(AutoPackageRecipe):
    name = 'ntfsprogs'
    version = '2.0.0'
 
    buildRequires = ['fuse:devel', 'libgcrypt:devel', 'pkgconfig:devel', 'util-linux:devel']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/linux-ntfs/')

    def configure(r):
        r.Configure('--disable-ntfsmount')
