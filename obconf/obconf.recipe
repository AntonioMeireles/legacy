class OpenBox(AutoPackageRecipe):
    buildRequires = [
        'atk:devel',
        'cairo:devel',
        'desktop-file-utils:runtime',
        'fontconfig:devel',
        'freetype:devel',
        'glib:devel',
        'gtk:devel',
        'libglade:devel',
        'libpng:devel',
        'libxml2:devel',
        'openbox:devel',
        'pango:devel',
        'pkgconfig:devel',
        'startup-notification:devel',
        'xorg-x11:devel',
        'zlib:devel',
    ]

    name = 'obconf'
    version = '1.5'

    def unpack(r):
	r.addArchive('http://icculus.org/openbox/obconf/obconf-%(version)s.tar.gz')
