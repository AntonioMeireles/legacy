class GupnpTools(AutoPackageRecipe):
    name = 'gupnp-tools'
    version = '0.8'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'e2fsprogs:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'gupnp-av:devel', 'gupnp:devel', 'libsoup:devel', 'libxml2:devel', 'pango:devel', 'pkgconfig:devel', 'gnome-icon-theme:devellib']
 
    def unpack(r):
        r.addArchive('http://www.gupnp.org/sources/gupnp-tools/')
