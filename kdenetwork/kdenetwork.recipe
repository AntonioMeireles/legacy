loadSuperClass('kdecorepackage')
class kdeNetwork(kdeCorePackageRecipe):

    name = 'kdenetwork'
    version = '4.3.1+r1024144'

    buildRequires = [
        'gmp:devel', 'inputproto:devel', 'kdebase-workspace:devel',
        'konqueror:devel', 'libidn:devel', 'libjpeg:devel', 'libotr:devel',
        'libv4l:devel', 'libvncserver:devel', 'libXdamage:devel',
        'libxml2:devel', 'libXScrnSaver:devel', 'libxslt:devel',
        'libXtst:devel', 'PyQt4:python', 'python:devel', 'qca2:devel',
        'qimageblitz:devel', 'soprano:devel'
    ]

    modules = [
        'kdnssd',
        'kget',
        'kopete',
        'kppp',
        'krdc',
        'krfb',
        ('kdenetwork-filesharing', 'filesharing'),
    ]

    def policy(r):

        r.SetModes('%(bindir)s/kppp', 04755)

