loadSuperClass('kdecorepackage')
class kdeNetwork(kdeCorePackageRecipe):

    name = 'kdenetwork'
    version = '4.2.2+r955078'

    buildRequires = [
        'gmp:devel', 'inputproto:devel', 'kdebase-workspace:devel',
        'konqueror:devel', 'libidn:devel', 'libjpeg:devel',
        'libvncserver:devel', 'libXdamage:devel', 'libxml2:devel',
        'libXScrnSaver:devel', 'libxslt:devel', 'libXtst:devel', 'PyQt4:python',
        'python:devel', 'qca2:devel', 'qimageblitz:devel', 'soprano:devel'
    ]

    modules = [
        'kdnssd',
        'kget',
        'kopete',
        'kppp',
        'krdc',
        'krfb',
        ('kfile-plugins-network', 'kfile-plugins'),
        ('kdenetwork-filesharing', 'filesharing'),
    ]

    def policy(r):

        r.SetModes('%(bindir)s/kppp', 04755)

