class matplotlib(CPackageRecipe):
    name = 'matplotlib'
    version = '0.98.5.2'

    buildRequires = [
        'atk:devel',
        'cairo:devel',
        'expat:devel',
        'fontconfig:devel',
        'freetype:devel',
        'glib:devel',
        'gtk:devel',
        'libpng:devel',
        'libstdc++:devel',
        'libX11:devel',
        'libXrender:devel',
        'numpy:python',
        'pango:devel',
        'PIL:python',
        'pixman:devel',
        'pycairo:python',
        'pygtk:python',
        'python-dateutil:python',
        'python:devel',
        'pytz:python',
        'xcb-util:devel',
        'zlib:devel',
    ]

    def setup(r):
        r.addArchive('http://voxel.dl.sourceforge.net/sourceforge/matplotlib/')
        r.PythonSetup()
