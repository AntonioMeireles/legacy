class Numlockx(CPackageRecipe):
    buildRequires = [ 'xorg-x11:devel' ]
    name = "numlockx"
    version = "1.1"

    def setup(r):
        r.addArchive('http://ktown.kde.org/~seli/%(name)s/%(name)s-%(version)s.tar.gz')
        r.addSource('numlockx.sh')
        r.macros.optflags = '-O3'
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Install('numlockx.sh', '/etc/X11/xinit/xinitrc.d/numlockx.sh')
