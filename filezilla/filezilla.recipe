class FileZilla(AutoPackageRecipe):
    name = 'filezilla'
    version = '3.3.4.1'

    buildRequires = [ 'gnutls:devel', 'wxGTK:devel', 'gcc-c++:runtime',
                      'libidn:devel', 'gettext:runtime', 'wxGTK:runtime', 
                      'desktop-file-utils:runtime', 'dbus:devel', 'pkgconfig:devel', 'xdg-utils:runtime', 'atk:devel', 'cairo:devel', 'cppunit:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'pango:devel']

    def unpack(r):
        r.macros.version = r.version.replace('_', '-')
        r.addArchive('http://downloads.sourceforge.net/filezilla/FileZilla_%(version)s_src.tar.bz2')

    def configure(r):
        r.Configure(' --disable-static '
                    ' --enable-locales '
                    ' --localedir=%(datadir)s/locale '
                    ' --disable-manualupdatecheck '
                    ' --disable-autoupdatecheck '
                    ' --with-tinyxml=builtin '
		    ' --disable-precomp ') # do not remove until we got a newer GCC than 4.1.2
        
