class Avahi(AutoPackageRecipe):

    buildRequires = [ 'atk:devel', 'cairo:devel', 'dbus:devel',
        'expat:devel', 'fontconfig:devel', 'freetype:devel',
        'gdbm:devel', 'glib:devel', 'gtk:devel', 'libcap:devel',
        'libdaemon:devel', 'libglade:devel', 'libpng:devel',
        'libxml2:devel', 'pango:devel', 'libXau:devel', 'pygobject:python',
        'zlib:devel', 'doxygen:runtime', 'mono:runtime', 'libXdmcp:devel',
        'monodoc:runtime', 'perl:runtime', 'pkgconfig:devel',
        'dbus-python:python', 'pygtk:python', 'chkconfig:runtime',
        'desktop-file-utils:runtime', 'mono:lib', 'python-twisted:python',
        'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel',
        'monodoc:devellib', 'libXcursor:devel', 'libXext:devel',
        'libXft:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrandr:devel', 'libjpeg:devel', 'libstdc++:devel',
        'qt:devel', 'mono:devel' ]

    name = 'avahi'
    version = '0.6.14'

    def setup(r):
        r.addArchive('http://avahi.org/download/')
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.Configure('--with-distro=fedora --enable-qt3 --disable-qt4 --enable-compat-howl --enable-mono')
        r.Make()
        r.MakeInstall()
        r.UtilizeUser('avahi', '%(bindir)s/.*')

        #qt3
        r.PackageSpec('avahi-qt3', '%(includedir)s/avahi-qt3/')
        r.PackageSpec('avahi-qt3', '%(libdir)s/libavahi-qt3.*')
        r.PackageSpec('avahi-qt3', '%(libdir)s/pkgconfig/avahi-qt3.pc')

        #glib
        r.PackageSpec('avahi-glib', '%(includedir)s/avahi-glib/')
        r.PackageSpec('avahi-glib', '%(libdir)s/libavahi-glib.*')
        r.PackageSpec('avahi-glib', '%(libdir)s/pkgconfig/avahi-glib.pc')

        #mono
        r.PackageSpec('avahi-sharp', '%(libdir)s/mono/')
        r.PackageSpec('avahi-sharp', '%(libdir)s/monodoc/')
        r.PackageSpec('avahi-sharp', '%(libdir)s/pkgconfig/avahi-sharp.pc')
