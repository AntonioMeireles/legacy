class GgzGtkClient(AutoPackageRecipe):
    name = 'ggz-gtk-client'
    version = '0.0.14'
    buildRequires = ['atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'expat:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel', 'libXrender:devel', 'libggz:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel']



    def unpack(r):
        r.addArchive('http://ftp.ggzgamingzone.org/pub/ggz/%(version)s/',
                     '%(name)s-%(version)s.tar.gz')
