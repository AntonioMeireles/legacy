class GstRtspServer(AutoPackageRecipe):
    name = 'gst-rtsp-server'
    version = '0.10.4'
 
    buildRequires = [
        'gstreamer:devel',
        'gst-plugins-base:devel',
        'gst-python:devellib',
        'vala:runtime',
        'vala:devel',
        'glib:devellib',
        'pkgconfig:devel',
    ]

    extraConfig = ' --with-vapi-dir=%(datadir)s/vala/vapi'

    def unpack(r):
        r.addArchive('http://people.freedesktop.org/~wtay/gst-rtsp-%(version)s.tar.bz2')
