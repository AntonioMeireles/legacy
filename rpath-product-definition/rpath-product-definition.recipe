class ProductDefinition(BuildPackageRecipe):
    name = 'rpath-product-definition'
    version = '0.4'

    buildRequires = [
        'python:devel',
        'rpath-common:python', 'rpath-xmllib:python',
        'util-linux:runtime',
    ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/rpath-product-definition/')
        # This package doesn't need to run pylint or build API docs
        r.Replace('^SUBDIRS=.*', 'SUBDIRS=rpath_common xsd', 'Makefile')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
        r.Doc('doc/example.*')
        # Need :data for the schema definitions CNY-2935
        r.ComponentRequires({'data': set(['python'])})
