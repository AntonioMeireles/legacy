class ProductDefinition(BuildPackageRecipe):
    name = 'rpath-product-definition'
    version = '4.0'

    buildRequires = [
        'lxml:python',
        'python:devel',
        'rpath-common:python',
        'util-linux:runtime',
    ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/rpath-product-definition/')
        r.addPatch('rpath-product-definition-py26.patch')
        # This package doesn't need to run pylint or build API docs
        r.Replace('^SUBDIRS=.*', 'SUBDIRS=rpath_proddef xsd', 'Makefile')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
        r.Doc('doc/example.*')
        # Work around RPCL-64 (remove when updating from 4.0)
        r.CompilePython('%(libdir)s/python*/site-packages/rpath_common/proddef')
