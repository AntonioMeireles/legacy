loadInstalled('python')
class ProductDefinition(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rpath-product-definition'
    version = '4.2'
    tag = 'a6e5a8e41712'

    buildRequires = [
        'lxml:python',
        'python:devel',
        'rpath-common:python', # needed to export older API location
        'util-linux:runtime',
        #'mercurial:runtime',
    ]

    def setup(r):
        r.setDefaultPython()
        r.addMercurialSnapshot('http://hg.rpath.com/rpath-product-definition', tag=r.tag)
        #r.addMercurialSnapshot('http://hg.rpath.com/rpath-product-definition', tag=r.tag)
        # This package doesn't need to run pylint or build API docs
        r.Replace('^SUBDIRS=.*', 'SUBDIRS=rpath_proddef xsd', 'Makefile')
        r.Replace('^PYTHON = .*', 'PYTHON = /usr/bin/python2.6', 'Make.rules')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
        r.Doc('doc/example.*')
