class DjangoThreadedComments(PackageRecipe):

    name = 'django-threadedcomments'
    version = '0.5.2'

    buildRequires = [
        'django:python',
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/d/%(name)s/')
        r.PythonSetup()
