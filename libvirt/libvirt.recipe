class LibVirt(AutoPackageRecipe):
    buildRequires = [ 'iptables:runtime', 'libxml2:devel', 'libxml2:runtime', 'libxslt:runtime', 'ncurses:devel', 'readline:devel', 'sysfsutils:devel', 'zlib:devel' ]
    name = 'libvirt'
    version = '0.2.1'

    def unpack(r):
        r.addArchive('http://libvirt.org/sources/%(name)s-%(version)s.tar.gz')
