class Libvirt(AutoPackageRecipe):
    name = "libvirt"
    version = "0.4.0"

    buildRequires = ['PolicyKit:devel', 'avahi:devel', 'bridge-utils:runtime',
                     'cyrus-sasl:devel', 'dbus:devel', 'gnutls:devel',
                     'iptables:runtime', 'libxml2:devel', 'libxml2:runtime',
                     'libxslt:runtime', 'pkgconfig:devel', 'python:devel',
                     'readline:devel', 'xen:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('ftp://libvirt.org/%(name)s/%(name)s-%(version)s.tar.gz')
