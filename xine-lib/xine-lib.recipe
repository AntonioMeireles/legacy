class Xinelib(AutoPackageRecipe):
        name = 'xine-lib'
        version = '1.1.8'
        buildRequires = [ 'GConf:devel', 'ImageMagick:devel', 'Mesa:devel', 
'ORBit2:devel', 'SDL:devel', 'alsa-lib:devel', 'audiofile:devel', 
'bzip2:devel', 'esound:devel', 'flac:devel', 'freetype:devel', 'glib:devel',
'gnome-vfs:devel', 'jack:devel', 'libICE:devel', 'libSM:devel',
'libX11:devel', 'libXext:devel', 'libXv:devel', 'libXvMC:devel', 
'libXinerama:devellib', 'libbonobo:devel', 'libcdio:devel', 
'libjpeg:devel', 'libmng:devel', 'libogg:devel', 'libpng:devel', 
'libtheora:devel', 'libtiff:devel','libvorbis:devel', 'libxml2:devel', 
'module-init-tools:runtime', 'pkgconfig:devel' , 'samba:devel',
'speex:devel', 'transfig:runtime', 'vcdimager:devel', 'zlib:devel' ]


        def unpack(r):
                r.addArchive('mirror://sourceforge/xine/')

        def configure(r):
                r.Configure(' --disable-imagemagick')
