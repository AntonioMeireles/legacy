class Xinelib(AutoPackageRecipe):
        name = 'xine-lib'
        version = '1.1.2'
        buildRequires = [ 'GConf:devel', 'ImageMagick:devel', 'ORBit2:devel',
                          'SDL:devel', 'alsa-lib:devel', 
                          'audiofile:devel', 'bzip2:devel', 'esound:devel',
                          'flac:devel', 'freetype:devel', 'glib:devel',
                          'gnome-vfs:devel', 'libbonobo:devel',
                          'libjpeg:devel', 'libmng:devel', 'libogg:devel',
                          'libpng:devel', 'libtheora:devel', 'libtiff:devel',
                          'libvorbis:devel', 'libxml2:devel', 'samba:devel',
                          'speex:devel', 'zlib:devel',
                          'ImageMagick:devel', 'SDL:devel', 
                          'esound:devel', 'freetype:devel',
                          'module-init-tools:runtime', 'pkgconfig:devel' ]

        def unpack(r):
                r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/xine/xine-lib-%(version)s.tar.bz2')

        def configure(r):
                r.Configure('--disable-imagemagick')
