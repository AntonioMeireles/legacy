class Privoxy(CPackageRecipe):
    name = 'privoxy'
    version = '3.0.16'

    buildRequires = [ 'autoconf', 'info-privoxy', 'man:runtime', 'pcre:devel', 'docbook-utils:runtime', 'gdb:runtime', 'lynx:runtime', 'openjade:runtime', 'chkconfig:runtime', 'zlib:devel' ]

    def setup(r):
        r.macros.ver = r.version.replace('_', '-')
	r.addArchive('http://downloads.sourceforge.net/project/ijbswa/Sources/3.0.16 (stable)/%(name)s-%(version)s-stable-src.tar.gz')
        r.addSource('privoxy.init')
	r.Run('autoheader')
        r.Run('autoconf')
        r.ManualConfigure('--with-user=privoxy --with-group=privoxy --prefix=%(prefix)s')
        r.Make()
        r.MakeInstall()

	r.Remove('%(sysconfdir)s/%(name)s/config')
        r.Install('privoxy.init', '%(initdir)s/privoxy')
	r.UtilizeUser('privoxy', '%(initdir)s/privoxy')
        r.UtilizeGroup('privoxy', '%(initdir)s/privoxy')

	r.NonBinariesInBindirs(exceptions='/etc/init.d/privoxy')

