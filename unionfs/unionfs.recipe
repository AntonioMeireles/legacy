loadSuperClass('kernelmodulepackage.recipe', label='drivers.rpath.org@rpl:devel')
class Unionfs(KernelModulePackageRecipe):
    name = 'unionfs'
    version = '1.2'
    buildRequires = [ 'e2fsprogs:devel' ]

    def unpack(r):
        r.addArchive('ftp://unionfs-mirror.linux-live.org/%(name)s/%(name)s-%(version)s.tar.gz')

    def build(r):
        r.Make()

    def install(r):
        r.Copy('unionfs.ko', '/lib/modules/%(kver)s/kernel/fs/unionfs/')
