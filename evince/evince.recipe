loadSuperClass('gnomepackage.recipe')
class Evince(GnomePackageRecipe):
    name = 'evince'
    version = '0.6.1'

    buildRequires = [ 'atk:devel', 'desktop-file-utils:runtime',
        'espgs:runtime', 'gcc:devel', 'GConf:devel', 'gnome-doc-utils:devel',
        'glib:devel', 'gnome-vfs:devel', 'intltool:runtime', 'dbus-glib:devellib',
        'libart_lgpl:devel', 'libbonobo:devel', 'dbus-glib:runtime',
        'libbonoboui:devel', 'libglade:devel', 'glib:runtime',
        'libgnomecanvas:devel', 'libgnome:devel', 'gtk:runtime',
        'libgnomeprint:devel', 'libgnomeprintui:devel', 'libstdc++:devel',
        'libgnomeui:devel', 'libtiff:devel', 'libxml2:devel', 'perl:runtime',
        'nautilus:runtime', 'ORBit2:devel', 'pango:devel', 'which:runtime',
        'poppler:devel', 'popt:devel', 'scrollkeeper:runtime', 'libxslt:runtime',
        'dbus:devel', 'gnome-keyring:devel', 'nautilus:devel', 'gnome-doc-utils:runtime',
        'GConf:runtime', 'dbus:runtime', 'gettext:runtime', 'libpng:devel', 
        'cairo:devel', 'fontconfig:devel', 'freetype:devel' ]

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper --enable-djvu --enable-impress --enable-dvi --enable-tiff --enable-nautilus'
