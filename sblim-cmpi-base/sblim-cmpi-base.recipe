class SblimCmpiBase(AutoPackageRecipe):
    name = 'sblim-cmpi-base'
    version = '1.5.6'

    buildRequires = [
        'sblim-sfcb:devel',
    ]

    def unpack(r):
        r.macros.cppflags += '-DCMPI_PLATFORM_LINUX_GENERIC_GNU'
        r.Environment('CIMSERVER', 'sfcb')
        r.Environment('PROVIDERDIR', '%(libdir)s/cmpi')
        r.addArchive('mirror://sourceforge/sblim/')
