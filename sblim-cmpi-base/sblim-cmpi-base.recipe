class SblimCmpiBase(AutoPackageRecipe):
    name = 'sblim-cmpi-base'
    version = '1.6.0'

    buildRequires = [
        'sblim-sfcb:runtime', # For the tag spec
        'sblim-cmpi-devel:devel',
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/sblim/')
        # We want to allow people to remotely execute methods.
        r.Replace(r'^Linux_OperatingSystem (.*)$',
                  r'Linux_OperatingSystem \1 method',
                  'mof/Linux_Base.registration')


    def configure(r):
        r.Configure("PROVIDERDIR=%(libdir)s/cmpi --disable-static")

    def policy(r):
        r.Requires('sblim-sfcb:runtime', '%(datadir)s/%(name)s/.*\.mof')                  
        AutoPackageRecipe.policy(r)
