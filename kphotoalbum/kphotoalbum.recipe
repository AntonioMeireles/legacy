loadSuperClass('kdepackage')
class KPhotoAlbum(kdePackageRecipe):

    name = 'kphotoalbum'
    version = '4.0'

    buildRequires = [
        'exiv2:devel', 'gettext:runtime', 'libjpeg:devel', 'libkdcraw:devel',
        'libkipi:devel'
    ]

    def unpack(r):

        r.addArchive('http://www.kphotoalbum.org/data/download/')

