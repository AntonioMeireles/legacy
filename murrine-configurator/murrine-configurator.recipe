class GtkMurrineConfigurator(PackageRecipe):

    buildRequires = ['desktop-file-utils:runtime','zenity:runtime']

    name = 'murrine-configurator'
    version = '0.5'

    def setup(r):
        r.addArchive('http://cimi.netsons.org/media/download_gallery/murrine/%(name)s-%(version)s.tar.bz2')
        r.Install('files/murrine-configurator',
                  '%(bindir)s/murrine-configurator', mode=0755)
        r.Install('files/murrine-configurator.png',
                  '%(datadir)s/pixmaps/murrine-configurator.png')
        r.Install('files/murrine-configurator.desktop',
                  '%(datadir)s/applications/murrine-configurator.desktop')
