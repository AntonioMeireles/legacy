loadSuperClass('gnomepackage')
class Libgnomecups(GnomePackageRecipe):
    buildRequires = [ 'cups:devel', 'dbus:devel', 'gettext:runtime',
        'intltool:runtime', 'glib:devel', 'openssl:devel' ]

    name = 'libgnomecups'
    version = '0.2.2'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addPatch('20_parse-dot-cups-lpoptions.patch')
        r.addPatch('21_fix-islocal.patch')
        r.addPatch('22_ignore-ipp-not-found.patch')
        r.addPatch('23_replace-set-printer-attrs.patch')
        r.addPatch('24_mem-leak.patch')
        r.addPatch('25_browsed_ppds.patch')

