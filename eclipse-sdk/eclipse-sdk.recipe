class EclipseSdk(PackageRecipe):
    name = 'eclipse-sdk'
    version = '3.2'
    buildRequires = ['bash:runtime', 'fontconfig:devel', 'freetype:devel', 
    		  'glib:devel', 'glibc:devel', 'gtk:devel', 
		  'perl:runtime', 'zlib:devel', 
		  'desktop-file-utils:runtime', 'perl:lib']
 
    
    def setup(r):
        r.addArchive('eclipse-SDK-%(version)s-linux-gtk.tar.gz',dir='xplod')
        r.Install('eclipse/*','/opt/%(name)s/',mode=0755)
        r.addSource('eclipse.run')
        r.Copy('eclipse.run','/usr/bin/eclipse')
	r.SetModes('/usr/bin/eclipse', 0755)
	r.SetModes('/opt/%(name)s/plugins', 0777)
	r.SetModes('/opt/%(name)s/features', 0777)
        r.EnforceSonameBuildRequirements(exceptions='.*')
	r.Requires(exceptDeps='java: *') 

        r.addSource('eclipse-sdk.desktop')
        r.Desktopfile('eclipse-sdk.desktop')
