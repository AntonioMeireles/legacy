class GnomeMainMenu(CPackageRecipe):

    name = 'gnome-main-menu'
    version = '0.6.3.svn20070119'

    buildRequires = [ 'GConf:runtime', 'binutils:runtime', 'gettext:runtime', 'perl:runtime', 'pkgconfig:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glibc:devel', 'hal:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'popt:devel', 'wireless-tools:devel', 'zlib:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'glib:devel', 'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'gtk:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libgtop:devel', 'librsvg:devel', 'libxml2:devel', 'pango:devel', 'startup-notification:devel', 'libpng:devel' ]

    def setup(r):
        r.addArchive('gnome-main-menu-%(version)s.tar.gz')
        r.addPatch('raa.patch')
        r.Replace('MozillaFirefox.desktop','net-firefox.desktop','main-menu/etc/slab.schemas*')
        r.Replace('writer.desktop','openoffice.org-2.0-writer.desktop,gaim.desktop','main-menu/etc/slab.schemas*')
        r.Configure(' --disable-static --disable-dependency-tracking')
        r.Make()
        r.MakeInstall(preMake='GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1 ')

        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/application-browser.schemas')
        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/control-center.schemas')
        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/slab.schemas')

        #r.MakeDirs('%(datadir)s/autostart')
        #r.ExcludeDirectories(exceptions='%(datadir)s/autostart')
