class GnomeMainMenu(CPackageRecipe):

    name = 'gnome-main-menu'
    version = '0.9.8.svn20070523'

    buildRequires = [ 'GConf:runtime', 'binutils:runtime', 'gettext:runtime', 'perl:runtime', 'pkgconfig:devel', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glibc:devel', 'hal:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'popt:devel', 'wireless-tools:devel', 'zlib:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'glib:devel', 'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'gtk:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libgtop:devel', 'librsvg:devel', 'libxml2:devel', 'pango:devel', 'startup-notification:devel', 'libpng:devel', 'nautilus:devel', 'perl-XML-Parser:perl', 'NetworkManager:devel', 'gnome-common:runtime', 'gnome-common:devel', 'gtk-doc:runtime', 'gtk-doc:devel', 'libtool:runtime' ]

    def setup(r):
        r.addSvnSnapshot('http://svn.gnome.org/svn/gnome-main-menu/trunk/')
        r.Run('chmod a+x autogen.sh && ./autogen.sh')
        r.Configure(' --enable-nautilus-extension')
        r.Make()
        r.MakeInstall()

        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/application-browser.schemas')
        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/control-center.schemas')
        r.TagSpec('gconf2schema','%(sysconfdir)s/gconf/schemas/slab.schemas')
