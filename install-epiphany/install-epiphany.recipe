class installepiphany(PackageRecipe):
    buildRequires = [ "desktop-file-utils:runtime" ]
    name = "install-epiphany"
    version = "1.0"

    def setup(r):
        r.addSource('install-epiphany.sh')
        r.Install('install-epiphany.sh', '%(bindir)s/')

#       Add an icon

        r.addSource('install-epiphany.png')
        r.Install('install-epiphany.png', '%(datadir)s/pixmaps/')

#       Copy the desktop file to a new user's desktop
        
        r.addSource('install-epiphany.desktop')
        r.Install('install-epiphany.desktop', '%(sysconfdir)s/skel/Desktop/')

#       Here are our menu links

        r.addSource('install-epiphany.desktop')
        r.Desktopfile('install-epiphany.desktop')
