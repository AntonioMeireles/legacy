class OpenEXR(AutoPackageRecipe):

    name = 'OpenEXR'
    version = '1.4.0a'

    buildRequires = [
        'libstdc++:devel', 'zlib:devel',
        'fltk:devel', 'Mesa:devel', 'libX11:devel', 'libXext:devel',
        'libXft:devel',
    ]

    def unpack(r):
        r.macros.archive_name = r.name.lower()
        r.addArchive('http://savannah.nongnu.org/download/openexr/')
