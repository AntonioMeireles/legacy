class OpenEXR(AutoPackageRecipe):

    name = 'OpenEXR'
    version = '1.6.0'

    buildRequires = [ 'ilmbase:devel', 'libstdc++:devel', 'pkgconfig:devel',
'zlib:devel' ]

    def unpack(r):

        r.macros.archive_name = r.name.lower()
        r.addArchive('http://savannah.nongnu.org/download/openexr/')

