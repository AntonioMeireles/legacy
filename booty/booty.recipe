class Booty(BuildPackageRecipe):
    name = 'booty'
    version = '0.92'

    buildRequires = [ 'python:devel', 'pyblock:python', 'rhpl:python' ]

    def setup(r):
        r.addMercurialSnapshot('http://hg.rpath.com/booty')
        r.Make()
        r.MakeInstall()
        r.ComponentSpec('doc', '/usr/share/doc/')
        r.ComponentSpec('python', '.*')
