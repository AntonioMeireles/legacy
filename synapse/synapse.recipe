class Synapse(AutoPackageRecipe):

    name = 'synapse'
    version = '0.2.2.2+r343'
    
    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gdk-pixbuf:devel', 'gettext:runtime', 'gnome-common:runtime', 'gtk:devel', 'libgtkhotkey:devel', 'intltool:runtime', 'json-glib:devel', 'libgee:devel', 'libpng:devel', 'libtool:runtime', 'libzeitgeist:devel', 'pango:devel', 'pkgconfig:devel', 'unique:devel', 'vala:runtime', 'which:runtime'
     ]
     
    def unpack(r):
        r.addBzrSnapshot('lp:synapse-project')
        r.Remove('src/Synapse.Services/synapse-services.pc.in')
        
    def configure(r):
        r.Configure('--libdir=%(prefix)s/lib --prefix=%(prefix)s ', configureName='autogen.sh')

