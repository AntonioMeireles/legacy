class pulseaudioXfce(PackageRecipe):

    name = 'pulseaudio-xfce'
    version = '1.0'

    def setup(r):
        r.addSource('xfce_startpulse.sh', mode=0755, dir='/%(bindir)s/')
        r.addSource('xfce_pulseaudio.desktop', mode=0644, dir='/%(sysconfdir)s/xdg/autostart/')
        r.Requires('pulseaudio:runtime','%(bindir)s/xfce_startpulse.sh')
