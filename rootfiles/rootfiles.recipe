class RootFiles(PackageRecipe):
    name = 'rootfiles'
    version = '7.2'

    def setup(r):
        r.mainDir('rootfiles')

        srpm = 'ftp://ftp.redhat.com/pub/redhat/linux/enterprise/3/en/os/i386/SRPMS/rootfiles-%(version)s-6.src.rpm'
        r.addArchive('rootfiles.tar.gz', rpm=srpm)

        r.Run('mv .Xdefaults .Xresources')
        r.Install('.*', '/root/')
