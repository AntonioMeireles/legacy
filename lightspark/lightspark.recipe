class Lightspark(CPackageRecipe):
    name = 'lightspark'
    version = '0.5.4.1'
 
    buildRequires = [ 'llvm:devel', 'glew:devel', 'cmake:runtime', 'pkgconfig:devel', 'Mesa:devel', 'SDL:devel', 'atk:devel', 'boost:devel', 'cairo:devel', 'curl:devel', 'desktop-file-utils:runtime', 'ffmpeg:devel', 'fontconfig:devel', 'freetype:devel', 'gcc-c++:runtime', 'gdk-pixbuf:devel', 'gettext:runtime', 'glib:devel', 'glibmm:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXScrnSaver:devel', 'libXau:devel', 'libXcomposite:devel', 'libXcursor:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXft:devel', 'libXi:devel', 'libXinerama:devel', 'libXpm:devel', 'libXrandr:devel', 'libXrender:devel', 'libXt:devel', 'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel', 'libjpeg:devel', 'libpng:devel', 'libsigc++:devel', 'libstdc++:devel', 'libxml++:devel', 'libxml2:devel', 'nasm:runtime', 'pango:devel', 'pcre:devel', 'pulseaudio:devel', 'zlib:devel' ]
 
    def setup(r):
        r.macros.lib_suffix = ('', '64')[Arch.x86_64==True]
        r.addArchive('http://launchpad.net/lightspark/trunk/%(name)s-0.5.4.1/+download/')
        r.addPatch('include_math.patch')

        r.CMake(' -DCMAKE_INSTALL_PREFIX=%(prefix)s '
                ' -DCOMPILE_PLUGIN=1 '
                ' -DCMAKE_BUILD_TYPE=Release '
                ' -DGNASH_EXE_PATH=/usr/bin/gtk-gnash '
                ' -DPCRE_INCLUDE_DIR=%(includedir)s/pcre '
                ' -DAUDIO_BACKEND="pulseaudio sdl" ')
        r.Make()
        r.MakeInstall()
        
        r.SharedLibrary(subtrees='%(libdir)s/lightspark/')
