class Lightspark(CPackageRecipe):
    name = 'lightspark'
    version = '0.4.8.1'
 
    buildRequires = [ 'llvm:devel', 'glew:devel' ]
 
    def setup(r):
        r.macros.cflags += ' -I%(includedir)s/pcre '
        r.addArchive('http://launchpad.net/lightspark/trunk/%(name)s-0.4.8/+download/')
        r.CMake(' -DCMAKE_INSTALL_PREFIX=%(prefix)s '
                ' -DCOMPILE_PLUGIN=1 '
                ' -DCMAKE_BUILD_TYPE=Release '
                ' -DGNASH_EXE_PATH=/usr/bin/gtk-gnash '
                ' -DAUDIO_BACKEND="pulseaudio sdl" ')
        r.Make()
        r.MakeInstall()
