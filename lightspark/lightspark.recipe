class Lightspark(CPackageRecipe):
    name = 'lightspark'
    version = '0.4.8.1'
 
    buildRequires = []
 
    def setup(r):
        r.macros.cflags += ' %(includedir)s/pcre '
        r.addArchive('http://launchpad.net/lightspark/trunk/%(name)s-0.4.8/+download/')
        r.CMake()
        r.Make()
        r.MakeInstall()
