loadInstalled('gtkhtml')
class Gnotime(AutoPackageRecipe):
    name = 'gnotime'
    version = '2.2.3'

    buildRequires = [ 'GConf:devel', 'GConf:runtime',
        'ORBit2:devel', 'atk:devel', 'bison:runtime', 'cairo:devel',
        'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime',
        'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel',
        'gtkhtml:devel', 'guile:devel', 'guile:runtime', 'libICE:devel',
        'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel',
        'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel',
        'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel',
        'libpng:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime',
        'pkgconfig:devel', 'popt:devel',
        'scrollkeeper:runtime', 'zlib:devel', 'perl-XML-Parser:perl',
        'libXt:devel', 'gmp:devel', 'qof:devel', 'dbus-glib:devel',
        'dbus-glib:runtime', ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/gttr/')
        # a method to allow configure to magically detect the newer versions of
        # gtkhtml without having to change the recipe every time there is a new
        # release
        r.Replace(re.escape('3.8 3.7 3.6 3.5 3.4 3.2 3.1 3.0'),
                  ' '.join([ '3.%s' % x for x in range(0,int(GTKHtml.version.split('.')[1])+1)] ),
                  'configure')

    def policy(r):
        r.SetModes('%(bindir)s/gnotime-remote', 0755)
        # FIXME: 2.2.3 has a /var/scrollkeeper issue.
        r.Remove('%(localstatedir)s/scrollkeeper', recursive=True)
