loadRecipe('gnomepackage.recipe')
class dopewars(GnomePackageRecipe):
    buildRequires = [ "glibc:devel", "desktop-file-utils:runtime" ]
    name = "dopewars"
    version = "1.5.10"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()

#       Move it from /usr/local/bin to /usr/bin

#        r.Move('usr/local/bin/dopewars', '%(bindir)s/dopewars')

#       Move artwork from /usr/local/share/pixmaps to /usr/share/pixmaps

#        r.Move('usr/local/share/pixmaps/dopewars-shot.png', '%(datadir)s/pixmaps/dopewars-shot.png')
#        r.Move('usr/local/share/pixmaps/dopewars-pill.png', '%(datadir)s/pixmaps/dopewars-pill.png')
#        r.Move('usr/local/share/pixmaps/dopewars-weed.png', '%(datadir)s/pixmaps/dopewars-weed.png')

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'LICENCE', 'NEWS', 'README', 'TODO')

#       Here are our menu links

        r.addSource('dopewars.desktop')
        r.Desktopfile('dopewars.desktop')
   
