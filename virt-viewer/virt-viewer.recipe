class VirtViewer(AutoPackageRecipe):
    	buildRequires = [ 'libvirt:devel',
                          'libxml2:devel',
                          'libvirt:runtime',
                          'gtk-vnc:devel',
                          'gtk-vnc:python',
                          'gtk-vnc:lib',
                          'gtk-vnc:devellib',
                          'pkgconfig:devel',
                          'expat:devel',
                          'pygtk:python', 
                          'pygtk:devel',
                          'pygtk:runtime',
                          'pygtk:devellib',
                          'pygtk:lib',
                          'libvirt:devel',
                          'gtk:devel',
                          'libxml2:devel',
                          'perl:devel',
                          'gettext:runtime',
			  'libglade:devel',
			  'intltool:runtime',
                          ]
        
   	name = 'virt-viewer'
	version = '0.4.2'

	def unpack(r):	
		r.addArchive('http://virt-manager.et.redhat.com/download/sources/virt-viewer/')


	def configure(r):
		# mozilla plugin not ready for prime time...
		r.Configure('--enable-plugin=no --prefix=%(prefix)s --localstatedir=%(localstatedir)s --libdir=%(libdir)s')    
