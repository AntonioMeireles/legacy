class TelepathyFarsight(AutoPackageRecipe):
    name = 'telepathy-farsight'
    version = '0.0.4'
 
    buildRequires = ['dbus-glib:devel', 'dbus:devel', 'farsight2:devel', 'glib:devel', 'gstreamer:devel', 'gtk-doc:runtime', 'libxml2:devel', 'pkgconfig:devel', 'python:bin', 'python:devel', 'telepathy-glib:devel', 'zlib:devel', 'pygobject:runtime', 'pygtk:python', 'gst-python:python', 'gst-python:devellib' ]
 
    def unpack(r):
        r.macros.cflags += ' -I%(libdir)s/dbus-1.0/include '
        r.addArchive('http://telepathy.freedesktop.org/releases/telepathy-farsight/')
