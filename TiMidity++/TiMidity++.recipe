class Timidity(CPackageRecipe):
    name = 'TiMidity++'
    version = '2.13.2'

    buildRequires = ['alsa-lib:devel', 'elfutils:runtime', 'libICE:devel',
                     'libSM:devel', 'libX11:devel', 'libXext:devel',
                     'libXmu:devel', 'libXt:devel', 'atk:devel',
                     'cairo:devel', 'fontconfig:devel', 'freetype:devel',
                     'gdk-pixbuf:devel', 'glib:devel', 'gtk:devel',
                     'libpng:devel', 'ncurses:devel', 'pango:devel',
                     'pkgconfig:devel']

    def setup(r):
        r.addArchive('mirror://sourceforge/timidity/')
        r.Configure('--enable-audio=alsa', '--enable-gtk', '--enable-alsaseq', '--enable-ncurses')
        r.Make()
        r.MakeInstall()
