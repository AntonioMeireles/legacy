class Lftp(AutoPackageRecipe):
    name = 'lftp'
    version = '4.3.1'
 
    buildRequires = [
            'expat:devel', 
            'gettext:runtime', 
            'gnutls:devel', 
            'intltool:runtime', 
            'libstdc++:devel', 
            'libtermcap:devel', 
            'ncurses:devel', 
            'perl-DBD-MySQL:perl', 
            'perl-DBD-Pg:perl', 
            'perl-DBD-SQLite:perl', 
            'perl-DBI:perl', 
            'perl:devel', 
            'pkgconfig:devel', 
            'readline:devel'
                ]
 
    def unpack(r):
        r.addArchive('http://ftp.yars.free.net/pub/source/lftp/')
