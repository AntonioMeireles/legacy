class Lftp(CPackageRecipe):
    name = 'lftp'
    version = '3.7.11'
    buildRequires = [ 'ncurses:devel', 'openssl:devel', 'pkgconfig:devel',
                      'readline:devel', 'libtool:runtime', 'expat:devel',
                      'libstdc++:devel', 'perl:runtime', 'bison:runtime',
                      'gettext:runtime', ]

    srpm ='ftp://ftp.redhat.com/redhat/linux/enterprise/5Server/en/os/SRPMS/%(name)s-%(version)s-4.el5_5.3.src.rpm'

    def setup(r):
        r.addArchive('lftp-3.7.11.tar.bz2', rpm=r.srpm)

        r.addPatch('lftp-3.7.11-help_mirror.patch', rpm=r.srpm)
        r.addPatch('lftp-3.7.11-decode.patch',rpm= r.srpm)
        r.addPatch('lftp-3.7.11-edit.patch', rpm=r.srpm)
        # RPL-3228, CVE-2010-2251
        r.addPatch('lftp-CVE-2010-2251.patch', rpm=r.srpm)

        r.Configure('--with-modules --disable-static '
                    '--with-openssl --without-gnutls ')
        r.Make() 

        r.MakeInstall()
