class Lftp(PackageRecipe):
    name = 'lftp'
    version = '4.3.5'
    buildRequires = ['ncurses:devel', 'perl-DBD-SQLite:perl', 'glibc:devel',
                     'pkgconfig:devel', 'binutils:runtime', 'readline:devel',
                     'libgcc:devellib', 'diffutils:runtime',
                     'perl-DBD-Pg:perl', 'expat:devel', 'gettext:runtime',
                     'perl:devel', 'perl-DBD-MySQL:perl', 'perl-DBI:perl',
                     'libstdc++:devel', 'make:runtime', 'gcc:runtime',
                     'intltool:runtime', 'libtermcap:devel', 'dante:devel',
                     'gnutls:devel', 'perl:devel', 'file:runtime']

    def setup(r):
        r.addArchive('http://ftp.yars.free.net/pub/source/lftp/')
        r.Configure('--with-socksdante')
        r.Make()
        r.MakeInstall()
