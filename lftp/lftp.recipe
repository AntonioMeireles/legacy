class Lftp(CPackageRecipe):
    name = 'lftp'
    version = '3.5.15'
    buildRequires = [ 'ncurses:devel', 'openssl:devel', 'pkgconfig:devel',
                      'readline:devel', 'libtool:runtime', 'expat:devel',
                      'libstdc++:devel', 'perl:runtime', 'bison:runtime',
                      'gettext:runtime', ]

    def setup(r):
        r.addArchive('http://ftp.yar.ru/pub/source/%(name)s/', keyid='F2A99A18')

        r.Configure('--with-modules --disable-static '
                    '--with-openssl --without-gnutls ')
        r.Make('LIBTOOL=libtool') # use system version of libtool
        r.MakeInstall()
