class Muine(CPackageRecipe):
    name = 'muine'
    version = '20100109'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'atk:devel', 'cairo:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gdbm:devel', 'gettext:runtime', 'glib:devel', 'gnome-sharp:cil', 'gnome-sharp:devellib', 'gnome-common:runtime', 'gnome-common:devel', 'gnome-icon-theme:devellib', 'gstreamer:devel', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'gtk:devel', 'gtk:runtime', 'intltool:runtime', 'libtool:runtime', 'libxml2:devel', 'mono:cil', 'mono:devel', 'mono:runtime', 'ndesk-dbus-glib', 'ndesk-dbus', 'pango:devel', 'pkgconfig:devel', 'taglib-sharp:cil', 'taglib-sharp:devellib', 'which:runtime']
 
    def setup(r):
        r.addGitSnapshot('git://git.gnome.org/muine')
	r.Configure(configureName='autogen.sh')
	r.Make()
	r.MakeInstall()
        r.Install('plugins/TrayIcon.dll{,.config}', '/usr/lib/muine/plugins/')
