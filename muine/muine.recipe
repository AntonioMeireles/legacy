class Muine(PackageRecipe):
    name = 'muine'
    version = '0.8.5'

    buildRequires = ['flac:devel',
                     'mono:devel',
                     'gstreamer:devel',
                     'gtk-sharp:devellib',
                     'GConf:devel',
                     'ORBit2:devel',
                     'atk:devel',
                     'cairo:devel',
                     'fontconfig:devel',
                     'freetype:devel',
                     'gdbm:devel',
                     'glib:devel',
                     'glibc:devel',
                     'gnome-vfs:devel',
                     'gtk:devel',
                     'libbonobo:devel',
                     'libogg:devel',
                     'libpng:devel',
                     'libvorbis:devel',
                     'libxml2:devel',
                     'pango:devel',
                     'xorg-x11:devel',
                     'zlib:devel',
                     'GConf:runtime',
                     'binutils:runtime',
                     'gawk:runtime',
                     'gettext:runtime',
                     'glibc:runtime',
                     'mono:runtime',
                     'perl:runtime',
                     'pkgconfig:devel',
                     'dbus-mono:lib',
                     'gtk-sharp:lib',
                     'mono:lib',
                     'desktop-file-utils:runtime',
                     'monodoc:runtime' ]

    def setup(r):
        r.addArchive('http://muine-player.org/releases/%(name)s-%(version)s.tar.gz')
        r.Configure('--enable-gstreamer=0.10 --disable-id3tag')
        r.Make()
        r.MakeInstall()
        r.Install('plugins/TrayIcon.dll', '/usr/lib/muine/plugins/TrayIcon.dll')
