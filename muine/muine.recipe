class Muine(PackageRecipe):
    name = 'muine'
    version = '0.8.2'

    buildRequires = [ 'flac:devel', 'mono:devel',
			'gstreamer:devel', 'gtk-sharp2:devellib']

    def setup(r):
        r.addArchive('http://muine.gooeylinux.org/%(name)s-%(version)s.tar.gz')
        r.Configure('--enable-gstreamer --disable-id3tag')
        r.Make()
        r.MakeInstall()
	r.Requires('gtk-sharp2:lib', '%(libdir)s/%(name)s/%(name)s.exe')
