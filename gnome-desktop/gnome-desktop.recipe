loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class GnomeDesktop(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'pango:devel', 'gtk:devel', 'GConf:devel', 'gnome-vfs:devel', 'libgnomeui:devel', 'libgnome:devel', 'startup-notification:devel', 'rarian:devellib', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'gnome-keyring:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel', 'popt:devel', 'intltool:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime', 'gcc-c++:runtime', 'rarian:runtime', 'desktop-file-utils:runtime', 'gettext:runtime', 'perl:runtime', 'libxslt:runtime', 'docbook-dtds:data', 'rarian:devel', 'gnome-python:python', 'gtk-doc:runtime', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python:devel', 'gnome-common:devel', 'gnome-common:runtime', 'gtk-doc:devel', 'libXrandr:devel', 'gettext:devel' ]

    name = 'gnome-desktop'
    version = '2.24.3'
    rpmRelease = '1.fc10'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --with-gnome-distributor="Foresight Linux" --disable-scrollkeeper --enable-gtk-doc=no'

    rpmPatches = [  # http://bugzilla.gnome.org/show_bug.cgi?id=549960
        'rr-leaks.patch',
        'clone-modes.patch',
        # http://bugzilla.gnome.org/show_bug.cgi?id=552856
        'gnome-desktop-2.24.0-fade.patch',
        ]

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.addPatch('gnome-desktop-recently-used-apps.patch')
        r.Run('autoreconf')


    def policy(r):
        r.MakeDirs('%(sysconfdir)s/skel/Documents')
        r.MakeDirs('%(sysconfdir)s/skel/Music')
        r.MakeDirs('%(sysconfdir)s/skel/Photos')
        r.MakeDirs('%(sysconfdir)s/skel/Videos')
        r.ExcludeDirectories(exceptions=[ '%(sysconfdir)s/skel/Documents',
                                          '%(sysconfdir)s/skel/Music',
                                          '%(sysconfdir)s/skel/Photos',
                                          '%(sysconfdir)s/skel/Videos']
                             )

