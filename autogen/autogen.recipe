class autogen(PackageRecipe):
    buildRequires=["glibc:devel", "guile:devel", "libxml2:devel", "zlib:devel"]

    name = "autogen"
    version = "5.7"

    def setup(r):
        r.addArchive("http://heanet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2")
        r.Configure()
	r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'NEWS',
              'NOTES', 'README', 'THANKS',
              'TODO', 'VERSION')
