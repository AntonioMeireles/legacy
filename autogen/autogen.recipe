class autogen(PackageRecipe):
    buildRequires=["glibc:devel", "guile:devel", "libxml2:devel", 
    		"zlib:devel",'binutils:runtime', 'gawk:runtime', 'install-info:runtime', 'texi2html:runtime']

    name = "autogen"
    version = "5.8.4"

    def setup(r):
        r.addArchive("http://heanet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2")
        r.Configure()
	r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'NEWS',
              'NOTES', 'README', 'THANKS',
              'TODO', 'VERSION')
