class IpodSharp(PackageRecipe):
   buildRequires = [ 'mono:devel', 'libipoddevice:devellib', 'gawk:runtime',
		'mono:runtime', 'monodoc:runtime', 'pkgconfig:devel' ]
	
   name = "ipod-sharp"
   version = "0.5.12"
   def setup(r):
	r.addArchive('http://banshee-project.org/files/%(name)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
