class IpodSharp(AutoPackageRecipe):
   buildRequires = [ 'mono:devel', 'libipoddevice:devellib', 'gawk:runtime',
        'mono:runtime', 'monodoc:runtime', 'pkgconfig:devel', 'gtk-sharp:lib',
        'mono:lib' ]
    
   name = "ipod-sharp"
   version = "0.6.2"

   def unpack(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')
