class IpodSharp(AutoPackageRecipe):
    name = "ipod-sharp"
    version = "0.8.0"
    buildRequires = [ 'dbus:devel', 'dbus-glib:devel',
                      'gawk:runtime', 'gtk-sharp:devellib', 'gtk-sharp:lib',
                      'mono:devel', 'mono:runtime', 'monodoc:runtime',
                      'ndesk-dbus:cil', 'ndesk-dbus:devellib', 'ndesk-dbus-glib:cil',
                      'ndesk-dbus-glib:devellib', 'pkgconfig:devel',
                      'podsleuth:devellib', 'podsleuth:lib', 'podsleuth:runtime']

    def unpack(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')

    def configure(r):
        r.Configure('--prefix=%(prefix)s')
