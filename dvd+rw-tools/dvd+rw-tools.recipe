class DvdPlusRWTools(CPackageRecipe):
    name = 'dvd+rw-tools'
    version = '7.0'

    buildRequires = [ 'libstdc++:devel', 'm4:runtime', ]

    def setup(r):
        r.addArchive('http://fy.chalmers.se/~appro/linux/DVD+RW/tools/')

        r.Make()
        r.MakePathsInstall()
