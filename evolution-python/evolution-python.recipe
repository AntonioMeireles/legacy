class EvolutionPython(AutoPackageRecipe):

    name = 'evolution-python'
    version = '0.0.4'

    buildRequires = [ 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'evolution-data-server:devel', 'expat:devel', 'freetype:devel', 'glib:devel', 'gnome-vfs:devel', 'gtk:devel', 'libXrender:devel', 'libbonobo:devel', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'autoconf:runtime', 'libtool:runtime', 'automake:runtime', 'python:devel', 'pygtk:devel' ]

    def unpack(r):
        r.addSvnSnapshot('https://svn.greenbirdsystems.com/evolution-python/tags/%(version)s/')
        r.Run('chmod a+x autogen.sh && ./autogen.sh')


    def policy(r):
        # already in gnome-python-desktop:python
        r.Remove('%(libdir)s/python2.6/site-packages/gtk-2.0/evolution/ecal.so')
        r.Remove('%(libdir)s/python2.6/site-packages/gtk-2.0/evolution/ebook.so')
