class Conky(CPackageRecipe):
    name = 'conky'
    version = '1.5.1'
 
    buildRequires = ['wireless-tools:devel', 'expat:devel', 'fontconfig:devel', 
            'freetype:devel', 'glib:devel', 'libX11:devel', 'libXau:devel', 
            'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 
            'libXft:devel', 'libXrender:devel', 'libxslt:runtime', 'pkgconfig:devel', 
            'zlib:devel']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/' '%(name)s-%(version)s.tar.bz2')
        r.Configure('--prefix=%(prefix)s --enable-wlan')
        r.Make()
        r.MakeInstall()
