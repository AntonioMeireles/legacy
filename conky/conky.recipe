class Conky(AutoPackageRecipe):
    name = 'conky'
    version = '1.8.1'
 
    buildRequires = [
		'wireless-tools:devel', 
		'expat:devel', 
		'fontconfig:devel', 
            	'freetype:devel', 
		'glib:devel', 
		'libX11:devel', 
		'libXau:devel', 
            	'libXdamage:devel', 
		'libXdmcp:devel', 
		'libXext:devel', 
		'libXfixes:devel', 
            	'libXft:devel', 
		'libXrender:devel', 
		'libxslt:runtime', 
		'pkgconfig:devel', 
            	'zlib:devel', 
		'alsa-lib:devel', 
		'lua:devel', 
		'ncurses:devel',
                'cairo:devel',
                'curl:devel',
                'imlib2:devel',
                'libxml2:devel',
                'openssl:devel',
                'tolua++:devel',
                'tolua++:runtime',
                'atk:devel',
                'audacious:devel',
                'dbus-glib:devel',
                'dbus:devel',
                'gdk-pixbuf:devel',
                'gtk:devel',
                'libmcs:devel',
                'libmowgli:devel',
                'pango:devel'
                ]
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/' '%(name)s-%(version)s.tar.bz2')
    def configure(r):
        r.Configure(' --prefix=%(prefix)s '
                    ' --enable-audacious'
                    ' --enable-wlan'
                    ' --enable-imlib2'
                    ' --enable-lua-cairo'
                    ' --enable-lua-imlib2'
                    ' --enable-curl'
                    ' --enable-rss'
                    ' --enable-ibm',
                    ' --enable-mpd'
                    ' --disable-moc'
                    '--disable-ncurses')
        r.Replace(('^hardcode_libdir_flag_spec=.*',
                   'hardcode_libdir_flag_spec=""'),
                  ('^runpath_var=LD_RUN_PATH',
                   'runpath_var=DIE_RPATH_DIE'),
                  'libtool')

    def policy(r):
        r.Remove('%(sysconfdir)s/%(name)s/conky_no_x11.conf')
