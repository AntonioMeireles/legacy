class WXgtk(AutoPackageRecipe):
    name = 'wxGTK'
    version = '2.8.7'
    buildRequires = ['GConf:devel', 'ORBit2:devel', 'SDL:devel', 'atk:devel', 'esound:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libjpeg:devel', 'libmspack:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel', 'libxcb:devel', 'libxml2:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'xcb-util:devel', 'zlib:devel', 'Mesa:devel', 'gettext:runtime' ]

    def unpack(r):
        r.addArchive('ftp://ftp.wxwidgets.org/pub/2.8.7/')
        r.addPatch('http://cvs.fedoraproject.org/viewcvs/*checkout*/devel/wxGTK/wxGTK-2.8.7-race-fix.patch')
        r.Replace('/usr/lib', '%(libdir)s', '{wx-config.in,configure}')
        r.Environment('GDK_USE_XFT', '1')
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '

    def configure(r):
        r.Environment('CFLAGS', '%(optflags)s -fno-strict-aliasing ')
        r.Environment('CXXFLAGS', '%(optflags)s -fno-strict-aliasing ')
        r.Environment('OPENGL_LIBS', '-lGL -lGLU -L%(libdir)s/xorg.mesa.3d/')
        r.Configure(' --x-libraries=%(includedir)s '
                    ' --with-opengl '
                    ' --with-sdl '
                    ' --with-gnomeprint '
                    ' --enable-shared '
                    ' --enable-soname '
                    ' --disable-optimise '
                    ' --enable-debug_info '
                    ' --enable-intl '
                    ' --enable-unicode '
                    ' --enable-no_deps '
                    ' --disable-rpath '
                    ' --enable-geometry '
                    ' --enable-graphics_ctx '
                    ' --enable-sound '
                    ' --enable-mediactrl '
                    ' --enable-display '
                    ' --enable-timer '
                    ' --enable-compat24')

    def make(r):
        r.Make()
        r.Make(dir = 'contrib/src/stc')
        r.Make(dir = 'contrib/src/ogl')
        r.Make(dir = 'contrib/src/gizmos')
        r.Make(dir = 'contrib/src/svg')

        r.Make('allmo', dir = 'locale')

    def makeinstall(r):
        r.MakeInstall()
        r.MakeInstall(dir = 'contrib/src/stc')
        r.MakeInstall(dir = 'contrib/src/ogl')
        r.MakeInstall(dir = 'contrib/src/gizmos')
        r.MakeInstall(dir = 'contrib/src/svg')

        r.Remove('%(bindir)s/wx-config')
        r.Symlink('%(libdir)s/wx/config/gtk2-unicode-release-2.8', '%(bindir)s/wx-config')
