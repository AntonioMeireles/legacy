class SystemConfigServices(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'intltool:runtime' ]
    name = "system-config-services"
    version = "0.8.19"

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.gz',
            rpm='ftp://ftp.linux.ncsu.edu/pub/fedora/linux/core/test/3.90/SRPMS/%(name)s-%(version)s-1.src.rpm')

        r.Replace('Icon=%(name)s.png','Icon=%(datadir)s/icons/hicolor/48x48/apps/%(name)s.png','%(name)s.desktop.in')
        r.Replace('Exec=','Exec=gksudo ','%(name)s.desktop.in')
        r.Replace('Categories=Application;System;','Categories=Application;System;Settings;','%(name)s.desktop.in')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.Doc('AUTHORS', 'ChangeLog', 'docs/*')
