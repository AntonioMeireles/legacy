loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class Libgnome(RPMPackageRecipe,GnomePackageRecipe):
    
    buildRequires = [ 'zlib:devel', 'esound:devel', 'glib:devel',
       'libbonobo:devel', 'GConf:devel', 'gvfs:devel',
       'ORBit2:devel', 'libxslt:devel', 'libxml2:devel',
       'perl:runtime', 'intltool:runtime', 'audiofile:devel',
       'popt:devel', 'GConf:runtime', 'gettext:runtime',
       'glib:runtime', 'gnome-vfs:devel', 'autoconf:runtime','automake:runtime',  'libtool:runtime',]

    name = 'libgnome'
    version = '2.23.5'
    rpmRelease = '1.fc10'
    rpmPatches= [ 'libgnome-2.11.1-scoreloc.patch',
                  'libgnome-2.7.2-default-cursor.patch',
                  'libgnome-2.8.0-default-browser.patch',
                  'libgnome-2.19.1-default-settings.patch',
                  'libgnome-2.22.0-default-sound-effects.patch',
                  'im-setting.patch']

    docs = GnomePackageRecipe.docs
    #docs.remove('COPYING')

    extraConfig = '--disable-gtk-doc --disable-static --disable-esd'

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        # FIXME! update patch bellow!
        # r.addPatch('foresight.patch')
        r.Run('aclocal; automake; autoconf')

    def policy(r):
        r.PackageSpec('libgnome-background', '%(datadir)s/pixmaps/backgrounds/gnome/background-default.jpg')
