loadRecipe('gnomepackage.recipe', label='conary.specifix.com@spx:devel')
class Libgnome(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'zlib:devel', 'esound:devel', 'glib:devel',
                           'libbonobo:devel', 'GConf:devel',
                           'gnome-vfs:devel', 'libxml2:devel', 
                           'ORBit2:devel', 'libxslt:devel', 
                           'intltool:runtime' ])
    
    name = 'libgnome'
    version = '2.10.0'

    docs = GnomePackageRecipe.docs
    docs.remove('COPYING')

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.addPatch('theme.patch')

    def setup(r):
	GnomePackageRecipe.setup(r)
	r.addSource('default.png')
	r.Install('default.png','/usr/share/pixmaps/backgrounds/default.png')
	r.Requires('gtk-theme-clearlooks:runtime', '%(sysconfdir)s/gconf/schemas/desktop_gnome_interface.schemas')
