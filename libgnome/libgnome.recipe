loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class Libgnome(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = [ 'zlib:devel', 'esound:devel', 'glib:devel', 'libbonobo:devel', 'GConf:devel', 'gvfs:devel', 'ORBit2:devel', 'libxslt:devel', 'libxml2:devel', 'perl:runtime', 'intltool:runtime', 'audiofile:devel', 'popt:devel', 'GConf:runtime', 'gettext:runtime', 'gettext:devel', 'glib:runtime', 'gnome-vfs:devel', 'autoconf:runtime','automake:runtime',  'libtool:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime']

    name = 'libgnome'
    version = '2.26.0'
    rpmRelease = '1.fc11'
    rpmSources = ['desktop_gnome_peripherals_monitor.schemas']
    rpmPatches= [ 'libgnome-2.11.1-scoreloc.patch',
                  'libgnome-2.7.2-default-cursor.patch',
                  'libgnome-2.8.0-default-browser.patch',
                  'libgnome-2.22.0-default-sound-effects.patch',
                  'im-setting.patch']


    docs = GnomePackageRecipe.docs
    #docs.remove('COPYING')

    extraConfig = '--disable-gtk-doc --disable-static --disable-esd --disable-gtk-doc-html'

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.addPatch('foresight.patch')
        r.Run('autoreconf -fi')

    def policy(r):
        r.Install('desktop_gnome_peripherals_monitor.schemas', '%(sysconfdir)s/gconf/schemas/')
        r.PackageSpec('libgnome-background', '%(datadir)s/pixmaps/backgrounds/gnome/background-default.jpg')
