loadSuperClass('gnomepackage')
class Libgnome(GnomePackageRecipe):
    name = 'libgnome'
    version = '2.20.1.1'

    buildRequires = [ 'zlib:devel', 'glib:devel', 'libbonobo:devel',
        'GConf:devel', 'audiofile:devel', 'gnome-vfs:devel', 'libxml2:devel',
        'GConf:runtime', 'ORBit2:devel', 'libxslt:devel', 'intltool:runtime',
        'gettext:runtime', 'popt:devel', 'perl:runtime' ]

    extraConfig = '--disable-esd'

    def policy(r):
        r.Requires('popt:devel', '%(includedir)s/.*/gnome-program.h')
