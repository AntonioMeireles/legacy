loadRecipe('gnomepackage')
class Libgnome(GnomePackageRecipe):
    
    buildRequires = [ 'zlib:devel', 'esound:devel', 'glib:devel',
       'libbonobo:devel', 'GConf:devel', 'gnome-vfs:devel',
       'ORBit2:devel', 'libxslt:devel', 'libxml2:devel',
       'perl:runtime', 'intltool:runtime', 'audiofile:devel',
       'popt:devel', 'GConf:runtime', 'gettext:runtime',
       'glib:runtime' ]
    
    name = 'libgnome'
    version = '2.19.1'

    docs = GnomePackageRecipe.docs
    #docs.remove('COPYING')

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addPatch('theme.patch')
        r.addPatch('font.patch')
        r.Replace('Clearlooks','Foresight','schemas/desktop_gnome_interface.schemas*')
