class FVWM(AutoPackageRecipe):
    name = 'fvwm'
    version = '2.5.18'

    buildRequires = ['fontconfig:devel', 'freetype:devel', 'gettext:runtime',
                     'libpng:devel', 'libtermcap:devel', 'perl:lib',
                     'perl:runtime', 'pkgconfig:devel', 'readline:devel',
                     'zlib:devel', 'fribidi:devel', 'libICE:devel',
                     'libSM:devel', 'libX11:devel', 'libXau:devel',
                     'libXdmcp:devel', 'libXext:devel', 'libXft:devel',
                     'libXinerama:devellib', 'libXpm:devel',
                     'libXrender:devel', 'libXt:devel', ]

    def unpack(r):
        r.addArchive('ftp://ftp.fvwm.org/pub/fvwm/version-2/')
        r.addSource('fvwmrc.config', dest = '%(datadir)s/fvwm/config')

    def policy(r):
        r.NonBinariesInBindirs(exceptions='%(libexecdir)s/fvwm/%(version)s/FvwmCommand.*')
