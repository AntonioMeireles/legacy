class WifiRadar(CPackageRecipe):
    name = 'wifi-radar'
    version = '1.9.8'
 
    buildRequires = ['chkconfig:runtime', 'desktop-file-utils:runtime',
'pygobject:python', 'pygtk:python']
 
    def setup(r):
        r.addArchive('http://wifi-radar.systemimager.org/pub/')
        r.addSource('init_script')
        r.MakeInstall(' sbindir=%(destdir)s%(sbindir)s'
' initdir=%(destdir)s%(initdir)s mandir=%(destdir)s%(mandir)s'
' pixmapsdir=%(destdir)s%(datadir)s/pixmaps'
' appsdir=%(destdir)s%(datadir)s/applications'
' sysconfdir=%(destdir)s%(sysconfdir)s/%(name)s')
        r.Install('init_script','%(initdir)s/%(name)s')

