class Ntop(CPackageRecipe):
    name = 'ntop'
    version = '3.3.10'
 
    buildRequires = ['GeoIP:devel', 
            'gdbm:devel', 
            'libpcap:devel', 
            'openssl:devel', 
            'pcre:devel', 
            'python:devel', 
            'rrdtool:devel', 
            'zlib:devel'
                ]

 
    def setup(r):
        r.macros.version = r.version.replace('_', '-')
        r.addArchive('http://downloads.sourceforge.net/project/ntop/ntop/ntop-%(version)s/')
        r.Configure(configureName='autogen.sh')
        r.Make()
        r.MakeInstall()
        r.Config(exceptions='%(sysconfdir)s/%(name)s/*.{gz,dat}')
