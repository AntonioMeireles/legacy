class Pngcrush(CPackageRecipe):
    name = 'pngcrush'
    version = '1.6.12'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('mirror://sourceforge/pmt/')
        r.Make()
        r.Install('pngcrush', '%(bindir)s/', mode=0755)
        r.Doc('ChangeLog.txt')
