class Gexiv2(CPackageRecipe):
    name = 'gexiv2'
    version = '0.1.0' 

    buildRequires = []
 
    def setup(r):
        r.addArchive('http://yorba.org/download/gexiv2/0.1/libgexiv2-0.1.0.tar.bz2')
        r.Configure('--release --prefix=%(prefix)s')
        #r.Make('LIBTOOL="sh ./libtool --tag=CC"')
        r.Make('LIBTOOL="libtool --tag=CC"')

        r.MakeInstall('LIBTOOL="sh ./libtool --tag=CC"')
