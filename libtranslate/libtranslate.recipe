class Libtranslate(PackageRecipe):

    buildRequires = [
        'gcc:devel',
        'glib:devel',
        'glibc:devel',
        'binutils:runtime',
        'gawk:runtime',
        'gettext:runtime',
        'glibc:runtime',
        'perl:runtime',
        'pkgconfig:devel'
    ]

    name = "libtranslate"
    version = "0.99"

    def setup(r):
        r.addArchive('http://savannah.nongnu.org/download/%(name)s/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
