class libbulletml(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "libbulletml"
    version = "0.0.6"

    def setup(r):
        r.addArchive('http://shinh.skr.jp/libbulletml/%(name)s-%(version)s.tar.bz2')
        r.mainDir('bulletml/src')
        r.Make()
        r.Install('libbulletml.a', '%(libdir)s/')
