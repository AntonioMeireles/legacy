class CharisFonts(PackageRecipe):
    name = 'charis-fonts'
    version = '4.102'

    buildRequires = ['dos2unix:runtime', 'fontconfig:config', 'mkfontdir:runtime' ]

    def setup(r):
        # scripted download; see http://scripts.sil.org/cms/scripts/page.php?site_id=nrsi&item_id=CharisSIL_download
        r.addArchive('CharisSIL%(version)s.zip', dir='%(name)s-%(version)s')
        r.addSource('charis-fonts-fontconfig.conf', dest = '%(sysconfdir)s/fonts/conf.d/', mode = 0644 )
        r.Install('CharisSIL/*.ttf', '%(datadir)s/fonts/truetype/')
        r.Run('dos2unix CharisSIL/*.txt')
        r.Doc('CharisSIL/*.{txt,pdf}')
        r.SetModes('%(thisdocdir)s/', 0644)

