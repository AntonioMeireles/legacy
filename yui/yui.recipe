class Yui(PackageRecipe):
    name='yui'
    version='2.2.1'

    buildRequires = ['unzip:runtime']

    def setup(r):
        r.addArchive('mirror://sourceforge/yui/yui_%(version)s.zip')
        r.addSource('http://developer.yahoo.net/yui/license.txt')
        r.Doc('docs', 'examples', 'README', 'license.txt')
        r.Copy('build', '/srv/www/html/yui/')
