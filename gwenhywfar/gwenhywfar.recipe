class Gwenhywfar(AutoPackageRecipe):
    name = 'gwenhywfar'
    version = '2.6.2'
    buildRequires = [
        'gettext:runtime',
        'krb5:devel',
        'libstdc++:devel',
        'libxml2:devel',
        'ncurses:devel',
        'openssl:devel',
        'pkgconfig:devel',
        'which:runtime',
        'zlib:devel',
    ]

    def unpack(r):
        r.macros.cppflags += " -I/usr/kerberos/include"
        r.addArchive('mirror://sourceforge/gwenhywfar/')
