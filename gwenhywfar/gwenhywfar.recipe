class Gwenhywfar(AutoPackageRecipe):
    name = 'gwenhywfar'
    version = '3.9.0'
    buildRequires = [
        'gettext:runtime',
        'gnutls:devel',
        'graphviz:runtime',
        'krb5:devel',
        'libgcrypt:devel',
        'libgpg-error:devel',
        'libstdc++:devel',
        'libxml2:devel',
        'ncurses:devel',
        'openssl:devel',
        'pkgconfig:devel',
        'which:runtime',
        'zlib:devel',
    ]

    def unpack(r):
        r.macros.cppflags += " -I/usr/kerberos/include"
        r.addArchive('http://www2.aquamaniac.de/sites/download/download.php?package=01&release=25&file=01&dummy=%(name)s-%(version)s.tar.gz')

    def configure(r):
        r.Configure("--with-openssl-libs=%(libdir)s")
