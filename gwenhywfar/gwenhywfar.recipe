class Gwenhywfar(AutoPackageRecipe):
    name = 'gwenhywfar'
    version = '3.9.0'
    buildRequires = [
        'gettext:runtime',
        'gnutls:devel',
        'graphviz:runtime',
        'libgcrypt:devel',
        'libgpg-error:devel',
        'openssl:devel',
        'pkgconfig:devel',
        'which:runtime',
    ]

    def unpack(r):
        r.addArchive('http://www2.aquamaniac.de/sites/download/download.php?package=01&release=25&file=01&dummy=%(name)s-%(version)s.tar.gz')
        r.addPatch('gwenhywfar-3.4.1-pkgconfig.patch')

    def configure(r):
        r.Configure("--with-openssl-libs=%(libdir)s")
        r.Replace(r'^hardcode_libdir_flag_spec=.*',
                   'hardcode_libdir_flag_spec=""',
                   'libtool')
        r.Replace(r'^runpath_var=LD_RUN_PATH',
                   'runpath_var=NO_REALLY_NO_RPATH',
                   'libtool')
