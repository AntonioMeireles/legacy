class Compface(AutoPackageRecipe):
    name = 'compface'
    version = '1.5.2'

    def unpack(r):
        r.addArchive('http://ftp.xemacs.org/pub/xemacs/aux/%(name)s-%(version)s.tar.gz')
        r.Replace('BINDIR', 'bindir', 'Makefile.in')
        r.Replace('LIBDIR', 'libdir', 'Makefile.in')
        r.Replace('MANDIR', 'mandir', 'Makefile.in')
        r.Replace('INCLUDEDIR', 'includedir', 'Makefile.in')

    def makeinstall(r):
    	r.MakePathsInstall()
