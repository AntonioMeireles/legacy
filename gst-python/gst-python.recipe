class GstPython(PackageRecipe):

    buildRequires = [ 'glib:devel', 'glibc:devel', 'gst-plugins:devel',
			'gstreamer:devel', 'libxml2:devel', 'zlib:devel' ]

    name = 'gst-python'
    version = '0.8.2'
    def setup(r):
	r.addArchive('http://gstreamer.freedesktop.org/src/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()
