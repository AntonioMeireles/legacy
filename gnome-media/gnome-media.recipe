loadSuperClass('gnomepackage.recipe')
class GnomeMedia(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'glib:devel', 'pango:devel', 'gtk:devel',
        'libgnomeui:devel', 'gail:devel', 'gstreamer:devel', 'gst-plugins-base:devel', 
        'scrollkeeper:runtime', 'GConf:devel', 'ORBit2:devel', 'atk:devel',
        'audiofile:devel', 'cairo:devel', 'esound:devel', 'fontconfig:devel',
        'freetype:devel', 'glibc:devel', 'gnome-keyring:devel', 'gnome-vfs:devel',
        'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel',
        'libgnome:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel',
        'nautilus-cd-burner:devel', 'popt:devel', 'GConf:runtime',
        'docbook-utils:runtime', 'gettext:runtime', 'glib:runtime', 'perl:runtime' ])

    name = 'gnome-media'
    version = '2.14.2'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Replace('gnome-cd.png gnome-cd.desktop.in gnome-cd.schemas.in','gnome-cd.png', 'gnome-cd/Makefile*')
        r.Replace('Audio_in_files = gnome-cd.desktop.in','Audio_in_files = ', 'gnome-cd/Makefile*')
