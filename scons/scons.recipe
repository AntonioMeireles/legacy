class Scons(PackageRecipe):
    name = 'scons'
    version = '1.2.0'

    buildRequires = [ 'python-setuptools:python', 'python:devel', 'python:bin' ]

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')

        r.PythonSetup(data='--install-data=%(prefix)s')
