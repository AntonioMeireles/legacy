class SDLMIXer(AutoPackageRecipe):
    name = 'SDL_mixer'
    version = '1.2.8'

    buildRequires = ['SDL:devel' ]

    def unpack(r):
        r.addArchive('http://www.libsdl.org/projects/%(name)s/release/')

        def configure(r):
            r.Configure('--disable-dependency-tracking '
                        '--disable-static ')

