class GnomePresenceApplet(PackageRecipe):
    buildRequires = [ 'libgalago:devel', 'libgnomeui:devel' ]

    name = "gnome-presence-applet"
    version = "0.3.1"
    
    def setup(r):
        r.addArchive('http://www.galago-project.org/files/releases/source/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
