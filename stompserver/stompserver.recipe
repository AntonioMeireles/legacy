class StompServer(PackageRecipe):
    name = 'stompserver'
    version = '0.9.7'

    buildRequires = [
        'chkconfig:runtime',
        'eventmachine:ruby',
        'madeleine:ruby',
        'ruby:runtime',
      ]

    def setup(r):
        r.addArchive('https://rubyforge.org/frs/download.php/14476/%(name)s-%(version)s.tgz')
        r.addSource('stompserver.init', dest='%(initdir)s/stompserver', mode=0755)
        r.addPatch('daemonize.patch')

        r.Run('ruby setup.rb config')
        r.Run('ruby setup.rb setup')
        r.Run('ruby setup.rb install --prefix=%(destdir)s')
