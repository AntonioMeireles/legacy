class StompServer(PackageRecipe):
    name = 'stompserver'
    version = '0.9.9'
    fileNum = '31579'

    buildRequires = [
        'daemons:ruby',
        'eventmachine:ruby',
        'chkconfig:runtime',
        'ruby:runtime',
        'rubygems:ruby',
      ]

    def setup(r):
        r.macros.filenum = r.fileNum
        r.addArchive('https://rubyforge.org/frs/download.php/%(filenum)s/%(name)s-%(version)s.tgz')
        r.addPatch('stompserver-no-log.patch')

        r.Run('ruby setup.rb config')
        r.Run('ruby setup.rb setup')
        r.Run('ruby setup.rb install --prefix=%(destdir)s')

        # /usr/bin/stompserver needs a shebang
        r.Create('%(bindir)s/stompserver', contents='#!/usr/bin/ruby', mode=0755)
        r.Run('cat bin/stompserver >>%(destdir)s%(bindir)s/stompserver')

        r.addSource('stompserver.init', dest='%(initdir)s/stompserver', mode=0755)
        r.addSource('stompserver.conf', dir='%(sysconfdir)s')
