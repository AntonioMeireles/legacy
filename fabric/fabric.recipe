class Fabric(PackageRecipe):

    name = 'fabric'
    version = '0.9.3'

    buildRequires = ['python-setuptools:python', "python:devel"]
    
    packageSummary = "Fabric is a Python library and command-line tool for streamlining the use of SSH for application deployment or systems administration tasks."
    packageDescription ="""Fabric is a Python library and command-line tool for streamlining the use of SSH for application deployment or systems administration tasks.

It provides a basic suite of operations for executing local or remote shell commands (normally or via sudo) and uploading/downloading files, as well as auxiliary functionality such as prompting the running user for input, or aborting execution."""

    def setup(r):
        r.addArchive('http://pypi.python.org/packages/source/F/Fabric/Fabric-%(version)s.tar.gz')
        r.PythonSetup()
        r.Requires("paramiko:python","%(bindir)s/fab")
        r.Requires("pycrypto:python","%(bindir)s/fab")
