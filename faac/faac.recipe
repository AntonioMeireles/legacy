class faac(CPackageRecipe):
    name = 'faac'
    version = '1.25'

    buildRequires = [ 'dos2unix:runtime', 'autoconf:runtime',
        'automake:runtime', 'libtool:runtime', 'libstdc++:devel', ]

    def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

        r.Run('dos2unix bootstrap configure.in; sh -x ./bootstrap')
        r.Configure('--disable-static --with-mp4v2')
        r.Make()
        r.MakeInstall()
