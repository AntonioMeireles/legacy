class Faac(AutoPackageRecipe):
    name = 'faac'
    version = '1.26cvs'
 
    buildRequires = [ 'autoconf:runtime','automake:runtime', 'libtool:runtime', 'libstdc++:devel']
 
    def unpack(r):
        r.addCvsSnapshot(root=':pserver:anonymous@faac.cvs.sourceforge.net:/cvsroot/faac', project='faac') 
        r.Run('./bootstrap')
        r.Configure(' --with-mp4v2')


