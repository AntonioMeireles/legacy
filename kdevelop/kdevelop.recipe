loadSuperClass('kdepackage')
class KDevelop(kdePackageRecipe):

    name = 'kdevelop'
    version = '4.0.90'

    buildRequires = [
        'kdebase-workspace:devel', 'kdevplatform:devel', 'okteta:devel'
    ]

    def unpack(r):

        r.macros.git_tag = 'v'+r.version.replace('+', '-')
        r.addGitSnapshot('git://gitorious.org/kdevelop/kdevelop.git', branch='4.1', tag='%(git_tag)s')

