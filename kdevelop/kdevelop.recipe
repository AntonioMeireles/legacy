loadSuperClass('kdecorepackage')
class Kdevelop(kdeCorePackageRecipe):

    name = 'kdevelop'
    version = '3.5.0'
    kversion = '3.5.8'

    buildRequires = [
        'apr-util:devel', 'apr:devel', 'cervisia:devel', 'db:devel',
        'e2fsprogs:devel', 'expat:devel', 'flex:runtime', 'graphviz:runtime',
        'openldap:devel', 'pcre:devel', 'qt-tools:devellib', 'sqlite:devel',
        'subversion:devel'
    ]

    enableFinal = False

    def postUnpack(r):

        r.Replace('-lsvn_client-1',
                  '-lsvn_client-1 -lsvn_ra-1 -lsvn_subr-1', 'configure')

