class Redland(AutoPackageRecipe):

    name = 'redland'
    version = '1.0.9'

    buildRequires = [
        'curl:devel', 'db:devel', 'dmalloc:devel', 'e2fsprogs:devel',
        'flex:runtime', 'krb5:devel', 'libtool:devel', 'libxml2:devel',
        'libxslt:devel', 'm4:runtime', 'mysql:devel', 'openssl:devel',
        'pcre:devel', 'perl:runtime', 'pkgconfig:devel', 'postgresql:devel',
        'raptor:devel', 'rasqal:devel', 'sqlite:devel', 'zlib:devel'
    ]

    def unpack(r):
        r.addArchive('http://download.librdf.org/source/')

        #http://svn.librdf.org/view/librdf/trunk/src/Makefile.am?r1=15151&r2=15171&view=patch
        r.addPatch('redland-bug302.patch')

    def configure(r):
        r.Configure('--with-bdb-lib=%(libdir)s')

