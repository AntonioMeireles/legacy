class Redland(AutoPackageRecipe):

    name = 'redland'
    version = '1.0.8'

    buildRequires = [
        'curl:devel', 'db:devel', 'e2fsprogs:devel', 'flex:runtime',
        'krb5:devel', 'libtool:devel', 'libxml2:devel', 'libxslt:devel',
        'm4:runtime', 'mysql:devel', 'openssl:devel', 'pcre:devel',
        'perl:runtime', 'pkgconfig:devel', 'postgresql:devel', 'raptor:devel',
        'rasqal:devel', 'sqlite:devel', 'zlib:devel'
    ]

    def unpack(r):
        r.addArchive('http://download.librdf.org/source/')

    def configure(r):
        r.Configure('--with-bdb-lib=%(libdir)s')

