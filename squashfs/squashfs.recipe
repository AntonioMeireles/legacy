class Squashfs(CPackageRecipe):
    name = 'squashfs'
    version = '3.1'
    release = 'r2'

    buildRequires = [ 'zlib:devel' ]

    def setup(r):
        r.macros.release = r.release
        r.macros.subdir = 'squashfs-tools'
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s%(version)s-%(release)s.tar.gz')
        r.Make(dir='%(subdir)s')
        r.Install('%(subdir)s/mksquashfs', '%(essentialsbindir)s/', mode=0755)
        r.Install('%(subdir)s/unsquashfs', '%(sbindir)s/', mode=0755)
