class Fluidsynth(AutoPackageRecipe):
    name = 'fluidsynth'
    version = '1.1.4'
 
    buildRequires = ['alsa-lib:devel', 'dbus:devel', 'jack:devel', 'libsndfile:devel', 'ncurses:devel', 'pkgconfig:devel', 'portaudio:devel', 'pulseaudio:devel', 'readline:devel']
 
    def unpack(r):
        r.addArchive('http://downloads.sourceforge.net/project/fluidsynth/fluidsynth-%(version)s/')
