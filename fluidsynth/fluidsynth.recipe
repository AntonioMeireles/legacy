class Fluidsynth(PackageRecipe):
    name = "fluidsynth"
    version = "1.0.6"

    buildRequires = [ 'glibc:devel','alsa-lib:devel', 'jack:devel',
                      'ncurses:devel', 'readline:devel']

    def setup(r):
        r.addArchive('http://savannah.nongnu.org/download/fluid/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
