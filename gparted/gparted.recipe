class Gparted(AutoPackageRecipe):
    name = 'gparted'
    version = '0.9.1'
 
    buildRequires = [ 
        'cairomm:devel', 
        'desktop-file-utils:runtime',
        'e2fsprogs:devel',
        'e2fsprogs:devel',  
        'gettext:runtime', 
        'gksu:runtime',
        'glibmm:devel', 
        'gnome-doc-utils:devel',
        'gnome-doc-utils:runtime',
        'gtkmm:devel',
        'intltool:runtime', 
        'libsigc++:devel', 
        'libstdc++:devel',
        'parted:devel', 
        'rarian:runtime', 
        'util-linux:devel',
        'libxslt:runtime',
            ]

 
    def unpack(r):
        r.Environment('GKSUPROG', 'gksudo')
        r.addArchive('http://downloads.sourceforge.net/project/gparted/gparted/%(name)s-%(version)s/')

    def configure(r):
        r.Configure('--disable-scrollkeeper')

    def policy(r):
        r.Requires('gksu:runtime', 'gparted:runtime') 
