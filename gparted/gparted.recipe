loadSuperClass('gnomepackage')
class Gparted(GnomePackageRecipe):
    name = 'gparted'
    version = '0.4.8'
 
    buildRequires = [ 'cairomm:devel', 'desktop-file-utils:runtime',
                      'e2fsprogs:devel',  'glibmm:devel', 'gtkmm:devel',
                      'libsigc++:devel', 'parted:devel', 'rarian:runtime', 'util-linux:devel',
                      'e2fsprogs:devel','gksu-polkit:runtime']
    extraConfig = '--disable-scrollkeeper'
 
    def unpack(r):
        r.Environment('GKSUPROG', 'gksu-polkit')
        r.addArchive('mirror://sourceforge/gparted/')
