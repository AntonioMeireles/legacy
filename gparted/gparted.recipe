loadSuperClass('gnomepackage.recipe')
class GParted(GnomePackageRecipe):
    buildRequires = [ 'parted:lib', 'intltool:runtime', 'gtkmm:devel', 
                      'pkgconfig:devel' ]
    name = "gparted"
    version = "0.0.8"

    externalArchive = 'http://heanet.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.addSource('gparted.png')
	r.addPatch('launcher.patch')

    def install(r):
	GnomePackageRecipe.install(r)
	r.Install('gparted.png','%(datadir)s/pixmaps/')
