loadSuperClass('gnomepackage')
class Gparted(GnomePackageRecipe):
    name = 'gparted'
    version = '0.9.1'
 
    buildRequires = [ 
        'cairomm:devel', 
        'desktop-file-utils:runtime',
        'e2fsprogs:devel',
        'e2fsprogs:devel',  
        'gettext:runtime', 
        'gksu:runtime',
        'glibmm:devel', 
        'gtkmm:devel',
        'intltool:runtime', 
        'libsigc++:devel', 
        'libstdc++:devel',
        'parted:devel', 
        'rarian:runtime', 
        'util-linux:devel',
            ]

    extraConfig = ' --disable-scrollkeeper '

    def unpack(r):
        r.Environment('GKSUPROG', 'gksudo')
        r.addArchive('http://downloads.sourceforge.net/project/gparted/gparted/%(name)s-%(version)s/')


    def policy(r):
        r.Requires('gksu:runtime', 'gparted:runtime') 
