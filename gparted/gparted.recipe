loadSuperClass('gnomepackage.recipe')
class GParted(GnomePackageRecipe):
    buildRequires = [ 'parted:lib', 'intltool:runtime', 'gtkmm:devel', 
        'pkgconfig:devel', 'atk:devel', 'cairo:devel', 'expat:devel',
        'e2fsprogs:devel', 'fontconfig:devel', 'freetype:devel',
        'glib:devel', 'glibmm:devel', 'libpng:devel', 'libsigc++:devel',
        'libstdc++:devel', 'pango:devel', 'parted:devel',
        'cairomm:devel', 'desktop-file-utils:runtime', 'gettext:runtime', 'perl:runtime' ]

    name = "gparted"
    version = "0.3.3"

    externalArchive = 'http://heanet.dl.sourceforge.net/sourceforge/%(name)s/'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Replace('Name=GParted', 'Name=GNOME Partition Editor', 'gparted.desktop')
        r.Replace('Exec=gparted', 'Exec=gksudo gparted', 'gparted.desktop')
        r.Replace('GNOME;Application;System', 'GNOME;Settings;System', 'gparted.desktop')
