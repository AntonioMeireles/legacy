loadSuperClass('gnomepackage')
class GParted(GnomePackageRecipe):
    name = 'gparted'
    version = '0.3.3'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime',
        'e2fsprogs:devel', 'glib:devel', 'glibmm:devel', 'gtkmm:devel',
        'intltool:runtime', 'libsigc++:devel', 'pango:devel', 'parted:devel',
        'parted:runtime', 'perl:runtime', 'pkgconfig:devel',
        'fontconfig:devel', 'freetype:devel', 'libpng:devel',
        'libstdc++:devel[!bootstrap]', 'gettext:runtime', 'cairomm:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/gparted/')
