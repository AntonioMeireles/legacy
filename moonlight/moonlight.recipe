loadSuperClass('firefox-addon', label='gxti.rpath.org@fl:2')
class Moonlight(FirefoxAddonRecipe):
    name = 'moonlight'
    version = '1.0'
 
    buildRequires = []
 
    def unpack(r):
	if Arch.x86:
            r.addArchive('http://www.go-mono.com/archive/moonlight-plugins/latest/novell-moonlight-%(version)s-i586.xpi')
	if Arch.x86_64:
            r.addArchive('http://www.go-mono.com/archive/moonlight-plugins/latest/novell-moonlight-%(version)s-x86_64.xpi')
        r.mainDir('../')
