class Anaconda(PackageRecipe):
    buildRequires = [ 'bogl:devel', 'kudzu:devel', 'pump:devel',
                      'module-init-tools:runtime', 'newt:devel', 'rhpl:python',
                      'pciutils:devel', 'gtk:devel', 'popt:devel' ]
    name = "anaconda"
    version = "10.0"

    def setup(self):
	self.addArchive('anaconda-%(version)s.tar.bz2')
	self.addPatch('fdl.patch')
	#self.addPatch('hide_minimal.patch')
	self.Make('depend')
        self.Make()
	self.MakeInstall()
