class Bzr(CPackageRecipe):
    name = 'bzr'
    version = '0.92'

    buildRequires = [
        'python:devel', 'python-setuptools:python', 'elementtree:python',
        'cElementTree:python', 'ConfigObj:python' ]

    def setup(r):
        r.addArchive('http://bazaar-vcs.org/releases/src/')

        r.PythonSetup(purePython=False)
        r.Install('bzr.1', '%(mandir)s/')
