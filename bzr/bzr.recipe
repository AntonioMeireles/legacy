class Bzr(PackageRecipe):
    name = 'bzr'
    version = '0.92'

    buildRequires = [ 'python-setuptools:python', 'elementtree:python',
                      'cElementTree:python', 'ConfigObj:python' ]

    def setup(r):
        r.addArchive('http://bazaar-vcs.org/releases/src/')

        r.PythonSetup()
