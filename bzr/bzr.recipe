class Bzr(PackageRecipe):
    name = 'bzr'
    version = '0.16'
 
    buildRequires = ['ConfigObj:python', 'cElementTree:python','python-setuptools:python']
 
    def setup(r):
        r.addArchive('http://bazaar-vcs.org/releases/src/')
        r.PythonSetup()
