loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class Gvm(GnomePackageRecipe):

    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'hal:devel', 'dbus:devel' ])

    name = 'gnome-volume-manager'
    version = '1.2.0'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.addPatch('defaults.patch')
	r.addPatch('01-browse-fixup.patch')
	r.addPatch('02-mount-at-start.patch')
	r.addPatch('03-dbus-reconnect-on-bus-exit.patch')
	r.addPatch('04-do-not-set-capabilities.patch')
	r.addPatch('05-specify-programs.patch')
	r.addPatch('06-improve-mounting.patch')
	r.addPatch('07-track-cdrom-changes.patch')
	r.addPatch('08-compiler-warnings.patch')
