loadSuperClass('gnomepackage.recipe')
class GnomeCommon(GnomePackageRecipe):
    name = 'gnome-common'
    version = '2.18.0'

    def policy(r):

        for trove in [
            'which:runtime',
            'gnome-common:runtime',
            'intltool:devel',
            'intltool:runtime',
            'libtool:runtime',
            'pkgconfig:devel',
            'glib:devel',
            'autoconf:runtime',
            'automake:runtime' ]:
            r.Requires(trove, '%(bindir)s/gnome-autogen.sh')
