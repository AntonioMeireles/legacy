class GnomeCommon(AutoPackageRecipe):
    name = 'gnome-common'
    version = '2.26.0'

    def unpack(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('mirror://gnome/%(name)s/%(majversion)s/')
        r.addPatch('automake-1.11.patch')

    def policy(r):

        for trove in [
            'which:runtime',
            'gnome-common:runtime',
            'intltool:devel',
            'intltool:runtime',
            'pkgconfig:devel',
            'glib:devel',
            'autoconf:runtime',
            'automake:runtime' ]:
            r.Requires(trove, '%(bindir)s/gnome-autogen.sh')
