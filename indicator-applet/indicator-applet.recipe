class IndicatorApplet(AutoPackageRecipe):
    name = 'indicator-applet'
    version = '0.1.4'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-keyring:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'gtk-doc:runtime', 'gtk:devel', 'intltool:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel', 'libxcb:devel', 'libxml2:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'popt:devel', 'python:bin', 'xcb-util:devel', 'zlib:devel', 'gnome-doc-utils:runtime', 'gnome-doc-utils:devel' ]
 
    def unpack(r):
        r.addArchive('http://launchpad.net/%(name)s/0.1/%(version)s/+download/')
        #r.addArchive('https://edge.launchpad.net/ubuntu/jaunty/+source/indicator-applet/%(version)s-0ubuntu2/+files/indicator-applet_%(version)s.orig.tar.gz')

    def configure(r):
        r.Configure('--disable-gobject-introspection')
