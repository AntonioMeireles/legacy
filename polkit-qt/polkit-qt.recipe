loadSuperClass('cmakepackage')
class PolKitQt(CMakePackageRecipe):

    name = 'polkit-qt'
    version = '0.9.2+r980551'

    buildRequires = [
        'automoc:runtime', 'dbus:devel', 'libstdc++:devel', 'PolicyKit:devel',
        'qt4:devel'
    ]

    def unpack(r):

        r.macros.revision = r.version.split('+')[1].strip('r')
        r.addSvnSnapshot(
            'svn://anonsvn.kde.org/home/kde/trunk/kdesupport/polkit-qt',
            revision='%(revision)s'
        )

