class Gavl(CPackageRecipe):
    name = 'gavl'
    version = '1.1.0'
 
    buildRequires = ['libpng:devel', 'zlib:devel']
 
    def setup(r):
        r.addArchive('http://garr.dl.sourceforge.net/sourceforge/gmerlin/gavl-1.1.0.tar.gz')
        r.Configure('--without-doxygen')
        r.Make()
        r.MakeInstall()
