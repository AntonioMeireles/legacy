class Gavl(CPackageRecipe):
    name = 'gavl'
    version = '1.1.2'
 
    buildRequires = ['libpng:devel', 'zlib:devel', 'python:bin']
 
    def setup(r):
        r.addArchive('http://garr.dl.sourceforge.net/sourceforge/gmerlin/')
        r.Configure('--without-doxygen')
        r.Make()
        r.MakeInstall()
