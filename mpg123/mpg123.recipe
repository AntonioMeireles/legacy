class Mpg123(AutoPackageRecipe):
    name = 'mpg123'
    version = '1.15.4'
 
    buildRequires = ['SDL:devel', 'alsa-lib:devel', 'esound:devel', 'jack:devel', 'libtool:devel', 'openal:devel', 'pkgconfig:devel', 'portaudio:devel', 'pulseaudio:devel']
 
    def unpack(r):
        r.addArchive('http://www.mpg123.de/download/')
