class PyBackPack(PackageRecipe):
   buildRequires = [ 'python:devel', 'rdiff-backup:python', 'desktop-file-utils:runtime' ]
	
   name = "pybackpack"
   version = "0.4.2"
   def setup(r):
	r.addArchive('http://minus-zero.org/projects/pybackpack/%(name)s-%(version)s.tar.gz')
	r.Run('python setup.py install --root=%(destdir)s')

