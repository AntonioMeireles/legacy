class PowerManager(PackageRecipe):
   buildRequires = [ 'hal:devel','dbus:devel' ]
	
   name = "PowerManager"
   version = "0.1.0"
   def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/gnome-power/%(name)s-%(version)s.tar.gz')
	r.Configure('--with-distro=redhat')
	r.Make()
	r.MakeInstall()
