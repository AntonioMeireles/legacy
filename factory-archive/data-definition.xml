<?xml version="1.0"?>
<factory xmlns:factorydef="http://www.rpath.org/permanent/factorydefv1.xsd">
<metadata>
    <displayName>Binary Archive (tar.gz,tar.bz2,tar,zip)</displayName>
    <descriptions />
    <supportedFiles>
        <file>tar.bz2</file>
        <file>tar.gz</file>
        <file>tar</file>
        <file>zip</file>
    </supportedFiles>
  </metadata>
<dataFields>
  <field>
    <name>name</name>
    <required>true</required>
    <descriptions><desc>Package name</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>version</name>
    <required>true</required>
    <descriptions><desc>Package version</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>license</name>
    <descriptions><desc>License</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>summary</name>
    <descriptions><desc>Package summary</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>description</name>
    <descriptions><desc>Package description</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>location</name>
    <descriptions><desc>Where do you want to extract the archive?</desc></descriptions>
    <type>str</type>
    <constraints>
        <regexp>/.*</regexp>
    </constraints>
  </field>
</dataFields>
</factory>
