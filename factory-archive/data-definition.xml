<?xml version="1.0"?>
<factory xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.rpath.com/permanent/factorydef-1.0.xsd factorydef-1.0.xsd">
<metadata>
    <displayName>Binary Archive (tar.gz,tar.bz2,tar,zip)</displayName>
    <descriptions>
        <desc>Import a binary archive into Conary</desc>
    </descriptions>
    <supportedFiles>
        <file>tar.bz2</file>
        <file>tar.gz</file>
        <file>tar</file>
        <file>zip</file>
    </supportedFiles>
  </metadata>
<dataFields>
  <field>
    <name>name</name>
    <descriptions><desc>Package name</desc></descriptions>
    <type>str</type>
    <constraints>
      <regexp>^[\w\.\-]+$</regexp>
    </constraints>
    <required>true</required>
  </field>
  <field>
    <name>version</name>
    <descriptions><desc>Package version</desc></descriptions>
    <type>str</type>
    <required>true</required>
  </field>
  <field>
    <name>license</name>
    <descriptions><desc>License</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>summary</name>
    <descriptions><desc>Package summary</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>description</name>
    <descriptions><desc>Package description</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>location</name>
    <descriptions><desc>Where do you want to extract the archive?</desc></descriptions>
    <type>str</type>
    <constraints>
        <regexp>/.*</regexp>
    </constraints>
    <required>true</required>
  </field>
</dataFields>
</factory>
