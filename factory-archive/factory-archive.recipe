loadSuperClass('factory-base-packagecreator')
class FactoryArchive(BasePackageCreatorFactory):

    version = '1.0'
    name = 'factory-archive'

    class RecipeClass(PackageRecipe):
        buildRequires = []

        @classmethod
        def extractSources(klass, sources, openSourceFileFn):
            types = {'tar' : [],
                     'gz': [],
                     'zip': ['unzip:runtime'],
                     'bz2': [],
                     'tgz': []}
            files = []

            for source in sources:
                for type in types:
                    if source.endswith(type):
                        klass.buildRequires.extend(types[type])
                        files.append(source)
                        # tgz also matches gz
                        break
            return files

        def recipeClassSetup(r):
            r.Description(shortDesc = r.buildDescription.get('summary', ''),
                          longDesc = r.buildDescription.get('description', ''))
            lic = r.buildDescription.get('license')
            location = r.buildDescription.get('location')
            for f in r.sourceFiles:
                # zip files cannot preserve ownership, so we can't ask for it
                preserve = not f.endswith('zip')
                r.addArchive(f, dir = location, preserveOwnership = preserve,
                        use = r.fileMatchesArch(f))
            if lic:
                r.Licenses(lic)
