class ConaryGui(PackageRecipe):
    name = "conary-gui"
    version = "0.10.0"
    buildRequires = [ 'pygtk:devel','desktop-file-utils:runtime' ]

    def setup(r):
	r.addArchive('ftp://download.specifix.com/pub/specifix/conary-gui/%(name)s-%(version)s.tar.bz2')
	r.addSource('specifix.png')
	r.addSource('conary-gui.desktop')

	r.Make()
	r.MakeInstall()
	r.Install('specifix.png','%(datadir)s/pixmaps/specifix.png')
	r.Desktopfile('conary-gui.desktop')
        r.Requires('pygtk:python', '%(datadir)s/conary-gui/conary-gui.py')
        r.Requires('conary:runtime', '%(datadir)s/conary-gui/conary-gui.py')
