loadRecipe('gnomepackage.recipe')
class scim(GnomePackageRecipe):
	buildRequires = [
		'glibc:devel','atk:devel',
		'cairo:devel','pango:devel',
		'glib:devel','libpng:devel',
		'fontconfig:devel','freetype:devel',
		'gcc-c++:runtime','gtk:devel',
		'libstdc++:devel',
		'expat:devel','gettext:runtime',
		'desktop-file-utils:runtime'
		]
	name='scim'
	version='1.4.7'
	def setup(r):
		r.addArchive('mirror://sourceforge/%(name)s/')
		#add japanese and chinese locale support
		r.Run('sed -i "s/SupportedUnicodeLocales.*/&,ja_JP.UTF-8,zh_CN.UTF-8/" global',
			dir='configs/')
		r.Configure()
		r.Make()
		r.MakeInstall()
