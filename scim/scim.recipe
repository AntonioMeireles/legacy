loadRecipe('gnomepackage.recipe', label='foresight.rpath.org@fl:1-devel')
class scim(GnomePackageRecipe):
	buildRequires = [
		'glibc:devel','atk:devel',
		'cairo:devel','pango:devel',
		'glib:devel','libpng:devel',
		'fontconfig:devel','freetype:devel',
		'gcc-c++:runtime','gtk:devel',
		'libstdc++:devel',
		'expat:devel','gettext:runtime',
		'desktop-file-utils:runtime'
		]
	name='scim'
	version='1.4.5'
	def setup(r):
		r.addArchive('http://osdn.dl.sourceforge.net/sourceforge/scim/'
			'%(name)s-%(version)s.tar.gz')
		#add japanese locale support
		r.Run('sed -i "s/SupportedUnicodeLocales.*/&,ja_JP.UTF-8/" global',
			dir='configs/')
		r.Configure()
		r.Make()
		r.MakeInstall()
