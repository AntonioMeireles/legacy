class ForesightRecipes(PackageRecipe):
    name = 'foresight-recipes'
    version = '1.3'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('recipes.tar')
        r.MakeDirs('%(sysconfdir)s/conary/recipeTemplates')
        r.Install('recipeTemplates/*','/etc/conary/recipeTemplates')
        r.Install('docs/*','%(docdir)s/%(name)s-%(version)s/')
