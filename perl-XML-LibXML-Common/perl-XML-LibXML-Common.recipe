loadSuperClass('cpanpackage.recipe', label='conary.rpath.com@rpl:devel')
class XMLLibXMLCommon(CPANPackageRecipe):
    name='perl-XML-LibXML-Common'
    version='0.13'

    buildRequires = [ 'glibc:devel', 'libxml2:devel', 'zlib:devel' ]

    def post(r):
        for i in r.buildRequires:
            r.Requires(i, r"\.pm")
        CPANPackageRecipe.post(r)

