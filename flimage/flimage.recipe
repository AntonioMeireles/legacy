class flimage(BuildPackageRecipe):
    name = 'flimage'
    # keep github hash lenght small on version [6]
    version = 'd08d3e'
    buildRequires = [ 'python:devel', 
                      'python-argparse:python',
                      'python-plumbum:python',
    ]
 
    def setup(r):
        r.addGitSnapshot('https://github.com/johnsonm/flimage', 
                         tag = r.version)
        r.MakeInstall()
