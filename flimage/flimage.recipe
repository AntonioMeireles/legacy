class flimage(PackageRecipe):
    name = 'flimage'
    v = '0.1'
    tag = '62f129ebf8'
    version = '%s+%s' % (v, tag)
    buildRequires = [ 'python:devel', 
                      'python-argparse:python',
                      'python-plumbum:python',
    ]
 
    def setup(r):
        r.addGitSnapshot('https://github.com/johnsonm/flimage', 
                         tag = r.tag)
        r.Install('bin/*', '%(bindir)s/', mode = 0755)
        r.Install('imagebuilder/*',
                  '%(libdir)s/python%(pyver)s/site-packages/imagebuilder/')
 
