class AbiwordDocs(AutoPackageRecipe):
    name = 'abiword-docs'
    version = '2.5.2'

    # 11/07/2007
    # currently we need one font package to get fontconfig working. So if you
    # want to update this package you should test if you can rmook this
    # package without 'foresight-fonts:data' . -- Thilo Pfennig
    buildRequires = ['abiword:devel', 'abiword:runtime', 'fontconfig:runtime',
'foresight-fonts:data','pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://www.abisource.com/downloads/abiword/%(version)s/source/')
