loadRecipe('gnomepackage.recipe')
class ControlCenter(GnomePackageRecipe):
    
    buildRequires = [ 'esound:devel',
                      'pango:devel', 'gtk:devel', 'GConf:devel',
		      'gnome-desktop:devel', 'libgnomeui:devel', 
		      'libgnome:devel', 'libbonobo:devel', 
		      'libbonoboui:devel', 'gnome-vfs:devel', 
		      'fontconfig:devel', 'desktop-file-utils:runtime', 
		      'metacity:runtime', 'libxklavier:devel', 
		      'alsa-lib:devel', 'nautilus:runtime', 
		      'eel:devel' ]
               
    name = 'control-center'
    version = '2.12.0'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper'


    def unpack(r):
	GnomePackageRecipe.unpack(r)

    def install(r):
	GnomePackageRecipe.install(r)
	r.Remove('%(includedir)s/gnome-window-settings-2.0/', recursive=True)
	r.Remove('%(libdir)s/libgnome-window-settings.{a,so}',
		 '%(libdir)s/gnome-vfs-2.0/modules/lib{font,theme}-method.a',
		 '%(libdir)s/pkgconfig/gnome-window-settings*',
		 '%(libdir)s/window-manager-settings/libmetacity.a')
