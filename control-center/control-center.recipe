loadRecipe('gnomepackage.recipe')
class ControlCenter(GnomePackageRecipe):
    
    buildRequires = [ 'esound:devel', 'pango:devel', 'gtk:devel', 'GConf:devel',
			'gnome-desktop:devel', 'libgnomeui:devel',  'libgnome:devel', 'libbonobo:devel', 
			'libbonoboui:devel', 'gnome-vfs:devel', 'fontconfig:devel', 'desktop-file-utils:runtime', 
			'metacity:runtime', 'libxklavier:devel', 'alsa-lib:devel', 'nautilus:runtime', 
			'eel:devel',  'ORBit2:devel', 'atk:devel', 'audiofile:devel', 'cairo:devel',
			'evolution-data-server:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel',
			'gnome-menus:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libart_lgpl:devel',
			'libglade:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel',
			'metacity:devel', 'nautilus:devel', 'popt:devel', 'startup-notification:devel' ]

               
    name = 'control-center'
    version = '2.13.5.1'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper --enable-aboutme'


    def unpack(r):
	GnomePackageRecipe.unpack(r)

    def install(r):
	GnomePackageRecipe.install(r)
	r.Remove('%(includedir)s/gnome-window-settings-2.0/', recursive=True)
	r.Remove('%(libdir)s/libgnome-window-settings.{a,so}',
		 '%(libdir)s/gnome-vfs-2.0/modules/lib{font,theme}-method.a',
		 '%(libdir)s/pkgconfig/gnome-window-settings*',
		 '%(libdir)s/window-manager-settings/libmetacity.a')
