loadRecipe('gnomepackage.recipe')
class ControlCenter(GnomePackageRecipe):
    
    buildRequires = [ 'esound:devel', 'pango:devel', 'gtk:devel', 'GConf:devel', 'atk:devel', 'gnome-desktop:devel', 'libgnomeui:devel', 'libgnome:devel', 'libbonobo:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'fontconfig:devel', 'desktop-file-utils:runtime', 'metacity:runtime', 'libxklavier:devel', 'alsa-lib:devel', 'nautilus:runtime', 'libgnomekbd:devel', 'eel:devel', 'ORBit2:devel', 'librsvg:devel', 'audiofile:devel', 'cairo:devel', 'gnome-panel:devel', 'evolution-data-server:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-menus:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libart_lgpl:devel', 'libglade:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel', 'metacity:devel', 'nautilus:devel', 'popt:devel', 'startup-notification:devel', 'GConf:runtime', 'gettext:runtime', 'glib:runtime', 'gtk:runtime', 'perl:runtime', 'scrollkeeper:runtime', 'intltool:runtime', 'gnome-doc-utils:devel', 'dbus-glib:devellib', 'dbus:devel', 'hal:devel', 'libXScrnSaver:devel', 'libXcursor:devel', 'libXfixes:devel', 'libXft:devel', 'libXrandr:devel', 'libXxf86misc:devel', 'shared-mime-info:runtime', 'libXcomposite:devel' ]

    name = 'control-center'
    version = '2.20.0.1'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-scrollkeeper --disable-update-mimedb'
    #externalArchive = 'mirror://gnome/gnome-control-center/2.20/gnome-%(name)s-%(version)s.tar.bz2'

    def unpack(r):
        r.addArchive('mirror://gnome/gnome-control-center/2.20/gnome-%(name)s-%(version)s.tar.bz2')
        r.addPatch('http://archive.ubuntu.com/ubuntu/pool/main/g/gnome-control-center/gnome-control-center_2.20.0.1-0ubuntu5.diff.gz')
        #r.Replace('/usr/bin/compiz','/usr/bin/compiz-start',
        #        'debian/patches/95_desktop-effects-integration.patch')
        r.Replace('return system \("restricted-manager --check-composite"\) == 0;'
                ,'return FALSE;',
                'debian/patches/95_desktop-effects-integration.patch')
        ubuntuPatches = [
            #'04_path_xtra.patch',
            '25_window_manager_settings.patch',
            '95_desktop-effects-integration.patch',
            '99_autoreconf.patch',
            ]
        for p in ubuntuPatches:
            r.Run(""" patch -p1  < debian/patches/%s """ % p )

        r.addPatch('xcomposite.patch')


    def policy(r):
        r.InitialContents('%(datadir)s/applications/mimeinfo.cache')
        r.Install('debian/visual-effects_*','%(datadir)s/gnome-control-center/pixmaps/')
