class TaglibSharp(AutoPackageRecipe):
    name    = 'taglib-sharp'
    version = '2.0.3.0'

    buildRequires = ['mono:cil', 'mono:devel', 'mono:runtime',
                     'pkgconfig:devel']

    def unpack(r):
        r.addArchive('http://www.taglib-sharp.com/Download/')

    def configure(r):
        # Build fails with docs enabled
        r.Configure('--disable-docs')

    def policy(r):
        r.Replace('libdir=\${exec_prefix}/lib', 'libdir=%(libdir)s', '%(libdir)s/pkgconfig/*.pc')
