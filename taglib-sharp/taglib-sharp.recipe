class TaglibSharp(AutoPackageRecipe):
    name    = 'taglib-sharp'
    version = '2.0.3.0'

    buildRequires = ['mono:cil', 'mono:devel', 'mono:runtime',
                     'pkgconfig:devel']

    def unpack(r):
        r.addArchive('http://www.taglib-sharp.com/Download/')

    def configure(r):
        # Build fails with docs enabled
        # Install to /usr/lib because it is really no-arch -- this lets things like banshee
        # build against it on 64b boxes
        r.Configure('--disable-docs --libdir=%(prefix)s/lib')
