class Synergy(PackageRecipe):
    name = 'synergy'
    version = '1.2.2'
    
    buildRequires = [ "xorg-x11:devel" ]
        
    def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/synergy2/synergy-%(version)s.tar.gz')
	r.mainDir('synergy-%(version)s')
	r.Configure()
	r.Make()
	r.MakeInstall()
