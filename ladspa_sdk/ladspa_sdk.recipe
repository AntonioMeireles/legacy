class ladspa_sdk(PackageRecipe):
    buildRequires = [ 'gcc:devel', 'glibc:devel' ]
    name = "ladspa_sdk"
    version = "1.12"

    def setup(r):
        r.addArchive('http://www.ladspa.org/download/%(name)s_%(version)s.tgz')
        r.mainDir('%(name)s/src')
        r.Replace(('/usr/local', '%(destdir)s/%(prefix)s'), ('/usr/include', '%(destdir)s/%(prefix)s/include'), 'makefile')
        #r.addSource('makefile')
        #r.Configure()
        #r.Make()
        r.MakeInstall()
