class Phat(CPackageRecipe):

    buildRequires = [
        'alsa-lib:devel',
        'atk:devel',
        'audiofile:devel',
        'cairo:devel',
        'esound:devel',
        'fontconfig:devel',
        'freetype:devel',
        'gcc:devel',
        'glib:devel',
        'glibc:devel',
        'gtk:devel',
        'id3lib:devel',
        'libglade:devel',
        'libpng:devel',
        'libxml2:devel',
        'pango:devel',
        'xorg-x11:devel',
        'zlib:devel',
        'arts:devel',
        'jack:devel', 
        'libsndfile:devel',
        'binutils:runtime',
        'gawk:runtime',
        'pkgconfig:devel',
        'libart_lgpl:devel',
        'libgnomecanvas:devel'
    ]

    name = "phat"
    version = "0.3.1"

    def setup(r):
        r.addArchive('http://gazuga.net/phatfiles/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
