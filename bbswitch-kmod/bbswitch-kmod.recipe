loadSuperClass('kernelmodulepackage')
class Bbswitch(KernelModulePackageRecipe):
    name = 'bbswitch-kmod'
    version = '0.8'
    
    moduleDir = 'updates'
     
    def unpack(r):
        r.addArchive('https://github.com/Bumblebee-Project/bbswitch/archive/v%(version)s.tar.gz')
     
    def build(r):
        r.Make("KVERSION=%(kver)s")
      
