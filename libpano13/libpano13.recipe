class Libpano13(AutoPackageRecipe):
    name = 'libpano13'
    version = '2.9.12'
 
    buildRequires = ['libjpeg:devel', 'libpng:devel', 'libtiff:devel',
                      'zlib:devel' ]
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/panotools/')

    def configure(r):
        r.Configure('--without-java')
