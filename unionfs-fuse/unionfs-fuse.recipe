class UnionFsFuse(CPackageRecipe):
    name = 'unionfs-fuse'
    version = '0.23'

    buildRequires = [ 'fuse:devel' ]

    def setup(r):
        r.addArchive('http://podgorny.cz/unionfs-fuse/releases/')
        r.Make()
        r.Install('src/unionfs', '%(sbindir)s/')
        r.Install('man/unionfs-fuse.8', '%(mandir)s/man8/')

