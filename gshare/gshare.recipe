class Gshare(AutoPackageRecipe):
    name = 'gshare'
    version = '0.94'
    buildRequires = [ 'GConf:config', 'GConf:runtime', 'avahi-sharp:devellib', 'avahi-sharp:lib', 'desktop-file-utils:runtime', 'gettext:runtime', 'gnome-sharp:devellib', 'gnome-sharp:lib', 'gtk-sharp:devellib', 'gtk-sharp:lib', 'intltool:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'perl:runtime', 'pkgconfig:devel', 'scrollkeeper:runtime' ]

    def unpack(r):
        r.addArchive('http://yimports.com/~cpinto/downloads/gshare/%(version)s/')
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.disableParallelMake()
