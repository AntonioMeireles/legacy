class Pearpc(PackageRecipe):
    buildRequires = [ "autoconf",'gcc:devel', 'glibc:devel', 'xorg-x11:devel', 'SDL:devel']

    name = "pearpc"
    version = "0.3.1"

    def setup(r):
        r.addArchive("http://easynews.dl.sourceforge.net/sourceforge/pearpc/%(name)s-%(version)s.tar.gz")
	r.Configure('--enable-ui=sdl --enable-cpu=jitc_x86')
	r.Make()
        r.MakeInstall()
