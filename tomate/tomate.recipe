class Tomate(PackageRecipe):

    name = 'tomate'
    version = 'gita311f5ec'

    buildRequires = ['pygobject:python', 'pygtk:python', 'python:devel']

    def setup(r):
        r.addGitSnapshot("git://gitorious.org/tomate/tomate.git")
        r.Replace("python2","python","tomate.py")
        r.MakeDirs("%(prefix)s/share/tomate")
        r.Install("*.py","%(prefix)s/share/tomate/")
        r.Install("*.svg","%(prefix)s/share/tomate/")
        r.Install("*.png","%(prefix)s/share/tomate/") 
        r.Symlink("%(prefix)s/share/tomate/","%(bindir)s/tomate")
