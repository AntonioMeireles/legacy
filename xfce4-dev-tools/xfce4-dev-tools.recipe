class xfce4DevTools(AutoPackageRecipe):

    name = 'xfce4-dev-tools'
    version = '4.8.0+git_dfd0dc4'

    buildRequires = ['gawk:runtime', 'libtool:runtime', 
                     'automake:runtime', 'autoconf:runtime']

    def unpack(r):
        r.macros.rev = r.version[-7:]
        r.addArchive('http://git.xfce.org/xfce/%(name)s/snapshot/'
                     '%(name)s-%(rev)s.tar.bz2')
        r.addPatch('run_libtoolize.patch')
        r.addPatch('fix_xdg_autogen.patch')
        r.Environment('NOCONFIGURE', '1')
        r.Run('./autogen.sh')
