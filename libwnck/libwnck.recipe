loadRecipe('gnomepackage.recipe')
class Libwnck(GnomePackageRecipe):

    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend(['glib:devel', 'gtk:devel', 'pango:devel',
	'startup-notification:devel', 'atk:devel', 'cairo:devel',
	'fontconfig:devel', 'freetype:devel', 'libpng:devel'])

    name = 'libwnck'
    version = '2.13.5'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = " -Os"
