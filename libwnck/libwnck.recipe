loadRecipe('gnomepackage')
class Libwnck(GnomePackageRecipe):

    buildRequires = [ 'glib:devel', 'gtk:devel', 'pango:devel',
        'libXres:devel', 'startup-notification:devel', 'atk:devel',
        'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'libpng:devel',
        'gettext:runtime', 'perl:runtime', 'libXt:devel', 'gtk-doc:runtime' ]

    name = 'libwnck'
    version = '2.22.0'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = " -Os"
