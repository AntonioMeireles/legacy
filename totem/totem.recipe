loadSuperClass('gnomepackage.recipe')

class totem(GnomePackageRecipe):

    name = 'totem'
    version = '2.20.3'


    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 
'atk:devel', 'cairo:devel','bluez-libs:devel', 
'dbus:devel', 'dbus-glib:devellib','dbus-glib:runtime', 
'desktop-file-utils:runtime', 'expat:devel', 
'fontconfig:devel', 'freetype:devel',
'gcc:devel', 'glib:devel',  'gettext:runtime', 
'gnome-desktop:devel', 'gnome-icon-theme:devellib',
'gnome-keyring:devel', 'gnome-vfs:devel', 
'gst-plugins-base:devel', 'gstreamer:devel', 'gtk:runtime',
'hal:devel', 'iso-codes:devellib',
'gnome-vfs:devel', 'expat:devel', 'shared-mime-info:devellib',
'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel',
'libgalago:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel',
'libgnomeui:devel', 'libmusicbrainz:devel', 'libpng:devel', 'libstdc++:devel', 
'libxml2:devel', 'libXrandr:devel', 'libXtst:devellib', 'libXxf86vm:devel', 
'nautilus:devel', 'nspr:devel', 'pango:devel',  'perl:runtime', 'popt:devel', 
'python:devel' , 'scrollkeeper:runtime', 'startup-notification:devel',
'xine-lib:devel', 'xulrunner:devel' ] 


    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --disable-nvtv --enable-xine --disable-schemas-install'
    extraConfig += ' --enable-nautilus --with-dbus'
    extraConfig += ' --disable-scrollleeper --disable-complex-plugin'
    # check out if easy codec installation works:
    extraConfig += ' --enable-easy-codec-installation'

    def install(r):
       GnomePackageRecipe.install(r)
       # this disables RealPlayer plugin options because
       # they did not really work, yet:
       r.addSource('browser-plugins.ini')
       r.MakeDirs('%(sysconfdir)s/totem')
       r.Install('browser-plugins.ini','%(sysconfdir)s/totem')
