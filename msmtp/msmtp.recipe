class Msmtp(AutoPackageRecipe):
    name = 'msmtp'
    version = '1.4.21'
 
    buildRequires = [
            'gettext:runtime', 
            'gnutls:devel', 
            'install-info:runtime', 
            'intltool:runtime', 
            'libidn:devel',
            'gnome-keyring:devel',
            'libgsasl:devel'
                ]
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/msmtp/')
        r.Configure('--disable-rpath --with-gnome-keyring')
