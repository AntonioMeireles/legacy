

class USBmodeSwitch(AutoPackageRecipe):
    name = 'usb_modeswitch'
    version = '0.9.4'

    buildRequires = ['glibc:devel', 'libusb:devel']

    def setup(r):
        r.addArchive('http://www.draisberghof.de/usb_modeswitch/')

        r.Make(makeName ='./compile.sh')

        r.Install('%(name)s', '%(sbindir)s/', mode = 0755)
        r.Install('%(name)s.conf', '%(sysconfdir)s/', mode = 0644)
        r.Symlink('%(sbindir)s/%(name)s', '%(sbindir)s/icon_switch')
