

class USBmodeSwitch(AutoPackageRecipe):
    name = 'usb_modeswitch'
    version = '1.1.3'

    buildRequires = ['glibc:devel', 'libusb:devel']

    def setup(r):
        r.addArchive('http://www.draisberghof.de/usb_modeswitch/usb-modeswitch-%(version)s.tar.bz2')

        r.Make()
        r.MakeInstall()
        r.Requires('usb_modeswitch-data:config', '%(sbindir)s/usb_modeswitch')
