class Libmng(AutoPackageRecipe):
    name = 'libmng'
    version = '1.0.9'

    buildRequires = [ 'glibc:devel', 'zlib:devel', 'libjpeg:devel',
                'automake:runtime', 'autoconf:runtime', 'libtool:runtime' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

    def configure(r):
        r.Run('''ln -s makefiles/configure.in .;
              ln -s makefiles/Makefile.am .;
              aclocal ;
              libtoolize --automake ;
              automake --foreign --add-missing;
              autoconf''')
        r.Configure('--enable-shared --enable-static --with-zlib --with-jpeg'
                    ' --with-gnu-ld')
