class Gcin(AutoPackageRecipe):
    name = 'gcin'
    version = '1.3.4'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'desktop-file-utils:runtime',
                    'expat:devel', 'freetype:devel', 'gettext:runtime', 
                    'glib:devel','gtk:config', 'gtk:devel', 'inputproto:devel',
                    'libXrender:devel','libXtst:devellib', 'pango:devel',
                    'pkgconfig:devel','zlib:devel', 'xextproto:devel']
 
    def unpack(r):
        r.addArchive('http://cle.linux.org.tw/gcin/download/'
                     '%(name)s-%(version)s.tar.bz2')

