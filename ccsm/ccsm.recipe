class Ccsm(PackageRecipe):
    name = 'ccsm'
    version = '0.6.0'
    buildRequires = [ 'compizconfig-python:python', 'desktop-file-utils:runtime', 'gettext:runtime', 'pycairo:python', 'pygobject:python', 'pygtk:python', 'python-setuptools:python' ]

    def setup(r):
        r.addArchive('http://releases.compiz-fusion.org/%(version)s/')
        r.PythonSetup(data='--install-data %(prefix)s')
