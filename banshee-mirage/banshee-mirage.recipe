class BansheeMirage(AutoPackageRecipe):
    name = 'banshee-mirage'
    version = '0.5.0'

    packageSummary = 'An autmatic playlist generation extension for banshee'
    packageDescription = 'Mirage is an implementation of the latest research in automatic playlist generation and music similarity. Mirage analyzes your music collection and computes acoustic similarity models for each song. After your music collection has been analyzed, Mirage is able to automatically generate playlists of similar music.'
 
    buildRequires = ['banshee:devellib', 'fftw:devel', 'gettext:runtime', 'glib:devel', 'gstreamer:devel', 'gst-plugins-base:devel', 'gtk-sharp:cil', 'intltool:runtime', 'libsamplerate:devel', 'libxml2:devel', 'mono-addins:cil', 'mono:cil', 'mono:devel', 'mono:runtime', 'ndesk-dbus-glib', 'ndesk-dbus', 'pkgconfig:devel', 'python:bin', 'sqlite:devel' ]
 
    def unpack(r):
        r.addArchive('http://hop.at/mirage/download/mirage-%(version)s.tar.gz')
