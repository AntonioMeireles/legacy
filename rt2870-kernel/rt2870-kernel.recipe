loadSuperClass('kernelmodulepackage')
class RT2870Kernel(KernelModulePackageRecipe):
    name = 'rt2870-kernel'
    version =  '2.1.0.0'

    def unpack(r):
        r.addArchive('http://www.ralinktech.com.tw/data/drivers/2009_0302_RT2870_Linux_STA_v2.1.0.0.tar.bz2')
        # livna patchset
        for p in [ 'rt2870-no2.4-in-kernelversion.patch',
                   'rt2870-Makefile.x-fixes.patch',
                   'rt2870-NetworkManager-support.patch',
                   'rt2870-strip-tftpboot-copy.patch',
                   'rt2870-2.6.29-compile.patch',
                   ]:
            r.addPatch('http://cvs.rpmfusion.org/viewvc/rpms/rt2870-kmod/devel/' + p + '?root=free&view=co')

    def build(r):
        r.Make("LINUX_SRC='/lib/modules/%(kver)s/build'")

    def install(r):
        r.macros.moduledir = r.moduleDir
        r.Install('os/linux/*.ko', '/lib/modules/%(kver)s/%(moduledir)s/')

    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')
