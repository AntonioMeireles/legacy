loadSuperClass('kernelmodulepackage')
class RT2870Kernel(KernelModulePackageRecipe):
    name = 'rt2870-kernel'
    version =  '2.1.2.0'

    def unpack(r):
        # upsteam got now crazy URLs
        # workarounding it
        srpm = 'ftp://fr2.rpmfind.net/linux/rpmfusion/free/fedora/development/source/SRPMS/rt2870-kmod-2.1.2.0-6.fc13.src.rpm'
        r.addArchive('2009_0521_RT2870_Linux_STA_V%(version)s.tgz', rpm = srpm)
        # livna patchset
        for p in [ 'rt2870-additional-devices-support.patch',
                   'rt2870-no2.4-in-kernelversion.patch',
                   'rt2870-Makefile.x-fixes.patch',
                   'rt2870-NetworkManager-support.patch',
                   'rt2870-strip-tftpboot-copy.patch',
                   'rt2870-2.6.31-compile.patch',
                   'rt2870-suppress-flood.patch' ]:
            r.addPatch(p, rpm = srpm)

    def build(r):
        r.Make("LINUX_SRC='/lib/modules/%(kver)s/build'")

    def install(r):
        r.macros.moduledir = r.moduleDir
        r.Install('os/linux/*.ko', '/lib/modules/%(kver)s/%(moduledir)s/')

    def policy(r):
        # We want to make sure that the userspace code can require the
        # matching kernel-space code
        r.ComponentProvides('%(version)s')
        r.ComponentSpec('runtime', '/lib/modules/')
