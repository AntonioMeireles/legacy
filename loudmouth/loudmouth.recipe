class loudmouth(CPackageRecipe):

    buildRequires = [ 'gtk:devel', 'binutils:runtime', 'gawk:runtime',
        'glib:devel', 'pkgconfig:devel' ] 
    name = "loudmouth"
    version = "1.0.4"
 
    def setup(r):
        r.addArchive('http://ftp.imendio.com/pub/imendio/loudmouth/src/loudmouth-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
