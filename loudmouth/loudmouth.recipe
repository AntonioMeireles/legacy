class loudmouth(PackageRecipe):

    buildRequires = [ 'gtk:devel' ] 
    name = "loudmouth"
    version = "1.0.1"
 
    def setup(r):
        r.addArchive('http://ftp.imendio.com/pub/imendio/loudmouth/src/loudmouth-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
