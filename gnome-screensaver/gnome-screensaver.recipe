loadRecipe('gnomepackage.recipe')
class GnomeScreenSaver(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'GConf:devel', 'ORBit2:devel', 'atk:devel',
				'cairo:devel', 'dbus:devel', 'fontconfig:devel',
				'freetype:devel', 'glib:devel', 'gnome-keyring:devel',
				'gnome-vfs:devel', 'libart_lgpl:devel', 'libbonobo:devel',
				'libbonoboui:devel', 'libglade:devel', 'libgnome:devel',
				'libgnomecanvas:devel', 'libgnomeui:devel', 'libpng:devel',
				'libxml2:devel', 'pam:devel', 'pango:devel', 'popt:devel',
				'gnome-menus:devel', 'libexif:devel' ])


    name = 'gnome-screensaver'
    version = '0.0.16'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace('Pictures','Photos','savers/personal-slideshow.desktop.in')

