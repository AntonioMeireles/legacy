loadRecipe('gnomepackage.recipe')
class Epiphany(GnomePackageRecipe):
    
    buildRequires = [ 'gtk:devel', 'libbonoboui:devel', 'scrollkeeper:runtime',
       'libxml2:devel', 'libgnomeui:devel', 'libglade:devel',
       'gnome-vfs:devel', 'GConf:devel', 'ORBit2:devel', 'xulrunner:devel',
       'eel:devel', 'atk:devel', 'cairo:devel', 'gnome-keyring:devel',
       'fontconfig:devel', 'freetype:devel', 'gcc:devel', 'glib:devel', 
       'glibc:devel', 'gnome-desktop:devel', 'libart_lgpl:devel', 
       'libbonobo:devel', 'libgnome:devel', 'libgnomecanvas:devel', 
       'libgnomeprint:devel', 'libgnomeprintui:devel', 'libpng:devel', 
       'libxslt:devel', 'nspr:devel',  'nss:devel', 'iso-codes:devellib',
       'pango:devel', 'popt:devel', 'startup-notification:devel',
       'dbus-glib:devellib', 'dbus:devel', 'libstdc++:devel', 'NetworkManager:devel',
       'GConf:runtime', 'dbus-glib:runtime', 'desktop-file-utils:runtime',
       'gettext:runtime', 'glib:runtime', 'perl:runtime', 'gtk:runtime' ]
               
    name = 'epiphany'
    version = '2.18.0'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --enable-nautilus-view=yes --disable-scrollkeeper --enable-zeroconf'
    extraConfig += ' --enable-network-manager --enable-spell-checker --with-gecko=xulrunner'



    def setup(r):
        r.disableParallelMake()
        GnomePackageRecipe.setup(r)
	
	r.Requires(exceptDeps=r'soname\:\ ELF32\/usr\/lib\/xulrunner\/libgtkembedmoz\.so\(SysV\ x86\)')
        r.Requires(exceptDeps=r'soname\:\ ELF32\/usr\/lib\/xulrunner\/libxpcom\.so\(SysV\ x86\)')
        r.Requires(exceptDeps=r'soname\:\ ELF32\/usr\/lib\/xulrunner\/libxul\.so\(SysV\ x86\)')
	r.Requires(exceptDeps=r'soname\:\ ELF32\/usr\/lib\/xulrunner\/libmozjs\.so\(SysV\ x86\)')

	r.Remove('%(datadir)s/applications/bme.desktop')
