loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class Epiphany(GnomePackageRecipe):
    
    buildRequires = [ 'mozilla:devel',  'mozilla:runtime', 
		      'gtk:devel', 'libbonoboui:devel', 'scrollkeeper:runtime',
		      'libxml2:devel', 'libgnomeui:devel', 'libglade:devel',
		      'gnome-vfs:devel', 'GConf:devel', 'ORBit2:devel',
		      'eel:devel' ]
               
    name = 'epiphany'
    version = '1.6.4'

    extraConfig = '--enable-nautilus-view=yes'

    def setup(r):
        r.disableParallelMake()
        GnomePackageRecipe.setup(r)

    def install(r):
        GnomePackageRecipe.install(r)
	r.Remove('%(includedir)s/', recursive=True)

