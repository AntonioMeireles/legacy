class leafpad(PackageRecipe):
	name = "leafpad"
	version = "0.8.4"

	buildRequires = [ "atk:devel", "cairo:devel", "fontconfig:devel", "freetype:devel", "glib:devel", "gtk:devel", "libpng:devel", "pango:devel", "xorg-x11:devel", "zlib:devel" ]

	def setup(r):
		r.addArchive('http://savannah.nongnu.org/download/leafpad/leafpad-%(version)s.tar.gz')
		r.Configure()
		r.Make()
		r.MakeInstall()
