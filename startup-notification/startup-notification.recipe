class StartupNotification(CPackageRecipe):
    
    buildRequires = [ 'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrender:devel','libdmx:devel', 'libICE:devel', 'libSM:devel',
        'libXt:devel', 'gcc-c++:runtime' ]

    name = 'startup-notification'
    version = '0.8'
    
    def setup(r):
        r.addArchive('http://www.freedesktop.org/software/%(name)s/releases/')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Doc('AUTHORS', 'COPYING', 'ChangeLog')
