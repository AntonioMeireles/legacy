class IndicatePython(AutoPackageRecipe):
    name = 'indicate-python'
    version = '0.0.3'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus-glib:runtime', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'indicator-applet:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'pygobject:runtime', 'pygobject:devel', 'python:devel', 'zlib:devel', 'pygtk:devel']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/indicator-applet/0.1/python%(version)s/+download/')
	r.Replace('pyglib-2.0-python2.6','pyglib-2.0','src/Makefile.{am,in}')
