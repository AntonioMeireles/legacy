class CsBoard(AutoPackageRecipe):

    buildRequires = [ 'GConf:runtime', 'desktop-file-utils:runtime',
        'gettext:runtime', 'gtk-sharp:lib', 'mono:lib', 'perl:runtime',
        'pkgconfig:devel', 'scrollkeeper:runtime', 'gnome-sharp:lib' ]

    name = 'csboard'
    version = '0.6'

    def unpack(r):
        r.addArchive('http://download.berlios.de/csboard/csboard-0.6.tar.gz')
        r.Replace('CSBoard chess','Chess','data/csboard.desktop.in')

    def configure(r):
        r.Configure('--disable-scrollkeeper')
