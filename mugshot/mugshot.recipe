class MugShot(AutoPackageRecipe):

    buildRequires = [ 'atk:devel', 'cairo:devel', 'curl:devel',
        'dbus-glib:devellib', 'dbus:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gtk:devel', 'libpng:devel',
        'loudmouth:devel', 'pango:devel', 'xorg-x11:devel', 'zlib:devel',
        'GConf:runtime', 'gtk:runtime', 'pkgconfig:devel' ]

    name = 'mugshot'
    version = '1.1.9'

    def unpack(r):
        r.addArchive('http://download.mugshot.org/client/sources/linux/%(name)s-%(version)s.tar.gz')
