class Ext3flush(CPackageRecipe):
    name = 'ext3flush'
    version = '1'

    buildRequires = []

    def setup(r):
        r.addSource('%(name)s.c')
        r.Run('gcc %(name)s.c -o %(name)s')
        r.Copy('%(name)s', '%(essentialsbindir)s/')
