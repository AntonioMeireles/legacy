class ssmtp(AutoPackageRecipe):
    name = 'ssmtp'
    version = '2.61'

    buildRequires = [ 'gettext:runtime', 'intltool:runtime', ]

    def unpack(r):
        # mirror: not working for this package -- pool problems?
        # r.macros.archive_version = '%(version)s.orig'
        r.addArchive('http://ftp.debian.org/debian/pool/main/s/ssmtp/ssmtp_%(version)s.orig.tar.gz')
        r.addPatch('http://ftp.debian.org/debian/pool/main/s/ssmtp/ssmtp_2.61-2.diff.gz')

    def makeinstall(r):
        r.MakePathsInstall('etcdir=%(destdir)s/%(sysconfdir)s'
                           ' mandir=%(destdir)s/%(mandir)s/man8/'
                           ' bindir=%(destdir)s/%(sbindir)s/'
                           ' GEN_CONFIG=/bin/true')
        r.Install('ssmtp.conf', '%(sysconfdir)s/ssmtp/')
        r.Symlink('ssmtp', '/usr/sbin/sendmail')
        r.Symlink('ssmtp.8', '%(mandir)s/man8/sendmail.8')
        r.Install('debian/{mailq,newaliases}.8', '%(mandir)s/man8/')
