class x264(AutoPackageRecipe):

    name = 'x264'
    version = '0.56.689'

    def unpack(r):

        rev = r.version.split('.')[-1]
        r.addSvnSnapshot(
            'svn://svn.videolan.org/x264/trunk', revision=rev
        )

    def configure(r):

        r.Configure('--enable-shared --enable-pthread')

