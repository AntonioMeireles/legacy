loadRecipe('rpmpackage')
class GtkAuroraEngine(RPMPackageRecipe,AutoPackageRecipe):
    name = 'gtk-aurora-engine'
    version = '1.4'
    rpmURL = 'http://download.opensuse.org/repositories/home:/discotronic/openSUSE_10.2/src/gtk2-engines-aurora-1.4-10.1.src.rpm'
    tarballName = 'gtk2-engines-aurora_%(version)s-1nano.tar.gz' 

    buildRequires = [ 'atk:devel', 'cairo:devel', 'expat:devel',
                      'fontconfig:devel', 'freetype:devel', 'glib:devel',
                      'glitz:devel', 'gtk:devel', 'libX11:devel',
                      'libXrender:devel', 'libpng:devel', 'libxcb:devel',
                      'pango:devel', 'pkgconfig:devel', 'xcb-util:devel',
                      'zlib:devel'
                      ]

    def configure(r):
        r.Run('cp config_sub.new config.sub; cp config_guess.new config.guess')
        r.Configure('--enable-animation')
