class goocanvas(AutoPackageRecipe):
    name = 'goocanvas'
    version = '0.9'

    buildRequires = [ 'cairo:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libXrender:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'zlib:devel', 'expat:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
