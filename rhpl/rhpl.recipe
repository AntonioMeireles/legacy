loadInstalled('python.recipe')
class Rhpl(CPackageRecipe):
    name = 'rhpl'
    version = '0.167'

    buildRequires = [ 'python:devel', 'gettext:runtime',
                      'wireless-tools:devel' ]

    def setup(r):
        r.macros.pyver = 'python' + Python.majversion
        r.addArchive('%(name)s-%(version)s.tar.gz',
            rpm='http://download.fedora.redhat.com/pub/fedora/linux/core/4/SRPMS/rhpl-0.167-1.src.rpm')

        r.Replace('^PYTHON =.*', 'PYTHON = %(pyver)s', 'Makefile.inc')
        r.MakeInstall()
        r.Doc('README')
        r.ComponentSpec('doc', '/usr/share/doc/')
        # for ddcprobe
        r.Requires('rhpl:runtime', '.*/monitor.py')
        r.Requires('kudzu:python', '.*/mouse.py')
