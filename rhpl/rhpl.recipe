loadSuperClass('rpmpackage', label='conary.rpath.com@rpl:devel')
class Rhpl(RPMPackageRecipe, CPackageRecipe):
    name = 'rhpl'
    version = '0.188'

    buildRequires = [ 'python:devel', 'gettext:runtime',
        'wireless-tools:devel', 'kudzu:python' ]

    def setup(r):
	r.macros.pyver = 'python' + '2.4'
        r.unpack()
        r.Replace('^PYTHON =.*', 'PYTHON = %(pyver)s', 'Makefile.inc')
        r.MakeInstall()
        r.Doc('README')
        r.ComponentSpec('doc', '/usr/share/doc/')
        # for ddcprobe
        r.Requires('rhpl:runtime', '.*/monitor.py')
        r.Requires('kudzu:python', '.*/mouse.py')

