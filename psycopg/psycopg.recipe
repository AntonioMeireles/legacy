class Psycopg(PackageRecipe):
    buildRequires = [ 'python:devel' ]

    name = "psycopg"
    version = "1.99.13"

    def setup(r):
        
	r.addArchive("http://initd.org/pub/software/psycopg/PSYCOPG-2-0/%(name)s-%(version)s.tar.gz")
        r.mainDir('psycopg-%(version)s')
        r.Run("python setup.py build")
        r.Run('python setup.py install --root=%(destdir)s')
