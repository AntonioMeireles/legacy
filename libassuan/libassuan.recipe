class Libassuan(AutoPackageRecipe):
        name = 'libassuan'
        version = '1.0.4'
        buildRequires = [ 'install-info:runtime', 'pth:devel', ]

        def unpack(r):
                r.addArchive('ftp://ftp.gnupg.org/gcrypt/%(name)s/', keyid='1CE0C630')

