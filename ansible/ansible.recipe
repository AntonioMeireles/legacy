class ansible(PackageRecipe):
    name = 'ansible'
    version = '0.9'

    buildRequires = [
        'MySQL-python:python',
        'PyYAML:python',
        'jinja2:python',
        'libselinux:python',
        'libvirt:python',
        'paramiko:python',
        'python-simplejson:python',
        'python:devel',
    ]

    def setup(r):
        r.addArchive('https://github.com/downloads/ansible/ansible/')
        r.PythonSetup()
        r.RemoveNonPackageFiles('.gitdir', '.asciidoc.in')
        r.Doc('examples/')
        r.Install('examples/ansible.cfg', '/etc/ansible/')
        r.Install('docs/man/*', '%(mandir)s/')
