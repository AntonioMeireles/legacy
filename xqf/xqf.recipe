loadRecipe('gnomepackage.recipe')
class xqf(GnomePackageRecipe):
    buildRequires = [ "glibc:devel", "desktop-file-utils:runtime",
                      "qstat:runtime" ]
    name = "xqf"
    version = "1.0.3"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Requires('qstat:runtime', '/usr/bin/xqf')
        r.Configure('--enable-gtk2')
        r.Make()
        r.MakeInstall()

#       Here are the docs

        r.Doc('AUTHORS', 'BUGS', 'COPYING', 'INSTALL', 'NEWS', 'README', 'TODO')
