class Fox(AutoPackageRecipe):
    name = 'fox'
    version = '1.7.21'
 
    buildRequires = ['Mesa:devel', 
                    'bzip2:devel', 
                    'libICE:devel', 
                    'libSM:devel', 
                    'libX11:devel', 
                    'libXcursor:devel', 
                    'libXext:devel', 
                    'libXfixes:devel', 
                    'libXi:devel', 
                    'libXrandr:devel', 
                    'libXrender:devel', 
                    'libjpeg:devel', 
                    'libpng:devel', 
                    'libstdc++:devel', 
                    'libtiff:devel', 
                    'openjpeg:devel', 
                    'zlib:devel']
 
    def unpack(r):
        r.addArchive('http://www.fox-toolkit.org/ftp/')
        r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
