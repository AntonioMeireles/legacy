class USplash(PackageRecipe):

    buildRequires = [ 'gd:devel', 'glibc:devel', 'libpng:devel' ]

    name = 'usplash'
    version = '0.4'

    def setup(r):
        r.addArchive('http://archive.ubuntu.com/ubuntu/pool/main/u/usplash/usplash_0.4-25.tar.gz')
        r.Make()
        r.MakeInstall()
        r.Requires(exceptDeps=r'soname\:\ ELF32\/libusplash\.so\(SysV\ x86\)')
