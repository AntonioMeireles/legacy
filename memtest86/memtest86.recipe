class Memtest86(PackageRecipe):
    name = "memtest86"
    version = "3.2"
 
    def setup(r):
        r.addArchive('http://www.memtest86.com/%(name)s-%(version)s.tar.gz')
	r.Replace('CCFLAGS', 'CFLAGS', 'Makefile')
	r.Replace('-m32 -fPIC', '-march=i486 -m32 -fPIC', 'Makefile')
        r.Make()
	r.Install('memtest.bin', '/boot/')
	r.TagSpec('fdl-memtest86', '/boot/memtest.bin')
