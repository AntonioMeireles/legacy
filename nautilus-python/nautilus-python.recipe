loadRecipe('gnomepackage')
class NautilusPythnon(GnomePackageRecipe):
	name = 'nautilus-python'
	version = '0.5.0'

 	buildRequires = ['glib:devel', 'pkgconfig:devel', 'python:devel', 'gnome-python:devel', 'pygtk:devel']
 	buildRequires += ['nautilus:devel', 'eel:devel']

	def unpack(r):
		GnomePackageRecipe.unpack(r)
		r.addPatch('%(name)s-%(version)s-nautilus-extensions-dir.patch')
		r.addPatch('%(name)s-%(version)s-no-pkgconfig-files-1.patch')

