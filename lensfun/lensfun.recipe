class lensFun(CPackageRecipe):
    name = 'lensfun'
    version = '0.2.3'

    buildRequires = ['glib:devel', 'libstdc++:devel']

    def setup(r):
        r.addArchive('http://download.berlios.de/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.addPatch('lensfun-nikon-slr-camera-data-update.patch')
        r.ManualConfigure('--prefix=%(prefix)s --bindir=%(bindir)s ',
                    '--sysconfdir=%(sysconfdir)s --datadir=%(datadir)s ',
                    '--libdir=%(libdir)s --includedir=%(includedir)s ',
                    '--libexecdir=%(libexecdir)s --docdir=%(thisdocdir)s ')
        r.Make('all')
        r.MakeInstall()
