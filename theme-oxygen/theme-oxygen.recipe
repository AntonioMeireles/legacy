import datetime
class ThemeOxygen(CPackageRecipe):
    name = 'theme-oxygen'
    svnVersion = '0ccc5194'
    version = '1.0.0+r' + svnVersion + '+' + datetime.date.today().strftime("%Y.%m.%d")
 
    buildRequires = ['atk:devel', 'cairo:devel', 'cmake:runtime', 'fontconfig:devel', 'freetype:devel', 'gcc-c++:runtime', 'gdk-pixbuf:devel', 'glib:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXScrnSaver:devel', 'libXau:devel', 'libXcomposite:devel', 'libXcursor:devel', 'libXdamage:devel', 'libXdmcp:devel', 'libXext:devel', 'libXfixes:devel', 'libXft:devel', 'libXi:devel', 'libXinerama:devel', 'libXpm:devel', 'libXrandr:devel', 'libXrender:devel', 'libXt:devel', 'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel', 'libpng:devel', 'libstdc++:devel', 'pango:devel', 'pkgconfig:devel']
 
    def setup(r):
        r.addGitSnapshot('git://git.kde.org/oxygen-gtk')
        r.CMake()
        r.Make()
        r.MakeInstall()
