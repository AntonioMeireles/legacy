class feh(AutoPackageRecipe):
	name = 'feh'
	version = '1.3.4'

	buildRequires = ['freetype:devel', 'imlib2:devel', 'libX11:devel', 'libXt:devel', 'libXext:devel', 'libXinerama:devellib', 'libjpeg:devel', 'libpng:devel', 'zlib:devel', 'perl:lib','perl:runtime', 'giblib:devel']

	def unpack(r):
		r.addArchive ('http://linuxbrit.co.uk/downloads/')
		r.Replace('\$\(prefix\)\/doc','$(prefix)/share/doc','Makefile.in')
