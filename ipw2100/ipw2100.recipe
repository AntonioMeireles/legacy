class Ipw2100(PackageRecipe):
    buildRequires = [ 'kernel:build-tree' ]

    name = 'ipw2100'
    version = '1.0.4'
    
    def setup(r):
	r.addArchive('http://unc.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tgz')
        r.addPatch('makefile.patch')
	r.Run("sed -i 's/# CONFIG_IPW2100_LEGACY_FW_LOAD/CONFIG_IPW2100_LEGACY_FW_LOAD/g' Makefile")

        r.Make()
        r.MakeInstall()
        r.Doc('CHANGES','INSTALL','LICENSE','README.ipw2100')
