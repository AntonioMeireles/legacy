class AnacondaCustom(BuildPackageRecipe):
    name = 'anaconda-custom'
    version = '0.3'
    buildRequires = [ ]

    def setup(r):
        r.addMercurialSnapshot('http://hg.foresightlinux.org/hg/anaconda', tag='anaconda-fl-20080519')
        r.addArchive('pixmaps.tar.gz', dir = '%(datadir)s/anaconda/')
        r.Install('installclasses/foresight.py', '%(datadir)s/anaconda/installclasses/')

        r.Remove('%(datadir)s/anaconda/pixmaps/*.svg')
        r.Remove('%(datadir)s/anaconda/pixmaps/*.xcf')
