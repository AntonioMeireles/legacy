class AnacondaCustom(PackageRecipe):
    name = 'anaconda-custom'
    version = '0.1'
    buildRequires = [ 'rhpl:python' ]

    def setup(r):
        r.addSource('foresight.py', dir = '%(datadir)s/anaconda/installclasses/')
        r.addSource('partitioning.py', dir = '%(datadir)s/anaconda/')
        r.addArchive('pixmaps.tar.gz', dir = '%(datadir)s/anaconda/')
