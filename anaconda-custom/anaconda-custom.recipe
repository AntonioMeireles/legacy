class AnacondaCustom(PackageRecipe):
    name = "anaconda-custom"
    version = "10"

    def setup(r):
	r.addArchive('anaconda-images-%(version)s.tar.bz2')
	r.MakeInstall()
	r.addSource('conaryinstall.py')
	r.addSource('packages.py')
	r.Install('conaryinstall.py','%(datadir)s/anaconda/scripts/')
	r.Install('packages.py','%(datadir)s/anaconda/scripts/')
