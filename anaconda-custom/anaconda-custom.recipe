class AnacondaCustom(BuildPackageRecipe):
    name = 'anaconda-custom'
    version = '0.2'
    buildRequires = [ 'rhpl:python', 'python:devel', 'pyblock:python', ]

    def setup(r):
        r.addArchive('pixmaps.tar.gz', dir = '%(datadir)s/anaconda/')
        r.addSource('foresight.py',
            dir = '%(datadir)s/anaconda/installclasses/')

        # Add custom grub configuration
        r.addSource('grub.defaults', dest='%(datadir)s/anaconda/')

        r.Remove('%(datadir)s/anaconda/pixmaps/*.svg')
        r.Remove('%(datadir)s/anaconda/pixmaps/*.xcf')

        # Add custom booty to pull in bug fix for RPL-2022
        r.addArchive('booty-0.92.tar.bz2')
        r.MakeInstall(dir='../booty-0.92')
        r.Move('%(libdir)s/booty/*', '%(datadir)s/anaconda/')
