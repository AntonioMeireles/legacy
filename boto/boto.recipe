loadInstalled('python.recipe')
class Boto(PackageRecipe):

    name = 'boto'
    version = '0.8c'
    buildRequires = [ 'python-setuptools:python' ]

    def setup(r):
        r.macros.pyver = Python.majversion
        r.macros.sitepkgs = '%(libdir)s/python%(pyver)s/site-packages'

        r.addArchive('http://boto.googlecode.com/files/'
            '%(name)s-%(version)s.tar.gz')
        r.PythonSetup()

        r.Remove('%(bindir)s/test.py')
        r.Remove('%(sitepkgs)s/tests/', recursive=True)
