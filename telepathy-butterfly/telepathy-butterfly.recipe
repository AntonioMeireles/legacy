class TelepathyButterfly(AutoPackageRecipe):

    name = 'telepathy-butterfly'
    version = '0.3.4'

    buildRequires = ['python-setuptools:python','dbus-python:python',
                     'pygobject:python', 'python-ctypes:python', 
                     'telepathy-python:python', 'python:devel',
                     'pymsn:python', 'python:runtime', 'which:runtime']

    def unpack(r):
        r.addArchive('http://telepathy.freedesktop.org/releases/%(name)s/')
