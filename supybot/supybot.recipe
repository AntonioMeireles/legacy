class supybot(PackageRecipe):
    buildRequires = [ 'glibc:devel' ]
    name = "supybot"
    version = "0.83.1"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/supybot/Supybot-%(version)s.tar.bz2')
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/supybot/Supybot-plugins-20050830.tar.bz2')
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/supybot/Supybot-data.tar.bz2')
        r.mainDir('/')
        r.Run('cd Supybot-%(version)s && python setup.py install --root=%(destdir)s')
        r.Install('Supybot-plugins-20050830/*','%(libdir)s/python2.4/site-packages/supybot/plugins/')
        r.Install('supybot-data/*','%(libdir)s/python2.4/site-packages/supybot/plugins/Lookup/')
        r.Requires('python-twisted:python', '%(bindir)s/supybot')
        r.Requires('python-sqlite:python', '%(bindir)s/supybot')
