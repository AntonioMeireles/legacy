loadSuperClass('kdepackage')
class Libktorrent(kdePackageRecipe):

    name = 'libktorrent'
    version = '1.0.3'

    buildRequires = [
        'gmp:devel', 'qca2:devel', 
        'boost:devel',
    ]

    def unpack(r):
        r.addArchive('http://ktorrent.org/downloads/4.0.3/')

