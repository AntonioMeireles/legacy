class Grisbi(PackageRecipe):
   buildRequires = [ 'gtk:devel','libxml2:devel',
			'desktop-file-utils:runtime' ]
	
   name = "grisbi"
   version = "0.5.7"
   def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
	r.addPatch('grisbi-htmlview.patch', level=0)
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.addSource('grisbi.desktop')
	r.Desktopfile('grisbi.desktop')
