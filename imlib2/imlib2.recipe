class imlib2(AutoPackageRecipe) :
        name = 'imlib2'
        version = '1.2.1'
        buildRequires = [ 'libjpeg:devel', 'libpng:devel', 'libtiff:devel',
                          'libungif:devel', 'xorg-x11:devel', 'zlib:devel',
                          'bzip2:devel', 'freetype:devel' ]
        
        def unpack(r):
                r.addArchive('http://internap.dl.sourceforge.net/sourceforge/enlightenment/imlib2-%(version)s.tar.gz') 
