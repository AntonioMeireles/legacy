class SuperTuxKart(AutoPackageRecipe):
    name = 'supertuxkart'
    version = '0.6'

    buildRequires = ['Mesa:devel', 'SDL:devel', 'desktop-file-utils:runtime', 'freealut:devel', 'freeglut:devel', 'libogg:devel', 'libstdc++:devel', 'libvorbis:devel', 'openal:devel', 'plib:devel', 'subversion:runtime']

    def unpack(r):
        r.addArchive('mirror://sourceforge/supertuxkart/%(name)s-%(version)s-src.tar.bz2')
