class wxWidgets(CPackageRecipe):
    name = "wxWidgets"
    version = "2.6.3"

    buildRequires = [ 'atk:devel', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel',
        'pango:devel', 'pkgconfig:devel', 'xorg-x11:devel', 'zlib:devel' ]

    def setup(r):
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge'
        r.addArchive('%(sf)s/wxwindows/wxWidgets-%(version)s.tar.gz')
        r.addArchive('%(sf)s/wxwindows/wxWidgets-%(version)s-HTML.tar.gz')

        r.Configure('--with-gtk --enable-gtk2 --enable-unicode --with-opengl --without-libmspack')

        r.Make()
        r.Make('allmo', subDir='locale')
        r.Make(subDir='contrib/src/gizmos')
        r.Make(subDir='contrib/src/stc')
        r.Make(subDir='contrib/src/ogl')

        r.MakeInstall()
        r.MakeInstall(subDir='contrib/src/gizmos')
        r.MakeInstall(subDir='contrib/src/stc')
        r.MakeInstall(subDir='contrib/src/ogl')

        # wxWidgets currently (2.6.2, 2.6.3) installs a dangling symlink
        r.Remove('%(bindir)s/wx-config')
        r.Symlink('%(libdir)s/wx/config/gtk2-unicode-release-2.6',
                  '%(bindir)s/wx-config')

        r.ComponentSpec('devel', '%(bindir)s/wx-config')
        r.Doc("docs")
