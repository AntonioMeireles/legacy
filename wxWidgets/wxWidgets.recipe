class wxWidgets(CPackageRecipe):
    name = 'wxWidgets'
    version = '2.8.1'

    buildRequires = [ 'atk:devel', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel',
        'pango:devel', 'pkgconfig:devel', 'zlib:devel', 'Mesa:devel',
        'libSM:devel', 'libX11:devel', 'libXinerama:devellib',
        'libXrender:devel', 'libXxf86vm:devel', ]

    def setup(r):
        #r.macros.url = 'mirror://sourceforge/wxwindows'
        r.macros.url = 'http://ftp.wxwidgets.org/pub/%(version)s'
        r.addArchive('%(url)s/')
        r.addArchive('%(url)s/wxWidgets-%(version)s-HTML.tar.gz')

        # patches to match wxWidgets with wxPython-2.8.1.1
        r.addPatch('wxWidgets-menu.cpp-1.141-to-1.143.patch')
        r.addPatch('wxWidgets-2.8.1-to-wxPython-2.8.1.1.patch')

        r.Configure('--with-gtk --enable-gtk2 --enable-unicode --with-opengl --without-libmspack')

        r.Make()
        r.Make('allmo', dir='locale')
        r.Make(dir='contrib/src/gizmos')
        r.Make(dir='contrib/src/stc')
        r.Make(dir='contrib/src/ogl')

        r.MakeInstall()
        r.MakeInstall(dir='contrib/src/gizmos')
        r.MakeInstall(dir='contrib/src/stc')
        r.MakeInstall(dir='contrib/src/ogl')

        r.Doc('docs')
