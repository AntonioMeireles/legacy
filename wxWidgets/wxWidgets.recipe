class wxWidgets(CPackageRecipe):
    name = "wxWidgets"
    version = "2.8.5"

    buildRequires = [ 'atk:devel', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel',
        'pango:devel', 'pkgconfig:devel',  'zlib:devel',
	'Mesa:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 
	'libXinerama:devellib', 'libXrender:devel', 'libXxf86vm:devel',
        'esound:devel']

    def setup(r):
        r.addArchive('mirror://sourceforge/wxwindows/')
        r.addArchive('mirror://sourceforge/wxwindows/%(name)s-%(version)s-HTML.zip')

        r.Configure('--with-gtk --enable-gtk2 --enable-unicode --with-opengl --without-libmspack')

        r.Make()
        r.Make('allmo', dir='locale')
        r.Make(dir='contrib/src')

        r.MakeInstall()
        r.MakeInstall(dir='contrib/src')

        r.ComponentSpec('devel', '%(bindir)s/wx-config')
        r.Doc("docs")
