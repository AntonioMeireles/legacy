class wxWidgets(CPackageRecipe):
    name = "wxWidgets"
    version = "2.8.0"

    

    buildRequires = [ 'atk:devel', 'expat:devel', 'fontconfig:devel',
        'freetype:devel', 'gettext:runtime', 'glib:devel', 
        'gnome-vfs:devel', 'gtk:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel',
        'pango:devel', 'pkgconfig:devel',  'zlib:devel',
	'Mesa:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 
	'libXinerama:devellib', 'libXrender:devel', 'libXxf86vm:devel',
        'SDL:devel', ]

    def setup(r):

    
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge'
        r.addArchive('%(sf)s/wxwindows/wxWidgets-%(version)s.tar.gz')
        r.addArchive('%(sf)s/wxwindows/wxWidgets-%(version)s-HTML.tar.gz')

        r.Configure('--with-gtk --enable-gtk2 --enable-unicode --with-gnomevfs'
                    ' --with-opengl --without-libmspack --with-sdl')

        r.Make()
        r.Make('allmo', dir='locale')
        r.Make(dir='contrib/src/gizmos')
        r.Make(dir='contrib/src/stc')
        r.Make(dir='contrib/src/ogl')

        r.MakeInstall()
        r.MakeInstall(dir='contrib/src/gizmos')
        r.MakeInstall(dir='contrib/src/stc')
        r.MakeInstall(dir='contrib/src/ogl')

        # wxWidgets currently (2.6.2, 2.6.3) installs a dangling symlink
        r.Remove('%(bindir)s/wx-config')
        r.Symlink('%(libdir)s/wx/config/gtk2-unicode-release-2.8',
                  '%(bindir)s/wx-config')

        r.ComponentSpec('devel', '%(bindir)s/wx-config')
        r.Doc("docs")
