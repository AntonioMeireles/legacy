class OpenIPMI(AutoPackageRecipe):
    name = 'OpenIPMI'
    version = '2.0.14'

    buildRequires = [ 'gdbm:devel', 'ncurses:devel', 'net-snmp:devel',
                      'openssl:devel', 'popt:devel', 'tcl:devel',
                      'tcl:runtime', 'pkgconfig:devel', 'glib:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/openipmi/%(name)s-%(version)s.tar.gz')
