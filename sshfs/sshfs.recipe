class sshfs(AutoPackageRecipe):
    name = 'sshfs'
    version = '2.2'

    buildRequires = [ 'fuse:devel', 'glib:devel', 'pkgconfig:devel', ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/fuse/sshfs-fuse-%(version)s.tar.gz')
