class latex2html(BuildPackageRecipe):

    buildRequires = [ 'ghostscript:runtime', 'netpbm:runtime', 'perl:lib',
        'perl:runtime', 'tetex:runtime', 'tetex-latex:runtime',
        'diffutils:runtime' ]

    name = 'latex2html'
    version = '2002.2.1'

    def setup(r):
        r.macros.tarversion = r.version.replace('.', '-')
        r.addArchive('http://saftsack.fs.uni-bayreuth.de/~latex2ht/current/%(name)s-%(tarversion)s.tar.gz')
        r.addSource('installpaths.patch')

        r.Configure('--without-mktexlsr')
        # This patch must be applied after configure
        r.Run('cat "installpaths.patch" |'
              'patch -d "%(builddir)s" -p1')
        r.Make()
        r.MakeInstall()

        r.Requires(exceptDeps='perl: L2hos.*')
