loadSuperClass('gnomepackage')
class Libgnomecanvas(GnomePackageRecipe):
    name = 'libgnomecanvas'
    version = '2.20.1.1'

    buildRequires = ['libart_lgpl:devel', 'libglade:devel', 'atk:devel',
                     'glib:devel', 'libxml2:devel', 'pango:devel',
                     'cairo:devel', 'fontconfig:devel', 'freetype:devel',
                     'libpng:devel', 'perl:runtime', 'gail:devel', ]

    def setup(r):
        GnomePackageRecipe.setup(r)
        # manually add in pkgconfig reqs
        r.Requires('libart_lgpl:devel',
                   '%(libdir)s/pkgconfig/libgnomecanvas-2.0.pc')
        r.Requires('pango:devel',
                   '%(libdir)s/pkgconfig/libgnomecanvas-2.0.pc')
        r.Requires('gtk:devel',
                   '%(libdir)s/pkgconfig/libgnomecanvas-2.0.pc')
