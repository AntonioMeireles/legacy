class Setuptool(AutoPackageRecipe):
    name = 'setuptool'
    version = '1.17.1'
    buildRequires = [ 'newt:devel', 'intltool:runtime' ]

    def unpack(r):
        srpm = 'http://download.fedora.redhat.com/pub/fedora/linux/core/4/SRPMS/setuptool-%(version)s-1.src.rpm'
        r.addArchive('setuptool-%(version)s.tar.gz', rpm=srpm)
    def policy(r):
        r.Requires('/usr/bin/consolehelper', '%(bindir)s/setup')
