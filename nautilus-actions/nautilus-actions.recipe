loadSuperClass('gnomepackage')
class NautilusActions(GnomePackageRecipe,AutoPackageRecipe):
    name = 'nautilus-actions'
    version = '1.12.3'
    buildRequires = [ 'GConf:devel', 'GConf:runtime',
                      'ORBit2:devel', 'desktop-file-utils:runtime',
                      'e2fsprogs:devel', 'nautilus:devel',
                      'unique:devel', 'util-linux:devel'
                      ]
    externalArchive = 'http://www.nautilus-actions.org/downloads/'
    extraConfig = ' --disable-scrollkeeper --disable-schemas-install --enable-commandline-tool '
    
    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Replace(('\-Wall', ''),
                  ('\-Werror', ''),
                  ('\-Wno-overlength-strings', ''), '{configure{,.ac},m4/na-compiler-flags.m4}')
