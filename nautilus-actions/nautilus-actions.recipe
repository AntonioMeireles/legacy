class NautilusActions(AutoPackageRecipe):
    name = 'nautilus-actions'
    version = '1.11.2'
 
    buildRequires = [
        'GConf:runtime',
        'GConf:devel',
        'desktop-file-utils:runtime',
        'e2fsprogs:devel',
        'esound:devel',
        'expat:devel',
        'gettext:runtime',
        'gnome-keyring:devel',
        'gnome-vfs:devel',
        'libICE:devel',
        'libSM:devel',
        'libart_lgpl:devel',
        'libbonobo:devel',
        'libbonoboui:devel',
        'libglade:devel',
        'libgnome:devel',
        'libgnomecanvas:devel',
        'libgnomeui:devel',
        'libxml2:devel',
        'pkgconfig:devel',
        'popt:devel',
        'nautilus:devel',
        'unique:devel',
        'intltool:runtime',
    ]

    def unpack(r):
        r.addArchive('http://www.nautilus-actions.org/downloads/')
