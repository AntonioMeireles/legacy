class DjangoNotification(PackageRecipe):

    name = 'django-notification'
    version = '0.1.2'

    buildRequires = [
        'django:python',
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://django-notification.googlecode.com/files/')
        r.PythonSetup()
