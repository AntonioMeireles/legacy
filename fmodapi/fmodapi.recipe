loadSuperClass('binarypackage=conary.rpath.com@rpl:2')
class Fmodapi(BinaryPackageRecipe):
    name = 'fmodapi'
    version = '42804'
 
    buildRequires = []
 
    def unpack(r):
	if Arch.x86:
        	r.addArchive('http://www.fmod.org/index.php/release/version/fmodapi%(version)slinux.tar.gz', dir='/opt')
		r.Requires(exceptDeps=r'soname\:\ ELF32\/libfmodex\.so\(SysV\ x86\)')

	elif Arch.x86_64:
		r.addArchive('http://www.fmod.org/index.php/release/version/fmodapi%(version)slinux64.tar.gz', dir='/opt')
		r.Requires(exceptDeps=r'soname\:\ ELF64\/libfmodex64\.so\(SysV\ x86_64\)')

