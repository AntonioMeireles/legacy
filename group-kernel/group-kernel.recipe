class GroupKernel(GroupRecipe):
    name = 'group-kernel'
    version = '2.6.14.3'

    def setup(r):
	r.setLabelPath('foresight.rpath.org@fl:desktop', 'drivers.rpath.org@fl:desktop','conary.rpath.com@rpl:1', 'contrib.rpath.org@rpl:devel')
        if Arch.x86:
            #r.addTrove('kernel', flavor='kernel.smp is: x86(cmov,i486,i586,i686,mmx)') 
            r.addTrove('kernel', flavor='!kernel.smp is: x86(cmov,i486,i586,i686,mmx)')
        else:
            #r.addTrove('kernel', flavor='kernel.smp') 
            r.addTrove('kernel', flavor='!kernel.smp')
        r.addTrove('madwifi', 'drivers.rpath.org@fl:desktop')
        r.addTrove('ndiswrapper', 'drivers.rpath.org@fl:desktop')
