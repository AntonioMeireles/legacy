class GroupKernel(GroupRecipe):
    name = 'group-kernel'
    version = '2.6.13.3'

    def setup(r):

        if Arch.x86:
            r.addTrove('kernel', flavor='kernel.smp is: x86(cmov,i486,i586,i686,mmx)') 
            r.addTrove('kernel', flavor='!kernel.smp is: x86(cmov,i486,i586,i686,mmx)')
        else:
            r.addTrove('kernel', flavor='kernel.smp') 
            r.addTrove('kernel', flavor='!kernel.smp')
        r.addTrove('ieee80211', byDefault=False)
        r.addTrove('ipw2100', byDefault=False)
        r.addTrove('ipw2200', byDefault=False)
        #r.addTrove('ndiswrapper', byDefault=False)
