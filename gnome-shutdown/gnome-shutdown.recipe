class GnomeShutdown(BuildPackageRecipe):
    name = 'gnome-shutdown'
    version = '0.4'
 
    buildRequires = ['dbus-python:python', 'pygobject:python', 'pygtk:python', 'python:devel', 'python:runtime', 'desktop-file-utils:runtime', 'gtk:runtime']
 
    def setup(r):
        r.addArchive('http://launchpad.net/gnome-shutdown/trunk/%(version)s/+download/%(name)s-%(version)s.tar.bz2')
        #r.addArchive('%(name)s-%(version)s.tar.bz2')
        r.MakeInstall()
