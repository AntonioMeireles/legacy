class Lxc(AutoPackageRecipe):
    name = 'lxc'
    version = '0.5.2'

    buildRequires = [
        'docbook-utils:runtime',
        'libcap:devel',
      ]

    def unpack(r):
        r.addArchive('http://lxc.sourceforge.net/download/lxc/')
        # rPL kernel headers are missing PR_CAPBSET_DROP due to age
        r.addPatch('lxc.oldkernelheaders.patch')
