class PythonKiwi(PackageRecipe):
    name = 'python-kiwi'
    version = '1.9.26'

    buildRequires = [
        'pygobject:python',
        'pygtk:python',
        'python-ctypes:python',
        'python-setuptools:python',
        'python:devel',
    ]

    def setup(r):
        r.addArchive('http://download.gnome.org/sources/kiwi/1.9/kiwi-%(version)s.tar.gz')
        r.PythonSetup()
        r.MakeDirs('/usr/share/kiwi/pixmaps')
        r.Run('cp %(builddir)s/pixmaps/validation-error-16.png %(destdir)s/usr/share/kiwi/pixmaps/')
        r.MakeDirs('/usr/share/kiwi/glade')
        r.Run('cp %(builddir)s/glade/PluggableWizard.glade %(destdir)s/usr/share/kiwi/glade/')

