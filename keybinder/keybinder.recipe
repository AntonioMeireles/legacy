class Keybinder(AutoPackageRecipe):

    name = 'keybinder'
    version = '10272010'

    uildRequires = ['atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXext:devel', 'libXrender:devel', 'lua:devel', 'pango:devel', 'pkgconfig:devel', 'pygtk:devel', 'pygtk:python',
    'gnome-common:runtime']

    def unpack(r):
        r.addGitSnapshot('http://github.com/engla/keybinder.git')
    def configure(r):
        r.Configure(configureName="autogen.sh")
