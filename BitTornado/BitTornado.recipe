class BitTornado(PackageRecipe):
    name = 'BitTornado'
    version = '0.3.18'
 
    buildRequires = [ 'python-setuptools:python', 'PIL:python' ]
 
    def setup(r):
        r.addArchive('http://download2.bittornado.com/download/')
        r.PythonSetup()
