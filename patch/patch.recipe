class Patch(AutoPackageRecipe):
    name = 'patch'
    version = '2.5.4'

    def unpack(r):
        r.addArchive('http://ftp.gnu.org/gnu/patch/patch-%(version)s.tar.gz')

    def makeinstall(r):
        r.MakePathsInstall()
