class Patch(AutoPackageRecipe):
    name = 'patch'
    version = '2.5.9'

    def unpack(r):
        r.addArchive('ftp://alpha.gnu.org/gnu/diffutils/')
        r.addPatch('patch-2.5.9-fixes-1.patch')

    def makeinstall(r):
        r.MakePathsInstall()
