loadSuperClass('gnomepackage')
class GCalcTool(GnomePackageRecipe):
    name = 'gcalctool'
    version = '5.6.31'

    buildRequires = GnomePackageRecipe.buildRequires + \
                    [ 'perl:runtime', 'perl-XML-Parser:devel',
                      'libgnome:devel', 'libgnomeui:devel', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libpng:devel', 'libxml2:devel', 'pango:devel', 'popt:devel', 'GConf:runtime', 'bison:runtime', 'flex:runtime', 'gettext:runtime' ]

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.optflags = '-g -Os'
