loadRecipe('gnomepackage.recipe')
class LibGda(GnomePackageRecipe):

    name = 'libgda'
    version = '1.9.103'

    buildRequires = [ 'libxml2:devel', 'libxslt:devel',
        'glib:devel', 'mysql:devel', 'postgresql:devel',
        'sqlite:devel', 'db:devel', 'gamin:devel',
        'ncurses:devel', 'openldap:devel', 'openssl:devel',
        'popt:devel', 'readline:devel',
        'gtk-sharp:lib', 'mono:lib' ]

    def unpack(r):
       GnomePackageRecipe.unpack(r)
       r.macros.cflags += ' -I/usr/include/mysql'

    def install(r):
       GnomePackageRecipe.install(r)
       r.PackageSpec('gda-postgres', 
		'%(libdir)s/libgda/providers/libgda-postgres.so',
		'%(libdir)s/libgda/providers/libgda-postgres.a')
       r.PackageSpec('gda-mysql', 
		'%(libdir)s/libgda/providers/libgda-mysql.so',
		'%(libdir)s/libgda/providers/libgda-mysql.a')
       r.PackageSpec('gda-mdb', 
		'%(libdir)s/libgda/providers/libgda-mdb.so',
		'%(libdir)s/libgda/providers/libgda-mdb.a')

       r.Run('echo >> %(destdir)s/%(sysconfdir)s/libgda/sales_test.db')
