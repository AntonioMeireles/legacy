loadSuperClass('gnomepackage.recipe')
class Eggcups(GnomePackageRecipe):

    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cups:devel',
                      'dbus:devel', 'glib:devel', 'gnome-keyring:devel',
                      'gnome-vfs:devel', 'hal:devel', 'intltool:runtime',
                      'libart_lgpl:devel', 'libbonobo:devel',
                      'libbonoboui:devel', 'libglade:devel', 'libgnome:devel',
                      'libgnomecanvas:devel', 'libgnomecups:devel',
                      'libgnomeui:devel', 'libxml2:devel', 'openssl:devel',
                      'pango:devel', 'pkgconfig:devel', 'popt:devel',
                      'cairo:devel', 'fontconfig:devel', 'freetype:devel',
                      'libpng:devel', 'GConf:runtime', 'cups:runtime',
                      'gettext:runtime', 'perl:runtime' ]

    name = 'eggcups'
    version = '0.19.1'

    extraConfig = ''
    preMakeInstall = 'GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1'

    def unpack(r):
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/eggcups/0.19/%(name)s-%(version)s.tar.bz2')
