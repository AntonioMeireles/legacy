class Floppyutil(AutoPackageRecipe):
    name = 'floppy'
    version = '0.16'

    buildRequires = [ 'popt:devel', 'dosfstools:runtime', 'e2fsprogs:runtime',
        'perl:runtime', 'pkgconfig:devel', ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/floppyutil/')

    def configure(r):
        r.Configure('--disable-gtk2')
