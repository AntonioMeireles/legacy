class ForesightChat(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime' ]
    name = "foresight-chat"
    version = "1.0"

    def setup(r):
        r.addSource('foresight-chat.png')
        r.addSource('foresight-chat.desktop')
        r.addSource('foresight-chat.sh')
        r.Requires('xchat-gnome:runtime', '%(datadir)s/pixmaps/foresight-chat.png')
        r.Install('foresight-chat.png', '%(datadir)s/pixmaps/')
        r.Install('foresight-chat.sh', '%(bindir)s/')
        r.Desktopfile('foresight-chat.desktop')
