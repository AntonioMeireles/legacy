class SystemConfigLvm(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'intltool:runtime' ]
    name = "system-config-lvm"
    version = "0.9.32"

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.gz',
            rpm='ftp://ftp.linux.ncsu.edu/pub/fedora/linux/core/development/SRPMS/%(name)s-%(version)s-1.0.src.rpm')

        r.Replace('python2', 'python',
                  'src/system-config-lvm.py')
        #r.Replace('RPM_BUILD_ROOT', 'INSTROOT', 'po/Makefile')
        r.Replace('Exec=','Exec=gksudo ','system-config-lvm.desktop.in')
        r.Replace('Categories=Application;SystemSetup;X-Red-Hat-Base;','Categories=Application;System;Settings;','system-config-lvm.desktop.in')
	r.Configure()
        r.Make()
        r.MakeInstall()
        #r.Desktopfile('system-config-display.desktop')

        r.Requires('pygtk:python', '%(bindir)s/system-config-lvm')
        r.Requires('lvm2:runtime', '%(bindir)s/system-config-lvm')
