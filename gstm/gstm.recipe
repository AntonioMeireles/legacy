class gSTM(AutoPackageRecipe):

    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel',
	'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel',
	'gnome-vfs:devel', 'gtk:devel', 'libart_lgpl:devel', 'libbonobo:devel',
	'libbonoboui:devel', 'libgnome:devel', 'libgnomecanvas:devel',
	'libgnomeui:devel', 'libpng:devel', 'libxml2:devel', 'pango:devel',
	'popt:devel', 'xorg-x11:devel', 'zlib:devel', 'desktop-file-utils:runtime' ]

    name = 'gstm'
    version = '0.3'

    def unpack(r):
	AutoPackageRecipe.unpack(r)
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
	# Temporary hack to fix the .desktop file, this will not be necessary for 0.4
	r.Run('dos2unix gstm.desktop')
