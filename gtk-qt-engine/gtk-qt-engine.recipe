loadSuperClass('kdepackage')
class GtkQtEngine(kdePackageRecipe):

    name='gtk-qt-engine'
    version = '1.1+r4'

    buildRequires = [
        'gettext:runtime', 'gtk:devel', 'kdesdk-scripts:runtime',
        'libbonoboui:devel', 'pango:devel'
    ]

    def unpack(r):

        rev = r.version.split('+')[1][1:]
        r.addSvnSnapshot('http://gtk-qt-engine.googlecode.com/svn/trunk/gtk-qt-engine')

    def makeinstall(r):

        r.MakeInstall(dir='kcm_gtk', package='gtk-qt-engine-kde')

        r.MakeInstall()

