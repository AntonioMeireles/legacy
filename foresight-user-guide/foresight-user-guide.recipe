class ForesightUserGuide(PackageRecipe):
    name = 'foresight-user-guide'
    version = '0.0.7'

    buildRequires = ['desktop-file-utils:runtime', 'make:runtime']

    def setup(r):
        r.addMercurialSnapshot('http://hg.foresightlinux.org/hg/foresight-user-guide-2', tag='%(version)s')
        r.MakeInstall()
