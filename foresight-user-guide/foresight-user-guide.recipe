class ForesightUserGuide(PackageRecipe):
    name = 'foresight-user-guide'
    version = '0.0.1'
 
    buildRequires = ['desktop-file-utils:runtime']
 
    def setup(r):
        r.addMercurialSnapshot('http://hg.foresightlinux.org/hg/%(name)s')
        #r.addMercurialSnapshot('http://hg.foresightlinux.org/hg/%(name)s', tag='0.0.1')
        r.MakeInstall()
