class Pokerth(AutoPackageRecipe):
    name = 'PokerTH'
    version = '0.6.3'

    buildRequires = [
        'SDL:devel', 'SDL_mixer:devel',
        'boost:devel', 'libstdc++:devel', 'gnutls:devel', 'qt4:devel', 'curl:devel'
    ]

    def unpack(r):
        r.macros.archive_version = '%s.src' % r.version.replace('_', '-')
        r.addArchive('mirrors://sourceforge/pokerth/PokerTH-%(version)s-src.tar.bz2')

    def configure(r):
        r.Make('pokerth.pro', makeName='qmake-qt4')

    def makeinstall(r):
        r.MakeInstall(rootVar='INSTALL_ROOT')
        r.Install('pokerth', '%(bindir)s/')
        r.Install('bin/pokerth_server', '%(bindir)s/')

    def policy(r):
        r.TagSpec('desktop-file', '%(datadir)s/applications/pokerth.desktop')

