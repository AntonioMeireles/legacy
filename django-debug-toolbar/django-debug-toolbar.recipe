class DjangoDebugToolbar(PackageRecipe):

    name = 'django-debug-toolbar'
    version = '0.8.3'

    buildRequires = [
        'django:python',
        'ipython:python',
        'python-setuptools:python',
        'python:bin',
        'python:devel',
    ]

    def setup(r):
        r.addArchive('http://github.com/robhudson/%(name)s/tarball/%(version)s')
        r.PythonSetup()
