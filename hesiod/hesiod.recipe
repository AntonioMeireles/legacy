loadSuperClass('rpmpackage')
class Hesiod(RPMPackageRecipe, AutoPackageRecipe):
    name = 'hesiod'
    version = '3.1.0'
    rpmRelease = '8'
    rpmPatches = [ 'hesiod-3.0.2-env.patch',
                   'hesiod-3.1.0-libresolv.patch' ]

    buildRequires = [ 'autoconf:runtime', 'automake:runtime' ]

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.addPatch('hesiod-x86_64-support.patch')
        r.Run('autoreconf')

