class Stjerm(AutoPackageRecipe):
    name = 'stjerm'
    version = '0.14'
 
    buildRequires = [
            'atk:devel', 
            'cairo:devel', 
            'fontconfig:devel', 
            'freetype:devel', 
            'gdk-pixbuf:devel', 
            'glib:devel', 
            'gtk:devel', 
            'libX11:devel', 
            'libpng:devel', 
            'pango:devel', 
            'pkgconfig:devel', 
            'vte:devel', 
            'xz:runtime'
                ]
 
    def unpack(r):
        r.addArchive('http://stjerm-terminal-emulator.googlecode.com/files/stjerm-%(version)s.tar.xz')
