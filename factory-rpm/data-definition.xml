<?xml version="1.0"?>
<factory xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.rpath.com/permanent/factorydef-1.0.xsd factorydef-1.0.xsd">
<metadata>
    <displayName>RPM</displayName>
    <descriptions>
      <desc>Import a binary RPM into the repository</desc>
    </descriptions>
    <supportedFiles>
      <file>rpm</file>
    </supportedFiles>
  </metadata>
<dataFields>
  <field>
    <name>name</name>
    <descriptions><desc>Package name</desc></descriptions>
    <type>str</type>
    <constraints>
      <regexp>^[\w\.\-]+$</regexp>
    </constraints>
    <required>true</required>
  </field>
  <field>
    <name>version</name>
    <descriptions><desc>Package version</desc></descriptions>
    <type>str</type>
    <required>true</required>
  </field>
  <field>
    <name>license</name>
    <descriptions><desc>License</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>summary</name>
    <descriptions><desc>Package summary</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>description</name>
    <descriptions><desc>Package description</desc></descriptions>
    <type>str</type>
  </field>
  <field>
    <name>fileNameTemplate</name>
    <descriptions><desc>Template for renaming files</desc></descriptions>
    <type>str</type>
    <default>%(name)s-%(version)s-%(release)s.%(arch)s.rpm</default>
    <required>false</required>
    <hidden>true</hidden>
  </field>
</dataFields>
</factory>
