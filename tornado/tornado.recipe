class PythonTornado(PackageRecipe):

    name = 'tornado'
    version = '0.2'

    buildRequires = [ 'MySQL-python:python', 'simplejson:python',
        'python-setuptools:python', 'python:devel' ]

    def setup(r):
        r.addArchive('http://www.tornadoweb.org/static/')
        r.PythonSetup()

