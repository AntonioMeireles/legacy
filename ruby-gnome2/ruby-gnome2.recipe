class RubyGnome2(PackageRecipe):
   buildRequires = [ 'ruby:runtime', 'GConf:devel', 'ORBit2:devel', 
        'atk:devel', 'cairo:devel', 'fontconfig:devel', 
        'freetype:devel', 'glib:devel', 'glibc:devel', 
        'gnome-keyring:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 
        'gtksourceview:devel', 'libart_lgpl:devel', 'libbonobo:devel', 
        'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 
        'libgnomecanvas:devel', 'libgnomeprint:devel', 
        'libgnomeprintui:devel', 'libgnomeui:devel', 'libgtkhtml:devel', 
        'libjpeg:devel', 'libpng:devel', 'librsvg:devel', 
        'libxml2:devel', 'pango:devel', 'popt:devel', 
        'zlib:devel', 'gtk:devel', 'ruby:devellib', 'xorg-x11:devel',
        'ncurses:devel', 'vte:devel' ]

   name = "ruby-gnome2"
   version = "0.15.0"
   def setup(r):
        r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-all-%(version)s.tar.gz')
        r.mainDir('%(name)s-all-%(version)s')
        r.Run('ruby extconf.rb')
        r.Make()
        r.MakeInstall()
