loadRecipe('gnomepackage.recipe')   
class RubyGnome2(GnomePackageRecipe):
   buildRequires = [ 'ruby:runtime', 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'glibc:devel', 'gnome-keyring:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'gtksourceview:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel', 'libgnomeprintui:devel', 'libgnomeui:devel', 'libgtkhtml:devel', 'libjpeg:devel', 'libpng:devel', 'librsvg:devel', 'libxml2:devel', 'pango:devel', 'popt:devel', 'zlib:devel', 'gtk:devel', 'ruby:devellib', 'ncurses:devel', 'vte:devel', 'libXmu:devel', 'libXt:devel', 'make:runtime', 'gst-plugins-base:devel', 'gstreamer:devel', 'poppler-glib:devel', 'poppler:devel' ]

   name = "ruby-gnome2"
   version = "1.0.3"
   def setup(r):
        r.addArchive('http://switch.dl.sourceforge.net/project/ruby-gnome2/ruby-gnome2/ruby-gnome2-1.0.3/%(name)s-all-%(version)s.tar.gz')
        r.mainDir('%(name)s-all-%(version)s')

        r.Run('ruby extconf.rb')
        r.Make()
        r.MakeInstall()
