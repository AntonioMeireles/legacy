class RubyGnome2(BuildPackageRecipe):
   buildRequires = [ 'glibc:devel', 'gtksourceview:devel', 'libX11:devel', 'libjpeg:devel', 'librsvg:devel', 'nspr:devel', 'pango:devel', 'vte:devel', 'xulrunner:devel', 'GConf:devel', 'ORBit2:devel', 'expat:devel', 'gnome-keyring:devel', 'gnome-panel:devel', 'gnome-vfs:devel', 'libICE:devel', 'libSM:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprintui:devel', 'libgnomeui:devel', 'libgtkhtml:devel', 'poppler:devel', 'popt:devel', 'ruby:devellib', 'zlib:devel', 'ruby:runtime' ]

   name = "ruby-gnome2"
   version = "0.16.0"
   def setup(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-all-%(version)s.tar.gz')
        r.mainDir('%(name)s-all-%(version)s')
        r.Run('ruby extconf.rb')
        r.Make()
        r.MakeInstall()
