class libDVDNav(AutoPackageRecipe):

    name = 'libdvdnav'
    version = '4.2.0'

    buildRequires = [
        'autoconf:runtime', 'automake:runtime', 'doxygen:runtime',
        'libtool:runtime', 'libdvdread:devel'
    ]

    def setup(r):
        r.addArchive('http://dvdnav.mplayerhq.hu/releases/')
        r.Configure(configureName='./autogen.sh')
        r.Make()
        r.MakeInstall()
