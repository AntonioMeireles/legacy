class OpenSLP(AutoPackageRecipe):

    buildRequires = [ 'bison:runtime', 'flex:runtime', 'openssl:devel' ]

    name = "openslp"
    version = "1.2.1"

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')

        r.Replace(r'DOC_DIR = \$\(prefix\)/doc/openslp-\$\(VERSION\)',
                  'DOC_DIR = %(thisdocdir)s',
                  'Makefile.in')

