loadRecipe('gnomepackage.recipe', label='conary.rpath.com@rpl:devel')
class SystemToolsBackend(GnomePackageRecipe):

    buildRequires = [ 'desktop-file-utils:runtime', 'libgnomeui:devel' ]


    name = 'system-tools-backends'
    version = '1.3.0'

    extraConfig = GnomePackageRecipe.extraConfig
    extraConfig += ' --enable-services'
    extraConfig += ' --enable-boot'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace(('Specifix Linux release','Foresight Desktop Linux release'),'platform.pl.in')
