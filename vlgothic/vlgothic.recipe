class Vlgothic(PackageRecipe):
    name = 'vlgothic'
    version = '20061026'

    buildRequires = ['fontconfig:runtime',
			'mkfontdir:runtime']

    def setup(r):
	r.addArchive('http://dicey.org/%(name)s/'
		'VLGothic-%(version)s.tar.bz2')
	r.Install('VL-Gothic-Regular.ttf',
		'%(datadir)s/fonts/%(name)s/VL-Gothic-Regular.ttf')
	r.Install('VL-PGothic-Regular.ttf',
		'%(datadir)s/fonts/%(name)s/VL-PGothic-Regular.ttf')
