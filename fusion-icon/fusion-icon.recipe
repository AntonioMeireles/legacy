class FusionIcon(PackageRecipe):
    name = 'fusion-icon'
    version = '20070730'

    buildRequires = [ 'PyQt:python', 'ccs-python:python', 'desktop-file-utils:runtime', 'gtk:runtime', 'pygobject:python', 'pygtk:python' ]

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
        r.addPatch('compiz-start.patch')
        r.Make()
        r.MakeInstall()
