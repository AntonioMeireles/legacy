class Usb_modeswitchData(CPackageRecipe):
    name = 'usb_modeswitch-data'
    version = '20101222'
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('http://www.draisberghof.de/usb_modeswitch/usb-modeswitch-data-%(version)s.tar.bz2')
        r.addPatch('ztemf691.patch')
        r.Make()
        r.Install('usb_modeswitch.d/*', '%(sysconfdir)s/usb_modeswitch.d/', mode = 0644)
        r.Install('40-usb_modeswitch.rules', '/lib/udev/rules.d/', mode = 0644)
        r.Config(exceptions='.*')
        r.ComponentSpec('data', '.*')
