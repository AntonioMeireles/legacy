loadSuperClass('xorgpackage.recipe')
class LibXft(XorgPackageRecipe):
    name = 'libXft'
    version = '2.1.12'
    component = 'lib'

    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'libXrender:devel',
        'zlib:devel', 'expat:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('fontconfig:devel', 'freetype:devel',
                            'libXrender:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xft.pc')
