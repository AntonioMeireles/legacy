loadSuperClass("gnomepackage.recipe")
class Pygtk(GnomePackageRecipe):

    buildRequires = [ 'atk:devel', 'automake:runtime', 'cairo:devel',
        'dbus-python:python', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'gtk:devel', 'libglade:devel', 'libpng:devel', 'libxml2:devel',
        'pango:devel', 'pycairo:devel', 'python:devel', 'python:runtime',
        'python-numeric:python' ]

    name = 'pygtk'
    version = '2.9.6'

    extraConfig = "--enable-thread --enable-numpy"

    docs = ['examples', 'AUTHORS', 'NEWS', 'README', 'MAPPING', 'ChangeLog']

    def unpack(r):
       GnomePackageRecipe.unpack(r)
       r.addArchive('http://pygtk.org/dist/pygtk2reference.tbz2', dir='%(maindir)s')

    def install(r):
       GnomePackageRecipe.install(r)
       r.Install('pygtk2reference', '%(datadir)s/gtk-doc/')
       # pygtk-codegen and related data files are development tools
       r.ComponentSpec('devel', '%(bindir)s/pygtk-codegen.*')
       r.ComponentSpec('devel', '%(datadir)s/')
       r.Requires('pycairo:python','%(libdir)s/python2.4/site-packages/gtk-2.0/pangocairo.so') 
