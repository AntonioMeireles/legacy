loadRecipe("gnomepackage.recipe")
class Pygtk(GnomePackageRecipe):

    buildRequires = [ 'python:runtime', 'libglade:devel',
                      'gtk:devel', 'automake:runtime' ]
    name = 'pygtk'
    version = '2.5.3'

    extraConfig = "--enable-thread"

    docs = ['examples', 'AUTHORS', 'NEWS', 'README', 'MAPPING', 'ChangeLog']

    def unpack(r):
	GnomePackageRecipe.unpack(r)
        r.addArchive('http://pygtk.org/dist/pygtk2reference.tbz2', dir='%(maindir)s')

    def install(r):
        GnomePackageRecipe.install(r)
	r.Install('pygtk2reference', '%(datadir)s/gtk-doc/')
