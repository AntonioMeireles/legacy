loadSuperClass('kdecorepackage')
class kdeBase(kdeCorePackageRecipe):

    name = 'kdebase'
    version = '4.3.1+r1023621'

    module = 'kdebase/apps'

    buildRequires = [
        'glib:devel', 'kdebase-workspace:devel', 'libraw1394:devel',
        'libX11:devel', 'libXext:devel', 'libXrender:devel', 'libXt:devel',
        'Mesa:devel', 'pciutils:devel', 'qimageblitz:devel', 'soprano:devel',
        'strigi:devel', 'zlib:devel'
    ]

    modules = [
        'dolphin',
        'kappfinder',
        'kdepasswd',
        ('kdeplasma', 'plasma'),
        'kdialog',
        'keditbookmarks',
        'kfind',
        'kinfocenter',
        ('konqueror', 'konqueror', 'lib/konq', 'nsplugins'),
        'konsole',
        'kwrite',
    ]

    def postUnpack(r):

        r.addUbuntuPatches('k/kdebase',
            'kubuntu_10_konq_scans_nsplugins_at_startup.diff',
            'kubuntu_12_folderview_retry.diff',
            'kubuntu_14_dolphin_preview_on.diff',
        )

