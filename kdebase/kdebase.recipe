loadSuperClass('kdecorepackage')
class kdeBase(kdeCorePackageRecipe):

    name = 'kdebase'
    version = '4.2.2+r954732'

    module = 'kdebase/apps'

    buildRequires = [
        'glib:devel', 'libraw1394:devel', 'libX11:devel', 'libXext:devel',
        'libXrender:devel', 'libXt:devel', 'Mesa:devel', 'pciutils:devel',
        'phonon:devel', 'qimageblitz:devel', 'soprano:devel', 'strigi:devel',
        'zlib:devel'
    ]

    modules = [
        'dolphin',
        'kappfinder',
        'kdepasswd',
        ('kdeplasma', 'plasma'),
        'kdialog',
        'keditbookmarks',
        'kfind',
        'kinfocenter',
        ('konqueror', 'konqueror', 'lib/konq', 'nsplugins'),
        'konsole',
        'kwrite',
    ]

