class GnomeCompizManager(AutoPackageRecipe):

    buildRequires = ['GConf:runtime', 'desktop-file-utils:runtime', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'gob2:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'startup-notification:devel', 'pango:devel', 'librsvg:devel', 'glib:devel', 'gnome-desktop:devel', 'atk:devel', 'libbonoboui:devel', 'gnome-vfs:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'cairo:devel', 'gtk:devel', 'libpng:devel', 'libbonobo:devel', 'libgnome:devel', 'libglade:devel', 'libxml2:devel', 'ORBit2:devel', 'libwnck:devel', 'gnome-keyring:devel', 'GConf:devel', 'intltool:runtime']


    name = 'gnome-compiz-manager'
    version = '0.9.14'

    def unpack(r):
        r.addArchive('http://download.gna.org/gcm/%(name)s/')
        r.addSource('compiz-tray-icon.desktop')
        r.addSource('aiglx.sh')
        r.addSource('desktop.png')
        r.addSource('nvidia.gcm')
        r.addSource('radeon.gcm')

    def policy(r):
        r.Strip(exceptions='%(libdir)s/libgnome-compiz-manager.a')
        r.Install('compiz-tray-icon.desktop', '%(datadir)s/gnome/autostart/')
        r.Install('aiglx.sh', '%(bindir)s/')
        r.Install('desktop.png', '%(datadir)s/gnome-compiz-manager/glade/')
        r.Install('radeon.gcm', '%(datadir)s/gnome-compiz-manager/templates/')
        r.Install('nvidia.gcm', '%(datadir)s/gnome-compiz-manager/templates/')
