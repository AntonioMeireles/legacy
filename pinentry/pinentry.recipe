class PINEntry(AutoPackageRecipe):
    name = 'pinentry'
    version = '0.7.5'

    buildRequires = [ 'install-info:runtime', 'libcap:devel', 'ncurses:devel',
                      # For additional GTK+2 functionality:
                      'atk:devel', 'cairo:devel', 'expat:devel',
                      'fontconfig:devel', 'freetype:devel', 'glib:devel',
                      'gtk:devel', 'libX11:devel', 'libXrender:devel',
                      'libXt:devel', 'libpng:devel', 'libxcb:devel',
                      'pango:devel', 'pixman:devel', 'pkgconfig:devel',
                      'zlib:devel',
                      ]

    def unpack(r):
        r.addArchive('ftp://ftp.gnupg.org/gcrypt/%(name)s/%(name)s-%(version)s.tar.gz', keyid='1CE0C630')
        r.addSource('pinentry.sh', macros=True)

    def configure(r):
        r.Configure('--disable-pinentry-qt')

    def makeinstall(r):
        r.MakeInstall()
        r.Remove('%(bindir)s/pinentry')
        r.Install('pinentry.sh', '%(bindir)s/pinentry', mode=0755)

    def policy(r):
        r.PackageSpec('pinentry-gtk-2', '%(bindir)s/pinentry-gtk-2')
