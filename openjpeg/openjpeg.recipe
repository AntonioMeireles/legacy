class OpenJpeg(AutoPackageRecipe):
    name = 'openjpeg'
    version = '1.3'
 
    buildRequires = ['libstdc++:devel']
 
    def setup(r):
#	r.macros.archive_version = r.version.replace('.', '_')
        r.addArchive('http://openjpeg.googlecode.com/files/%(name)s_v1_3.tar.gz')
        r.Replace('PREFIX = /usr','PREFIX = %(prefix)s','Makefile')
        r.Replace('-. root','','Makefile')
        r.MakeDirs('%(destdir)s%(prefix)s/lib')
        r.Replace('ldconfig','#ldconfig','Makefile')
        r.Make()
        r.MakeInstall()
        r.FixupMultilibPaths(exceptions='.*')
#	r.Symlink('%(libdir)s/libopenjpeg-2.1.3.0.so', '%(libdir)s/libopenjpeg.so.2')

