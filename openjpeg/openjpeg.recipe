class OpenJpeg(AutoPackageRecipe):
    name = 'openjpeg'
    version = '1_1_1'
 
    buildRequires = ['libstdc++:devel']
 
    def setup(r):
        r.addArchive('http://www.openjpeg.org/'
                     '%(name)s_v%(version)s.tar.gz')
        r.Replace('INSTALLDIR = /usr/lib','INSTALLDIR = %(destdir)s%(prefix)s/lib','Makefile')
        r.Replace('-. root','','Makefile')
        r.Replace('install -m 755   \$\(SHAREDLIB\)','install -m 755   dist/$(SHAREDLIB)','Makefile')
        r.MakeDirs('%(destdir)s%(prefix)s/lib')
        r.Replace('ldconfig','#ldconfig','Makefile')
        r.Make()
        r.MakeInstall()
