class Cuyo(AutoPackageRecipe):
    name = 'cuyo'
    version = '2.~_1.0~beta1'
 
    buildRequires = ['SDL:devel', 'SDL_image:devel', 'SDL_mixer:devel',
'desktop-file-utils:runtime','flex:runtime', 'gcc-c++:runtime', 'libstdc++:devel', 'zlib:devel']
 
    def unpack(r):
        r.macros.archive_version = r.version.replace('_','-')
        r.addArchive('http://download.savannah.gnu.org/releases/%(name)s/')
        r.addPatch('bindir.patch')
        r.addSource('cuyo.desktop')
        r.Desktopfile('cuyo.desktop')
