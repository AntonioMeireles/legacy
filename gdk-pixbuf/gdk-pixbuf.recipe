class _gdk_pixbuf(AutoPackageRecipe):

    buildRequires = [ 'docbook-utils:runtime', 'gettext:runtime', 'glib:devel', 'gtk-doc:runtime', 'intltool:runtime', 'jasper:devel', 'libX11:devel', 'libjpeg:devel', 'libpng:devel', 'libtiff:devel', 'pkgconfig:devel' ]

    name = 'gdk-pixbuf'
    version = '2.22.1'
    extraConfig = ' --disable-gtk-doc --enable-introspection '

    docs = ['COPYING', 'AUTHORS', 'README', 'ChangeLog']


    def unpack(r):
        r.macros.majversion = '.'.join(r.version.split('.')[0:2])
        r.addArchive('mirror://gnome/%(name)s/%(majversion)s/')

    def configure(r):
        r.Configure( '--with-libjasper '
                     '--with-included-loaders=png')

    def makeinstall(r):
        r.MakeInstall('RUN_QUERY_LOADER_TEST=false')

    def policy(r):
        r.Create('%(libdir)s/gdk-pixbuf-2.0/2.10.0/loaders.cache')
        r.InitialContents('%(libdir)s/gdk-pixbuf-2.0/2.10.0/loaders.cache')
