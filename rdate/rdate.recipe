class Rdate(CPackageRecipe):
    name = 'rdate'
    version = '1.4'

    def setup(r):
        r.addArchive('ftp://people.redhat.com/sopwith/rdate-%(version)s.tar.gz')

        r.Make()

        r.MakePathsInstall()
        r.SetModes('%(bindir)s/rdate', 0755)
