import sys
class LincityNg(PackageRecipe):
    name = 'lincity-ng'
    version = '2.0'
 
    buildRequires = ['file:runtime']
 
    def setup(r):
        r.addArchive('http://download2.berlios.de/lincity-ng/lincity-ng-2.0.tar.bz2')
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
	r.Run("LDFLAGS=\"%(ldflags)s\" sh configure --prefix=%(destdir)s%(prefix)s")
	r.Run("jam")
	r.Run("jam install")

