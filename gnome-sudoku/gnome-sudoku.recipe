class GNOMESudoku(PackageRecipe):
   buildRequires = [ 'python:runtime', 'GConf:devel',
	'PIL:python', 'desktop-file-utils:runtime' ]
	
   name = "gnome-sudoku"
   version = "0.4.0"
   def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/gnome-sudoku/%(name)s-%(version)s.tar.gz')
	r.Run('python setup.py install --root=%(destdir)s --prefix=%(prefix)s')
	r.Requires('python-numeric:python', '%(bindir)s/gnome-sudoku')
	r.Requires('PIL:python', '%(bindir)s/gnome-sudoku')
