class GnomeColors(PackageRecipe):
    name = 'gnome-colors'
    version = '3.0'
    packageSummary = "This is a set of icon themes based on GNOME, with some inspiration/icons from Tango, Elementary, Discovery, Tango Generator and others."
    packageDescription = "This is a set of icon themes based on GNOME, with some inspiration/icons from Tango, Elementary, Discovery, Tango Generator and others. There are 5 color variations: Brave (Blue), Wise (Green), Human (Orange), Noble (Purple) and Wine (Red). (http://www.gnome-look.org/content/show.php/GNOME-colors?content=82562)"
 
    buildRequires = []
 
    def setup(r):
        r.addArchive('gnome-brave.tar.gz')
        r.Install('../gnome-brave', '%(datadir)s/icons')

        r.addArchive('gnome-human.tar.gz')
        r.Install('../gnome-human', '%(datadir)s/icons')

        r.addArchive('gnome-noble.tar.gz')
        r.Install('../gnome-noble', '%(datadir)s/icons')

        r.addArchive('gnome-wine.tar.gz')
        r.Install('../gnome-wine', '%(datadir)s/icons')

        r.addArchive('gnome-wise.tar.gz')
        r.Install('../gnome-wise', '%(datadir)s/icons')

        r.ComponentSpec('gnome-brave', '%(datadir)s/icons/gnome-brave')
        r.ComponentSpec('gnome-human', '%(datadir)s/icons/gnome-human')
        r.ComponentSpec('gnome-noble', '%(datadir)s/icons/gnome-noble')
        r.ComponentSpec('gnome-wine', '%(datadir)s/icons/gnome-wine')
        r.ComponentSpec('gnome-wise', '%(datadir)s/icons/gnome-wise')
