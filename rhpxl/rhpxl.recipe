loadSuperClass('rpmpackage.recipe', label='conary.rpath.com@rpl:devel')
class Rhpxl(RPMPackageRecipe):
    name = 'rhpxl'
    version = '0.32'

    buildRequires = [ 'kudzu:python', 'newt:python', 'pyxf86config:python',
        'rhpl:python', 'gettext:runtime', 'libX11:devel', 'libXrandr:devel',
	'glibc:devel' ]

    def setup(r):

    	r.unpack()

	r.Make
        r.MakeInstall()
        r.Doc('README')
        r.ComponentSpec('doc', '/usr/share/doc/')
        #r.Remove('%(sbindir)s/ddcprobe')
        # for ddcprobe
        r.Requires('rhpl:python', '.*/monitor.py')
        r.Requires('kudzu:python', '.*/mouse.py')

