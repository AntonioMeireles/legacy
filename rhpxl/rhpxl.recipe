loadSuperClass('rpmpackage', label='conary.rpath.com@rpl:devel')
class Rhpxl(RPMPackageRecipe, CPackageRecipe):
    name = 'rhpxl'
    version = '0.41'

    buildRequires = [ 'python:devel', 'gettext:devel', 'libXrandr:devel',
        'libX11:devel', 'gettext:runtime' ]

    distroVersion = 'development'
    rpmRelease = '2.fc7'

    def setup(r):
        r.unpack()
        r.Make()
        r.MakeInstall()
