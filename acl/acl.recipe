class Acl(CPackageRecipe):
    name = 'acl'
    version = '2.2.34'

    buildRequires = [ 'gettext:runtime', 'libtool:runtime', 'attr:devel' ]

    def setup(r):
        r.addArchive("ftp://oss.sgi.com/projects/xfs/cmd_tars/acl-%(version)s.src.tar.gz")
        r.addPatch('acl-2.2.3-multilib.patch')

        r.Configure('--libdir=/%(lib)s --libexecdir=%(libdir)s')
        r.Make()
        r.MakeInstall(rootVar='DIST_ROOT',
                      installtarget='install install-dev install-lib')
