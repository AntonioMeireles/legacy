loadSuperClass('xorgcpackage.recipe')
class LibFs(XorgCPackageRecipe):
    name = 'libFS'
    version = '1.0.0'
    component = 'lib'

    buildRequires = [ 'fontsproto:devel', 'xproto:devel', 'xtrans:devel' ]

    def setup(r):
        XorgCPackageRecipe.setup(r)

        for requirement in ('xproto:devel', 'fontsproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/libfs.pc')
