class Gpac(AutoPackageRecipe):
    name = 'gpac'
    version = '0.4.4'
 
    buildRequires = ['zlib:devel', 
                     'gcc-c++:runtime',
                     #'libX11:devel',
                     'filesystem',
                     'info-rmake-chroot:user', 
                     'info-rmake:user',
                     'libXt:devel' ]
 
    def unpack(r):
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
        r.addArchive('mirror://sourceforge/gpac/gpac-0.4.4.tar.gz')
        r.Run("chmod +x ./configure")


