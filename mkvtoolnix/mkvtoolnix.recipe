class Mkvtoolnix(AutoPackageRecipe):
    name = 'mkvtoolnix'
    version = '2.1.0'
 
    buildRequires = ['bzip2:devel', 'expat:devel', 'file:devel', 'flac:devel',
'libebml:devel', 'libmatroska:devel', 'libogg:devel', 'libstdc++:devel',
'libvorbis:devel', 'lzo:devel', 'pcre:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('http://www.bunkus.org/videotools/%(name)s/sources/')
    def configure(r):
        r.Configure(' --disable-wxwidgets')
