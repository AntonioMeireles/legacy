class Duplicity(CPackageRecipe):

    name = 'duplicity'
    version = '0.6.11'

    buildRequires = ['python-setuptools:python', 'python:devel', 'gettext:runtime', 'intltool:runtime', 'librsync:devel', 'gcc:runtime', 'glibc:devel', 'pygobject:python']

    def setup(r):
        r.addArchive('http://savannah.nongnu.org/download/duplicity/')
        r.PythonSetup(data='--install-data=%(prefix)s')
