class Duplicity(CPackageRecipe):

    name = 'duplicity'
    version = '0.5.12'

    buildRequires = ['python-setuptools:python', 'python:devel', 'gettext:runtime', 'intltool:runtime', 'librsync:devel', 'gcc:runtime', 'glibc:devel']

    def setup(r):
        r.addArchive('http://savannah.nongnu.org/download/duplicity/duplicity-0.5.12.tar.gz')
        r.PythonSetup(data='--install-data=%(prefix)s')
