loadRecipe('gnomepackage')
class GnomePowerManager(GnomePackageRecipe):

    buildRequires = [ 'GConf:devel', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devellib', 'dbus:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'hal:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libnotify:devel', 'libpng:devel', 'libwnck:devel', 'libxml2:devel', 'pango:devel', 'popt:devel', 'GConf:runtime', 'desktop-file-utils:runtime', 'docbook-utils:runtime', 'gettext:runtime', 'glib:runtime', 'gtk:runtime', 'perl:runtime', 'rarian:runtime', 'rarian:devel', 'xmlto:runtime', 'libtool:runtime', 'gnome-doc-utils:devel', 'gnome-doc-utils:runtime', 'dbus-glib:runtime', 'opensp:runtime','expat:devel', 'perl-SGMLS:runtime', 'gnome-panel:devel','gstreamer:devel', 'polkit-gnome:devel', 'polkit:devel', 'libXrandr:devel', 'unique:devel', 'libcanberra:devel', 'DeviceKit-power:runtime', 'DeviceKit-power:devel', 'DeviceKit:devel' ]

    name = 'gnome-power-manager'
    version = '2.28.0'

    extraConfig =  ' --disable-scrollkeeper --enable-policykit '
    extraConfig += ' --enable-libnotify --enable-legacy-buttons '
    extraConfig += ' --disable-scrollkeeper '
    # FIXME until we get deviceKit* bumped
    # extraConfig += ' --enable-devicekit-power '
    extraConfig += ' --disable-devicekit-power '

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.addPatch('cpufreq.patch')
        r.Replace('WARNINGFLAGS=.*', 'WARNINGFLAGS=\'\' ', 'configure')
        
