class LibDRM(AutoPackageRecipe):
    name = 'libdrm'
    version = '2.3.0'

    def unpack(r):
        r.addArchive('http://dri.freedesktop.org/%(name)s/%(name)s-%(version)s.tar.gz')
        srpm='http://download.fedora.redhat.com/pub/fedora/linux/core/development/source/SRPMS/libdrm-2.3.0-5.fc7.src.rpm'
        rpmPatches = ['nouveau.patch', 'libdrm-2.3.0-default-mode.patch']
        for p in rpmPatches:
            r.addPatch(p, rpm=srpm)
