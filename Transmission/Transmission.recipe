class Transmission(AutoPackageRecipe):

    name = 'Transmission'
    version = '0.80'

    buildRequires = [
        'atk:devel', 'cairo:devel', 'desktop-file-utils:config',
        'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel',
        'gtk:devel', 'libpng:devel', 'libX11:devel', 'libXrender:devel',
        'openssl:devel', 'pango:devel', 'pkgconfig:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('http://download.m0k.org/transmission/files/')

        r.Replace('\$\(DESTDIR\)\$\(PREFIX\)/man',
                  '$(DESTDIR)$(PREFIX)/share/man', 'mk/common.mk')

