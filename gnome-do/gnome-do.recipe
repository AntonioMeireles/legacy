class GnomeDo(AutoPackageRecipe):
    name = 'gnome-do'
    version = '20080106'
    buildRequires = [ 'autoconf:runtime', 'automake:runtime', 'desktop-file-utils:runtime', 'gnome-sharp:devellib', 'gnome-sharp:cil', 'gtk-sharp:cil', 'gtk-sharp:devellib', 'm4:runtime', 'mono:devel', 'mono:lib', 'mono:runtime', 'ndesk-dbus-glib:devellib', 'ndesk-dbus-glib:cil', 'ndesk-dbus:devellib', 'ndesk-dbus:cil', 'pkgconfig:devel', 'intltool:devel', 'intltool:runtime', 'gettext:runtime', 'which:runtime' ]

    def unpack(r):
        r.addBzrSnapshot('http://bazaar.launchpad.net/~do-core/gc/trunk-md')
        r.addAction('./autogen.sh')

    def configure(r):
        r.Configure('--libdir=/usr/lib')
        #default to autostart
        r.addSource('gnome-do.desktop', dest='%(datadir)s/gnome/autostart/')

    def policy(r):
        r.Requires('tomboy:devellib', '%(bindir)s/gnome-do')
