class DeSmuME(AutoPackageRecipe):
    name = 'desmume'
    version = '0.9.8'
 
    buildRequires = [
        'alsa-lib:devel', 
        'atk:devel', 
        'cairo:devel', 
        'desktop-file-utils:runtime', 
        'expat:devel', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'gtk:devel', 
        'gtkglext:devel', 
        'intltool:runtime', 
        'libglade:devel', 
        'libICE:devel', 
        'libpng:devel', 
        'libSM:devel', 
        'libstdc++:devel', 
        'libX11:devel', 
        'libxcb:devel', 
        'libxml2:devel', 
        'libXmu:devel', 
        'libXrender:devel', 
        'libXt:devel', 
        'Mesa:devel', 
        'pango:devel', 
        'pangox-compat:devel', 
        'pixman:devel', 
        'pkgconfig:devel', 
        'SDL:devel', 
        'xcb-util:devel', 
        'zlib:devel', 
            ]
 
    def unpack(r):
        r.addArchive('http://heanet.dl.sourceforge.net/sourceforge/desmume/')
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '
        r.addSource('desmume.desktop')
        r.Install('src/gtk/DeSmuME.xpm','%(datadir)s/pixmaps/')
        r.Desktopfile('desmume.desktop')
