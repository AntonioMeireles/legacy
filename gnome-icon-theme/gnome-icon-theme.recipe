loadRecipe('gnomepackage.recipe')
class GnomeIconTheme(GnomePackageRecipe):
    name = 'gnome-icon-theme'
    version = '2.13.5.1'
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'perl:runtime', 'perl-XML-Parser:devel', 'hicolor-icon-theme:data' ])


    def unpack(r):
	GnomePackageRecipe.unpack(r)
	r.Replace('16x16/status16x16/stock/chart', '16x16/status, 16x16/stock/chart','index.theme.in')
