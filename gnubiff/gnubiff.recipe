class GnuBiff(AutoPackageRecipe):
    name = 'gnubiff'
    version = '2.2.10'

    buildRequires =  ['GConf:devel',
                      'GConf:runtime',
                      'ORBit2:devel',
                      'atk:devel',
                      'cairo:devel',
                      'expat:devel',
                      'fontconfig:devel',
                      'freetype:devel',
                      'gamin:devel',
                      'gettext:runtime',
                      'glib:devel',
                      'gnome-keyring:devel',
                      'gnome-panel:devel',
                      'gnome-vfs:devel',
                      'gtk:devel',
                      'install-info:runtime',
                      'intltool:runtime',
                      'libart_lgpl:devel',
                      'libbonobo:devel',
                      'libbonoboui:devel',
                      'libgcc:devellib',
                      'libglade:devel',
                      'libgnome:devel',
                      'libgnomecanvas:devel',
                      'libgnomeui:devel',
                      'libstdc++:devel',
                      'libpng:devel',
                      'libxml2:devel',
                      'openssl:devel',
                      'pango:devel',
                      'perl:runtime',
                      'pkgconfig:devel',
                      'popt:devel',
                      'zlib:devel',
                      'gcc-c++:runtime']
    
    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.macros.cflags += ' -I%(krbprefix)s/include'
