loadSuperClass('xorgpackage.recipe')
class Xload(XorgPackageRecipe):
    name = 'xload'
    version = '1.0.1'
    component = 'app'

    buildRequires = [ 'libICE:devel', 'libSM:devel', 'libXaw:devel',
        'libXext:devel', 'libXmu:devel', 'libXpm:devel', 'libXt:devel' ]

    def unpack(r):
        XorgPackageRecipe.unpack(r)

        r.addPatch('http://xorg.freedesktop.org/releases/X11R7.1/patches/xload-1.0.1-setuid.diff')
