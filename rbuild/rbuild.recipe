class rBuild(BuildPackageRecipe):
    name = 'rbuild'
    version = '1.0'

    buildRequires = [
        'decorator:python',
        'python:devel',
        'rmake:python',
        'rpath-product-definition:python',
        'util-linux:runtime',
    ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/rbuild/')
        r.addPatch('rbuild-py26.patch')
        r.Make()
        r.MakeInstall()
        # Need :data for the plugins for now CNY-2935
        r.ComponentRequires({'data': set(['python'])})
