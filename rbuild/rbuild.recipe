loadInstalled('python')
class rBuild(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rbuild'
    tag = 'rbuild-1.2.7'
    version = '1.2.7'

    buildRequires = [
        'rpath-product-definition:python',
        'rpath-common:python',
        'python:devel',
        'python:runtime',
        'rmake:python',
        'util-linux:runtime',
        'mercurial:runtime',
        'robj:python',
    ]

    def setup(r):
        r.setDefaultPython()
        #r.addArchive('ftp://download.rpath.com/rbuild/')
        r.addMercurialSnapshot('http://hg.rpath.com/rbuild', tag=r.tag)
        r.Make()
        r.MakeInstall('lib=%(lib)s')
