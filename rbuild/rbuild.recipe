loadInstalled('python')
class rBuild(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rbuild'
    version = '1.2.3'

    buildRequires = [
        'decorator:python',
        'rpath-product-definition:python',
        'rpath-common:python',
        'python:devel',
        'python:runtime',
        'rmake:python',
        'util-linux:runtime',
        'mercurial:runtime',
    ]

    def setup(r):
        r.setDefaultPython()
        r.addArchive('ftp://download.rpath.com/rbuild/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
