class rBuild(BuildPackageRecipe):
    name = 'rbuild'
    # tag = '9c7e940ac96a'
    version = '1.2.6'

    buildRequires = [
        'rpath-product-definition:python',
        'rpath-common:python',
        'python:devel',
        'rmake:python',
        'util-linux:runtime',
        #'mercurial:runtime',
    ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/rbuild/')
        # r.addMercurialSnapshot('http://hg.rpath.com/rbuild/', tag=r.tag)
        r.Make()
        r.MakeInstall('lib=%(lib)s')
