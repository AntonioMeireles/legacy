class rBuild(BuildPackageRecipe):
    name = 'rbuild'
    version = '1.2.7'
    tag = '55714fe6d298'

    if tag:
        version += '_' + tag

    buildRequires = [
        'python:devel',
        'rmake:python',
        'rpath-product-definition:python',
        'rpath-common:python',
        'util-linux:runtime',
    ]

    def setup(r):
        if r.tag:
            r.addMercurialSnapshot('http://hg.rpath.com/%(name)s',
                                   tag=r.tag)
        else:
            r.addArchive('ftp://download.rpath.com/%(name)s/')

        r.Make()
        r.MakeInstall('lib=%(lib)s')
