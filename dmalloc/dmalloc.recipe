class Dmalloc(CPackageRecipe):
    name = 'dmalloc'
    version = '5.4.3'

    buildRequires = [ 'glib:devel', 'popt:devel', 'gcc-c++:runtime' ]

    def setup(r):
        r.macros.cflags += ' -fPIC'
        r.disableParallelMake()
        r.addArchive('http://dmalloc.com/releases/%(name)s-%(version)s.tgz')

        r.Configure('--enable-threads --enable-shlib')
        r.Make('dmalloc_t all light')

        r.Copy('docs/dmalloc.info', 'dmalloc.info')
        r.Copy('docs/dmalloc.html', 'dmalloc.html')
        r.MakePathsInstall('shlibdir=%(destdir)s/%(libdir)s installinfo')

        r.Doc('dmalloc.html')
