class agg(AutoPackageRecipe):
    name = 'agg'
    version = '2.3'

    buildRequires = [ 'autoconf:runtime', 'automake:runtime', 'libtool:runtime',
                      'freetype:devel', 'libstdc++:devel',
                      'zlib:devel',
                      'libX11:devel', ]

    def unpack(r):
        r.macros.rversion = r.version.replace('.', '')
        r.addArchive('http://www.antigrain.com/%(name)s%(rversion)s.tar.gz')
        r.Replace('X11R6/lib', '%(lib)s', 'configure.in')

    def configure(r):
        r.Run('chmod a+x autogen.sh')
        r.Configure(configureName='autogen.sh')

    def policy(r):
        r.AutoDoc(exceptions='/.+/')

