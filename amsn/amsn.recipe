class Amsn(AutoPackageRecipe):
    name="amsn"
    version="0.98.1"
    buildRequires=['libICE:devel', 'libSM:devel', 'libX11:devel', 
                   'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 
                   'zlib:devel','python:devel','desktop-file-utils:runtime','which:runtime',
                   'tcl:runtime','gcc:runtime','tk:lib','tk:devel',
                     'desktop-file-utils:runtime','libX11:devel','libICE:devel','libSM:devel','desktop-file-utils:runtime',
                     'tk:runtime'
                   ]
    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.bz2')
        r.Requires("tls:lib",'%(bindir)s/amsn')
    def policy(r):
        r.ImproperlyShared('%(datadir)s/amsn/utils/linux/*')
        r.ImproperlyShared('%(datadir)s/amsn/utils/TkCximage/*')
        r.ImproperlyShared('%(datadir)s/amsn/utils/webcamsn/*')
        r.ImproperlyShared('%(datadir)s/amsn/utils/tcl_sirens/*')
        
