loadInstalled('python')
class Pyexiv2(CPackageRecipe):

    name = 'pyexiv2'
    version = '0.1.3'

    buildRequires = ['boost:devel', 'exiv2:devel', 'libstdc++:devel', 'python:devel', 'scons:runtime']

    def setup(r):
        r.addArchive('http://tilloy.net/dev/pyexiv2/releases/pyexiv2-0.1.3.tar.bz2')
	r.disableParallelMake()
        r.Make(makeName='scons')
        r.Make('DESTDIR=%(destdir)s PREFIX=%(prefix)s install', makeName='scons')
	r.macros.pyver = Python.majversion 
	r.Move('/usr/lib/python%(pyver)s/site-packages/*', '%(libdir)s/python%(pyver)s/site-packages/')
