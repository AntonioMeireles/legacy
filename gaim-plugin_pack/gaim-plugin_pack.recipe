class GaimPluginPack(PackageRecipe):

	name = 'gaim-plugin_pack'
	version = '1.0beta4'

	buildRequires = ['atk:devel', 'cairo:devel', 'expat:devel',
					'fontconfig:devel', 'freetype:devel', 'glib:devel',
					'gtk:devel', 'libX11:devel', 'libXrender:devel',
					'libpng:devel', 'pango:devel', 'pkgconfig:devel',
					'zlib:devel','glibc:devel', 'binutils:runtime',
					'gawk:runtime', 'glibc:devel', 'sed:runtime',
                     'gettext:runtime']

	def setup(r):
		r.addArchive("%(name)s-%(version)s.tar.bz2")
		r.Configure('--with-plugins=autoaccept,mystatusbox,autoreply,blistop'
					'buddynote,dice,eight_ball,flip,Gaim-schedule,Gaim-XChat'
					'gRIM,groupmsg,irssidate,lastseen,listhandler,markerline,'
					'newline,nicksaid,offlinemsg,oldlogger,sepandtab,'
					'showoffline,simfix,sslinfo,talkfilters')
		r.Make()
		r.MakeInstall()
