class IPMITool(AutoPackageRecipe):
    name = 'ipmitool'
    version = '1.8.9'
    buildRequires = [ 'ncurses:devel', 'openssl:devel', 'readline:devel', ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/ipmitool/')
        r.Replace('# *include \<linux/compiler.h\>', '',
            'src/ipmievd.c', 'src/plugins/open/open.c')
