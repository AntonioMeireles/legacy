class Pkgconfig(AutoPackageRecipe):
    name = 'pkgconfig'
    version = '0.23'
    patches = [  'pkgconfig-0.15.0-reqprov.patch',
                 'pkg-config-0.21-compat-loop.patch',
                 'pkg-config-lib64-excludes.patch', ]

    def unpack(r):
        r.addArchive('http://pkgconfig.freedesktop.org/releases/pkg-config-%(version)s.tar.gz')
        for p in r.patches:
            r.addPatch(p)

    def configure(r):
        # For some reason, dependency tracking is broken
        # so we must enable-indirect-deps to make things
        # work properly.
        # FIXME check that this is no longer true
        #r.Configure('--enable-indirect-deps')
        r.Configure('--disable-shared --with-pc-path=%(libdir)s/pkgconfig:%(datadir)s/pkgconfig')

    def policy(r):
        # own those
        for d in ['%(libdir)s/','%(datadir)s/']:
            dir = d + '%(name)s'
            r.MakeDirs(dir)
            r.ExcludeDirectories(exceptions = dir)
