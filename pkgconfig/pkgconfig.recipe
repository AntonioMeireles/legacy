class Pkgconfig(AutoPackageRecipe):
    name = 'pkgconfig'
    version = '0.21'

    def unpack(r):
        r.addArchive('http://pkgconfig.freedesktop.org/releases/pkg-config-%(version)s.tar.gz')

    def configure(r):
        # For some reason, dependency tracking is broken
        # so we must enable-indirect-deps to make things
        # work properly.
        r.Configure('--enable-indirect-deps')
