    version = '0.0.2'

    buildRequires = ['atk:devel', 'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'pygtk:devel', 'zlib:devel']

    def unpack(r):
