class DBusGlib(AutoPackageRecipe):

    name = 'dbus-glib'
    version = '0.74'

    buildRequires = [ 'dbus:devel', 'dbus:runtime', 'doxygen:runtime',
                      'expat:devel', 'gettext:runtime', 'glib:devel',
                      'libtool:runtime', 'pkgconfig:devel', 'xmlto:runtime',
                      'glib:runtime' ]

    def unpack(r):
        #r.addArchive('http://dbus.freedesktop.org/releases/%(name)s/')
        srpm = 'dbus-glib-0.74-2.8.20070822git.fc7.hughsie.src.rpm'
        r.addArchive('%(name)s-%(version)s.tar.gz', rpm=srpm)

        r.addPatch('dbus-glib-0.70-dontgeneratexml.patch')


    def configure(r):

        r.Configure('--disable-verbose-mode '
                    '--disable-tests --disable-asserts')
    def build(r):
        r.Make
        r.MakeInstall
