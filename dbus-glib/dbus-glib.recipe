class DBusGlib(AutoPackageRecipe):

    name = 'dbus-glib'
    version = '0.71'

    buildRequires = [
        'dbus:devel', 'dbus:runtime', 'doxygen:runtime', 'expat:devel',
        'gettext:runtime', 'glib:devel', 'libtool:runtime', 'pkgconfig:devel',
        'xmlto:runtime',
    ]

    def unpack(r):

        r.addArchive('http://dbus.freedesktop.org'
                     '/releases/%(name)s-%(version)s.tar.gz')

        r.addPatch('dbus-glib-0.70-dontgeneratexml.patch')


    def configure(r):

        r.Configure('--disable-verbose-mode '
                    '--disable-tests --disable-asserts')
    def build(r):
	r.Make
	r.MakeInstall
    def policy(r):
	r.Remove('/usr/include/dbus-1.0/dbus/dbus-glib.h')
