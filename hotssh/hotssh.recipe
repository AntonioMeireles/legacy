class Hotssh(CPackageRecipe):

    name = 'hotssh'
    version = '0.2.7'

    buildRequires = ['desktop-file-utils:runtime', 'gettext:runtime', 'intltool:runtime', 'python-sqlite:python', 'python:devel', 'openssh:devel']

    def setup(r):
        r.addArchive('http://ftp.gnome.org/pub/GNOME/sources/hotssh/0.2/')
    
        r.ManualConfigure(' --prefix=%(prefix)s --destdir=%(destdir)s',
                          configureName='waf configure')
        r.Make('build', makeName='./waf')
        r.MakeInstall('--destdir=%(destdir)s', makeName ='./waf')


        r.SetModes('%(sysconfdir)s/profile.d/hotssh.sh', 0644)
        r.SetModes('%(sysconfdir)s/profile.d/hotssh.csh', 0644)
        r.NonBinariesInBindirs(exceptions = '%(sysconfdir)s/profile.d/hotssh.sh')
        r.NonBinariesInBindirs(exceptions = '%(sysconfdir)s/profile.d/hotssh.csh')
