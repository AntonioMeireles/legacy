class Vsftpd(DerivedPackageRecipe):

    buildRequires = [ 'glibc:devel', 'libcap:devel', 'openssl:devel', 'pam:devel', 'tcp_wrappers:devel' ]

    name = 'vsftpd'
    version = '2.0.3'

    def setup(r):
        r.addSource('ftp.service', dest='%(sysconfdir)s/avahi/services/')
        r.addSource('vsftpd.conf', dest='%(sysconfdir)s/vsftpd/', mode=0600)

