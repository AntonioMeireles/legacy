class Httplib2(PackageRecipe):
    name = 'httplib2'
    version = '0.6.0'

    buildRequires = ['python:devel', 'python-setuptools:runtime']

    def setup(r):
        r.addArchive('http://httplib2.googlecode.com/files/%(name)s-%(version)s.tar.gz')
        r.PythonSetup()
