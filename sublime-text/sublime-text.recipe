class SublimeText(CPackageRecipe):
    name = 'sublime-text'
    version = '2'
    tag = '2200'

    if tag:
        version += '_' + tag

    buildRequires = [
        'glib:devel', 'libX11:devel', 'libstdc++:devel', 'python:devel'
    ]

    def setup(r):
        # http://www.sublimetext.com/
        r.addArchive('http://c758482.r82.cf2.rackcdn.com/Sublime Text 2 Build '+r.tag+'.tar.bz2', Arch.x86)
        r.addArchive('http://c758482.r82.cf2.rackcdn.com/Sublime Text 2 Build '+r.tag +' x64.tar.bz2', Arch.x86_64)

        r.MakeDirs('/opt/%(name)s/')
        r.Install('*', '/opt/%(name)s/')
        r.Symlink('/opt/%(name)s/sublime_text', '%(bindir)s/subl')
