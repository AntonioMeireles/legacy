class LatencyTop(CPackageRecipe):
    name = 'latencytop'
    version = '0.4'

    buildRequires = [ 'glib:devel', 'ncurses:devel', 'pkgconfig:devel' ]

    def setup(r):
        r.addArchive('http://www.latencytop.org/download/%(name)s-%(version)s.tar.gz')
        r.MakeDirs('/usr/sbin')
        r.Make()
        r.MakeInstall()
