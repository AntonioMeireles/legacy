loadSuperClass('rpmpackage')
class LatencyTop(RPMPackageRecipe,CPackageRecipe):
    name = 'latencytop'
    version = '0.4'
    rpmRelease = '2.fc10'
    rpmPatches = [ 'latencytop-Makefile-fixes.patch',
                   'latencytop-datadir.patch',
                   'latencytop-standard-CFLAGS.patch',
                   'latencytop-0.4-updated-translations.patch' ]

    buildRequires = [ 'glib:devel', 'ncurses:devel', 'pkgconfig:devel' ]

    def setup(r):
        RPMPackageRecipe.unpack(r)
        r.Make()
        r.MakeInstall()
