class DjangoPiston(PackageRecipe):

    name = 'django-piston'
    version = '0.2.2'

    buildRequires = [
        'django:python',
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        r.addArchive('http://bitbucket.org/jespern/%(name)s/downloads/')
        r.PythonSetup()

