class GtkMathview(AutoPackageRecipe):
    name = 'gtkmathview'
    version = '0.7.7'

    buildRequires = ['atk:devel', 'cairo:devel', 'expat:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libXrender:devel', 'libxslt:runtime', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'zlib:devel','libstdc++:devel', 'libxml2:devel']

    def unpack(r):
        r.addArchive('http://helm.cs.unibo.it/mml-widget/sources/',
                     '%(name)s-%(version)s.tar.gz')
