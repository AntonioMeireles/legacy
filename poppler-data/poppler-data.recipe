class PopplerData(PackageRecipe):

    name = 'poppler-data'
    version = '0.1.1'

    buildRequires = [
        'make:runtime'
    ]

    def setup(r):

        r.addArchive('http://poppler.freedesktop.org/')

        r.MakeInstall('prefix=%(prefix)s/')

