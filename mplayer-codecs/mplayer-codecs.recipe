class MPLayerCodecs(PackageRecipe):

    name = "mplayer-codecs"
    version = "20070129"

    buildRequires = [
        'glibc:devel', 'libstdc++:devel'
    ]

    def setup(r):

        # Use date of check as version since amd64 and x86 actual
        # versions are different
        r.addArchive('http://www2.mplayerhq.hu/MPlayer/releases/codecs/essential-amd64-20061203.tar.bz2', use=Arch.x86_64)
        r.addArchive('http://www2.mplayerhq.hu/MPlayer/releases/codecs/essential-20061022.tar.bz2', use=Arch.x86)
        r.Install('*', '%(libdir)s/MPlayer/codecs/')
        r.ComponentSpec('runtime', '.*')
        r.Provides(exceptions='%(libdir)s/MPlayer/codecs/')
        r.Requires(exceptions='%(libdir)s/MPlayer/codecs/')
        r.Strip(exceptions='.*')

