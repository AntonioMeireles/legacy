class Gksu(CPackageRecipe):

    buildRequires = [ 'gtk:devel','libgksuui1.0:devel',
        'libgksu1.2', 'GConf:devel', 'ORBit2:devel', 'atk:devel',
        'cairo:devel', 'fontconfig:devel', 'freetype:devel',
        'glib:devel', 'gnome-keyring:devel',
        'libgksu1.2:devel', 'libpng:devel', 'pango:devel',
        'zlib:devel', 'GConf:runtime', 'desktop-file-utils:runtime',
        'gawk:runtime', 'gettext:runtime', 'libICE:devel',
        'libSM:devel', 'libX11:devel', 'libXrender:devel',
        'perl:runtime', 'pkgconfig:devel' ]

    name = 'gksu'
    version = '1.3.6'

    def setup(r):
       r.addArchive('http://people.debian.org/~kov/gksu/gksu/gksu-%(version)s.tar.gz')
       r.Configure()
       r.Make()
       r.MakeInstall()
       r.Remove('%(datadir)s/applications/gksu.desktop')
       r.Run('echo "" >> %(destdir)s%(sysconfdir)s/gconf/schemas/gksu.schemas')
