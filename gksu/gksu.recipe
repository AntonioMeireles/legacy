class Gksu(CPackageRecipe):

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libgksu:devel', 'libpng:devel', 'nautilus:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'startup-notification:devel', 'zlib:devel' ]

    name = 'gksu'
    version = '1.9.3'

    def setup(r):
       r.addArchive('http://people.debian.org/~kov/gksu/gksu/gksu-%(version)s.tar.gz')
       r.Configure()
       r.Make()
       r.MakeInstall()
