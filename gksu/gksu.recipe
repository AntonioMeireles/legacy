class Gksu(CPackageRecipe):

    buildRequires = [ 'GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel', 'libX11:devel', 'libXrender:devel', 'libgksu:devel', 'libpng:devel', 'nautilus:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'startup-notification:devel', 'zlib:devel', 'intltool:runtime', 'expat:devel' ]

    name = 'gksu'
    version = '2.0.0'

    def setup(r):
       r.addArchive('http://people.debian.org/~kov/gksu/')
       for p in [#'00_all_linguas.diff',
                 '01_always_ask.patch',
                 '01_nautilus_crash.diff',
#                 '02_fr.po.diff',
                 '07_desktop_in_ship.patch',
                 '10_quote_fix.patch',
                 '14_set_http_proxy_env.patch',
                 '15_configure',
                 '16_fix_ftbfs.patch',
                 '20_move_to_extensions-2.0.patch',
                 '21_strip_blank_space.patch',
                 '99_autoreconf.patch']:
           r.addPatch('http://patches.ubuntu.com/g/gksu/extracted/' + p)
       r.Run('autoreconf -fi')
       r.Configure()
       r.Make()
       r.MakeInstall()
       r.Remove('%(datadir)s/applications/gksu.desktop')

