loadSuperClass('rpmpackage')
class ModemManager(RPMPackageRecipe,AutoPackageRecipe):
    name = 'ModemManager'
    version = '0.2.997'
    rpmRelease = '1.fc12'

    buildRequires = [ 'dbus-glib:devel', 'dbus:devel', 'glib:devel', 'pkgconfig:devel', 'udev:devel']

    def configure(r):
        r.Configure(' --enable-more-warnings=yes '
                    ' --with-udev-base-dir=/lib/udev '
                    ' --disable-static')
