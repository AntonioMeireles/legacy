loadSuperClass('rpmpackage')
class ModemManager(RPMPackageRecipe,AutoPackageRecipe):
    name = 'ModemManager'
    version = '0.4.998'
    rpmRelease = '1.git20110706.fc15'
    tarballName = '%(name)s-%(version)s.git20110706.tar.bz2'
    rpmPatches = [ 'buildsys-hates-openpty.patch',
                   'ModemManager-0.4-hack_sparc_werror.patch', ]

    buildRequires = [ 'dbus-glib:devel', 'dbus:devel', 'glib:devel', 'pkgconfig:devel',
                      'udev:devel', 'gudev:devel', 'dbus-glib:runtime', 'ppp:devel',
                      'intltool:runtime', 'automake:runtime', 'autoconf:runtime',
                      ]

    def configure(r):
        r.Run('autoreconf -fi')
        r.Configure(' --enable-more-warnings=yes '
                    ' --with-udev-base-dir=/lib/udev '
                    ' --disable-static'
                    ' --with-pppd-plugin-dir=`ls -1d %(libdir)s/pppd/2*` '
                    ' --with-polkit=no')

