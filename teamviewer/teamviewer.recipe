loadSuperClass('binarypackage')
class Teamviewer(BinaryPackageRecipe):
    name = 'teamviewer'
    version = '8.0.17147'
 
    buildRequires = [ 'alsa-lib:devel', 'binutils:runtime', 'desktop-file-utils:runtime',
                      'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXdamage:devel',
                      'libXext:devel', 'libXfixes:devel', 'libXtst:devel', 'zlib:devel',
                      'chkconfig:runtime', ]
 
    def setup(r):
        r.macros.site = 'http://www.teamviewer.com/download/version_8x/'

        dist = [
            ('teamviewer_linux_x64.deb', Arch.x86_64),
            ('teamviewer_linux.deb', Arch.x86),
        ]
        for (deb, arch) in dist:
            r.addArchive('%(site)s/'+deb, dir='/', use=(arch==True))

        r.Move('/opt/teamviewer8/tv_bin/script/teamviewerd.sysv', '%(initdir)s/teamviewerd', mode = 0755)
        r.Symlink('/opt/teamviewer8/tv_bin/desktop/teamviewer-teamviewer8.desktop', '%(datadir)s/applications/')
        r.Symlink('/opt/teamviewer8/tv_bin/script/teamviewer', '%(bindir)s/')

        r.Requires('libgcc:lib', 'teamviewer:runtime')

        r.Remove('/opt/teamviewer') # otherwise updates break (dir to symlink)
        r.ExcludeDirectories(exceptions = ['/opt/teamviewer8/config', '/opt/teamviewer8/logfiles'])
        # we use system's one
        r.Remove('/opt/teamviewer8/tv_bin/xdg-utils', recursive = True)
