loadSuperClass('binarypackage')
class Teamviewer(BinaryPackageRecipe):
    name = 'teamviewer'
    version = '7.0.9350'
 
    buildRequires = ['alsa-lib:devel', 'binutils:runtime', 'desktop-file-utils:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXdamage:devel', 'libXext:devel', 'libXfixes:devel', 'libXtst:devel', 'zlib:devel']
 
    def setup(r):
        r.macros.site = 'http://www.teamviewer.com/download'

        dist = [
            ('teamviewer_linux_x64.deb', Arch.x86_64),
            ('teamviewer_linux.deb', Arch.x86),
        ]
        for (deb, arch) in dist:
            r.addArchive('%(site)s/'+deb, dir='/', use=(arch==True))

        r.addSource('teamviewer.desktop')
        r.Desktopfile('teamviewer.desktop')
        r.Requires('wine:runtime', 'teamviewer:data')
        r.Requires('libgcc:lib', 'teamviewer:runtime')
