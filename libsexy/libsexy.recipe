class libsexymm(PackageRecipe):
    buildRequires = [ 'glibc:devel' ]
    name = "libsexy"
    version = "0.1.1"

    def setup(r):
        r.macros.optflags = "-g -Os"
        r.addArchive('http://osiris.chipx86.com/projects/libsexy/releases/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
