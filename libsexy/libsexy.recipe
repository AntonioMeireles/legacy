class libsexy(PackageRecipe):
    buildRequires = [ 'glibc:devel', 'binutils:runtime', 'pkgconfig:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'libpng:devel', 'pango:devel', 'xorg-x11:devel', 'zlib:devel', 'enchant:devel', 'libxml2:devel', 'gawk:runtime' ]
    name = "libsexy"
    version = "20051011"

    def setup(r):
        r.macros.optflags = "-Os"
        r.addArchive('%(name)s-%(version)s.tar.bz2')

        r.Run('./autogen.sh')
        r.Configure()
        r.Make()
        r.MakeInstall()
