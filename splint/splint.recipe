class Splint(AutoPackageRecipe):

    buildRequires = [ 'flex:devel' ]

    name = 'splint'
    version = '3.1.1'

    def unpack(r):
        r.disableParallelMake()

        r.addArchive('http://www.splint.org/downloads/%(name)s-%(version)s.src.tgz')
        r.addSource('http://www.splint.org/manual/manual.html')
    def policy(r):
        r.AutoDoc('manual.html')
