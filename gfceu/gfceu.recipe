class Gfceu(PackageRecipe):
    name = 'gfceu'
    version = '0.5.0'
 
    buildRequires = [ 'python-setuptools:python', 
        'desktop-file-utils:runtime', 'desktop-file-utils:runtime',
        'pygtk:python' ]
 
    def setup(r):
        r.addArchive('http://gfceu.thepiratecove.org/files/'
                     '%(name)s-%(version)s.tar.gz')
        r.PythonSetup()

