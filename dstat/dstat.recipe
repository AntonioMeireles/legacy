class Dstat(BuildPackageRecipe):
    name = 'dstat'
    version = '0.6.2'

    def setup(r):
        r.addArchive('http://dag.wieers.com/home-made/dstat/'
                     'dstat-%(version)s.tar.bz2')
        r.MakeInstall()
        r.Remove('examples/dstat.py')
        r.Doc('examples')
