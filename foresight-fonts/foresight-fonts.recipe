class ForesightFonts(PackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'fontconfig:runtime' ]
    name = "foresight-fonts"
    version = "1.0"

    def setup(r):
        r.addArchive('fonts.tar.bz2', dir='%(datadir)s/fonts/')
        r.addSource('font-licensing')
        r.addSource('foresight-fonts.desktop')
        r.Install('font-licensing', '%(datadir)s/fonts/TTF/')
        r.Desktopfile('foresight-fonts.desktop')
