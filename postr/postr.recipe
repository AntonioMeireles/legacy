class Postr(PackageRecipe):
   name = 'postr'
   version = '0.10'
   buildRequires = ['desktop-file-utils:runtime', 'python-setuptools:python', 'gnome-python:python', 'pygobject:python', 'pygtk:python', 'python-twisted-web:python', 'python-twisted:python', 'python:devel']

   def setup(r):
       r.addArchive('http://burtonini.com/computing/')
       r.PythonSetup()
       r.Move('%(libdir)s/python2.6/site-packages/share/*', '%(datadir)s/')
