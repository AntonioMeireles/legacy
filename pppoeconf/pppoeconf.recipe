class pppoeconf(PackageRecipe):

    buildRequires = [ 'desktop-file-utils:runtime' ]

    name = 'pppoeconf'
    version = '1.12'

    def setup(r):
        r.addArchive('http://archive.ubuntu.com/ubuntu/pool/main/p/pppoeconf/pppoeconf_%(version)subuntu1.tar.gz')
        r.Install('%(name)s', '%(sbindir)s/', mode=0755)
        r.Install('%(name)s.8', '%(mandir)s/')
       
    def policy(r):
        r.Requires('%(bindir)s/whiptail', '(sbindir)s/%(name)s')
        r.Requires('%(bindir)s/gettext.sh', '(sbindir)s/%(name)s')
