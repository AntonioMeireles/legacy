loadRecipe('gnomepackage.recipe')
class Medit(GnomePackageRecipe):

    name = 'medit'
    version = '1.0.4'

    buildRequires = ['desktop-file-utils:runtime', 'pygobject:python', 'pygtk:python', 
	'python:devel', 'expat:devel', 'libxml2:devel', 'gettext:runtime', 'gamin:devel', 'vte:python']

    def unpack(r):
	r.macros.ldflags += ' -L%(libdir)s/ '
        r.addArchive('http://sourceforge.net/projects/mooedit/files/medit/%(version)s/')
    def configure(r):
        r.Configure(' --enable-moo-module --enable-libmoo')
    def policy(r):
        r.Remove('%(datadir)s/mime/', recursive=True)
        r.Remove('%(datadir)s/icons/hicolor/icon-theme.cache')
	# Fix for medit to be able to find python plugins. This probably should rather be fixed in Makefile:
	#r.MakeDirs('%(libdir)s/moo/plugins/pymoo')
	r.Symlink('%(libdir)s/moo/plugins/pymoo.so','%(libdir)s/moo/plugins/pymoo/pymoo.so')
	r.DanglingSymlinks(exceptions='%(libdir)s/moo/plugins/pymoo/pymoo.so')

