class pdns(PackageRecipe):
    name = "pdns"
    version = "2.9.17"

 
    def setup(r):
	r.addArchive('http://downloads.powerdns.com/releases/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.Install('pdns/pdns', '%(sysconfdir)s/init.d/pdns')
        r.Doc('INSTALL', 'README', 'TODO')
