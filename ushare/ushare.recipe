class Ushare(CPackageRecipe):
    name = 'ushare'
    version = '1.1a'
    buildRequires = ['libupnp:devellib', 'libupnp:lib', 'pkgconfig:devel','chkconfig:runtime']

    def setup(r):
        r.addArchive('http://ushare.geexbox.org/releases/ushare-%(version)s.tar.bz2')
        #r.Run('CFLAGS="-Os" ./configure --prefix=/usr')
        r.Run("./configure --prefix=%(prefix)s --bindir=%(bindir)s --sysconfdir=%(sysconfdir)s")
        r.Make()
        r.MakeInstall()

