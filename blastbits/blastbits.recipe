class Blastbits(PackageRecipe):
    name = 'blastbits'
    version = '0.3'
 
    buildRequires = ['python:devel']
 
    def setup(r):
        r.addMercurialSnapshot('http://hg.foresightlinux.org/hg/blastbits/', tag='%(version)s')
        r.Install('blastimage', '%(bindir)s/')
