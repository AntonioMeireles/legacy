class Esniper(PackageRecipe):

    buildRequires = [ 'curl:devel', 'openssl:devel' ]

    name = 'esniper'
    version = '2.11.0'
    
    def setup(r):
	r.addArchive('http://easynews.dl.sourceforge.net/sourceforge/%(name)s/%(name)s-2-11-0.tgz')
	r.mainDir('%(name)s-2-11-0')
	r.Configure()
	r.Make()
	r.MakeInstall()
	r.Install('sample*','%(datadir)s/%(name)s/')
	r.Install('frontends/snipe', '%(bindir)s')
