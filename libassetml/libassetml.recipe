class Libassetml(PackageRecipe):

    buildRequires = [
        'binutils:runtime',
        'gawk:runtime',
        'gcc:devel',
        'glibc:devel',
        'glib:devel',
        'glib:runtime',
        'install-info:runtime',
        'libxml2:devel',
        'pkgconfig:devel',
        'popt:devel',
        'texi2html:runtime',
        'texinfo:runtime',
        'zlib:devel',
    ]

    name = "libassetml"
    version = "1.2.1"

    def setup(r):
        r.addArchive('http://umn.dl.sourceforge.net/sourceforge/ofset/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
