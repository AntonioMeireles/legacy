class Libassetml(PackageRecipe):

    buildRequires = [
        'gcc:devel',
        'glibc:devel',
        'glib:devel',
        'libxml2:devel',
        'popt:devel',
        'zlib:devel'
    ]

    name = "libassetml"
    version = "1.2.1"

    def setup(r):
        r.addArchive('http://umn.dl.sourceforge.net/sourceforge/ofset/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
