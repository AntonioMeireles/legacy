class Numeric(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "Numeric"
    version = "24.0b2"

    def setup(r):
        r.addArchive('http://kent.dl.sourceforge.net/sourceforge/numpy/%(name)s-%(version)s.tar.gz')
        r.Run('LOCALBASE=%(destdir)s/%(prefix)s python setup.py install --root=%(destdir)s')

#       Here are the docs

        r.Doc('README')
