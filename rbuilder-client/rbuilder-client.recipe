loadInstalled('python')
class rBuild(BuildPackageRecipe, Python.VersionMixIn):
    name = 'rbuilder-client'
    version = '1.1.2'

    buildRequires = [
        'rbuild:python',
        'python:runtime',
        'python:bin',
        'python:devel',
    ]

    def setup(r):
        r.setDefaultPython()
        r.addArchive('ftp://download.rpath.com/rbuilder-client/')
        r.Make()
        r.MakeInstall('lib=%(lib)s')
