class rBuild(BuildPackageRecipe):
    name = 'rbuilder-client'
    version = '1.1.1'

    buildRequires = [
        'rbuild:python',
        'python:devel',
        'util-linux:runtime',
    ]

    def setup(r):
        r.addArchive('ftp://download.rpath.com/rbuilder-client/')
        r.Replace('/usr/bin/python2.4', '/usr/bin/python', 'commands/rbuilder')
        r.Make()
        r.MakeInstall()
