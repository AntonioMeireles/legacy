# loadSuperClass('rpmpackage')
class Hwdata(BuildPackageRecipe):
    name = 'hwdata'
    version = '0.232'
    # Apparently fedora no longer believes in tagging
    # gitVersion = '%s-%s-1' % (name, version)

    def setup(r):
        r.addGitSnapshot('git://git.fedorahosted.org/hwdata.git/', tag='2cf1269ae705860700a4fa5370530ef7691a83d1')
        r.Run('iconv -f iso88591 -t utf8 oui.txt > oui.txt.new')
        r.Move('oui.txt.new', 'oui.txt')
        r.MakeInstall()
        r.Config('%(datadir)s/hwdata/')
