class Hwdata(PackageRecipe):
    name = 'hwdata'
    version = '0.158.1'

    def setup(r):
        r.addArchive('hwdata-%(version)s.tar.gz')

        r.MakeInstall()
        r.Config('%(datadir)s/hwdata/')

        # Provided by hotplug
        r.Remove('%(sysconfdir)s/hotplug/blacklist')
