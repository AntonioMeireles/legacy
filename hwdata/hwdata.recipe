loadSuperClass('rpmpackage')
class Hwdata(RPMPackageRecipe, BuildPackageRecipe):
    name = 'hwdata'
    version = '0.229'
    rpmRelease = '1.fc13'
    rpmPatches = []

    def setup(r):
        r.unpack()
        r.MakeInstall()
        r.Config('%(sysconfdir)s/modprobe.d/blacklist.conf')
        r.ExcludeDirectories(exceptions='%(datadir)s/hwdata/videoaliases')
