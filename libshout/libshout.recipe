class LibShout(AutoPackageRecipe):
    name = 'libshout'
    version = '2.2.2'

    buildRequires = [ 'libogg:devel', 'libtheora:devel',
        'libvorbis:devel', 'pkgconfig:devel',
    ]

    def unpack(r):
        r.addArchive('http://downloads.us.xiph.org/releases/libshout/')
