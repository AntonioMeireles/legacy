class vlc(CPackageRecipe):
    buildRequires = [ 'GConf:devel',
                      'ORBit2:devel',
                      'SDL:devel',
                      'SDL_image:devel',
                      'alsa-lib:devel',
                      'avahi:devel',
                      'dbus:devel',
                      'desktop-file-utils:runtime',
		      'djbfft:devellib',
                      'faac:devel',
                      'faad2:devel',
                      'ffmpeg:devel',
                      'freetype:devel',
                      'fribidi:devel',
                      'glib:devel',
                      'gnome-vfs:devel',
                      'gnutls:devel',
                      'gsm:devel',
                      'hal:devel',
                      'lame:devel',
                      'libICE:devel',
                      'libSM:devel',
                      'libX11:devel',
                      'libXext:devel',
                      'libXinerama:devel',
                      'libXv:devel',
                      'libXxf86vm:devel',
                      'libgcrypt:devel',
                      'libgpg-error:devel',
                      'libjpeg:devel',
                      'libmad:devel',
                      'libogg:devel',
                      'libpng:devel',
                      'libstdc++:devel',
                      'libtheora:devel',
                      'libtiff:devel',
                      'libvorbis:devel',
                      'libxml2:devel',
                      'pkgconfig:devel',
                      'samba-client:lib',
                      'sysfsutils:devel',
                      'wxGTK:devel',
                      'x264:devel', 
                      'xvidcore:devel',
                      'zlib:devel',
                      'libdvdnav:devel',
                      'libdvdread:devel',
                      'libavc1394:devel',
                      'libavc1394:devellib',
                      'libdvdcss:devel',
                      'libdvdcss:devellib',
                      'mpeg2dec:devel',
                      'mpeg2dec:devellib',
                      'gettext:runtime',
                      'intltool:runtime',
                      'Mesa:devel',
                      'samba:devel',
                      'dbus-glib:devel',
                      'libXi:devel',
                      'libXrandr:devel',
                      'libnotify:devel',
                      'pulseaudio:devel',
                      'qt4-core:lib',
                      'qt4-gui:lib',
                      'qt4:devel',
                      'taglib:devel',
                      'flac:devel',
                      'speex:devel',
                      'xcb-util:devel',
                      'a52dec:devel', 
                      'libcaca:devel', 
                      'libcddb:devel', 
                      'libdca:devel', 
                      'libdvbpsi:devel', 
                      'libmpcdec:devel', 
                      'libmtp:devel', 
                      'liboil:devel', 
                      'librsvg:devel', 
                      'libshout:devel', 
                      'libusb:devel', 
                      'lua:devel', 
                      'portaudio:devel', 
                      'schroedinger:devel',
                      'autoconf:runtime',
                      'automake:runtime',
                      'libtool:runtime',
                      'libtool:devel',
                      'net-tools:runtime',
                      'libcdio:devel',
		      'udev:devel',
                     ]

    name = "vlc"
    version = "1.0.5"

    packageSummary = 'VLC media player is a highly portable multimedia player'
    packageDescription = 'VLC media player is a highly portable multimedia player supporting most audio and video formats (H.264, Ogg, DivX, MKV, TS, MPEG-2, mp3, MPEG-4, aac, ...) from files, physical media (DVDs, VCD, Audio-CD), TV capture cards and many network streaming protocols.'

    def setup(r):
        r.addArchive('http://download.videolan.org/pub/videolan/%(name)s/%(version)s/%(name)s-%(version)s.tar.bz2')
	r.Replace('Werror', ' ', 'configure.ac')
	r.Run('./bootstrap')
        r.macros.cflags += ' -L%(libdir)s/xorg.mesa.3d'
	r.macros.ldflags += '-ldjbfft'
        r.Configure('--enable-a52 --enable-hal --enable-dbus --enable-telepathy --enable-run-as-root --enable-pulse --enable-glx --enable-opengl --enable-dvdread --enable-dvdnav --disable-dv --enable-faad --enable-hal --enable-notify --enable-gnomevfs --enable-libcdio --enable-ffmpeg --enable-ogg --enable-mkv --enable-mod --enable-mad --enable-flac --enable-vorbis --enable-libmpeg2 --enable-x264 --with-ffmpeg-faac --with-ffmpeg-vorbis --with-ffmpeg-mp3lame --with-ffmpeg-theora '
                    # buggy GNU/libc (version 2.5 - 2.7) present. VLC would crash; there is no viable
                    # work-around for this. Check with your distribution vendor on how to update the
                    # glibc run-time. Alternatively, build with --disable-nls --disable-mozilla and
                    # be sure to not use LibVLC from other applications/wrappers.
                    '  --disable-nls --disable-mozilla '
                    )

        r.Make()
        r.MakeInstall()
        r.addSource('vlc.png')
	r.Install('vlc.png', '%(datadir)s/pixmaps/vlc.png')
