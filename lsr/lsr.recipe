loadSuperClass('gnomepackage')
class LSR(GnomePackageRecipe):
    name = 'lsr'
    version = '0.5.1'

    buildRequires = ['gnome-python:python', 'pygobject:python',
                     'pygtk:python', 'pyorbit:python']

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.Configure('--enable-maintainer-mode --prefix=%(destdir)s%(prefix)s --eprefix=%(destdir)s%(prefix)s')
