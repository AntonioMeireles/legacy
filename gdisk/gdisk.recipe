class GDisk(CPackageRecipe):
    name = 'gdisk'
    version = '0.6.13'
 
    buildRequires = [ 'libstdc++:devel', 'popt:devel', 'util-linux:devel' ]


    def setup(r):
        r.addArchive('mirror://sourceforge/gptfdisk/')
        r.macros.cxxflags += '  -D_FILE_OFFSET_BITS=64'

        r.Make()

        for m in ['gdisk', 'sgdisk']:
            r.Install(m , '%(sbindir)s/', mode = 0755)
            r.Install(m + '.8', '%(mandir)s/man8/', mode = 0644)
