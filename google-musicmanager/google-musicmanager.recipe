loadSuperClass('binarypackage')
class GoogleMusicmanager(BinaryPackageRecipe):
    name = 'google-musicmanager'
    version = '1.0.37.252'
 
    buildRequires = ['desktop-file-utils:runtime']



    def unpack(r):
        r.macros.snapshot = r.version.split('.')[-1]
        r.macros.site = 'https://dl.google.com/linux/direct'

        dist = [
            ('google-musicmanager-beta_current_i386.rpm', Arch.x86),
            ('google-musicmanager-beta_current_x86_64.rpm', Arch.x86_64),
        ]
        for (rpm, arch) in dist:
            r.addArchive('%(site)s/'+rpm, dir='/', use=(arch==True))

        r.addSource('google-musicmanager.desktop')
        r.Desktopfile('google-musicmanager.desktop')

        r.Description(shortDesc=r.summary(), longDesc=r.description()) 

    def summary(r):
        packageSummary = "Google Music Manager (beta) uploader"
        return packageSummary

    def description(r):
        packageDescription = "The Google Play Music Manager is a desktop application that allows you to upload your music to the cloud"
        packageDescription += " and download your entire library from the cloud to your computer."
        packageDescription += " Once youâ€™ve uploaded songs to Google Play,"
        packageDescription += " you can listen to your music anywhere that you have internet access."
        return packageDescription
