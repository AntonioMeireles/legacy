class Webkit(CPackageRecipe):
    name = 'WebKit'
    version = '1.1.15.4'
 
    buildRequires = [
        'atk:devel',
        'bison:runtime',
        'cairo:devel',
        'enchant:devel', 'expat:devel',
        'flex:runtime', 'fontconfig:devel', 'freetype:devel',
        'geoclue:devel', 'gettext:runtime', 'glib:devel', 'gnome-common:devel',
        'gnome-common:runtime', 'gnome-keyring:devel', 'gperf:runtime',
        'gst-plugins-base:devel', 'gstreamer:devel', 'gtk:devel',
        'icu:devel',
        'libX11:devel', 'libXrender:devel', 'libXt:devel', 'libjpeg:devel',
        'libpng:devel', 'libsoup:devel', 'libstdc++:devel', 'libtool:runtime',
        'libxcb:devel', 'libxml2:devel', 'libxslt:devel',
        'nspr:devel',
        'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel',
        'python:devel',
        'sqlite:devel',
        'xcb-util:devel',
        'zlib:devel',
    ]
 
    def setup(r):
        r.addArchive('http://webkitgtk.org/webkit-%(version)s.tar.gz')
        # Get rid of wrong RPATH in GtkLauncher
        r.addPatch('gtklauncher_rpath_fix.patch')
        r.addPatch('http://repos.archlinux.org/wsvn/packages/libwebkit/repos/extra-i686/webkitdownload-use-webkitnetworkresponse.patch?op=dl&rev=0')
        r.addPatch('mediawiki_khtml_css.patch')
        r.Configure('--enable-svg --enable-video --enable-geolocation --enable-3D-transforms')
        r.Make()
        r.MakeInstall()
        r.Install('Programs/.libs/GtkLauncher', '%(libexecdir)s/%(name)s/', mode = 0755)
