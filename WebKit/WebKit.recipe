class Webkit(CPackageRecipe):
    name = 'WebKit'
    #svnRevision = '41707'
    #version = 'svn.r'+svnRevision
    version = '1.1.8'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'libsoup:devel', 'enchant:devel', 'expat:devel', 'flex:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gperf:runtime', 'gtk:devel', 'icu:devel', 'libX11:devel', 'libXrender:devel', 'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libxcb:devel', 'libxml2:devel', 'libxslt:devel', 'openssl:devel', 'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel', 'sqlite:devel', 'xcb-util:devel', 'zlib:devel', 'gnome-common:devel', 'gnome-common:runtime', 'bison:runtime', 'libXt:devel', 'python:devel', 'libtool:runtime', 'nspr:devel', 'libsoup:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'geoclue:devel', 'gnome-keyring:devel', ]
 
    def setup(r):
        #r.macros.svnRevision = r.svnRevision
        #r.addArchive('http://nightly.webkit.org/files/trunk/src/%(name)s-r%(svnRevision)s.tar.bz2')
        r.addArchive('http://webkitgtk.org/webkit-%(version)s.tar.gz')
        r.addPatch('gtklauncher_rpath_fix.patch')
        #r.Configure('--enable-svg --enable-video --with-font-backend=pango --with-http-backend=soup', configureName='./autogen.sh')
        r.Configure('--enable-svg --enable-video --enable-svg-filters --enable-geolocation --enable-gnomekeyring ')
        r.Make()
        r.MakeInstall()
        # Get rid of a rpath we don't want.
        r.Install('Programs/GtkLauncher', '%(libexecdir)s/%(name)s/', mode = 0755)
