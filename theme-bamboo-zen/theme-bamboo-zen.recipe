class themeforesightmodern(PackageRecipe):
    name = 'theme-bamboo-zen'
    version = '1.3.1'

    buildRequires = [ 'gtk:devel', ]

    def setup(r):
        r.addArchive('bamboo-zen.tar.bz2', dir='%(datadir)s/themes/')
        r.addArchive('bamboo-zen-icons.tar.bz2', dir='%(datadir)s/icons/')
