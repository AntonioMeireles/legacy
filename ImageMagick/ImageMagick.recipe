class ImageMagick(CPackageRecipe):
    name = 'ImageMagick'
    mainver = '6.2.3'
    patchlevel = '6'
    version = mainver + '.' + patchlevel

    buildRequires = [ 'autoconf:runtime', 'automake:runtime', 'bzip2:devel',
        'freetype:devel', 'gcc:devel', 'libjpeg:devel', 'libpng:devel',
        'libtiff:devel', 'libtool:devel', 'libtool:runtime', 'libungif:devel',
        'libxml2:devel', 'zlib:devel', 'libstdc++:devel',
        'cups:runtime', 'enscript:runtime', 'espgs:runtime', 'fontconfig:devel',
        'glib:devel', 'groff:runtime', 'gtk:devel', 'htmlview:runtime',
        'lcms:devel', 'librsvg:devel', 'libwmf:devel', 'libwmf:runtime',
        'netpbm:runtime', 'pkgconfig:devel', 'perl:lib',
        'tetex-dvips:runtime', 'wget:runtime', 'libICE:devel',
        'libSM:devel', 'libX11:devel', 'libXext:devel', 'libXt:devel' ]

    if Use.perl:
        buildRequires.extend(['perl:runtime', 'perl:devel'])

    def setup(r):
        r.macros.mainver = r.mainver
        r.macros.patchlevel = r.patchlevel
        r.mainDir('%(name)s-%(mainver)s')

        r.addArchive('ftp://ftp.imagemagick.net/pub/ImageMagick/%(name)s-%(mainver)s-%(patchlevel)s.tar.bz2')

        config = '--enable-shared --with-threads --with-magick_plus_plus'
        if Use.X:
            config += ' --with-x'
        if Use.perl:
            r.macros.perl_make_options = "CC='%(cc)s -L%(builddir)s/magick/.libs' LD='%(bindir)s/ld -L%(builddir)s/magick/.libs'"
            config += ' --without-perl' # we'll build perl stuff separately
        else:
            r.macros.perl_make_options = ''

        r.Configure(config)

        r.Make()
        if Use.perl:
            # make sure that MakeMaker can find the freshly built libMagick
            r.Replace('-lMagick', '-L%(builddir)s/magick/.libs -lMagick',
                      'PerlMagick/Makefile.PL')
            r.Run('PERL_MAKE_OPTIONS="%(perl_make_options)s" cd PerlMagick && perl Makefile.PL')
            r.Run("sed -i 's,\\(^INSTALL.* = \\)/usr,\\1%(destdir)s/usr,g' PerlMagick/Makefile")
            r.Make(dir='PerlMagick')

        r.MakeInstall(preMake='DESTDIR=%(destdir)s PERL_MAKE_OPTIONS="%(perl_make_options)s"')

        if Use.perl:
                r.MakeInstall(dir='PerlMagick')

        r.Run('find %(destdir)s -name "*.bs" |xargs rm -f')
        r.Remove('%(libdir)s/ImageMagick-%(mainver)s')

        # move magic.xml out of the way before we delete /usr/share/
        r.Move('%(datadir)s/%(name)s-%(mainver)s/config/*.xml',
               '%(libdir)s/%(name)s-%(mainver)s/config/')
        r.Remove('%(datadir)s/%(name)s-%(mainver)s', recursive=True)
        r.Remove('%(libdir)s/libltdl*')
        r.Move('%(libdir)s/%(name)s-%(mainver)s/config/*',
               '%(datadir)s/%(name)s-%(mainver)s/config/')
        r.ComponentSpec('data', '%(datadir)s/%(name)s-%(mainver)s/')
        r.Requires('ImageMagick:data',
                   r'%(libdir)s/libMagick\+*\.so\.%(mainver)s$')

        r.Doc('QuickStart.txt', 'www', 'images', 'index.html')
