class ImageMagick(CPackageRecipe):
    name = 'ImageMagick'
    mainver = '6.3.3'
    patchlevel = '1'
    version = mainver + '.' + patchlevel

    buildRequires = [ 'autoconf:runtime', 'automake:runtime', 'bzip2:devel',
        'djvulibre:devel', 'lcms:devel',
        'freetype:devel', 'gcc:devel', 'libjpeg:devel', 'libpng:devel',
        'libtiff:devel', 'libtool:devel', 'libtool:runtime', 'giflib:devel',
        'libxml2:devel', 'zlib:devel', 'libstdc++:devel',
        'fontconfig:devel', 'glib:devel', 'gtk:devel', 'librsvg:devel',
        'perl:lib', 'libICE:devel', 'libSM:devel', 'libX11:devel',
        'libXext:devel', 'libXt:devel', 'perl:runtime', 'perl:devel', ]

    def setup(r):
        r.macros.mainver = r.mainver
        r.macros.patchlevel = r.patchlevel
        r.macros.archive_version = '%(mainver)s-%(patchlevel)s'

        r.addArchive('ftp://ftp.imagemagick.net/pub/%(name)s/')

        r.Configure('--enable-shared --with-threads --with-magick_plus_plus '
            '--with-perl --with-x')
        # in some configurations, several files are built with inappropriate
        # --rpath specification pointing to the build directory
        r.Replace('-Wl,--rpath', '-L%(builddir)s/magick/.libs',
                  'PerlMagick/Makefile.PL', allowNoChange=True)
        r.Replace('-Wl,--rpath -Wl,%(builddir)s',
                  '-L%(builddir)s',
                  'utilities/*', allowNoChange=True)

        r.Make()
        r.MakeInstall(preMake='DESTDIR=%(destdir)s')

        r.Run('find %(destdir)s -name "*.bs" |xargs rm -f')
        r.Remove('%(libdir)s/ImageMagick-%(mainver)s')

        # move magic.xml out of the way before we delete /usr/share/
        r.Move('%(datadir)s/%(name)s-%(mainver)s/config/*.xml',
               '%(libdir)s/%(name)s-%(mainver)s/config/')
        r.Remove('%(datadir)s/%(name)s-%(mainver)s', recursive=True)
        r.Remove('%(libdir)s/libltdl*')
        r.Move('%(libdir)s/%(name)s-%(mainver)s/config/*',
               '%(datadir)s/%(name)s-%(mainver)s/config/')

        r.Doc('QuickStart.txt', 'www', 'images', 'index.html')

        r.RemoveNonPackageFiles(exceptions='.*\.la')
