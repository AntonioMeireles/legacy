class Allegro(AutoPackageRecipe):

    name = 'allegro'
    version = '4.2.2'

    buildRequires = ['arts:devel','esound:devel','install-info:runtime','pkgconfig:devel','texinfo:runtime','alsa-lib:devel','arts:devel','audiofile:devel','esound:devel','glib:devel','xorg-x11:runtime','jack:devel','libX11:devel', 'libXcursor:devel','libXext:devel','libXpm:devel','libXxf86dga:devel','libXxf86vm:devel' ]

    def unpack(r):
        r.addArchive('http://internap.dl.sourceforge.net/sourceforge/alleg/%(name)s-%(version)s.tar.gz')

    def makeinstall(r):
        r.MakeInstall(installtarget = 'install install-man install-info')
