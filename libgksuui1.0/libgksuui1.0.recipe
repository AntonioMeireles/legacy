class Libgksuui(CPackageRecipe):

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gtk:devel', 'libICE:devel',
        'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel',
        'pango:devel', 'pkgconfig:devel', 'zlib:devel' ]

    name = 'libgksuui1.0'
    version = '1.0.7'

    def setup(r):
        r.addArchive('http://people.debian.org/~kov/gksu/libgksuui1.0/libgksuui1.0-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
