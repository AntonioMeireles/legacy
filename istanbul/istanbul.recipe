class Istanbul(PackageRecipe):

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel', 'freetype:devel',
			'glib:devel', 'glibc:devel', 'gtk:devel', 'libpng:devel',
			'pango:devel', 'xorg-x11:devel', 'zlib:devel' ]

    name = 'istanbul'
    version = '0.1.1'
    def setup(r):
	r.addArchive('http://live.hujjat.org/%(name)s-%(version)s.tar.bz2')
        r.Configure()
        r.Make()
        r.MakeInstall()
	r.Requires('gst-python:python', '%(bindir)s/istanbul')
