#!/bin/bash
LIBDIR=@@LIBDIR@@/chromium-browser

# If no args, pass along chrome:// to avoid about:linux-splash (default in
# the development builds), otherwise pass along the args.
#
# Do nothing with this for now.  chrome:// is not doing what was expected.
# --new-window and --new-tab are not yet supported in chromium.
if test -z "$1"
then
    SITE=chrome://
else
    SITE=$1
fi

$LIBDIR/chrome --enable-plugins --enable-extensions --enable-greasemonkey --enable-sync --show-extensions-on-top $@
