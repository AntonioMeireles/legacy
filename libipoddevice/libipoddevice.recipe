class libipoddevice(PackageRecipe):

    buildRequires = [ 'hal:devel', 'mono:devel', 'dbus:devel',
        'glib:devel', 'glibc:devel', 'libgtop:devel',
        'dbus-glib:devellib', 'binutils:runtime',
        'eject:runtime', 'gawk:runtime', 'pkgconfig:devel',
        'pmount:runtime' ] 

    name = 'libipoddevice'
    version = '0.5.0'
    def setup(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
