class libipoddevice(PackageRecipe):

    buildRequires = [ 'hal:devel', 'mono:devel', 'dbus:devel', 'glib:devel', 'glibc:devel' ]

    name = 'libipoddevice'
    version = '0.3.2'
    def setup(r):
	r.addArchive('http://banshee-project.org/files/%(name)s/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
