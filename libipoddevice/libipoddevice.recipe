class libipoddevice(PackageRecipe):

    buildRequires = [ 'hal:devel', 'mono:devel' ]

    name = 'libipoddevice'
    version = '20050812'
    def setup(r):
	#r.addArchive('http://sonance.aaronbock.net/libipoddevice/releases/%(name)s-%(version)s.tar.gz')
	r.addArchive('%(name)s.tar.bz2')
	r.mainDir('%(name)s')
        r.Configure()
        r.Make()
        r.MakeInstall()
