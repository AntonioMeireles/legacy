class libipoddevice(AutoPackageRecipe):

    buildRequires = [ 'hal:devel', 'mono:devel', 'dbus:devel',
        'glib:devel', 'glibc:devel', 'libgtop:devel',
        'dbus-glib:devellib', 'binutils:runtime',
        'eject:runtime', 'gawk:runtime', 'pkgconfig:devel',
        'pmount:runtime', 'dbus-glib:devel', 'libxml2:devel',
        'sg3_utils:devel', 'zlib:devel'] 

    name = 'libipoddevice'
    version = '0.5.3'
    def unpack(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')

    def configure(r):
        r.Configure('--with-eject-command=%(bindir)s/eject')
