class glimmr(PackageRecipe):
    buildRequires = [ "autoconf", "mono:devel", "gtk-sharp" ]

    name = "glimmr"
    version = "0.5.6"

    def setup(r):
        r.addArchive("http://osdn.dl.sourceforge.net/sourceforge/glimmr/%(name)s-%(version)s.tar.gz")
	r.Configure()
	r.Make()
        r.MakeInstall()
