class Guayadeque(CPackageRecipe):
    name = 'guayadeque'
    version = '0.2.5'
 
    buildRequires = ['cmake:runtime', 'curl:devel', 'dbus:devel', 'desktop-file-utils:runtime', 'flac:devel', 'gcc-c++:runtime', 'gettext:runtime', 'glib:devel', 'gstreamer:devel', 'libstdc++:devel', 'libxml2:devel', 'mp4v2:devel', 'openssl:devel', 'pkgconfig:devel', 'sqlite:devel', 'taglib:devel', 'wxGTK:devel', 'wxGTK:runtime', 'zlib:devel']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/guayadeque/')
        r.CMake()
        r.Make()
        r.MakeInstall()
