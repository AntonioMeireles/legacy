class Twinkle(AutoPackageRecipe):
    name = 'twinkle'
    version = '1.4.2'
 
    buildRequires = ['alsa-lib:devel', 'bind:devel', 'bison:runtime', 'boost:devel', 'ccrtp:devel', 'commoncpp:devel', 'file:devel', 'flex:devel', 'flex:runtime', 'gnutls:devel', 'libICE:devel', 'libX11:devel', 'libXext:devel', 'libgcrypt:devel', 'libsndfile:devel', 'libstdc++:devel', 'libxml2:devel', 'libzrtpcpp:devel', 'ncurses:devel', 'perl:runtime', 'pkgconfig:devel', 'qt:devel', 'readline:devel', 'speex:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('http://www.xs4all.nl/~mfnboer/twinkle/download/%(name)s-%(version)s.tar.gz')
	r.Environment('QTDIR', '%(prefix)s')
