class libindicate(AutoPackageRecipe):
    name = 'libindicate'
    version = '0.2.3'
    buildRequires = [
        'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel',
        'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'gnome-doc-utils:devel', 'gtk-doc:runtime', 'gtk:devel',
        'libxml2:devel', 'pango:devel', 'pkgconfig:devel'
    ] 

    def unpack(r):
        r.addArchive('http://launchpad.net/%(name)s/%(major_version)s/%(version)s/+download/')
        r.Replace('-Werror','','libindicate/Makefile.in')

    def configure(r):
        r.Configure(' --disable-gobject-introspection')
