class libindicate(AutoPackageRecipe):
    name = 'libindicate'
    version = '0.4.1'
    buildRequires = [
        'atk:devel',
        'cairo:devel',
        'dbus-glib:devel', 
	'dbus-glib:runtime', 
	'dbus:devel',
        'fontconfig:devel', 
	'freetype:devel',
        'glib:devel', 
	'gnome-doc-utils:devel', 
	'gtk-doc:runtime', 
	'gtk:devel',
        'libdbusmenu-glib:devel', 
	'libxml2:devel',
        'pango:devel', 
	'pkgconfig:devel', 
	'gtk-sharp:cil', 
	'gtk-sharp:devellib', 
	'gtk-sharp:runtime', 
	'mono:cil', 
	'mono:devel', 
	'mono:runtime', 
	'pygobject:devel', 
	'pygtk:devel',
	'python:devel', 
	'vala:runtime'
    ] 

    def unpack(r):
        r.addArchive('http://launchpad.net/%(name)s/%(major_version)s/%(version)s/+download/')
        r.Replace('-Werror','','libindicate/Makefile.in')
        r.Replace('cli/indicate-sharp-0.1', 'mono/indicate-sharp', 'bindings/mono/indicate/indicate-sharp-0.1.pc.in')
        r.Replace('pyglib-2.0-python2.6','pyglib-2.0-python', 'bindings/python/Makefile.{in,am}')

    def configure(r):
        # parallel runs break randonmly
        # hot spot around mono bindings
        r.disableParallelMake()
        r.Configure(' --disable-static --enable-introspection=no')

