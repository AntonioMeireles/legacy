class libindicate(AutoPackageRecipe):
    name = 'libindicate'
    version = '0.4.93'
    buildRequires = [
        'atk:devel',
        'cairo:devel',
        'dbus-glib:devel', 
	'dbus-glib:runtime', 
	'dbus:devel',
        'fontconfig:devel', 
	'freetype:devel',
        'glib:devel', 
	'gnome-doc-utils:devel', 
	'gtk-doc:runtime', 
	'gtk:devel',
        'libdbusmenu-glib:devel', 
	'libxml2:devel',
        'pango:devel', 
	'pkgconfig:devel', 
	'gtk-sharp:cil', 
	'gtk-sharp:devellib', 
	'gtk-sharp:runtime', 
	'mono:cil', 
	'mono:devel', 
	'mono:runtime', 
	'pygobject:devel', 
	'pygtk:devel',
	'python:devel', 
	'vala:runtime'
    ] 

    def unpack(r):
        r.addArchive('http://launchpad.net/%(name)s/0.5/%(version)s/+download/')
        r.Replace('-Werror','','libindicate/Makefile.in')
        r.Replace('assemblies_dir\=\$\{libdir\}\/indicate\-sharp',
                  'assemblies_dir=${libdir}/mono/indicate',
                  'bindings/mono/indicate/indicate-sharp-0.1.pc.in')
        r.Replace(('assemblies_dir\=\$\{libdir\}\/indicate\-gtk\-sharp',
                  'assemblies_dir=${libdir}/mono/indicate\-gtk'),
                 ('indicate-sharp-0.0',
                  'indicate-sharp-0.1'),
                  'bindings/mono/indicate-gtk/indicate-gtk-sharp-0.1.pc.in')
        r.Replace('pyglib-2.0-python\$PYTHON_VERSION','pyglib-2.0-python', 'configure{,.ac}')
        r.Replace('\$\(prefix\)\/lib',
                  '%(libdir)s',
                  'bindings/mono/indicate{,-gtk}/Makefile.{in,am}')


    def configure(r):
        # parallel runs break randonmly
        # hot spot around mono bindings
        r.disableParallelMake()
        r.Configure(' --disable-static --enable-introspection=no')

