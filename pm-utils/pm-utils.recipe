loadSuperClass('rpmpackage')
class PMUtils(RPMPackageRecipe, CPackageRecipe):
    name = 'pm-utils'
    version = '1.2.5'
    rpmRelease = '2.fc11'
    rpmPatches = ['pm-utils-1.2.5-fix-kms.patch']

    buildRequires = [ 'pkgconfig:devel', 'pciutils:devel', 'xmlto:runtime', ]

    def setup(r):
        r.unpack()

        r.Configure()
        r.Make()
        r.MakeInstall()

        r.DanglingSymlinks(exceptions='%(bindir)s/pm.*')

        r.MakeDirs('%(localstatedir)s/run/pm-utils/locks')
        r.MakeDirs('%(localstatedir)s/run/pm-utils/storage')

        r.addSource('pm-utils-99hd-apm-restore', rpm=r.srpm, dir='%(libdir)s/pm-utils/sleep.d/99hd-apm-restore.hook', mode = 0755)
        r.addSource('pm-utils-hd-apm-restore.conf', rpm=r.srpm, dir='%(sysconfdir)s/pm-utils-hd-apm-restore.conf', mode = 0644)
        r.addSource('pm-utils-bugreport-info.sh', rpm=r.srpm, dir='%(bindir)s/pm-utils-bugreport-info.sh', mode = 0755)

        r.ExcludeDirectories(exceptions = ['%(sysconfdir)s/pm/.*', '%(localstatedir)s/run/pm-utils/.*'])
