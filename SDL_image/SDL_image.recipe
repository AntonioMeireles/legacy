class SDLImage(AutoPackageRecipe):
    name = 'SDL_image'
    version = '1.2.5'

    buildRequires = [ 'SDL:devel', 'libjpeg:devel', 'libpng:devel',
                      'automake:runtime', 'autoconf:runtime',
                      'libtool:runtime', 'libtiff:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('http://www.libsdl.org/projects/%(name)s/release/')

        # RPL-2206 CVE-2007-6697
        r.addPatch('http://www.libsdl.org/cgi/viewvc.cgi/trunk/SDL_image/IMG_gif.c?r1=3462&r2=3461&view=patch&pathrev=3462')
        # still RPL-2206. this security issue doesn't (yet) seem to have a CVE
        r.addPatch('http://www.libsdl.org/cgi/viewvc.cgi/trunk/SDL_image/IMG_lbm.c?r1=3341&r2=3521&view=patch')

    def configure(r):
        r.Configure('--enable-tif')

    def policy(r):
        r.MakeDirs('%(bindir)s')
        r.Run('./libtool --mode=install install showimage %(destdir)s/%(bindir)s/')
