class Cproto(AutoPackageRecipe):
    name = 'cproto'
    version = '4.7e'
    buildRequires = [ 'byacc:runtime', 'flex:runtime', 'bison:runtime' ]

    def unpack(r):
        r.macros.us_version = r.version.replace('.', '_')
        r.mainDir('%(name)s-%(us_version)s')
        r.addArchive('ftp://invisible-island.net/cproto/%(name)s-%(us_version)s.tgz')

    def makeinstall(r):
        r.MakePathsInstall('mandir=%(destdir)s/%(mandir)s/man1')
        r.TestSuite('testing', './run_test.sh')
