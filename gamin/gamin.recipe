class Gamin(AutoPackageRecipe):

    name = 'gamin'
    version = '0.1.8'

    buildRequires = [
        'glib:devel', 'pkgconfig:devel', 'python:devel'
    ]

    def unpack(r):

        r.addArchive('http://www.gnome.org/~veillard/%(name)s/sources/')
        r.addPatch('gamin-0.1.7-fix-polling.patch')

    def configure(r):

        r.Configure('--disable-debug --with-python')

