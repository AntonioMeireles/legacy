class UpdateManager(PackageRecipe):

    buildRequires = [ 'python-setuptools:python', 'gnome-python-desktop:python', 'gnome-python-extras:python', 'gnome-python:python', 'pygobject:python', 'pygtk:python' ]
    name = 'update-manager'
    version = '0.4'

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
        r.Replace('VERSION','%(version)s','update-manager.glade')
        r.PythonSetup()
