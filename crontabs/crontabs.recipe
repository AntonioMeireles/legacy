class Crontabs(PackageRecipe):
    name = 'crontabs'
    version = '1.10'

    def setup(r):
        r.addSource('crontab')
        r.addSource('run-parts')

        r.Install('crontab', '%(sysconfdir)s/')
        r.Install('run-parts', '%(bindir)s/', mode=0755)
        r.MakeDirs('%(sysconfdir)s/cron.{hour,dai,week,month}ly')
        r.ExcludeDirectories(exceptions='%(sysconfdir)s/cron.*')
        r.TagSpec('initscript', '%(initdir)s/')
        # RPL-1737
        r.Requires('/usr/sbin/crond', '%(sysconfdir)s/cron\..*')
