class X86info(CPackageRecipe):
    name = 'x86info'
    version = '1.20'

    def setup(r):
        r.addArchive('http://www.codemonkey.org.uk/projects/%(name)s/')
        # needed to copmile with -fPIC/-fPIE
        r.addPatch('http://viewcvs.gentoo.org/viewcvs.py/*checkout*/gentoo-x86/sys-apps/x86info/files/1.12b-pic.patch')
        r.Make('CFLAGS="%(cflags)s"')
        r.Install('x86info', '%(sbindir)s/')
        r.Install('x86info.1', '%(mandir)s/man1/')
