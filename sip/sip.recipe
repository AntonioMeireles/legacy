loadInstalled('python')
class Sip(AutoPackageRecipe):

    name = 'sip'
    version = '4.7.1'

    buildRequires = [
        'libstdc++:devel', 'python:devel', 'python:runtime', 'qt:devel'
    ]

    def unpack(r):

        r.addArchive('http://www.riverbankcomputing.com/Downloads/sip4/')

    def configure(r):

        conf = '-d ' + Python.sitepkgs
        r.ManualConfigure(
            conf, preConfigure='python', configureName='configure.py'
        )

    def policy(r):

        r.Doc('doc/*', 'THANKS')

