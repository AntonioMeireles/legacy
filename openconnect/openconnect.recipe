class OpenConnect(AutoPackageRecipe):
    name = 'openconnect'
    version = '2.25'
    buildRequires = [ 'libxml2:devel', 'openssl:devel', 'zlib:devel', 'gcc-c++:runtime',
                      'GConf:devel', 'atk:devel', 'cairo:devel', 'fontconfig:devel',
                      'freetype:devel', 'glib:devel', 'gtk:devel', 'pango:devel',
                      'libproxy:devel', 'pkgconfig:devel' ]
    def setup(r):
        r.addArchive('ftp://ftp.infradead.org/pub/openconnect/')
        r.Make()
        r.MakeInstall()

        r.Install('openconnect.8', '%(mandir)s/man8/', mode = 0644)

        
