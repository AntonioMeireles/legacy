loadSuperClass('gnomepackage.recipe')
class mailnotification(GnomePackageRecipe):
    buildRequires = [ 'alsa-lib:devel', 'atk:devel', 'audiofile:devel', 'cairo:devel', 'esound:devel', 'fontconfig:devel', 'freetype:devel', 'gcc:devel', 'glib:devel', 'libpng:devel', 'openssl:devel', 'pango:devel', 'desktop-file-utils:runtime']
    name = "d4x"
    version = "2.5.5"

    externalArchive = 'http://www.krasu.ru/soft/chuchelo/files/%(name)s-%(version)s.tar.bz2'

    def unpack(r):
	GnomePackageRecipe.unpack(r)
        r.macros.optflags = '-g -Os'
        r.addPatch("d4x-2.5.5-stdint.patch")

    def install(r):
        GnomePackageRecipe.install(r)    
        r.addSource('d4x.desktop')
        r.Desktopfile('d4x.desktop')
