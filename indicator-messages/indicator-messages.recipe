class IndicatorMessages(AutoPackageRecipe):
    name = 'indicator-messages'
    version = '0.1.3'
 
    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel', 'dbus:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel', 'gtk:devel', 'indicator-applet:devel', 'libX11:devel', 'libXrender:devel', 'libpng:devel', 'libxcb:devel', 'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'python:bin', 'xcb-util:devel', 'zlib:devel']
 
    def unpack(r):
        r.addArchive('https://edge.launchpad.net/ubuntu/jaunty/+source/indicator-messages/%(version)s-0ubuntu1/+files/%(name)s_%(version)s.orig.tar.gz')

        #r.addArchive('http://launchpad.net/%(name)s/0.1/%(version)s/+download/')
        r.Replace('-Bsymbolic-functions','','src/Makefile.*')
