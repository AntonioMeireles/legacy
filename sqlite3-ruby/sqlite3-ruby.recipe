class Sqlite3Ruby (PackageRecipe):
	name = 'sqlite3-ruby'
	version = '1.1.0'
	buildRequires = [
		'sqlite:devel',
		'ruby:runtime'
	]

	def setup(r):
		r.addArchive('http://rubyforge.org/frs/download.php/3089/%(name)s-%(version)s.tar.bz2')
		r.Run('ruby setup.rb config')
		r.Run('ruby setup.rb setup')
		r.Run('ruby setup.rb install --prefix="%(destdir)s"')
