class rAAPluginSearch(PackageRecipe):

   buildRequires = [ 'CherryPy:python', 'TurboGears:python', 'raa:python', 'python-setuptools:python' ]

   name = 'raa-plugin-search'
   version = '0.1'

   def setup(r):
      r.addArchive('%(name)s-%(version)s.tar.bz2')
      r.PythonSetup()
      r.Move('%(libdir)s/python2.4/site-packages/rPath/search',
        '%(libdir)s/raa/rPath/')
      r.Remove('%(libdir)s/python2.4/site-packages/rPath/*')
      r.Requires('raa:python','%(libdir)s/raa/rPath/search')
      r.Requires('raa-plugin-rPath:lib','%(libdir)s/raa/rPath/search')
