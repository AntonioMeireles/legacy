loadSuperClass('xorgpackage.recipe')
class LibXFixes(XorgPackageRecipe):
    name = 'libXfixes'
    version = '4.0.3'
    component = 'lib'

    buildRequires = [ 'fixesproto:devel','xextproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('fixesproto:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xfixes.pc')
