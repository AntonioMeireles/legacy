class Eiskaltdcpp(CPackageRecipe):
    name = 'eiskaltdcpp'
    version = '2.0.2'
 
    buildRequires = ['aspell:devel', 'bzip2:devel', 'cmake:runtime', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel', 'libXinerama:devel', 'libXrandr:devel', 'libXrender:devel', 'libpng:devel', 'libstdc++:devel', 'libupnp:devel', 'openssl:devel', 'pkgconfig:devel', 'qt4-core:devellib', 'qt4-gui:devellib', 'qt4:devel', 'qt4:runtime', 'subversion:runtime', 'zlib:devel']
 
    def setup(r):
        r.addArchive('http://eiskaltdc.googlecode.com/files/')
        r.CMake()
        r.Make()
        r.MakeInstall()
