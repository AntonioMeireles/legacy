class Eiskaltdcpp(CPackageRecipe):
    name = 'eiskaltdcpp'
    version = '2.2.3'
 
    buildRequires = ['aspell:devel', 'bzip2:devel', 'cmake:runtime', 'dbus:devel', 'desktop-file-utils:runtime', 'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:runtime', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel', 'libXinerama:devel', 'libXrandr:devel', 'libXrender:devel', 'libpng:devel', 'libstdc++:devel', 'libupnp:devel', 'openssl:devel', 'pkgconfig:devel', 'qt4-core:devellib', 'qt4-gui:devellib', 'qt4:devel', 'qt4:runtime', 'subversion:runtime', 'zlib:devel', 'boost:devel', 'git:runtime', 'libXScrnSaver:devel', 'libXcomposite:devel', 'libXcursor:devel', 'libXft:devel', 'libXi:devel', 'libXpm:devel', 'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel', 'libidn:devel', 'phonon:devel', 'qt4-sql:mysql', 'qt4-sql:odbc', 'qt4-sql:psql', 'qt4-sql:sqlite']
 
    def setup(r):
        r.addArchive('http://eiskaltdc.googlecode.com/files/')
        r.CMake()
        r.Make()
        r.MakeInstall()
        r.Replace('/usr/bin/php5', '/usr/bin/php', '/%(datadir)s/eiskaltdcpp/examples/xmms2_audacious2.ru_RU.UTF-8.php')
        r.Replace('/usr/bin/php5', '/usr/bin/php', '/%(datadir)s/eiskaltdcpp/examples/commands.ru_RU.UTF-8.php')
