class LibNL(CPackageRecipe):
    name = 'libnl'
    version = '1.0_pre5'
    
    buildRequires = [ 'glibc:devel' ]
    
    def setup(r):
        r.addArchive('http://people.suug.ch/~tgr/libnl/files/%(name)s-1.0-pre5.tar.gz')
        r.Replace('-o root -g root','','lib/Makefile','include/Makefile')
        r.addPatch('libnl-64bit.patch')
        r.addSource('libnl-1.pc')
        r.Configure()
        r.Make()
        r.MakeInstall()
        r.Install('libnl-1.pc','%(libdir)s/pkgconfig/')
