loadRecipe('gnomepackage.recipe')
class Gnomemeeting(GnomePackageRecipe):
    
    buildRequires = [ 'gtk:devel', 'GConf:devel', 'openh323:devel',
                      	'libgnomeui:devel', 'libgnome:devel',
                	'pwlib:devel', 'libxml2:devel', 'SDL:devel',
        	        'alsa-lib:devel', 'intltool:runtime',
	                'gettext:runtime', 'scrollkeeper:runtime', 
			'ORBit2:devel', 'atk:devel', 'audiofile:devel',
			'cairo:devel', 'esound:devel', 'evolution-data-server:devel',
			'fontconfig:devel', 'freetype:devel', 'gcc:devel',
			'glib:devel', 'gnome-keyring:devel', 'gnome-vfs:devel',
			'howl:devel', 'libart_lgpl:devel', 'libbonobo:devel',
			'libbonoboui:devel', 'libgnomecanvas:devel', 'libpng:devel',
			'pango:devel', 'popt:devel']


    extraConfig = ''
                      
    if Use.ldap:
        buildRequires.append('openldap:devel')
        extraConfig += ' --with-openldap-libs=%(libdir)s'
    if Use.ssl:
        buildRequires.append('openssl:devel')
        extraConfig += ' --with-openssl-libs=%(libdir)s'
        
    name = 'gnomemeeting'
    version = '1.2.1'

    extraConfig = '--with-ptlib-includes=%(includedir)s/ptlib '\
                  '--with-openh323-includes=%(includedir)s/openh323 '\
                  '--with-ptlib-libs=%(libdir)s '\
                  '--with-openh323-libs=%(libdir)s'
                  
    docs = []

