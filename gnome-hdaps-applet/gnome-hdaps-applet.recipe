class GnomeHdapsApplet(CPackageRecipe):
      buildRequires = ['pkgconfig:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel', 'gnome-panel:devel', 'gnome-panel:devellib', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'pango:devel', 'popt:devel', 'zlib:devel', 'GConf:devellib', 'glib:devellib', 'libpng:devellib', 'atk:devellib', 'libbonoboui:devellib', 'gnome-vfs:devellib', 'libgnomecanvas:devellib', 'libgnomeui:devellib', 'cairo:devellib', 'gtk:devellib', 'libbonobo:devellib', 'libgnome:devellib', 'ORBit2:devellib', 'gnome-keyring:devellib', 'libxml2:devellib', 'libXau:devellib', 'libXdmcp:devellib']

      name = 'gnome-hdaps-applet'
      version = '20060120'

      def setup(r):
            r.addArchive('http://www.dresco.co.uk/hdaps/', dir='%(name)s-%(version)s')
            r.Run('gcc $(pkg-config --cflags --libs libpanelapplet-2.0) -o gnome-hdaps-applet gnome-hdaps-applet.c', dir = '.')
            r.Install('gnome-hdaps-applet', '%(bindir)s/')
            r.Install('*.png', '/usr/share/pixmaps/gnome-hdaps-applet/')
            r.Install('GNOME_HDAPS_StatusApplet.server', '/usr/lib/bonobo/servers/')
