class Libxslt(AutoPackageRecipe):
    name = 'libxslt'
    version = '1.1.24'

    buildRequires = [ 'python:runtime', 'python:devel', 'zlib:devel',
        'libxml2:devel', 'libgpg-error:devel',
        'libgcrypt:devel', 'perl:runtime', ]

    def unpack(r):
        r.addArchive('ftp://xmlsoft.org/libxml2/')

        # RPL-2709 CVE-2008-2935 oCERT-2008-009
        r.addPatch('http://www.ocert.org/patches/exslt_crypt.patch')
