loadRecipe('gnomepackage.recipe')
class Libxslt(GnomePackageRecipe):
    name = 'libxslt'
    version = '1.1.17'
#    makeInstallArgs = 'DESTDIR=%(destdir)s '



    buildRequires = [ 'python:runtime', 'python:devel', 'zlib:devel',
        'libxml2:devel', 'libxml2:python', 'perl:runtime',
        'libgcrypt:devel', 'libgpg-error:devel']
    
    extraConfig = GnomePackageRecipe.extraConfig	      


    def setup(r):
        r.Run(""" 
        sed -i -e 's|$(libdir)/libxslt-plugins|$(DESTDIR)$(libdir)/libxslt-plugins|' libxslt/Makefile.in
        """)
        GnomePackageRecipe.setup(r)

