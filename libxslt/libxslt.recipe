class Libxslt(AutoPackageRecipe):
    name = 'libxslt'
    version = '1.1.15'

    buildRequires = [ 'python:runtime', 'python:devel', 'zlib:devel',
                      'libxml2:devel', 'libxml2:python' ]

    def unpack(r):
        r.addArchive('http://xmlsoft.org/sources/%(name)s-%(version)s.tar.gz')
