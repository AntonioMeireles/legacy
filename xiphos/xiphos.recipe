class Xiphos(AutoPackageRecipe):
    name = 'xiphos'
    version = '3.1.2'

    buildRequires = [
        'GConf:devel',
        'ImageMagick:devel',
        'ORBit2:devel',
        'atk:devel',
        'bzip2:devel',
        'cairo:devel', 
        'dbus-glib:devel', 'desktop-file-utils:runtime',
        'expat:devel',
        'fontconfig:devel', 'freetype:devel',
        'gettext:runtime', 'gtkhtml:devel', 'glib:devel',
        'gnome-doc-utils:devel', 'gnome-doc-utils:runtime',
        'gnome-keyring:devel', 'gnome-vfs:devel', 'gtk:devel',
        'intltool:runtime',
        'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXext:devel', 
        'libXrender:devel', 'libXt:devel', 'libart_lgpl:devel',
        'libbonobo:devel',  'libbonoboui:devel', 'libglade:devel',
        'libgnome:devel', 'libgnomecanvas:devel', 'libgnomeprint:devel',
        'libgnomeprintui:devel', 'libgnomeui:devel', 'libgsf:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel', 'libtiff:devel',
        'libtool:devel', 'libxcb:devel', 'libxml2:devel',
        'nspr:devel',
        'pango:devel', 'pixman:devel', 'pkgconfig:devel', 'popt:devel',
        'rarian:devel', 'rarian:runtime', 
        'sword:devel',
        'which:runtime',
        'xcb-util:devel',
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/gnomesword/%(name)s-%(version)s.tar.gz')

    def configure(r):
        r.Configure(' --without-gecko')

