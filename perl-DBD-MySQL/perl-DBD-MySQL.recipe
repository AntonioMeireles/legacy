class PerlDBDMySQL(CPANPackageRecipe, CPackageRecipe):
    name = 'perl-DBD-MySQL'
    version = '4.003'
    upstreamname = 'DBD-mysql'

    buildRequires = [ 'mysql:devel', 'mysql:runtime', 'perl-DBI:perl',
                      'zlib:devel',  'openssl:devel' ]

    extraConfig = '--ssl'
