class Liblastfm(AutoPackageRecipe):
    name = 'liblastfm'
    revision = '2010.06.08'
    version = '0.3.1+' + revision
 
    buildRequires = ['fftw:devel', 'libsamplerate:devel', 'libstdc++:devel', 'qt4-core:devellib', 'qt4-sql:devellib', 'qt4:devel',
                     'ruby:runtime']
 
    def unpack(r):
        r.addGitSnapshot('http://github.com/mxcl/liblastfm.git')

    def configure(r):
        r.ManualConfigure('--release --prefix %(prefix)s')
