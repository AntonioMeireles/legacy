class Libopenspc(CPackageRecipe):
    name = 'libopenspc'
    version = '0.3.99a'
 
    buildRequires = ['nasm:runtime', 'zlib:devel']
 
    def setup(r):
        r.addArchive('ftp://ftp.freebsd.org/pub/FreeBSD/ports/local-distfiles/kwm/libopenspc-0.3.99a.tar.gz')
	if Arch.x86:
           r.macros.cflags = '-O2 -m32'
  	else:
           r.macros.cflags = '-02 -m64'
        r.Configure()
        r.Make()
        r.MakeInstall()
