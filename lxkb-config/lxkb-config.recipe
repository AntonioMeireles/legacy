import datetime
class LxkbConfig(AutoPackageRecipe):
    name = 'lxkb-config'
    tag = '12fd423c'
    version = '0.9' + '+' + tag + '+' + datetime.date.today().strftime("%Y.%m.%d")
 
    buildRequires = [
        'atk:devel', 
        'cairo:devel', 
        'desktop-file-utils:runtime', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gdk-pixbuf:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'gtk:devel', 
        'intltool:runtime',
        'libpng:devel', 
        'libxml2:devel', 
        'pango:devel',
        'xkeyboard-config:devel',
            ]
 
    def unpack(r):
        r.macros.ldflags += ' -L%(datadir)s/X11/xkb/'
        r.addGitSnapshot('https://github.com/azubieta/lxkb_config.git',
                         tag = r.tag)

        # Affects the issue: https://github.com/azubieta/lxkb_config/issues/5
        # r.Run('./bootstrap')
