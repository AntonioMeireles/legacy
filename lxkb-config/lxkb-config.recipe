import datetime
class LxkbConfig(AutoPackageRecipe):
    name = 'lxkb-config'
    tag = '4d07331f'
    version = '0.9' + '+' + tag + '+' + datetime.date.today().strftime("%Y.%m.%d")
 
    buildRequires = [
        'atk:devel', 
        'cairo:devel', 
        'fontconfig:devel', 
        'freetype:devel', 
        'desktop-file-utils:runtime', 
        'gettext:runtime', 
        'intltool:runtime',
        'gdk-pixbuf:devel', 
        'glib:devel', 
        'gtk:devel', 
        'libpng:devel', 
        'libxml2:devel', 
        'pango:devel'
            ]
 
    def unpack(r):
        r.addGitSnapshot('https://github.com/azubieta/lxkb_config.git',
                         tag = r.tag)
