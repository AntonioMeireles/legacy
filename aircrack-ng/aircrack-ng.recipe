class AirCrackNG(CPackageRecipe):
    name = 'aircrack-ng'
    version = '0.9.1'

    def setup(r):
        r.addArchive('http://download.aircrack-ng.org/')
        r.macros.makeoptions = 'destdir="%(destdir)s" prefix="%(prefix)s" mandir="%(mandir)s/man1"'
        r.Make('%(makeoptions)s')
        r.MakeInstall('%(makeoptions)s')
