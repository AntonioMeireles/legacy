loadSuperClass('cpanpackage.recipe', label='conary.rpath.com@rpl:devel')
class Gtk2TrayIcon(CPANPackageRecipe):
    name='perl-Gtk2-TrayIcon'
    version='0.03'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'glibc:devel', 'gtk:devel',
        'libXrender:devel', 'libpng:devel', 'pango:devel', 'zlib:devel' ]

    def post(r):
        for i in r.buildRequires:
            r.Requires(i, r"\.pm")
        CPANPackageRecipe.post(r)

