class PodBrowser(PackageRecipe):

    buildRequires = [ ]

    name = 'podbrowser'
    version = '0.05'

    def setup(r):
	r.addArchive('http://jodrell.net/files/podbrowser/%(name)s-%(version)s.tar.gz')
	r.Replace('\/usr\/local','%(prefix)s','Makefile')
	r.Make()
	r.Replace('%(prefix)s','%(destdir)s/%(prefix)s','Makefile')
	r.MakeInstall()

	r.Requires('perl-gtk:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-glib:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-ExtUtils-PkgConfig:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-ExtUtils-Depends:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-Gtk2-GladeXML:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-Gtk2-PodViewer:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-Pod-Simple:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-IO-stringy:runtime','%(bindir)s/podbrowser')
	r.Requires('perl-gettext:runtime','%(bindir)s/podbrowser')

