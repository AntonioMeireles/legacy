class Aqbanking(AutoPackageRecipe):
    name = 'aqbanking'
    version = '2.3.3'
    buildRequires = [ 
        'atk:devel',
        'cairo:devel',
        'expat:devel',
        'fontconfig:devel',
        'freetype:devel',
        'gettext:runtime',
        'glib:devel',
        'gtk:devel',
        'gwenhywfar:devel',
        'gwenhywfar:runtime',
        'libchipcard3:devel',
        'libglade:devel',
        'libofx:devel',
        'libpng:devel',
        'libstdc++:devel',
        'libX11:devel',
        'libXau:devel',
        'libXdmcp:devel',
        'libxml2:devel',
        'libXrender:devel',
        'ktoblzcheck:devel',
        'pango:devel',
        'pkgconfig:devel',
        'zlib:devel'
    ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/aqbanking/')
    def configure(r):
        r.Configure(' --disable-qt3' 
            ' --with-frontends="cbanking g2banking"')
