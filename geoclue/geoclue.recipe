class Geoclue(AutoPackageRecipe):
    name = 'geoclue'
    version = '20090820'
 
    buildRequires = [
        'GConf:devel',
        'NetworkManager:devel',
        'ORBit2:devel',
        'cairo:devel',
        'dbus-glib:devel',
        'dbus-glib:runtime',
        'dbus:devel',
        'fontconfig:devel',
        'freetype:devel',
        'gettext:devel',
        'gettext:runtime',
        'gnome-common:devel',
        'gnome-common:runtime',
        'gnutls:devel',
        'gtk-doc:devel',
        'gtk-doc:runtime',
        'libXrender:devel',
        'libgcrypt:devel',
        'libgpg-error:devel',
        'libsoup:devel',
        'libtool:devel',
        'libtool:runtime',
        'libxcb:devel',
        'libxml2:devel',
        'libxslt:runtime',
        'python:bin',
        'zlib:devel',
        ]
 
    def unpack(r):
        r.addGitSnapshot('git://anongit.freedesktop.org/git/geoclue')

    def configure(r):
        extraConfig = (
            '--enable-gtk=yes'
            '--enable-conic=yes'
            '--enable-networkmanager=yes'
            '--enable-gsmloc=yes'
            '--enable-gypsy=yes'
            '--enable-gpsd=yes'
            '--enable-skyhook=yes')

	r.Configure(configureName='autogen.sh')
