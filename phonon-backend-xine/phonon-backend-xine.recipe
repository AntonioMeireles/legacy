loadSuperClass('cmakepackage')
class PhononBackendXine(CMakePackageRecipe):

    name = 'phonon-backend-xine'
    version = '4.4.4'

    buildRequires = [
        'automoc:runtime', 'libstdc++:devel', 'libxcb:devel', 'phonon:devel',
        'qt4:devel', 'xine-lib:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://kde/stable/phonon/phonon-backend-xine/%(version)s/src/')

