class MplayerPlugin(AutoPackageRecipe):
    name = 'mplayerplug-in'
    version = '3.50'

    buildRequires = [ 'pkgconfig:devel', 'atk:devel', 'xulrunner-1.8-compat:devel',
                      'cairo:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
                      'glibc:devel', 'gtk:devel', 'libgcc:devellib', 'libpng:devel',
                      'libstdc++:devel', 'nspr:devel', 'pango:devel', 'gettext:runtime',
                      'zlib:devel', 'gawk:runtime','expat:devel', 'libICE:devel',
                      'libSM:devel', 'libXext:devel', 'libXpm:devel', 'libXt:devel',
                      # for the tag scripts
                      'firefox:runtime', 'GConf:runtime'
                      ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/%(name)s-%(version)s.tar.gz')
        r.addPatch('remove-m3u.patch')

    def policy(r):
        r.TagSpec("firefox-xpt-component", '%(libdir)s/mozilla/plugins/*.xpt')
        r.ComponentSpec("runtime", "%(libdir)s/mozilla.*")

        r.Requires('mplayer:runtime', '%(libdir)s/mozilla/plugins/mplayerplug-in-qt.so')
        r.Requires('mozilla-filesystem:runtime', '%(libdir)s/mozilla/')
