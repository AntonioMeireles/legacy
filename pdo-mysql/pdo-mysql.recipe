class PdoMysql(AutoPackageRecipe):
    name = 'pdo-mysql'
    version = '1.0.2'

    buildRequires = [
        'mysql:devel', 'openssl:devel', 'zlib:devel', 'php:runtime', 'php:devel', 'autoconf:runtime',
        ]

    def unpack(r):
        r.addSource('http://pecl.php.net/get/PDO_MYSQL-%(version)s.tgz')
        r.Run("""pecl bundle PDO_MYSQL-%(version)s.tgz
mv PDO_MYSQL/* .
pecl build package.xml""")
        r.addSource('pdo-mysql.ini')
        r.Install('pdo-mysql.ini', '%(sysconfdir)s/php.d/')
    def makeinstall(r):
        r.MakeInstall(rootVar='INSTALL_ROOT')
