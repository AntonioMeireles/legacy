loadRecipe('gnomepackage.recipe')
class nvclock(GnomePackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "nvclock"
    version = "0.7"

    def setup(r):
        r.mainDir('%(name)s%(version)s')
        r.addArchive('http://www.linuxhardware.org/%(name)s/%(name)s%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeDirs('%(bindir)s')
        r.MakePathsInstall()

#       Here are the docs

        r.Doc('ABOUT', 'AUTHORS', 'COPYING', 'FAQ',
              'NEWS', 'README')
