class Facter(PackageRecipe):
    name = 'facter'
    version = '1.3.7'

    buildRequires = ['ruby:runtime', ]

    def setup(r):
        r.addArchive('http://reductivelabs.com/downloads/%(name)s/')
        r.Run('DESTDIR=%(destdir)s ruby ./install.rb')
