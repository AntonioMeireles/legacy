--- rules/rules.d/60-persistent-storage.rules.orig	2009-12-04 13:47:21.753003437 +0000
+++ rules/rules.d/60-persistent-storage.rules	2009-12-04 13:46:51.606128243 +0000
@@ -57,7 +57,9 @@ ENV{DEVTYPE}=="partition", ENV{ID_PATH}=
