#!/bin/bash

if [ $# -lt 2 ]; then
    echo "not enough arguments: $0 $*" >&2
    exit 1
fi

type="$1"
shift
action="$1"
shift

case $type in
    files)
        case $action in
	    update)
		echo 'restarting udevd'
		pid=$(/sbin/pidof -c udevd)
		if [ -n "$pid" ]; then
		    kill $pid
		    /sbin/udevd -d
		fi

		;;
	    remove)
		pid=$(/sbin/pidof -c udevd)
		if [ -n "$pid" ]; then
		    kill $pid
                 # /sbin/udevd -d
		fi
		;;
	esac
esac

exit 0
