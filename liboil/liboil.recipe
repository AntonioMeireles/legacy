class LibOil(AutoPackageRecipe):

    buildRequires = [ 'pkgconfig:devel' ]
    name = 'liboil'
    version = '0.3.11'

    def unpack(r):
        r.macros.mflags = ''
        r.addArchive('http://liboil.freedesktop.org/download/%(name)s-%(version)s.tar.gz')
