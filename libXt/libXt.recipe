loadSuperClass('xorgpackage.recipe')
class LibXt(XorgPackageRecipe):
    name = 'libXt'
    version = '1.0.5'
    component = 'lib'

    buildRequires = [ 'libICE:devel', 'libSM:devel', 'xproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('libSM:devel', 'libX11:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xt.pc')
