loadSuperClass('kdecorepackage.recipe')
class kOffice(kdeCorePackageRecipe):

    name = 'koffice'
    version = '2.0.0'

    buildRequires = [
        'boost:devel', 'eigen2:devel', 'exiv2:devel', 'glew:devel', 'gmm:devel',
        'GraphicsMagick:devel', 'gsl:devel', 'ilmbase:devel', 'lcms:devel',
        'libjpeg:devel', 'libkdcraw:devel', 'libtiff:devel', 'libwpd:devel',
        'libxml2:devel', 'libxslt:devel', 'OpenEXR:devel', 'OpenGTL:devel',
        'poppler-qt4:devel', 'poppler:devel', 'PyQt4:python', 'python:devel',
        'qca2:devel', 'qimageblitz:devel', 'wv2:devel'
    ]

    apps = [
        'karbon',
        'kchart',
        'kpresenter',
        'krita',
        'kspread',
        'kword',
    ]
    modules = []
    for app in apps:
        modules.append((app, app, 'filters/%s' % app), )

    modules.append('kplato', )

    modules.append(('koffice-common', '.'), )

    def unpack(r):

        r.addArchive('mirror://kde/stable/koffice-%(version)s/src/')

    def policy(r):

        r.PackageSpec('koffice-common', '%(thisdocdir)s/')

