class EventMachine(CPackageRecipe):
    name = 'eventmachine'
    version = '0.10.0'
    fileNum = '28958'

    buildRequires = [
        'libstdc++:devel',
        'openssl:devel',
        'ruby:devellib',
        'ruby:runtime',
      ]

    def setup(r):
        r.macros.filenum = r.fileNum
        r.addArchive('http://rubyforge.org/frs/download.php/%(filenum)s/%(name)s-%(version)s.tar.gz')
        r.Run('ruby setup.rb config')
        r.Run('ruby setup.rb setup')
        r.Run('ruby setup.rb install --prefix=%(destdir)s')
