class SMPlayer(CPackageRecipe):

    name = 'smplayer'
    version = '0.5.62'

    buildRequires = [
        'desktop-file-utils:config', 'gtk:config', 'libstdc++:devel',
        'qt4:devel'
    ]

    def setup(r):

        r.addArchive('mirror://sourceforge/smplayer/')

        r.macros.themes_version = '0.1.14'
        r.addArchive(
            'mirror://sourceforge/smplayer'
            '/smplayer-themes-%(themes_version)s.tar.bz2', dir='%(maindir)s/'
        )

        r.Replace('^DOC_PATH=.*', 'DOC_PATH=%(thisdocdir)s/', 'Makefile')

        r.Make('PREFIX=%(prefix)s/ QMAKE=qmake-qt4 LRELEASE=lrelease-qt4')

        r.MakeInstall('PREFIX=%(prefix)s/')

        # Install themes
        r.MakeInstall(
            'PREFIX=%(prefix)s/', dir='smplayer-themes-%(themes_version)s'
        )

        r.Requires('mplayer:runtime', '%(bindir)s/smplayer')

