class libindicator(AutoPackageRecipe):
    name = 'libindicator'
    version = '0.2.1'
    buildRequires = ['gtk:devel'] 
 
    def unpack(r):
        r.addArchive('http://launchpad.net/%(name)s/%(major_version)s/%(version)s/+download/')

    def configure(r):
        r.Configure(' --disable-gobject-introspection')
