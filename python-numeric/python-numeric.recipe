class PythonNumeric(PackageRecipe):
   buildRequires = [ 'python-setuptools:python', 'Pyrex:python',
        'coreutils:runtime', 'glibc:devel' ]
        
   name = "python-numeric"
   version = "1.0b1"
   def setup(r):
        r.addArchive('http://dl.sf.net/numpy/numpy-%(version)s.tar.gz')
        r.PythonSetup()
