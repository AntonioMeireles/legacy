class GdataPythonClient(PackageRecipe):

    name = 'gdata-python-client'
    version = '2.0.10'

    buildRequires = ['python-setuptools:python', 'cElementTree:python', 'python-twisted:python', 'python:devel', 'simplejson:python']

    def setup(r):
        r.addArchive('http://gdata-python-client.googlecode.com/files/gdata-%(version)s.tar.gz')
        r.PythonSetup()
