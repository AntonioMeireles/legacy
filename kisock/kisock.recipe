loadInstalled('python=conary.rpath.com@rpl:1')
class Kisock(BuildPackageRecipe):
    name = 'kisock'
    version = '0.1.0'

    buildRequires = [ 'dnspython:python', ]

    def setup(r):
        r.macros.sitepkgs = Python.sitepkgs
        r.addArchive('ftp://download.rpath.com/kisock/')
        r.Make()
        r.MakeInstall()

        r.PackageSpec('pysockey', '%(sitepkgs)s/pysockey.*')
        r.PackageSpec('botsocks', '%(sitepkgs)s/botsocks.*')

