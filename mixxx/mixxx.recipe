class Mixxx(CPackageRecipe):
    name = 'mixxx'
    version = '1.10.0'
 
    buildRequires = [
        'Mesa:devel', 
        'flac:devel', 
        'desktop-file-utils:runtime',
        'libid3tag:devel', 
        'libmad:devel', 
        'libogg:devel', 
        'libshout:devel', 
        'libsndfile:devel', 
        'libstdc++:devel', 
        'libvorbis:devel', 
        'portaudio:devel', 
        'portmidi:devel', 
        'qt4-core:devellib', 
        'qt4-gui:devellib', 
        'qt4-sql:devellib', 
        'qt4:devel', 
        'taglib:devel',
            ]
 
    def setup(r):
        r.addArchive('http://downloads.mixxx.org/mixxx-1.10.0/mixxx-1.10.0-src.tar.gz')
        r.macros.ldflags += '-L%(libdir)s/xorg.mesa.3d/'
        r.Make('DESTDIR=%(destdir)s PREFIX=%(prefix)s install_root=%(destdir)s/%(prefix)s', makeName='scons')
        r.Make('DESTDIR=%(destdir)s PREFIX=%(prefix)s install_root=%(destdir)s/%(prefix)s install', makeName='scons')
