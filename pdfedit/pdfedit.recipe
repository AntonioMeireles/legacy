class Pdfedit(CPackageRecipe):
    name = 'pdfedit'
    version = '0.4.3'
 
    buildRequires = ['boost:devel', 'desktop-file-utils:runtime', 'docbook-utils:runtime', 'docbook-xsl:data', 'freetype:devel', 'freetype:runtime', 'libICE:devel', 'libXext:devel', 'libstdc++:devel', 'libxslt:runtime', 'perl:runtime', 'pkgconfig:devel', 'qt:devel', 'zlib:devel']
 
    def setup(r):
        r.addArchive('mirror://sourceforge/pdfedit/')
	r.addSource('pdfedit.desktop')
	r.Environment('QTDIR', '%(bindir)s')
	r.Configure('--enable-release --enable-user-manual')
	r.Make()
	r.MakeInstall('INSTALL_ROOT=%(destdir)s')

	r.Desktopfile('pdfedit.desktop')
