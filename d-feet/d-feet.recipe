class DFeet(PackageRecipe):

      name = 'd-feet'
      version = '0.1.6'

      buildRequires= [ 'dbus:devel', 'dbus-python:python',
      		       'desktop-file-utils:runtime',
		       'gnome-python-desktop:python',
		       'pkgconfig:devel', 'pygtk:python',
		       'python:devel' ]

      def setup(r):
      	  r.addArchive('http://johnp.fedorapeople.org/')
	  r.Run('python setup.py install --root=%(destdir)s')

