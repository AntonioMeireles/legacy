class Sazanami(BuildPackageRecipe):
	name = 'sazanami'
	version = '20040629'
	component='font'
	buildRequires=['fontconfig:runtime',
		'mkfontdir:runtime']
	def setup(r):
		r.addArchive('http://osdn.dl.sourceforge.jp/efont/10087/'
			'%(name)s-%(version)s.tar.bz2')
		r.MakeDirs('/usr/share/fonts/%(name)s')
		r.Install('%(name)s-gothic.ttf',
			'/usr/share/fonts/%(name)s')
		r.Install('%(name)s-mincho.ttf',
			'/usr/share/fonts/%(name)s')
