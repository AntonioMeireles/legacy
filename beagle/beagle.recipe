loadRecipe('gnomepackage.recipe', label='conary.specifix.com@spx:devel')
class Beagle(GnomePackageRecipe):


    buildRequires = [ 'dbus:devel', 'gecho-sharp:devel',
			'gtk-sharp:devel', 'mono:devel', 'evolution-sharp:devel',
			'gmime:devel', 'desktop-file-utils:runtime' ]

    name = 'beagle'
    version = '0.0.6'

    def setup(r):
	r.addSource('beagle.sh')
	r.addSource('best.desktop')
        r.Configure('--enable-epiphany-extension --enable-maintainer-mode --with-mozilla=mozilla')
        r.Make()
        r.MakeInstall()
	r.Install('beagle.sh', '/etc/X11/xinit/xinitrc.d/beagle.sh')
	r.Install('images/dog.png', '/usr/share/pixmaps/best.png')
	r.Desktopfile('best.desktop')
	r.MakeDevices('/dev/inotify','c',10,63,'root','root',0644)
