class Galculator(AutoPackageRecipe):
    name = 'galculator'
    version = '2.0'
 
    buildRequires = [
        'atk:devel', 
        'cairo:devel', 
        'desktop-file-utils:runtime', 
        'flex:runtime', 
        'fontconfig:devel', 
        'freetype:devel', 
        'gdk-pixbuf:devel', 
        'gettext:runtime', 
        'glib:devel', 
        'gtk:devel', 
        'intltool:runtime', 
        'libglade:devel', 
        'libpng:devel', 
        'libxml2:devel', 
        'pango:devel', 
        'pkgconfig:devel',
        ]
 
    def unpack(r):
        r.addArchive('http://prdownloads.sourceforge.net/galculator/galculator-%(version)s.tar.bz2')
