class Raptor(AutoPackageRecipe):

    name = 'raptor'
    version = '1.4.19'

    buildRequires = [
        'curl:devel', 'dmalloc:devel', 'expat:devel', 'flex:runtime',
        'libxml2:devel', 'libxslt:devel', 'm4:runtime', 'openssl:devel',
        'perl:runtime', 'pkgconfig:devel', 'w3c-libwww:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('http://download.librdf.org/source/')

