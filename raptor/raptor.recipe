class liblrdf(PackageRecipe):
    buildRequires = [ 'curl:devel', 'glibc:devel', 'libxml2:devel', 'openssl:devel', 'zlib:devel', 'libxslt:devel' ]
    name = "raptor"
    version = "1.4.7"

    def setup(r):
        r.addArchive('http://download.librdf.org/source/%(name)s-%(version)s.tar.gz')
        r.Configure()
        r.Make()
        r.MakeInstall()
