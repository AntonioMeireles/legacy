class RapTor(AutoPackageRecipe):
    buildRequires = [ 'curl:devel', 'libxml2:devel', 'e2fsprogs:devel',
                      'flex:runtime', 'libxslt:devel', 'openssl:devel',
                      'perl:runtime', 'zlib:devel' ]
    name = "raptor"
    version = "1.4.15"

    def unpack(r):
        r.addArchive('http://download.librdf.org/source/%(name)s-%(version)s.tar.gz')


