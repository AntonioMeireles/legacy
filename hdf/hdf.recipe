class Hdf(AutoPackageRecipe):
    name = 'hdf'
    version = '4.2.6'
 
    buildRequires = ['flex:runtime', 'groff:runtime', 'libjpeg:devel', 'zlib:devel', 'gcc-c++:runtime']
 
    def unpack(r):
        r.addArchive('ftp://ftp.hdfgroup.org/HDF/HDF_Current/src/')
        r.addPatch('hdf-4.2.4-ppc.patch')
        r.addPatch('hdf-4.2.5-maxavailfiles.patch')

    def configure(r):
        r.Configure('--disable-fortran --enable-production --disable-netcdf --includedir=%(includedir)s --libdir=%(libdir)s')
