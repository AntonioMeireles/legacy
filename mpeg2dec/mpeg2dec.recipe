class Mpeg2dec(AutoPackageRecipe):
    name = 'mpeg2dec'
    version = '0.4.1'
 
    buildRequires = ['SDL:devel', 'libICE:devel', 'libSM:devel',
                     'libX11:devel', 'libXext:devel', 'libXv:devel']
 
    def unpack(r):
        r.addArchive('http://libmpeg2.sourceforge.net/files/')
        r.macros.cflags = '-fPIC'
