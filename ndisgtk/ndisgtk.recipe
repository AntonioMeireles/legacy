class ndisgtk(CPackageRecipe):
    buildRequires = [ 'desktop-file-utils:runtime', 'pygobject:python', 'pygtk:python', 'gettext:runtime' ]
    name = "ndisgtk"
    version = "0.6"


    def setup(r):
        r.addArchive('%(name)s_%(version)s.orig.tar.gz')
        r.addPatch('move_sudo.patch')
        r.Make()
        r.MakeInstall()
        r.Requires('gnome-system-tools:runtime', '%(bindir)s/ndisgtk')
