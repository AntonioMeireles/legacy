loadRecipe('gnomepackage')
class EpiphanyExtensions(GnomePackageRecipe):

    buildRequires = [ 'opensp:devel', 'gnome-python:python', 'pygtk:python',
        'gettext:runtime', 'nspr:devel', 'perl:runtime', 'pygobject:python',
        'scrollkeeper:runtime', 'epiphany:devel', 'xulrunner:devel',
        'dbus-glib:devel', 'pcre:devel', 'GConf:runtime','gcc-c++:runtime' ]

    name = 'epiphany-extensions'
    version = '2.18.1'

    extraConfig = '--with-gecko=xulrunner --disable-scrollkeeper'
    extraConfig += ' --with-extensions=actions,adblock,certificates,epilicious,error-viewer,extensions-manager-ui,favicon,gestures,greasemonkey,livehttpheaders,page-info,push-scroller,rss,select-stylesheet,sidebar,smart-bookmarks,tab-groups,tab-states'

    def setup(r):
        GnomePackageRecipe.setup(r)
        r.Requires(exceptDeps=r'soname\:\ ELF32\/libgtkembedmoz\.so\(SysV\ x86\)')
        r.Requires(exceptDeps=r'soname\:\ ELF32\/libxpcom\.so\(SysV\ x86\)')
