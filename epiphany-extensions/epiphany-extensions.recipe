loadRecipe('gnomepackage.recipe')
loadInstalled('mozilla')
class EpiphanyExtensions(GnomePackageRecipe):
    
    buildRequires = [ 'mozilla-nspr:devel', 'mozilla:devel', 'opensp:devel',
       'mozilla:lib', 'gnome-python:python', 'pygtk:python' ]
               
    name = 'epiphany-extensions'
    version = '2.14.1'

    extraConfig = ''


    def setup(r):
        r.disableParallelMake()
        GnomePackageRecipe.setup(r)


    def build(r):
        r.macros.mozver = Mozilla.version
        r.macros.mozilladir = 'mozilla-%(mozver)s'
        r.Requires(rpath='%(libdir)s/%(mozilladir)s')
        GnomePackageRecipe.build(r)

