class ExifTags(CPackageRecipe):
   name = 'exiftags'
   version = '1.01'

   buildRequires = [ 'libjpeg:devel', 'libexif:devel' ]

   def setup(r):
        r.addArchive('http://johnst.org/sw/%(name)s/')
        r.Replace('\/usr\/local', '%(prefix)s', 'Makefile')
        r.Replace('datadir=\$\(DESTDIR\)\$\(prefix\)',
                  'datadir=$(DESTDIR)$(prefix)/share', 'Makefile')
        r.Make()
        r.MakeDirs('%(bindir)s','%(mandir)s/man1')
        r.MakeInstall()
