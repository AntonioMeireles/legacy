class GnomeMplayer(AutoPackageRecipe):
    name = 'gnome-mplayer'
    version = '0.9.6'
    buildRequires = [ 'GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'desktop-file-utils:runtime', 'expat:devel', 'freetype:devel', 'glib:devel', 'gnome-vfs:devel', 'gtk:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'pango:devel', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'gettext:runtime', 'intltool:runtime' ,'alsa-lib:devel', 'libnotify:devel']

    def unpack(r):
        r.addArchive('http://gnome-mplayer.googlecode.com/files/')

    def policy(r):
        r.Requires('$(bindir)s/%(name)s', 'mplayer:runtime')

