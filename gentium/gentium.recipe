class Gentium(PackageRecipe):
    name = 'gentium'
    version = '1.02'

    buildRequires = ['dos2unix:runtime']

    def setup(r):
        # scripted download; see http://scripts.sil.org/cms/scripts/page.php?site_id=nrsi&item_id=gentium
        r.addArchive('Gentium_102_W.zip')
        r.Install('*.TTF', '%(datadir)s/fonts/SIL/gentium/TrueType/')
        r.Run('dos2unix *.txt')
        r.AutoDoc(r'.*\.txt')
        r.TagSpec('x-font', '.*.TTF')
        r.TagSpec('cacheable-font', '.*.TTF')
