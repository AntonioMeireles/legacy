class MetacityThemeClearlooks(PackageRecipe):
    buildRequires = [ ]

    name = 'metacity-theme-clearlooks'
    version = '0.6'
    
    def setup(r):
	r.addArchive('http://umn.dl.sourceforge.net/sourceforge/clearlooks/clearlooks-metacity-%(version)s.tar.gz')

        r.Install('metacity-1/metacity-theme-1.xml',
            '%(datadir)s/themes/Clearlooks/metacity-1/metacity-theme-1.xml')
