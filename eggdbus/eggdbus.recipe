class Eggdbus(AutoPackageRecipe):
    name = 'eggdbus'
    version = '0.5'
 
    buildRequires = ['dbus-glib:devel', 'dbus:devel', 'glib:devel',
                     'gtk-doc:runtime', 'libxslt:runtime', 'pkgconfig:devel', 
                     'autoconf:runtime', 'automake:runtime', 'libtool:runtime',
                     'libxslt:runtime']
 
    def unpack(r):
        r.addArchive('http://cgit.freedesktop.org/~david/eggdbus/snapshot/')
    def configure(r):
        r.Configure("--disable-maintainer-mode --disable-gtk-doc ",configureName="autogen.sh")
