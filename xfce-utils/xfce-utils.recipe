loadSuperClass('xfcepackage.recipe')
class xfceUtils(XfcePackageRecipe):

    name = 'xfce-utils'
    version = '4.8.1'

    XfcePackageRecipe.buildRequires.extend([
        'libxfce4util:devel', 'libxfce4ui:devel'
    ])
    extraConfig = ' --enable-gdm'
    patches = ['hide_xfhelp.diff']
