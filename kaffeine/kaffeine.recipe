loadSuperClass('kdepackage.recipe')
class Kaffeine(kdePackageRecipe):

    name = 'kaffeine'
    version = '0.8.5'

    buildRequires = ['cdparanoia:devel', 'xine-lib:devel', 'libXtst:devel',
        'gcc-fortran:runtime', 'gst-plugins-base:devel',
        'gstreamer:devel', 'libXinerama:devel', 'libxcb:devel',
        'libxml2:devel', 'pcre:devel']

    def unpack(r):
        r.addArchive('mirror://sourceforge/kaffeine/')

    def policy(r):
        r.Remove('/usr/share/mimelnk/application/x-mplayer2.desktop')
