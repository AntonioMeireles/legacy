class mxml(PackageRecipe):
    buildRequires = [ "glibc:devel" ]
    name = "mxml"
    version = "2.2"

    def setup(r):
        r.addArchive('ftp://ftp2.easysw.com/pub/%(name)s/%(version)s/%(name)s-%(version)s.tar.gz')
        r.Configure('--prefix=/usr')
        r.Make()
        r.MakeInstall(rootVar='BUILDROOT')

#       Here are the docs

        r.Doc('ANNOUNCEMENT', 'CHANGES', 'COPYING', 'README')
