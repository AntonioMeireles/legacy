loadSuperClass('kdepackage.recipe')
class kipiPlugins(kdePackageRecipe):

    name = 'kipi-plugins'
    version = '0.1.4'

    buildRequires = [
        'doxygen:runtime', 'exiv2:devel', 'gphoto-suite:devel',
        'graphviz:runtime', 'libexif:devel', 'libgpod:devel',
        'libkexif:devel', 'libkipi:devel', 'libtiff:devel', 'libxml2:devel',
        'libxslt:devel', 'pcre:devel', 'qt:apidox', 'which:runtime'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/kipi/')
        #r.addPatch('kipi-plugins-0.1.3-c_str-fix.patch')
        #r.addPatch('kipi-plugins-0.1.3-ipodexport-fix.patch')

        r.MakeDirs('%(kdehtmldir)s/en')
        r.Replace('if test -n "\$PREFIX" && test ! -d "\$PREFIX" ; then',
                  'if test -n "$PREFIX" && test ! -d "%(destdir)s/$PREFIX" ; then',
                  'admin/doxygen.sh')

    def postInstall(r):

        #r.Make('apidox')
        #r.MakeInstall(installtarget='install-apidox-recurse')
        pass
