loadSuperClass('kdepackage.recipe')
class kipiPlugins(kdePackageRecipe):

    name = 'kipi-plugins'
    version = '0.1.7'

    buildRequires = [
        'exiv2:devel', 'kdepim:devel', 'ktnef:devel', 'libgphoto2:devel',
        'libgpod:devel', 'libkcal:devel', 'libkdcraw:devel', 'libkexiv2:devel',
        'libkipi:devel', 'libtiff:devel', 'libxml2:devel', 'libxslt:devel',
        'pcre:devel', 'which:runtime', 'lcms:devel'
    ]

    def unpack(r):

        r.macros.archive_version = r.version.replace('+', '-')

        r.addArchive('mirror://sourceforge/kipi/')

