loadSuperClass('kdepackage.recipe')
class kipiPlugins(kdePackageRecipe):

    name = 'kipi-plugins'
    version = '0.3.0'

    buildRequires = [
        'gettext:runtime', 'gtk:devel', 'libgpod:devel', 'libjpeg:devel',
        'libkdcraw:devel', 'libkexiv2:devel', 'libkipi:devel', 'libksane:devel',
        'libtiff:devel', 'libXcomposite:devel', 'libXcursor:devel',
        'libXdamage:devel', 'libXfixes:devel', 'libXft:devel', 'libXi:devel',
        'libxkbfile:devel', 'libxml2:devel', 'libXpm:devel',
        'libXScrnSaver:devel', 'libxslt:devel', 'libxslt:runtime',
        'libXt:devel', 'libXtst:devel', 'libXv:devel', 'libXxf86misc:devel',
        'opencv:devel', 'sane-backends:devel'
    ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/kipi/')

