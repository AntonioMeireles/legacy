class PidginOtr(AutoPackageRecipe):
    name = 'pidgin-otr'
    version = '3.1.0'
 
    buildRequires = ['gettext:runtime', 'libgcrypt:devel', 'libgpg-error:devel', 'libotr:devel', 'perl:runtime', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://www.cypherpunks.ca/otr/')
