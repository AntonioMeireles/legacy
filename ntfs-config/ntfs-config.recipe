class NtfsConfig(AutoPackageRecipe):
    name = 'ntfs-config'
    version = '0.5.5'
    buildRequires = [ 'atk:devel', 'cairo:devel', 'desktop-file-utils:runtime',
'expat:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel', 'gtk:devel',
'hal:devel', 'intltool:runtime', 'libXrender:devel', 'libglade:devel', 'libxml2:devel', 'pango:devel', 'perl:runtime',
'pkgconfig:devel', 'zlib:devel' ]


    def unpack(r):
        r.addArchive('http://flomertens.free.fr/ntfs-config/download/')
        #FIXME: Foresight uses a different hal/fdi path than is hardcoded
        #The patch changes it to the path we use <pscott 2007-04-07>
        r.addPatch('fix_hal_fdi_path.patch')
