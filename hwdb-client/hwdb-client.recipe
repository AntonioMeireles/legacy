class HWDBClient(PackageRecipe):

    buildRequires = [ 'desktop-file-utils:runtime', 'gnome-python:python', 'pygobject:python', 'pygtk:python' ]

    name = 'hwdb-client'
    version = '0.6.10'

    def setup(r):
        r.addArchive('%(name)s-%(version)s.tar.bz2')
        for file in [
            'collector.glade',
            'send.glade',
            'ping.wav',
            'sound.wav',
            'questions_en.xml',
            'foresight-art/*',
            ]:
            r.Install(file,'%(datadir)s/%(name)s/')
        r.Install('hwdb.desktop','%(datadir)s/applications/')
        for binfile in [
            'hwdb-gui',
            'hwdb-xml',
            'hwdb-send',
            'hwdb-bastel'
            ]:
            r.Install(binfile,'%(bindir)s/')
        for pyfile in [
            'ClientForm.py',
            '__init__.py',
            'Constants.py'
            ]:
            r.Install(pyfile,'%(prefix)s/lib/python2.4/site-packages/hwdb_client/')

        r.Install('doc/*', '%(datadir)s/gnome/help/')

        r.Requires('fping:runtime', '%(bindir)s/hwdb-gui')
