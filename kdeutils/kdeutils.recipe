loadSuperClass('kdecorepackage')
class kdeUtils(kdeCorePackageRecipe):

    name = 'kdeutils'
    version = '3.5.10'

    verify = False

    # Stops on *.tex compile
    buildAPIDox = False

    buildRequires = [
        'gmp:devel', 'net-snmp:devel', 'python:devel',
        'autoconf:runtime', 'automake:runtime',
    ]

    modules = [
        'ark',
       ('kcharselect', 'charselectapplet'),
        'kcalc',
        'kcharselect',
        'kdelirc',
        'kdessh',
        'kdf',
       ('kdf', 'doc/kinfocenter'),
        'kedit',
        'kfloppy',
        'kgpg',
        'khexedit',
        'kjots',
        'klaptopdaemon',
       ('klaptopdaemon', 'doc/kcontrol'),
        'kmilo',
        'kregexpeditor',
       ('kregexpeditor', 'doc/KRegExpEditor'),
        'ksim',
        'ktimer',
        'kwallet',
        'superkaramba'
    ]

    def unpack(r):
        kdeCorePackageRecipe.unpack(r)
        r.addPatch('python26.patch')


