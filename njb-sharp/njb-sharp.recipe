class NjbSharp(AutoPackageRecipe):
   name = "njb-sharp"
   version = "0.3.0"
   buildRequires = [ 'libnjb:devel', 'libusb:devel', 'mono:devel', 'mono:lib', 'mono:runtime', 'monodoc:runtime', 'pkgconfig:devel' ]

   def unpack(r):
        r.addArchive('http://banshee-project.org/files/%(name)s/')
        r.Environment('MONO_SHARED_DIR', '/tmp')
        r.disableParallelMake()
