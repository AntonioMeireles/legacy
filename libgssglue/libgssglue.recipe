loadRecipe('rpmpackage')
class LibGSSglue(RPMPackageRecipe,AutoPackageRecipe):

    name = 'libgssglue'
    version = '0.1'
    rpmRelease = '5.fc9' 

    buildRequires = [  ]

    rpmPatches = [ 'libgssglue-0.1-gssglue.patch' ]

    def policy(r):
        r.Install('doc/gssapi_mech.conf', '%(sysconfdir)s/gssapi_mech.conf', mode = 0644)

        # avoid file collision with  libgssapi:devel=conary.rpath.com@rpl:2-qa
        r.Remove('%(includedir)s/gssglue/gssapi/gssapi.h')
        # above not enough; policy dep resolution 
        # brings back old :devel ... so we need to get rid of :devellib too
        r.Remove('%(libdir)s/libgssglue.a')
        r.Remove('%(libdir)s/libgssglue.so')
        r.Remove('%(libdir)s/pkgconfig/libgssglue.pc')
