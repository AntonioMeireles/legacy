
loadSuperClass('gnomepackage')
class Clutter(GnomePackageRecipe):

    name = 'clutter'
    version = '0.6.4'
    externalArchive = 'http://www.clutter-project.org/sources/%(name)s/0.6/%(name)s-%(version)s.tar.gz'

    buildRequires = [ 'Mesa:devel', 'libXfixes:devel']

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        r.macros.ldflags += ' -L%(libdir)s/xorg.mesa.3d/ '

