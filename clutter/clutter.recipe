class Clutter(AutoPackageRecipe):
    name = 'clutter'
    version = '0.6.0'

    buildRequires = [ 'Mesa:devel', 'glib:devel', 'gtk:devel', 'libX11:devel',
        'libXau:devel', 'libXdmcp:devel', 'pango:devel', 'pkgconfig:devel' ]

    def unpack(r):
        r.addArchive('http://www.clutter-project.org/sources/%(name)s/0.6/'
                     '%(name)s-%(version)s.tar.bz2')
