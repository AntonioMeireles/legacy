loadRecipe('gnomepackage')
loadRecipe('rpmpackage')
class GnomeSettingsDaemon(RPMPackageRecipe,GnomePackageRecipe):

    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'esound:devel',  'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libXxf86misc:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomekbd:devel', 'libgnomeui:devel', 'libxklavier:devel', 'popt:devel', 'startup-notification:devel', 'dbus-glib:runtime', 'libXrandr:devel', 'pulseaudio:devel', 'libnotify:devel']

    name = 'gnome-settings-daemon'
    version = '2.26.0'
    rpmRelease = '1.fc11'
    rpmPatches = ['gnome-settings-daemon-2.24.0-catch-deviceadded.patch']
    extraConfig = ' --disable-scrollkeeper --disable-update-mimedb --enable-static=no --enable-profiling --disable-esd '

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.Run('autoreconf -f -i')



    def policy(r):
        r.Remove('%(libdir)s/gnome-settings-daemon-2.0/libsound.so', allowNoMatch=True)
        r.Remove('%(libdir)s/gnome-settings-daemon-2.0/sound.gnome-settings-plugin', allowNoMatch=True)
