loadRecipe('gnomepackage')
class GnomeSettingsDaemon(GnomePackageRecipe):

    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel', 'esound:devel',  'gnome-desktop:devel', 'gnome-keyring:devel', 'gnome-vfs:devel', 'gst-plugins-base:devel', 'gstreamer:devel', 'libXxf86misc:devel', 'libart_lgpl:devel', 'libbonobo:devel', 'libbonoboui:devel', 'libglade:devel', 'libgnome:devel', 'libgnomecanvas:devel', 'libgnomekbd:devel', 'libgnomeui:devel', 'libxklavier:devel', 'popt:devel', 'startup-notification:devel', 'dbus-glib:runtime', 'libXrandr:devel', 'pulseaudio:devel', 'libnotify:devel', 'libcanberra:devel', ]

    name = 'gnome-settings-daemon'
    version = '2.29.92'
    extraConfig = ' --disable-scrollkeeper --disable-update-mimedb --enable-static=no --enable-profiling --disable-esd '
    # from ubuntu to make notifications to behave...

    # FIXME
    #patches = [ 'http://patches.ubuntu.com/g/gnome-settings-daemon/extracted/16_use_synchronous_notifications.patch',
    #            # https://bugzilla.gnome.org/show_bug.cgi?id=596136
    #            'osd-rounded-rectangle.patch',
    #            'osd-visual-refresh.patch',
    #            # for new libxklavier (while we don't megabump whole gnome)
    #            'libxklavier-5.patch',
    #            ]
 
    def policy(r):
        r.Remove('%(libdir)s/gnome-settings-daemon-2.0/libsound.so', allowNoMatch=True)
        r.Remove('%(libdir)s/gnome-settings-daemon-2.0/sound.gnome-settings-plugin', allowNoMatch=True)
