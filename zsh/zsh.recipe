class Zsh(AutoPackageRecipe):
    name = 'zsh'
    version = '4.3.10'
 
    buildRequires = ['gdbm:devel', 'libcap:devel', 'libtermcap:devel', 'ncurses:devel', 'tetex:runtime', 
'texi2html:runtime', 'texinfo:runtime']
 
    def unpack(r):
        r.addArchive('mirror://sourceforge/zsh/')
	r.Configure('--without-tcsetpgrp')
