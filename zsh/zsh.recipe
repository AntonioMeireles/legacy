class Zsh(AutoPackageRecipe):
    name = 'zsh'
    version = '4.3.4'

    buildRequires = [ 'libtermcap:devel', 'ncurses:devel', 'tetex:runtime', 'texinfo:runtime' ]
    if Use.pcre:
        buildRequires.append('pcre:devel')

    def unpack(r):
        r.addArchive('http://zsh.open-mirror.com/')

    def configure(r):
        config = '--enable-cap --with-tcsetpgrp'
        if Use.pcre:
            config += ' --enable-pcre'
        r.Configure()

    def policy(r):
        r.ExcludeDirectories(exceptions='%(datadir)s/zsh/site-functions')
