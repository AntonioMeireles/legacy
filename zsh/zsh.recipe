class Zsh(AutoPackageRecipe):
    name = 'zsh'
    version = '4.3.5'

    buildRequires = [ 'libtermcap:devel', 'ncurses:devel', 'tetex:runtime',
        'texinfo:runtime', 'pcre:devel', 'libcap:devel' ]

    def unpack(r):
        r.addArchive('ftp://ftp.zsh.org/pub/')

    def configure(r):
        r.Configure('--enable-cap --with-tcsetpgrp --enable-pcre')

    def policy(r):
        r.Replace('/usr/local/bin/zsh', '%(bindir)s/zsh',
                  '%(datadir)s/zsh/%(version)s/functions/*',
                  allowNoChange=True)
        r.ExcludeDirectories(exceptions='%(datadir)s/zsh/site-functions')
