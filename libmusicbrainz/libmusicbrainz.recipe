class LibMusicBrainz(CPackageRecipe):
    name = 'libmusicbrainz'
    version = '2.1.1'

    buildRequires = [ 'expat:devel', 'glibc:devel', 'libgcc:devellib', 'libstdc++:devel' ]

    def setup(r):
        r.addArchive('ftp://ftp.musicbrainz.org/pub/musicbrainz/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()


