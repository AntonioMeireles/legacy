class ccache(PackageRecipe):
    buildRequires = [ 'glibc:devel' ]
    name = "ccache"
    version = "2.4"

    def setup(r):
        r.macros.cflags += " -O3"
        r.addArchive('http://ccache.samba.org/ftp/%(name)s/%(name)s-%(version)s.tar.gz')

        r.Configure()
        r.Make()
        r.MakeInstall()
