class ccache(AutoPackageRecipe):
    name = 'ccache'
    version = '2.4'

    def unpack(r):
        r.addArchive('http://ccache.samba.org/ftp/%(name)s/')
        r.addSource('ccache-set-paths.sh', dir='%(sysconfdir)s/profile.d/')
        r.addSource('ccache-set-paths.csh', dir='%(sysconfdir)s/profile.d/')

    def policy(r):
        # set up ccache dir and symlink gcc into it
        r.Symlink('/%(bindir)s/ccache', '%(libexecdir)s/ccache/bin/gcc')
        r.Symlink('/%(bindir)s/ccache', '%(libexecdir)s/ccache/bin/g++')
        r.Symlink('/%(bindir)s/ccache', '%(libexecdir)s/ccache/bin/cc')
