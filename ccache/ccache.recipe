class ccache(AutoPackageRecipe):
    name = 'ccache'
    version = '3.1.4'
    buildRequires = ['xz:runtime', 'zlib:devel',]


    def unpack(r):
        r.addArchive('http://samba.org/ftp/%(name)s/%(name)s-%(version)s.tar.xz')
        r.addSource('ccache-set-paths.sh', dir='%(sysconfdir)s/profile.d/',
                    macros = True, mode = 0755)
        r.addSource('ccache-set-paths.csh', dir='%(sysconfdir)s/profile.d/',
                    macros = True, mode = 0755)
        r.Remove('zlib', recursive=True)

    def policy(r):
        r.MakeDirs('%(libdir)s/%(name)s')
        r.MakeDirs('%(localstatedir)s/cache/%(name)s')
        r.SetModes('%(libdir)s/%(name)s', 0770) 
        r.SetModes('%(localstatedir)s/cache/%(name)s', 2770)

        r.Ownership('root', '%(name)s', '%(localstatedir)s/cache/%(name)s')
        r.Group('%(name)s', 9999)
        # set up ccache dir and symlink gcc into it

        if Arch.x86:
            archs = ['i686']
        elif Arch.x86_64:
            archs = ['i686', 'x86_64']

        for n in ['cc', 'gcc', 'g++', 'c++']:
            r.Symlink('%(bindir)s/ccache', '%(libdir)s/%(name)s/' + n)
            for s in ['32', '34', '4' '44']:
                r.Symlink('%(bindir)s/ccache', '%(libdir)s/%(name)s/' + n + s)
            for x in archs:
                r.Symlink('%(bindir)s/ccache', '%(libdir)s/%(name)s/' + x + '%(targetvendor)s-%(targetos)s-'+n)
