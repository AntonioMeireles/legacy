loadSuperClass('xorgpackage')
class LibXp(XorgPackageRecipe):
    name = 'libXp'
    version = '1.0.0'
    component = 'lib'

    buildRequires = [ 'libXext:devel', 'printproto:devel' ]

    def policy(r):
        r.Remove('%(libdir)s/libXp.{a,so}')
        r.Remove('%(libdir)s/pkgconfig/xp.pc')
