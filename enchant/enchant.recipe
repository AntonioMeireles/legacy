class Enchant(PackageRecipe):

    buildRequires = [ 'glib:devel', 'aspell:devel', 'gcc:devel', 'glibc:devel', 'aspell:runtime', 'binutils:runtime', 'gawk:runtime', 'pkgconfig:devel' ]

    name = 'enchant'
    version = '1.1.6'

    def setup(r):
        r.macros.optflags = '-g -Os'
	r.addArchive('http://www.abisource.com/downloads/%(name)s/%(version)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
