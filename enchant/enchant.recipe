class Enchant(CPackageRecipe):

    buildRequires = [ 'glib:devel', 'aspell:devel', 'aspell:runtime', 
                      'pkgconfig:devel', 'libstdc++:devel', 'gcc-c++:runtime' ]

    name = 'enchant'
    version = '1.1.6'

    def setup(r):
        r.macros.optflags = '-g -Os'
	r.addArchive('http://www.abisource.com/downloads/%(name)s/%(version)s/%(name)s-%(version)s.tar.gz')
	r.Configure()
	r.Make()
	r.MakeInstall()
