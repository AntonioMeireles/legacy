class Enchant(AutoPackageRecipe):

    buildRequires = [ 'glib:devel', 'aspell:devel', 'aspell:runtime', 
                      'pkgconfig:devel', 'libstdc++:devel', 'gcc-c++:runtime' ]

    name = 'enchant'
    version = '1.3.0'

    def unpack(r):
        r.macros.optflags = '-g -Os'
	r.addArchive('http://www.abisource.com/downloads/%(name)s/%(version)s/')
    def configure(r):
        r.Configure(' --enable-aspell --enable-myspell --disable-ispell --disable-uspell --disable-hspell --disable-uspell')
