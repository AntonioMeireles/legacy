class ElisaPluginsGood(BuildPackageRecipe):
    name = 'elisa-plugins-good'
    version = '0.5.20'
 
    buildRequires = [ 'python-setuptools:python',  'pyxdg:python', 'PIL:python', 'dbus-python:python', 'gnome-python-desktop:python', 'gnome-python:python', 'gst-python:python', 'pigment-python:python', 'pygobject:python', 'pygtk:python', 'python-twisted-web:python', 'python-twisted:python', 'python:devel', 'elisa:python', 'python-zopeinterface:python' ]
 
    def setup(r):
        r.addArchive('http://elisa.fluendo.com/download/elisa/')
        r.Run('python setup.py build')
        r.Run('python setup.py install --root=%(destdir)s')
