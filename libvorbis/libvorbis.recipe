loadSuperClass('rpmpackage')
class Libvorbis(RPMPackageRecipe,AutoPackageRecipe):
    name = 'libvorbis'
    version = '1.1.2'

    rpmUpVer = '1.0.1'
    rpmRelease = '2.1'
    distroVersion = '2'
    externalArchive = 'http://downloads.xiph.org/releases/vorbis/'

    buildRequires = [ 'libogg:devel', 'pkgconfig:devel' ]

    rpmPatches = [ 'libvorbis-1.0-m4.patch', ]
    
    def unpack(r):
        RPMPackageRecipe.unpack(r)

    def configure(r):
        r.Replace(('-O20', '%(cflags)s'),
                  ('-ffast-math', ''),
                  'configure')
        r.Configure('--with-ogg-libraries=%(libdir)s')

    def policy(r):
        r.Remove('%(thisdocdir)s', recursive=True) # causing build problems.
        r.Doc('doc/*')
