class Xdelta(AutoPackageRecipe):
    buildRequires = [ 'zlib:devel', 'libtool:runtime', 'glib:devel',
                      'pkgconfig:devel', 'autoconf:runtime', 
                      'automake:runtime', 'libtool:runtime' ]

    name = 'xdelta'
    version = '1.1.3'

    def unpack(r):
        r.macros.sf = 'http://easynews.dl.sourceforge.net/sourceforge/xdelta'
        r.addArchive('%(sf)s/xdelta-%(version)s.tar.gz')
        r.addPatch('xdelta-1.1.3-glib2.patch') # requires autoreconf
        r.addPatch('xdelta-1.1.3-gcc4.patch')
        r.addPatch('xdelta-1.1.3-m4-underquote.patch')
        r.Run('libtoolize --force')
        r.Automake(autoMakeArgs='-a') # required by glib2 patch

    def policy(r):
        r.AutoDoc('xdelta.magic')
        r.ComponentSpec('devel', '%(bindir)s/xdelta-config')
