class AutoTrace(AutoPackageRecipe):
    buildRequires = [ 'ImageMagick:devel', 'bzip2:devel', 'freetype:devel',
        'libjpeg:devel', 'libpng:devel', 'libtiff:devel', 'libxml2:devel',
        'xorg-x11:devel', 'zlib:devel' ]

    name = 'autotrace'
    version = '0.31.1'

    def unpack(r):
        r.addArchive('http://ftp1.sourceforge.net/autotrace/'
                     'autotrace-%(version)s.tar.gz')
