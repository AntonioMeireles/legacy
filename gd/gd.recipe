class Gd(AutoPackageRecipe):
    name = 'gd'
    version = '2.0.35'

    buildRequires = [ 'fontconfig:devel', 'freetype:devel', 'libjpeg:devel',
                      'libpng:devel', 'zlib:devel', 'file:runtime',
                      'perl:runtime', 'libX11:devel', 'libXpm:devel',
                      'libXt:devel', 'perl:lib', 'pkgconfig:devel', ]

    def unpack(r):
        r.addArchive('http://www.libgd.org/releases/')

    def configure(r):
        r.Configure('--disable-rpath')

    def policy(r):
        r.AutoDoc('index.html')
