loadRecipe('gnomepackage.recipe')
class Libtelepathy(GnomePackageRecipe):

    name = 'libtelepathy'
    version = '0.3.1'

    buildRequires = ['dbus-glib:runtime']
    externalArchive = 'http://telepathy.freedesktop.org/releases/%(name)s/'

    def unpack(r):
        GnomePackageRecipe.unpack(r)
        # http://lists.freedesktop.org/archives/telepathy/2007-November/001249.html
        r.addPatch('fix-contact-list.patch')
