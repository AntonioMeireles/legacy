class Easytag(AutoPackageRecipe):

    name = 'easytag'
    version = '2.1'

    buildRequires = [ 'atk:devel', 'cairo:devel', 'flac:devel',
                      'fontconfig:devel', 'freetype:devel', 'glib:devel',
                      'gtk:devel', 'id3lib:devel', 'libogg:devel',
                      'libpng:devel', 'libstdc++:devel', 'libvorbis:devel',
                      'pango:devel', 'pkgconfig:devel', 'libX11:devel',
                      'zlib:devel', 'expat:devel' ]

    def unpack(r):

        r.addArchive('mirror://sourceforge/easytag/')

    def policy(r):

        r.Doc('USERS-GUIDE')

        r.TagSpec('desktop-file', '%(datadir)s/applications/easytag.desktop')

