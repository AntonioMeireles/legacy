loadSuperClass('rpmpackage.recipe')
class GnomeMount(RPMPackageRecipe,AutoPackageRecipe):
    name = 'gnome-mount'
    version = '0.8'
    rpmRelease = '0.svn20080225.5.fc9'
    tarballName = '%(name)s-%(version)s.svn20080225.tar.gz'
    rpmPatches = ['gnome-mount-no-passphrase-dialog-on-interface-locked.patch']
    buildRequires = ['GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'freetype:devel',  'gettext:runtime', 'glib:devel', 'gnome-vfs:devel', 'gtk:devel', 'hal:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libnotify:devel', 'nautilus:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'expat:devel', 'intltool:runtime', 'libglade:devel']

    def unpack(r):
        RPMPackageRecipe.unpack(r)
        r.addPatch('http://patches.ubuntu.com/g/gnome-mount/extracted/09_use_window_for_flushing.patch')
