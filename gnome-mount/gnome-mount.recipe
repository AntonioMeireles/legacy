loadSuperClass('rpmpackage')
loadSuperClass('gnomepackage')
class GnomeMount(RPMPackageRecipe,GnomePackageRecipe):
    name = 'gnome-mount'
    version = '0.8'
    rpmRelease = '7.fc12'
    # taken from ubuntu. needed for notification to behave...
    patches = ['09_use_window_for_flushing.patch']
    extraConfig = ' --disable-scrollkeeper'
    
    buildRequires = ['GConf:runtime', 'ORBit2:devel', 'atk:devel', 'cairo:devel', 'dbus-glib:devel', 'freetype:devel',  'gettext:runtime', 'glib:devel', 'gnome-vfs:devel', 'gtk:devel', 'hal:devel', 'libICE:devel', 'libSM:devel', 'libX11:devel', 'libXrender:devel', 'libart_lgpl:devel', 'libbonoboui:devel', 'libgnomecanvas:devel', 'libgnomeui:devel', 'libnotify:devel', 'nautilus:devel', 'pango:devel', 'perl:runtime', 'pkgconfig:devel', 'popt:devel', 'zlib:devel', 'perl-XML-Parser:perl', 'expat:devel', 'intltool:runtime', 'libglade:devel', 'libgnome-keyring:devel']


