class briquolo(PackageRecipe):
    buildRequires = [ "glibc:devel", "SDL:devel", "SDL_mixer:devel",
                      "SDL_ttf:devel", "desktop-file-utils:runtime",
                      "libpng:lib", "zlib:lib" ]
    name = "briquolo"
    version = "0.5.3"

    def setup(r):
        r.addArchive('http://briquolo.free.fr/download/%(name)s-%(version)s.tar.bz2')

#       The briquolo make files are bugged and don't install desktop files correctly
#       these modified make files remove all desktop references

        r.addSource('Makefile.am')
        r.addSource('Makefile.in')
        r.Configure()
        r.Make()
        r.MakePathsInstall()

#       Install the briquolo icon

        r.addSource('briquolo.svg')
        r.Install('briquolo.svg', '%(datadir)s/pixmaps/')

#       Here are our menu links

        r.addSource('briquolo.desktop')
        r.Desktopfile('briquolo.desktop')
   
#       Here are the docs

        r.Doc('AUTHORS', 'COPYING', 'INSTALL',
              'NEWS', 'README')
