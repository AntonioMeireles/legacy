class Longrun(CPackageRecipe):
    name = 'longrun'
    version = '0.9'

    def setup(r):
        r.mainDir('longrun')
        r.addArchive('http://ftp.kernel.org/pub/linux/utils/cpu/crusoe/longrun-%(version)s.tar.bz2',
            keyid='517D0F0E')

        r.Make('longrun')
        r.Install('longrun', '%(sbindir)s/')
        r.Install('longrun.1', '%(mandir)s/man1/')
        r.Doc('COPYING')
