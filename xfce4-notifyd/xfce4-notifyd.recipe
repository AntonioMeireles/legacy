loadSuperClass('xfcepackage')
class Xfce4Notifyd(XfcePackageRecipe):

    name = 'xfce4-notifyd'
    gittag = 'ab8e528'
    version = '0.2.3+git'+'_'+ gittag
    subtree = 'apps'
    externalArchive = 'http://git.xfce.org/apps/' + name + '/snapshot/' + name +'-'+ gittag + '.tar.bz2'
    configureName = 'autogen.sh'

    buildRequires = [
        'libxfce4util:devel', 'libxfce4ui:devel', 'libexo:runtime',
        'xfce4-dev-tools:runtime', 'libtool:devel', 'libtool:runtime',
        'autoconf:runtime', 'automake:runtime',
        'intltool:runtime', 'intltool:devel'
    ] 

    def policy(r):
        r.ComponentSpec('xfce4-notifyd:runtime', '%(bindir)s/xfce4-notifyd-config')
