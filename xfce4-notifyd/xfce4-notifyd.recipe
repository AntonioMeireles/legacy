class xfce4Notifyd(AutoPackageRecipe):
    name = 'xfce4-notifyd'
    version = '0.1.0'

    buildRequires = ['atk:devel', 'cairo:devel', 'dbus-glib:devel',
        'dbus:devel', 'desktop-file-utils:runtime', 'expat:devel',
        'fontconfig:devel', 'freetype:devel', 'gettext:runtime', 'glib:devel',
        'gtk:devel', 'gtk:runtime', 'intltool:runtime', 'libX11:devel',
        'libXrender:devel', 'libglade:devel', 'libpng:devel', 'libxcb:devel',
        'libxfce4util:devel', 'libxfcegui4:devel', 'libxml2:devel',
        'pango:devel', 'perl:runtime', 'pixman:devel', 'pkgconfig:devel',
        'glitz:devel', 'libsexy:devel', 'xcb-util:devel', 'xfconf:devel',
        'zlib:devel'
    ]

    def unpack(r):
        r.addArchive('http://spuriousinterrupt.org/files/%(name)s/')
        r.addSource('gtkrc', dir='%(datadir)s/themes/Xfce-green/xfce-notify-4.0/', mode = 0644)
        r.addSource('xfce4-notifyd.xml', dir='%(sysconfdir)s/xdg/xfce4/xfconf/xfce-perchannel-xml/', mode = 0644)
