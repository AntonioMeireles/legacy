loadSuperClass('xfcepackage')
class Xfce4Notifyd(XfcePackageRecipe):

    name = 'xfce4-notifyd'
    version = '0.2.1'
    subtree = 'apps'

    buildRequires = [
        'libxfce4util:devel', 'libxfce4ui:devel', 
    ] 
    def install(r):
        XfcePackageRecipe.install(r)
        r.Move('%(datadir)s/dbus-1/services/org.freedesktop.Notifications.service', '%(datadir)s/dbus-1/services/org.xfce.xfce4-notifyd.Notifications.service')

    def policy(r):
        r.ComponentSpec('xfce4-notifyd:runtime', '%(bindir)s/xfce4-notifyd-config')
