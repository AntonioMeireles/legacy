loadSuperClass('xfcepackage')
class Xfce4Notifyd(XfcePackageRecipe):

    name = 'xfce4-notifyd'
    version = '0.2.1'
    subtree = 'apps'

    buildRequires = [
        'libxfce4util:devel', 'libxfce4ui:devel', 
    ] 

    def unpack(r):
        XfcePackageRecipe.unpack(r)
        r.addSource('gtkrc', dir='%(datadir)s/themes/Xfce-green/xfce-notify-4.0/', mode = 0644)
        r.addSource('xfce4-notifyd.xml', dir='%(sysconfdir)s/xdg/xfce4/xfconf/xfce-perchannel-xml/', mode = 0644)
    def policy(r):
        r.ComponentSpec('xfce4-notifyd:runtime', '%(bindir)s/xfce4-notifyd-config')
