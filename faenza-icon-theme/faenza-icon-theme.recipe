class FaenzaIconTheme(PackageRecipe):
    name = 'faenza-icon-theme'
    version = '0.7'
 
    buildRequires = ['unzip:runtime']
 
    def setup(r):
        r.unpack()
        r.config()
        r.install()

    def unpack(r):
        r.addArchive('http://www.deviantart.com/download/173323228/Faenza_Icons_by_tiheum.zip',
            dir='%(name)s-%(version)s')
        r.addArchive('Faenza-Dark.tar.gz', sourceDir='.', dir='%(name)s-%(version)s')
        r.addArchive('Faenza.tar.gz', sourceDir='.', dir='%(name)s-%(version)s')
        r.addArchive('emesene-faenza-theme.tar.gz', sourceDir='.', dir='%(name)s-%(version)s')

    def config(r):
        # config distributor-logo
        # use fedora logo
        r.Run('cd ./Faenza/places/scalable/ && ln -sf distributor-logo-fedora.svg distributor-logo.svg && cd ../../..')
        r.Run('cd ./Faenza/places/48/ && ln -sf distributor-logo-fedora.png distributor-logo.png && cd ../../..')
        r.Run('cd ./Faenza/places/32/ && ln -sf distributor-logo-fedora.png distributor-logo.png && cd ../../..')
        r.Run('cd ./Faenza/places/24/ && ln -sf distributor-logo-fedora.png distributor-logo.png && cd ../../..')
        r.Run('cd ./Faenza/places/22/ && ln -sf distributor-logo-fedora.png distributor-logo.png && cd ../../..')
        r.Run('cd ./Faenza/places/16/ && ln -sf distributor-logo-fedora.png distributor-logo.png && cd ../../..')

    def install(r):
        r.Install('Faenza', '%(datadir)s/icons/')
        r.Install('Faenza-Dark', '%(datadir)s/icons/')
        # theme for emesene, MSN client
        #r.Install('emesene', '%(datadir)s/')
        r.SetModes('%(datadir)s/icons/Faenza/index.theme', 0644)
        r.SetModes('%(datadir)s/icons/Faenza-Dark/index.theme', 0644)
