loadRecipe('gnomepackage')
class XDGUtils(GnomePackageRecipe):
    name = 'xdg-utils'
    version = '1.0.2'
    externalArchive='http://portland.freedesktop.org/download/%(name)s-%(version)s.tgz'

    buildRequires =  ['xmlto:runtime']

    def policy(r):
        r.Replace('BROWSER=.*',
                  'BROWSER=firefox:mozilla:epiphany:konqueror:chromium-browser:google-chrome:$BROWSER',
                  '%(bindir)s/xdg-open')
