loadRecipe('gnomepackage.recipe')
class Libgtop(GnomePackageRecipe):
    
    buildRequires = GnomePackageRecipe.buildRequires
    buildRequires.extend([ 'glib:devel' ])
    
    if Use.builddocs:
        buildRequires.append('texinfo:runtime')
    
    name = 'libgtop'
    version = '2.13.2'
