loadRecipe('gnomepackage')
class Ibus(GnomePackageRecipe):
    name = 'ibus'
    version = '1.1.0.20090612'
 
    buildRequires = ['GConf:devel', 'GConf:runtime', 'ORBit2:devel',
'dbus-python:python', 'desktop-file-utils:runtime', 'pygobject:python',
'pygtk:python', 'python:devel', 'dbus-python:devellib', 'iso-codes:devellib']
 
    externalArchive = 'http://ibus.googlecode.com/files/'

    def install(r):
        GnomePackageRecipe.install(r)
        # /etc/X11/xinit/xinput.d/ won't work
        # suffix can't be .sh?
        r.addSource('%(name)s.conf', dir='%(sysconfdir)s/X11/xinit/xinitrc.d/')
