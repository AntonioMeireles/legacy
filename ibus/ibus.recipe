loadRecipe('gnomepackage')
class Ibus(GnomePackageRecipe):
    name = 'ibus'
    # unstable
    version = '1.2.0.20090828'
 
    buildRequires = [
        'GConf:devel',
        'GConf:runtime',
        'ORBit2:devel',
        'dbus-python:devellib',
        'dbus-python:python',
        'desktop-file-utils:runtime',
        'iso-codes:devellib',
        'pygobject:python',
        'pygtk:python',
        'python:devel',
        'pyxdg:python',
        ]
 
    externalArchive = 'http://ibus.googlecode.com/files/'

    def install(r):
        GnomePackageRecipe.install(r)
        # /etc/X11/xinit/xinput.d/ won't work
        r.Install('ibus.sh', '%(sysconfdir)s/X11/xinit/xinitrc.d/')
