loadSuperClass('xorgpackage.recipe')
class LibXaw(XorgPackageRecipe):
    name = 'libXaw'
    version = '1.0.3'
    component = 'lib'

    buildRequires = [ 'libICE:devel', 'libSM:devel', 'libXext:devel',
        'libXmu:devel', 'libXpm:devel', 'libXt:devel', 'xproto:devel' ]

    def setup(r):
        XorgPackageRecipe.setup(r)

        for requirement in ('libXmu:devel', 'libXt:devel', 'xproto:devel'):
            r.Requires(requirement, '%(libdir)s/pkgconfig/xaw.*pc')
