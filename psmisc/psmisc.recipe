class Psmisc(AutoPackageRecipe):
    name = 'psmisc'
    version = '22.3'

    buildRequires = [ 'coreutils:runtime', 'libtermcap:devel', 'ncurses:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/%(name)s/')
        r.macros.cflags = '%(cflags)s -D_GNU_SOURCE'

    def make(r):
        r.Make(forceFlags=True)

    def policy(r):
        r.Move('%(bindir)s/fuser', '%(essentialsbindir)s/')

        # pidof comes from sysvinit
        r.Remove('%(mandir)s/man1/pidof.1*')
