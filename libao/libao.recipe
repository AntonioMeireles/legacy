class Libao(AutoPackageRecipe):

    buildRequires = [ 'esound:devel', 'alsa-lib:devel', 'audiofile:devel' ]

    name = 'libao'
    version = '0.8.6'

    def unpack(r):
        r.addArchive('http://downloads.xiph.org/releases/ao/%(name)s-%(version)s.tar.gz')

    def configure(r):
        r.Configure('--enable-alsa09 --disable-arts')
