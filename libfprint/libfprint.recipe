class LibFprintRecipe(AutoPackageRecipe):
    name = 'libfprint'
    upversion = '0.1.0-pre2'
    version = upversion.replace('-', '_')
    buildRequires = [
        'bzip2:devel', 'fontconfig:devel', 'freetype:devel', 'glib:devel',
        'ImageMagick:devel', 'libICE:devel', 'libjpeg:devel', 'liblcms:devel',
        'libSM:devel',
        'libtiff:devel', 'libtool:devel', 'libusb1:devel', 'libX11:devel',
        'libXext:devel', 'libXt:devel', 'openssl:devel', 'pkgconfig:devel',
        'zlib:devel',
    ]

    def unpack(r):
        r.macros.upversion = r.upversion
        r.addArchive('mirror://sourceforge/fprint/%(name)s-%(upversion)s.tar.bz2')
