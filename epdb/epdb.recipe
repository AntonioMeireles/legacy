class Epdb(CPackageRecipe):
    name = 'epdb'
    version = '0.11'

    def setup(r):
        r.addArchive('ftp://download.rpath.com/pub/epdb/')
        r.Make('libdir=%(libdir)s')
        r.MakeInstall('libdir=%(libdir)s')
