class Epdb(PackageRecipe):
    name = 'epdb'
    version = 'tip'
    tag = 'e731345'

    if tag:
        version += '_' + tag


    buildRequires = [
        'python:devel',
        'python-setuptools:python',
    ]

    def setup(r):
        if r.tag:
            r.addMercurialSnapshot('https://bitbucket.org/rpathsync/%(name)s/',
                                   tag=r.tag)
        else:
            r.addArchive('http://bitbucket.org/dugan/%(name)s/get/%(version)s.tar.bz2')

        r.PythonSetup()
