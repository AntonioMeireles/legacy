class RedisPy(CPackageRecipe):
    name = 'python-redis'
    version = '2.2.2'

    buildRequires = [ 'python:devel' ]

    def setup(r):
        r.addArchive('https://github.com/downloads/andymccurdy/redis-py/redis-%(version)s.tar.gz')
        r.PythonSetup()
        r.Requires('redis:runtime', '%(name)s:python')
