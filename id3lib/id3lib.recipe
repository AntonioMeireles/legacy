class LibID3(AutoPackageRecipe):

    name = 'id3lib'
    version = '3.8.3'

    buildRequires = [ 'libstdc++:devel', 'zlib:devel' ]

    def unpack(r):
        r.addArchive('mirror://sourceforge/id3lib/')
        # FIXME - add RH patches here
    def make(r):
        r.Make('libid3_la_LIBADD=-lz')

    def policy(r):

        r.Doc('AUTHORS', 'HISTORY', 'THANKS')

