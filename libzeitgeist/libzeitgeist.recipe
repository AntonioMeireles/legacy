class Libzeitgeist(AutoPackageRecipe):
    name = 'libzeitgeist'
    version = '0.3.2'
 
    buildRequires = ['glib:devel', 'gnome-common:runtime', 'gtk-doc:devel', 'gtk-doc:runtime', 'libtool:runtime', 'pkgconfig:devel']
 
    def unpack(r):
        r.addArchive('http://launchpad.net/libzeitgeist/%(major_version)s/%(version)s/+download/')

    def configure(r):
        r.Configure('--enable-module=no', configureName='autogen.sh')
