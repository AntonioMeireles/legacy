class BombonoDvd(PackageRecipe):
    name = 'bombono-dvd'
    version = '0.5.10'
 
    buildRequires = ['GraphicsMagick:devel', 
		'atk:devel', 
		'cairo:devel', 
		'cairomm:devel', 
		'desktop-file-utils:runtime', 
		'fontconfig:devel', 
		'freetype:devel', 
		'glib:devel', 
		'glibmm:devel', 
		'gtk:devel', 
		'gtkmm:devel', 
		'libdvdread:devel', 
		'libgcc:devellib', 
		'libsigc++:devel', 
		'libstdc++:devel', 
		'libxml++:devel', 
		'libxml2:devel', 
		'make:runtime', 
		'mjpegtools:devel', 
		'pango:devel', 
		'pangomm:devel',
		'scons:runtime',
		'pkgconfig:devel'
			]
 
    def setup(r):
        r.addArchive('mirror://sourceforge/bombono/')
        r.disableParallelMake()
        r.Make('PREFIX=%(prefix)s', makeName='scons')
	r.Make('DESTDIR=%(destdir)s PREFIX=%(prefix)s install', makeName='scons')

