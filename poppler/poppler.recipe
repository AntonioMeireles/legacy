class Poppler(AutoPackageRecipe):

    name = 'poppler'
    version = '0.6.2'

    buildRequires = [
        'cairo:devel', 'expat:devel', 'fontconfig:devel', 'freetype:devel',
        'glib:devel', 'gtk:devel', 'libdmx:devel', 'libICE:devel',
        'libjpeg:devel', 'libpng:devel', 'libSM:devel', 'libstdc++:devel',
        'libX11:devel', 'libXau:devel', 'libXcursor:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXfixes:devel', 'libXi:devel', 'libXinerama:devel',
        'libxml2:devel', 'libXrandr:devel', 'libXrender:devel', 'pango:devel',
        'pkgconfig:devel', 'qt4:devel', 'qt:devel', 'zlib:devel'
    ]

    def unpack(r):

        r.addArchive('http://poppler.freedesktop.org/')
        r.macros.cflags += ' -fPIC '

    def configure(r):

        r.Environment('QTLIB', '%(libdir)s/')
        r.Environment('QTINC', '%(includedir)s/qt3/')

        r.Configure(
            ' --enable-zlib'
            ' --enable-xpdf-headers'
        )

    def makeinstall(r):

        r.MakeInstall(dir='poppler')

        for d in ('glib', 'qt', 'qt4'):
            r.MakeInstall(dir=d, package='poppler-%s' % d)

        r.MakeInstall()

    def policy(r):

        r.Requires('poppler-data:data', '%(libdir)s/libpoppler.so.*')

