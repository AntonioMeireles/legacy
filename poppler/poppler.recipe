class Poppler(AutoPackageRecipe):
    name = 'poppler'
    version = '0.6.2'

    buildRequires = [ 'autoconf:runtime', 'cairo:devel', 'fontconfig:devel',
                      'freetype:devel', 'glib:devel', 'gtk:devel',
                      'libjpeg:devel', 'libpng:devel', 'libstdc++:devel',
                      'pango:devel', 'pkgconfig:devel',
                      'zlib:devel',
                      'libX11:devel', 'libXext:devel', 'libXrender:devel',
                      'libICE:devel', 'libSM:devel', 'libXt:devel',
                      'libXdmcp:devel', 'libXau:devel', ]

    def unpack(r):
        r.addArchive('http://poppler.freedesktop.org/')
        r.macros.cflags += ' -fPIC '

        # RPL-2649 CVE-2008-2950
        r.addPatch('CVE-2008-2950.patch')

        # RPL-
        # CVE-2009-0756
        # CVE-2009-0146
        # CVE-2009-0147
        # CVE-2009-1187
        # CVE-2009-1188
        r.addPatch('poppler-0.6.2-jbig2.patch')

        # RPL-
        r.addPatch('CVE-2009-0755.patch')

    def configure(r):
        r.Configure('--disable-cairo-output --disable-poppler-qt')
