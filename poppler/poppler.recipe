class Poppler(AutoPackageRecipe):
    name = 'poppler'
    version = '0.5.4'

    buildRequires = [ 'autoconf:runtime', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gtk:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel',
        'pango:devel', 'pkgconfig:devel', 'zlib:devel', 'glib:runtime',
        'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrender:devel','libdmx:devel', 'expat:devel' ]

    def unpack(r):
        r.addArchive('http://poppler.freedesktop.org/%(name)s-%(version)s.tar.gz')
        r.macros.cflags += ' -fPIC '

    def configure(r):
        r.Configure('--disable-poppler-qt --enable-xpdf-headers')
