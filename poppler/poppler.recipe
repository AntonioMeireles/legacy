class Poppler(AutoPackageRecipe):
    name = 'poppler'
    version = '0.6.2'

    buildRequires = [ 'autoconf:runtime', 'cairo:devel', 'fontconfig:devel',
        'freetype:devel', 'glib:devel', 'gtk:devel', 'libxml2:devel',
        'libjpeg:devel', 'libpng:devel', 'libstdc++:devel',
        'pango:devel', 'pkgconfig:devel', 'zlib:devel', 'glib:runtime',
        'libX11:devel', 'libXau:devel', 'libXdmcp:devel',
        'libXext:devel', 'libXi:devel', 'libXinerama:devellib',
        'libXrender:devel','libdmx:devel', 'expat:devel', 'qt:devel' ]

    def unpack(r):
        r.addArchive('http://poppler.freedesktop.org/')
        r.macros.cflags += ' -fPIC '

    def configure(r):
        r.Environment('QTINC', '%(includedir)s/qt3/')
        # FIXME really enable qt/kde support
        #    add   poppler-data-0.1.tar.gz.  this removes xpdf dep. u
        r.Configure('--enable-xpdf-headers')
