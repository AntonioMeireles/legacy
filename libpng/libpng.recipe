class Libpng(AutoPackageRecipe):
    name = 'libpng'
    version = '1.2.13'

    buildRequires = ['zlib:devel', 'autoconf:runtime', 'automake:runtime',
                     'libtool:runtime']

    def unpack(r):
        r.addArchive('http://umn.dl.sourceforge.net/sourceforge/libpng/libpng-%(version)s.tar.bz2')

        # This patch is required because x86_64 builds differently and apps
        # building against us don't know it.  Backported from 1.4.0 beta.
        # remove this patch when we update to 1.4.x
        r.addPatch('libpng-1.2.12-assemblerfix.patch')
        r.Run('./autogen.sh')

    def policy(r):
        r.Symlink('libpng12/png.h', 'libpng12/pngconf.h',
                             '%(includedir)s/')
        r.AutoDoc('libpng.txt', 'example.c')
        r.Remove('%(libdir)s/libpng.so')
        r.Symlink('%(libdir)s/libpng.so.3.13.0', '%(libdir)s/libpng.so')
